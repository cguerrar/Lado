@using Lado.Models
@using Lado.Services
@{
    ViewData["Title"] = "Gestión de Bloqueados y Seguridad";
    var bloqueosUsuarios = ViewBag.BloqueosUsuarios as List<BloqueoUsuario> ?? new List<BloqueoUsuario>();
    var ipsBloqueadas = ViewBag.IpsBloqueadas as List<IpBloqueada> ?? new List<IpBloqueada>();
    var ipsManuales = ViewBag.IpsManuales as List<IpBloqueada> ?? new List<IpBloqueada>();
    var ipsAutomaticas = ViewBag.IpsAutomaticas as List<IpBloqueada> ?? new List<IpBloqueada>();
    var usuariosBloqueados = ViewBag.UsuariosBloqueados as List<ApplicationUser> ?? new List<ApplicationUser>();
    var intentosAtaque = ViewBag.IntentosAtaque as List<IntentoAtaque> ?? new List<IntentoAtaque>();
    var stats = ViewBag.EstadisticasAtaques as AtaqueEstadisticas ?? new AtaqueEstadisticas();
}

@Html.AntiForgeryToken()

<style>
    .tabs-container {
        display: flex;
        gap: 8px;
        margin-bottom: 24px;
        border-bottom: 2px solid var(--border-color);
        padding-bottom: 0;
        flex-wrap: wrap;
    }

    .tab-btn {
        padding: 14px 20px;
        border: none;
        background: transparent;
        color: var(--text-gray);
        font-weight: 600;
        font-size: 0.875rem;
        cursor: pointer;
        position: relative;
        transition: all 0.2s;
        border-radius: var(--radius-md) var(--radius-md) 0 0;
    }

    .tab-btn:hover {
        color: var(--primary);
        background: var(--primary-pale);
    }

    .tab-btn.active {
        color: var(--primary);
        background: var(--bg-white);
    }

    .tab-btn.active::after {
        content: '';
        position: absolute;
        bottom: -2px;
        left: 0;
        right: 0;
        height: 3px;
        background: var(--primary);
        border-radius: 3px 3px 0 0;
    }

    .tab-btn .badge {
        margin-left: 6px;
        padding: 3px 7px;
        font-size: 0.7rem;
    }

    .tab-content {
        display: none;
    }

    .tab-content.active {
        display: block;
    }

    .data-table {
        width: 100%;
        border-collapse: collapse;
    }

    .data-table th {
        text-align: left;
        padding: 12px 14px;
        background: var(--bg-light);
        font-weight: 600;
        color: var(--text-gray);
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border-bottom: 2px solid var(--border-color);
    }

    .data-table td {
        padding: 14px;
        border-bottom: 1px solid var(--border-color);
        vertical-align: middle;
        font-size: 0.875rem;
    }

    .data-table tr:hover {
        background: var(--primary-pale);
    }

    .user-cell {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .user-avatar {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background: var(--primary-gradient);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 700;
        font-size: 0.8rem;
    }

    .user-info {
        display: flex;
        flex-direction: column;
    }

    .user-name {
        font-weight: 600;
        color: var(--text-dark);
        font-size: 0.875rem;
    }

    .user-username {
        font-size: 0.75rem;
        color: var(--text-gray);
    }

    .ip-badge {
        font-family: 'SF Mono', 'Fira Code', monospace;
        background: var(--bg-light);
        padding: 5px 10px;
        border-radius: var(--radius-sm);
        font-size: 0.8rem;
        color: var(--text-dark);
    }

    .ip-badge.auto {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
    }

    .date-cell {
        font-size: 0.8rem;
        color: var(--text-gray);
    }

    .reason-cell {
        max-width: 180px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        font-size: 0.8rem;
        color: var(--text-gray);
    }

    .action-btn {
        padding: 6px 12px;
        border: none;
        border-radius: var(--radius-sm);
        font-weight: 600;
        font-size: 0.75rem;
        cursor: pointer;
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

    .btn-danger-soft {
        background: rgba(239, 68, 68, 0.1);
        color: var(--danger);
    }

    .btn-danger-soft:hover {
        background: var(--danger);
        color: white;
    }

    .btn-success-soft {
        background: rgba(16, 185, 129, 0.1);
        color: var(--success);
    }

    .btn-success-soft:hover {
        background: var(--success);
        color: white;
    }

    .empty-state {
        text-align: center;
        padding: 50px 24px;
        color: var(--text-gray);
    }

    .empty-state i {
        font-size: 2.5rem;
        margin-bottom: 14px;
        opacity: 0.5;
    }

    .empty-state h5 {
        font-size: 1rem;
        margin-bottom: 6px;
        color: var(--text-dark);
    }

    .modal-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(4px);
        z-index: 10000;
        align-items: center;
        justify-content: center;
    }

    .modal-overlay.active {
        display: flex;
    }

    .modal-content {
        background: var(--bg-white);
        border-radius: var(--radius-lg);
        padding: 28px;
        width: 100%;
        max-width: 440px;
        box-shadow: var(--shadow-xl);
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .modal-header h3 {
        font-size: 1.125rem;
        font-weight: 700;
        color: var(--text-dark);
    }

    .modal-close {
        width: 32px;
        height: 32px;
        border: none;
        background: var(--bg-light);
        border-radius: 50%;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-gray);
        transition: all 0.2s;
    }

    .modal-close:hover {
        background: var(--danger);
        color: white;
    }

    .form-group {
        margin-bottom: 16px;
    }

    .form-group label {
        display: block;
        font-weight: 600;
        margin-bottom: 6px;
        color: var(--text-dark);
        font-size: 0.8rem;
    }

    .form-control {
        width: 100%;
        padding: 10px 14px;
        border: 1px solid var(--border-color);
        border-radius: var(--radius-md);
        font-size: 0.875rem;
        background: var(--bg-light);
        color: var(--text-dark);
        transition: all 0.2s;
    }

    .form-control:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 3px var(--primary-pale);
        background: var(--bg-white);
    }

    .form-check {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 14px;
    }

    .form-check input[type="checkbox"] {
        width: 16px;
        height: 16px;
        accent-color: var(--primary);
    }

    .form-check label {
        font-size: 0.875rem;
        color: var(--text-dark);
    }

    .modal-footer {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
        margin-top: 20px;
        padding-top: 20px;
        border-top: 1px solid var(--border-color);
    }

    .stats-row {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 16px;
        margin-bottom: 28px;
    }

    .attack-type-badge {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        padding: 4px 10px;
        border-radius: 20px;
        font-size: 0.7rem;
        font-weight: 600;
    }

    .attack-type-badge.spam { background: rgba(245, 158, 11, 0.15); color: #d97706; }
    .attack-type-badge.brute { background: rgba(239, 68, 68, 0.15); color: #dc2626; }
    .attack-type-badge.scraping { background: rgba(139, 92, 246, 0.15); color: #7c3aed; }
    .attack-type-badge.registro { background: rgba(59, 130, 246, 0.15); color: #2563eb; }
    .attack-type-badge.otro { background: rgba(107, 114, 128, 0.15); color: #4b5563; }

    .top-attackers {
        background: var(--bg-light);
        border-radius: var(--radius-md);
        padding: 16px;
        margin-bottom: 20px;
    }

    .top-attackers h4 {
        font-size: 0.875rem;
        font-weight: 600;
        margin-bottom: 12px;
        color: var(--text-dark);
    }

    .attacker-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 8px 0;
        border-bottom: 1px solid var(--border-color);
    }

    .attacker-item:last-child {
        border-bottom: none;
    }

    .attacker-ip {
        font-family: monospace;
        font-size: 0.8rem;
        color: var(--text-dark);
    }

    .attacker-count {
        font-weight: 700;
        font-size: 0.8rem;
        color: var(--danger);
    }

    @@media (max-width: 1200px) {
        .stats-row {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    @@media (max-width: 768px) {
        .stats-row {
            grid-template-columns: repeat(2, 1fr);
        }

        .tabs-container {
            overflow-x: auto;
        }

        .data-table {
            font-size: 0.8rem;
        }

        .data-table th,
        .data-table td {
            padding: 10px 8px;
        }
    }
</style>

<!-- Stats de Seguridad -->
<div class="stats-row">
    <div class="stat-card">
        <div class="stat-icon" style="background: linear-gradient(135deg, #ef4444, #dc2626);">
            <i class="fas fa-skull-crossbones" style="color: white; font-size: 1.1rem;"></i>
        </div>
        <div class="stat-content">
            <p class="stat-label">Ataques Hoy</p>
            <h3 class="stat-value">@stats.AtaquesHoy</h3>
        </div>
    </div>
    <div class="stat-card">
        <div class="stat-icon" style="background: linear-gradient(135deg, #f59e0b, #d97706);">
            <i class="fas fa-chart-line" style="color: white; font-size: 1.1rem;"></i>
        </div>
        <div class="stat-content">
            <p class="stat-label">Ataques Semana</p>
            <h3 class="stat-value">@stats.AtaquesSemana</h3>
        </div>
    </div>
    <div class="stat-card">
        <div class="stat-icon" style="background: linear-gradient(135deg, #8b5cf6, #7c3aed);">
            <i class="fas fa-robot" style="color: white; font-size: 1.1rem;"></i>
        </div>
        <div class="stat-content">
            <p class="stat-label">Auto-bloqueadas</p>
            <h3 class="stat-value">@stats.IpsBloqueadasAuto</h3>
        </div>
    </div>
    <div class="stat-card">
        <div class="stat-icon bg-warning">
            <i class="fas fa-hand-paper" style="color: white; font-size: 1.1rem;"></i>
        </div>
        <div class="stat-content">
            <p class="stat-label">Manuales</p>
            <h3 class="stat-value">@stats.IpsBloqueadasManual</h3>
        </div>
    </div>
    <div class="stat-card">
        <div class="stat-icon bg-info">
            <i class="fas fa-user-slash" style="color: white; font-size: 1.1rem;"></i>
        </div>
        <div class="stat-content">
            <p class="stat-label">Usuarios Bloq.</p>
            <h3 class="stat-value">@ViewBag.TotalBloqueosUsuarios</h3>
        </div>
    </div>
</div>

<!-- Top IPs Atacantes -->
@if (stats.TopIpsAtacantes.Any())
{
    <div class="top-attackers">
        <h4><i class="fas fa-exclamation-triangle" style="color: var(--danger); margin-right: 8px;"></i> Top IPs Atacantes (Última Semana)</h4>
        <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 10px;">
            @foreach (var (ip, intentos) in stats.TopIpsAtacantes.Take(5))
            {
                <div class="attacker-item">
                    <span class="attacker-ip">@ip</span>
                    <span class="attacker-count">@intentos intentos</span>
                </div>
            }
        </div>
    </div>
}

<div class="card">
    <div class="card-body" style="padding: 0;">
        <!-- Tabs -->
        <div class="tabs-container" style="padding: 20px 20px 0;">
            <button class="tab-btn active" onclick="showTab('ataques')">
                <i class="fas fa-skull"></i> Intentos de Ataque
                <span class="badge bg-danger">@intentosAtaque.Count</span>
            </button>
            <button class="tab-btn" onclick="showTab('ips-auto')">
                <i class="fas fa-robot"></i> IPs Auto-bloqueadas
                <span class="badge" style="background: #8b5cf6;">@ipsAutomaticas.Count</span>
            </button>
            <button class="tab-btn" onclick="showTab('ips')">
                <i class="fas fa-ban"></i> IPs Manuales
                <span class="badge bg-warning">@ipsManuales.Count</span>
            </button>
            <button class="tab-btn" onclick="showTab('usuarios')">
                <i class="fas fa-user-slash"></i> Bloqueos Usuarios
                <span class="badge bg-info">@ViewBag.TotalBloqueosUsuarios</span>
            </button>
            <button class="tab-btn" onclick="showTab('desactivados')">
                <i class="fas fa-user-times"></i> Desactivados
                <span class="badge bg-secondary">@ViewBag.TotalUsuariosBloqueados</span>
            </button>
        </div>

        <!-- Tab: Intentos de Ataque -->
        <div id="tab-ataques" class="tab-content active">
            @if (intentosAtaque.Any())
            {
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>IP</th>
                            <th>Tipo</th>
                            <th>Endpoint</th>
                            <th>Fecha</th>
                            <th>Bloqueado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var intento in intentosAtaque)
                        {
                            var tipoClass = intento.TipoAtaque switch {
                                TipoAtaque.SpamContenido => "spam",
                                TipoAtaque.SpamMensajes => "spam",
                                TipoAtaque.FuerzaBruta => "brute",
                                TipoAtaque.Scraping => "scraping",
                                TipoAtaque.SpamRegistro => "registro",
                                _ => "otro"
                            };
                            var tipoLabel = intento.TipoAtaque switch {
                                TipoAtaque.SpamContenido => "Spam Contenido",
                                TipoAtaque.SpamMensajes => "Spam Mensajes",
                                TipoAtaque.FuerzaBruta => "Fuerza Bruta",
                                TipoAtaque.Scraping => "Scraping",
                                TipoAtaque.SpamRegistro => "Spam Registro",
                                _ => "Otro"
                            };
                            <tr>
                                <td><span class="ip-badge">@intento.DireccionIp</span></td>
                                <td><span class="attack-type-badge @tipoClass">@tipoLabel</span></td>
                                <td class="reason-cell" title="@intento.Endpoint">@(intento.Endpoint ?? "-")</td>
                                <td class="date-cell">@intento.Fecha.ToString("dd/MM HH:mm")</td>
                                <td>
                                    @if (intento.ResultoEnBloqueo)
                                    {
                                        <span class="badge bg-danger">Si</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">No</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-shield-alt"></i>
                    <h5>No hay intentos de ataque recientes</h5>
                    <p>El sistema no ha detectado actividad sospechosa</p>
                </div>
            }
        </div>

        <!-- Tab: IPs Auto-bloqueadas -->
        <div id="tab-ips-auto" class="tab-content">
            @if (ipsAutomaticas.Any())
            {
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>IP</th>
                            <th>Tipo Ataque</th>
                            <th>Violaciones</th>
                            <th>Fecha</th>
                            <th>Expira</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ip in ipsAutomaticas)
                        {
                            var tipoClass = ip.TipoAtaque switch {
                                TipoAtaque.SpamContenido => "spam",
                                TipoAtaque.SpamMensajes => "spam",
                                TipoAtaque.FuerzaBruta => "brute",
                                TipoAtaque.Scraping => "scraping",
                                TipoAtaque.SpamRegistro => "registro",
                                _ => "otro"
                            };
                            <tr>
                                <td><span class="ip-badge auto">@ip.DireccionIp</span></td>
                                <td><span class="attack-type-badge @tipoClass">@ip.TipoAtaque</span></td>
                                <td><strong>@ip.ViolacionesRateLimit</strong></td>
                                <td class="date-cell">@ip.FechaBloqueo.ToString("dd/MM HH:mm")</td>
                                <td class="date-cell">
                                    @if (ip.FechaExpiracion.HasValue)
                                    {
                                        @ip.FechaExpiracion.Value.ToString("dd/MM HH:mm")
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Permanente</span>
                                    }
                                </td>
                                <td>
                                    <button class="action-btn btn-success-soft" onclick="desbloquearIp(@ip.Id)" title="Desbloquear">
                                        <i class="fas fa-unlock"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-robot"></i>
                    <h5>No hay IPs auto-bloqueadas</h5>
                    <p>El sistema no ha bloqueado ninguna IP automáticamente</p>
                </div>
            }
        </div>

        <!-- Tab: IPs Manuales -->
        <div id="tab-ips" class="tab-content">
            <div style="padding: 16px 20px; border-bottom: 1px solid var(--border-color); display: flex; justify-content: flex-end;">
                <button class="btn btn-primary btn-sm" onclick="abrirModalBloquearIp()">
                    <i class="fas fa-plus"></i> Bloquear IP
                </button>
            </div>
            @if (ipsManuales.Any())
            {
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>IP</th>
                            <th>Razón</th>
                            <th>Fecha</th>
                            <th>Expira</th>
                            <th>Intentos</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ip in ipsManuales)
                        {
                            <tr>
                                <td><span class="ip-badge">@ip.DireccionIp</span></td>
                                <td class="reason-cell" title="@ip.Razon">@(ip.Razon ?? "-")</td>
                                <td class="date-cell">@ip.FechaBloqueo.ToString("dd/MM HH:mm")</td>
                                <td class="date-cell">
                                    @if (ip.FechaExpiracion.HasValue)
                                    {
                                        @ip.FechaExpiracion.Value.ToString("dd/MM/yyyy")
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Permanente</span>
                                    }
                                </td>
                                <td>@ip.IntentosBloqueos</td>
                                <td>
                                    <button class="action-btn btn-success-soft" onclick="desbloquearIp(@ip.Id)" title="Desbloquear">
                                        <i class="fas fa-unlock"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-shield-alt"></i>
                    <h5>No hay IPs bloqueadas manualmente</h5>
                    <p>Usa el botón "Bloquear IP" para agregar una</p>
                </div>
            }
        </div>

        <!-- Tab: Bloqueos entre usuarios -->
        <div id="tab-usuarios" class="tab-content">
            @if (bloqueosUsuarios.Any())
            {
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Bloqueador</th>
                            <th>Bloqueado</th>
                            <th>Fecha</th>
                            <th>Razón</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var bloqueo in bloqueosUsuarios)
                        {
                            <tr>
                                <td>
                                    <div class="user-cell">
                                        <div class="user-avatar">
                                            @(bloqueo.Bloqueador?.UserName?.Substring(0, 1).ToUpper() ?? "?")
                                        </div>
                                        <div class="user-info">
                                            <span class="user-name">@(bloqueo.Bloqueador?.NombreCompleto ?? "?")</span>
                                            <span class="user-username">@@@(bloqueo.Bloqueador?.UserName ?? "?")</span>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="user-cell">
                                        <div class="user-avatar" style="background: linear-gradient(135deg, #ef4444, #dc2626);">
                                            @(bloqueo.Bloqueado?.UserName?.Substring(0, 1).ToUpper() ?? "?")
                                        </div>
                                        <div class="user-info">
                                            <span class="user-name">@(bloqueo.Bloqueado?.NombreCompleto ?? "?")</span>
                                            <span class="user-username">@@@(bloqueo.Bloqueado?.UserName ?? "?")</span>
                                        </div>
                                    </div>
                                </td>
                                <td class="date-cell">@bloqueo.FechaBloqueo.ToString("dd/MM HH:mm")</td>
                                <td class="reason-cell" title="@bloqueo.Razon">@(bloqueo.Razon ?? "-")</td>
                                <td>
                                    <button class="action-btn btn-danger-soft" onclick="eliminarBloqueoUsuario(@bloqueo.Id)" title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-users"></i>
                    <h5>No hay bloqueos entre usuarios</h5>
                </div>
            }
        </div>

        <!-- Tab: Usuarios desactivados -->
        <div id="tab-desactivados" class="tab-content">
            @if (usuariosBloqueados.Any())
            {
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Usuario</th>
                            <th>Email</th>
                            <th>Registro</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usuario in usuariosBloqueados)
                        {
                            <tr>
                                <td>
                                    <div class="user-cell">
                                        <div class="user-avatar" style="background: linear-gradient(135deg, #64748b, #475569);">
                                            @(usuario.UserName?.Substring(0, 1).ToUpper() ?? "?")
                                        </div>
                                        <div class="user-info">
                                            <span class="user-name">@(usuario.NombreCompleto ?? "Sin nombre")</span>
                                            <span class="user-username">@@@usuario.UserName</span>
                                        </div>
                                    </div>
                                </td>
                                <td>@usuario.Email</td>
                                <td class="date-cell">@usuario.FechaRegistro.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <button class="action-btn btn-success-soft" onclick="activarUsuario('@usuario.Id')" title="Activar">
                                        <i class="fas fa-user-check"></i> Activar
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-user-check"></i>
                    <h5>Todos los usuarios están activos</h5>
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal Bloquear IP -->
<div class="modal-overlay" id="modalBloquearIp">
    <div class="modal-content">
        <div class="modal-header">
            <h3><i class="fas fa-ban" style="color: var(--danger); margin-right: 8px;"></i> Bloquear IP</h3>
            <button class="modal-close" onclick="cerrarModal()">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <form id="formBloquearIp">
            <div class="form-group">
                <label for="direccionIp">Dirección IP</label>
                <input type="text" class="form-control" id="direccionIp" placeholder="Ej: 192.168.1.1" required>
            </div>
            <div class="form-group">
                <label for="razonBloqueo">Razón (opcional)</label>
                <textarea class="form-control" id="razonBloqueo" rows="2" placeholder="Motivo del bloqueo..."></textarea>
            </div>
            <div class="form-check">
                <input type="checkbox" id="bloquePermanente" checked>
                <label for="bloquePermanente">Bloqueo permanente</label>
            </div>
            <div class="form-group" id="fechaExpiracionGroup" style="display: none;">
                <label for="fechaExpiracion">Fecha de expiración</label>
                <input type="datetime-local" class="form-control" id="fechaExpiracion">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary btn-sm" onclick="cerrarModal()">Cancelar</button>
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="fas fa-ban"></i> Bloquear
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
<script>
    const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

    function showTab(tab) {
        document.querySelectorAll('.tab-content').forEach(t => t.classList.remove('active'));
        document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
        document.getElementById('tab-' + tab).classList.add('active');
        event.target.closest('.tab-btn').classList.add('active');
    }

    function abrirModalBloquearIp() {
        document.getElementById('modalBloquearIp').classList.add('active');
        document.getElementById('direccionIp').focus();
    }

    function cerrarModal() {
        document.getElementById('modalBloquearIp').classList.remove('active');
        document.getElementById('formBloquearIp').reset();
    }

    document.getElementById('bloquePermanente').addEventListener('change', function() {
        document.getElementById('fechaExpiracionGroup').style.display = this.checked ? 'none' : 'block';
    });

    document.getElementById('formBloquearIp').addEventListener('submit', async function(e) {
        e.preventDefault();
        const data = {
            DireccionIp: document.getElementById('direccionIp').value,
            Razon: document.getElementById('razonBloqueo').value,
            Permanente: document.getElementById('bloquePermanente').checked,
            FechaExpiracion: document.getElementById('fechaExpiracion').value || null
        };

        try {
            const response = await fetch('/Admin/BloquearIp', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json', 'X-CSRF-TOKEN': token },
                body: JSON.stringify(data)
            });
            const result = await response.json();
            if (result.success) {
                showToast(result.message, 'success');
                setTimeout(() => location.reload(), 1000);
            } else {
                showToast(result.message, 'error');
            }
        } catch (error) {
            showToast('Error al bloquear IP', 'error');
        }
    });

    async function desbloquearIp(id) {
        if (!confirm('¿Desbloquear esta IP?')) return;
        try {
            const response = await fetch('/Admin/DesbloquearIp', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json', 'X-CSRF-TOKEN': token },
                body: JSON.stringify({ Id: id })
            });

            if (!response.ok) {
                const text = await response.text();
                console.error('Error response:', response.status, text);
                showToast(`Error ${response.status}: ${response.statusText}`, 'error');
                return;
            }

            const result = await response.json();
            if (result.success) {
                showToast(result.message, 'success');
                setTimeout(() => location.reload(), 1000);
            } else {
                showToast(result.message || 'Error desconocido', 'error');
            }
        } catch (error) {
            console.error('Error desbloquearIp:', error);
            showToast('Error al desbloquear IP: ' + error.message, 'error');
        }
    }

    async function eliminarBloqueoUsuario(id) {
        if (!confirm('¿Eliminar este bloqueo?')) return;
        try {
            const response = await fetch('/Admin/EliminarBloqueoUsuario', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json', 'X-CSRF-TOKEN': token },
                body: JSON.stringify({ Id: id })
            });
            const result = await response.json();
            if (result.success) {
                showToast(result.message, 'success');
                setTimeout(() => location.reload(), 1000);
            } else {
                showToast(result.message, 'error');
            }
        } catch (error) {
            showToast('Error al eliminar bloqueo', 'error');
        }
    }

    async function activarUsuario(usuarioId) {
        if (!confirm('¿Activar este usuario?')) return;
        try {
            const response = await fetch('/Admin/ActivarUsuario', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json', 'X-CSRF-TOKEN': token },
                body: JSON.stringify({ UsuarioId: usuarioId })
            });
            const result = await response.json();
            if (result.success) {
                showToast(result.message, 'success');
                setTimeout(() => location.reload(), 1000);
            } else {
                showToast(result.message, 'error');
            }
        } catch (error) {
            showToast('Error al activar usuario', 'error');
        }
    }

    document.addEventListener('keydown', e => { if (e.key === 'Escape') cerrarModal(); });
    document.getElementById('modalBloquearIp').addEventListener('click', e => { if (e.target === e.currentTarget) cerrarModal(); });
</script>
}
