@section Scripts {
<script>
    // Filter tracks
    function filterTracks() {
        const search = document.getElementById('searchInput').value.toLowerCase();
        const genre = document.getElementById('genreFilter').value;
        const status = document.getElementById('statusFilter').value;

        const rows = document.querySelectorAll('#tracksTableBody tr');
        rows.forEach(row => {
            const title = row.dataset.title;
            const artist = row.dataset.artist;
            const rowGenre = row.dataset.genre;
            const rowStatus = row.dataset.status;

            const matchesSearch = title.includes(search) || artist.includes(search);
            const matchesGenre = !genre || rowGenre === genre;
            const matchesStatus = !status || rowStatus === status;

            row.style.display = matchesSearch && matchesGenre && matchesStatus ? '' : 'none';
        });
    }

    // Open add modal
    function openAddModal() {
        document.getElementById('modalTitle').textContent = 'Agregar Pista';
        document.getElementById('trackId').value = '0';
        document.getElementById('trackForm').reset();
        document.getElementById('audioFileName').textContent = '';
        document.getElementById('coverFileName').textContent = '';
        document.getElementById('trackModal').classList.add('active');
    }

    // Edit track
    async function editTrack(id) {
        try {
            const response = await fetch(`/Admin/ObtenerPista/${id}`);
            const track = await response.json();

            if (track) {
                document.getElementById('modalTitle').textContent = 'Editar Pista';
                document.getElementById('trackId').value = track.id;
                document.getElementById('trackTitulo').value = track.titulo;
                document.getElementById('trackArtista').value = track.artista;
                document.getElementById('trackAlbum').value = track.album || '';
                document.getElementById('trackGenero').value = track.genero;
                document.getElementById('trackDuracion').value = track.duracion;
                document.getElementById('trackBpm').value = track.bpm || '';
                document.getElementById('trackEnergia').value = track.energia || '';
                document.getElementById('trackEstadoAnimo').value = track.estadoAnimo || '';
                document.getElementById('audioFileName').textContent = track.rutaArchivo ? 'Archivo existente' : '';
                document.getElementById('coverFileName').textContent = track.rutaPortada ? 'Imagen existente' : '';
                document.getElementById('trackModal').classList.add('active');
            }
        } catch (err) {
            showToast('Error al cargar la pista', 'error');
        }
    }

    // Close modal
    function closeModal() {
        document.getElementById('trackModal').classList.remove('active');
    }

    // Toggle status
    async function toggleStatus(id, active) {
        try {
            const response = await fetch('/Admin/TogglePistaEstado', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-TOKEN': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify({ id: id, activo: active })
            });

            const result = await response.json();
            if (result.success) {
                showToast(active ? 'Pista activada' : 'Pista desactivada', 'success');
            } else {
                showToast('Error al cambiar estado', 'error');
            }
        } catch (err) {
            showToast('Error al cambiar estado', 'error');
        }
    }

    // ========================================
    // MUSIC PLAYER CONTROLLER WITH REAL EQUALIZER
    // ========================================

    const MusicPlayer = {
        audio: null,
        playerBar: null,
        isPlaying: false,
        currentTrackRow: null,
        trackList: [],
        currentIndex: -1,

        // Web Audio API for real equalizer
        audioContext: null,
        analyser: null,
        sourceNode: null,
        dataArray: null,
        animationId: null,
        eqBars: [],

        init() {
            this.audio = document.getElementById('audioPlayer');
            this.playerBar = document.getElementById('musicPlayerBar');
            this.eqBars = Array.from(document.querySelectorAll('.eq-bar'));

            // Collect all track rows
            this.trackList = Array.from(document.querySelectorAll('#tracksTableBody tr'));

            // Bind events
            this.bindEvents();
        },

        initAudioContext() {
            if (this.audioContext) return; // Already initialized

            try {
                this.audioContext = new (window.AudioContext || window.webkitAudioContext)();
                this.analyser = this.audioContext.createAnalyser();
                this.analyser.fftSize = 64; // Smaller for fewer, more responsive bars
                this.analyser.smoothingTimeConstant = 0.8;

                // Connect audio element to analyser
                this.sourceNode = this.audioContext.createMediaElementSource(this.audio);
                this.sourceNode.connect(this.analyser);
                this.analyser.connect(this.audioContext.destination);

                // Create data array for frequency data
                this.dataArray = new Uint8Array(this.analyser.frequencyBinCount);
            } catch (e) {
                console.warn('Web Audio API not supported:', e);
            }
        },

        bindEvents() {
            const playBtn = document.getElementById('playerPlayBtn');
            const prevBtn = document.getElementById('playerPrev');
            const nextBtn = document.getElementById('playerNext');
            const stopBtn = document.getElementById('playerStop');
            const progressBar = document.getElementById('playerProgressBar');
            const volumeSlider = document.getElementById('playerVolume');
            const muteBtn = document.getElementById('playerMute');

            playBtn.addEventListener('click', () => this.togglePlay());
            prevBtn.addEventListener('click', () => this.playPrev());
            nextBtn.addEventListener('click', () => this.playNext());
            stopBtn.addEventListener('click', () => this.stop());

            progressBar.addEventListener('click', (e) => this.seek(e));
            volumeSlider.addEventListener('input', (e) => this.setVolume(e.target.value));
            muteBtn.addEventListener('click', () => this.toggleMute());

            // Audio events
            this.audio.addEventListener('timeupdate', () => this.updateProgress());
            this.audio.addEventListener('loadedmetadata', () => this.updateDuration());
            this.audio.addEventListener('ended', () => this.onTrackEnd());
            this.audio.addEventListener('play', () => this.onPlay());
            this.audio.addEventListener('pause', () => this.onPause());

            // Set initial volume
            this.audio.volume = volumeSlider.value / 100;
        },

        playTrack(url, row) {
            // Initialize audio context on first play (requires user interaction)
            this.initAudioContext();

            // Resume audio context if suspended
            if (this.audioContext && this.audioContext.state === 'suspended') {
                this.audioContext.resume();
            }

            // Find track info from row
            const trackDetails = row.querySelector('.track-details');
            const title = trackDetails.querySelector('h4').textContent;
            const artist = trackDetails.querySelector('p').textContent;
            const cover = row.querySelector('.track-cover img');
            const coverSrc = cover ? cover.src : '/images/music-placeholder.svg';

            // Update player UI
            document.getElementById('playerTrackTitle').textContent = title;
            document.getElementById('playerTrackArtist').textContent = artist;
            document.getElementById('playerTrackCover').src = coverSrc;

            // Find index in track list
            this.currentIndex = this.trackList.indexOf(row);
            this.currentTrackRow = row;

            // Show player bar
            this.playerBar.classList.add('active');

            // Play audio
            this.audio.src = url;
            this.audio.play();
        },

        togglePlay() {
            if (this.audio.paused) {
                if (this.audioContext && this.audioContext.state === 'suspended') {
                    this.audioContext.resume();
                }
                this.audio.play();
            } else {
                this.audio.pause();
            }
        },

        onPlay() {
            this.isPlaying = true;
            this.playerBar.classList.add('playing');
            document.querySelector('.play-icon').style.display = 'none';
            document.querySelector('.pause-icon').style.display = 'block';

            // Highlight current row
            if (this.currentTrackRow) {
                this.currentTrackRow.style.background = 'var(--primary-pale)';
            }

            // Start equalizer animation
            this.startEqualizer();
        },

        onPause() {
            this.isPlaying = false;
            this.playerBar.classList.remove('playing');
            document.querySelector('.play-icon').style.display = 'block';
            document.querySelector('.pause-icon').style.display = 'none';

            // Stop equalizer animation
            this.stopEqualizer();
        },

        startEqualizer() {
            if (!this.analyser || !this.dataArray) return;

            const updateBars = () => {
                if (!this.isPlaying) return;

                this.analyser.getByteFrequencyData(this.dataArray);

                // Map frequency data to our 10 bars
                // Use lower frequencies for more visual impact
                const barCount = this.eqBars.length;
                const step = Math.floor(this.dataArray.length / barCount);

                for (let i = 0; i < barCount; i++) {
                    // Get average of frequency range for this bar
                    let sum = 0;
                    const start = i * step;
                    for (let j = start; j < start + step && j < this.dataArray.length; j++) {
                        sum += this.dataArray[j];
                    }
                    const average = sum / step;

                    // Scale to bar height (4px min, 32px max)
                    const height = Math.max(4, (average / 255) * 32);
                    this.eqBars[i].style.height = height + 'px';
                }

                this.animationId = requestAnimationFrame(updateBars);
            };

            updateBars();
        },

        stopEqualizer() {
            if (this.animationId) {
                cancelAnimationFrame(this.animationId);
                this.animationId = null;
            }

            // Reset bars to minimum height
            this.eqBars.forEach(bar => {
                bar.style.height = '4px';
            });
        },

        stop() {
            this.audio.pause();
            this.audio.currentTime = 0;
            this.playerBar.classList.remove('active', 'playing');
            this.stopEqualizer();

            // Reset UI
            document.getElementById('playerTrackTitle').textContent = 'Sin reproducir';
            document.getElementById('playerTrackArtist').textContent = '-';
            document.getElementById('playerCurrentTime').textContent = '0:00';
            document.getElementById('playerProgress').style.width = '0%';

            // Remove highlight from row
            if (this.currentTrackRow) {
                this.currentTrackRow.style.background = '';
            }

            this.currentTrackRow = null;
            this.currentIndex = -1;
        },

        playPrev() {
            if (this.currentIndex > 0) {
                const prevRow = this.trackList[this.currentIndex - 1];
                if (prevRow.style.display !== 'none') {
                    const playBtn = prevRow.querySelector('.btn-icon');
                    const url = playBtn.getAttribute('onclick').match(/'([^']+)'/)[1];

                    // Remove highlight from current
                    if (this.currentTrackRow) {
                        this.currentTrackRow.style.background = '';
                    }

                    this.playTrack(url, prevRow);
                }
            }
        },

        playNext() {
            if (this.currentIndex < this.trackList.length - 1) {
                const nextRow = this.trackList[this.currentIndex + 1];
                if (nextRow.style.display !== 'none') {
                    const playBtn = nextRow.querySelector('.btn-icon');
                    const url = playBtn.getAttribute('onclick').match(/'([^']+)'/)[1];

                    // Remove highlight from current
                    if (this.currentTrackRow) {
                        this.currentTrackRow.style.background = '';
                    }

                    this.playTrack(url, nextRow);
                }
            }
        },

        onTrackEnd() {
            this.playNext();
        },

        seek(e) {
            const bar = e.currentTarget;
            const rect = bar.getBoundingClientRect();
            const percent = (e.clientX - rect.left) / rect.width;
            this.audio.currentTime = percent * this.audio.duration;
        },

        updateProgress() {
            if (this.audio.duration) {
                const percent = (this.audio.currentTime / this.audio.duration) * 100;
                document.getElementById('playerProgress').style.width = percent + '%';
                document.getElementById('playerCurrentTime').textContent = this.formatTime(this.audio.currentTime);
            }
        },

        updateDuration() {
            document.getElementById('playerDuration').textContent = this.formatTime(this.audio.duration);
        },

        setVolume(value) {
            this.audio.volume = value / 100;
            this.updateVolumeIcon();
        },

        toggleMute() {
            this.audio.muted = !this.audio.muted;
            this.updateVolumeIcon();
        },

        updateVolumeIcon() {
            const volumeIcon = document.querySelector('.volume-icon');
            const muteIcon = document.querySelector('.mute-icon');

            if (this.audio.muted || this.audio.volume === 0) {
                volumeIcon.style.display = 'none';
                muteIcon.style.display = 'block';
            } else {
                volumeIcon.style.display = 'block';
                muteIcon.style.display = 'none';
            }
        },

        formatTime(seconds) {
            if (isNaN(seconds)) return '0:00';
            const mins = Math.floor(seconds / 60);
            const secs = Math.floor(seconds % 60);
            return `${mins}:${secs.toString().padStart(2, '0')}`;
        }
    };

    // Initialize player on page load
    document.addEventListener('DOMContentLoaded', () => {
        MusicPlayer.init();
    });

    // Play preview - Updated to use MusicPlayer
    function playPreview(url) {
        const row = event.target.closest('tr');

        if (MusicPlayer.audio.src.endsWith(url) && MusicPlayer.isPlaying) {
            MusicPlayer.togglePlay();
        } else {
            // Remove highlight from previous row
            if (MusicPlayer.currentTrackRow) {
                MusicPlayer.currentTrackRow.style.background = '';
            }
            MusicPlayer.playTrack(url, row);
        }
    }

    // Update file name display
    function updateFileName(input, displayId) {
        const display = document.getElementById(displayId);
        if (input.files.length > 0) {
            display.textContent = input.files[0].name;
        } else {
            display.textContent = '';
        }
    }

    // Drag and drop for file zones
    ['audioDropzone', 'coverDropzone'].forEach(id => {
        const zone = document.getElementById(id);
        const inputId = id === 'audioDropzone' ? 'audioFile' : 'coverFile';
        const displayId = id === 'audioDropzone' ? 'audioFileName' : 'coverFileName';

        zone.addEventListener('dragover', e => {
            e.preventDefault();
            zone.classList.add('dragover');
        });

        zone.addEventListener('dragleave', e => {
            e.preventDefault();
            zone.classList.remove('dragover');
        });

        zone.addEventListener('drop', e => {
            e.preventDefault();
            zone.classList.remove('dragover');
            const input = document.getElementById(inputId);
            input.files = e.dataTransfer.files;
            updateFileName(input, displayId);
        });
    });

    // Close modal on backdrop click
    document.getElementById('trackModal').addEventListener('click', function(e) {
        if (e.target === this) {
            closeModal();
        }
    });

    // Close modal on Escape key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            closeModal();
            closeExcelModal();
        }
    });

    // ========================================
    // EXCEL IMPORT FUNCTIONS
    // ========================================

    function openExcelModal() {
        document.getElementById('excelModal').classList.add('active');
        document.getElementById('excelResults').style.display = 'none';
        document.getElementById('excelFileName').textContent = '';
        document.getElementById('excelFile').value = '';
    }

    function closeExcelModal() {
        document.getElementById('excelModal').classList.remove('active');
    }

    async function uploadExcel() {
        const fileInput = document.getElementById('excelFile');
        if (!fileInput.files || fileInput.files.length === 0) {
            showToast('Selecciona un archivo Excel', 'error');
            return;
        }

        const file = fileInput.files[0];
        const formData = new FormData();
        formData.append('archivoExcel', file);

        const btn = document.getElementById('btnUploadExcel');
        const originalText = btn.innerHTML;
        btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span> Procesando...';
        btn.disabled = true;

        try {
            const response = await fetch('/Admin/ActualizarPistasDesdeExcel', {
                method: 'POST',
                body: formData,
                headers: {
                    'X-CSRF-TOKEN': document.querySelector('input[name="__RequestVerificationToken"]').value
                }
            });

            const result = await response.json();
            const resultsDiv = document.getElementById('excelResults');
            const resultsContent = document.getElementById('excelResultsContent');

            if (result.success) {
                let html = `<p style="color: var(--success); font-weight: 600;">Pistas actualizadas: ${result.actualizadas}</p>`;

                if (result.noEncontradas && result.noEncontradas.length > 0) {
                    html += `<p style="margin-top: 12px; color: var(--warning);">No encontradas (${result.totalNoEncontradas}):</p>`;
                    html += `<ul style="font-size: 0.8rem; color: var(--text-gray); max-height: 150px; overflow-y: auto;">`;
                    result.noEncontradas.forEach(track => {
                        html += `<li>${track}</li>`;
                    });
                    html += `</ul>`;
                }

                if (result.errores && result.errores.length > 0) {
                    html += `<p style="margin-top: 12px; color: var(--danger);">Errores:</p>`;
                    html += `<ul style="font-size: 0.8rem; color: var(--text-gray);">`;
                    result.errores.forEach(err => {
                        html += `<li>${err}</li>`;
                    });
                    html += `</ul>`;
                }

                resultsContent.innerHTML = html;
                showToast(result.message, 'success');

                // Recargar la pagina despues de 2 segundos para ver los cambios
                setTimeout(() => {
                    location.reload();
                }, 2000);
            } else {
                resultsContent.innerHTML = `<p style="color: var(--danger);">${result.message}</p>`;
                showToast(result.message, 'error');
            }

            resultsDiv.style.display = 'block';
        } catch (err) {
            console.error('Error:', err);
            showToast('Error al procesar el archivo', 'error');
        } finally {
            btn.innerHTML = originalText;
            btn.disabled = false;
        }
    }

    // Drag and drop for Excel zone
    const excelZone = document.getElementById('excelDropzone');
    if (excelZone) {
        excelZone.addEventListener('dragover', e => {
            e.preventDefault();
            excelZone.classList.add('dragover');
        });

        excelZone.addEventListener('dragleave', e => {
            e.preventDefault();
            excelZone.classList.remove('dragover');
        });

        excelZone.addEventListener('drop', e => {
            e.preventDefault();
            excelZone.classList.remove('dragover');
            const input = document.getElementById('excelFile');
            input.files = e.dataTransfer.files;
            updateFileName(input, 'excelFileName');
        });
    }

    // Close Excel modal on backdrop click
    document.getElementById('excelModal').addEventListener('click', function(e) {
        if (e.target === this) {
            closeExcelModal();
        }
    });
