@{
    ViewData["Title"] = "Panel de Administración";
}

<!-- Stats Grid Profesional -->
<div class="row g-4 mb-4">
    <!-- Total Usuarios -->
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon bg-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                    <circle cx="9" cy="7" r="4" />
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
                    <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">Total Usuarios</p>
                <h2 class="stat-value">@ViewBag.TotalUsuarios</h2>
            </div>
        </div>
    </div>

    <!-- Creadores -->
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon bg-success">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" />
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">Creadores</p>
                <h2 class="stat-value">@ViewBag.TotalCreadores</h2>
            </div>
        </div>
    </div>

    <!-- Fans -->
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon bg-info">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" />
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">Fans</p>
                <h2 class="stat-value">@ViewBag.TotalFans</h2>
            </div>
        </div>
    </div>

    <!-- Suscripciones -->
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon bg-warning">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="8" r="7" />
                    <polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88" />
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">Suscripciones</p>
                <h2 class="stat-value">@ViewBag.TotalSuscripciones</h2>
            </div>
        </div>
    </div>
</div>

<!-- Segunda Fila de Stats -->
<div class="row g-4 mb-4">
    <!-- Publicaciones -->
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon bg-secondary">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                    <circle cx="9" cy="9" r="2" />
                    <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21" />
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">Publicaciones</p>
                <h2 class="stat-value">@ViewBag.TotalPublicaciones</h2>
            </div>
        </div>
    </div>

    <!-- Posts Hoy -->
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon bg-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2" />
                    <line x1="16" y1="2" x2="16" y2="6" />
                    <line x1="8" y1="2" x2="8" y2="6" />
                    <line x1="3" y1="10" x2="21" y2="10" />
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">Posts Hoy</p>
                <h2 class="stat-value">@ViewBag.PublicacionesHoy</h2>
            </div>
        </div>
    </div>

    <!-- Bloqueados -->
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon bg-danger">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10" />
                    <line x1="4.93" y1="4.93" x2="19.07" y2="19.07" />
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">Bloqueados</p>
                <h2 class="stat-value">@ViewBag.UsuariosBloqueados</h2>
            </div>
        </div>
    </div>

    <!-- Reportes Pendientes -->
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon bg-warning">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M4 15s1-1 4-1 5 2 8 2 4-1 4-1V3s-1 1-4 1-5-2-8-2-4 1-4 1z" />
                    <line x1="4" y1="22" x2="4" y2="15" />
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">Reportes Pendientes</p>
                <h2 class="stat-value">@ViewBag.ReportesPendientes</h2>
            </div>
        </div>
    </div>
</div>

<!-- Acciones Rápidas -->
<div class="row mb-4">
    <div class="col-12">
        <h4 class="mb-3 text-dark">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: inline-block; vertical-align: middle;">
                <polyline points="13 17 18 12 13 7" />
                <polyline points="6 17 11 12 6 7" />
            </svg>
            Acciones Rápidas
        </h4>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-3">
        <a href="/Admin/Usuarios" class="action-card">
            <div class="action-icon bg-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                    <circle cx="9" cy="7" r="4" />
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
                    <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                </svg>
            </div>
            <h5>Gestionar Usuarios</h5>
            <p>Ver y administrar todos los usuarios</p>
        </a>
    </div>

    <div class="col-md-3">
        <a href="/Admin/Contenido" class="action-card">
            <div class="action-icon bg-success">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z" />
                    <circle cx="12" cy="12" r="3" />
                </svg>
            </div>
            <h5>Moderar Contenido</h5>
            <p>Revisar publicaciones reportadas</p>
        </a>
    </div>

    <div class="col-md-3">
        <a href="/Admin/Reportes" class="action-card">
            <div class="action-icon bg-danger">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M4 15s1-1 4-1 5 2 8 2 4-1 4-1V3s-1 1-4 1-5-2-8-2-4 1-4 1z" />
                    <line x1="4" y1="22" x2="4" y2="15" />
                </svg>
            </div>
            <h5>Ver Reportes</h5>
            <p>Gestionar reportes de usuarios</p>
        </a>
    </div>

    <div class="col-md-3">
        <a href="/Admin/Estadisticas" class="action-card">
            <div class="action-icon bg-info">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="18" y1="20" x2="18" y2="10" />
                    <line x1="12" y1="20" x2="12" y2="4" />
                    <line x1="6" y1="20" x2="6" y2="14" />
                </svg>
            </div>
            <h5>Estadísticas</h5>
            <p>Ver análisis de la plataforma</p>
        </a>
    </div>
</div>

<!-- Actividad Reciente -->
<div class="row">
    <div class="col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h5 class="mb-4 text-dark">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: inline-block; vertical-align: middle;">
                        <circle cx="12" cy="12" r="10" />
                        <polyline points="12 6 12 12 16 14" />
                    </svg>
                    Actividad de la Plataforma
                </h5>
                <div class="activity-item">
                    <div class="activity-icon bg-success">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="20 6 9 17 4 12" />
                        </svg>
                    </div>
                    <div class="activity-content">
                        <strong>Sistema operativo</strong>
                        <p>Todo funcionando correctamente</p>
                    </div>
                </div>
                <div class="activity-item">
                    <div class="activity-icon bg-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                            <circle cx="9" cy="7" r="4" />
                        </svg>
                    </div>
                    <div class="activity-content">
                        <strong>@ViewBag.TotalUsuarios usuarios registrados</strong>
                        <p>Total de usuarios en la plataforma</p>
                    </div>
                </div>
                <div class="activity-item">
                    <div class="activity-icon bg-info">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                            <circle cx="9" cy="9" r="2" />
                        </svg>
                    </div>
                    <div class="activity-content">
                        <strong>@ViewBag.TotalPublicaciones contenidos subidos</strong>
                        <p>Total de publicaciones en la plataforma</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h5 class="mb-4 text-dark">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: inline-block; vertical-align: middle;">
                        <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z" />
                        <line x1="12" y1="9" x2="12" y2="13" />
                        <line x1="12" y1="17" x2="12.01" y2="17" />
                    </svg>
                    Alertas Importantes
                </h5>
                @if (ViewBag.UsuariosBloqueados > 0)
                {
                    <div class="alert-item alert-warning">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10" />
                            <line x1="4.93" y1="4.93" x2="19.07" y2="19.07" />
                        </svg>
                        <div>
                            <strong>@ViewBag.UsuariosBloqueados usuarios bloqueados</strong>
                            <p>Usuarios suspendidos actualmente</p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert-item alert-success">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="20 6 9 17 4 12" />
                        </svg>
                        <div>
                            <strong>0 usuarios bloqueados</strong>
                            <p>No hay usuarios suspendidos</p>
                        </div>
                    </div>
                }

                @if (ViewBag.PublicacionesHoy > 0)
                {
                    <div class="alert-item alert-info">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <line x1="18" y1="20" x2="18" y2="10" />
                            <line x1="12" y1="20" x2="12" y2="4" />
                            <line x1="6" y1="20" x2="6" y2="14" />
                        </svg>
                        <div>
                            <strong>@ViewBag.PublicacionesHoy nuevas publicaciones hoy</strong>
                            <p>Contenido publicado en las últimas 24h</p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert-item alert-secondary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10" />
                            <line x1="12" y1="16" x2="12" y2="12" />
                            <line x1="12" y1="8" x2="12.01" y2="8" />
                        </svg>
                        <div>
                            <strong>0 publicaciones hoy</strong>
                            <p>No hay nuevas publicaciones</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    /* Colores corporativos basados en landing */
    :root {
        --primary-color: #00BCD4;
        --primary-dark: #0097A7;
        --success-color: #4CAF50;
        --warning-color: #FF9800;
        --danger-color: #F44336;
        --info-color: #00BCD4;
        --secondary-color: #607D8B;
    }

    /* Stats Cards - Diseño Profesional */
    .stat-card {
        background: white;
        border-radius: 12px;
        padding: 24px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        display: flex;
        align-items: center;
        gap: 20px;
        transition: all 0.3s ease;
        height: 100%;
        border: 1px solid #e9ecef;
    }

        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 4px 16px rgba(0,188,212,0.15);
            border-color: var(--primary-color);
        }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

        .stat-icon.bg-primary {
            background: var(--primary-color);
        }

        .stat-icon.bg-success {
            background: var(--success-color);
        }

        .stat-icon.bg-info {
            background: var(--info-color);
        }

        .stat-icon.bg-warning {
            background: var(--warning-color);
        }

        .stat-icon.bg-danger {
            background: var(--danger-color);
        }

        .stat-icon.bg-secondary {
            background: var(--secondary-color);
        }

    .stat-content {
        flex: 1;
    }

    .stat-label {
        color: #718096;
        font-size: 13px;
        font-weight: 500;
        margin: 0 0 8px 0;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .stat-value {
        color: #2D3748;
        font-size: 32px;
        font-weight: 700;
        margin: 0;
    }

    /* Action Cards */
    .action-card {
        display: block;
        background: white;
        border-radius: 12px;
        padding: 24px;
        text-align: center;
        text-decoration: none;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        height: 100%;
        border: 1px solid #e9ecef;
    }

        .action-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 4px 16px rgba(0,188,212,0.15);
            border-color: var(--primary-color);
        }

    .action-icon {
        width: 64px;
        height: 64px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 16px;
    }

    .action-card h5 {
        color: #2D3748;
        font-size: 17px;
        font-weight: 600;
        margin-bottom: 8px;
    }

    .action-card p {
        color: #718096;
        font-size: 14px;
        margin: 0;
    }

    /* Activity Items */
    .activity-item {
        display: flex;
        align-items: flex-start;
        gap: 15px;
        padding: 16px;
        border-radius: 10px;
        background: #F7FAFC;
        margin-bottom: 12px;
        transition: all 0.2s;
        border: 1px solid #E2E8F0;
    }

        .activity-item:hover {
            background: #EDF2F7;
            border-color: var(--primary-color);
        }

    .activity-icon {
        width: 40px;
        height: 40px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .activity-content strong {
        display: block;
        color: #2D3748;
        font-size: 15px;
        margin-bottom: 4px;
        font-weight: 600;
    }

    .activity-content p {
        color: #718096;
        font-size: 13px;
        margin: 0;
    }

    /* Alert Items */
    .alert-item {
        display: flex;
        align-items: flex-start;
        gap: 15px;
        padding: 16px;
        border-radius: 10px;
        margin-bottom: 12px;
        border-left: 4px solid;
    }

        .alert-item svg {
            flex-shrink: 0;
        }

        .alert-item strong {
            display: block;
            font-size: 15px;
            margin-bottom: 4px;
            font-weight: 600;
        }

        .alert-item p {
            font-size: 13px;
            margin: 0;
        }

    .alert-warning {
        background: #FFF3E0;
        border-color: var(--warning-color);
        color: #E65100;
    }

    .alert-success {
        background: #E8F5E9;
        border-color: var(--success-color);
        color: #2E7D32;
    }

    .alert-info {
        background: #E0F7FA;
        border-color: var(--info-color);
        color: #00838F;
    }

    .alert-secondary {
        background: #F5F5F5;
        border-color: var(--secondary-color);
        color: #424242;
    }

    .card {
        border: none;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .stat-card

    {
        flex-direction: column;
        text-align: center;
    }

    .stat-value {
        font-size: 28px;
    }

    .action-icon {
        width: 56px;
        height: 56px;
    }

    }
</style>