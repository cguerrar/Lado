@{
    ViewData["Title"] = "Metricas de Supervisores";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var dias = (int)(ViewBag.Dias ?? 7);
    var resumen = ViewBag.ResumenPorSupervisor as IEnumerable<dynamic> ?? new List<dynamic>();
}

<style>
    .metrics-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
        flex-wrap: wrap;
        gap: 16px;
    }

    .metrics-header h2 {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-dark);
        margin: 0;
    }

    .filter-group {
        display: flex;
        gap: 8px;
    }

    .filter-btn {
        padding: 8px 16px;
        border: 1px solid var(--border-color);
        background: var(--bg-white);
        border-radius: 8px;
        font-size: 0.875rem;
        font-weight: 500;
        color: var(--text-gray);
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none;
    }

    .filter-btn:hover {
        border-color: var(--primary);
        color: var(--primary);
    }

    .filter-btn.active {
        background: var(--primary);
        color: white;
        border-color: var(--primary);
    }

    /* Stats Overview */
    .stats-overview {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
        margin-bottom: 32px;
    }

    .stat-box {
        background: var(--bg-white);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 20px;
        text-align: center;
    }

    .stat-box h3 {
        font-size: 2rem;
        font-weight: 800;
        margin: 0 0 4px 0;
        color: var(--text-dark);
    }

    .stat-box p {
        font-size: 0.8125rem;
        color: var(--text-gray);
        margin: 0;
    }

    .stat-box.success h3 { color: #10b981; }
    .stat-box.warning h3 { color: #f59e0b; }
    .stat-box.danger h3 { color: #ef4444; }
    .stat-box.info h3 { color: #3b82f6; }

    /* Ranking Table */
    .ranking-section {
        background: var(--bg-white);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        overflow: hidden;
    }

    .ranking-header {
        padding: 20px 24px;
        border-bottom: 1px solid var(--border-color);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .ranking-header h3 {
        font-size: 1.125rem;
        font-weight: 700;
        margin: 0;
        color: var(--text-dark);
    }

    .ranking-table {
        width: 100%;
        border-collapse: collapse;
    }

    .ranking-table th {
        text-align: left;
        padding: 14px 20px;
        font-size: 0.75rem;
        font-weight: 600;
        color: var(--text-gray);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        background: var(--bg-light);
        border-bottom: 1px solid var(--border-color);
    }

    .ranking-table td {
        padding: 16px 20px;
        border-bottom: 1px solid var(--border-color);
        font-size: 0.9375rem;
    }

    .ranking-table tr:last-child td {
        border-bottom: none;
    }

    .ranking-table tr:hover {
        background: var(--bg-light);
    }

    .supervisor-cell {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .supervisor-rank {
        width: 28px;
        height: 28px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 0.8125rem;
        background: var(--bg-light);
        color: var(--text-gray);
    }

    .supervisor-rank.gold {
        background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
        color: white;
    }

    .supervisor-rank.silver {
        background: linear-gradient(135deg, #9ca3af 0%, #6b7280 100%);
        color: white;
    }

    .supervisor-rank.bronze {
        background: linear-gradient(135deg, #d97706 0%, #b45309 100%);
        color: white;
    }

    .supervisor-avatar {
        width: 40px;
        height: 40px;
        border-radius: 10px;
        background: var(--primary);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
        font-size: 0.875rem;
    }

    .supervisor-info h4 {
        margin: 0;
        font-size: 0.9375rem;
        font-weight: 600;
        color: var(--text-dark);
    }

    .supervisor-info p {
        margin: 2px 0 0;
        font-size: 0.75rem;
        color: var(--text-gray);
    }

    .metric-value {
        font-weight: 600;
        color: var(--text-dark);
    }

    .metric-value.success { color: #10b981; }
    .metric-value.warning { color: #f59e0b; }
    .metric-value.danger { color: #ef4444; }

    .progress-bar-cell {
        width: 150px;
    }

    .progress-bar-mini {
        height: 8px;
        background: var(--bg-light);
        border-radius: 4px;
        overflow: hidden;
    }

    .progress-bar-mini .fill {
        height: 100%;
        border-radius: 4px;
        transition: width 0.3s;
    }

    .progress-bar-mini .fill.success { background: #10b981; }
    .progress-bar-mini .fill.warning { background: #f59e0b; }
    .progress-bar-mini .fill.danger { background: #ef4444; }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: var(--text-gray);
    }

    .empty-state svg {
        width: 64px;
        height: 64px;
        margin-bottom: 16px;
        opacity: 0.5;
    }

    .empty-state h3 {
        font-size: 1.125rem;
        margin: 0 0 8px 0;
        color: var(--text-dark);
    }

    .empty-state p {
        margin: 0;
        font-size: 0.875rem;
    }

    @@media (max-width: 1024px) {
        .stats-overview {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (max-width: 768px) {
        .stats-overview {
            grid-template-columns: 1fr;
        }

        .ranking-table {
            display: block;
            overflow-x: auto;
        }

        .metrics-header {
            flex-direction: column;
            align-items: flex-start;
        }
    }
</style>

<div class="metrics-header">
    <h2>Metricas de Supervisores</h2>
    <div class="filter-group">
        <a href="?dias=7" class="filter-btn @(dias == 7 ? "active" : "")">7 dias</a>
        <a href="?dias=14" class="filter-btn @(dias == 14 ? "active" : "")">14 dias</a>
        <a href="?dias=30" class="filter-btn @(dias == 30 ? "active" : "")">30 dias</a>
    </div>
</div>

@{
    var totalRevisados = 0;
    var totalAprobados = 0;
    var totalRechazados = 0;
    var totalEscalados = 0;
    var supervisoresActivos = 0;

    foreach (var item in resumen)
    {
        totalRevisados += (int)item.TotalRevisados;
        totalAprobados += (int)item.Aprobados;
        totalRechazados += (int)item.Rechazados;
        totalEscalados += (int)item.Escalados;
        supervisoresActivos++;
    }

    var tasaAprobacion = totalRevisados > 0 ? (double)totalAprobados / totalRevisados * 100 : 0;
}

<!-- Stats Overview -->
<div class="stats-overview">
    <div class="stat-box">
        <h3>@totalRevisados</h3>
        <p>Total Revisados</p>
    </div>
    <div class="stat-box success">
        <h3>@totalAprobados</h3>
        <p>Aprobados (@tasaAprobacion.ToString("0.0")%)</p>
    </div>
    <div class="stat-box danger">
        <h3>@totalRechazados</h3>
        <p>Rechazados</p>
    </div>
    <div class="stat-box warning">
        <h3>@totalEscalados</h3>
        <p>Escalados</p>
    </div>
</div>

<!-- Ranking Table -->
<div class="ranking-section">
    <div class="ranking-header">
        <h3>Ranking de Supervisores (Ultimos @dias dias)</h3>
        <span style="font-size: 0.8125rem; color: var(--text-gray);">@supervisoresActivos supervisores activos</span>
    </div>

    @if (resumen.Any())
    {
        <table class="ranking-table">
            <thead>
                <tr>
                    <th style="width: 50px;">#</th>
                    <th>Supervisor</th>
                    <th>Revisados</th>
                    <th>Aprobados</th>
                    <th>Rechazados</th>
                    <th>Escalados</th>
                    <th>Tiempo Prom.</th>
                    <th>Tasa Aprobacion</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var rank = 1;
                    foreach (var item in resumen)
                    {
                        var supervisor = item.Supervisor;
                        var usuario = supervisor?.Usuario;
                        var nombre = usuario?.Seudonimo ?? usuario?.UserName ?? "Sin nombre";
                        var inicial = nombre.Length > 0 ? nombre[0].ToString().ToUpper() : "?";
                        var revisados = (int)item.TotalRevisados;
                        var aprobados = (int)item.Aprobados;
                        var rechazados = (int)item.Rechazados;
                        var escalados = (int)item.Escalados;
                        var tiempoPromedio = (double)item.TiempoPromedio;
                        var tasaAprobacionItem = revisados > 0 ? (double)aprobados / revisados * 100 : 0;
                        var rankClass = rank == 1 ? "gold" : rank == 2 ? "silver" : rank == 3 ? "bronze" : "";

                        <tr>
                            <td>
                                <span class="supervisor-rank @rankClass">@rank</span>
                            </td>
                            <td>
                                <div class="supervisor-cell">
                                    <div class="supervisor-avatar">@inicial</div>
                                    <div class="supervisor-info">
                                        <h4>@nombre</h4>
                                        <p>@item.DiasActivos dias activos</p>
                                    </div>
                                </div>
                            </td>
                            <td class="metric-value">@revisados</td>
                            <td class="metric-value success">@aprobados</td>
                            <td class="metric-value danger">@rechazados</td>
                            <td class="metric-value warning">@escalados</td>
                            <td>@tiempoPromedio.ToString("0.0")s</td>
                            <td>
                                <div class="progress-bar-cell">
                                    <div style="display: flex; justify-content: space-between; margin-bottom: 4px;">
                                        <span style="font-size: 0.75rem; font-weight: 600;">@tasaAprobacionItem.ToString("0.0")%</span>
                                    </div>
                                    <div class="progress-bar-mini">
                                        <div class="fill @(tasaAprobacionItem >= 80 ? "success" : tasaAprobacionItem >= 50 ? "warning" : "danger")" style="width: @tasaAprobacionItem%"></div>
                                    </div>
                                </div>
                            </td>
                        </tr>

                        rank++;
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="empty-state">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="18" y1="20" x2="18" y2="10"></line>
                <line x1="12" y1="20" x2="12" y2="4"></line>
                <line x1="6" y1="20" x2="6" y2="14"></line>
            </svg>
            <h3>Sin metricas</h3>
            <p>No hay metricas registradas en los ultimos @dias dias. Las metricas se generan automaticamente cuando los supervisores revisan contenido.</p>
        </div>
    }
</div>
