@{
    ViewData["Title"] = "Configuración";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="fas fa-cogs text-secondary"></i> Configuración de Plataforma</h2>
            <p class="text-muted">Ajustes generales del sistema</p>
        </div>
        <div class="col-md-6 text-end">
            <a href="@Url.Action("Index", "Admin")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Volver al Dashboard
            </a>
        </div>
    </div>

    <div class="row g-3">
        <!-- Comisiones -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-percentage"></i> Comisiones y Precios
                    </h5>
                </div>
                <div class="card-body">
                    <form method="post" action="@Url.Action("ActualizarComision")">
                        <div class="mb-3">
                            <label class="form-label">Comisión de Plataforma (%)</label>
                            <input type="number" name="comision" class="form-control"
                                   value="20" min="0" max="100" step="0.1" required>
                            <small class="text-muted">
                                Porcentaje que cobra la plataforma por cada transacción
                            </small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Precio Mínimo Suscripción (USD)</label>
                            <input type="number" name="precioMinSub" class="form-control"
                                   value="5" min="1" step="0.01" required>
                            <small class="text-muted">
                                Precio mínimo que puede cobrar un creador por suscripción
                            </small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Precio Mínimo PPV (USD)</label>
                            <input type="number" name="precioMinPPV" class="form-control"
                                   value="5" min="1" step="0.01" required>
                            <small class="text-muted">
                                Precio mínimo para contenido de pago por visión
                            </small>
                        </div>

                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Guardar Cambios
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Configuración de Billetera -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-wallet"></i> Configuracion de Billetera
                    </h5>
                </div>
                <div class="card-body">
                    <form method="post" action="@Url.Action("ActualizarConfiguracionBilletera")" id="formConfigBilletera">
                        <div class="mb-3">
                            <label class="form-label">Comision Billetera Electronica (%)</label>
                            <input type="number" name="comisionBilletera" class="form-control"
                                   value="@(ViewBag.ComisionBilleteraElectronica ?? "2.5")" min="0" max="100" step="0.1" required>
                            <small class="text-muted">
                                Porcentaje de comision por usar billetera electronica
                            </small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Tiempo de Proceso de Retiro</label>
                            <input type="text" name="tiempoProcesoRetiro" class="form-control"
                                   value="@(ViewBag.TiempoProcesoRetiro ?? "3-5 dias habiles")" required>
                            <small class="text-muted">
                                Texto que se muestra como tiempo estimado de retiros
                            </small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Monto Minimo Recarga (USD)</label>
                            <input type="number" name="montoMinimoRecarga" class="form-control"
                                   value="@(ViewBag.MontoMinimoRecarga ?? "5")" min="1" step="0.01" required>
                            <small class="text-muted">
                                Monto minimo que puede recargar un usuario
                            </small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Monto Maximo Recarga (USD)</label>
                            <input type="number" name="montoMaximoRecarga" class="form-control"
                                   value="@(ViewBag.MontoMaximoRecarga ?? "1000")" min="1" step="0.01" required>
                            <small class="text-muted">
                                Monto maximo que puede recargar un usuario
                            </small>
                        </div>

                        <button type="submit" class="btn btn-info text-white">
                            <i class="fas fa-save"></i> Guardar Cambios
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Límites de Contenido -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-upload"></i> Límites de Contenido
                    </h5>
                </div>
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label class="form-label">Tamaño Máximo de Imagen (MB)</label>
                            <input type="number" class="form-control" value="10" min="1" max="100">
                            <small class="text-muted">
                                Tamaño máximo permitido para imágenes
                            </small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Tamaño Máximo de Video (MB)</label>
                            <input type="number" class="form-control" value="500" min="10" max="2000">
                            <small class="text-muted">
                                Tamaño máximo permitido para videos
                            </small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Duración Máxima Video (minutos)</label>
                            <input type="number" class="form-control" value="15" min="1" max="60">
                            <small class="text-muted">
                                Duración máxima de videos en minutos
                            </small>
                        </div>

                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Guardar Cambios
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Configuración de Seguridad -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-shield-alt"></i> Seguridad
                    </h5>
                </div>
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="requiereVerificacion" checked>
                                <label class="form-check-label" for="requiereVerificacion">
                                    Requerir verificación de email
                                </label>
                            </div>
                            <small class="text-muted d-block mt-1">
                                Los usuarios deben verificar su email antes de publicar
                            </small>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="moderacionAutomatica">
                                <label class="form-check-label" for="moderacionAutomatica">
                                    Moderación automática de contenido
                                </label>
                            </div>
                            <small class="text-muted d-block mt-1">
                                Analizar contenido automáticamente antes de publicar
                            </small>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="requiere2FA">
                                <label class="form-check-label" for="requiere2FA">
                                    Requerir 2FA para creadores
                                </label>
                            </div>
                            <small class="text-muted d-block mt-1">
                                Los creadores deben habilitar autenticación de dos factores
                            </small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Intentos de login antes de bloqueo</label>
                            <input type="number" class="form-control" value="5" min="3" max="10">
                            <small class="text-muted">
                                Número de intentos fallidos antes de bloquear cuenta temporalmente
                            </small>
                        </div>

                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-save"></i> Guardar Cambios
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Notificaciones -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-bell"></i> Notificaciones
                    </h5>
                </div>
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label class="form-label">Email de Admin</label>
                            <input type="email" class="form-control" value="admin@Ladodemo.com">
                            <small class="text-muted">
                                Email para recibir notificaciones importantes
                            </small>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="notifReportes" checked>
                                <label class="form-check-label" for="notifReportes">
                                    Notificar nuevos reportes
                                </label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="notifNuevosUsuarios">
                                <label class="form-check-label" for="notifNuevosUsuarios">
                                    Notificar nuevos usuarios
                                </label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="notifActividadSospechosa" checked>
                                <label class="form-check-label" for="notifActividadSospechosa">
                                    Notificar actividad sospechosa
                                </label>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-info">
                            <i class="fas fa-save"></i> Guardar Cambios
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Mantenimiento -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-warning">
                    <h5 class="mb-0">
                        <i class="fas fa-tools"></i> Mantenimiento
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="modoMantenimiento">
                            <label class="form-check-label" for="modoMantenimiento">
                                <strong>Modo Mantenimiento</strong>
                            </label>
                        </div>
                        <small class="text-muted d-block mt-1">
                            Desactiva el acceso a la plataforma para todos excepto admins
                        </small>
                    </div>

                    <hr>

                    <h6 class="mb-3">Acciones de Limpieza</h6>

                    <div class="d-grid gap-2">
                        <button class="btn btn-outline-secondary" type="button">
                            <i class="fas fa-trash"></i> Limpiar contenido eliminado (30 días)
                        </button>
                        <button class="btn btn-outline-secondary" type="button">
                            <i class="fas fa-broom"></i> Limpiar sesiones expiradas
                        </button>
                        <button class="btn btn-outline-secondary" type="button">
                            <i class="fas fa-database"></i> Optimizar base de datos
                        </button>
                        <button class="btn btn-outline-danger" type="button"
                                onclick="return confirm('¿Estás seguro? Esta acción no se puede deshacer')">
                            <i class="fas fa-file-archive"></i> Crear respaldo completo
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Configuración Regional -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-purple text-white" style="background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);">
                    <h5 class="mb-0">
                        <i class="fas fa-globe"></i> Configuracion Regional
                    </h5>
                </div>
                <div class="card-body">
                    <form method="post" action="@Url.Action("ActualizarZonaHoraria")">
                        <div class="mb-3">
                            <label class="form-label">Zona Horaria de la Plataforma</label>
                            <select name="zonaHoraria" id="selectZonaHoraria" class="form-select" required>
                                <optgroup label="America">
                                    <option value="America/Bogota">Colombia (America/Bogota) UTC-5</option>
                                    <option value="America/Mexico_City">Mexico (America/Mexico_City) UTC-6</option>
                                    <option value="America/Lima">Peru (America/Lima) UTC-5</option>
                                    <option value="America/Santiago">Chile (America/Santiago) UTC-3/-4</option>
                                    <option value="America/Argentina/Buenos_Aires">Argentina (Buenos Aires) UTC-3</option>
                                    <option value="America/Caracas">Venezuela (America/Caracas) UTC-4</option>
                                    <option value="America/New_York">Estados Unidos Este (New York) UTC-5/-4</option>
                                    <option value="America/Los_Angeles">Estados Unidos Oeste (Los Angeles) UTC-8/-7</option>
                                    <option value="America/Sao_Paulo">Brasil (Sao Paulo) UTC-3</option>
                                </optgroup>
                                <optgroup label="Europa">
                                    <option value="Europe/Madrid">Espana (Europe/Madrid) UTC+1/+2</option>
                                    <option value="Europe/London">Reino Unido (Europe/London) UTC+0/+1</option>
                                    <option value="Europe/Paris">Francia (Europe/Paris) UTC+1/+2</option>
                                </optgroup>
                                <optgroup label="Otras">
                                    <option value="UTC">UTC (Coordinado Universal)</option>
                                </optgroup>
                            </select>
                            <small class="text-muted">
                                Esta zona horaria se usara para mostrar fechas y horas en toda la plataforma
                            </small>
                        </div>

                        <div class="alert alert-info mb-3">
                            <i class="fas fa-info-circle"></i>
                            <strong>Hora actual:</strong>
                            <span id="horaActual">Cargando...</span>
                        </div>

                        <button type="submit" class="btn text-white" style="background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);">
                            <i class="fas fa-save"></i> Guardar Zona Horaria
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Datos Iniciales (Seeds) -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-database"></i> Datos Iniciales
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">
                        Ejecuta scripts para poblar datos iniciales necesarios para el funcionamiento de la plataforma.
                    </p>

                    <div class="d-grid gap-2">
                        <button class="btn btn-outline-primary" type="button" id="btnSeedCategorias" onclick="ejecutarSeedCategorias()">
                            <i class="fas fa-tags" id="iconSeedCategorias"></i>
                            <span id="textSeedCategorias">Cargar Categorías de Intereses</span>
                        </button>
                        <a href="@Url.Action("ProbarClasificacion", "Admin")" class="btn btn-outline-info">
                            <i class="fas fa-robot"></i>
                            Probar Clasificacion con IA
                        </a>
                        <a href="@Url.Action("ConfigurarAlgoritmos", "Admin")" class="btn btn-outline-warning">
                            <i class="fas fa-sliders-h"></i>
                            Configurar Pesos de Algoritmos
                        </a>
                    </div>

                    <div id="resultadoSeed" class="mt-3" style="display: none;">
                    </div>

                    <hr>

                    <small class="text-muted">
                        <i class="fas fa-info-circle"></i>
                        Estos scripts verifican si los datos ya existen antes de insertarlos,
                        por lo que es seguro ejecutarlos múltiples veces.
                    </small>
                </div>
            </div>
        </div>

        <!-- Información del Sistema -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle"></i> Información del Sistema
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <strong>Versión de Lado:</strong> 1.0.0
                        </li>
                        <li class="mb-2">
                            <strong>Versión de .NET:</strong> 8.0
                        </li>
                        <li class="mb-2">
                            <strong>Base de Datos:</strong> SQL Server
                        </li>
                        <li class="mb-2">
                            <strong>Servidor:</strong> Azure / AWS
                        </li>
                        <li class="mb-2">
                            <strong>Almacenamiento usado:</strong> 125 GB / 500 GB
                        </li>
                        <li class="mb-2">
                            <strong>Última actualización:</strong> @DateTime.Now.ToString("dd/MM/yyyy")
                        </li>
                        <li class="mb-0">
                            <strong>Última copia de seguridad:</strong> Hace 2 días
                        </li>
                    </ul>

                    <hr>

                    <div class="alert alert-success mb-0">
                        <i class="fas fa-check-circle"></i>
                        <strong>Estado:</strong> Todos los sistemas operando normalmente
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <script>
        alert('@TempData["Success"]');
    </script>
}

<script>
    // Establecer zona horaria guardada
    const zonaHorariaGuardada = '@ViewBag.ZonaHoraria';

    // Mostrar hora actual segun zona horaria seleccionada
    function actualizarHora() {
        const select = document.getElementById('selectZonaHoraria');
        const zonaHoraria = select.value;
        const horaActualSpan = document.getElementById('horaActual');

        try {
            const ahora = new Date();
            const opciones = {
                timeZone: zonaHoraria,
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit',
                hour12: false
            };
            horaActualSpan.textContent = ahora.toLocaleString('es-ES', opciones);
        } catch (e) {
            horaActualSpan.textContent = 'Zona horaria no valida';
        }
    }

    // Actualizar al cargar y cuando cambia la seleccion
    document.addEventListener('DOMContentLoaded', function() {
        // Establecer el valor guardado en el select
        const select = document.getElementById('selectZonaHoraria');
        if (zonaHorariaGuardada) {
            select.value = zonaHorariaGuardada;
        }

        actualizarHora();
        setInterval(actualizarHora, 1000);

        select.addEventListener('change', actualizarHora);
    });

    // Funcion para ejecutar seed de categorias
    async function ejecutarSeedCategorias() {
        const btn = document.getElementById('btnSeedCategorias');
        const icon = document.getElementById('iconSeedCategorias');
        const text = document.getElementById('textSeedCategorias');
        const resultado = document.getElementById('resultadoSeed');

        // Deshabilitar boton y mostrar loading
        btn.disabled = true;
        icon.className = 'fas fa-spinner fa-spin';
        text.textContent = 'Ejecutando...';

        try {
            const response = await fetch('@Url.Action("SeedCategoriasInteres", "Admin")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                }
            });

            const data = await response.json();

            if (data.success) {
                resultado.innerHTML = `
                    <div class="alert alert-success mb-0">
                        <i class="fas fa-check-circle"></i>
                        <strong>Exito!</strong><br>
                        ${data.message}<br>
                        <small class="text-muted">
                            Categorias: ${data.categoriasCreadas || 0} creadas<br>
                            Algoritmo: ${data.algoritmoCreado ? 'Creado' : 'Ya existia'}
                        </small>
                    </div>
                `;
                icon.className = 'fas fa-check';
                text.textContent = 'Completado';
                btn.classList.remove('btn-outline-primary');
                btn.classList.add('btn-success');
            } else {
                resultado.innerHTML = `
                    <div class="alert alert-danger mb-0">
                        <i class="fas fa-times-circle"></i>
                        <strong>Error:</strong> ${data.message || 'Error desconocido'}
                    </div>
                `;
                icon.className = 'fas fa-times';
                text.textContent = 'Error - Reintentar';
                btn.disabled = false;
            }
        } catch (error) {
            resultado.innerHTML = `
                <div class="alert alert-danger mb-0">
                    <i class="fas fa-times-circle"></i>
                    <strong>Error de conexion:</strong> ${error.message}
                </div>
            `;
            icon.className = 'fas fa-tags';
            text.textContent = 'Cargar Categorias de Intereses';
            btn.disabled = false;
        }

        resultado.style.display = 'block';
    }
</script>