@model List<Lado.Models.LogEvento>
@{
    ViewData["Title"] = "Logs del Sistema";
    var filtro = ViewBag.Filtro as Lado.Services.LogEventosFiltro;
    var estadisticas = ViewBag.Estadisticas as Lado.Services.LogEventosEstadisticas;
    var resultado = ViewBag.Resultado as Lado.Services.LogEventosResultado;
}

<style>
    .logs-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
        flex-wrap: wrap;
        gap: 16px;
    }

    .logs-title {
        font-size: 28px;
        font-weight: 700;
        color: var(--text-dark);
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .logs-title svg {
        width: 32px;
        height: 32px;
        color: var(--primary);
    }

    /* Stats Cards */
    .stats-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 16px;
        margin-bottom: 24px;
    }

    .stat-card {
        background: var(--bg-white);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 20px;
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .stat-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .stat-icon.error {
        background: linear-gradient(135deg, #ef4444, #dc2626);
    }

    .stat-icon.warning {
        background: linear-gradient(135deg, #f59e0b, #d97706);
    }

    .stat-icon.event {
        background: linear-gradient(135deg, #10b981, #059669);
    }

    .stat-icon.total {
        background: linear-gradient(135deg, var(--primary), var(--primary-dark));
    }

    .stat-icon svg {
        width: 24px;
        height: 24px;
        color: white;
    }

    .stat-info h3 {
        font-size: 24px;
        font-weight: 700;
        color: var(--text-dark);
        margin: 0;
    }

    .stat-info p {
        font-size: 13px;
        color: var(--text-gray);
        margin: 0;
    }

    /* Filtros */
    .filters-card {
        background: var(--bg-white);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 24px;
    }

    .filters-row {
        display: flex;
        flex-wrap: wrap;
        gap: 16px;
        align-items: flex-end;
    }

    .filter-group {
        flex: 1;
        min-width: 150px;
    }

    .filter-group label {
        display: block;
        font-size: 13px;
        font-weight: 600;
        color: var(--text-gray);
        margin-bottom: 6px;
    }

    .filter-group select,
    .filter-group input {
        width: 100%;
        padding: 10px 12px;
        border: 1px solid var(--border-color);
        border-radius: 8px;
        font-size: 14px;
        background: var(--bg-light);
        color: var(--text-dark);
    }

    .filter-group select:focus,
    .filter-group input:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 3px rgba(70, 130, 180, 0.1);
    }

    .filter-buttons {
        display: flex;
        gap: 8px;
    }

    .btn-filter {
        padding: 10px 20px;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        border: none;
        transition: all 0.2s;
    }

    .btn-filter.primary {
        background: var(--primary);
        color: white;
    }

    .btn-filter.primary:hover {
        background: var(--primary-dark);
    }

    .btn-filter.secondary {
        background: var(--bg-light);
        color: var(--text-dark);
        border: 1px solid var(--border-color);
    }

    .btn-filter.secondary:hover {
        background: var(--primary-pale);
    }

    /* Tabla de Logs */
    .logs-table-container {
        background: var(--bg-white);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        overflow: hidden;
    }

    .logs-table {
        width: 100%;
        border-collapse: collapse;
    }

    .logs-table th {
        background: var(--bg-light);
        padding: 14px 16px;
        text-align: left;
        font-size: 12px;
        font-weight: 600;
        color: var(--text-gray);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border-bottom: 1px solid var(--border-color);
    }

    .logs-table td {
        padding: 14px 16px;
        border-bottom: 1px solid var(--border-color);
        font-size: 14px;
        color: var(--text-dark);
        vertical-align: top;
    }

    .logs-table tr:last-child td {
        border-bottom: none;
    }

    .logs-table tr:hover {
        background: var(--bg-light);
    }

    .log-type {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 4px 10px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 600;
    }

    .log-type.error {
        background: #fef2f2;
        color: #dc2626;
    }

    .log-type.warning {
        background: #fffbeb;
        color: #d97706;
    }

    .log-type.info {
        background: #eff6ff;
        color: #2563eb;
    }

    .log-type.evento {
        background: #f0fdf4;
        color: #16a34a;
    }

    .log-category {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 500;
        background: var(--bg-light);
        color: var(--text-gray);
        border: 1px solid var(--border-color);
    }

    .log-message {
        max-width: 400px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .log-message.expandable {
        cursor: pointer;
    }

    .log-message.expandable:hover {
        color: var(--primary);
    }

    .log-user {
        font-size: 13px;
        color: var(--text-gray);
    }

    .log-date {
        font-size: 13px;
        color: var(--text-gray);
        white-space: nowrap;
    }

    /* Paginacion */
    .pagination-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px 20px;
        border-top: 1px solid var(--border-color);
        background: var(--bg-light);
    }

    .pagination-info {
        font-size: 14px;
        color: var(--text-gray);
    }

    .pagination-buttons {
        display: flex;
        gap: 8px;
    }

    .pagination-btn {
        padding: 8px 16px;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 500;
        cursor: pointer;
        border: 1px solid var(--border-color);
        background: var(--bg-white);
        color: var(--text-dark);
        transition: all 0.2s;
    }

    .pagination-btn:hover:not(:disabled) {
        background: var(--primary);
        color: white;
        border-color: var(--primary);
    }

    .pagination-btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    /* Modal de Detalle */
    .log-detail-modal {
        display: none;
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.5);
        z-index: 10000;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    .log-detail-modal.show {
        display: flex;
    }

    .log-detail-content {
        background: var(--bg-white, #ffffff);
        border-radius: 16px;
        max-width: 700px;
        width: 100%;
        max-height: 80vh;
        overflow-y: auto;
        box-shadow: var(--shadow-xl);
    }

    .log-detail-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 24px;
        border-bottom: 1px solid var(--border-color, #e2e8f0);
    }

    .log-detail-header h3 {
        font-size: 18px;
        font-weight: 600;
        color: var(--text-dark, #1a1a2e);
        margin: 0;
    }

    .log-detail-close {
        background: none;
        border: none;
        cursor: pointer;
        color: var(--text-gray, #64748b);
        padding: 8px;
    }

    .log-detail-close:hover {
        color: var(--text-dark, #1a1a2e);
    }

    .log-detail-body {
        padding: 24px;
    }

    .detail-row {
        margin-bottom: 16px;
    }

    .detail-row:last-child {
        margin-bottom: 0;
    }

    .detail-label {
        font-size: 12px;
        font-weight: 600;
        color: var(--text-gray, #64748b);
        text-transform: uppercase;
        margin-bottom: 4px;
    }

    .detail-value {
        font-size: 14px;
        color: var(--text-dark, #1a1a2e);
    }

    .detail-value.code {
        background: #1e293b;
        color: #e2e8f0;
        padding: 12px 16px;
        border-radius: 8px;
        font-family: 'Monaco', 'Menlo', monospace;
        font-size: 13px;
        white-space: pre-wrap;
        word-break: break-all;
        max-height: 300px;
        overflow-y: auto;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 60px 20px;
    }

    .empty-state svg {
        width: 64px;
        height: 64px;
        color: var(--text-gray);
        margin-bottom: 16px;
    }

    .empty-state h3 {
        font-size: 18px;
        font-weight: 600;
        color: var(--text-dark);
        margin-bottom: 8px;
    }

    .empty-state p {
        font-size: 14px;
        color: var(--text-gray);
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .stats-row {
            grid-template-columns: repeat(2, 1fr);
        }

        .filters-row {
            flex-direction: column;
        }

        .filter-group {
            width: 100%;
        }

        .logs-table {
            display: block;
            overflow-x: auto;
        }

        .log-message {
            max-width: 200px;
        }
    }
</style>

<div class="logs-header">
    <h1 class="logs-title">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
            <polyline points="14 2 14 8 20 8"/>
            <line x1="16" y1="13" x2="8" y2="13"/>
