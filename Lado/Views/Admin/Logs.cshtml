            </svg>
        </div>
        <div class="stat-info">
            <h3>@(estadisticas?.EventosHoy ?? 0)</h3>
            <p>Eventos hoy</p>
        </div>
    </div>
    <div class="stat-card">
        <div class="stat-icon total">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
