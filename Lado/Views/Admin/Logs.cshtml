</div>

<!-- Filtros -->
<form class="filters-card" method="get" asp-action="Logs">
    <div class="filters-row">
        <div class="filter-group">
            <label>Tipo</label>
            <select name="tipo" id="filtroTipo">
                <option value="">Todos</option>
                <option value="0" selected="@(filtro?.Tipo == Lado.Models.TipoLogEvento.Error)">Error</option>
                <option value="1" selected="@(filtro?.Tipo == Lado.Models.TipoLogEvento.Warning)">Warning</option>
                <option value="2" selected="@(filtro?.Tipo == Lado.Models.TipoLogEvento.Info)">Info</option>
                <option value="3" selected="@(filtro?.Tipo == Lado.Models.TipoLogEvento.Evento)">Evento</option>
            </select>
        </div>
        <div class="filter-group">
            <label>Categoria</label>
            <select name="categoria" id="filtroCategoria">
                <option value="">Todas</option>
                <option value="0" selected="@(filtro?.Categoria == Lado.Models.CategoriaEvento.Sistema)">Sistema</option>
                <option value="1" selected="@(filtro?.Categoria == Lado.Models.CategoriaEvento.Auth)">Auth</option>
                <option value="2" selected="@(filtro?.Categoria == Lado.Models.CategoriaEvento.Usuario)">Usuario</option>
                <option value="3" selected="@(filtro?.Categoria == Lado.Models.CategoriaEvento.Pago)">Pago</option>
                <option value="4" selected="@(filtro?.Categoria == Lado.Models.CategoriaEvento.Contenido)">Contenido</option>
                <option value="5" selected="@(filtro?.Categoria == Lado.Models.CategoriaEvento.Admin)">Admin</option>
                <option value="6" selected="@(filtro?.Categoria == Lado.Models.CategoriaEvento.Frontend)">Frontend</option>
            </select>
        </div>
        <div class="filter-group">
            <label>Desde</label>
            <input type="date" name="fechaDesde" value="@filtro?.FechaDesde?.ToString("yyyy-MM-dd")">
        </div>
        <div class="filter-group">
            <label>Hasta</label>
            <input type="date" name="fechaHasta" value="@filtro?.FechaHasta?.ToString("yyyy-MM-dd")">
        </div>
        <div class="filter-group" style="flex: 2;">
            <label>Buscar</label>
            <input type="text" name="busqueda" placeholder="Mensaje, usuario, detalle..." value="@filtro?.Busqueda">
        </div>
        <div class="filter-buttons">
            <button type="submit" class="btn-filter primary">Filtrar</button>
            <a href="@Url.Action("Logs")" class="btn-filter secondary">Limpiar</a>
        </div>
    </div>
</form>

<!-- Tabla de Logs -->
<div class="logs-table-container">
    @if (Model != null && Model.Any())
    {
        <table class="logs-table">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Tipo</th>
                    <th>Categoria</th>
                    <th>Mensaje</th>
                    <th>Usuario</th>
                    <th>IP</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model)
                {
                    var tipoClass = log.Tipo.ToString().ToLower();
                    <tr onclick="verDetalle(@log.Id)" style="cursor: pointer;">
                        <td class="log-date">@log.Fecha.ToString("dd/MM/yyyy HH:mm:ss")</td>
                        <td>
                            <span class="log-type @tipoClass">
                                @if (log.Tipo == Lado.Models.TipoLogEvento.Error)
                                {
                                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <circle cx="12" cy="12" r="10"/>
                                        <line x1="15" y1="9" x2="9" y2="15"/>
                                        <line x1="9" y1="9" x2="15" y2="15"/>
                                    </svg>
                                }
                                else if (log.Tipo == Lado.Models.TipoLogEvento.Warning)
                                {
                                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
                                    </svg>
                                }
                                else
                                {
                                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="20 6 9 17 4 12"/>
                                    </svg>
                                }
                                @log.Tipo
                            </span>
                        </td>
                        <td><span class="log-category">@log.Categoria</span></td>
                        <td>
                            <div class="log-message expandable" title="@log.Mensaje">@log.Mensaje</div>
                        </td>
                        <td class="log-user">@(log.UsuarioNombre ?? "-")</td>
                        <td class="log-user">@(log.IpAddress ?? "-")</td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Paginacion -->
        <div class="pagination-container">
            <div class="pagination-info">
                Mostrando @((resultado?.Pagina - 1) * resultado?.TamanoPagina + 1) - @Math.Min(resultado?.Pagina * resultado?.TamanoPagina ?? 0, resultado?.Total ?? 0) de @resultado?.Total registros
            </div>
            <div class="pagination-buttons">
                @if (resultado?.Pagina > 1)
                {
                    <a href="@Url.Action("Logs", new { tipo = filtro?.Tipo, categoria = filtro?.Categoria, fechaDesde = filtro?.FechaDesde, fechaHasta = filtro?.FechaHasta, busqueda = filtro?.Busqueda, pagina = resultado.Pagina - 1 })" class="pagination-btn">Anterior</a>
                }
                else
                {
                    <button class="pagination-btn" disabled>Anterior</button>
                }

                @if (resultado?.Pagina < resultado?.TotalPaginas)
                {
                    <a href="@Url.Action("Logs", new { tipo = filtro?.Tipo, categoria = filtro?.Categoria, fechaDesde = filtro?.FechaDesde, fechaHasta = filtro?.FechaHasta, busqueda = filtro?.Busqueda, pagina = resultado.Pagina + 1 })" class="pagination-btn">Siguiente</a>
                }
                else
                {
                    <button class="pagination-btn" disabled>Siguiente</button>
                }
            </div>
        </div>
    }
    else
    {
        <div class="empty-state">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                <polyline points="14 2 14 8 20 8"/>
            </svg>
            <h3>No hay logs</h3>
            <p>No se encontraron registros con los filtros seleccionados</p>
        </div>
    }
</div>

<!-- Token CSRF para AJAX -->
@Html.AntiForgeryToken()

<!-- Modal de Detalle -->
<div class="log-detail-modal" id="detalleModal">
    <div class="log-detail-content">
        <div class="log-detail-header">
            <h3>Detalle del Log</h3>
            <button class="log-detail-close" onclick="cerrarModal()">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"/>
                    <line x1="6" y1="6" x2="18" y2="18"/>
                </svg>
            </button>
        </div>
        <div class="log-detail-body" id="detalleBody">
            <!-- Contenido cargado dinamicamente -->
        </div>
    </div>
</div>

@section Scripts {
<script>
    async function verDetalle(id) {
        try {
            const response = await fetch(`/Admin/ObtenerDetalleLogs?id=${id}`);
            const data = await response.json();

            if (data.success) {
                const log = data.log;
                document.getElementById('detalleBody').innerHTML = `
                    <div class="detail-row">
                        <div class="detail-label">Fecha</div>
                        <div class="detail-value">${log.fecha}</div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label">Tipo</div>
                        <div class="detail-value"><span class="log-type ${log.tipo.toLowerCase()}">${log.tipo}</span></div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label">Categoria</div>
                        <div class="detail-value"><span class="log-category">${log.categoria}</span></div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label">Mensaje</div>
                        <div class="detail-value">${log.mensaje}</div>
                    </div>
                    ${log.tipoExcepcion ? `
                    <div class="detail-row">
                        <div class="detail-label">Tipo de Excepcion</div>
                        <div class="detail-value">${log.tipoExcepcion}</div>
                    </div>` : ''}
                    ${log.usuarioNombre ? `
                    <div class="detail-row">
                        <div class="detail-label">Usuario</div>
                        <div class="detail-value">${log.usuarioNombre} ${log.usuarioId ? `(${log.usuarioId})` : ''}</div>
                    </div>` : ''}
                    ${log.url ? `
                    <div class="detail-row">
                        <div class="detail-label">URL</div>
                        <div class="detail-value">${log.metodoHttp || ''} ${log.url}</div>
                    </div>` : ''}
                    ${log.ipAddress ? `
                    <div class="detail-row">
                        <div class="detail-label">IP</div>
                        <div class="detail-value">${log.ipAddress}</div>
                    </div>` : ''}
                    ${log.userAgent ? `
                    <div class="detail-row">
                        <div class="detail-label">User Agent</div>
                        <div class="detail-value" style="font-size: 12px; word-break: break-all;">${log.userAgent}</div>
                    </div>` : ''}
                    ${log.detalle ? `
                    <div class="detail-row">
                        <div class="detail-label">Detalle / Stack Trace</div>
                        <div class="detail-value code">${escapeHtml(log.detalle)}</div>
                    </div>` : ''}
                `;
                document.getElementById('detalleModal').classList.add('show');
            }
        } catch (error) {
        }
    }

    function cerrarModal() {
        document.getElementById('detalleModal').classList.remove('show');
    }

    document.getElementById('detalleModal').addEventListener('click', function(e) {
        if (e.target === this) cerrarModal();
    });

    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') cerrarModal();
    });

    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }

    async function limpiarLogs() {
        if (!confirm('Esto eliminara todos los logs con mas de 30 dias de antiguedad. Continuar?')) return;

        try {
            const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
            const response = await fetch('/Admin/LimpiarLogs', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-TOKEN': token
                }
            });

            const data = await response.json();
            if (data.success) {
                alert(data.message);
                location.reload();
            } else {
                alert('Error al limpiar logs');
            }
        } catch (error) {
            alert('Error al limpiar logs');
        }
    }
</script>
