@{
    ViewData["Title"] = "IPs Bloqueadas";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var ipsBloqueadas = ViewBag.IpsBloqueadas as List<Lado.Models.IpBloqueada> ?? new List<Lado.Models.IpBloqueada>();
    var intentosRecientes = ViewBag.IntentosRecientes as List<Lado.Models.IntentoAtaque> ?? new List<Lado.Models.IntentoAtaque>();
    var filtroActual = ViewBag.FiltroActual as string;
    var tipoActual = ViewBag.TipoActual as string;
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
        flex-wrap: wrap;
        gap: 16px;
    }

    .page-header h2 {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-dark);
        margin: 0;
    }

    .btn-bloquear {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        background: #ef4444;
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.875rem;
        cursor: pointer;
        transition: all 0.2s;
    }

    .btn-bloquear:hover {
        background: #dc2626;
        transform: translateY(-2px);
    }

    /* Stats */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 16px;
        margin-bottom: 24px;
    }

    .stat-box {
        background: var(--bg-white);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 20px;
        text-align: center;
    }

    .stat-box h3 {
        font-size: 1.75rem;
        font-weight: 800;
        margin: 0 0 4px 0;
    }

    .stat-box p {
        font-size: 0.8125rem;
        color: var(--text-gray);
        margin: 0;
    }

    .stat-box.danger h3 { color: #ef4444; }
    .stat-box.warning h3 { color: #f59e0b; }
    .stat-box.info h3 { color: #3b82f6; }

    /* Filters */
    .filters-bar {
        display: flex;
        gap: 12px;
        margin-bottom: 20px;
        flex-wrap: wrap;
    }

    .filter-group {
        display: flex;
        gap: 4px;
        background: var(--bg-light);
        padding: 4px;
        border-radius: 8px;
    }

    .filter-btn {
        padding: 8px 14px;
        border: none;
        background: transparent;
        border-radius: 6px;
        font-size: 0.8125rem;
        font-weight: 500;
        color: var(--text-gray);
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none;
    }

    .filter-btn:hover {
        color: var(--text-dark);
    }

    .filter-btn.active {
        background: var(--bg-white);
        color: var(--text-dark);
        box-shadow: var(--shadow-sm);
    }

    /* Table */
    .table-container {
        background: var(--bg-white);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        overflow: hidden;
    }

    .table-header {
        padding: 16px 20px;
        border-bottom: 1px solid var(--border-color);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .table-header h3 {
        font-size: 1rem;
        font-weight: 600;
        margin: 0;
    }

    .ip-table {
        width: 100%;
        border-collapse: collapse;
    }

    .ip-table th {
        text-align: left;
        padding: 12px 20px;
        font-size: 0.75rem;
        font-weight: 600;
        color: var(--text-gray);
        text-transform: uppercase;
        background: var(--bg-light);
        border-bottom: 1px solid var(--border-color);
    }

    .ip-table td {
        padding: 14px 20px;
        border-bottom: 1px solid var(--border-color);
        font-size: 0.875rem;
    }

    .ip-table tr:last-child td {
        border-bottom: none;
    }

    .ip-table tr:hover {
        background: var(--bg-light);
    }

    .ip-address {
        font-family: 'SF Mono', Monaco, 'Courier New', monospace;
        font-weight: 600;
        color: var(--text-dark);
    }

    .badge-tipo {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        padding: 4px 10px;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .badge-tipo.manual {
        background: #dbeafe;
        color: #1e40af;
    }

    .badge-tipo.automatico {
        background: #fef3c7;
        color: #92400e;
    }

    .badge-ataque {
        display: inline-block;
        padding: 2px 8px;
        border-radius: 4px;
        font-size: 0.7rem;
        font-weight: 600;
        background: #fee2e2;
        color: #991b1b;
    }

    .badge-estado {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        padding: 4px 10px;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .badge-estado.activo {
        background: #dcfce7;
        color: #166534;
    }

    .badge-estado.activo::before {
        content: '';
        width: 6px;
        height: 6px;
        border-radius: 50%;
        background: #22c55e;
    }

    .badge-estado.inactivo {
        background: #f3f4f6;
        color: #6b7280;
    }

    .fecha-cell {
        font-size: 0.8125rem;
        color: var(--text-gray);
    }

    .intentos-cell {
        font-weight: 600;
        color: #ef4444;
    }

    .btn-action {
        padding: 6px 12px;
        border: none;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
    }

    .btn-desbloquear {
        background: #dcfce7;
        color: #166534;
    }

    .btn-desbloquear:hover {
        background: #bbf7d0;
    }

    .btn-eliminar {
        background: #fee2e2;
        color: #991b1b;
    }

    .btn-eliminar:hover {
        background: #fecaca;
    }

    /* Intentos recientes */
    .intentos-section {
        margin-top: 32px;
    }

    .intento-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 20px;
        border-bottom: 1px solid var(--border-color);
    }

    .intento-item:last-child {
        border-bottom: none;
    }

    .intento-info {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .intento-ip {
        font-family: 'SF Mono', Monaco, monospace;
        font-weight: 600;
        font-size: 0.875rem;
    }

    .intento-fecha {
        font-size: 0.75rem;
        color: var(--text-gray);
    }

    /* Modal */
    .modal-backdrop {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.5);
        backdrop-filter: blur(4px);
        z-index: 1000;
        align-items: center;
        justify-content: center;
    }

    .modal-backdrop.active {
        display: flex;
    }

    .modal-content {
        background: var(--bg-white);
        border-radius: 16px;
        max-width: 480px;
        width: 90%;
    }

    .modal-header {
        padding: 20px 24px;
        border-bottom: 1px solid var(--border-color);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .modal-header h3 {
        font-size: 1.125rem;
        font-weight: 700;
        margin: 0;
    }

    .modal-close {
        background: none;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
        color: var(--text-gray);
    }

    .modal-body {
        padding: 24px;
    }

    .modal-footer {
        padding: 16px 24px;
        border-top: 1px solid var(--border-color);
        display: flex;
        gap: 12px;
        justify-content: flex-end;
    }

    .form-group {
        margin-bottom: 16px;
    }

    .form-group label {
        display: block;
        font-size: 0.875rem;
        font-weight: 600;
        margin-bottom: 8px;
    }

    .form-group input,
    .form-group textarea,
    .form-group select {
        width: 100%;
        padding: 10px 14px;
        border: 1px solid var(--border-color);
        border-radius: 8px;
        font-size: 0.9375rem;
        font-family: inherit;
    }

    .form-group input:focus,
    .form-group textarea:focus,
    .form-group select:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 3px var(--primary-pale);
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: var(--text-gray);
    }

    .empty-state svg {
        width: 64px;
        height: 64px;
        margin-bottom: 16px;
        opacity: 0.5;
    }

    @@media (max-width: 1024px) {
        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (max-width: 768px) {
        .stats-grid {
            grid-template-columns: 1fr;
        }

        .ip-table {
            display: block;
            overflow-x: auto;
        }
    }
</style>

<div class="page-header">
    <h2>IPs Bloqueadas</h2>
    <button class="btn-bloquear" onclick="abrirModalBloquear()">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="4.93" y1="4.93" x2="19.07" y2="19.07"></line>
        </svg>
        Bloquear IP
    </button>
</div>

<!-- Stats -->
<div class="stats-grid">
    <div class="stat-box danger">
        <h3>@ViewBag.TotalActivas</h3>
        <p>IPs Activas</p>
    </div>
    <div class="stat-box info">
        <h3>@ViewBag.TotalManuales</h3>
        <p>Bloqueos Manuales</p>
    </div>
    <div class="stat-box warning">
        <h3>@ViewBag.TotalAutomaticas</h3>
        <p>Bloqueos Automaticos</p>
    </div>
    <div class="stat-box">
        <h3>@ViewBag.BloqueosHoy</h3>
        <p>Bloqueadas Hoy</p>
    </div>
</div>

<!-- Filters -->
<div class="filters-bar">
    <div class="filter-group">
        <a href="?tipo=@tipoActual" class="filter-btn @(string.IsNullOrEmpty(filtroActual) ? "active" : "")">Todas</a>
        <a href="?filtro=activas&tipo=@tipoActual" class="filter-btn @(filtroActual == "activas" ? "active" : "")">Activas</a>
        <a href="?filtro=inactivas&tipo=@tipoActual" class="filter-btn @(filtroActual == "inactivas" ? "active" : "")">Inactivas</a>
    </div>
    <div class="filter-group">
        <a href="?filtro=@filtroActual" class="filter-btn @(string.IsNullOrEmpty(tipoActual) ? "active" : "")">Todos</a>
        <a href="?filtro=@filtroActual&tipo=manual" class="filter-btn @(tipoActual == "manual" ? "active" : "")">Manuales</a>
        <a href="?filtro=@filtroActual&tipo=automatico" class="filter-btn @(tipoActual == "automatico" ? "active" : "")">Automaticos</a>
    </div>
</div>

<!-- Table -->
<div class="table-container">
    <div class="table-header">
        <h3>Lista de IPs (@ipsBloqueadas.Count)</h3>
    </div>

    @if (ipsBloqueadas.Count > 0)
    {
        <table class="ip-table">
            <thead>
                <tr>
                    <th>IP</th>
                    <th>Tipo</th>
                    <th>Razon</th>
                    <th>Fecha Bloqueo</th>
                    <th>Expiracion</th>
                    <th>Intentos</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ip in ipsBloqueadas)
                {
                    <tr>
                        <td class="ip-address">@ip.DireccionIp</td>
                        <td>
                            <span class="badge-tipo @(ip.TipoBloqueo == Lado.Models.TipoBloqueoIp.Manual ? "manual" : "automatico")">
                                @(ip.TipoBloqueo == Lado.Models.TipoBloqueoIp.Manual ? "Manual" : "Auto")
                            </span>
                            @if (ip.TipoAtaque != Lado.Models.TipoAtaque.Ninguno)
                            {
                                <span class="badge-ataque">@ip.TipoAtaque</span>
                            }
                        </td>
                        <td>@(ip.Razon ?? "-")</td>
                        <td class="fecha-cell">@ip.FechaBloqueo.ToString("dd/MM/yyyy HH:mm")</td>
                        <td class="fecha-cell">
                            @if (ip.FechaExpiracion.HasValue)
                            {
                                @ip.FechaExpiracion.Value.ToString("dd/MM/yyyy")
                            }
                            else
                            {
                                <span style="color: #ef4444; font-weight: 600;">Permanente</span>
                            }
                        </td>
                        <td class="intentos-cell">@ip.IntentosBloqueos</td>
                        <td>
                            <span class="badge-estado @(ip.EstaActivo ? "activo" : "inactivo")">
                                @(ip.EstaActivo ? "Activo" : "Inactivo")
                            </span>
                        </td>
                        <td>
                            @if (ip.EstaActivo)
                            {
                                <button class="btn-action btn-desbloquear" onclick="desbloquearIp(@ip.Id, '@ip.DireccionIp')">
                                    Desbloquear
                                </button>
                            }
                            else
                            {
                                <span style="color: var(--text-light); font-size: 0.75rem;">Desbloqueada</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="empty-state">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
            </svg>
            <h3>Sin IPs bloqueadas</h3>
            <p>No hay IPs que coincidan con los filtros seleccionados.</p>
        </div>
    }
</div>

<!-- Intentos recientes -->
@if (intentosRecientes.Count > 0)
{
    <div class="intentos-section">
        <div class="table-container">
            <div class="table-header">
                <h3>Intentos de Ataque Recientes</h3>
            </div>
            @foreach (var intento in intentosRecientes)
            {
                <div class="intento-item">
                    <div class="intento-info">
                        <span class="intento-ip">@intento.DireccionIp</span>
                        <span class="badge-ataque">@intento.TipoAtaque</span>
                        @if (!string.IsNullOrEmpty(intento.Endpoint))
                        {
                            <span style="font-size: 0.75rem; color: var(--text-gray);">@intento.Endpoint</span>
                        }
                    </div>
                    <span class="intento-fecha">@intento.Fecha.ToString("dd/MM HH:mm:ss")</span>
                </div>
            }
        </div>
    </div>
}

<!-- Modal Bloquear IP -->
<div class="modal-backdrop" id="modalBloquear">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Bloquear IP</h3>
            <button class="modal-close" onclick="cerrarModal()">&times;</button>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label for="ipInput">Direccion IP</label>
                <input type="text" id="ipInput" placeholder="Ej: 192.168.1.1">
            </div>
            <div class="form-group">
                <label for="razonInput">Razon (opcional)</label>
                <textarea id="razonInput" rows="3" placeholder="Razon del bloqueo..."></textarea>
            </div>
            <div class="form-group">
                <label>
                    <input type="checkbox" id="permanenteCheck" checked> Bloqueo permanente
                </label>
            </div>
            <div class="form-group" id="expiracionGroup" style="display: none;">
                <label for="expiracionInput">Fecha de expiracion</label>
                <input type="datetime-local" id="expiracionInput">
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-outline-primary" onclick="cerrarModal()">Cancelar</button>
            <button class="btn btn-danger" onclick="bloquearIp()" style="background: #ef4444; color: white;">Bloquear</button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function abrirModalBloquear() {
            document.getElementById('modalBloquear').classList.add('active');
        }

        function cerrarModal() {
            document.getElementById('modalBloquear').classList.remove('active');
            document.getElementById('ipInput').value = '';
            document.getElementById('razonInput').value = '';
            document.getElementById('permanenteCheck').checked = true;
            document.getElementById('expiracionGroup').style.display = 'none';
        }

        document.getElementById('permanenteCheck').addEventListener('change', function() {
            document.getElementById('expiracionGroup').style.display = this.checked ? 'none' : 'block';
        });

        async function bloquearIp() {
            const ip = document.getElementById('ipInput').value.trim();
            const razon = document.getElementById('razonInput').value.trim();
            const permanente = document.getElementById('permanenteCheck').checked;
            const expiracion = document.getElementById('expiracionInput').value;

            if (!ip) {
                alert('Por favor ingresa una direccion IP');
                return;
            }

            try {
                const response = await fetch('/Admin/BloquearIp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    },
                    body: JSON.stringify({
                        direccionIp: ip,
                        razon: razon || null,
                        permanente: permanente,
                        fechaExpiracion: permanente ? null : expiracion
                    })
                });

                const result = await response.json();
                if (result.success) {
                    location.reload();
                } else {
                    alert(result.message || 'Error al bloquear IP');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error al procesar la solicitud');
            }
        }

        async function desbloquearIp(id, ip) {
            if (!confirm(`Â¿Desbloquear la IP ${ip}?`)) return;

            try {
                const response = await fetch('/Admin/DesbloquearIp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    },
                    body: JSON.stringify({ id: id })
                });

                const result = await response.json();
                if (result.success) {
                    location.reload();
                } else {
                    alert(result.message || 'Error al desbloquear IP');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error al procesar la solicitud');
            }
        }

        // Cerrar modal con Escape
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') cerrarModal();
        });

        document.getElementById('modalBloquear').addEventListener('click', function(e) {
            if (e.target === this) cerrarModal();
        });
    </script>
    @Html.AntiForgeryToken()
}
