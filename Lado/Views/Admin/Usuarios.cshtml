<script>
(function() {
    'use strict';

    // ========================================
    // DATOS DE USUARIOS (cargados desde JSON)
    // ========================================
    var usuariosData = {};
    try {
        var dataElement = document.getElementById('usuariosData');
        if (dataElement) {
            usuariosData = JSON.parse(dataElement.textContent);
        }
    } catch (e) {
        console.error('Error parsing usuarios data:', e);
    }

    function getUsername(userId) {
        return usuariosData[userId] || 'este usuario';
    }

    // ========================================
    // TABS
    // ========================================
    window.switchTab = function(tabId) {
        document.querySelectorAll('.tab-btn').forEach(function(btn) { btn.classList.remove('active'); });
        document.querySelectorAll('.tab-content').forEach(function(content) { content.classList.remove('active'); });
        var tabBtn = document.querySelector('[onclick="switchTab(\'' + tabId + '\')"]');
        if (tabBtn) tabBtn.classList.add('active');
        var tabContent = document.getElementById('tab-' + tabId);
        if (tabContent) tabContent.classList.add('active');
    };

    // ========================================
    // SEARCH & FILTERS
    // ========================================
    window.filterUsers = function() {
        var searchInput = document.getElementById('searchInput');
        var filterTipo = document.getElementById('filterTipo');
        var filterEstado = document.getElementById('filterEstado');

        var search = searchInput ? searchInput.value.toLowerCase() : '';
        var tipo = filterTipo ? filterTipo.value : '';
        var estado = filterEstado ? filterEstado.value : '';
        var rows = document.querySelectorAll('.user-row');
        var visible = 0;

        rows.forEach(function(row) {
            var name = row.getAttribute('data-name') || '';
            var rowTipo = row.getAttribute('data-tipo');
            var rowEstado = row.getAttribute('data-estado');

            var matchSearch = !search || name.indexOf(search) !== -1;
            var matchTipo = !tipo || rowTipo === tipo;
            var matchEstado = !estado || rowEstado === estado;

            if (matchSearch && matchTipo && matchEstado) {
                row.style.display = '';
                visible++;
            } else {
                row.style.display = 'none';
            }
        });

        var visibleCount = document.getElementById('visibleCount');
        if (visibleCount) visibleCount.textContent = visible;
    };

    // ========================================
    // ACTIONS DROPDOWN
    // ========================================
    window.toggleActionsMenu = function(btn) {
        var menu = btn.nextElementSibling;
        var wasOpen = menu && menu.classList.contains('show');

        document.querySelectorAll('.actions-menu.show').forEach(function(m) { m.classList.remove('show'); });

        if (!wasOpen && menu) {
            menu.classList.add('show');
        }
    };

    // ========================================
    // PASSWORD FUNCTIONS
    // ========================================
    window.togglePasswordVisibility = function() {
        var input = document.getElementById('nuevaContrasenaInput');
        if (input) input.type = input.type === 'password' ? 'text' : 'password';
    };

    window.toggleCrearPasswordVisibility = function() {
        var input = document.getElementById('crearPasswordInput');
        if (input) input.type = input.type === 'password' ? 'text' : 'password';
    };

    window.generarPassword = function() {
        var chars = 'abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!#$%';
        var password = '';
        password += 'abcdefghijklmnopqrstuvwxyz'.charAt(Math.floor(Math.random() * 26));
        password += 'ABCDEFGHIJKLMNOPQRSTUVWXYZ'.charAt(Math.floor(Math.random() * 26));
        password += '0123456789'.charAt(Math.floor(Math.random() * 10));
        for (var i = 0; i < 9; i++) {
            password += chars.charAt(Math.floor(Math.random() * chars.length));
        }
        password = password.split('').sort(function() { return Math.random() - 0.5; }).join('');
        var input = document.getElementById('crearPasswordInput');
        if (input) {
            input.value = password;
            input.type = 'text';
        }
    };

    // ========================================
    // COMISION FUNCTIONS
    // ========================================
    window.toggleRetencionPersonalizada = function(usarPais) {
        var div = document.getElementById('retencionPersonalizadaDiv');
        if (div) div.style.display = usarPais ? 'none' : 'block';
    };

    window.recalcularEjemplo = function() {
        var comisionInput = document.getElementById('comisionRetiroInput');
        var usarPaisCheck = document.getElementById('usarRetencionPaisCheck');
        var paisRetencionValor = document.getElementById('paisRetencionValor');
        var retencionInput = document.getElementById('retencionImpuestosInput');

        var comision = comisionInput ? parseFloat(comisionInput.value) || 0 : 0;
        var usarPais = usarPaisCheck ? usarPaisCheck.checked : false;
        var retencion = usarPais
            ? (paisRetencionValor ? parseFloat(paisRetencionValor.textContent) || 0 : 0)
            : (retencionInput ? parseFloat(retencionInput.value) || 0 : 0);
        actualizarEjemploCompleto(comision, retencion);
    };

    function actualizarEjemploCompleto(comision, retencion) {
        var montoBruto = 100;
        var descuentoComision = (montoBruto * comision / 100);
        var descuentoImpuesto = (montoBruto * retencion / 100);
        var totalDescuento = descuentoComision + descuentoImpuesto;
        var neto = montoBruto - totalDescuento;

        var el;
        el = document.getElementById('ejemploComision'); if (el) el.textContent = comision.toFixed(1);
        el = document.getElementById('ejemploDescuento'); if (el) el.textContent = descuentoComision.toFixed(2);
        el = document.getElementById('ejemploImpuesto'); if (el) el.textContent = retencion.toFixed(1);
        el = document.getElementById('ejemploImpuestoMonto'); if (el) el.textContent = descuentoImpuesto.toFixed(2);
        el = document.getElementById('ejemploTotalDescuento'); if (el) el.textContent = totalDescuento.toFixed(2);
        el = document.getElementById('ejemploNeto'); if (el) el.textContent = neto.toFixed(2);
    }

    // ========================================
    // INIT ON DOM READY
    // ========================================
    function initPage() {
        // Close menus on click outside
        document.addEventListener('click', function(e) {
            if (!e.target.closest('.actions-dropdown')) {
                document.querySelectorAll('.actions-menu.show').forEach(function(m) { m.classList.remove('show'); });
            }
        });

        // Confirmaciones de bloquear/desbloquear
        document.querySelectorAll('.form-bloquear').forEach(function(form) {
            form.addEventListener('submit', function(e) {
                var userId = this.getAttribute('data-userid');
                var username = getUsername(userId);
                if (!confirm('¿Bloquear a ' + username + '?')) {
                    e.preventDefault();
                }
            });
        });

        document.querySelectorAll('.form-desbloquear').forEach(function(form) {
            form.addEventListener('submit', function(e) {
                var userId = this.getAttribute('data-userid');
                var username = getUsername(userId);
                if (!confirm('¿Desbloquear a ' + username + '?')) {
                    e.preventDefault();
                }
            });
        });

        // Modal Eliminar - Con AJAX y logging
        var eliminarModal = document.getElementById('eliminarModal');
        var eliminarUserId = null;
        var eliminarUsername = null;

        if (eliminarModal) {
            eliminarModal.addEventListener('show.bs.modal', function(event) {
                var button = event.relatedTarget;
                console.log('[ELIMINAR] Modal abierto, button:', button);

                if (!button) {
                    console.error('[ELIMINAR] ERROR: No se encontró el botón que abrió el modal');
                    return;
                }

                eliminarUserId = button.getAttribute('data-userid');
                eliminarUsername = getUsername(eliminarUserId);

                console.log('[ELIMINAR] UserId:', eliminarUserId);
                console.log('[ELIMINAR] Username:', eliminarUsername);

                var userIdInput = document.getElementById('eliminarUserId');
                var modalUsername = document.getElementById('modalUsername');

                if (userIdInput) {
                    userIdInput.value = eliminarUserId || '';
                    console.log('[ELIMINAR] Input hidden actualizado:', userIdInput.value);
                }
                if (modalUsername) {
                    modalUsername.textContent = eliminarUsername;
                }
            });
        }

        // Handler del formulario de eliminar - usa AJAX
        var formEliminar = document.getElementById('formEliminar');
        if (formEliminar) {
            formEliminar.addEventListener('submit', function(e) {
                e.preventDefault();
                console.log('[ELIMINAR-SUBMIT] Formulario enviado');

                var userIdInput = document.getElementById('eliminarUserId');
                var userId = userIdInput ? userIdInput.value : eliminarUserId;

                console.log('[ELIMINAR-SUBMIT] UserId a eliminar:', userId);

                if (!userId) {
                    alert('Error: No se pudo obtener el ID del usuario');
                    console.error('[ELIMINAR-SUBMIT] ERROR: userId vacío');
                    return;
                }

                // Mostrar loading
                var submitBtn = formEliminar.querySelector('button[type="submit"]');
                var originalText = submitBtn ? submitBtn.innerHTML : '';
                if (submitBtn) {
                    submitBtn.disabled = true;
                    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Eliminando...';
                }

                console.log('[ELIMINAR-SUBMIT] Enviando request AJAX...');

                fetch('/Admin/EliminarUsuarioAjax', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ UserId: userId })
                })
                .then(function(response) {
                    console.log('[ELIMINAR-RESPONSE] Status:', response.status);
                    console.log('[ELIMINAR-RESPONSE] Content-Type:', response.headers.get('content-type'));

                    if (!response.ok) {
                        return response.text().then(function(text) {
                            console.error('[ELIMINAR-RESPONSE] Error body:', text);
                            throw new Error('HTTP ' + response.status + ': ' + (text || 'Sin respuesta del servidor'));
                        });
                    }
                    return response.json();
                })
                .then(function(data) {
                    console.log('[ELIMINAR-RESPONSE] Data:', data);

                    if (data.success) {
                        alert('Usuario eliminado correctamente');
                        window.location.reload();
                    } else {
                        alert('Error: ' + data.message + '\nPaso: ' + data.step + (data.details ? '\nDetalles: ' + data.details : ''));
                        if (submitBtn) {
                            submitBtn.disabled = false;
                            submitBtn.innerHTML = originalText;
                        }
                    }
                })
                .catch(function(error) {
                    console.error('[ELIMINAR-ERROR]', error);
                    alert('Error: ' + error.message);
                    if (submitBtn) {
                        submitBtn.disabled = false;
                        submitBtn.innerHTML = originalText;
                    }
                });
            });
        }

        // Modal Cambiar Contraseña
        var cambiarContrasenaModal = document.getElementById('cambiarContrasenaModal');
        if (cambiarContrasenaModal) {
            cambiarContrasenaModal.addEventListener('show.bs.modal', function(event) {
                var button = event.relatedTarget;
                if (!button) return;
                var userId = button.getAttribute('data-userid');
                var username = getUsername(userId);
                var form = document.getElementById('formCambiarContrasena');
                var modalUsername = document.getElementById('modalPasswordUsername');
                var passwordInput = document.getElementById('nuevaContrasenaInput');
                if (form) form.action = '/Admin/CambiarContrasena/' + userId;
                if (modalUsername) modalUsername.textContent = username;
                if (passwordInput) passwordInput.value = '';
            });
        }

        // Modal Comisión
        var comisionModal = document.getElementById('comisionModal');
        if (comisionModal) {
            comisionModal.addEventListener('show.bs.modal', function(event) {
                var button = event.relatedTarget;
                if (!button) return;
                var userId = button.getAttribute('data-userid');
                var username = getUsername(userId);
                var comision = parseFloat(button.getAttribute('data-comision')) || 20;
                var minimo = parseFloat(button.getAttribute('data-minimo')) || 50;
                var pais = button.getAttribute('data-pais') || '';
                var paisNombre = button.getAttribute('data-paisnombre') || 'No definido';
                var paisRetencion = parseFloat(button.getAttribute('data-paisretencion')) || 0;
                var usarRetencionPais = button.getAttribute('data-usarretencionpais') === 'true';
                var retencionPersonalizada = parseFloat(button.getAttribute('data-retencion')) || 0;

                var el;
                el = document.getElementById('comisionUserId'); if (el) el.value = userId;
                el = document.getElementById('comisionUsername'); if (el) el.textContent = username;
                el = document.getElementById('comisionRetiroInput'); if (el) el.value = comision;
                el = document.getElementById('montoMinimoInput'); if (el) el.value = minimo;
                el = document.getElementById('paisUsuario'); if (el) el.textContent = pais || 'Sin país';
                el = document.getElementById('paisRetencionNombre'); if (el) el.textContent = paisNombre;
                el = document.getElementById('paisRetencionValor'); if (el) el.textContent = paisRetencion.toFixed(1);
                el = document.getElementById('usarRetencionPaisCheck'); if (el) el.checked = usarRetencionPais;
                el = document.getElementById('retencionImpuestosInput'); if (el) el.value = retencionPersonalizada;

                toggleRetencionPersonalizada(usarRetencionPais);
                var retencionActual = usarRetencionPais ? paisRetencion : retencionPersonalizada;
                actualizarEjemploCompleto(comision, retencionActual);
            });
        }

        // Checkbox retención
        var usarRetencionCheck = document.getElementById('usarRetencionPaisCheck');
        if (usarRetencionCheck) {
            usarRetencionCheck.addEventListener('change', function() {
                toggleRetencionPersonalizada(this.checked);
                recalcularEjemplo();
            });
        }

        // Inputs comisión
        var comisionRetiroInput = document.getElementById('comisionRetiroInput');
        if (comisionRetiroInput) comisionRetiroInput.addEventListener('input', recalcularEjemplo);

        var retencionImpuestosInput = document.getElementById('retencionImpuestosInput');
        if (retencionImpuestosInput) retencionImpuestosInput.addEventListener('input', recalcularEjemplo);

        // Select rol
        var selectRol = document.querySelector('select[name="rol"]');
        if (selectRol) {
            selectRol.addEventListener('change', function() {
                var tipoCreadorDiv = document.getElementById('tipoCreadorDiv');
                var creadorVerificadoCheck = document.getElementById('creadorVerificadoCheck');

                if (tipoCreadorDiv) tipoCreadorDiv.style.display = this.value === 'Creador' ? 'block' : 'none';
                if (creadorVerificadoCheck) {
                    creadorVerificadoCheck.disabled = this.value === 'Usuario';
                    if (this.value === 'Usuario') creadorVerificadoCheck.checked = false;
                }
            });
        }

        // Modal crear usuario reset
        var crearUsuarioModal = document.getElementById('crearUsuarioModal');
        if (crearUsuarioModal) {
            crearUsuarioModal.addEventListener('hidden.bs.modal', function() {
                var form = document.getElementById('formCrearUsuario');
                var tipoCreadorDiv = document.getElementById('tipoCreadorDiv');
                var passwordInput = document.getElementById('crearPasswordInput');
                if (form) form.reset();
                if (tipoCreadorDiv) tipoCreadorDiv.style.display = 'none';
                if (passwordInput) passwordInput.type = 'password';
            });
        }
    }

    // Run init when DOM is ready
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initPage);
    } else {
        initPage();
    }
})();
</script>
