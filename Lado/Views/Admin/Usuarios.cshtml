            <div class="stat-header">
                <div class="stat-icon blue">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                        <circle cx="9" cy="7" r="4"/>
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                    </svg>
                </div>
            </div>
            <div class="stat-value">@totalUsuarios</div>
            <div class="stat-label">Total Usuarios</div>
        </div>

        <div class="stat-card">
            <div class="stat-header">
                <div class="stat-icon green">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                    </svg>
                </div>
            </div>
            <div class="stat-value">@totalCreadores</div>
            <div class="stat-label">Creadores</div>
        </div>

        <div class="stat-card">
            <div class="stat-header">
                <div class="stat-icon purple">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                        <polyline points="22 4 12 14.01 9 11.01"/>
                    </svg>
                </div>
            </div>
            <div class="stat-value">@totalVerificados</div>
            <div class="stat-label">Verificados</div>
        </div>

        <div class="stat-card">
            <div class="stat-header">
                <div class="stat-icon yellow">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"/>
                        <polyline points="12 6 12 12 16 14"/>
                    </svg>
                </div>
            </div>
            <div class="stat-value">@verificacionesPendientes.Count</div>
            <div class="stat-label">Pendientes</div>
        </div>

        <div class="stat-card">
            <div class="stat-header">
                <div class="stat-icon red">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"/>
                        <line x1="4.93" y1="4.93" x2="19.07" y2="19.07"/>
                    </svg>
                </div>
            </div>
            <div class="stat-value">@totalBloqueados</div>
            <div class="stat-label">Bloqueados</div>
        </div>
    </div>

    <!-- Tabs -->
    <div class="tabs-container">
        <button class="tab-btn active" onclick="switchTab('usuarios')">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                <circle cx="9" cy="7" r="4"/>
            </svg>
            Usuarios
        </button>
        <button class="tab-btn" onclick="switchTab('verificaciones')">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20 6 9 17 4 12"/>
            </svg>
            Verificaciones
            @if (verificacionesPendientes.Count > 0)
            {
                <span class="badge badge-warning">@verificacionesPendientes.Count</span>
            }
        </button>
    </div>

    <!-- Tab: Usuarios -->
    <div id="tab-usuarios" class="tab-content active">
        <!-- Filters -->
        <div class="filters-bar">
            <div class="search-box">
                <svg class="search-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="11" cy="11" r="8"/>
                    <path d="m21 21-4.35-4.35"/>
                </svg>
                <input type="text" id="searchInput" placeholder="Buscar por nombre, email o usuario..." onkeyup="filterUsers()">
            </div>
            <select class="filter-select" id="filterTipo" onchange="filterUsers()">
                <option value="">Todos los tipos</option>
                <option value="admin">Administradores</option>
                <option value="creator">Creadores</option>
                <option value="fan">Fans</option>
            </select>
            <select class="filter-select" id="filterEstado" onchange="filterUsers()">
                <option value="">Todos los estados</option>
                <option value="active">Activos</option>
                <option value="blocked">Bloqueados</option>
            </select>
            <span class="results-count"><span id="visibleCount">@totalUsuarios</span> de @totalUsuarios usuarios</span>
        </div>

        <!-- Table -->
        <div class="table-container">
            @if (Model.Any())
            {
                <table class="users-table">
                    <thead>
                        <tr>
                            <th>Usuario</th>
                            <th>Rol</th>
                            <th>Estado</th>
                            <th>Registro</th>
                            <th>Ingresos</th>
                            <th>Contenido</th>
                            <th style="width: 100px; text-align: right;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="usersTableBody">
                        @foreach (var item in Model)
                        {
                            var usuario = item.Usuario;
                            var rol = item.Rol;
                            var totalFotos = item.TotalFotos;
                            var totalVideos = item.TotalVideos;
                            var totalArchivos = item.TotalArchivos;
                            var paisKey = usuario.Pais ?? "";
                            var tienePais = Lado.Models.RetencionesPredeterminadas.Paises.ContainsKey(paisKey);
                            var paisNombre = tienePais ? Lado.Models.RetencionesPredeterminadas.Paises[paisKey].Nombre : "No definido";
                            var paisRetencion = tienePais ? Lado.Models.RetencionesPredeterminadas.Paises[paisKey].Retencion : 0;
                            var tipoUsuario = rol == "Admin" ? "admin" : (usuario.EsCreador ? "creator" : "fan");
                            var estadoUsuario = usuario.EstaActivo ? "active" : "blocked";

                            <tr class="user-row @(usuario.EstaActivo ? "" : "blocked")"
                                data-name="@usuario.NombreCompleto?.ToLower() @usuario.UserName?.ToLower() @usuario.Email?.ToLower()"
                                data-tipo="@tipoUsuario"
                                data-estado="@estadoUsuario">
                                <td>
                                    <div class="user-cell">
                                        @if (!string.IsNullOrEmpty(usuario.FotoPerfil))
                                        {
                                            <img src="@usuario.FotoPerfil" alt="" class="user-avatar">
                                        }
                                        else
                                        {
                                            <div class="user-avatar-placeholder">
                                                @(usuario.NombreCompleto?.Substring(0, 1).ToUpper() ?? "U")
                                            </div>
                                        }
                                        <div class="user-info">
                                            <div class="user-name">
                                                @usuario.NombreCompleto
                                                @if (usuario.CreadorVerificado)
                                                {
                                                    <svg class="verified-badge" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                                                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                                                        <polyline points="22 4 12 14.01 9 11.01" fill="none" stroke="white" stroke-width="2"/>
                                                    </svg>
                                                }
                                            </div>
                                            <div class="user-email">@usuario.Email</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (rol == "Admin")
                                    {
                                        <span class="role-badge admin">Admin</span>
                                    }
                                    else if (usuario.TieneLadoB())
                                    {
                                        <span class="role-badge ladob">LadoB</span>
                                    }
                                    else if (usuario.EsCreador)
                                    {
                                        <span class="role-badge creator">Creador</span>
                                    }
                                    else
                                    {
                                        <span class="role-badge fan">Fan</span>
                                    }
                                </td>
                                <td>
                                    @if (usuario.EstaActivo)
                                    {
                                        <span><span class="status-dot active"></span>Activo</span>
                                    }
                                    else
                                    {
                                        <span class="role-badge blocked">Bloqueado</span>
                                    }
                                </td>
                                <td>
                                    <span style="font-size: 0.8125rem; color: var(--gray-600);">
                                        @usuario.FechaRegistro.ToString("dd/MM/yyyy")
                                    </span>
                                </td>
                                <td>
                                    <div class="activity-cell">
                                        <span class="date" style="font-weight:600;font-size:1rem;color:var(--gray-800);">@usuario.ContadorIngresos</span>
                                        <span class="logins">@(usuario.UltimaActividad.HasValue ? usuario.UltimaActividad.Value.ToString("dd/MM HH:mm") : "Sin actividad")</span>
                                    </div>
                                </td>
                                <td>
                                    @{
                                        var contenidoTotal = totalFotos + totalVideos + totalArchivos;
                                    }
                                    @if (contenidoTotal > 0)
                                    {
                                        <div class="activity-cell">
                                            <span class="date" style="font-weight:600;font-size:0.875rem;color:var(--gray-800);">@contenidoTotal total</span>
                                            <span class="logins">
                                                @if (totalFotos > 0) { <span title="Fotos">@totalFotos <svg style="width:12px;height:12px;vertical-align:-1px" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"/><circle cx="8.5" cy="8.5" r="1.5"/><polyline points="21 15 16 10 5 21"/></svg></span> }
                                                @if (totalVideos > 0) { <span title="Videos" style="margin-left:6px">@totalVideos <svg style="width:12px;height:12px;vertical-align:-1px" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polygon points="23 7 16 12 23 17 23 7"/><rect x="1" y="5" width="15" height="14" rx="2" ry="2"/></svg></span> }
                                            </span>
                                        </div>
                                    }
                                    else
                                    {
                                        <span style="color:var(--gray-400);font-size:0.8125rem">-</span>
                                    }
                                </td>
                                <td style="text-align: right;">
                                    <div class="actions-dropdown">
                                        <button class="actions-btn" onclick="toggleActionsMenu(this)">
                                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <circle cx="12" cy="12" r="1"/>
                                                <circle cx="19" cy="12" r="1"/>
                                                <circle cx="5" cy="12" r="1"/>
                                            </svg>
                                        </button>
                                        <div class="actions-menu">
                                            <a href="/Admin/DetalleUsuario/@usuario.Id">
                                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                                                    <circle cx="12" cy="12" r="3"/>
                                                </svg>
                                                Ver detalles
                                            </a>
                                            @if (rol != "Admin")
                                            {
                                                <button type="button" data-bs-toggle="modal" data-bs-target="#cambiarContrasenaModal"
                                                        data-userid="@usuario.Id">
                                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                                                        <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
                                                    </svg>
                                                    Cambiar contraseña
                                                </button>
                                                @if (usuario.EsCreador || rol == "Creador")
                                                {
                                                    <button type="button" data-bs-toggle="modal" data-bs-target="#comisionModal"
                                                            data-userid="@usuario.Id"
                                                            data-comision="@usuario.ComisionRetiro"
                                                            data-minimo="@usuario.MontoMinimoRetiro"
                                                            data-pais="@paisKey"
                                                            data-paisnombre="@paisNombre"
                                                            data-paisretencion="@paisRetencion"
                                                            data-usarretencionpais="@usuario.UsarRetencionPais.ToString().ToLower()"
                                                            data-retencion="@(usuario.RetencionImpuestos ?? 0)">
                                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                            <line x1="12" y1="1" x2="12" y2="23"/>
                                                            <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
                                                        </svg>
                                                        Configurar comisión
                                                    </button>
                                                }
                                                <div class="divider"></div>
                                                @if (usuario.EstaActivo)
                                                {
                                                    <form method="post" asp-action="BloquearUsuario" asp-route-id="@usuario.Id" class="form-bloquear" data-userid="@usuario.Id">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="danger">
                                                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                                <circle cx="12" cy="12" r="10"/>
                                                                <line x1="4.93" y1="4.93" x2="19.07" y2="19.07"/>
                                                            </svg>
                                                            Bloquear usuario
                                                        </button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <form method="post" asp-action="DesbloquearUsuario" asp-route-id="@usuario.Id" class="form-desbloquear" data-userid="@usuario.Id">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="success">
                                                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                                <polyline points="20 6 9 17 4 12"/>
                                                            </svg>
                                                            Desbloquear usuario
                                                        </button>
                                                    </form>
                                                }
                                                <button type="button" class="danger" data-bs-toggle="modal" data-bs-target="#eliminarModal"
                                                        data-userid="@usuario.Id">
                                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                        <polyline points="3 6 5 6 21 6"/>
                                                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                                                        <line x1="10" y1="11" x2="10" y2="17"/>
                                                        <line x1="14" y1="11" x2="14" y2="17"/>
                                                    </svg>
                                                    Eliminar usuario
                                                </button>
                                            }
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="empty-state">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"/>
                        <line x1="12" y1="8" x2="12" y2="12"/>
                        <line x1="12" y1="16" x2="12.01" y2="16"/>
                    </svg>
                    <h4>No se encontraron usuarios</h4>
                </div>
            }
        </div>
    </div>

    <!-- Tab: Verificaciones -->
    <div id="tab-verificaciones" class="tab-content">
        @if (verificacionesPendientes.Count > 0)
        {
            <div class="verif-grid">
                @foreach (var solicitud in verificacionesPendientes)
                {
                    <div class="verif-card">
                        <div class="verif-card-header">
                            <span class="badge-pending">Pendiente</span>
                            <span class="date">@solicitud.FechaSolicitud.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                        <div class="verif-card-body">
                            <div class="verif-user">
                                @if (!string.IsNullOrEmpty(solicitud.User?.FotoPerfil))
                                {
                                    <img src="@solicitud.User.FotoPerfil" alt="" class="verif-user-avatar">
                                }
                                else
                                {
                                    <div class="verif-user-avatar-placeholder">
                                        @(solicitud.User?.NombreCompleto?.Substring(0, 1).ToUpper() ?? "U")
                                    </div>
                                }
                                <div class="verif-user-info">
                                    <h4>@solicitud.User?.UserName</h4>
                                    <p>@solicitud.User?.Email</p>
                                </div>
                            </div>
                            <div class="verif-details">
                                <div class="verif-detail-item">
                                    <label>Nombre completo</label>
                                    <span>@solicitud.NombreCompleto</span>
                                </div>
                                <div class="verif-detail-item">
                                    <label>Documento</label>
                                    <span>@solicitud.TipoDocumento @solicitud.NumeroDocumento</span>
                                </div>
                            </div>
                        </div>
                        <div class="verif-card-footer">
                            <a href="/CreatorVerification/Review/@solicitud.Id" class="btn-revisar">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                                    <circle cx="12" cy="12" r="3"/>
                                </svg>
                                Revisar solicitud
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="table-container">
                <div class="empty-state">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="#10b981" stroke-width="2">
                        <polyline points="20 6 9 17 4 12"/>
                    </svg>
                    <h4 style="color: #10b981;">No hay verificaciones pendientes</h4>
                </div>
            </div>
        }
    </div>
</div>

