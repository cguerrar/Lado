@model Lado.Models.ApplicationUser
@{
    ViewData["Title"] = "Detalle de Usuario";
    var usuario = Model;
    var suscripciones = ViewBag.Suscripciones as List<Lado.Models.Suscripcion>;
    var contenidos = ViewBag.Contenidos as List<Lado.Models.Contenido>;
    var transacciones = ViewBag.Transacciones as List<Lado.Models.Transaccion>;
}

<div class="container-fluid py-4">
    <!-- Encabezado con foto de portada -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0 overflow-hidden">
                <!-- Portada -->
                <div class="position-relative" style="height: 200px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    @if (!string.IsNullOrEmpty(usuario.FotoPortada))
                    {
                        <img src="@usuario.FotoPortada"
                             class="w-100 h-100"
                             style="object-fit: cover; opacity: 0.9;"
                             alt="Portada">
                    }

                    <!-- Botón de regreso -->
                    <a href="/Admin/Usuarios" class="btn btn-light position-absolute top-0 start-0 m-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <line x1="19" y1="12" x2="5" y2="12"></line>
                            <polyline points="12 19 5 12 12 5"></polyline>
                        </svg>
                        Volver
                    </a>

                    <!-- Estado del usuario -->
                    <div class="position-absolute top-0 end-0 m-3">
                        @if (usuario.EstaActivo)
                        {
                            <span class="badge bg-success fs-6">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <polyline points="20 6 9 17 4 12"></polyline>
                                </svg>
                                Activo
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-danger fs-6">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <circle cx="12" cy="12" r="10"></circle>
                                    <line x1="4.93" y1="4.93" x2="19.07" y2="19.07"></line>
                                </svg>
                                Suspendido
                            </span>
                        }
                        @if (usuario.EsVerificado)
                        {
                            <span class="badge bg-primary fs-6 ms-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" />
                                </svg>
                                Verificado
                            </span>
                        }
                    </div>
                </div>

                <!-- Perfil -->
                <div class="card-body pt-0">
                    <div class="row">
                        <div class="col-md-3 text-center" style="margin-top: -50px;">
                            @if (!string.IsNullOrEmpty(usuario.FotoPerfil))
                            {
                                <img src="@usuario.FotoPerfil"
                                     class="rounded-circle border border-5 border-white shadow"
                                     style="width: 120px; height: 120px; object-fit: cover;"
                                     alt="@usuario.NombreCompleto">
                            }
                            else
                            {
                                <div class="rounded-circle border border-5 border-white shadow bg-gradient-primary d-inline-flex align-items-center justify-content-center text-white"
                                     style="width: 120px; height: 120px; font-size: 48px;">
                                    @usuario.NombreCompleto?.Substring(0, 1).ToUpper()
                                </div>
                            }
                        </div>

                        <div class="col-md-6">
                            <h3 class="mb-1 mt-3">
                                @usuario.NombreCompleto
                                @if (usuario.EsVerificado)
                                {
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="text-primary">
                                        <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" />
                                    </svg>
                                }
                            </h3>
                            <p class="text-muted mb-2">@@@usuario.UserName</p>

                           @if (!string.IsNullOrEmpty(usuario.Biografia))
                            {
                                <p class="mb-2">@usuario.Biografia</p>
                            }

                            <div class="d-flex gap-2 mb-2">
                                @if (!string.IsNullOrEmpty(usuario.Email))
                                {
                                    <small class="text-muted">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <rect x="2" y="4" width="20" height="16" rx="2"></rect>
                                            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
                                        </svg>
                                        @usuario.Email
                                    </small>
                                }

                                @if (!string.IsNullOrEmpty(usuario.PhoneNumber))
                                {
                                    <small class="text-muted">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                                        </svg>
                                        @usuario.PhoneNumber
                                    </small>
                                }
                            </div>

                            <!-- ✅ CORREGIDO: ToString sin argumentos problemáticos -->
                            <small class="text-muted">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                    <line x1="16" y1="2" x2="16" y2="6"></line>
                                    <line x1="8" y1="2" x2="8" y2="6"></line>
                                    <line x1="3" y1="10" x2="21" y2="10"></line>
                                </svg>
                                Registro: @usuario.FechaRegistro.ToString("dd/MM/yyyy")
                            </small>
                        </div>

                        <div class="col-md-3">
                            <div class="d-grid gap-2 mt-3">
                                @if (usuario.EstaActivo)
                                {
                                    <button class="btn btn-danger" onclick="suspenderUsuario('@usuario.Id')">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <circle cx="12" cy="12" r="10"></circle>
                                            <line x1="4.93" y1="4.93" x2="19.07" y2="19.07"></line>
                                        </svg>
                                        Suspender Usuario
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-success" onclick="activarUsuario('@usuario.Id')">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <polyline points="20 6 9 17 4 12"></polyline>
                                        </svg>
                                        Activar Usuario
                                    </button>
                                }

                                @if (!usuario.EsVerificado)
                                {
                                    <button class="btn btn-primary" onclick="verificarUsuario('@usuario.Id')">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                                            <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" />
                                        </svg>
                                        Verificar Usuario
                                    </button>
                                }

                                <a href="/Mensajes/Chat/@usuario.Id" class="btn btn-outline-primary">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                                    </svg>
                                    Enviar Mensaje
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Estadísticas -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center">
                <div class="card-body">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary mb-2">
                        <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                        <line x1="19" y1="8" x2="19" y2="14"></line>
                        <line x1="22" y1="11" x2="16" y2="11"></line>
                    </svg>
                    <h3 class="mb-0">@(suscripciones?.Count ?? 0)</h3>
                    <small class="text-muted">Suscripciones</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center">
                <div class="card-body">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-success mb-2">
                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                        <circle cx="9" cy="9" r="2"></circle>
                        <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"></path>
                    </svg>
                    <h3 class="mb-0">@(contenidos?.Count ?? 0)</h3>
                    <small class="text-muted">Contenidos</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center">
                <div class="card-body">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-warning mb-2">
                        <line x1="12" y1="1" x2="12" y2="23"></line>
                        <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                    </svg>
                    <h3 class="mb-0">$@usuario.Saldo.ToString("N2")</h3>
                    <small class="text-muted">Saldo</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center">
                <div class="card-body">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-info mb-2">
                        <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
                    </svg>
                    <h3 class="mb-0">$@usuario.TotalGanancias.ToString("N2")</h3>
                    <small class="text-muted">Ganancias Totales</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabs -->
    <ul class="nav nav-tabs mb-4" role="tablist">
        <li class="nav-item">
            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#contenidos">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                    <circle cx="9" cy="9" r="2"></circle>
                    <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"></path>
                </svg>
                Contenidos
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#transacciones">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="12" y1="1" x2="12" y2="23"></line>
                    <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                </svg>
                Transacciones
            </button>
        </li>
    </ul>

    <!-- Contenido de tabs -->
    <div class="tab-content">
        <!-- Tab Contenidos -->
        <div class="tab-pane fade show active" id="contenidos">
            @if (contenidos != null && contenidos.Any())
            {
                <div class="row g-3">
                    @foreach (var contenido in contenidos)
                    {
                        <div class="col-md-3">
                            <div class="card shadow-sm border-0">
                                @if (!string.IsNullOrEmpty(contenido.RutaArchivo))
                                {
                                    <img src="@contenido.RutaArchivo" class="card-img-top" style="height: 200px; object-fit: cover;" alt="Contenido">
                                }
                                <div class="card-body">
                                    <p class="small mb-2">@contenido.Descripcion</p>
                                    <div class="d-flex justify-content-between">
                                        <small class="text-muted">@contenido.FechaPublicacion.ToString("dd/MM/yyyy")</small>
                                        @if (contenido.Censurado)
                                        {
                                            <span class="badge bg-danger">Censurado</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted text-center py-5">No hay contenidos</p>
            }
        </div>

        <!-- Tab Transacciones -->
        <div class="tab-pane fade" id="transacciones">
            @if (transacciones != null && transacciones.Any())
            {
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Tipo</th>
                                <th>Descripción</th>
                                <th>Monto</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var trans in transacciones)
                            {
                                <tr>
                                    <td>@trans.FechaTransaccion.ToString("dd/MM/yyyy")</td>
                                    <td>@trans.TipoTransaccion</td>
                                    <td>@trans.Descripcion</td>
                                    <td>$@trans.Monto.ToString("N2")</td>
                                    <td>
                                        <span class="badge bg-success">@trans.EstadoPago</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted text-center py-5">No hay transacciones</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function suspenderUsuario(userId) {
            if (!confirm('¿Suspender este usuario?')) return;

            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            fetch('/Admin/SuspenderUsuario', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: `userId=${userId}&__RequestVerificationToken=${token}`
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Usuario suspendido');
                    location.reload();
                }
            });
        }

        function activarUsuario(userId) {
            if (!confirm('¿Activar este usuario?')) return;

            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            fetch('/Admin/ActivarUsuario', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: `userId=${userId}&__RequestVerificationToken=${token}`
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Usuario activado');
                    location.reload();
                }
            });
        }

        function verificarUsuario(userId) {
            if (!confirm('¿Verificar este usuario?')) return;

            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            fetch('/Admin/VerificarUsuario', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: `userId=${userId}&__RequestVerificationToken=${token}`
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Usuario verificado');
                    location.reload();
                }
            });
        }
    </script>

    @Html.AntiForgeryToken()
}

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
</style>