@model Lado.Models.Agencia
@{
    ViewData["Title"] = "Perfil de Agencia";
    Layout = "~/Views/Shared/_AgenciaLayout.cshtml";
    ViewBag.Agencia = Model;
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="d-flex align-items-center mb-4">
            <a href="/Agencia" class="btn btn-outline-secondary me-3">
                <i class="fas fa-arrow-left"></i>
            </a>
            <div>
                <h4 class="mb-0">Perfil de Agencia</h4>
                <small class="text-muted">Gestiona la informacion de tu empresa</small>
            </div>
        </div>

        <div class="row g-4">
            <!-- Info lateral -->
            <div class="col-lg-4">
                <div class="card text-center mb-4">
                    <div class="card-body py-4">
                        @if (!string.IsNullOrEmpty(Model.LogoUrl))
                        {
                            <img src="@Model.LogoUrl" alt="@Model.NombreEmpresa" class="rounded-circle mb-3" style="width: 120px; height: 120px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="rounded-circle bg-primary mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 120px; height: 120px;">
                                <span class="text-white fw-bold" style="font-size: 48px;">@Model.NombreEmpresa.Substring(0, 1).ToUpper()</span>
                            </div>
                        }
                        <h5 class="fw-bold mb-1">@Model.NombreEmpresa</h5>
                        <p class="text-muted mb-2">@Model.RazonSocial</p>
                        @if (Model.EstaVerificada)
                        {
                            <span class="badge bg-success"><i class="fas fa-check-circle me-1"></i>Verificada</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark"><i class="fas fa-clock me-1"></i>Pendiente de verificacion</span>
                        }
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-body">
                        <h6 class="fw-semibold mb-3">Informacion de Cuenta</h6>
                        <div class="mb-3">
                            <small class="text-muted d-block">Estado</small>
                            @switch (Model.Estado)
                            {
                                case Lado.Models.EstadoAgencia.Activa:
                                    <span class="badge bg-success">Activa</span>
                                    break;
                                case Lado.Models.EstadoAgencia.Pendiente:
                                    <span class="badge bg-warning text-dark">Pendiente</span>
                                    break;
                                case Lado.Models.EstadoAgencia.Suspendida:
                                    <span class="badge bg-danger">Suspendida</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">@Model.Estado</span>
                                    break;
                            }
                        </div>
                        <div class="mb-3">
                            <small class="text-muted d-block">Fecha de Registro</small>
                            <span class="fw-medium">@Model.FechaRegistro.ToString("dd/MM/yyyy")</span>
                        </div>
                        @if (Model.FechaAprobacion.HasValue)
                        {
                            <div class="mb-0">
                                <small class="text-muted d-block">Fecha de Aprobacion</small>
                                <span class="fw-medium">@Model.FechaAprobacion.Value.ToString("dd/MM/yyyy")</span>
                            </div>
                        }
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <h6 class="fw-semibold mb-3">Resumen Financiero</h6>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Saldo Actual</span>
                            <span class="fw-bold text-success">$@Model.SaldoPublicitario.ToString("N2")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Total Recargado</span>
                            <span class="fw-medium">$@Model.TotalRecargado.ToString("N2")</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Total Gastado</span>
                            <span class="fw-medium">$@Model.TotalGastado.ToString("N2")</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Formulario -->
            <div class="col-lg-8">
                <form asp-action="ActualizarPerfil" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <div class="card mb-4">
                        <div class="card-header bg-transparent border-0 py-3">
                            <h5 class="mb-0 fw-semibold"><i class="fas fa-building me-2 text-primary"></i>Informacion de la Empresa</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label fw-medium">Nombre de la Empresa *</label>
                                    <input asp-for="NombreEmpresa" class="form-control" required />
                                    <span asp-validation-for="NombreEmpresa" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-medium">Razon Social</label>
                                    <input asp-for="RazonSocial" class="form-control" />
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-medium">NIF/CIF/RFC</label>
                                    <input asp-for="NIF" class="form-control" />
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-medium">Telefono</label>
                                    <input asp-for="Telefono" class="form-control" />
                                </div>

                                <div class="col-12">
                                    <label class="form-label fw-medium">Sitio Web</label>
                                    <input asp-for="SitioWeb" class="form-control" placeholder="https://www.tuempresa.com" />
                                </div>

                                <div class="col-12">
                                    <label class="form-label fw-medium">Descripcion</label>
                                    <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card mb-4">
                        <div class="card-header bg-transparent border-0 py-3">
                            <h5 class="mb-0 fw-semibold"><i class="fas fa-map-marker-alt me-2 text-primary"></i>Direccion</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-12">
                                    <label class="form-label fw-medium">Direccion</label>
                                    <input asp-for="Direccion" class="form-control" />
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label fw-medium">Ciudad</label>
                                    <input asp-for="Ciudad" class="form-control" />
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label fw-medium">Pais</label>
                                    <select asp-for="Pais" class="form-select">
                                        <option value="">Selecciona un pais</option>
                                        <option value="ES">Espana</option>
                                        <option value="MX">Mexico</option>
                                        <option value="AR">Argentina</option>
                                        <option value="CO">Colombia</option>
                                        <option value="CL">Chile</option>
                                        <option value="PE">Peru</option>
                                        <option value="US">Estados Unidos</option>
                                    </select>
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label fw-medium">Codigo Postal</label>
                                    <input asp-for="CodigoPostal" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card mb-4">
                        <div class="card-header bg-transparent border-0 py-3">
                            <h5 class="mb-0 fw-semibold"><i class="fas fa-image me-2 text-primary"></i>Logo</h5>
                        </div>
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    @if (!string.IsNullOrEmpty(Model.LogoUrl))
                                    {
                                        <img src="@Model.LogoUrl" alt="Logo actual" class="rounded" style="width: 80px; height: 80px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="rounded bg-light d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                                            <i class="fas fa-image text-muted" style="font-size: 32px;"></i>
                                        </div>
                                    }
                                </div>
                                <div class="col">
                                    <input type="file" name="logo" class="form-control" accept="image/*">
                                    <small class="text-muted">Sube una nueva imagen para cambiar el logo (PNG, JPG hasta 5MB)</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary btn-lg px-5">
                            <i class="fas fa-save me-2"></i>Guardar Cambios
                        </button>
                        <a href="/Agencia" class="btn btn-outline-secondary btn-lg">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
