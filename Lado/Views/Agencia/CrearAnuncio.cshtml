@model Lado.Models.Anuncio
@{
    ViewData["Title"] = "Crear Anuncio";
    Layout = "~/Views/Shared/_AgenciaLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="d-flex align-items-center mb-4">
            <a href="/Agencia/Anuncios" class="btn btn-outline-secondary me-3">
                <i class="fas fa-arrow-left"></i>
            </a>
            <div>
                <h4 class="mb-0">Crear Nuevo Anuncio</h4>
                <small class="text-muted">Configura tu campana publicitaria</small>
            </div>
        </div>

        <form asp-action="CrearAnuncio" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="row g-4">
                <!-- Informacion basica -->
                <div class="col-lg-8">
                    <div class="card mb-4">
                        <div class="card-header bg-transparent border-0 py-3">
                            <h5 class="mb-0 fw-semibold"><i class="fas fa-info-circle me-2 text-primary"></i>Informacion Basica</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="form-label fw-medium">Titulo del Anuncio *</label>
                                <input asp-for="Titulo" class="form-control" placeholder="Ej: Promocion de Verano" required maxlength="100" />
                                <span asp-validation-for="Titulo" class="text-danger"></span>
                                <small class="text-muted">Maximo 100 caracteres</small>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-medium">Descripcion</label>
                                <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Describe tu producto o servicio..." maxlength="500"></textarea>
                                <small class="text-muted">Maximo 500 caracteres</small>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-medium">URL de Destino *</label>
                                <input asp-for="UrlDestino" class="form-control" placeholder="https://www.tuempresa.com/promocion" required />
                                <span asp-validation-for="UrlDestino" class="text-danger"></span>
                                <small class="text-muted">A donde se dirigira el usuario al hacer clic</small>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label fw-medium">Texto del Boton</label>
                                    <select asp-for="TextoBoton" class="form-select">
                                        <option value="VerMas">Ver Mas</option>
                                        <option value="Comprar">Comprar</option>
                                        <option value="Registrarse">Registrarse</option>
                                        <option value="Descargar">Descargar</option>
                                        <option value="MasInformacion">Mas Informacion</option>
                                        <option value="Contactar">Contactar</option>
                                        <option value="Suscribirse">Suscribirse</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-medium">Tipo de Creativo</label>
                                    <select asp-for="TipoCreativo" class="form-select" id="tipoCreativo" onchange="toggleCreativoFields()">
                                        <option value="Imagen">Imagen</option>
                                        <option value="Video">Video</option>
                                        <option value="Carrusel">Carrusel</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Creativo -->
                    <div class="card mb-4">
                        <div class="card-header bg-transparent border-0 py-3">
                            <h5 class="mb-0 fw-semibold"><i class="fas fa-image me-2 text-primary"></i>Creativo</h5>
                        </div>
                        <div class="card-body">
                            <div id="imagenUpload">
                                <div class="border rounded-3 p-4 text-center" style="border-style: dashed !important;">
                                    <input type="file" name="creativo" id="creativoInput" class="d-none" accept="image/*,video/*" onchange="previewCreativo(this)" />
                                    <label for="creativoInput" class="cursor-pointer d-block">
                                        <div id="creativoPreview" class="mb-3" style="display: none;">
                                            <img id="creativoImg" src="" alt="Preview" class="rounded" style="max-height: 200px; max-width: 100%;" />
                                        </div>
                                        <div id="creativoPlaceholder">
                                            <i class="fas fa-cloud-upload-alt text-muted mb-2" style="font-size: 48px;"></i>
                                            <p class="text-muted mb-0">Haz clic para subir tu imagen o video</p>
                                            <small class="text-muted">PNG, JPG, MP4 - Tama√±o recomendado: 1200x628px</small>
                                        </div>
                                    </label>
                                </div>
                            </div>

                            <div class="mt-3">
                                <label class="form-label fw-medium">O ingresa una URL del creativo</label>
                                <input asp-for="UrlCreativo" class="form-control" placeholder="https://..." />
                            </div>
                        </div>
                    </div>

                    <!-- Segmentacion -->
                    <div class="card mb-4">
                        <div class="card-header bg-transparent border-0 py-3">
                            <h5 class="mb-0 fw-semibold"><i class="fas fa-users me-2 text-primary"></i>Segmentacion</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label fw-medium">Edad Minima</label>
                                    <input type="number" name="EdadMinima" class="form-control" value="18" min="13" max="65" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-medium">Edad Maxima</label>
                                    <input type="number" name="EdadMaxima" class="form-control" value="65" min="13" max="100" />
                                </div>
                            </div>

                            <div class="mt-3">
                                <label class="form-label fw-medium">Genero</label>
                                <select name="Genero" class="form-select">
                                    <option value="Todos">Todos</option>
                                    <option value="Masculino">Masculino</option>
                                    <option value="Femenino">Femenino</option>
                                </select>
                            </div>

                            <div class="mt-3">
                                <label class="form-label fw-medium">Paises (separados por coma)</label>
                                <input type="text" name="Paises" class="form-control" placeholder="ES, MX, AR, CO" />
                                <small class="text-muted">Deja vacio para mostrar en todos los paises</small>
                            </div>

                            <div class="mt-3">
                                <label class="form-label fw-medium">Intereses (separados por coma)</label>
                                <input type="text" name="Intereses" class="form-control" placeholder="tecnologia, deportes, musica" />
                                <small class="text-muted">Deja vacio para no filtrar por intereses</small>
                            </div>
                        </div>
                    </div>

                    <!-- Programacion -->
                    <div class="card">
                        <div class="card-header bg-transparent border-0 py-3">
                            <h5 class="mb-0 fw-semibold"><i class="fas fa-calendar me-2 text-primary"></i>Programacion</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label fw-medium">Fecha de Inicio</label>
                                    <input asp-for="FechaInicio" type="date" class="form-control" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-medium">Fecha de Fin (opcional)</label>
                                    <input asp-for="FechaFin" type="date" class="form-control" />
                                </div>
                            </div>

                            <div class="mt-3">
                                <label class="form-label fw-medium">Dias Activos</label>
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var dia in new[] { "Lunes", "Martes", "Miercoles", "Jueves", "Viernes", "Sabado", "Domingo" })
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="DiasActivos" value="@dia" id="dia@dia" checked>
                                            <label class="form-check-label" for="dia@dia">@dia</label>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Panel lateral - Presupuesto -->
                <div class="col-lg-4">
                    <div class="card sticky-top" style="top: 90px;">
                        <div class="card-header bg-transparent border-0 py-3">
                            <h5 class="mb-0 fw-semibold"><i class="fas fa-dollar-sign me-2 text-primary"></i>Presupuesto</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="form-label fw-medium">Presupuesto Diario *</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="PresupuestoDiario" type="number" step="0.01" min="1" class="form-control" placeholder="10.00" required />
                                </div>
                                <span asp-validation-for="PresupuestoDiario" class="text-danger"></span>
                                <small class="text-muted">Minimo $1.00 por dia</small>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-medium">Presupuesto Total (opcional)</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="PresupuestoTotal" type="number" step="0.01" min="0" class="form-control" placeholder="100.00" />
                                </div>
                                <small class="text-muted">Deja en 0 para sin limite</small>
                            </div>

                            <hr>

                            <div class="mb-3">
                                <label class="form-label fw-medium">Modelo de Pago</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="modeloPago" id="modeloCPM" value="CPM" checked onchange="toggleModeloPago()">
                                    <label class="form-check-label" for="modeloCPM">
                                        <strong>CPM</strong> - Costo por Mil Impresiones
                                    </label>
                                </div>
                                <div class="form-check mt-2">
                                    <input class="form-check-input" type="radio" name="modeloPago" id="modeloCPC" value="CPC" onchange="toggleModeloPago()">
                                    <label class="form-check-label" for="modeloCPC">
                                        <strong>CPC</strong> - Costo por Clic
                                    </label>
                                </div>
                            </div>

                            <div id="cpmConfig">
                                <label class="form-label fw-medium">Costo por Mil Impresiones</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="CostoPorMilImpresiones" type="number" step="0.01" min="0.50" class="form-control" value="2.00" />
                                </div>
                                <small class="text-muted">Minimo $0.50</small>
                            </div>

                            <div id="cpcConfig" style="display: none;">
                                <label class="form-label fw-medium">Costo por Clic</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="CostoPorClic" type="number" step="0.01" min="0.05" class="form-control" value="0.10" />
                                </div>
                                <small class="text-muted">Minimo $0.05</small>
                            </div>

                            <hr>

                            <div class="bg-light rounded-3 p-3 mb-4">
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Tu saldo actual</span>
                                    <span class="fw-bold text-success">$@(ViewBag.Agencia != null ? ((decimal)ViewBag.Agencia.SaldoPublicitario).ToString("N2") : "0.00")</span>
                                </div>
                                <small class="text-muted">
                                    <i class="fas fa-info-circle me-1"></i>
                                    El presupuesto se descontara de tu saldo
                                </small>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" name="accion" value="borrador" class="btn btn-outline-primary">
                                    <i class="fas fa-save me-2"></i>Guardar como Borrador
                                </button>
                                <button type="submit" name="accion" value="revision" class="btn btn-primary">
                                    <i class="fas fa-paper-plane me-2"></i>Enviar a Revision
                                </button>
                            </div>

                            <p class="text-muted small mt-3 mb-0">
                                <i class="fas fa-shield-alt me-1"></i>
                                Los anuncios son revisados antes de publicarse para garantizar el cumplimiento de nuestras politicas.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<style>
    .cursor-pointer { cursor: pointer; }
    .form-control:focus, .form-select:focus {
        border-color: #2563eb;
        box-shadow: 0 0 0 0.2rem rgba(37, 99, 235, 0.15);
    }
</style>

@section Scripts {
<script>
function previewCreativo(input) {
    if (input.files && input.files[0]) {
        var reader = new FileReader();
        var file = input.files[0];

        if (file.type.startsWith('image/')) {
            reader.onload = function(e) {
                document.getElementById('creativoImg').src = e.target.result;
                document.getElementById('creativoPreview').style.display = 'block';
                document.getElementById('creativoPlaceholder').style.display = 'none';
            }
            reader.readAsDataURL(file);
        } else {
            document.getElementById('creativoPlaceholder').innerHTML = '<i class="fas fa-video text-success mb-2" style="font-size: 48px;"></i><p class="text-success mb-0">Video seleccionado: ' + file.name + '</p>';
        }
    }
}

function toggleModeloPago() {
    var isCPM = document.getElementById('modeloCPM').checked;
    document.getElementById('cpmConfig').style.display = isCPM ? 'block' : 'none';
    document.getElementById('cpcConfig').style.display = isCPM ? 'none' : 'block';
}

function toggleCreativoFields() {
    // Por ahora solo manejamos imagen, pero se puede expandir para video/carrusel
}
</script>
}
