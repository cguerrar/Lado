@model Lado.Models.Agencia
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AgenciaLayout.cshtml";
    ViewBag.Agencia = Model;
}

<div class="row g-4 mb-4">
    <!-- Estadisticas principales -->
    <div class="col-md-6 col-xl-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-label">Anuncios Activos</div>
                    <div class="stat-value">@ViewBag.AnunciosActivos</div>
                </div>
                <div class="stat-icon" style="background: rgba(16, 185, 129, 0.1); color: #10b981;">
                    <i class="fas fa-play-circle"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-xl-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-label">Impresiones Totales</div>
                    <div class="stat-value">@(((long)ViewBag.ImpresionesTotales).ToString("N0"))</div>
                </div>
                <div class="stat-icon" style="background: rgba(37, 99, 235, 0.1); color: #2563eb;">
                    <i class="fas fa-eye"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-xl-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-label">Clics Totales</div>
                    <div class="stat-value">@(((long)ViewBag.ClicsTotales).ToString("N0"))</div>
                </div>
                <div class="stat-icon" style="background: rgba(245, 158, 11, 0.1); color: #f59e0b;">
                    <i class="fas fa-mouse-pointer"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-xl-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-label">CTR Promedio</div>
                    <div class="stat-value">@ViewBag.CTRPromedio%</div>
                </div>
                <div class="stat-icon" style="background: rgba(139, 92, 246, 0.1); color: #8b5cf6;">
                    <i class="fas fa-percentage"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Anuncios recientes -->
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center py-3">
                <h5 class="mb-0 fw-semibold">Anuncios Recientes</h5>
                <a href="/Agencia/Anuncios" class="btn btn-sm btn-outline-primary">Ver todos</a>
            </div>
            <div class="card-body p-0">
                @if (ViewBag.AnunciosRecientes != null && ((IEnumerable<Lado.Models.Anuncio>)ViewBag.AnunciosRecientes).Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Anuncio</th>
                                    <th>Estado</th>
                                    <th>Impresiones</th>
                                    <th>Clics</th>
                                    <th>CTR</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var anuncio in (IEnumerable<Lado.Models.Anuncio>)ViewBag.AnunciosRecientes)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(anuncio.UrlCreativo))
                                                {
                                                    <img src="@anuncio.UrlCreativo" alt="" class="rounded me-3" style="width: 48px; height: 48px; object-fit: cover;">
                                                }
                                                else
                                                {
                                                    <div class="rounded me-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; background: #f1f5f9;">
                                                        <i class="fas fa-image text-muted"></i>
                                                    </div>
                                                }
                                                <div>
                                                    <div class="fw-medium">@anuncio.Titulo</div>
                                                    <small class="text-muted">@anuncio.FechaCreacion.ToString("dd/MM/yyyy")</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            @{
                                                var badgeClass = anuncio.Estado switch
                                                {
                                                    Lado.Models.EstadoAnuncio.Activo => "badge-activo",
                                                    Lado.Models.EstadoAnuncio.Pausado => "badge-pausado",
                                                    Lado.Models.EstadoAnuncio.EnRevision => "badge-revision",
                                                    Lado.Models.EstadoAnuncio.Rechazado => "badge-rechazado",
                                                    _ => "badge-borrador"
                                                };
                                            }
                                            <span class="badge-estado @badgeClass">@anuncio.Estado</span>
                                        </td>
                                        <td>@anuncio.Impresiones.ToString("N0")</td>
                                        <td>@anuncio.Clics.ToString("N0")</td>
                                        <td>@anuncio.CTR%</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-ad text-muted mb-3" style="font-size: 48px;"></i>
                        <p class="text-muted mb-3">Aun no tienes anuncios</p>
                        <a href="/Agencia/CrearAnuncio" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Crear mi primer anuncio
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Panel lateral -->
    <div class="col-lg-4">
        <!-- Resumen financiero -->
        <div class="card mb-4">
            <div class="card-header bg-transparent border-0 py-3">
                <h5 class="mb-0 fw-semibold">Resumen Financiero</h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom">
                    <span class="text-muted">Saldo Disponible</span>
                    <span class="fw-bold text-success fs-5">$@Model.SaldoPublicitario.ToString("N2")</span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom">
                    <span class="text-muted">Total Gastado</span>
                    <span class="fw-medium">$@Model.TotalGastado.ToString("N2")</span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <span class="text-muted">Total Recargado</span>
                    <span class="fw-medium">$@Model.TotalRecargado.ToString("N2")</span>
                </div>
                <a href="/Agencia/RecargarSaldo" class="btn btn-primary w-100">
                    <i class="fas fa-plus me-2"></i>Recargar Saldo
                </a>
            </div>
        </div>

        <!-- Acciones rapidas -->
        <div class="card">
            <div class="card-header bg-transparent border-0 py-3">
                <h5 class="mb-0 fw-semibold">Acciones Rapidas</h5>
            </div>
            <div class="card-body">
                <a href="/Agencia/CrearAnuncio" class="btn btn-outline-primary w-100 mb-2">
                    <i class="fas fa-plus-circle me-2"></i>Nuevo Anuncio
                </a>
                <a href="/Agencia/Metricas" class="btn btn-outline-secondary w-100 mb-2">
                    <i class="fas fa-chart-bar me-2"></i>Ver Metricas
                </a>
                <a href="/Agencia/Perfil" class="btn btn-outline-secondary w-100">
                    <i class="fas fa-building me-2"></i>Editar Perfil
                </a>
            </div>
        </div>
    </div>
</div>
