@model Lado.Controllers.PerfilPublicoViewModel
@{
    ViewData["Title"] = $"@{Model.Usuario.UserName} - {Model.Usuario.NombreCompleto}";
    Layout = "_Layout";

    // Configurar Open Graph para compartir en redes sociales
    var baseUrl = $"{Context.Request.Scheme}://{Context.Request.Host}";
    var nombreCreador = !string.IsNullOrEmpty(Model.Usuario.Seudonimo)
        ? Model.Usuario.Seudonimo
        : Model.Usuario.NombreCompleto ?? Model.Usuario.UserName;

    ViewData["OgTitle"] = $"{nombreCreador} (@{Model.Usuario.UserName}) en Lado";
    ViewData["OgDescription"] = !string.IsNullOrEmpty(Model.Usuario.Biografia)
        ? Model.Usuario.Biografia
        : $"Sigue a {nombreCreador} en Lado y accede a su contenido exclusivo";

    // Usar foto de perfil como imagen OG
    ViewData["OgImage"] = !string.IsNullOrEmpty(Model.Usuario.FotoPerfil)
        ? $"{baseUrl}{Model.Usuario.FotoPerfil}"
        : $"{baseUrl}/images/og-default.jpg";

    ViewData["OgUrl"] = $"{baseUrl}/PerfilPublico/{Model.Usuario.UserName}";
    ViewData["OgType"] = "profile";
}

<div class="container py-4">
    <!-- Banner y Header del Perfil -->
    <div class="card shadow-sm mb-4 overflow-hidden" style="border-radius: 15px;">
        <!-- Banner -->
        <div class="perfil-banner">
            @if (!string.IsNullOrEmpty(Model.Usuario.FotoPortada))
            {
                <img src="@Model.Usuario.FotoPortada" alt="Portada" class="w-100 h-100 object-fit-cover">
            }
            else
            {
                <div class="banner-gradient"></div>
            }
        </div>

        <div class="card-body">
            <div class="row align-items-end">
                <!-- Avatar -->
                <div class="col-auto">
                    <div class="avatar-large-container">
                        @if (!string.IsNullOrEmpty(Model.Usuario.FotoPerfil))
                        {
                            <img src="@Model.Usuario.FotoPerfil" class="avatar-large" alt="@Model.Usuario.UserName">
                        }
                        else
                        {
                            <div class="avatar-large avatar-placeholder">
                                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="12" cy="7" r="4"></circle>
                                </svg>
                            </div>
                        }
                        @if (Model.Usuario.EsVerificado)
                        {
                            <span class="verified-badge" title="Verificado">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="#4682B4">
                                    <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                                </svg>
                            </span>
                        }
                    </div>
                </div>

                <!-- Info -->
                <div class="col">
                    <h2 class="mb-1 fw-bold">
                        @Model.Usuario.NombreCompleto
                        @if (Model.Usuario.EsVerificado)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="#4682B4" style="margin-left: 5px; vertical-align: middle;">
                                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                            </svg>
                        }
                    </h2>
                    <p class="text-muted mb-2">@@@Model.Usuario.UserName</p>

                    @if (!string.IsNullOrEmpty(Model.Usuario.Biografia))
                    {
                        <p class="mb-3">@Model.Usuario.Biografia</p>
                    }

                    <!-- Stats -->
                    <div class="d-flex gap-4 flex-wrap">
                        <div>
                            <strong>@Model.TotalSeguidores</strong>
                            <span class="text-muted">Seguidores</span>
                        </div>
                        <div>
                            <strong>@Model.TotalContenido</strong>
                            <span class="text-muted">Publicaciones</span>
                        </div>
                        @if (Model.EstaAutenticado)
                        {
                            <div>
                                <strong class="text-success">$@Model.Usuario.PrecioSuscripcion.ToString("N2")</strong>
                                <span class="text-muted">/mes</span>
                            </div>
                        }
                    </div>
                </div>

                <!-- Botones de accion -->
                <div class="col-auto">
                    <div class="d-flex flex-column gap-2" style="min-width: 200px;">
                        @if (Model.EsPropietario)
                        {
                            <a href="@Url.Action("Index", "Dashboard")" class="btn btn-primary btn-lg">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="margin-right: 6px;">
                                    <path d="M12 20h9"></path>
                                    <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path>
                                </svg>
                                Mi Dashboard
                            </a>
                        }
                        else if (Model.EstaAutenticado)
                        {
                            @if (Model.EstaSuscrito)
                            {
                                <button class="btn btn-success btn-lg" disabled>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" style="margin-right: 8px;">
                                        <polyline points="20 6 9 17 4 12"></polyline>
                                    </svg>
                                    Suscrito
                                </button>
                                <a href="@Url.Action("Perfil", "Explorar", new { id = Model.Usuario.Id })" class="btn btn-outline-primary">
                                    Ver contenido completo
                                </a>
                            }
                            else
                            {
                                <a href="@Url.Action("Perfil", "Explorar", new { id = Model.Usuario.Id })" class="btn btn-primary btn-lg">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" style="margin-right: 8px;">
                                        <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                                    </svg>
                                    Suscribirse - $@Model.Usuario.PrecioSuscripcion.ToString("N2")/mes
                                </a>
                            }
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Account", new { returnUrl = Context.Request.Path })" class="btn btn-primary btn-lg">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" style="margin-right: 8px;">
                                    <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path>
                                    <polyline points="10 17 15 12 10 7"></polyline>
                                    <line x1="15" y1="12" x2="3" y2="12"></line>
                                </svg>
                                Iniciar sesion para suscribirse
                            </a>
                            <a href="@Url.Action("Registro", "Account")" class="btn btn-outline-secondary">
                                Crear cuenta
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contenido Publico -->
    <div class="row mb-4">
        <div class="col-12">
            <h4 class="mb-3 fw-bold">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="margin-right: 8px;">
                    <rect x="3" y="3" width="7" height="7"></rect>
                    <rect x="14" y="3" width="7" height="7"></rect>
                    <rect x="14" y="14" width="7" height="7"></rect>
                    <rect x="3" y="14" width="7" height="7"></rect>
                </svg>
                Contenido (@Model.Contenidos.Count)
            </h4>

            @if (Model.Contenidos.Any())
            {
                <div class="row g-3">
                    @foreach (var contenido in Model.Contenidos)
                    {
                        <div class="col-6 col-md-4 col-lg-3">
                            <a href="@Url.Action("Detalle", "Feed", new { id = contenido.Id })" class="text-decoration-none">
                                <div class="card contenido-card h-100 shadow-sm">
                                    <div class="contenido-media">
                                        @if (contenido.TipoContenido == Lado.Models.TipoContenido.Imagen)
                                        {
                                            @if (!string.IsNullOrEmpty(contenido.RutaArchivo))
                                            {
                                                <img src="@contenido.RutaArchivo" alt="Contenido" loading="lazy">
                                            }
                                            else
                                            {
                                                <div class="media-placeholder">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                                        <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                                        <polyline points="21 15 16 10 5 21"></polyline>
                                                    </svg>
                                                </div>
                                            }
                                        }
                                        else if (contenido.TipoContenido == Lado.Models.TipoContenido.Video)
                                        {
                                            <div class="media-placeholder media-video">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="white">
                                                    <circle cx="12" cy="12" r="10" fill="rgba(0,0,0,0.5)"></circle>
                                                    <polygon points="10 8 16 12 10 16 10 8" fill="white"></polygon>
                                                </svg>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="media-placeholder">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                                    <polyline points="14 2 14 8 20 8"></polyline>
                                                </svg>
                                            </div>
                                        }
                                    </div>

                                    <div class="card-body py-2">
                                        <div class="d-flex justify-content-between text-muted small">
                                            <span>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="currentColor" style="margin-right: 3px;">
                                                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                                                </svg>
                                                @(contenido.Likes?.Count ?? contenido.NumeroLikes)
                                            </span>
                                            <span>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="margin-right: 3px;">
                                                    <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                                                </svg>
                                                @(contenido.Comentarios?.Count ?? contenido.NumeroComentarios)
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>

                @if (!Model.EstaAutenticado)
                {
                    <div class="text-center mt-4">
                        <p class="text-muted">
                            <a href="@Url.Action("Login", "Account", new { returnUrl = Context.Request.Path })">Inicia sesion</a>
                            o
                            <a href="@Url.Action("Registro", "Account")">crea una cuenta</a>
                            para ver mas contenido y suscribirte.
                        </p>
                    </div>
                }
            }
            else
            {
                <div class="card shadow-sm">
                    <div class="card-body text-center py-5">
                        <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="text-muted mb-3">
                            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                            <circle cx="8.5" cy="8.5" r="1.5"></circle>
                            <polyline points="21 15 16 10 5 21"></polyline>
                        </svg>
                        <h5>Sin contenido publico</h5>
                        <p class="text-muted mb-0">Este creador aun no ha publicado contenido publico</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .perfil-banner {
        height: 200px;
        overflow: hidden;
    }

    .perfil-banner img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .banner-gradient {
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #4682B4 0%, #36648B 100%);
    }

    .avatar-large-container {
        margin-top: -60px;
        position: relative;
        z-index: 10;
    }

    .avatar-large {
        width: 130px;
        height: 130px;
        border-radius: 50%;
        border: 5px solid white;
        object-fit: cover;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }

    .avatar-placeholder {
        background: linear-gradient(135deg, #4682B4 0%, #36648B 100%);
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .verified-badge {
        position: absolute;
        bottom: 5px;
        right: 5px;
        background: white;
        border-radius: 50%;
        padding: 2px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }

    .contenido-card {
        transition: all 0.3s;
        border-radius: 12px;
        overflow: hidden;
    }

    .contenido-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
    }

    .contenido-media {
        position: relative;
        height: 180px;
        overflow: hidden;
        background: #f8f9fa;
    }

    .contenido-media img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .media-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, rgba(70, 130, 180, 0.1), rgba(54, 100, 139, 0.1));
        color: #6c757d;
    }

    .media-video {
        background: linear-gradient(135deg, #1a1a1a, #333);
    }

    @@media (max-width: 768px) {
        .perfil-banner {
            height: 150px;
        }

        .avatar-large {
            width: 100px;
            height: 100px;
        }

        .avatar-large-container {
            margin-top: -50px;
        }

        .contenido-media {
            height: 140px;
        }

        .col-auto .d-flex {
            min-width: 100% !important;
        }
    }
</style>
