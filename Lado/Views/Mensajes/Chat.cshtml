        // Detectar si un texto es solo emojis
        function isOnlyEmoji(text) {
            if (!text) return { isEmoji: false, count: 0 };
            // Regex para detectar emojis (incluyendo modificadores de piel, ZWJ sequences, etc.)
            const emojiRegex = /^(?:\p{Emoji_Presentation}|\p{Emoji}\uFE0F|\p{Emoji_Modifier_Base}\p{Emoji_Modifier}?|\p{Emoji}(?:\u200D\p{Emoji})+|\s)+$/u;
            const isEmoji = emojiRegex.test(text.trim());
            if (!isEmoji) return { isEmoji: false, count: 0 };
            // Contar emojis
            const emojiMatches = text.match(/\p{Emoji_Presentation}|\p{Emoji}\uFE0F|\p{Emoji_Modifier_Base}\p{Emoji_Modifier}?|\p{Emoji}(?:\u200D\p{Emoji})+/gu);
            const count = emojiMatches ? emojiMatches.length : 0;
            return { isEmoji: true, count };
        }

        function getEmojiClass(text) {
            const { isEmoji, count } = isOnlyEmoji(text);
