                        <div class="emoji-content" id="emojiContent"></div>
                    </div>
                </div>

                <input type="text" id="inputMensaje" class="chat-input" placeholder="@(storyRef != null ? "Responder a la historia..." : "Escribe un mensaje...")" autocomplete="off">

                <button type="submit" class="btn-send" id="btnEnviar">
