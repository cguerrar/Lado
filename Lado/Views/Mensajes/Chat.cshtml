        function toggleEmojiPicker() {
            const picker = document.getElementById('emojiPicker');
            const btn = document.getElementById('btnEmoji');
            const isOpen = picker.classList.contains('show');

            if (isOpen) {
                picker.classList.remove('show');
                btn.classList.remove('active');
            } else {
                picker.classList.add('show');
                btn.classList.add('active');
                document.getElementById('emojiSearch').value = '';
                renderEmojis(recentEmojis.length > 0 ? 'recientes' : 'caras');
                document.getElementById('emojiSearch').focus();
            }
        }

        function renderEmojis(category, searchTerm = '') {
            const content = document.getElementById('emojiContent');
            currentEmojiCategory = category;

            // Actualizar tabs activos
            document.querySelectorAll('.emoji-tab').forEach(tab => {
                tab.classList.toggle('active', tab.dataset.category === category);
            });

            let html = '';

            if (searchTerm) {
                // Buscar en todas las categorias
                let results = [];
                Object.values(emojiData).forEach(cat => {
                    results = results.concat(cat.emojis.filter(e => e.includes(searchTerm)));
                });
                if (results.length > 0) {
                    html = '<div class="emoji-category-label">Resultados</div><div class="emoji-grid">';
                    results.slice(0, 64).forEach(emoji => {
                        html += `<button type="button" class="emoji-item" onclick="insertEmoji('${emoji}')">${emoji}</button>`;
                    });
                    html += '</div>';
                } else {
                    html = `<div class="emoji-no-results">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                            <circle cx="12" cy="12" r="10"/><path d="M8 15s1.5-2 4-2 4 2 4 2"/><line x1="9" y1="9" x2="9.01" y2="9"/><line x1="15" y1="9" x2="15.01" y2="9"/>
                        </svg>
                        <div>No se encontraron emojis</div>
                    </div>`;
                }
            } else if (category === 'recientes') {
                if (recentEmojis.length > 0) {
                    html = '<div class="emoji-category-label">Usados recientemente</div><div class="emoji-grid">';
                    recentEmojis.forEach(emoji => {
                        html += `<button type="button" class="emoji-item" onclick="insertEmoji('${emoji}')">${emoji}</button>`;
                    });
                    html += '</div>';
                } else {
                    html = `<div class="emoji-no-results">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                            <circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/>
                        </svg>
                        <div>No hay emojis recientes</div>
                    </div>`;
                }
            } else {
                const cat = emojiData[category];
                if (cat) {
                    html = `<div class="emoji-category-label">${cat.label}</div><div class="emoji-grid">`;
                    cat.emojis.forEach(emoji => {
                        html += `<button type="button" class="emoji-item" onclick="insertEmoji('${emoji}')">${emoji}</button>`;
                    });
                    html += '</div>';
                }
            }

            content.innerHTML = html;
        }

        function insertEmoji(emoji) {
            const input = document.getElementById('inputMensaje');
            const start = input.selectionStart;
            const end = input.selectionEnd;
            const text = input.value;

            input.value = text.substring(0, start) + emoji + text.substring(end);
            input.selectionStart = input.selectionEnd = start + emoji.length;

            // Guardar en recientes
            recentEmojis = recentEmojis.filter(e => e !== emoji);
            recentEmojis.unshift(emoji);
            recentEmojis = recentEmojis.slice(0, 32);
            localStorage.setItem('recentEmojis', JSON.stringify(recentEmojis));

            // NO cerrar el picker - mantenerlo abierto como WhatsApp
        }

        function initEmojiPicker() {
            // Event listeners para las tabs
            document.querySelectorAll('.emoji-tab').forEach(tab => {
                tab.addEventListener('click', () => {
                    document.getElementById('emojiSearch').value = '';
                    renderEmojis(tab.dataset.category);
                });
            });

            // Busqueda
            document.getElementById('emojiSearch').addEventListener('input', function(e) {
                const searchTerm = e.target.value.trim();
                if (searchTerm) {
                    renderEmojis('search', searchTerm);
                } else {
                    renderEmojis(currentEmojiCategory);
                }
            });

            // Cerrar al hacer click fuera
            document.addEventListener('click', (e) => {
                const picker = document.getElementById('emojiPicker');
                const btn = document.getElementById('btnEmoji');
                const container = document.querySelector('.emoji-container');
                if (!container.contains(e.target)) {
                    picker.classList.remove('show');
                    btn.classList.remove('active');
                }
            });

            // Renderizar emojis iniciales
            renderEmojis(recentEmojis.length > 0 ? 'recientes' : 'caras');
        }

        // Aplicar clases de emoji a mensajes existentes
        function applyEmojiClassesToExisting() {
            document.querySelectorAll('.mensaje').forEach(msg => {
                const textoEl = msg.querySelector('.mensaje-texto');
                if (!textoEl) return;
                // Si tiene imagen o video, no aplicar
                if (msg.querySelector('.mensaje-imagen, .mensaje-video')) return;
                const texto = textoEl.textContent;
                const emojiClass = getEmojiClass(texto);
                if (emojiClass) {
                    textoEl.classList.add(emojiClass);
                    msg.classList.add('mensaje-emoji-only');
                }
            });
        }

        // Formatear horas de mensajes existentes usando timestamp del dispositivo
        function formatExistingMessageTimes() {
            document.querySelectorAll('.mensaje[data-timestamp]').forEach(msg => {
                const timestamp = parseInt(msg.dataset.timestamp);
                if (timestamp && !isNaN(timestamp)) {
                    const horaEl = msg.querySelector('.mensaje-hora');
                    if (horaEl) {
                        horaEl.textContent = formatLocalTime(timestamp);
                    }
                }
            });
        }

        // Manejar altura en móviles (teclado virtual)
        function ajustarAlturaMobile() {
            const vh = window.innerHeight * 0.01;
            document.documentElement.style.setProperty('--vh', `${vh}px`);

            // Ajustar chat container
            const chatContainer = document.querySelector('.chat-container');
            if (chatContainer && window.innerWidth <= 768) {
                chatContainer.style.height = `${window.innerHeight}px`;
            }
        }

        // Scroll al input cuando se enfoca (para teclado virtual)
        function handleInputFocus() {
            const input = document.getElementById('inputMensaje');
            if (input) {
                input.addEventListener('focus', () => {
                    setTimeout(() => {
                        scrollToBottom();
                        // En iOS, hacer scroll al input
                        if (/iPad|iPhone|iPod/.test(navigator.userAgent)) {
                            const inputArea = document.querySelector('.chat-input-area');
                            if (inputArea) {
                                inputArea.scrollIntoView({ behavior: 'smooth', block: 'end' });
                            }
                        }
                    }, 300);
                });
            }
        }

