            } else if (category === 'recientes') {
                if (recentEmojis.length > 0) {
                    html = '<div class="emoji-category-label">Usados recientemente</div><div class="emoji-grid">';
                    recentEmojis.forEach(emoji => {
                        html += `<button type="button" class="emoji-item" onclick="insertEmoji('${emoji}')">${emoji}</button>`;
                    });
                    html += '</div>';
                } else {
                    html = `<div class="emoji-no-results">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                            <circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/>
                        </svg>
                        <div>No hay emojis recientes</div>
                    </div>`;
                }
            } else {
                const cat = emojiData[category];
                if (cat) {
                    html = `<div class="emoji-category-label">${cat.label}</div><div class="emoji-grid">`;
                    cat.emojis.forEach(emoji => {
                        html += `<button type="button" class="emoji-item" onclick="insertEmoji('${emoji}')">${emoji}</button>`;
                    });
                    html += '</div>';
                }
            }

            content.innerHTML = html;
        }

        function insertEmoji(emoji) {
            const input = document.getElementById('inputMensaje');
            const start = input.selectionStart;
            const end = input.selectionEnd;
            const text = input.value;

            input.value = text.substring(0, start) + emoji + text.substring(end);
            input.selectionStart = input.selectionEnd = start + emoji.length;

            // Guardar en recientes
            recentEmojis = recentEmojis.filter(e => e !== emoji);
            recentEmojis.unshift(emoji);
            recentEmojis = recentEmojis.slice(0, 32);
            localStorage.setItem('recentEmojis', JSON.stringify(recentEmojis));

            // NO cerrar el picker - mantenerlo abierto como WhatsApp
        }

        function initEmojiPicker() {
            // Event listeners para las tabs
            document.querySelectorAll('.emoji-tab').forEach(tab => {
                tab.addEventListener('click', () => {
                    document.getElementById('emojiSearch').value = '';
                    renderEmojis(tab.dataset.category);
                });
            });

            // Busqueda
            document.getElementById('emojiSearch').addEventListener('input', function(e) {
                const searchTerm = e.target.value.trim();
                if (searchTerm) {
                    renderEmojis('search', searchTerm);
                } else {
                    renderEmojis(currentEmojiCategory);
                }
            });

            // Cerrar al hacer click fuera
            document.addEventListener('click', (e) => {
                const picker = document.getElementById('emojiPicker');
                const btn = document.getElementById('btnEmoji');
                const container = document.querySelector('.emoji-container');
                if (!container.contains(e.target)) {
                    picker.classList.remove('show');
                    btn.classList.remove('active');
                }
            });

            // Renderizar emojis iniciales
            renderEmojis(recentEmojis.length > 0 ? 'recientes' : 'caras');
        }

        // Aplicar clases de emoji a mensajes existentes
        function applyEmojiClassesToExisting() {
            document.querySelectorAll('.mensaje').forEach(msg => {
                const textoEl = msg.querySelector('.mensaje-texto');
                if (!textoEl) return;
                // Si tiene imagen o video, no aplicar
                if (msg.querySelector('.mensaje-imagen, .mensaje-video')) return;
                const texto = textoEl.textContent;
                const emojiClass = getEmojiClass(texto);
                if (emojiClass) {
                    textoEl.classList.add(emojiClass);
                    msg.classList.add('mensaje-emoji-only');
                }
            });
        }

        // Formatear horas de mensajes existentes usando timestamp del dispositivo
        function formatExistingMessageTimes() {
            document.querySelectorAll('.mensaje[data-timestamp]').forEach(msg => {
                const timestamp = parseInt(msg.dataset.timestamp);
                if (timestamp && !isNaN(timestamp)) {
                    const horaEl = msg.querySelector('.mensaje-hora');
                    if (horaEl) {
                        horaEl.textContent = formatLocalTime(timestamp);
                    }
                }
            });
        }

        // Manejar altura en móviles (teclado virtual)
        function ajustarAlturaMobile() {
            const vh = window.innerHeight * 0.01;
            document.documentElement.style.setProperty('--vh', `${vh}px`);

            // Ajustar chat container
            const chatContainer = document.querySelector('.chat-container');
            if (chatContainer && window.innerWidth <= 768) {
                chatContainer.style.height = `${window.innerHeight}px`;
            }
        }

        // Scroll al input cuando se enfoca (para teclado virtual)
        function handleInputFocus() {
            const input = document.getElementById('inputMensaje');
            if (input) {
                input.addEventListener('focus', () => {
                    setTimeout(() => {
                        scrollToBottom();
                        // En iOS, hacer scroll al input
                        if (/iPad|iPhone|iPod/.test(navigator.userAgent)) {
                            const inputArea = document.querySelector('.chat-input-area');
                            if (inputArea) {
                                inputArea.scrollIntoView({ behavior: 'smooth', block: 'end' });
                            }
                        }
                    }, 300);
                });
            }
        }

        // Init
        // Procesar mensajes renderizados por servidor (linkify + post preview)
        function procesarMensajesServidor() {
            document.querySelectorAll('.mensaje-texto-server').forEach(el => {
                const mensajeId = el.dataset.mensajeId;
                let contenido;
                try {
                    contenido = JSON.parse(el.dataset.contenido);
                } catch {
                    contenido = el.textContent;
                }

                const postShare = detectPostShare(contenido);

                if (postShare) {
                    // Insertar preview antes del texto
                    const previewDiv = document.createElement('div');
                    previewDiv.id = `post-preview-${mensajeId}`;
                    previewDiv.className = 'post-preview';
                    previewDiv.onclick = () => window.location.href = `/Feed?post=${postShare.postId}`;
                    previewDiv.innerHTML = `<div class="post-preview-info"><div class="post-preview-title"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="18" height="18" rx="2"/><circle cx="8.5" cy="8.5" r="1.5"/><path d="m21 15-5-5L5 21"/></svg> Cargando publicación...</div></div>`;
                    el.parentNode.insertBefore(previewDiv, el);

                    // Cargar preview async
                    fetchPostPreview(postShare.postId).then(data => {
                        const container = document.getElementById(`post-preview-${mensajeId}`);
                        if (container) {
                            container.outerHTML = renderPostPreview(postShare.postId, data);
                        }
                    });

                    // Actualizar texto sin URL
                    const textoSinUrl = contenido.replace(postShare.fullMatch, '').trim();
                    if (textoSinUrl) {
                        el.innerHTML = linkifyText(textoSinUrl.replace(/</g, '&lt;').replace(/>/g, '&gt;'));
                    } else {
                        el.style.display = 'none';
                    }
                } else {
                    // Solo linkificar URLs
                    const textoEscapado = el.textContent.replace(/</g, '&lt;').replace(/>/g, '&gt;');
                    el.innerHTML = linkifyText(textoEscapado);
                }

                el.classList.remove('mensaje-texto-server');
            });
        }

        document.addEventListener('DOMContentLoaded', function() {
            // Asegurar que el indicador de typing esté oculto al inicio
            ocultarTyping();

            formatExistingMessageTimes();
            applyEmojiClassesToExisting();
            procesarMensajesServidor(); // Procesar links y previews
            scrollToBottom();
            iniciarSignalR();
            initEmojiPicker();
            ajustarAlturaMobile();
            handleInputFocus();

            document.getElementById('formEnviarMensaje').addEventListener('submit', enviarMensaje);
            document.getElementById('inputMensaje').addEventListener('input', function() {
                enviarTyping();
                clearTimeout(typingTimeout);
                typingTimeout = setTimeout(detenerTyping, 2000);
            });
            document.addEventListener('keydown', e => {
                if (e.key === 'Escape') {
                    cerrarImagenModal();
                    cancelarRespuesta();
                    cancelarArchivo();
                    cancelarGaleria();
                    document.getElementById('emojiPicker').classList.remove('show');
                    document.getElementById('btnEmoji').classList.remove('active');
                }
            });

            // Escuchar cambios de tamaño (teclado virtual)
            window.addEventListener('resize', ajustarAlturaMobile);
            window.visualViewport?.addEventListener('resize', ajustarAlturaMobile);

            // ========================================
            // GALERÍA - Seleccionar archivos de galería
            // ========================================
            const btnGaleriaChat = document.getElementById('btnGaleriaChat');
            if (btnGaleriaChat) {
                btnGaleriaChat.addEventListener('click', function() {
                    if (window.GaleriaSelector) {
                        window.GaleriaSelector.abrir();
                    }
                });
            }

            // Escuchar selección confirmada de galería
            document.addEventListener('galeriaSeleccionConfirmada', function(e) {
                const archivos = e.detail.archivos;
                if (archivos && archivos.length > 0) {
                    const archivo = archivos[0]; // Solo uno para mensajes
                    mostrarPreviewGaleria(archivo);
                }
            });

            // Escuchar cancelación de galería
            document.addEventListener('galeriaSeleccionCancelada', function(e) {
                // No hacer nada, el modal ya se cerró
            });
        });

        // ========================================
        // FUNCIONES DE GALERÍA
        // ========================================
        let galeriaSeleccionada = null;

        function mostrarPreviewGaleria(archivo) {
            // Limpiar archivo local si había uno
            cancelarArchivo();

            galeriaSeleccionada = archivo;
            document.getElementById('galeriaMediaId').value = archivo.id;
            document.getElementById('btnGaleriaChat').classList.add('has-selection');

            // Mostrar en el preview panel (reutilizamos el existente)
            const previewThumb = document.getElementById('previewThumb');
            const previewName = document.getElementById('previewName');
            const previewSize = document.getElementById('previewSize');
            const previewPanel = document.getElementById('previewPanel');

            if (previewThumb && previewName && previewSize && previewPanel) {
                previewThumb.src = archivo.thumbnail || archivo.rutaArchivo;
                previewName.textContent = archivo.nombreOriginal || 'Archivo de galería';
                previewSize.textContent = archivo.tipoMedia === 1 ? 'Video' : 'Imagen';
                previewPanel.classList.add('show');
            }
        }

        function cancelarGaleria() {
            galeriaSeleccionada = null;
            document.getElementById('galeriaMediaId').value = '';
            document.getElementById('btnGaleriaChat').classList.remove('has-selection');
        }
    </script>
