                .withUrl("/chatHub")
                .withAutomaticReconnect()
                .build();

            connection.on("RecibirMensaje", function(mensaje) {
                if (mensaje.remitenteId === otroUsuarioId) {
                    renderizarMensaje(mensaje, false);
                    marcarMensajesComoLeidos([mensaje.id]);
                }
            });

