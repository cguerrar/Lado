@model Lado.Models.ApplicationUser
@inject Lado.Services.IDateTimeService DateTimeService
@{
    var otroUsuario = ViewBag.Destinatario as Lado.Models.ApplicationUser;
    var mensajes = ViewBag.Mensajes as List<Lado.Models.MensajePrivado>;
    ViewData["Title"] = otroUsuario != null ? $"Chat con {otroUsuario.NombreCompleto}" : "Chat";
}

<style>
    :root {
        --primary: #4682B4;
        --primary-dark: #36648B;
        --primary-light: #B0C4DE;
        --primary-lighter: #E8F1F8;
        --msg-sent: #E3F2FD;
        --msg-received: #ffffff;
        --bg-chat: #f1f5f9;
        --text-dark: #1e293b;
        --text-muted: #64748b;
        --border: #e2e8f0;
    }

    /* Box-sizing reset para el chat */
    .mensajes-page,
    .mensajes-page *,
    .mensajes-page *::before,
    .mensajes-page *::after {
        box-sizing: border-box;
    }

    .mensajes-page {
        max-width: 900px;
        margin: 0 auto;
        padding: 0;
    }

    .chat-container {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        display: flex;
        flex-direction: column;
        height: calc(100vh - 120px);
        min-height: 500px;
        overflow: hidden;
    }

    /* Header */
    .chat-header {
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        color: white;
        padding: 16px 20px;
        display: flex;
        align-items: center;
        gap: 16px;
        flex-shrink: 0;
    }

    .btn-back {
        color: white;
        text-decoration: none;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        transition: background 0.2s;
    }

    .btn-back:hover {
        background: rgba(255,255,255,0.15);
    }

    .chat-user-info {
        flex: 1;
        min-width: 0;
        display: flex;
        align-items: center;
        gap: 14px;
        cursor: pointer;
    }

    .chat-avatar {
        width: 44px;
        height: 44px;
        border-radius: 12px;
        object-fit: cover;
        border: 2px solid rgba(255,255,255,0.3);
        flex-shrink: 0;
    }

    .chat-avatar-default {
        width: 44px;
        height: 44px;
        border-radius: 12px;
        background: rgba(255,255,255,0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .chat-user-details h2 {
        font-size: 1.1rem;
        font-weight: 700;
        margin: 0;
        line-height: 1.3;
    }

    .chat-user-details span {
        font-size: 0.85rem;
        opacity: 0.85;
    }

    .typing-indicator {
        display: none;
        color: #a5d6a7;
    }

    .typing-indicator.show {
        display: inline;
    }

    .chat-menu {
        position: relative;
    }

    .btn-menu {
        color: white;
        background: none;
        border: none;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        cursor: pointer;
        transition: background 0.2s;
    }

    .btn-menu:hover {
        background: rgba(255,255,255,0.15);
    }

    /* Security Banner */
    .chat-security-banner {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        padding: 8px 16px;
        background: linear-gradient(90deg, rgba(34, 197, 94, 0.08) 0%, rgba(34, 197, 94, 0.15) 50%, rgba(34, 197, 94, 0.08) 100%);
        border-bottom: 1px solid rgba(34, 197, 94, 0.2);
        color: #15803d;
        font-size: 12px;
        cursor: pointer;
        transition: all 0.2s;
    }

    .chat-security-banner:hover {
        background: rgba(34, 197, 94, 0.18);
    }

    .chat-security-banner svg {
        flex-shrink: 0;
    }

    .chat-security-banner .info-icon {
        opacity: 0.6;
    }

    /* Modal de info de seguridad */
    .security-modal-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        z-index: 9999;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    .security-modal-overlay.show {
        display: flex;
    }

    .security-modal {
        background: white;
        border-radius: 16px;
        max-width: 400px;
        width: 100%;
        padding: 24px;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.25);
    }

    .security-modal-header {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 16px;
    }

    .security-modal-header svg {
        color: #22c55e;
    }

    .security-modal-header h3 {
        font-size: 18px;
        font-weight: 600;
        margin: 0;
    }

    .security-modal-body {
        color: var(--text-muted);
        font-size: 14px;
        line-height: 1.6;
    }

    .security-modal-body ul {
        margin: 12px 0;
        padding-left: 20px;
    }

    .security-modal-body li {
        margin-bottom: 8px;
    }

    .security-modal-footer {
        margin-top: 20px;
        text-align: center;
    }

    .security-modal-footer button {
        background: var(--primary);
        color: white;
        border: none;
        padding: 10px 32px;
        border-radius: 8px;
        font-weight: 500;
        cursor: pointer;
        transition: background 0.2s;
    }

    .security-modal-footer button:hover {
        background: var(--primary-dark);
    }

    /* Modal de confirmación de eliminación */
    .delete-confirm-modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        z-index: 9999;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    .delete-confirm-modal.show {
        display: flex;
    }

    .delete-confirm-content {
        background: white;
        border-radius: 16px;
        max-width: 340px;
        width: 100%;
        padding: 24px;
        text-align: center;
    }

    .delete-confirm-content svg {
        color: #ef4444;
        margin-bottom: 16px;
    }

    .delete-confirm-content h4 {
        font-size: 16px;
        font-weight: 600;
        margin: 0 0 8px 0;
    }

    .delete-confirm-content p {
        color: var(--text-muted);
        font-size: 14px;
        margin: 0 0 20px 0;
    }

    .delete-confirm-buttons {
        display: flex;
        gap: 12px;
    }

    .delete-confirm-buttons button {
        flex: 1;
        padding: 10px 16px;
        border-radius: 8px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s;
    }

    .btn-cancel-delete {
        background: #f3f4f6;
        border: none;
        color: #374151;
    }

    .btn-cancel-delete:hover {
        background: #e5e7eb;
    }

    .btn-confirm-delete {
        background: #ef4444;
        border: none;
        color: white;
    }

    .btn-confirm-delete:hover {
        background: #dc2626;
    }

    /* Mensaje eliminado */
    .mensaje-eliminado {
        display: flex;
        align-items: center;
        gap: 6px;
        color: var(--text-muted);
        font-size: 13px;
        font-style: italic;
    }

    .mensaje-eliminado svg {
        opacity: 0.5;
    }

    /* Messages Area */
    .chat-messages {
        flex: 1;
        overflow-y: auto;
        padding: 20px;
        background: var(--bg-chat);
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .chat-messages::-webkit-scrollbar {
        width: 6px;
    }

    .chat-messages::-webkit-scrollbar-track {
        background: transparent;
    }

    .chat-messages::-webkit-scrollbar-thumb {
        background: rgba(0,0,0,0.15);
        border-radius: 3px;
    }

    /* Message Bubbles */
    .mensaje {
        display: flex;
        flex-direction: column;
        max-width: 75%;
        position: relative;
    }

    .mensaje-recibido {
        align-self: flex-start;
    }

    .mensaje-enviado {
        align-self: flex-end;
    }

    .mensaje-burbuja {
        padding: 10px 14px;
        border-radius: 16px;
        position: relative;
        word-wrap: break-word;
    }

    .mensaje-recibido .mensaje-burbuja {
        background: var(--msg-received);
        border-bottom-left-radius: 4px;
        box-shadow: 0 1px 2px rgba(0,0,0,0.08);
    }

    .mensaje-enviado .mensaje-burbuja {
        background: var(--msg-sent);
        border-bottom-right-radius: 4px;
    }

    /* Reply Quote */
    .mensaje-respuesta {
        background: rgba(70,130,180,0.1);
        border-left: 3px solid var(--primary);
        padding: 8px 12px;
        margin-bottom: 8px;
        border-radius: 6px;
        font-size: 0.85rem;
        cursor: pointer;
        transition: background 0.2s;
    }

    .mensaje-respuesta:hover {
        background: rgba(70,130,180,0.15);
    }

    .mensaje-respuesta-nombre {
        color: var(--primary);
        font-weight: 600;
        margin-bottom: 2px;
    }

    .mensaje-respuesta-texto {
        color: var(--text-muted);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .mensaje-respuesta-media {
        display: flex;
        align-items: center;
        gap: 6px;
        color: var(--text-muted);
    }

    /* Referencia a Story */
    .mensaje-story-ref {
        background: linear-gradient(135deg, rgba(124, 58, 237, 0.1), rgba(147, 51, 234, 0.05));
        border-left: 3px solid #7c3aed;
        padding: 8px 12px;
        margin-bottom: 8px;
        border-radius: 6px;
        display: flex;
        gap: 10px;
        align-items: center;
    }

    .mensaje-story-ref-thumb {
        width: 48px;
        height: 64px;
        border-radius: 6px;
        object-fit: cover;
        flex-shrink: 0;
    }

    .mensaje-story-ref-info {
        flex: 1;
        min-width: 0;
    }

    .mensaje-story-ref-label {
        display: flex;
        align-items: center;
        gap: 4px;
        color: #7c3aed;
        font-weight: 600;
        font-size: 12px;
        margin-bottom: 2px;
    }

    .mensaje-story-ref-nombre {
        color: var(--text-dark);
        font-size: 13px;
    }

    .mensaje-story-ref-video {
        position: relative;
    }

    .mensaje-story-ref-video::after {
        content: '';
        position: absolute;
        inset: 0;
        background: rgba(0,0,0,0.2);
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .mensaje-story-ref-play {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 20px;
        height: 20px;
        background: rgba(255,255,255,0.9);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Media */
    .mensaje-imagen {
        max-width: 280px;
        border-radius: 12px;
        cursor: pointer;
        margin-bottom: 6px;
    }

    .mensaje-video {
        max-width: 280px;
        border-radius: 12px;
        margin-bottom: 6px;
    }

    .mensaje-texto {
        font-size: 0.95rem;
        line-height: 1.45;
        color: var(--text-dark);
    }

    /* Emojis grandes cuando el mensaje es solo emojis */
    .mensaje-texto.emoji-only {
        font-size: 2.5rem;
        line-height: 1.2;
        font-family: "Apple Color Emoji", "Segoe UI Emoji", "Noto Color Emoji", "Android Emoji", sans-serif;
    }

    .mensaje-texto.emoji-only-small {
        font-size: 1.8rem;
        line-height: 1.3;
        font-family: "Apple Color Emoji", "Segoe UI Emoji", "Noto Color Emoji", "Android Emoji", sans-serif;
    }

    /* Quitar fondo de burbuja para mensajes solo emoji */
    .mensaje-emoji-only .mensaje-burbuja {
        background: transparent !important;
        box-shadow: none !important;
        padding: 4px 8px;
    }

    .mensaje-info {
        display: flex;
        align-items: center;
        justify-content: flex-end;
        gap: 5px;
        margin-top: 4px;
        font-size: 0.7rem;
        color: var(--text-muted);
    }

    /* Nombre del remitente */
    .mensaje-sender {
        font-size: 0.75rem;
        font-weight: 600;
        margin-bottom: 4px;
        padding: 0 2px;
    }

    .mensaje-recibido .mensaje-sender {
        color: var(--primary);
    }

    .mensaje-enviado .mensaje-sender {
        color: #10b981;
        text-align: right;
    }

    /* Check marks */
    .check-icon {
        width: 16px;
        height: 16px;
    }

    .check-leido {
        color: var(--primary);
    }

    .check-enviado {
        color: #9ca3af;
    }

    /* Reply button on hover */
    .mensaje-actions {
        position: absolute;
        top: 6px;
        opacity: 0;
        transition: opacity 0.2s;
    }

    .mensaje-recibido .mensaje-actions {
        right: -36px;
    }

    .mensaje-enviado .mensaje-actions {
        left: -36px;
    }

    .mensaje:hover .mensaje-actions {
        opacity: 1;
    }

    .btn-reply {
        background: white;
        border: none;
        width: 32px;
        height: 32px;
        border-radius: 8px;
        cursor: pointer;
        color: var(--text-muted);
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        transition: all 0.2s;
    }

    .btn-reply:hover {
        background: var(--primary);
        color: white;
    }

    .btn-delete-msg {
        background: white;
        border: none;
        width: 32px;
        height: 32px;
        border-radius: 8px;
        cursor: pointer;
        color: var(--text-muted);
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        transition: all 0.2s;
    }

    .btn-delete-msg:hover {
        background: #ef4444;
        color: white;
    }

    /* Reply Panel */
    .reply-panel {
        display: none;
        background: white;
        padding: 12px 20px;
        border-top: 1px solid var(--border);
        align-items: center;
        gap: 12px;
    }

    .reply-panel.show {
        display: flex;
    }

    .reply-content {
        flex: 1;
        background: var(--primary-lighter);
        border-left: 3px solid var(--primary);
        padding: 10px 14px;
        border-radius: 8px;
    }

    .reply-nombre {
        color: var(--primary);
        font-weight: 600;
        font-size: 0.85rem;
    }

    .reply-texto {
        color: var(--text-muted);
        font-size: 0.85rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .btn-cancel {
        background: none;
        border: none;
        width: 36px;
        height: 36px;
        cursor: pointer;
        color: var(--text-muted);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .btn-cancel:hover {
        background: #f1f5f9;
    }

    /* Preview Panel */
    .preview-panel {
        display: none;
        background: white;
        padding: 12px 20px;
        border-top: 1px solid var(--border);
        align-items: center;
        gap: 14px;
    }

    .preview-panel.show {
        display: flex;
    }

    .preview-thumb {
        width: 56px;
        height: 56px;
        object-fit: cover;
        border-radius: 10px;
    }

    .preview-info {
        flex: 1;
    }

    .preview-name {
        font-weight: 600;
        font-size: 0.9rem;
        color: var(--text-dark);
    }

    .preview-size {
        color: var(--text-muted);
        font-size: 0.8rem;
    }

    /* Story Reply Panel - Referencia a historia */
    .story-reply-panel {
        display: flex;
        background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
        padding: 12px 20px;
        border-top: 1px solid var(--primary-light);
        align-items: center;
        gap: 14px;
        border-left: 4px solid var(--primary);
    }

    .story-reply-preview {
        position: relative;
    }

    .story-reply-thumb {
        width: 52px;
        height: 80px;
        object-fit: cover;
        border-radius: 8px;
        border: 2px solid var(--primary);
    }

    .story-reply-info {
        flex: 1;
    }

    .story-reply-label {
        display: flex;
        align-items: center;
        gap: 6px;
        color: var(--primary);
        font-weight: 600;
        font-size: 0.85rem;
    }

    .story-reply-user {
        color: var(--text-muted);
        font-size: 0.8rem;
        margin-top: 2px;
    }

    /* Input Area */
    .chat-input-area {
        padding: 16px 20px;
        background: white;
        border-top: 1px solid var(--border);
        flex-shrink: 0;
        box-sizing: border-box;
        width: 100%;
    }

    .chat-input-form {
        display: flex;
        align-items: center;
        gap: 12px;
        width: 100%;
        box-sizing: border-box;
    }

    .btn-attach {
        width: 44px;
        height: 44px;
        min-width: 44px;
        border-radius: 12px;
        border: 2px solid var(--border);
        background: white;
        color: var(--text-muted);
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        flex-shrink: 0;
    }

    .btn-attach:hover {
        border-color: var(--primary);
        color: var(--primary);
        background: var(--primary-lighter);
    }

    .chat-input {
        flex: 1;
        min-width: 0; /* Importante para que flex funcione correctamente */
        padding: 12px 18px;
        border: 2px solid var(--border);
        border-radius: 12px;
        font-size: 0.95rem;
        background: white;
        outline: none;
        transition: border-color 0.2s;
    }

    .chat-input:focus {
        border-color: var(--primary);
    }

    .btn-send {
        width: 48px;
        height: 48px;
        min-width: 48px;
        border-radius: 12px;
        border: none;
        background: var(--primary);
        color: white;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        flex-shrink: 0;
    }

    .btn-send:hover {
        background: var(--primary-dark);
    }

    .btn-send:disabled {
        background: #cbd5e1;
        cursor: not-allowed;
    }

    /* Empty State */
    .chat-empty {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 3rem;
        color: var(--text-muted);
    }

    .chat-empty svg {
        width: 64px;
        height: 64px;
        color: var(--primary-light);
        margin-bottom: 1rem;
    }

    .chat-empty p {
        margin: 0;
        font-size: 1rem;
    }

    .chat-empty small {
        color: var(--text-muted);
    }

    /* Image Modal */
    .image-modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.92);
        z-index: 9999;
        justify-content: center;
        align-items: center;
    }

    .image-modal.show {
        display: flex;
    }

    .image-modal img {
        max-width: 90%;
        max-height: 90%;
        object-fit: contain;
        border-radius: 8px;
    }

    .image-modal-close {
        position: absolute;
        top: 20px;
        right: 20px;
        background: rgba(255,255,255,0.15);
        border: none;
        color: white;
        width: 48px;
        height: 48px;
        border-radius: 12px;
        cursor: pointer;
        font-size: 24px;
        transition: background 0.2s;
    }

    .image-modal-close:hover {
        background: rgba(255,255,255,0.25);
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .mensajes-page {
            padding: 0;
            height: 100%;
            position: fixed;
            top: 60px; /* Espacio para el navbar superior */
            left: 0;
            right: 0;
            bottom: calc(64px + env(safe-area-inset-bottom, 0px)); /* Espacio para bottom nav */
            overflow: hidden;
        }

        .chat-container {
            border-radius: 0;
            height: 100%;
            position: relative;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        .mensaje {
            max-width: 85%;
        }

        .mensaje-actions {
            display: none;
        }

        .chat-header {
            padding: 12px 16px;
            flex-shrink: 0;
        }

        .chat-messages {
            padding: 16px;
            flex: 1;
            min-height: 0; /* Importante para que flex funcione bien */
            overflow-y: auto;
            -webkit-overflow-scrolling: touch;
        }

        .chat-input-area {
            padding: 10px 12px;
            padding-bottom: calc(10px + env(safe-area-inset-bottom, 0px));
            flex-shrink: 0;
            background: white;
            border-top: 1px solid var(--border);
            box-sizing: border-box;
            width: 100%;
        }

        .chat-input-form {
            gap: 8px;
        }

        .btn-attach {
            width: 40px;
            height: 40px;
            min-width: 40px;
        }

        .btn-emoji {
            width: 40px;
            height: 40px;
            min-width: 40px;
        }

        .btn-send {
            width: 44px;
            height: 44px;
            min-width: 44px;
        }

        .chat-input {
            padding: 10px 14px;
            font-size: 16px; /* Evita zoom en iOS */
        }

        /* Reply y Preview panels */
        .reply-panel,
        .preview-panel {
            flex-shrink: 0;
            padding: 10px 12px;
