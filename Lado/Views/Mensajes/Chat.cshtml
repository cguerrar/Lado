        document.addEventListener('DOMContentLoaded', function() {
            formatExistingMessageTimes();
            applyEmojiClassesToExisting();
            scrollToBottom();
            iniciarSignalR();
            initEmojiPicker();
            ajustarAlturaMobile();
            handleInputFocus();

            document.getElementById('formEnviarMensaje').addEventListener('submit', enviarMensaje);
