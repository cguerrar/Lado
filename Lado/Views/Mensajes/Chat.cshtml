@model Lado.Models.ApplicationUser
@inject Lado.Services.IDateTimeService DateTimeService
@{
    var otroUsuario = ViewBag.Destinatario as Lado.Models.ApplicationUser;
    var mensajes = ViewBag.Mensajes as List<Lado.Models.MensajePrivado>;
    ViewData["Title"] = otroUsuario != null ? $"Chat con {otroUsuario.NombreCompleto}" : "Chat";
}

<style>
    :root {
        --primary: #4682B4;
        --primary-dark: #36648B;
        --primary-light: #B0C4DE;
        --primary-lighter: #E8F1F8;
        --msg-sent: #E3F2FD;
        --msg-received: #ffffff;
        --bg-chat: #f1f5f9;
        --text-dark: #1e293b;
        --text-muted: #64748b;
        --border: #e2e8f0;
    }

    /* Box-sizing reset para el chat */
    .mensajes-page,
    .mensajes-page *,
    .mensajes-page *::before,
    .mensajes-page *::after {
        box-sizing: border-box;
    }

    .mensajes-page {
        max-width: 900px;
        margin: 0 auto;
        padding: 0;
    }

    .chat-container {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        display: flex;
        flex-direction: column;
        height: calc(100vh - 120px);
        min-height: 500px;
        overflow: hidden;
    }

    /* Header */
    .chat-header {
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        color: white;
        padding: 16px 20px;
        display: flex;
        align-items: center;
        gap: 16px;
        flex-shrink: 0;
    }

    .btn-back {
        color: white;
        text-decoration: none;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        transition: background 0.2s;
    }

    .btn-back:hover {
        background: rgba(255,255,255,0.15);
    }

    .chat-user-info {
        flex: 1;
        min-width: 0;
        display: flex;
        align-items: center;
        gap: 14px;
        cursor: pointer;
    }

    .chat-avatar {
        width: 44px;
        height: 44px;
        border-radius: 12px;
        object-fit: cover;
        border: 2px solid rgba(255,255,255,0.3);
        flex-shrink: 0;
    }

    .chat-avatar-default {
        width: 44px;
        height: 44px;
        border-radius: 12px;
        background: rgba(255,255,255,0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .chat-user-details h2 {
        font-size: 1.1rem;
        font-weight: 700;
        margin: 0;
        line-height: 1.3;
    }

    .chat-user-details span {
        font-size: 0.85rem;
        opacity: 0.85;
    }

    .typing-indicator {
        display: none;
        color: #a5d6a7;
    }

    .typing-indicator.show {
        display: inline;
    }

    .chat-menu {
        position: relative;
    }

    .btn-menu {
        color: white;
        background: none;
        border: none;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        cursor: pointer;
        transition: background 0.2s;
    }

    .btn-menu:hover {
        background: rgba(255,255,255,0.15);
    }

    /* Messages Area */
    .chat-messages {
        flex: 1;
        overflow-y: auto;
        padding: 20px;
        background: var(--bg-chat);
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .chat-messages::-webkit-scrollbar {
        width: 6px;
    }

    .chat-messages::-webkit-scrollbar-track {
        background: transparent;
    }

    .chat-messages::-webkit-scrollbar-thumb {
        background: rgba(0,0,0,0.15);
        border-radius: 3px;
    }

    /* Message Bubbles */
    .mensaje {
        display: flex;
        flex-direction: column;
        max-width: 75%;
        position: relative;
    }

    .mensaje-recibido {
        align-self: flex-start;
    }

    .mensaje-enviado {
        align-self: flex-end;
    }

    .mensaje-burbuja {
        padding: 10px 14px;
        border-radius: 16px;
        position: relative;
        word-wrap: break-word;
    }

    .mensaje-recibido .mensaje-burbuja {
        background: var(--msg-received);
        border-bottom-left-radius: 4px;
        box-shadow: 0 1px 2px rgba(0,0,0,0.08);
    }

    .mensaje-enviado .mensaje-burbuja {
        background: var(--msg-sent);
        border-bottom-right-radius: 4px;
    }

    /* Reply Quote */
    .mensaje-respuesta {
        background: rgba(70,130,180,0.1);
        border-left: 3px solid var(--primary);
        padding: 8px 12px;
        margin-bottom: 8px;
        border-radius: 6px;
        font-size: 0.85rem;
        cursor: pointer;
        transition: background 0.2s;
    }

    .mensaje-respuesta:hover {
        background: rgba(70,130,180,0.15);
    }

    .mensaje-respuesta-nombre {
        color: var(--primary);
        font-weight: 600;
        margin-bottom: 2px;
    }

    .mensaje-respuesta-texto {
        color: var(--text-muted);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .mensaje-respuesta-media {
        display: flex;
        align-items: center;
        gap: 6px;
        color: var(--text-muted);
    }

    /* Media */
    .mensaje-imagen {
        max-width: 280px;
        border-radius: 12px;
        cursor: pointer;
        margin-bottom: 6px;
    }

    .mensaje-video {
        max-width: 280px;
        border-radius: 12px;
        margin-bottom: 6px;
    }

    .mensaje-texto {
        font-size: 0.95rem;
        line-height: 1.45;
        color: var(--text-dark);
    }

    /* Emojis grandes cuando el mensaje es solo emojis */
    .mensaje-texto.emoji-only {
        font-size: 2.5rem;
        line-height: 1.2;
        font-family: "Apple Color Emoji", "Segoe UI Emoji", "Noto Color Emoji", "Android Emoji", sans-serif;
    }

    .mensaje-texto.emoji-only-small {
        font-size: 1.8rem;
        line-height: 1.3;
        font-family: "Apple Color Emoji", "Segoe UI Emoji", "Noto Color Emoji", "Android Emoji", sans-serif;
    }

    /* Quitar fondo de burbuja para mensajes solo emoji */
    .mensaje-emoji-only .mensaje-burbuja {
        background: transparent !important;
        box-shadow: none !important;
        padding: 4px 8px;
    }

    .mensaje-info {
        display: flex;
        align-items: center;
        justify-content: flex-end;
        gap: 5px;
        margin-top: 4px;
        font-size: 0.7rem;
        color: var(--text-muted);
    }

    /* Nombre del remitente */
    .mensaje-sender {
        font-size: 0.75rem;
        font-weight: 600;
        margin-bottom: 4px;
        padding: 0 2px;
    }

    .mensaje-recibido .mensaje-sender {
        color: var(--primary);
    }

    .mensaje-enviado .mensaje-sender {
        color: #10b981;
        text-align: right;
    }

    /* Check marks */
    .check-icon {
        width: 16px;
        height: 16px;
    }

    .check-leido {
        color: var(--primary);
    }

    .check-enviado {
        color: #9ca3af;
    }

    /* Reply button on hover */
    .mensaje-actions {
        position: absolute;
        top: 6px;
        opacity: 0;
        transition: opacity 0.2s;
    }

    .mensaje-recibido .mensaje-actions {
        right: -36px;
    }

    .mensaje-enviado .mensaje-actions {
        left: -36px;
    }

    .mensaje:hover .mensaje-actions {
        opacity: 1;
    }

    .btn-reply {
        background: white;
        border: none;
        width: 32px;
        height: 32px;
        border-radius: 8px;
        cursor: pointer;
        color: var(--text-muted);
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        transition: all 0.2s;
    }

    .btn-reply:hover {
        background: var(--primary);
        color: white;
    }

    /* Reply Panel */
    .reply-panel {
        display: none;
        background: white;
        padding: 12px 20px;
        border-top: 1px solid var(--border);
        align-items: center;
        gap: 12px;
    }

    .reply-panel.show {
        display: flex;
    }

    .reply-content {
        flex: 1;
        background: var(--primary-lighter);
        border-left: 3px solid var(--primary);
        padding: 10px 14px;
        border-radius: 8px;
    }

    .reply-nombre {
        color: var(--primary);
        font-weight: 600;
        font-size: 0.85rem;
    }

    .reply-texto {
        color: var(--text-muted);
        font-size: 0.85rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .btn-cancel {
        background: none;
        border: none;
        width: 36px;
        height: 36px;
        cursor: pointer;
        color: var(--text-muted);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .btn-cancel:hover {
        background: #f1f5f9;
    }

    /* Preview Panel */
    .preview-panel {
        display: none;
        background: white;
        padding: 12px 20px;
        border-top: 1px solid var(--border);
        align-items: center;
        gap: 14px;
    }

    .preview-panel.show {
        display: flex;
    }

    .preview-thumb {
        width: 56px;
        height: 56px;
        object-fit: cover;
        border-radius: 10px;
    }

    .preview-info {
        flex: 1;
    }

    .preview-name {
        font-weight: 600;
        font-size: 0.9rem;
        color: var(--text-dark);
    }

    .preview-size {
        color: var(--text-muted);
        font-size: 0.8rem;
    }

    /* Input Area */
    .chat-input-area {
        padding: 16px 20px;
        background: white;
        border-top: 1px solid var(--border);
        flex-shrink: 0;
        box-sizing: border-box;
        width: 100%;
    }

    .chat-input-form {
        display: flex;
        align-items: center;
        gap: 12px;
        width: 100%;
        box-sizing: border-box;
    }

    .btn-attach {
        width: 44px;
        height: 44px;
        min-width: 44px;
        border-radius: 12px;
        border: 2px solid var(--border);
        background: white;
        color: var(--text-muted);
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        flex-shrink: 0;
    }

    .btn-attach:hover {
        border-color: var(--primary);
        color: var(--primary);
        background: var(--primary-lighter);
    }

    .chat-input {
        flex: 1;
        min-width: 0; /* Importante para que flex funcione correctamente */
        padding: 12px 18px;
        border: 2px solid var(--border);
        border-radius: 12px;
        font-size: 0.95rem;
        background: white;
        outline: none;
        transition: border-color 0.2s;
    }

    .chat-input:focus {
        border-color: var(--primary);
    }

    .btn-send {
        width: 48px;
        height: 48px;
        min-width: 48px;
        border-radius: 12px;
        border: none;
        background: var(--primary);
        color: white;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        flex-shrink: 0;
    }

    .btn-send:hover {
        background: var(--primary-dark);
    }

    .btn-send:disabled {
        background: #cbd5e1;
        cursor: not-allowed;
    }

    /* Empty State */
    .chat-empty {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 3rem;
        color: var(--text-muted);
    }

    .chat-empty svg {
        width: 64px;
        height: 64px;
        color: var(--primary-light);
        margin-bottom: 1rem;
    }

    .chat-empty p {
        margin: 0;
        font-size: 1rem;
    }

    .chat-empty small {
        color: var(--text-muted);
    }

    /* Image Modal */
    .image-modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.92);
        z-index: 9999;
        justify-content: center;
        align-items: center;
    }

    .image-modal.show {
        display: flex;
    }

    .image-modal img {
        max-width: 90%;
        max-height: 90%;
        object-fit: contain;
        border-radius: 8px;
    }

    .image-modal-close {
        position: absolute;
        top: 20px;
        right: 20px;
        background: rgba(255,255,255,0.15);
        border: none;
        color: white;
        width: 48px;
        height: 48px;
        border-radius: 12px;
        cursor: pointer;
        font-size: 24px;
        transition: background 0.2s;
    }

    .image-modal-close:hover {
        background: rgba(255,255,255,0.25);
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .mensajes-page {
            padding: 0;
            height: 100%;
            position: fixed;
            top: 60px; /* Espacio para el navbar superior */
            left: 0;
            right: 0;
            bottom: 0;
            overflow: hidden;
        }

        .chat-container {
            border-radius: 0;
            height: 100%;
            position: relative;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        .mensaje {
            max-width: 85%;
        }

        .mensaje-actions {
            display: none;
        }

        .chat-header {
            padding: 12px 16px;
            flex-shrink: 0;
        }

        .chat-messages {
            padding: 16px;
            flex: 1;
            min-height: 0; /* Importante para que flex funcione bien */
            overflow-y: auto;
            -webkit-overflow-scrolling: touch;
        }

        .chat-input-area {
            padding: 10px 12px;
            padding-bottom: calc(10px + env(safe-area-inset-bottom, 0px));
            flex-shrink: 0;
            background: white;
            border-top: 1px solid var(--border);
            box-sizing: border-box;
            width: 100%;
        }

        .chat-input-form {
            gap: 8px;
        }

        .btn-attach {
            width: 40px;
            height: 40px;
            min-width: 40px;
        }

        .btn-emoji {
            width: 40px;
            height: 40px;
            min-width: 40px;
        }

        .btn-send {
            width: 44px;
            height: 44px;
            min-width: 44px;
        }

        .chat-input {
            padding: 10px 14px;
            font-size: 16px; /* Evita zoom en iOS */
        }

        /* Reply y Preview panels */
        .reply-panel,
        .preview-panel {
            flex-shrink: 0;
            padding: 10px 12px;
        }
    }

    /* iOS Safe Areas */
    @@supports (padding-bottom: env(safe-area-inset-bottom)) {
        @@media (max-width: 768px) {
            .chat-input-area {
                padding-bottom: calc(12px + env(safe-area-inset-bottom));
            }

            .chat-container {
                padding-bottom: env(safe-area-inset-bottom);
            }
        }
    }

    /* Pantallas muy peque√±as (iPhone SE, etc.) */
    @@media (max-width: 400px) {
        .chat-input-area {
            padding: 8px 10px;
            padding-bottom: calc(8px + env(safe-area-inset-bottom, 0px));
        }

        .chat-input-form {
            gap: 6px;
        }

        .btn-attach {
            width: 36px;
            height: 36px;
            min-width: 36px;
        }

        .btn-emoji {
            width: 36px;
            height: 36px;
            min-width: 36px;
        }

        .btn-send {
            width: 40px;
            height: 40px;
            min-width: 40px;
        }

        .chat-input {
            padding: 8px 12px;
        }
    }

    /* Fix para cuando el teclado virtual est√° abierto */
    @@media (max-width: 768px) and (max-height: 500px) {
        .chat-messages {
            padding: 10px;
        }

        .chat-header {
            padding: 8px 12px;
        }

        .chat-avatar, .chat-avatar-default {
            width: 36px;
            height: 36px;
        }

        .chat-user-details h2 {
            font-size: 0.95rem;
        }

        .chat-input-area {
            padding: 6px 10px;
        }

        .chat-input-form {
            gap: 6px;
        }

        .chat-input {
            padding: 8px 12px;
        }

        .btn-attach, .btn-emoji {
            width: 34px;
            height: 34px;
            min-width: 34px;
        }

        .btn-send {
            width: 38px;
            height: 38px;
            min-width: 38px;
        }
    }

    #fileInput {
        display: none;
    }

    /* Emoji Picker - WhatsApp Style */
    .emoji-container {
        position: relative;
    }

    .btn-emoji {
        width: 44px;
        height: 44px;
        min-width: 44px;
        border-radius: 12px;
        border: 2px solid var(--border);
        background: white;
        color: var(--text-muted);
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        flex-shrink: 0;
    }

    .btn-emoji svg {
        width: 24px;
        height: 24px;
    }

    .btn-emoji:hover {
        border-color: var(--primary);
        background: var(--primary-lighter);
    }

    .btn-emoji.active {
        border-color: var(--primary);
        background: var(--primary-lighter);
        color: var(--primary);
    }

    .emoji-picker {
        position: absolute;
        bottom: 100%;
        left: 0;
        margin-bottom: 10px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 20px rgba(0,0,0,0.18);
        width: 350px;
        height: 380px;
        display: none;
        flex-direction: column;
        overflow: hidden;
        z-index: 1000;
    }

    .emoji-picker.show {
        display: flex;
        animation: emojiSlideUp 0.2s ease-out;
    }

    @@keyframes emojiSlideUp {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .emoji-header {
        padding: 12px;
        background: #f0f2f5;
        border-bottom: 1px solid #e4e6eb;
    }

    .emoji-search-box {
        display: flex;
        align-items: center;
        background: #fff;
        border-radius: 8px;
        padding: 8px 12px;
        gap: 8px;
    }

    .emoji-search-box svg {
        width: 18px;
        height: 18px;
        color: #8696a0;
        flex-shrink: 0;
    }

    .emoji-search-box input {
        flex: 1;
        border: none;
        outline: none;
        font-size: 14px;
        background: transparent;
    }

    .emoji-search-box input::placeholder {
        color: #8696a0;
    }

    .emoji-tabs {
        display: flex;
        background: #f0f2f5;
        padding: 0 8px;
        gap: 2px;
        flex-shrink: 0;
    }

    .emoji-tab {
        flex: 1;
        padding: 10px 6px;
        background: none;
        border: none;
        border-bottom: 3px solid transparent;
        cursor: pointer;
        font-size: 20px;
        font-family: "Apple Color Emoji", "Segoe UI Emoji", "Noto Color Emoji", "Android Emoji", "EmojiSymbols", sans-serif;
        transition: all 0.15s;
        opacity: 0.6;
    }

    .emoji-tab:hover {
        opacity: 1;
        background: rgba(0,0,0,0.05);
    }

    .emoji-tab.active {
        opacity: 1;
        border-bottom-color: #00a884;
    }

    .emoji-content {
        flex: 1;
        overflow-y: auto;
        padding: 8px;
        background: #fff;
    }

    .emoji-content::-webkit-scrollbar {
        width: 6px;
    }

    .emoji-content::-webkit-scrollbar-track {
        background: transparent;
    }

    .emoji-content::-webkit-scrollbar-thumb {
        background: #c5c7c9;
        border-radius: 3px;
    }

    .emoji-category-label {
        font-size: 13px;
        color: #667781;
        font-weight: 500;
        padding: 8px 6px 6px;
        position: sticky;
        top: 0;
        background: #fff;
        z-index: 1;
    }

    .emoji-grid {
        display: grid;
        grid-template-columns: repeat(8, 1fr);
        gap: 2px;
    }

    .emoji-item {
        width: 100%;
        aspect-ratio: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        font-family: "Apple Color Emoji", "Segoe UI Emoji", "Noto Color Emoji", "Android Emoji", "EmojiSymbols", sans-serif;
        cursor: pointer;
        border-radius: 8px;
        transition: background 0.1s;
        border: none;
        background: none;
        padding: 0;
        line-height: 1;
    }

    .emoji-item:hover {
        background: #f0f2f5;
    }

    .emoji-item:active {
        background: #e4e6eb;
        transform: scale(0.95);
    }

    .emoji-no-results {
        text-align: center;
        padding: 40px 20px;
        color: #667781;
    }

    .emoji-no-results svg {
        width: 48px;
        height: 48px;
        margin-bottom: 12px;
        opacity: 0.5;
    }

    @@media (max-width: 768px) {
        .emoji-picker {
            position: fixed;
            left: 10px;
            right: 10px;
            bottom: 80px;
            width: auto;
            height: 320px;
            margin-bottom: 0;
        }

        .emoji-grid {
            grid-template-columns: repeat(7, 1fr);
        }

        .emoji-item {
            font-size: 22px;
        }
    }

    /* ========================================
       SIMPLIFICACI√ìN M√ìVIL - CHAT
       ======================================== */

    /* M√≥vil Grande (< 768px) - Mejoras adicionales */
    @@media (max-width: 767px) {
        /* Layout fullscreen */
        .mensajes-page {
            padding: 0;
            position: fixed;
            top: 56px;
            left: 0;
            right: 0;
            bottom: 0;
            max-width: 100%;
        }

        .chat-container {
            border-radius: 0;
