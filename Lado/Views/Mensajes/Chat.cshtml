                            }
                            else if (mensaje.TipoMensaje == Lado.Models.TipoMensaje.Video && !string.IsNullOrEmpty(mensaje.RutaArchivo))
                            {
                                <video src="@mensaje.RutaArchivo" class="mensaje-video" controls playsinline></video>
                            }

                            @if (!string.IsNullOrEmpty(mensaje.Contenido))
                            {
                                <div class="mensaje-texto">@mensaje.Contenido</div>
                            }

                            <div class="mensaje-info">
                                <span class="mensaje-hora">@mensaje.FechaEnvio.ToString("HH:mm")</span>
                                @if (esMio)
                                {
                                    @if (mensaje.Leido)
                                    {
                                        <svg class="check-icon check-leido" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                                            <path d="M18 6 7 17l-5-5"/><path d="m22 10-7.5 7.5L13 16"/>
                                        </svg>
                                    }
                                    else
                                    {
                                        <svg class="check-icon check-enviado" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                                            <polyline points="20 6 9 17 4 12"/>
                                        </svg>
                                    }
                                }
                            </div>
                        </div>

                        <div class="mensaje-actions">
                            <button class="btn-reply" onclick="iniciarRespuesta(@mensaje.Id, '@(mensaje.Remitente?.NombreCompleto ?? mensaje.Remitente?.UserName ?? "Usuario")', '@mensaje.Contenido.Replace("'", "\\'")', @((int)mensaje.TipoMensaje))" title="Responder">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <polyline points="9 17 4 12 9 7"/><path d="M20 18v-2a4 4 0 0 0-4-4H4"/>
                                </svg>
                            </button>
                            <button class="btn-delete-msg" onclick="confirmarEliminarMensaje(@mensaje.Id)" title="Eliminar">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M3 6h18"/><path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/><path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/>
                                </svg>
                            </button>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="chat-empty">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
                    </svg>
                    <p>No hay mensajes aun</p>
                    <small>Envia el primer mensaje</small>
                </div>
            }
        </div>

        <!-- Reply Panel -->
        <div class="reply-panel" id="replyPanel">
            <div class="reply-content">
                <div class="reply-nombre" id="replyNombre"></div>
                <div class="reply-texto" id="replyTexto"></div>
            </div>
            <button class="btn-cancel" onclick="cancelarRespuesta()">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/>
                </svg>
            </button>
        </div>

        <!-- Preview Panel -->
        <div class="preview-panel" id="previewPanel">
            <img id="previewThumb" class="preview-thumb" src="" alt="">
            <div class="preview-info">
                <div class="preview-name" id="previewName"></div>
                <div class="preview-size" id="previewSize"></div>
            </div>
            <button class="btn-cancel" onclick="cancelarArchivo()">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/>
                </svg>
            </button>
        </div>

        <!-- Story Reply Panel - Referencia a historia -->
        @{
            var storyRef = ViewBag.StoryReferencia;
        }
        @if (storyRef != null)
        {
            <div class="story-reply-panel" id="storyReplyPanel">
                <div class="story-reply-preview">
                    <img src="@storyRef.ImagenUrl" alt="Historia" class="story-reply-thumb" onerror="this.src='/images/placeholder.png'">
                </div>
                <div class="story-reply-info">
                    <div class="story-reply-label">
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/>
                        </svg>
                        Respondiendo a historia
                    </div>
                    <div class="story-reply-user">de @@@storyRef.CreadorUsername</div>
                </div>
                <button class="btn-cancel" onclick="cancelarStoryReply()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/>
                    </svg>
                </button>
            </div>
        }

        <!-- Input Area -->
        <div class="chat-input-area">
            <form id="formEnviarMensaje" class="chat-input-form" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" id="destinatarioId" value="@otroUsuario?.Id">
                <input type="hidden" id="mensajeRespondidoId" value="">
                <input type="hidden" id="storyReferenciaId" name="storyReferenciaId" value="@(storyRef?.Id ?? 0)">
                <input type="file" id="fileInput" accept="image/*,video/*" onchange="previewArchivo(this)">

                <button type="button" class="btn-attach" onclick="document.getElementById('fileInput').click()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="m21.44 11.05-9.19 9.19a6 6 0 0 1-8.49-8.49l9.19-9.19a4 4 0 0 1 5.66 5.66l-9.2 9.19a2 2 0 0 1-2.83-2.83l8.49-8.48"/>
                    </svg>
                </button>

                <!-- Emoji Picker -->
                <div class="emoji-container">
                    <button type="button" class="btn-emoji" id="btnEmoji" onclick="toggleEmojiPicker()">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"/>
                            <path d="M8 14s1.5 2 4 2 4-2 4-2"/>
                            <line x1="9" y1="9" x2="9.01" y2="9"/>
                            <line x1="15" y1="9" x2="15.01" y2="9"/>
                        </svg>
                    </button>
                    <div class="emoji-picker" id="emojiPicker">
                        <div class="emoji-header">
                            <div class="emoji-search-box">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <circle cx="11" cy="11" r="8"/><path d="m21 21-4.35-4.35"/>
                                </svg>
                                <input type="text" id="emojiSearch" placeholder="Buscar emoji" autocomplete="off">
                            </div>
                        </div>
                        <div class="emoji-tabs">
                            <button type="button" class="emoji-tab active" data-category="recientes" title="Recientes">🕐</button>
                            <button type="button" class="emoji-tab" data-category="caras" title="Caras y emociones">😊</button>
                            <button type="button" class="emoji-tab" data-category="personas" title="Personas">👋</button>
