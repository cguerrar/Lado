                if (e.key === 'Escape') {
                    cerrarImagenModal();
                    cancelarRespuesta();
                    cancelarArchivo();
                    document.getElementById('emojiPicker').classList.remove('show');
                    document.getElementById('btnEmoji').classList.remove('active');
                }
            });

            // Escuchar cambios de tamaño (teclado virtual)
            window.addEventListener('resize', ajustarAlturaMobile);
            window.visualViewport?.addEventListener('resize', ajustarAlturaMobile);
        });
