@model Lado.Models.ApplicationUser
@{
    var otroUsuario = ViewBag.Destinatario as Lado.Models.ApplicationUser;
    var mensajes = ViewBag.Mensajes as List<Lado.Models.MensajePrivado>;
    ViewData["Title"] = otroUsuario != null ? $"Chat con {otroUsuario.NombreCompleto}" : "Chat";
}

<style>
    :root {
        --primary: #4682B4;
        --primary-dark: #36648B;
        --primary-light: #B0C4DE;
        --primary-lighter: #E8F1F8;
        --msg-sent: #E3F2FD;
        --msg-received: #ffffff;
        --bg-chat: #f1f5f9;
        --text-dark: #1e293b;
        --text-muted: #64748b;
        --border: #e2e8f0;
    }

    .mensajes-page {
        max-width: 900px;
        margin: 0 auto;
        padding: 0;
    }

    .chat-container {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        display: flex;
        flex-direction: column;
        height: calc(100vh - 120px);
        min-height: 500px;
        overflow: hidden;
    }

    /* Header */
    .chat-header {
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        color: white;
        padding: 16px 20px;
        display: flex;
        align-items: center;
        gap: 16px;
        flex-shrink: 0;
    }

    .btn-back {
        color: white;
        text-decoration: none;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        transition: background 0.2s;
    }

    .btn-back:hover {
        background: rgba(255,255,255,0.15);
    }

    .chat-user-info {
        flex: 1;
        min-width: 0;
        display: flex;
        align-items: center;
        gap: 14px;
        cursor: pointer;
    }

    .chat-avatar {
        width: 44px;
        height: 44px;
        border-radius: 12px;
        object-fit: cover;
        border: 2px solid rgba(255,255,255,0.3);
        flex-shrink: 0;
    }

    .chat-avatar-default {
        width: 44px;
        height: 44px;
        border-radius: 12px;
        background: rgba(255,255,255,0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .chat-user-details h2 {
        font-size: 1.1rem;
        font-weight: 700;
        margin: 0;
        line-height: 1.3;
    }

    .chat-user-details span {
        font-size: 0.85rem;
        opacity: 0.85;
    }

    .typing-indicator {
        display: none;
        color: #a5d6a7;
    }

    .typing-indicator.show {
        display: inline;
    }

    .chat-menu {
        position: relative;
    }

    .btn-menu {
        color: white;
        background: none;
        border: none;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        cursor: pointer;
        transition: background 0.2s;
    }

    .btn-menu:hover {
        background: rgba(255,255,255,0.15);
    }

    /* Messages Area */
    .chat-messages {
        flex: 1;
        overflow-y: auto;
        padding: 20px;
        background: var(--bg-chat);
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .chat-messages::-webkit-scrollbar {
        width: 6px;
    }

    .chat-messages::-webkit-scrollbar-track {
        background: transparent;
    }

    .chat-messages::-webkit-scrollbar-thumb {
        background: rgba(0,0,0,0.15);
        border-radius: 3px;
    }

    /* Message Bubbles */
    .mensaje {
        display: flex;
        flex-direction: column;
        max-width: 75%;
        position: relative;
    }

    .mensaje-recibido {
        align-self: flex-start;
    }

    .mensaje-enviado {
        align-self: flex-end;
    }

    .mensaje-burbuja {
        padding: 10px 14px;
        border-radius: 16px;
        position: relative;
        word-wrap: break-word;
    }

    .mensaje-recibido .mensaje-burbuja {
        background: var(--msg-received);
        border-bottom-left-radius: 4px;
        box-shadow: 0 1px 2px rgba(0,0,0,0.08);
    }

    .mensaje-enviado .mensaje-burbuja {
        background: var(--msg-sent);
        border-bottom-right-radius: 4px;
    }

    /* Reply Quote */
    .mensaje-respuesta {
        background: rgba(70,130,180,0.1);
        border-left: 3px solid var(--primary);
        padding: 8px 12px;
        margin-bottom: 8px;
        border-radius: 6px;
        font-size: 0.85rem;
        cursor: pointer;
        transition: background 0.2s;
    }

    .mensaje-respuesta:hover {
        background: rgba(70,130,180,0.15);
    }

    .mensaje-respuesta-nombre {
        color: var(--primary);
        font-weight: 600;
        margin-bottom: 2px;
    }

    .mensaje-respuesta-texto {
        color: var(--text-muted);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .mensaje-respuesta-media {
        display: flex;
        align-items: center;
        gap: 6px;
        color: var(--text-muted);
    }

    /* Media */
    .mensaje-imagen {
        max-width: 280px;
        border-radius: 12px;
        cursor: pointer;
        margin-bottom: 6px;
    }

    .mensaje-video {
        max-width: 280px;
        border-radius: 12px;
        margin-bottom: 6px;
    }

    .mensaje-texto {
        font-size: 0.95rem;
        line-height: 1.45;
        color: var(--text-dark);
    }

    .mensaje-info {
        display: flex;
        align-items: center;
        justify-content: flex-end;
        gap: 5px;
        margin-top: 4px;
        font-size: 0.7rem;
        color: var(--text-muted);
    }

    /* Check marks */
    .check-icon {
        width: 16px;
        height: 16px;
    }

    .check-leido {
        color: var(--primary);
    }

    .check-enviado {
        color: #9ca3af;
    }

    /* Reply button on hover */
    .mensaje-actions {
        position: absolute;
        top: 6px;
        opacity: 0;
        transition: opacity 0.2s;
    }

    .mensaje-recibido .mensaje-actions {
        right: -36px;
    }

    .mensaje-enviado .mensaje-actions {
        left: -36px;
    }

    .mensaje:hover .mensaje-actions {
        opacity: 1;
    }

    .btn-reply {
        background: white;
        border: none;
        width: 32px;
        height: 32px;
        border-radius: 8px;
        cursor: pointer;
        color: var(--text-muted);
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        transition: all 0.2s;
    }

    .btn-reply:hover {
        background: var(--primary);
        color: white;
    }

    /* Reply Panel */
    .reply-panel {
        display: none;
        background: white;
        padding: 12px 20px;
        border-top: 1px solid var(--border);
        align-items: center;
        gap: 12px;
    }

    .reply-panel.show {
        display: flex;
    }

    .reply-content {
        flex: 1;
        background: var(--primary-lighter);
        border-left: 3px solid var(--primary);
        padding: 10px 14px;
        border-radius: 8px;
    }

    .reply-nombre {
        color: var(--primary);
        font-weight: 600;
        font-size: 0.85rem;
    }

    .reply-texto {
        color: var(--text-muted);
        font-size: 0.85rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .btn-cancel {
        background: none;
        border: none;
        width: 36px;
        height: 36px;
        cursor: pointer;
        color: var(--text-muted);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .btn-cancel:hover {
        background: #f1f5f9;
    }

    /* Preview Panel */
    .preview-panel {
        display: none;
        background: white;
        padding: 12px 20px;
        border-top: 1px solid var(--border);
        align-items: center;
        gap: 14px;
    }

    .preview-panel.show {
        display: flex;
    }

    .preview-thumb {
        width: 56px;
        height: 56px;
        object-fit: cover;
        border-radius: 10px;
    }

    .preview-info {
        flex: 1;
    }

    .preview-name {
        font-weight: 600;
        font-size: 0.9rem;
        color: var(--text-dark);
    }

    .preview-size {
        color: var(--text-muted);
        font-size: 0.8rem;
    }

    /* Input Area */
    .chat-input-area {
        padding: 16px 20px;
        background: white;
        border-top: 1px solid var(--border);
        flex-shrink: 0;
    }

    .chat-input-form {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .btn-attach {
        width: 44px;
        height: 44px;
        border-radius: 12px;
        border: 2px solid var(--border);
        background: white;
        color: var(--text-muted);
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        flex-shrink: 0;
    }

    .btn-attach:hover {
        border-color: var(--primary);
        color: var(--primary);
        background: var(--primary-lighter);
    }

    .chat-input {
        flex: 1;
        padding: 12px 18px;
        border: 2px solid var(--border);
        border-radius: 12px;
        font-size: 0.95rem;
        background: white;
        outline: none;
        transition: border-color 0.2s;
    }

    .chat-input:focus {
        border-color: var(--primary);
    }

    .btn-send {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        border: none;
        background: var(--primary);
        color: white;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        flex-shrink: 0;
    }

    .btn-send:hover {
        background: var(--primary-dark);
    }

    .btn-send:disabled {
        background: #cbd5e1;
        cursor: not-allowed;
    }

    /* Empty State */
    .chat-empty {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 3rem;
        color: var(--text-muted);
    }

    .chat-empty svg {
        width: 64px;
        height: 64px;
        color: var(--primary-light);
        margin-bottom: 1rem;
    }

    .chat-empty p {
        margin: 0;
        font-size: 1rem;
    }

    .chat-empty small {
        color: var(--text-muted);
    }

    /* Image Modal */
    .image-modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.92);
        z-index: 9999;
        justify-content: center;
        align-items: center;
    }

    .image-modal.show {
        display: flex;
    }

    .image-modal img {
        max-width: 90%;
        max-height: 90%;
        object-fit: contain;
        border-radius: 8px;
    }

    .image-modal-close {
        position: absolute;
        top: 20px;
        right: 20px;
        background: rgba(255,255,255,0.15);
        border: none;
        color: white;
        width: 48px;
        height: 48px;
        border-radius: 12px;
        cursor: pointer;
        font-size: 24px;
        transition: background 0.2s;
    }

    .image-modal-close:hover {
        background: rgba(255,255,255,0.25);
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .mensajes-page {
            padding: 0;
        }

        .chat-container {
            border-radius: 0;
            height: calc(100vh - 70px);
        }

        .mensaje {
            max-width: 85%;
        }

        .mensaje-actions {
            display: none;
        }

        .chat-header {
            padding: 12px 16px;
        }

        .chat-messages {
            padding: 16px;
        }

        .chat-input-area {
            padding: 12px 16px;
        }
    }

    #fileInput {
        display: none;
    }
</style>

<div class="mensajes-page">
    <div class="chat-container">
        <!-- Header -->
        <div class="chat-header">
            <a href="/Mensajes" class="btn-back">
                <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M19 12H5M12 19l-7-7 7-7"/>
                </svg>
            </a>

            <div class="chat-user-info" onclick="window.location.href='/Explorar/Perfil/@otroUsuario?.Id'">
                @if (!string.IsNullOrEmpty(otroUsuario?.FotoPerfil))
                {
                    <img src="@otroUsuario.FotoPerfil" alt="" class="chat-avatar">
                }
                else
                {
                    <div class="chat-avatar-default">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                            <circle cx="12" cy="7" r="4"/>
                        </svg>
                    </div>
                }
                <div class="chat-user-details">
                    <h2>@otroUsuario?.NombreCompleto</h2>
                    <span>
                        <span class="typing-indicator" id="typingIndicator">escribiendo...</span>
                        <span class="online-status">@@@otroUsuario?.UserName</span>
                    </span>
                </div>
            </div>

            <div class="chat-menu dropdown">
                <button class="btn-menu dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="1"/><circle cx="12" cy="5" r="1"/><circle cx="12" cy="19" r="1"/>
                    </svg>
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="/Explorar/Perfil/@otroUsuario?.Id">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
                        Ver perfil
                    </a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item text-danger" href="#" onclick="eliminarConversacion(); return false;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2"><path d="M3 6h18M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6M8 6V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/></svg>
                        Eliminar conversacion
                    </a></li>
                </ul>
            </div>
        </div>

        <!-- Messages -->
        <div class="chat-messages" id="chatMessages">
            @if (mensajes != null && mensajes.Count > 0)
            {
                @foreach (var mensaje in mensajes)
                {
                    var esMio = mensaje.RemitenteId == Model.Id;
                    <div class="mensaje @(esMio ? "mensaje-enviado" : "mensaje-recibido")" data-id="@mensaje.Id">
                        <div class="mensaje-burbuja">
                            @if (mensaje.MensajeRespondido != null)
                            {
                                <div class="mensaje-respuesta" onclick="scrollToMessage(@mensaje.MensajeRespondido.Id)">
                                    <div class="mensaje-respuesta-nombre">
                                        @(mensaje.MensajeRespondido.Remitente?.NombreCompleto ?? mensaje.MensajeRespondido.Remitente?.UserName ?? "Usuario")
                                    </div>
                                    @if (mensaje.MensajeRespondido.TipoMensaje == Lado.Models.TipoMensaje.Imagen)
                                    {
                                        <div class="mensaje-respuesta-media">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="18" height="18" rx="2"/><circle cx="8.5" cy="8.5" r="1.5"/><path d="m21 15-5-5L5 21"/></svg>
                                            Foto
                                        </div>
                                    }
                                    else if (mensaje.MensajeRespondido.TipoMensaje == Lado.Models.TipoMensaje.Video)
                                    {
                                        <div class="mensaje-respuesta-media">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polygon points="5 3 19 12 5 21 5 3"/></svg>
                                            Video
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="mensaje-respuesta-texto">@mensaje.MensajeRespondido.Contenido</div>
                                    }
                                </div>
                            }

                            @if (mensaje.TipoMensaje == Lado.Models.TipoMensaje.Imagen && !string.IsNullOrEmpty(mensaje.RutaArchivo))
                            {
                                <img src="@mensaje.RutaArchivo" alt="Imagen" class="mensaje-imagen" onclick="abrirImagenModal(this.src)">
                            }
                            else if (mensaje.TipoMensaje == Lado.Models.TipoMensaje.Video && !string.IsNullOrEmpty(mensaje.RutaArchivo))
                            {
                                <video src="@mensaje.RutaArchivo" class="mensaje-video" controls playsinline></video>
                            }

                            @if (!string.IsNullOrEmpty(mensaje.Contenido))
                            {
                                <div class="mensaje-texto">@mensaje.Contenido</div>
                            }

                            <div class="mensaje-info">
                                <span>@mensaje.FechaEnvio.ToString("HH:mm")</span>
                                @if (esMio)
                                {
                                    @if (mensaje.Leido)
                                    {
                                        <svg class="check-icon check-leido" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                                            <path d="M18 6 7 17l-5-5"/><path d="m22 10-7.5 7.5L13 16"/>
                                        </svg>
                                    }
                                    else
                                    {
                                        <svg class="check-icon check-enviado" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                                            <polyline points="20 6 9 17 4 12"/>
                                        </svg>
                                    }
                                }
                            </div>
                        </div>

                        <div class="mensaje-actions">
                            <button class="btn-reply" onclick="iniciarRespuesta(@mensaje.Id, '@(mensaje.Remitente?.NombreCompleto ?? mensaje.Remitente?.UserName ?? "Usuario")', '@mensaje.Contenido.Replace("'", "\\'")', @((int)mensaje.TipoMensaje))">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <polyline points="9 17 4 12 9 7"/><path d="M20 18v-2a4 4 0 0 0-4-4H4"/>
                                </svg>
                            </button>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="chat-empty">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
                    </svg>
                    <p>No hay mensajes aun</p>
                    <small>Envia el primer mensaje</small>
                </div>
            }
        </div>

        <!-- Reply Panel -->
        <div class="reply-panel" id="replyPanel">
            <div class="reply-content">
                <div class="reply-nombre" id="replyNombre"></div>
                <div class="reply-texto" id="replyTexto"></div>
            </div>
            <button class="btn-cancel" onclick="cancelarRespuesta()">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/>
                </svg>
            </button>
        </div>

        <!-- Preview Panel -->
        <div class="preview-panel" id="previewPanel">
            <img id="previewThumb" class="preview-thumb" src="" alt="">
            <div class="preview-info">
                <div class="preview-name" id="previewName"></div>
                <div class="preview-size" id="previewSize"></div>
            </div>
            <button class="btn-cancel" onclick="cancelarArchivo()">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/>
                </svg>
            </button>
        </div>

        <!-- Input Area -->
        <div class="chat-input-area">
            <form id="formEnviarMensaje" class="chat-input-form" enctype="multipart/form-data">
                <input type="hidden" id="destinatarioId" value="@otroUsuario?.Id">
                <input type="hidden" id="mensajeRespondidoId" value="">
                <input type="file" id="fileInput" accept="image/*,video/*" onchange="previewArchivo(this)">

                <button type="button" class="btn-attach" onclick="document.getElementById('fileInput').click()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="m21.44 11.05-9.19 9.19a6 6 0 0 1-8.49-8.49l9.19-9.19a4 4 0 0 1 5.66 5.66l-9.2 9.19a2 2 0 0 1-2.83-2.83l8.49-8.48"/>
                    </svg>
                </button>

                <input type="text" id="inputMensaje" class="chat-input" placeholder="Escribe un mensaje..." autocomplete="off">

                <button type="submit" class="btn-send" id="btnEnviar">
                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="22" y1="2" x2="11" y2="13"/><polygon points="22 2 15 22 11 13 2 9 22 2"/>
                    </svg>
                </button>
            </form>
        </div>
    </div>
</div>

<!-- Image Modal -->
<div class="image-modal" id="imageModal" onclick="cerrarImagenModal()">
    <button class="image-modal-close">&times;</button>
    <img id="modalImage" src="" alt="">
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script>
        const usuarioActualId = '@Model.Id';
        const otroUsuarioId = '@otroUsuario?.Id';
        let mensajeRespondidoId = null;
        let archivoSeleccionado = null;
        let connection = null;
        let typingTimeout = null;

        // SignalR
        async function iniciarSignalR() {
            connection = new signalR.HubConnectionBuilder()
                .withUrl("/chatHub")
                .withAutomaticReconnect()
                .build();

            connection.on("RecibirMensaje", function(mensaje) {
                if (mensaje.remitenteId === otroUsuarioId) {
                    renderizarMensaje(mensaje, false);
                    marcarMensajesComoLeidos([mensaje.id]);
                }
            });

            connection.on("MensajesLeidos", function(data) {
                if (data.lectorId === otroUsuarioId) {
                    data.mensajeIds.forEach(id => actualizarCheckLeido(id));
                }
            });

            connection.on("UserTyping", function(data) {
                if (data.userId === otroUsuarioId) mostrarTyping();
            });

            connection.on("UserStoppedTyping", function(data) {
                if (data.userId === otroUsuarioId) ocultarTyping();
            });

            try {
                await connection.start();
                await connection.invoke("JoinConversation", otroUsuarioId);
            } catch (err) {
                console.error("Error SignalR:", err);
                setInterval(cargarMensajesNuevos, 5000);
            }
        }

        function mostrarTyping() {
            document.getElementById('typingIndicator').classList.add('show');
            document.querySelector('.online-status').style.display = 'none';
        }

        function ocultarTyping() {
            document.getElementById('typingIndicator').classList.remove('show');
            document.querySelector('.online-status').style.display = 'inline';
        }

        // Render Messages
        function renderizarMensaje(mensaje, esMio) {
            const chatEmpty = document.querySelector('.chat-empty');
            if (chatEmpty) chatEmpty.remove();

            let respuestaHtml = '';
            if (mensaje.mensajeRespondido) {
                const mr = mensaje.mensajeRespondido;
                let contenidoRespuesta = mr.tipoMensaje === 1
                    ? '<div class="mensaje-respuesta-media"><svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="18" height="18" rx="2"/><circle cx="8.5" cy="8.5" r="1.5"/><path d="m21 15-5-5L5 21"/></svg> Foto</div>'
                    : mr.tipoMensaje === 2
                    ? '<div class="mensaje-respuesta-media"><svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polygon points="5 3 19 12 5 21 5 3"/></svg> Video</div>'
                    : `<div class="mensaje-respuesta-texto">${escapeHtml(mr.contenido)}</div>`;
                respuestaHtml = `<div class="mensaje-respuesta" onclick="scrollToMessage(${mr.id})"><div class="mensaje-respuesta-nombre">${escapeHtml(mr.remitenteNombre)}</div>${contenidoRespuesta}</div>`;
            }

            let mediaHtml = '';
            if (mensaje.tipoMensaje === 1 && mensaje.rutaArchivo) {
                mediaHtml = `<img src="${mensaje.rutaArchivo}" alt="Imagen" class="mensaje-imagen" onclick="abrirImagenModal(this.src)">`;
            } else if (mensaje.tipoMensaje === 2 && mensaje.rutaArchivo) {
                mediaHtml = `<video src="${mensaje.rutaArchivo}" class="mensaje-video" controls playsinline></video>`;
            }

            const textoHtml = mensaje.contenido ? `<div class="mensaje-texto">${escapeHtml(mensaje.contenido)}</div>` : '';
            const checkHtml = esMio ? `<svg class="check-icon check-enviado" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><polyline points="20 6 9 17 4 12"/></svg>` : '';

            const html = `
                <div class="mensaje ${esMio ? 'mensaje-enviado' : 'mensaje-recibido'}" data-id="${mensaje.id}">
                    <div class="mensaje-burbuja">${respuestaHtml}${mediaHtml}${textoHtml}<div class="mensaje-info"><span>${mensaje.fechaEnvio}</span>${checkHtml}</div></div>
                    <div class="mensaje-actions"><button class="btn-reply" onclick="iniciarRespuesta(${mensaje.id}, '${escapeHtml(mensaje.remitenteNombre || 'Usuario')}', '${escapeHtml(mensaje.contenido || '')}', ${mensaje.tipoMensaje})"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="9 17 4 12 9 7"/><path d="M20 18v-2a4 4 0 0 0-4-4H4"/></svg></button></div>
                </div>`;

            document.getElementById('chatMessages').insertAdjacentHTML('beforeend', html);
            scrollToBottom();
        }

        function actualizarCheckLeido(mensajeId) {
            const mensaje = document.querySelector(`.mensaje[data-id="${mensajeId}"]`);
            if (mensaje) {
                const check = mensaje.querySelector('.check-enviado');
                if (check) {
                    check.outerHTML = `<svg class="check-icon check-leido" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M18 6 7 17l-5-5"/><path d="m22 10-7.5 7.5L13 16"/></svg>`;
                }
            }
        }

        // Reply System
        function iniciarRespuesta(id, nombre, texto, tipoMensaje) {
            mensajeRespondidoId = id;
            document.getElementById('mensajeRespondidoId').value = id;
            document.getElementById('replyNombre').textContent = nombre;
            document.getElementById('replyTexto').innerHTML = tipoMensaje === 1
                ? '<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="vertical-align:middle;margin-right:4px"><rect x="3" y="3" width="18" height="18" rx="2"/><circle cx="8.5" cy="8.5" r="1.5"/><path d="m21 15-5-5L5 21"/></svg> Foto'
                : tipoMensaje === 2
                ? '<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="vertical-align:middle;margin-right:4px"><polygon points="5 3 19 12 5 21 5 3"/></svg> Video'
                : texto.substring(0, 50) + (texto.length > 50 ? '...' : '');
            document.getElementById('replyPanel').classList.add('show');
            document.getElementById('inputMensaje').focus();
        }

        function cancelarRespuesta() {
            mensajeRespondidoId = null;
            document.getElementById('mensajeRespondidoId').value = '';
            document.getElementById('replyPanel').classList.remove('show');
        }

        function scrollToMessage(id) {
            const mensaje = document.querySelector(`.mensaje[data-id="${id}"]`);
            if (mensaje) {
                mensaje.scrollIntoView({ behavior: 'smooth', block: 'center' });
                mensaje.style.backgroundColor = 'rgba(70,130,180,0.15)';
                setTimeout(() => mensaje.style.backgroundColor = '', 1500);
            }
        }

        // File Handling
        function previewArchivo(input) {
            if (input.files && input.files[0]) {
                const file = input.files[0];
                if (file.size > 10 * 1024 * 1024) {
                    alert('El archivo no puede superar 10 MB');
                    input.value = '';
                    return;
                }
                archivoSeleccionado = file;
                const reader = new FileReader();
                reader.onload = e => document.getElementById('previewThumb').src = e.target.result;
                reader.readAsDataURL(file);
                document.getElementById('previewName').textContent = file.name;
                document.getElementById('previewSize').textContent = formatBytes(file.size);
                document.getElementById('previewPanel').classList.add('show');
            }
        }

        function cancelarArchivo() {
            archivoSeleccionado = null;
            document.getElementById('fileInput').value = '';
            document.getElementById('previewPanel').classList.remove('show');
        }

        function formatBytes(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024, sizes = ['Bytes', 'KB', 'MB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(1)) + ' ' + sizes[i];
        }

        // Image Modal
        function abrirImagenModal(src) {
            document.getElementById('modalImage').src = src;
            document.getElementById('imageModal').classList.add('show');
        }

        function cerrarImagenModal() {
            document.getElementById('imageModal').classList.remove('show');
        }

        // Send Message
        async function enviarMensaje(e) {
            e.preventDefault();
            const contenido = document.getElementById('inputMensaje').value.trim();
            if (!contenido && !archivoSeleccionado) return;

            const btnEnviar = document.getElementById('btnEnviar');
            btnEnviar.disabled = true;

            const formData = new FormData();
            formData.append('destinatarioId', otroUsuarioId);
            formData.append('contenido', contenido);
            if (archivoSeleccionado) formData.append('archivo', archivoSeleccionado);
            if (mensajeRespondidoId) formData.append('mensajeRespondidoId', mensajeRespondidoId);

            try {
                const response = await fetch('/Mensajes/EnviarMensajeConArchivo', { method: 'POST', body: formData });
                const data = await response.json();
                if (data.success) {
                    renderizarMensaje(data.mensaje, true);
                    document.getElementById('inputMensaje').value = '';
                    cancelarRespuesta();
                    cancelarArchivo();
                } else {
                    alert(data.message || 'Error al enviar');
                }
            } catch (error) {
                alert('Error al enviar el mensaje');
            }
            btnEnviar.disabled = false;
        }

        // Mark as Read
        async function marcarMensajesComoLeidos(ids) {
            try {
                await fetch('/Mensajes/MarcarMensajesComoLeidos', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ mensajeIds: ids })
                });
            } catch (err) {}
        }

        // Polling fallback
        let ultimoMensajeId = @(mensajes?.LastOrDefault()?.Id ?? 0);
        async function cargarMensajesNuevos() {
            try {
                const response = await fetch(`/Mensajes/CargarMensajes?contactoId=${otroUsuarioId}`);
                const data = await response.json();
                if (data.success && data.mensajes) {
                    data.mensajes.filter(m => m.id > ultimoMensajeId).forEach(mensaje => {
                        renderizarMensaje(mensaje, mensaje.remitenteId === usuarioActualId);
                        ultimoMensajeId = Math.max(ultimoMensajeId, mensaje.id);
                        if (mensaje.remitenteId !== usuarioActualId) marcarMensajesComoLeidos([mensaje.id]);
                    });
                    data.mensajes.forEach(m => { if (m.remitenteId === usuarioActualId && m.leido) actualizarCheckLeido(m.id); });
                }
            } catch (err) {}
        }

        // Delete Conversation
        function eliminarConversacion() {
            if (!confirm('Â¿Eliminar esta conversacion?')) return;
            const formData = new FormData();
            formData.append('contactoId', otroUsuarioId);
            fetch('/Mensajes/EliminarConversacion', { method: 'POST', body: formData })
                .then(() => window.location.href = '/Mensajes');
        }

        // Utilities
        function scrollToBottom() {
            const chat = document.getElementById('chatMessages');
            chat.scrollTop = chat.scrollHeight;
        }

        function escapeHtml(text) {
            if (!text) return '';
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML.replace(/'/g, "\\'").replace(/"/g, '\\"');
        }

        // Typing
        function enviarTyping() {
            if (connection?.state === signalR.HubConnectionState.Connected) {
                connection.invoke("SendTyping", otroUsuarioId).catch(() => {});
            }
        }

        function detenerTyping() {
            if (connection?.state === signalR.HubConnectionState.Connected) {
                connection.invoke("StopTyping", otroUsuarioId).catch(() => {});
            }
        }

        // Init
        document.addEventListener('DOMContentLoaded', function() {
            scrollToBottom();
            iniciarSignalR();
            document.getElementById('formEnviarMensaje').addEventListener('submit', enviarMensaje);
            document.getElementById('inputMensaje').addEventListener('input', function() {
                enviarTyping();
                clearTimeout(typingTimeout);
                typingTimeout = setTimeout(detenerTyping, 2000);
            });
            document.addEventListener('keydown', e => {
                if (e.key === 'Escape') { cerrarImagenModal(); cancelarRespuesta(); cancelarArchivo(); }
            });
        });
    </script>
}
