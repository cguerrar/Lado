@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script>
        const usuarioActualId = '@Model.Id';
        const otroUsuarioId = '@otroUsuario?.Id';
        const otroUsuarioNombre = '@(otroUsuario?.NombreCompleto ?? otroUsuario?.UserName ?? "Usuario")';
        let mensajeRespondidoId = null;
        let archivoSeleccionado = null;
        let connection = null;
        let typingTimeout = null;

        // SignalR
        async function iniciarSignalR() {
            connection = new signalR.HubConnectionBuilder()
                .withUrl("/chatHub")
                .withAutomaticReconnect()
                .build();

            connection.on("RecibirMensaje", function(mensaje) {
                if (mensaje.remitenteId === otroUsuarioId) {
                    renderizarMensaje(mensaje, false);
                    marcarMensajesComoLeidos([mensaje.id]);
                }
            });

            connection.on("MensajesLeidos", function(data) {
                if (data.lectorId === otroUsuarioId) {
                    data.mensajeIds.forEach(id => actualizarCheckLeido(id));
                }
            });

            connection.on("UserTyping", function(data) {
                if (data.userId === otroUsuarioId) mostrarTyping();
            });

            connection.on("UserStoppedTyping", function(data) {
                if (data.userId === otroUsuarioId) ocultarTyping();
            });

            // Handler para mensaje eliminado por el otro usuario
            connection.on("MensajeEliminado", function(data) {
                // Si el remitente eliminó su mensaje, mostrar indicador
                if (data.eliminadoPorRemitente && data.eliminadoPor === otroUsuarioId) {
                    const mensajeEl = document.querySelector(`.mensaje[data-id="${data.mensajeId}"]`);
                    if (mensajeEl) {
                        const burbuja = mensajeEl.querySelector('.mensaje-burbuja');
                        if (burbuja) {
                            burbuja.innerHTML = '<div class="mensaje-eliminado"><svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><line x1="4.93" y1="4.93" x2="19.07" y2="19.07"/></svg> Este mensaje fue eliminado</div>';
                            burbuja.style.opacity = '0.6';
                            burbuja.style.fontStyle = 'italic';
                        }
                    }
                }
            });

            try {
                await connection.start();
                await connection.invoke("JoinConversation", otroUsuarioId);
            } catch (err) {
                setInterval(cargarMensajesNuevos, 5000);
            }
        }

        function mostrarTyping() {
            document.getElementById('typingIndicator').classList.add('show');
            document.querySelector('.online-status').style.display = 'none';
        }

        function ocultarTyping() {
            document.getElementById('typingIndicator').classList.remove('show');
            document.querySelector('.online-status').style.display = 'inline';
        }

        // Render Messages
        function renderizarMensaje(mensaje, esMio) {
            const chatEmpty = document.querySelector('.chat-empty');
            if (chatEmpty) chatEmpty.remove();

            let respuestaHtml = '';
            if (mensaje.mensajeRespondido) {
                const mr = mensaje.mensajeRespondido;
                let contenidoRespuesta = mr.tipoMensaje === 1
                    ? '<div class="mensaje-respuesta-media"><svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="18" height="18" rx="2"/><circle cx="8.5" cy="8.5" r="1.5"/><path d="m21 15-5-5L5 21"/></svg> Foto</div>'
                    : mr.tipoMensaje === 2
                    ? '<div class="mensaje-respuesta-media"><svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polygon points="5 3 19 12 5 21 5 3"/></svg> Video</div>'
                    : `<div class="mensaje-respuesta-texto">${escapeHtml(mr.contenido)}</div>`;
                respuestaHtml = `<div class="mensaje-respuesta" onclick="scrollToMessage(${mr.id})"><div class="mensaje-respuesta-nombre">${escapeHtml(mr.remitenteNombre)}</div>${contenidoRespuesta}</div>`;
            }

            // Referencia a Story
            let storyRefHtml = '';
            if (mensaje.storyReferencia) {
                const sr = mensaje.storyReferencia;
                const isVideo = sr.tipoContenido === 2;
                const thumbClass = isVideo ? 'mensaje-story-ref-video' : '';
                const playIcon = isVideo ? '<div class="mensaje-story-ref-play"><svg width="10" height="10" viewBox="0 0 24 24" fill="#7c3aed"><polygon points="5 3 19 12 5 21 5 3"/></svg></div>' : '';

                storyRefHtml = `
                    <div class="mensaje-story-ref">
                        <div class="${thumbClass}" style="position:relative;">
                            <img src="${sr.rutaArchivo}" alt="Historia" class="mensaje-story-ref-thumb">
                            ${playIcon}
                        </div>
                        <div class="mensaje-story-ref-info">
                            <div class="mensaje-story-ref-label">
                                <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <circle cx="12" cy="12" r="10"/>
                                    <circle cx="12" cy="12" r="3"/>
                                </svg>
                                Respondió a tu historia
                            </div>
                            <div class="mensaje-story-ref-nombre">${escapeHtml(sr.creadorNombre)}</div>
                        </div>
                    </div>`;
            }

            let mediaHtml = '';
            if (mensaje.tipoMensaje === 1 && mensaje.rutaArchivo) {
                mediaHtml = `<img src="${mensaje.rutaArchivo}" alt="Imagen" class="mensaje-imagen" onclick="abrirImagenModal(this.src)">`;
            } else if (mensaje.tipoMensaje === 2 && mensaje.rutaArchivo) {
                mediaHtml = `<video src="${mensaje.rutaArchivo}" class="mensaje-video" controls playsinline></video>`;
            }

            // Detectar si es solo emojis
            const emojiClass = !mediaHtml && mensaje.contenido ? getEmojiClass(mensaje.contenido) : '';
            const mensajeEmojiClass = emojiClass ? 'mensaje-emoji-only' : '';
            const textoHtml = mensaje.contenido ? `<div class="mensaje-texto ${emojiClass}">${escapeHtml(mensaje.contenido)}</div>` : '';
            const checkHtml = esMio ? `<svg class="check-icon check-enviado" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><polyline points="20 6 9 17 4 12"/></svg>` : '';

            // Formatear hora usando timestamp (hora local del dispositivo)
            const horaFormateada = mensaje.fechaEnvioTimestamp ? formatLocalTime(mensaje.fechaEnvioTimestamp) : (mensaje.fechaEnvio || '');

            const senderName = esMio ? 'Tú' : otroUsuarioNombre;
            const html = `
                <div class="mensaje ${esMio ? 'mensaje-enviado' : 'mensaje-recibido'} ${mensajeEmojiClass}" data-id="${mensaje.id}" data-timestamp="${mensaje.fechaEnvioTimestamp || ''}">
                    <div class="mensaje-sender">${senderName}</div>
                    <div class="mensaje-burbuja">${storyRefHtml}${respuestaHtml}${mediaHtml}${textoHtml}<div class="mensaje-info"><span class="mensaje-hora">${horaFormateada}</span>${checkHtml}</div></div>
                    <div class="mensaje-actions"><button class="btn-reply" onclick="iniciarRespuesta(${mensaje.id}, '${escapeHtml(mensaje.remitenteNombre || 'Usuario')}', '${escapeHtml(mensaje.contenido || '')}', ${mensaje.tipoMensaje})"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="9 17 4 12 9 7"/><path d="M20 18v-2a4 4 0 0 0-4-4H4"/></svg></button></div>
                </div>`;

            document.getElementById('chatMessages').insertAdjacentHTML('beforeend', html);
            scrollToBottom();
        }

        function actualizarCheckLeido(mensajeId) {
            const mensaje = document.querySelector(`.mensaje[data-id="${mensajeId}"]`);
            if (mensaje) {
                const check = mensaje.querySelector('.check-enviado');
                if (check) {
                    check.outerHTML = `<svg class="check-icon check-leido" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M18 6 7 17l-5-5"/><path d="m22 10-7.5 7.5L13 16"/></svg>`;
                }
            }
        }

        // Reply System
        function iniciarRespuesta(id, nombre, texto, tipoMensaje) {
            mensajeRespondidoId = id;
            document.getElementById('mensajeRespondidoId').value = id;
            document.getElementById('replyNombre').textContent = nombre;
            document.getElementById('replyTexto').innerHTML = tipoMensaje === 1
                ? '<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="vertical-align:middle;margin-right:4px"><rect x="3" y="3" width="18" height="18" rx="2"/><circle cx="8.5" cy="8.5" r="1.5"/><path d="m21 15-5-5L5 21"/></svg> Foto'
                : tipoMensaje === 2
                ? '<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="vertical-align:middle;margin-right:4px"><polygon points="5 3 19 12 5 21 5 3"/></svg> Video'
                : texto.substring(0, 50) + (texto.length > 50 ? '...' : '');
            document.getElementById('replyPanel').classList.add('show');
            document.getElementById('inputMensaje').focus();
        }

        function cancelarRespuesta() {
            mensajeRespondidoId = null;
            document.getElementById('mensajeRespondidoId').value = '';
            document.getElementById('replyPanel').classList.remove('show');
        }

        function scrollToMessage(id) {
            const mensaje = document.querySelector(`.mensaje[data-id="${id}"]`);
            if (mensaje) {
                mensaje.scrollIntoView({ behavior: 'smooth', block: 'center' });
                mensaje.style.backgroundColor = 'rgba(70,130,180,0.15)';
                setTimeout(() => mensaje.style.backgroundColor = '', 1500);
            }
        }

        // File Handling
        function previewArchivo(input) {
            if (input.files && input.files[0]) {
                const file = input.files[0];
                if (file.size > 10 * 1024 * 1024) {
                    alert('El archivo no puede superar 10 MB');
                    input.value = '';
                    return;
                }
                archivoSeleccionado = file;
                const reader = new FileReader();
                reader.onload = e => document.getElementById('previewThumb').src = e.target.result;
                reader.readAsDataURL(file);
                document.getElementById('previewName').textContent = file.name;
                document.getElementById('previewSize').textContent = formatBytes(file.size);
                document.getElementById('previewPanel').classList.add('show');
            }
        }

        function cancelarArchivo() {
            archivoSeleccionado = null;
            document.getElementById('fileInput').value = '';
