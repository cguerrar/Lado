        // Detectar si el texto contiene un link de post compartido
        function detectPostShare(text) {
            if (!text) return null;
            // Patrones de URL de posts: /Feed?post=123, /Feed/Detalle/123, ladoapp.com/Feed?post=123
            const patterns = [
                /(?:https?:\/\/[^\s]*)?\/Feed\?post=(\d+)/i,
                /(?:https?:\/\/[^\s]*)?\/Feed\/Detalle\/(\d+)/i
            ];
            for (const pattern of patterns) {
                const match = text.match(pattern);
                if (match) {
                    return { postId: match[1], fullMatch: match[0] };
                }
            }
            return null;
        }

        // Convertir URLs en links clickeables
        function linkifyText(text) {
