@model Lado.Models.ApplicationUser
@using Lado.Controllers
@inject Lado.Services.IDateTimeService DateTimeService
@{
    ViewData["Title"] = "Mensajes";
    var conversaciones = ViewBag.Conversaciones as List<ConversacionViewModel>;
    var localNow = DateTimeService.GetLocalNow();
}

<style>
    :root {
        --primary: #4682B4;
        --primary-dark: #36648B;
        --primary-light: #B0C4DE;
        --primary-lighter: #E8F1F8;
        --bg-light: #f8fafc;
        --border: #e2e8f0;
        --text-dark: #1e293b;
        --text-muted: #64748b;
    }

    .mensajes-container {
        max-width: 800px;
        margin: 0 auto;
    }

    .mensajes-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    }

    /* Header con buscador integrado */
    .mensajes-header {
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        color: white;
        padding: 1.5rem;
        border-radius: 16px 16px 0 0;
        position: relative;
        z-index: 10;
    }

    .header-top {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 1rem;
    }

    .header-title {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .header-title h1 {
        font-size: 1.5rem;
        font-weight: 800;
        margin: 0;
    }

    /* Buscador en header */
    .search-container {
        position: relative;
    }

    .search-input {
        width: 100%;
        padding: 12px 16px 12px 44px;
        border: none;
        border-radius: 12px;
        font-size: 0.95rem;
        background: rgba(255,255,255,0.15);
        color: white;
        transition: all 0.2s;
    }

    .search-input::placeholder {
        color: rgba(255,255,255,0.7);
    }

    .search-input:focus {
        outline: none;
        background: white;
        color: var(--text-dark);
    }

    .search-input:focus::placeholder {
        color: var(--text-muted);
    }

    .search-icon {
        position: absolute;
        left: 14px;
        top: 50%;
        transform: translateY(-50%);
        color: rgba(255,255,255,0.7);
        pointer-events: none;
        transition: color 0.2s;
    }

    .search-input:focus + .search-icon {
        color: var(--text-muted);
    }

    .search-clear {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: var(--text-muted);
        cursor: pointer;
        padding: 4px;
        border-radius: 50%;
        display: none;
    }

    .search-clear.show {
        display: flex;
    }

    /* Resultados de busqueda */
    .search-results-dropdown {
        position: absolute;
        top: calc(100% + 8px);
        left: 0;
        right: 0;
        background: white;
        border-radius: 12px;
        box-shadow: 0 8px 30px rgba(0,0,0,0.15);
        max-height: 320px;
        overflow-y: auto;
        z-index: 100;
        display: none;
    }

    .search-results-dropdown.show {
        display: block;
    }

    .search-result-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 16px;
        cursor: pointer;
        transition: background 0.15s;
        text-decoration: none;
        color: inherit;
    }

    .search-result-item:hover {
        background: var(--bg-light);
    }

    .search-result-avatar {
        width: 44px;
        height: 44px;
        border-radius: 50%;
        object-fit: cover;
        flex-shrink: 0;
    }

    .search-result-avatar-placeholder {
        width: 44px;
        height: 44px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
        font-size: 1rem;
        flex-shrink: 0;
    }

    .search-result-info {
        flex: 1;
        min-width: 0;
    }

    .search-result-name {
        font-weight: 600;
        color: var(--text-dark);
        font-size: 0.95rem;
    }

    .search-result-username {
        font-size: 0.8rem;
        color: var(--text-muted);
    }

    .search-result-arrow {
        color: var(--primary);
    }

    .search-status {
        padding: 1.5rem;
        text-align: center;
        color: var(--text-muted);
        font-size: 0.9rem;
    }

    /* Lista de conversaciones */
    .conversacion-list {
        list-style: none;
        margin: 0;
        padding: 0;
        background: white;
        border-radius: 0 0 16px 16px;
        overflow: hidden;
    }

    .conversacion-item {
        display: flex;
        align-items: center;
        padding: 1rem 1.25rem;
        border-bottom: 1px solid var(--border);
        text-decoration: none;
        color: inherit;
        transition: all 0.15s ease;
        gap: 14px;
    }

    .conversacion-item:last-child {
        border-bottom: none;
    }

    .conversacion-item:hover {
        background: var(--bg-light);
    }

    .conversacion-item.no-leido {
        background: var(--primary-lighter);
    }

    .conversacion-item.no-leido:hover {
        background: #d9e8f5;
    }

    .avatar-container {
        position: relative;
        flex-shrink: 0;
    }

    .avatar {
        width: 52px;
        height: 52px;
        border-radius: 50%;
        object-fit: cover;
    }

    .avatar-placeholder {
        width: 52px;
        height: 52px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 700;
        font-size: 1.15rem;
    }

    .unread-badge {
        position: absolute;
        top: -2px;
        right: -2px;
        background: #ef4444;
        color: white;
        font-size: 0.65rem;
        font-weight: 700;
        min-width: 18px;
        height: 18px;
        border-radius: 9px;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0 5px;
        border: 2px solid white;
    }

    .conversacion-info {
        flex: 1;
        min-width: 0;
    }

    .conversacion-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 3px;
    }

    .conversacion-nombre {
        font-weight: 600;
        font-size: 0.95rem;
        color: var(--text-dark);
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .no-leido .conversacion-nombre {
        font-weight: 700;
    }

    .verificado-icon {
        color: var(--primary);
        width: 15px;
        height: 15px;
    }

    .conversacion-fecha {
        font-size: 0.75rem;
        color: var(--text-muted);
        flex-shrink: 0;
    }

    .no-leido .conversacion-fecha {
        color: var(--primary);
        font-weight: 600;
    }

    .conversacion-preview {
        font-size: 0.85rem;
        color: var(--text-muted);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        display: flex;
        align-items: center;
        gap: 4px;
    }

    .no-leido .conversacion-preview {
        color: var(--text-dark);
        font-weight: 500;
    }

    .preview-media-icon {
        flex-shrink: 0;
        vertical-align: middle;
    }

    /* Empty state */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: white;
        border-radius: 0 0 16px 16px;
    }

    .empty-icon {
        width: 80px;
        height: 80px;
        background: var(--primary-lighter);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
    }

    .empty-icon svg {
        width: 40px;
        height: 40px;
        color: var(--primary);
    }

    .empty-state h3 {
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--text-dark);
        margin-bottom: 0.5rem;
    }

    .empty-state p {
        color: var(--text-muted);
        margin-bottom: 1.5rem;
        font-size: 0.95rem;
    }

    .btn-explore {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        color: white;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s ease;
        box-shadow: 0 4px 12px rgba(70,130,180,0.3);
    }

    .btn-explore:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(70,130,180,0.4);
        color: white;
    }

    /* Menú de opciones de conversación */
    .conversacion-item-wrapper {
        position: relative;
        display: flex;
        align-items: stretch;
    }

    .conversacion-item-wrapper .conversacion-item {
        flex: 1;
    }

    .conv-options-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 44px;
        background: transparent;
        border: none;
        color: var(--text-muted);
        cursor: pointer;
        transition: all 0.2s;
        flex-shrink: 0;
        -webkit-tap-highlight-color: transparent;
        touch-action: manipulation;
    }

    .conv-options-btn:hover {
        color: var(--primary);
        background: var(--bg-light);
    }

    .conv-options-btn:active {
        background: var(--border);
    }

    .conv-options-dropdown {
        position: absolute;
        right: 8px;
        top: 50%;
        transform: translateY(-50%);
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.15);
        z-index: 100;
        min-width: 180px;
        overflow: hidden;
        display: none;
    }

    .conv-options-dropdown.show {
        display: block;
    }

    .conv-option-item {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 12px 16px;
        font-size: 0.9rem;
        color: var(--text-dark);
        cursor: pointer;
        transition: background 0.15s;
        border: none;
        background: none;
        width: 100%;
        text-align: left;
    }

    .conv-option-item:hover {
        background: var(--bg-light);
    }

    .conv-option-item.danger {
        color: #dc2626;
    }

    .conv-option-item.danger:hover {
        background: #fef2f2;
    }

    /* Modal de confirmación */
    .modal-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0,0,0,0.5);
        display: none;
        align-items: center;
        justify-content: center;
        z-index: 1000;
        padding: 20px;
    }

    .modal-overlay.show {
        display: flex;
    }

    .modal-content {
        background: white;
        border-radius: 16px;
        padding: 24px;
        max-width: 400px;
        width: 100%;
        text-align: center;
    }

    .modal-icon {
        width: 60px;
        height: 60px;
        background: #fef2f2;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 16px;
        color: #dc2626;
    }

    .modal-title {
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--text-dark);
        margin-bottom: 8px;
    }

    .modal-text {
        color: var(--text-muted);
        font-size: 0.9rem;
        margin-bottom: 24px;
    }

    .modal-buttons {
        display: flex;
        gap: 12px;
    }

    .modal-btn {
        flex: 1;
        padding: 12px 20px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.95rem;
        cursor: pointer;
        transition: all 0.2s;
        border: none;
    }

    .modal-btn-cancel {
        background: var(--bg-light);
        color: var(--text-dark);
    }

    .modal-btn-cancel:hover {
        background: var(--border);
    }

    .modal-btn-danger {
        background: #dc2626;
        color: white;
    }

    .modal-btn-danger:hover {
        background: #b91c1c;
    }

    /* Responsive */
    @@media (max-width: 640px) {
        .mensajes-container {
            margin: 0;
        }

        .mensajes-card {
            border-radius: 0;
        }

        .mensajes-header {
            padding: 1.25rem;
            border-radius: 0;
        }

        .header-title h1 {
            font-size: 1.25rem;
        }

        .conversacion-item {
            padding: 0.875rem 1rem;
        }

        .avatar, .avatar-placeholder {
            width: 48px;
            height: 48px;
            font-size: 1rem;
        }
    }
</style>

<div class="mensajes-container">
    <div class="mensajes-card">
        <!-- Header con buscador -->
        <div class="mensajes-header">
            <div class="header-top">
                <div class="header-title">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                    </svg>
                    <h1>Mensajes</h1>
                </div>
            </div>

            <div class="search-container">
                <input type="text"
                       class="search-input"
                       id="searchInput"
                       placeholder="Buscar conversacion o iniciar nueva..."
                       autocomplete="off">
                <svg class="search-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="11" cy="11" r="8"></circle>
                    <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                </svg>
                <button class="search-clear" id="searchClear" onclick="limpiarBusqueda()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>

                <div class="search-results-dropdown" id="searchResults"></div>
            </div>
        </div>

        <!-- Lista de conversaciones -->
        @if (conversaciones != null && conversaciones.Any())
        {
            <ul class="conversacion-list" id="conversacionList">
                @foreach (var conv in conversaciones)
                {
                    <li data-nombre="@conv.Contacto.NombreCompleto?.ToLower()" data-username="@conv.Contacto.UserName?.ToLower()">
                        <div class="conversacion-item-wrapper">
                            <a href="/Mensajes/Chat/@conv.Contacto.Id" class="conversacion-item @(conv.MensajesNoLeidos > 0 ? "no-leido" : "")">
                                <div class="avatar-container">
                                    @if (!string.IsNullOrEmpty(conv.Contacto.FotoPerfil))
                                    {
                                        <img src="@conv.Contacto.FotoPerfil" alt="" class="avatar">
                                    }
                                    else
                                    {
                                        <div class="avatar-placeholder">
                                            @conv.Contacto.NombreCompleto?.Substring(0, 1).ToUpper()
                                        </div>
                                    }
                                    @if (conv.MensajesNoLeidos > 0)
                                    {
                                        <span class="unread-badge">@(conv.MensajesNoLeidos > 9 ? "9+" : conv.MensajesNoLeidos.ToString())</span>
                                    }
                                </div>

                                <div class="conversacion-info">
                                    <div class="conversacion-header">
                                        <span class="conversacion-nombre">
                                            @conv.Contacto.NombreCompleto
                                            @if (conv.Contacto.EsVerificado)
                                            {
                                                <svg class="verificado-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                                                    <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                                                </svg>
                                            }
                                        </span>
                                        @if (conv.UltimoMensaje != null)
                                        {
                                            var fechaLocal = DateTimeService.ConvertToLocal(conv.UltimoMensaje.FechaEnvio);
                                            <span class="conversacion-fecha">
                                                @if (fechaLocal.Date == localNow.Date)
                                                {
                                                    @fechaLocal.ToString("HH:mm")
                                                }
                                                else if (fechaLocal.Date == localNow.Date.AddDays(-1))
                                                {
                                                    <text>Ayer</text>
                                                }
                                                else if (fechaLocal.Date > localNow.Date.AddDays(-7))
                                                {
                                                    @fechaLocal.ToString("ddd", new System.Globalization.CultureInfo("es-ES"))
                                                }
                                                else
                                                {
                                                    @fechaLocal.ToString("dd/MM")
                                                }
                                            </span>
                                        }
                                    </div>
                                    @if (conv.UltimoMensaje != null)
                                    {
                                        <p class="conversacion-preview">
                                            @if (conv.UltimoMensaje.RemitenteId == Model.Id)
                                            {
                                                <span>Tu: </span>
                                            }
                                            @if (conv.UltimoMensaje.TipoMensaje == Lado.Models.TipoMensaje.Imagen)
                                            {
                                                <svg class="preview-media-icon" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                    <rect x="3" y="3" width="18" height="18" rx="2"/><circle cx="8.5" cy="8.5" r="1.5"/><path d="m21 15-5-5L5 21"/>
                                                </svg>
                                                <span>Foto</span>
                                            }
                                            else if (conv.UltimoMensaje.TipoMensaje == Lado.Models.TipoMensaje.Video)
                                            {
                                                <svg class="preview-media-icon" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                    <polygon points="5 3 19 12 5 21 5 3"/>
                                                </svg>
                                                <span>Video</span>
                                            }
                                            else
                                            {
                                                <span>@conv.UltimoMensaje.Contenido</span>
                                            }
                                        </p>
                                    }
                                </div>
                            </a>
                            <!-- Botón de opciones -->
                            <button class="conv-options-btn" onclick="toggleConvOptions(event, '@conv.Contacto.Id', '@(conv.Contacto.NombreCompleto?.Replace("'", "\\'"))')">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <circle cx="12" cy="12" r="1"></circle>
                                    <circle cx="12" cy="5" r="1"></circle>
                                    <circle cx="12" cy="19" r="1"></circle>
                                </svg>
                            </button>
                        </div>
                    </li>
                }
            </ul>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                    </svg>
                </div>
                <h3>No tienes conversaciones</h3>
                <p>Busca usuarios arriba o explora creadores para iniciar una conversacion</p>
                <a href="/Explorar" class="btn-explore">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="11" cy="11" r="8"></circle>
                        <path d="m21 21-4.35-4.35"></path>
                    </svg>
                    Explorar Creadores
                </a>
            </div>
        }
    </div>
</div>

<!-- Modal de confirmación para eliminar -->
<div class="modal-overlay" id="deleteModal">
    <div class="modal-content">
        <div class="modal-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M3 6h18"></path>
                <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"></path>
                <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"></path>
            </svg>
        </div>
        <h3 class="modal-title">¿Eliminar conversación?</h3>
        <p class="modal-text">Se eliminarán todos los mensajes con <strong id="deleteContactName"></strong>. Esta acción no se puede deshacer.</p>
        <div class="modal-buttons">
            <button class="modal-btn modal-btn-cancel" onclick="cerrarModalEliminar()">Cancelar</button>
            <form id="deleteForm" method="post" action="/Mensajes/EliminarConversacion" style="flex: 1;">
                @Html.AntiForgeryToken()
                <input type="hidden" name="contactoId" id="deleteContactId">
                <button type="submit" class="modal-btn modal-btn-danger" style="width: 100%;">Eliminar</button>
            </form>
        </div>
    </div>
</div>

<!-- Dropdown de opciones (se mueve dinámicamente) -->
<div class="conv-options-dropdown" id="convOptionsDropdown">
    <button class="conv-option-item danger" onclick="confirmarEliminarConversacion()">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 6h18"></path>
            <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"></path>
            <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"></path>
        </svg>
        Eliminar conversación
    </button>
</div>

<script>
    const searchInput = document.getElementById('searchInput');
    const searchResults = document.getElementById('searchResults');
    const searchClear = document.getElementById('searchClear');
    const conversacionList = document.getElementById('conversacionList');
    let searchTimeout = null;

    searchInput.addEventListener('input', function() {
        const query = this.value.trim();
        searchClear.classList.toggle('show', query.length > 0);

        // Filtrar conversaciones existentes
        filtrarConversaciones(query);

        // Buscar nuevos usuarios
        if (query.length >= 2) {
            buscarUsuarios(query);
        } else {
            searchResults.classList.remove('show');
        }
    });

    searchInput.addEventListener('focus', function() {
        if (this.value.trim().length >= 2) {
            searchResults.classList.add('show');
        }
    });

    // Cerrar resultados al hacer click fuera
    document.addEventListener('click', function(e) {
        if (!e.target.closest('.search-container')) {
            searchResults.classList.remove('show');
        }
    });

    function limpiarBusqueda() {
        searchInput.value = '';
        searchClear.classList.remove('show');
        searchResults.classList.remove('show');
        filtrarConversaciones('');
        searchInput.focus();
    }

    function filtrarConversaciones(query) {
        if (!conversacionList) return;

        const items = conversacionList.querySelectorAll('li');
        const q = query.toLowerCase();

        items.forEach(item => {
            const nombre = item.dataset.nombre || '';
            const username = item.dataset.username || '';
            const match = !q || nombre.includes(q) || username.includes(q);
            item.style.display = match ? '' : 'none';
        });
    }

    async function buscarUsuarios(query) {
        if (searchTimeout) clearTimeout(searchTimeout);

        searchResults.innerHTML = '<div class="search-status"><div class="spinner-border spinner-border-sm text-primary me-2"></div>Buscando...</div>';
        searchResults.classList.add('show');

        searchTimeout = setTimeout(async () => {
            try {
                const response = await fetch('/api/mensajes/buscar-usuarios?query=' + encodeURIComponent(query));
                if (!response.ok) throw new Error('Error');

                const usuarios = await response.json();

                if (!usuarios || usuarios.length === 0) {
                    searchResults.innerHTML = '<div class="search-status">No se encontraron usuarios con ese nombre</div>';
                    return;
                }

                let html = '';
                usuarios.forEach(user => {
                    const initial = (user.nombre || 'U').charAt(0).toUpperCase();
                    const avatarHtml = user.fotoPerfil
                        ? `<img src="${user.fotoPerfil}" alt="" class="search-result-avatar">`
                        : `<div class="search-result-avatar-placeholder">${initial}</div>`;

                    html += `
                        <a href="/Mensajes/Chat/${user.id}" class="search-result-item">
                            ${avatarHtml}
                            <div class="search-result-info">
                                <div class="search-result-name">${escapeHtml(user.nombre)}</div>
                                <div class="search-result-username">@@${escapeHtml(user.seudonimo)}</div>
                            </div>
                            <svg class="search-result-arrow" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="9 18 15 12 9 6"></polyline>
                            </svg>
                        </a>`;
                });

                searchResults.innerHTML = html;
            } catch (error) {
                searchResults.innerHTML = '<div class="search-status">Error al buscar</div>';
            }
        }, 300);
    }

    function escapeHtml(text) {
        if (!text) return '';
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }

    // Redirect si viene con userId
    const urlParams = new URLSearchParams(window.location.search);
    const userId = urlParams.get('userId');
    if (userId) {
        window.location.href = '/Mensajes/Chat/' + userId;
    }

    // ========================================
    // FUNCIONES PARA ELIMINAR CONVERSACIÓN
    // ========================================
    let currentContactId = null;
    let currentContactName = null;
    const convOptionsDropdown = document.getElementById('convOptionsDropdown');
    const deleteModal = document.getElementById('deleteModal');

    function toggleConvOptions(event, contactId, contactName) {
        event.preventDefault();
        event.stopPropagation();

        currentContactId = contactId;
        currentContactName = contactName;

        // Cerrar si ya está abierto en el mismo botón
        if (convOptionsDropdown.classList.contains('show') && convOptionsDropdown.dataset.contactId === contactId) {
            convOptionsDropdown.classList.remove('show');
            return;
        }

        // Posicionar dropdown cerca del botón
        const btn = event.currentTarget;
        const rect = btn.getBoundingClientRect();
        const wrapper = btn.closest('.conversacion-item-wrapper');

        // Posicionar el dropdown
        convOptionsDropdown.style.position = 'fixed';
        convOptionsDropdown.style.top = rect.top + 'px';
        convOptionsDropdown.style.right = (window.innerWidth - rect.right + 10) + 'px';
        convOptionsDropdown.style.transform = 'none';
        convOptionsDropdown.dataset.contactId = contactId;
        convOptionsDropdown.classList.add('show');
    }

    function confirmarEliminarConversacion() {
        convOptionsDropdown.classList.remove('show');

        if (!currentContactId) return;

        document.getElementById('deleteContactId').value = currentContactId;
        document.getElementById('deleteContactName').textContent = currentContactName || 'este contacto';
        deleteModal.classList.add('show');
    }

    function cerrarModalEliminar() {
        deleteModal.classList.remove('show');
        currentContactId = null;
        currentContactName = null;
    }

    // Cerrar dropdown y modal al hacer click fuera
    document.addEventListener('click', function(e) {
        if (!e.target.closest('.conv-options-btn') && !e.target.closest('.conv-options-dropdown')) {
            convOptionsDropdown.classList.remove('show');
        }
        if (e.target.classList.contains('modal-overlay')) {
            cerrarModalEliminar();
        }
    });

    // Cerrar con Escape
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            convOptionsDropdown.classList.remove('show');
            cerrarModalEliminar();
        }
    });

    // Fix para touch en iOS/Android
    document.querySelectorAll('.conv-options-btn').forEach(btn => {
        btn.addEventListener('touchend', function(e) {
            e.preventDefault();
            const contactId = this.getAttribute('onclick').match(/'([^']+)'/g);
            if (contactId && contactId.length >= 2) {
                toggleConvOptions(e, contactId[0].replace(/'/g, ''), contactId[1].replace(/'/g, ''));
            }
        }, { passive: false });
    });
</script>
