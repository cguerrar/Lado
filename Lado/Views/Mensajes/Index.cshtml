<!-- Dropdown de opciones (se mueve dinámicamente) -->
<div class="conv-options-dropdown" id="convOptionsDropdown">
    <button class="conv-option-item danger" onclick="confirmarEliminarConversacion()">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 6h18"></path>
            <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"></path>
            <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"></path>
        </svg>
        Eliminar conversación
    </button>
</div>

<script>
    // ========================================
    // BUSCADOR DE CONVERSACIONES (solo filtra)
    // ========================================
    const searchInput = document.getElementById('searchInput');
    const searchClear = document.getElementById('searchClear');
    const conversacionList = document.getElementById('conversacionList');

    searchInput.addEventListener('input', function() {
        const query = this.value.trim();
        searchClear.classList.toggle('show', query.length > 0);
        filtrarConversaciones(query);
    });

    function limpiarBusqueda() {
        searchInput.value = '';
        searchClear.classList.remove('show');
        filtrarConversaciones('');
        searchInput.focus();
    }

    function filtrarConversaciones(query) {
        if (!conversacionList) return;

        const items = conversacionList.querySelectorAll('li');
        const q = query.toLowerCase();

        items.forEach(item => {
            const nombre = item.dataset.nombre || '';
            const username = item.dataset.username || '';
            const match = !q || nombre.includes(q) || username.includes(q);
            item.style.display = match ? '' : 'none';
        });
    }

    // ========================================
    // MODAL NUEVO MENSAJE
    // ========================================
    const nuevoMensajeModal = document.getElementById('nuevoMensajeModal');
    const nuevoMensajeInput = document.getElementById('nuevoMensajeInput');
    const nuevoMensajeResultados = document.getElementById('nuevoMensajeResultados');
    let nuevoMensajeTimeout = null;

    function abrirNuevoMensaje() {
        nuevoMensajeModal.classList.add('show');
        document.body.style.overflow = 'hidden';
        setTimeout(() => nuevoMensajeInput.focus(), 100);
    }

    function cerrarNuevoMensaje() {
        nuevoMensajeModal.classList.remove('show');
        document.body.style.overflow = '';
        nuevoMensajeInput.value = '';
        nuevoMensajeResultados.innerHTML = `
            <div class="nuevo-mensaje-status">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <circle cx="11" cy="11" r="8"></circle>
                    <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                </svg>
                <p>Escribe un nombre para buscar usuarios</p>
            </div>
        `;
    }

    // Cerrar modal al hacer click fuera
    nuevoMensajeModal.addEventListener('click', function(e) {
        if (e.target === nuevoMensajeModal) {
            cerrarNuevoMensaje();
        }
    });

    // Cerrar con Escape
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && nuevoMensajeModal.classList.contains('show')) {
            cerrarNuevoMensaje();
        }
    });

    // Buscar usuarios en el modal
    nuevoMensajeInput.addEventListener('input', function() {
        const query = this.value.trim();

        if (query.length < 2) {
            nuevoMensajeResultados.innerHTML = `
                <div class="nuevo-mensaje-status">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <circle cx="11" cy="11" r="8"></circle>
                        <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                    </svg>
                    <p>Escribe al menos 2 caracteres para buscar</p>
                </div>
            `;
            return;
        }

        buscarUsuariosNuevoMensaje(query);
    });

    async function buscarUsuariosNuevoMensaje(query) {
        if (nuevoMensajeTimeout) clearTimeout(nuevoMensajeTimeout);

        nuevoMensajeResultados.innerHTML = `
            <div class="nuevo-mensaje-status">
                <div class="spinner-border spinner-border-sm text-primary"></div>
                <p style="margin-top: 8px;">Buscando usuarios...</p>
            </div>
        `;

        nuevoMensajeTimeout = setTimeout(async () => {
            try {
                const response = await fetch('/api/mensajes/buscar-usuarios?query=' + encodeURIComponent(query));
                if (!response.ok) throw new Error('Error');

                const usuarios = await response.json();

                if (!usuarios || usuarios.length === 0) {
                    nuevoMensajeResultados.innerHTML = `
                        <div class="nuevo-mensaje-status">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                <circle cx="12" cy="12" r="10"></circle>
                                <line x1="15" y1="9" x2="9" y2="15"></line>
                                <line x1="9" y1="9" x2="15" y2="15"></line>
                            </svg>
                            <p>No se encontraron usuarios</p>
                        </div>
                    `;
                    return;
                }

                let html = '';
                usuarios.forEach(user => {
                    const initial = (user.nombre || 'U').charAt(0).toUpperCase();
                    const avatarHtml = user.fotoPerfil
                        ? `<img src="${escapeHtml(user.fotoPerfil)}" alt="" class="nuevo-mensaje-avatar">`
                        : `<div class="nuevo-mensaje-avatar-placeholder">${escapeHtml(initial)}</div>`;

                    const verificadoHtml = user.esVerificado
                        ? `<svg class="verificado-badge" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>`
                        : '';

                    html += `
                        <a href="/Mensajes/Chat/${user.id}" class="nuevo-mensaje-item">
                            ${avatarHtml}
                            <div class="nuevo-mensaje-info">
                                <div class="nuevo-mensaje-nombre">
                                    ${escapeHtml(user.nombre)}
                                    ${verificadoHtml}
                                </div>
                                <div class="nuevo-mensaje-username">@@${escapeHtml(user.seudonimo)}</div>
                            </div>
                        </a>`;
                });

                nuevoMensajeResultados.innerHTML = html;
            } catch (error) {
                nuevoMensajeResultados.innerHTML = `
                    <div class="nuevo-mensaje-status">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="12" y1="8" x2="12" y2="12"></line>
                            <line x1="12" y1="16" x2="12.01" y2="16"></line>
                        </svg>
                        <p>Error al buscar usuarios</p>
                    </div>
                `;
            }
        }, 300);
    }

    function escapeHtml(text) {
        if (!text) return '';
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }

    // Redirect si viene con userId
    const urlParams = new URLSearchParams(window.location.search);
    const userId = urlParams.get('userId');
    if (userId) {
        window.location.href = '/Mensajes/Chat/' + userId;
    }

    // ========================================
    // FUNCIONES PARA ELIMINAR CONVERSACIÓN
    // ========================================
    let currentContactId = null;
    let currentContactName = null;
    const convOptionsDropdown = document.getElementById('convOptionsDropdown');
    const deleteModal = document.getElementById('deleteModal');

    function toggleConvOptions(event, contactId, contactName) {
        event.preventDefault();
        event.stopPropagation();

        currentContactId = contactId;
        currentContactName = contactName;

        // Cerrar si ya está abierto en el mismo botón
        if (convOptionsDropdown.classList.contains('show') && convOptionsDropdown.dataset.contactId === contactId) {
            convOptionsDropdown.classList.remove('show');
            return;
        }

        // Posicionar dropdown cerca del botón
        const btn = event.currentTarget;
        const rect = btn.getBoundingClientRect();
        const wrapper = btn.closest('.conversacion-item-wrapper');

        // Posicionar el dropdown
        convOptionsDropdown.style.position = 'fixed';
        convOptionsDropdown.style.top = rect.top + 'px';
        convOptionsDropdown.style.right = (window.innerWidth - rect.right + 10) + 'px';
        convOptionsDropdown.style.transform = 'none';
        convOptionsDropdown.dataset.contactId = contactId;
        convOptionsDropdown.classList.add('show');
    }

    function confirmarEliminarConversacion() {
        convOptionsDropdown.classList.remove('show');

        if (!currentContactId) return;

        document.getElementById('deleteContactId').value = currentContactId;
        document.getElementById('deleteContactName').textContent = currentContactName || 'este contacto';
        deleteModal.classList.add('show');
    }

    function cerrarModalEliminar() {
        deleteModal.classList.remove('show');
        currentContactId = null;
        currentContactName = null;
    }

    // Cerrar dropdown y modal al hacer click fuera
    document.addEventListener('click', function(e) {
        if (!e.target.closest('.conv-options-btn') && !e.target.closest('.conv-options-dropdown')) {
            convOptionsDropdown.classList.remove('show');
        }
        if (e.target.classList.contains('modal-overlay')) {
            cerrarModalEliminar();
        }
    });

    // Cerrar con Escape
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            convOptionsDropdown.classList.remove('show');
            cerrarModalEliminar();
        }
    });

    // Fix para touch en iOS/Android
    document.querySelectorAll('.conv-options-btn').forEach(btn => {
        btn.addEventListener('touchend', function(e) {
            e.preventDefault();
            const contactId = this.getAttribute('onclick').match(/'([^']+)'/g);
            if (contactId && contactId.length >= 2) {
                toggleConvOptions(e, contactId[0].replace(/'/g, ''), contactId[1].replace(/'/g, ''));
            }
        }, { passive: false });
    });
</script>
