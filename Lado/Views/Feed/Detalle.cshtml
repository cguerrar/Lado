    // Reportar contenido
    function reportarContenido(postId) {
        const motivo = prompt('Por favor, indica el motivo del reporte:');
        if (motivo) {
            fetch('/Feed/Reportar', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: `id=${postId}&motivo=${encodeURIComponent(motivo)}`
            })
