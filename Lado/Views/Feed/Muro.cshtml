        // Recargar al cambiar tamaño de ventana
        let resizeTimeout;
        window.addEventListener('resize', () => {
            clearTimeout(resizeTimeout);
            resizeTimeout = setTimeout(() => {
                if (fotosData.length > 0) {
                    renderizarMuro();
                }
            }, 300);
        });

        // ========================================
        // ZOOM DEL MODAL DE FOTO
        // ========================================
        let currentZoom = 1;
        let currentX = 0;
        let currentY = 0;
        let isDragging = false;
        let startX, startY;
        let lastTouchEnd = 0;
        let initialDistance = 0;
        let initialZoom = 1;
        const MIN_ZOOM = 1;
        const MAX_ZOOM = 5;
        const ZOOM_STEP = 0.5;

        // Abrir modal de foto
        // Variable para guardar la foto actual del modal
        let fotoActualModal = null;

        function abrirFotoModal(foto) {
            const modal = document.getElementById('fotoModal');
            const img = document.getElementById('fotoModalImg');
            const link = document.getElementById('fotoModalLink');
            const creador = document.getElementById('fotoModalCreador');

            // Guardar referencia a la foto actual
            fotoActualModal = foto;

            // Reset zoom al abrir
            resetZoom();

            img.src = foto.thumbnail.replace('_thumb', '').replace('/thumbnails/', '/');
            link.href = `/Feed/Perfil/${foto.creadorUsername}`;
            creador.textContent = `Ver perfil de ${foto.creadorNombre}`;

            modal.classList.add('active');

            // Mostrar hint de zoom
            const hint = document.getElementById('zoomHint');
            hint.classList.remove('hidden');
            setTimeout(() => hint.classList.add('hidden'), 3000);
        }

        // Cerrar modal
        function cerrarFotoModal() {
            document.getElementById('fotoModal').classList.remove('active');
            resetZoom();
            // No resetear fotoActualModal aquí para permitir explorar creador
        }

        // Funciones de zoom
        function zoomIn() {
            setZoom(Math.min(currentZoom + ZOOM_STEP, MAX_ZOOM));
        }

        function zoomOut() {
            setZoom(Math.max(currentZoom - ZOOM_STEP, MIN_ZOOM));
        }

        function resetZoom() {
            currentZoom = 1;
            currentX = 0;
            currentY = 0;
            updateTransform();
            updateZoomLevel();
        }

        function setZoom(newZoom, centerX = null, centerY = null) {
            const container = document.getElementById('fotoZoomContainer');
            const rect = container.getBoundingClientRect();

            // Si se proporciona un punto central, ajustar la posición para zoom hacia ese punto
            if (centerX !== null && centerY !== null) {
                const scaleChange = newZoom / currentZoom;
                const containerCenterX = rect.left + rect.width / 2;
                const containerCenterY = rect.top + rect.height / 2;

                currentX = centerX - (centerX - containerCenterX + currentX) * scaleChange - containerCenterX + currentX;
                currentY = centerY - (centerY - containerCenterY + currentY) * scaleChange - containerCenterY + currentY;
            }

            currentZoom = newZoom;

            // Si el zoom es 1, resetear posición
            if (currentZoom === 1) {
                currentX = 0;
                currentY = 0;
            }

            // Limitar pan cuando hay zoom
            limitPan();
            updateTransform();
            updateZoomLevel();

            // Ocultar hint después del primer zoom
            document.getElementById('zoomHint').classList.add('hidden');
        }

        function updateTransform() {
            const container = document.getElementById('fotoZoomContainer');
            container.style.transform = `translate(${currentX}px, ${currentY}px) scale(${currentZoom})`;
        }

        function updateZoomLevel() {
            document.getElementById('zoomLevel').textContent = `${Math.round(currentZoom * 100)}%`;
        }

        function limitPan() {
            if (currentZoom <= 1) {
                currentX = 0;
                currentY = 0;
                return;
            }

            const container = document.getElementById('fotoZoomContainer');
            const img = document.getElementById('fotoModalImg');
            const imgRect = img.getBoundingClientRect();

            const maxX = (imgRect.width * (currentZoom - 1)) / 2;
            const maxY = (imgRect.height * (currentZoom - 1)) / 2;

            currentX = Math.max(-maxX, Math.min(maxX, currentX));
            currentY = Math.max(-maxY, Math.min(maxY, currentY));
        }

        // ========================================
        // EVENTOS TÁCTILES (Pinch-to-zoom)
        // ========================================
        function initTouchEvents() {
            const container = document.getElementById('fotoZoomContainer');
            const modalContent = document.getElementById('fotoModalContent');

            // Doble tap para zoom
            container.addEventListener('touchend', (e) => {
                const now = Date.now();
                if (now - lastTouchEnd < 300 && e.changedTouches.length === 1) {
                    e.preventDefault();
                    const touch = e.changedTouches[0];
                    if (currentZoom > 1) {
                        resetZoom();
                    } else {
                        setZoom(2.5, touch.clientX, touch.clientY);
                    }
                }
                lastTouchEnd = now;
            });

            // Pinch to zoom
            container.addEventListener('touchstart', (e) => {
                if (e.touches.length === 2) {
                    e.preventDefault();
                    initialDistance = getDistance(e.touches[0], e.touches[1]);
                    initialZoom = currentZoom;
                } else if (e.touches.length === 1 && currentZoom > 1) {
                    isDragging = true;
                    startX = e.touches[0].clientX - currentX;
                    startY = e.touches[0].clientY - currentY;
                    container.classList.add('dragging');
                }
            }, { passive: false });

            container.addEventListener('touchmove', (e) => {
                if (e.touches.length === 2) {
                    e.preventDefault();
                    const distance = getDistance(e.touches[0], e.touches[1]);
                    const scale = distance / initialDistance;
                    const newZoom = Math.max(MIN_ZOOM, Math.min(MAX_ZOOM, initialZoom * scale));

                    // Centro entre los dos dedos
                    const centerX = (e.touches[0].clientX + e.touches[1].clientX) / 2;
                    const centerY = (e.touches[0].clientY + e.touches[1].clientY) / 2;

                    setZoom(newZoom, centerX, centerY);
                } else if (e.touches.length === 1 && isDragging && currentZoom > 1) {
                    e.preventDefault();
                    currentX = e.touches[0].clientX - startX;
                    currentY = e.touches[0].clientY - startY;
                    limitPan();
                    updateTransform();
                }
            }, { passive: false });

            container.addEventListener('touchend', () => {
                isDragging = false;
                container.classList.remove('dragging');
            });

            // Cerrar modal al tocar fuera de la imagen
            modalContent.addEventListener('click', (e) => {
                if (e.target === modalContent && currentZoom === 1) {
                    cerrarFotoModal();
                }
            });
        }

        // ========================================
        // EVENTOS DE MOUSE (Desktop)
        // ========================================
        function initMouseEvents() {
            const container = document.getElementById('fotoZoomContainer');
            const modalContent = document.getElementById('fotoModalContent');

            // Doble click para zoom
            container.addEventListener('dblclick', (e) => {
                e.preventDefault();
                if (currentZoom > 1) {
                    resetZoom();
                } else {
                    setZoom(2.5, e.clientX, e.clientY);
                }
            });

            // Rueda del mouse para zoom
            container.addEventListener('wheel', (e) => {
                e.preventDefault();
                const delta = e.deltaY > 0 ? -ZOOM_STEP : ZOOM_STEP;
                const newZoom = Math.max(MIN_ZOOM, Math.min(MAX_ZOOM, currentZoom + delta));
                setZoom(newZoom, e.clientX, e.clientY);
            }, { passive: false });

            // Arrastrar para pan
            container.addEventListener('mousedown', (e) => {
                if (currentZoom > 1) {
                    isDragging = true;
                    startX = e.clientX - currentX;
                    startY = e.clientY - currentY;
                    container.classList.add('dragging');
                }
            });

            document.addEventListener('mousemove', (e) => {
                if (isDragging && currentZoom > 1) {
                    currentX = e.clientX - startX;
                    currentY = e.clientY - startY;
                    limitPan();
                    updateTransform();
                }
            });

            document.addEventListener('mouseup', () => {
                isDragging = false;
                document.getElementById('fotoZoomContainer')?.classList.remove('dragging');
            });

            // Cerrar modal al click fuera de la imagen
            modalContent.addEventListener('click', (e) => {
                if (e.target === modalContent && currentZoom === 1) {
                    cerrarFotoModal();
                }
            });
        }

        // Calcular distancia entre dos puntos táctiles
        function getDistance(touch1, touch2) {
            const dx = touch1.clientX - touch2.clientX;
            const dy = touch1.clientY - touch2.clientY;
            return Math.sqrt(dx * dx + dy * dy);
        }

        // Inicializar eventos de zoom cuando el DOM esté listo
        document.addEventListener('DOMContentLoaded', () => {
            initTouchEvents();
            initMouseEvents();
        });

        // Modal de destacar
        async function abrirModalDestacar() {
            const modal = document.getElementById('modalDestacar');
            modal.classList.add('active');

            // Cargar precios
            if (preciosNiveles.length === 0) {
                const preciosResponse = await fetch('/Feed/ObtenerPreciosDestacado');
                const preciosData = await preciosResponse.json();
                if (preciosData.success) {
                    preciosNiveles = preciosData.precios;
                    renderizarNiveles();
                }
            }

            // Cargar mis fotos
            const fotosResponse = await fetch('/Feed/ObtenerMisFotosParaDestacar');
            const fotosData = await fotosResponse.json();
            if (fotosData.success) {
                renderizarMisFotos(fotosData.fotos);
            }
        }

        function cerrarModalDestacar(event) {
            if (!event || event.target.id === 'modalDestacar') {
                document.getElementById('modalDestacar').classList.remove('active');
                fotoSeleccionada = null;
                nivelSeleccionado = null;
                actualizarBotonConfirmar();
            }
        }

        function renderizarMisFotos(fotos) {
            const grid = document.getElementById('misFotosGrid');
            grid.innerHTML = '';

            if (fotos.length === 0) {
                grid.innerHTML = '<p style="color: var(--muted); grid-column: 1/-1; text-align: center; padding: 20px;">No tienes fotos en LadoA para destacar</p>';
                return;
            }

            fotos.forEach(foto => {
                const div = document.createElement('div');
                div.className = 'mi-foto-item';
                div.onclick = () => seleccionarFoto(foto.id, div);

                const img = document.createElement('img');
                img.src = foto.thumbnail;
                img.alt = foto.descripcion || '';
                img.loading = 'lazy';

                div.appendChild(img);

                // Badge si ya está destacado
                if (foto.destacadoActual) {
                    const badge = document.createElement('div');
                    badge.className = 'foto-destacado-badge';
                    const niveles = ['', 'Bronce', 'Plata', 'Oro', 'Diamante'];

                    const nivelSpan = document.createElement('span');
                    nivelSpan.textContent = niveles[foto.destacadoActual] || 'Activo';
                    badge.appendChild(nivelSpan);

                    // Mostrar tiempo restante si está disponible
                    if (foto.tiempoRestante) {
                        const tiempoSpan = document.createElement('span');
                        tiempoSpan.className = 'tiempo-restante';
                        tiempoSpan.textContent = foto.tiempoRestante;
                        badge.appendChild(tiempoSpan);
                    }

                    div.appendChild(badge);
                }

                grid.appendChild(div);
            });
        }

        function renderizarNiveles() {
            const container = document.getElementById('nivelesDestacado');
            container.innerHTML = '';

            const clases = ['bronce', 'plata', 'oro', 'diamante'];
            const iconos = ['&#129353;', '&#129352;', '&#129351;', '&#128142;']; // Medallas emoji

            preciosNiveles.forEach((nivel, i) => {
                const div = document.createElement('div');
                div.className = `nivel-card ${clases[i]}`;
                div.onclick = () => seleccionarNivel(nivel.nivel, div);

                div.innerHTML = `
                    <div class="nivel-icon">${iconos[i]}</div>
                    <div class="nivel-nombre">${nivel.nombre}</div>
                    <div class="nivel-precio">${nivel.costo} LadoCoins</div>
                    <div class="nivel-duracion">${nivel.duracion}h de duración</div>
                    <div class="nivel-tamano">${nivel.tamano}px de tamaño</div>
                `;

                container.appendChild(div);
            });
        }

        function seleccionarFoto(id, element) {
            document.querySelectorAll('.mi-foto-item').forEach(el => el.classList.remove('selected'));
            element.classList.add('selected');
            fotoSeleccionada = id;
            actualizarBotonConfirmar();
        }

        function seleccionarNivel(nivel, element) {
            document.querySelectorAll('.nivel-card').forEach(el => el.classList.remove('selected'));
            element.classList.add('selected');
            nivelSeleccionado = nivel;
            actualizarBotonConfirmar();
        }

        function actualizarBotonConfirmar() {
            const btn = document.getElementById('btnConfirmarDestacar');
            if (fotoSeleccionada && nivelSeleccionado) {
                const precio = preciosNiveles.find(p => p.nivel === nivelSeleccionado);
                btn.textContent = `Destacar por ${precio.costo} LadoCoins`;
                btn.disabled = false;
            } else {
                btn.textContent = 'Selecciona foto y nivel';
                btn.disabled = true;
            }
        }

        async function confirmarDestacar() {
            if (!fotoSeleccionada || !nivelSeleccionado) return;

            const btn = document.getElementById('btnConfirmarDestacar');
            btn.disabled = true;
            btn.textContent = 'Procesando...';

            try {
                const formData = new FormData();
                formData.append('contenidoId', fotoSeleccionada);
                formData.append('nivel', nivelSeleccionado);

                const response = await fetch('/Feed/DestacarFoto', {
                    method: 'POST',
                    body: formData
                });

                const data = await response.json();

                if (data.success) {
                    alert(data.message);
                    document.getElementById('saldoDisplay').textContent = data.nuevoSaldo;
                    cerrarModalDestacar();
                    // Recargar el muro para ver el cambio
                    document.getElementById('loadingOverlay').classList.remove('hidden');
                    await cargarMuro();
                } else {
                    alert(data.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error al procesar la solicitud');
            } finally {
                actualizarBotonConfirmar();
            }
        }

        // Inicializar app
        document.addEventListener('DOMContentLoaded', () => {
            initSearch();
            initFilters();
            initInfiniteScroll();
            initCreatorTouchGestures();
            cargarCategorias();
            cargarMuro();
        });

        // Tecla ESC para cerrar modales
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                cerrarFotoModal();
                document.getElementById('modalDestacar').classList.remove('active');
            }
        });
