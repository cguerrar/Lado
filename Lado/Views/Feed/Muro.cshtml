        // ========================================
        // CARGAR MURO (función original mejorada)
        // ========================================
        function calcularFotosNecesarias() {
            const screenWidth = window.innerWidth;
            const screenHeight = window.innerHeight;
            const cellSize = 19;
            const columnas = Math.ceil(screenWidth / cellSize);
            const filas = Math.ceil(screenHeight / cellSize);
            return Math.ceil(columnas * filas * 1.5);
        }

        async function cargarMuro() {
            try {
