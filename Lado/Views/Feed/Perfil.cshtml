@model Lado.Models.ApplicationUser
@{
    ViewData["Title"] = Model.NombreCompleto;
    var estaSuscrito = (bool)ViewBag.EstaSuscrito;
    var contenidos = ViewBag.Contenidos as List<Lado.Models.Contenido>;
    var mostrandoSeudonimo = (bool)(ViewBag.MostrandoSeudonimo ?? false);
    var nombreMostrado = ViewBag.NombreMostrado ?? Model.NombreCompleto;
    var usernameMostrado = ViewBag.UsernameMostrado ?? $"@{Model.UserName}";
    var puedeRecibirPropinas = ViewBag.PuedeRecibirPropinas ?? false;
    // Lista de IDs de contenidos desbloqueados (para modo seudónimo)
    var contenidosDesbloqueadosIds = ViewBag.ContenidosDesbloqueadosIds as List<int> ?? new List<int>();
    // Seleccionar foto de perfil segun el modo (LadoA o LadoB)
    var fotoPerfilMostrar = mostrandoSeudonimo
        ? (!string.IsNullOrEmpty(Model.FotoPerfilLadoB) ? Model.FotoPerfilLadoB : Model.FotoPerfil)
        : Model.FotoPerfil;
    // Seleccionar biografía según el modo
    var biografiaMostrar = mostrandoSeudonimo
        ? (!string.IsNullOrEmpty(Model.BiografiaLadoB) ? Model.BiografiaLadoB : Model.Biografia)
        : Model.Biografia;
}

<style>
    /* ========================================
       PERFIL - USA VARIABLES GLOBALES DEL TEMA
       Las variables --bg, --fg, --surface, etc.
       vienen de _Layout.cshtml y cambian con el tema
       ======================================== */

    /* Variables locales del perfil que extienden el tema */
    .profile-container {
        --profile-primary: #0095f6;
        --profile-primary-dark: #0074cc;
        --profile-link: #00376b;
    }

    [data-theme="dark"] .profile-container {
        --profile-link: #e0f1ff;
    }

    .profile-container {
        max-width: 935px;
        margin: 0 auto;
        padding: 30px 20px 0;
        background: var(--bg);
        color: var(--fg);
    }

    /* ========================================
       HEADER ESTILO INSTAGRAM
       ======================================== */
    .profile-header {
        display: flex;
        margin-bottom: 24px;
        gap: 30px;
    }

    .profile-pic-wrapper {
        flex: 0 0 auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-right: 50px;
    }

    .profile-pic {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        overflow: hidden;
        background: var(--bg-tertiary);
        border: 3px solid var(--line);
    }

    .profile-pic img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .pic-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--muted);
        font-size: 56px;
        font-weight: 300;
    }

    /* INFO DEL PERFIL */
    .profile-info {
        flex: 1;
        min-width: 0;
    }

    .profile-row {
        display: flex;
        align-items: center;
        margin-bottom: 16px;
        gap: 12px;
        flex-wrap: wrap;
    }

    .profile-username {
        font-size: 20px;
        font-weight: 400;
        color: var(--fg);
        margin: 0;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .verified-badge {
        width: 18px;
        height: 18px;
        color: var(--profile-primary);
    }

    /* BOTONES DE ACCION - Instagram Style */
    .profile-actions {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        margin-bottom: 16px;
        align-items: center;
    }

    .profile-actions form {
        display: inline-flex;
    }

    .seudonimo-badge {
        background: linear-gradient(135deg, #833ab4, #fd1d1d, #fcb045);
        color: white;
        padding: 4px 10px;
        border-radius: 4px;
        font-size: 12px;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

    /* BADGES DE CONFIANZA - Instagram Style */
    .trust-badges {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
        margin-bottom: 12px;
    }

    .trust-badge {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        padding: 4px 10px;
        border-radius: 4px;
        font-size: 12px;
        font-weight: 500;
        background: var(--bg-tertiary);
        color: var(--fg);
        transition: all 0.2s ease;
    }

    .trust-badge:hover {
        background: var(--surface-hover);
    }

    .trust-badge svg {
        width: 12px;
        height: 12px;
    }

    .trust-badge.verified {
        background: rgba(0, 149, 246, 0.15);
        color: #0095f6;
    }

    .trust-badge.responds {
        background: rgba(88, 195, 34, 0.15);
        color: #58c322;
    }

    .trust-badge.responds.medium {
        background: rgba(255, 184, 0, 0.15);
        color: #ffb800;
    }

    .trust-badge.active {
        background: rgba(88, 195, 34, 0.15);
        color: #58c322;
    }

    .trust-badge.trusted {
        background: rgba(168, 85, 247, 0.15);
        color: #a855f7;
    }

    .trust-badge.followers {
        background: rgba(236, 72, 153, 0.15);
        color: #ec4899;
    }

    .trust-level {
        display: flex;
        align-items: center;
        gap: 4px;
        margin-bottom: 12px;
    }

    .trust-level-label {
        font-size: 12px;
        color: var(--muted);
        margin-right: 4px;
    }

    .trust-star {
        color: var(--line);
        font-size: 12px;
    }

    .trust-star.filled {
        color: #fbbf24;
    }

    /* BOTONES - Instagram Style */
    .btn {
        padding: 7px 16px;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.15s ease;
        border: none;
        min-width: 100px;
    }

    .btn-subscribe {
        background: var(--profile-primary);
        color: white;
    }

    .btn-subscribe:hover {
        background: var(--profile-primary-dark);
    }

    .btn-following {
        background: var(--bg-tertiary);
        color: var(--fg);
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .btn-following svg {
        width: 12px;
        height: 12px;
    }

    .btn-message {
        background: var(--bg-tertiary);
        color: var(--fg);
    }

    .btn-message:hover {
        background: var(--surface-hover);
    }

    .btn-cancel {
        background: var(--bg-tertiary);
        color: var(--fg);
    }

    .btn-cancel:hover {
        background: var(--bg-tertiary);
        color: #ed4956;
    }

    .btn-icon {
        width: 34px;
        height: 34px;
        padding: 0;
        min-width: unset;
        border-radius: 8px;
        background: var(--bg-tertiary);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .btn-icon svg {
        width: 16px;
        height: 16px;
        color: var(--fg);
    }

    /* STATS - Instagram Style */
    .profile-stats {
        display: flex;
        gap: 40px;
        margin-bottom: 16px;
    }

    .stat {
        font-size: 16px;
        color: var(--fg);
    }

    .stat-number {
        font-weight: 600;
        margin-right: 4px;
    }

    .stat-label {
        font-weight: 400;
    }

    /* BIO - Instagram Style */
    .profile-bio {
        font-size: 14px;
        line-height: 1.5;
    }

    .bio-category {
        color: var(--muted);
        font-size: 14px;
        margin-bottom: 2px;
    }

    .bio-fullname {
        font-weight: 600;
        color: var(--fg);
        display: block;
        margin-bottom: 2px;
    }

    .bio-text {
        color: var(--fg);
        white-space: pre-wrap;
    }

    .bio-link {
        color: var(--profile-link);
        display: flex;
        align-items: center;
        gap: 4px;
        margin-top: 4px;
        font-weight: 500;
    }

    .bio-link svg {
        width: 12px;
        height: 12px;
    }

    /* MUTUAL FOLLOWERS - Instagram Style */
    .mutual-followers {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-top: 16px;
        font-size: 12px;
        color: var(--muted);
    }

    .mutual-avatars {
        display: flex;
    }

    .mutual-avatar {
        width: 20px;
        height: 20px;
        border-radius: 50%;
        border: 2px solid var(--bg);
        margin-left: -6px;
        background: var(--bg-tertiary);
        overflow: hidden;
        font-size: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--muted);
    }

    .mutual-avatar:first-child {
        margin-left: 0;
    }

    .mutual-avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .mutual-text {
        color: var(--fg-secondary);
    }

    .mutual-text strong {
        color: var(--fg);
        font-weight: 500;
    }

    /* TEASER LADOB - Instagram Style */
    .ladob-teaser {
        margin: 20px 0;
        padding: 16px 20px;
        background: var(--bg-tertiary);
        border-radius: 12px;
        text-align: center;
    }

    .ladob-teaser-icon {
        width: 44px;
        height: 44px;
        margin: 0 auto 10px;
        background: linear-gradient(135deg, #833ab4, #fd1d1d, #fcb045);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }

    .ladob-teaser-title {
        font-size: 14px;
        font-weight: 600;
        color: var(--fg);
        margin-bottom: 4px;
    }

    .ladob-teaser-desc {
        font-size: 12px;
        color: var(--muted);
        margin-bottom: 12px;
    }

    .ladob-teaser-btn {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 8px 20px;
        background: linear-gradient(135deg, #833ab4, #fd1d1d, #fcb045);
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 13px;
        font-weight: 600;
        cursor: pointer;
        text-decoration: none;
        transition: opacity 0.2s;
    }

    .ladob-teaser-btn:hover {
        opacity: 0.9;
        color: white;
    }

    /* HIGHLIGHTS - Instagram Style */
    .highlights-section {
        padding: 12px 0 24px;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }

    .highlights-container {
        display: flex;
        gap: 16px;
    }

    .highlight-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 8px;
        cursor: pointer;
        min-width: 64px;
    }

    .highlight-circle {
        width: 64px;
        height: 64px;
        border-radius: 50%;
        background: var(--bg-tertiary);
        border: 1px solid var(--line);
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .highlight-circle img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .highlight-label {
        font-size: 12px;
        color: var(--fg);
        max-width: 64px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        text-align: center;
    }

    /* TABS - Instagram Style */
    .profile-tabs {
        display: flex;
        justify-content: center;
        border-top: 1px solid var(--line);
    }

    .tab {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
        padding: 16px 0;
        margin: 0 30px;
        border-top: 1px solid transparent;
        margin-top: -1px;
        cursor: pointer;
        font-size: 12px;
        font-weight: 600;
        letter-spacing: 1px;
        color: var(--muted);
        text-transform: uppercase;
        transition: color 0.2s;
    }

    .tab.active {
        border-top-color: var(--fg);
        color: var(--fg);
    }

    .tab:hover:not(.active) {
        color: var(--fg-secondary);
    }

    .tab svg {
        width: 12px;
        height: 12px;
    }

    .tab-count {
        font-size: 11px;
        color: var(--muted);
        margin-left: 2px;
    }

    .tab.active .tab-count {
        color: var(--fg);
    }

    /* TAB CONTENT */
    .tab-content {
        display: none;
    }

    .tab-content.active {
        display: block;
    }

    /* GRID DE CONTENIDO - Instagram Style */
    .posts-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 3px;
        margin-top: 3px;
    }

    .post-item {
        position: relative;
        aspect-ratio: 1;
        overflow: hidden;
        cursor: pointer;
        background: var(--bg-tertiary);
    }

    .post-item img,
    .post-item video {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    /* Video preview hover effect */
    .post-item video.video-preview {
        transition: transform 0.2s ease;
    }

    .post-item:hover video.video-preview {
        transform: scale(1.02);
    }

    .post-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.3);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 24px;
        opacity: 0;
        transition: opacity 0.15s;
    }

    .post-item:hover .post-overlay {
        opacity: 1;
    }

    .post-stat {
        display: flex;
        align-items: center;
        gap: 6px;
        color: white;
        font-size: 14px;
        font-weight: 700;
    }

    .post-stat svg {
        width: 18px;
        height: 18px;
        fill: white;
    }

    /* INDICADORES DE CONTENIDO */
    .post-indicators {
        position: absolute;
        top: 8px;
        right: 8px;
        display: flex;
        gap: 4px;
    }

    .post-indicator {
        filter: drop-shadow(0 1px 2px rgba(0,0,0,0.5));
    }

    .post-indicator svg {
        width: 20px;
        height: 20px;
        fill: white;
    }

    /* Pin indicator */
    .pin-indicator {
        position: absolute;
        top: 8px;
        right: 8px;
    }

    .pin-indicator svg {
        width: 18px;
        height: 18px;
        fill: white;
        filter: drop-shadow(0 1px 2px rgba(0,0,0,0.5));
    }

    /* VIDEO BADGE */
    .video-indicator {
        position: absolute;
        top: 8px;
        right: 8px;
    }

    .video-indicator svg {
        width: 20px;
        height: 20px;
        fill: white;
        filter: drop-shadow(0 1px 2px rgba(0,0,0,0.5));
    }

    /* Carousel indicator */
    .carousel-indicator {
        position: absolute;
        top: 8px;
        right: 8px;
    }

    .carousel-indicator svg {
        width: 20px;
        height: 20px;
        fill: white;
        filter: drop-shadow(0 1px 2px rgba(0,0,0,0.5));
    }

    /* REELS GRID - Instagram Style */
    .reels-grid {
        grid-template-columns: repeat(3, 1fr);
    }

    .reel-item {
        aspect-ratio: 9/16;
    }

    .reel-views {
        position: absolute;
        bottom: 8px;
        left: 8px;
        display: flex;
        align-items: center;
        gap: 4px;
        color: white;
        font-size: 13px;
        font-weight: 600;
        text-shadow: 0 1px 2px rgba(0,0,0,0.5);
    }

    .reel-views svg {
        width: 16px;
        height: 16px;
    }

    /* PREMIUM LOCK - Instagram Style */
    .post-lock {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.7);
        backdrop-filter: blur(20px);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        color: white;
    }

    .lock-icon-circle {
        width: 48px;
        height: 48px;
        background: var(--profile-primary);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 8px;
    }

    .lock-icon-circle svg {
        width: 22px;
        height: 22px;
        stroke: white;
        stroke-width: 2;
    }

    .lock-text {
        font-size: 12px;
        font-weight: 600;
    }

    /* EMPTY STATE - Instagram Style */
    .empty-posts {
        text-align: center;
        padding: 60px 20px;
    }

    .empty-icon-border {
        width: 62px;
        height: 62px;
        border: 2px solid var(--fg);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
    }

    .empty-icon-border svg {
        width: 32px;
        height: 32px;
        stroke: var(--fg);
        stroke-width: 1.5;
    }

    .empty-title {
        font-size: 28px;
        font-weight: 700;
        color: var(--fg);
        margin-bottom: 10px;
    }

    .empty-subtitle {
        font-size: 14px;
        color: var(--muted);
    }

    /* FIX MODAL - Ocultos por defecto, visibles solo con .show */
    .modal {
        display: none;
    }
    .modal.show {
        display: flex !important;
        align-items: center;
        justify-content: center;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1055;
        overflow-x: hidden;
        overflow-y: auto;
    }
    body.modal-open {
        overflow: hidden;
    }
    .modal-backdrop {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 1050;
    }
    .modal-backdrop.show {
        opacity: 1;
    }
    .modal-dialog {
        position: relative;
        z-index: 1056;
        pointer-events: auto;
        margin: 1.75rem auto;
    }
    .modal-content {
        pointer-events: auto;
        position: relative;
    }

    /* MODAL DE MENSAJE - Diseño mejorado */
    #messageModal .modal-content {
        background: var(--bg);
        border: none;
        border-radius: 16px;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        overflow: hidden;
    }

    #messageModal .modal-header {
        background: linear-gradient(135deg, var(--primary), var(--primary-dark));
        color: white;
        border: none;
        padding: 20px 24px;
    }

    #messageModal .modal-title {
        font-weight: 600;
        font-size: 18px;
    }

    #messageModal .btn-close {
        filter: brightness(0) invert(1);
        opacity: 0.8;
    }

    #messageModal .btn-close:hover {
        opacity: 1;
    }

    #messageModal .modal-body {
        padding: 24px;
    }

    #messageModal .form-label {
        color: var(--fg);
        font-size: 14px;
        margin-bottom: 10px;
    }

    #messageModal .form-control {
        border: 2px solid var(--line);
        border-radius: 10px;
        padding: 12px 16px;
        font-size: 15px;
        transition: all 0.2s;
        background: var(--bg);
        color: var(--fg);
    }

    #messageModal .form-control:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 3px rgba(70, 130, 180, 0.1);
        outline: none;
    }

    #messageModal textarea.form-control {
        resize: none;
    }

    #messageModal .btn-enviar {
        background: linear-gradient(135deg, var(--primary), var(--primary-dark));
        color: white;
        border: none;
        border-radius: 10px;
        padding: 14px;
        font-size: 16px;
        font-weight: 600;
        width: 100%;
        cursor: pointer;
        transition: all 0.2s;
    }

    #messageModal .btn-enviar:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(70, 130, 180, 0.4);
    }

    #messageModal .btn-enviar:active {
        transform: translateY(0);
    }

    /* Sección de propina opcional */
    .tip-toggle {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 12px 16px;
        background: var(--bg-tertiary);
        border-radius: 10px;
        cursor: pointer;
        margin-bottom: 16px;
        transition: all 0.2s;
    }

    .tip-toggle:hover {
        background: var(--surface-hover);
    }

    .tip-toggle input[type="checkbox"] {
        width: 18px;
        height: 18px;
        accent-color: var(--primary);
    }

    .tip-toggle-label {
        flex: 1;
        font-size: 14px;
        color: var(--fg);
    }

    .tip-toggle-label small {
        display: block;
        color: var(--muted);
        font-size: 12px;
    }

    .tip-section {
        display: none;
        padding: 16px;
        background: linear-gradient(135deg, rgba(70, 130, 180, 0.05), rgba(70, 130, 180, 0.02));
        border-radius: 10px;
        margin-bottom: 16px;
        border: 1px solid rgba(70, 130, 180, 0.1);
    }

    .tip-section.active {
        display: block;
    }

    .tip-section .monto-buttons {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 8px;
        margin-bottom: 10px;
    }

    .tip-section .monto-btn {
        padding: 10px;
        border: 2px solid var(--line);
        border-radius: 8px;
        background: var(--bg);
        font-size: 14px;
        font-weight: 600;
        color: var(--fg);
        cursor: pointer;
        transition: all 0.2s;
    }

    .tip-section .monto-btn:hover {
        border-color: var(--primary);
        color: var(--primary);
    }

    .tip-section .monto-btn.active {
        border-color: var(--primary);
        background: var(--primary);
        color: white;
    }

    .tip-section .monto-input {
        border: 2px solid var(--line);
        border-radius: 8px;
        padding: 10px 12px;
        font-size: 14px;
        width: 100%;
        background: var(--bg);
        color: var(--fg);
    }

    /* RESPONSIVE - Tablets */
    @@media (max-width: 768px) {
        .profile-container {
            padding: 16px;
        }

        .profile-header {
            margin-bottom: 16px;
        }

        .profile-pic-wrapper {
            margin-right: 28px;
        }

        .profile-pic {
            width: 86px;
            height: 86px;
        }

        .pic-placeholder {
            font-size: 32px;
        }

        .profile-username {
            font-size: 18px;
        }

        .profile-stats {
            gap: 20px;
        }

        .stat {
            font-size: 14px;
