@model Lado.Models.ApplicationUser
@{
    ViewData["Title"] = Model.NombreCompleto;
    var estaSuscrito = (bool)ViewBag.EstaSuscrito;
    var contenidos = ViewBag.Contenidos as List<Lado.Models.Contenido>;
    var mostrandoSeudonimo = ViewBag.MostrandoSeudonimo ?? false;
    var nombreMostrado = ViewBag.NombreMostrado ?? Model.NombreCompleto;
    var usernameMostrado = ViewBag.UsernameMostrado ?? $"@{Model.UserName}";
    var puedeRecibirPropinas = ViewBag.PuedeRecibirPropinas ?? false;
    // Seleccionar foto de perfil segun el modo (LadoA o LadoB)
    var fotoPerfilMostrar = mostrandoSeudonimo
        ? (Model.FotoPerfilLadoB ?? Model.FotoPerfil)
        : Model.FotoPerfil;
}

<style>
    :root {
        --primary: #4682B4;
        --primary-dark: #36648B;
        --bg: #ffffff;
        --text: #262626;
        --text-light: #8e8e8e;
        --border: #dbdbdb;
    }

    body {
        background: var(--bg);
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    .profile-container {
        max-width: 975px;
        margin: 0 auto;
        padding: 30px 20px;
    }

    /* HEADER MINIMALISTA */
    .profile-header {
        display: flex;
        margin-bottom: 44px;
        padding-bottom: 44px;
        border-bottom: 1px solid var(--border);
    }

    .profile-pic-wrapper {
        flex: 0 0 auto;
        margin-right: 80px;
    }

    .profile-pic {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        overflow: hidden;
        background: linear-gradient(135deg, var(--primary), var(--primary-dark));
    }

        .profile-pic img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .pic-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 48px;
        font-weight: 600;
    }

    /* INFO DEL PERFIL */
    .profile-info {
        flex: 1;
    }

    .profile-row {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
        gap: 20px;
    }

    .profile-username {
        font-size: 28px;
        font-weight: 300;
        color: var(--text);
        margin: 0;
    }

    .profile-actions {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        margin-bottom: 20px;
    }

    .profile-actions form {
        display: inline-flex;
    }

    .seudonimo-badge {
        background: var(--primary);
        color: white;
        padding: 4px 12px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 600;
    }

    .btn {
        padding: 7px 16px;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        border: none;
    }

    .btn-subscribe {
        background: var(--primary);
        color: white;
    }

        .btn-subscribe:hover {
            background: var(--primary-dark);
        }

    .btn-message {
        background: #efefef;
        color: var(--text);
    }

        .btn-message:hover {
            background: #dbdbdb;
        }

    .btn-cancel {
        background: #efefef;
        color: var(--text);
    }

        .btn-cancel:hover {
            background: #ffe0e0;
            color: #ed4956;
        }

    /* STATS */
    .profile-stats {
        display: flex;
        gap: 40px;
        margin-bottom: 20px;
    }

    .stat {
        font-size: 16px;
    }

    .stat-number {
        font-weight: 600;
        color: var(--text);
        margin-right: 4px;
    }

    .stat-label {
        color: var(--text);
    }

    /* BIO */
    .profile-bio {
        font-size: 16px;
        line-height: 1.5;
    }

    .bio-fullname {
        font-weight: 600;
        color: var(--text);
        display: block;
        margin-bottom: 4px;
    }

    .bio-text {
        color: var(--text);
        white-space: pre-wrap;
    }

    /* TABS */
    .profile-tabs {
        display: flex;
        justify-content: center;
        border-top: 1px solid var(--border);
    }

    .tab {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
        padding: 12px 0;
        margin: 0 30px;
        border-top: 1px solid transparent;
        margin-top: -1px;
        cursor: pointer;
        font-size: 12px;
        font-weight: 600;
        letter-spacing: 1px;
        color: var(--text-light);
        text-transform: uppercase;
    }

        .tab.active {
            border-top-color: var(--text);
            color: var(--text);
        }

        .tab svg {
            width: 12px;
            height: 12px;
        }

    /* GRID DE CONTENIDO */
    .posts-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 28px;
        margin-top: 28px;
    }

    .post-item {
        position: relative;
        aspect-ratio: 1;
        overflow: hidden;
        cursor: pointer;
        background: #f6f6f6;
    }

        .post-item img,
        .post-item video {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }

    .post-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.3);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 30px;
        opacity: 0;
        transition: opacity 0.2s;
    }

    .post-item:hover .post-overlay {
        opacity: 1;
    }

    .post-stat {
        display: flex;
        align-items: center;
        gap: 8px;
        color: white;
        font-size: 16px;
        font-weight: 600;
    }

        .post-stat svg {
            width: 19px;
            height: 19px;
            fill: white;
        }

    /* PREMIUM LOCK */
    .post-lock {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(15px);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        color: white;
    }

    .lock-icon-circle {
        width: 60px;
        height: 60px;
        background: var(--primary);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 12px;
    }

        .lock-icon-circle svg {
            width: 28px;
            height: 28px;
            stroke: white;
            stroke-width: 2;
        }

    .lock-text {
        font-size: 14px;
        font-weight: 600;
    }

    /* VIDEO BADGE */
    .video-indicator {
        position: absolute;
        top: 12px;
        right: 12px;
    }

        .video-indicator svg {
            width: 18px;
            height: 18px;
            fill: white;
            filter: drop-shadow(0 1px 3px rgba(0,0,0,0.5));
        }

    /* EMPTY STATE */
    .empty-posts {
        text-align: center;
        padding: 60px 20px;
    }

    .empty-icon-border {
        width: 62px;
        height: 62px;
        border: 2px solid var(--text);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
    }

        .empty-icon-border svg {
            width: 32px;
            height: 32px;
            stroke: var(--text);
            stroke-width: 2;
        }

    .empty-title {
        font-size: 28px;
        font-weight: 700;
        color: var(--text);
        margin-bottom: 10px;
    }

    .empty-subtitle {
        font-size: 14px;
        color: var(--text-light);
    }

    /* FIX MODAL Z-INDEX - Force above EVERYTHING */
    body.modal-open {
        overflow: hidden !important;
    }
    .modal {
        z-index: 9999999 !important;
        position: fixed !important;
        top: 0 !important;
        left: 0 !important;
        width: 100% !important;
        height: 100% !important;
        overflow-x: hidden !important;
        overflow-y: auto !important;
    }
    .modal-backdrop {
        z-index: 9999998 !important;
        position: fixed !important;
    }
    .modal-dialog {
        z-index: 9999999 !important;
        pointer-events: auto !important;
        position: relative !important;
        margin: 1.75rem auto !important;
    }
    .modal-content {
        pointer-events: auto !important;
        position: relative !important;
    }
    .modal * {
        pointer-events: auto !important;
    }
    .modal input,
    .modal textarea,
    .modal button,
    .modal select {
        pointer-events: auto !important;
        position: relative !important;
        z-index: 1 !important;
    }

    /* MODAL DE MENSAJE - Diseño mejorado */
    #messageModal .modal-content {
        border: none;
        border-radius: 16px;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        overflow: hidden;
    }

    #messageModal .modal-header {
        background: linear-gradient(135deg, var(--primary), var(--primary-dark));
        color: white;
        border: none;
        padding: 20px 24px;
    }

    #messageModal .modal-title {
        font-weight: 600;
        font-size: 18px;
    }

    #messageModal .btn-close {
        filter: brightness(0) invert(1);
        opacity: 0.8;
    }

    #messageModal .btn-close:hover {
        opacity: 1;
    }

    #messageModal .modal-body {
        padding: 24px;
    }

    #messageModal .form-label {
        color: var(--text);
        font-size: 14px;
        margin-bottom: 10px;
    }

    #messageModal .form-control {
        border: 2px solid var(--border);
        border-radius: 10px;
        padding: 12px 16px;
        font-size: 15px;
        transition: all 0.2s;
    }

    #messageModal .form-control:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 3px rgba(70, 130, 180, 0.1);
        outline: none;
    }

    #messageModal textarea.form-control {
        resize: none;
    }

    #messageModal .btn-enviar {
        background: linear-gradient(135deg, var(--primary), var(--primary-dark));
        color: white;
        border: none;
        border-radius: 10px;
        padding: 14px;
        font-size: 16px;
        font-weight: 600;
        width: 100%;
        cursor: pointer;
        transition: all 0.2s;
    }

    #messageModal .btn-enviar:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(70, 130, 180, 0.4);
    }

    #messageModal .btn-enviar:active {
        transform: translateY(0);
    }

    /* Sección de propina opcional */
    .tip-toggle {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 12px 16px;
        background: #f8f9fa;
        border-radius: 10px;
        cursor: pointer;
        margin-bottom: 16px;
        transition: all 0.2s;
    }

    .tip-toggle:hover {
        background: #f0f1f2;
    }

    .tip-toggle input[type="checkbox"] {
        width: 18px;
        height: 18px;
        accent-color: var(--primary);
    }

    .tip-toggle-label {
        flex: 1;
        font-size: 14px;
        color: var(--text);
    }

    .tip-toggle-label small {
        display: block;
        color: var(--text-light);
        font-size: 12px;
    }

    .tip-section {
        display: none;
        padding: 16px;
        background: linear-gradient(135deg, rgba(70, 130, 180, 0.05), rgba(70, 130, 180, 0.02));
        border-radius: 10px;
        margin-bottom: 16px;
        border: 1px solid rgba(70, 130, 180, 0.1);
    }

    .tip-section.active {
        display: block;
    }

    .tip-section .monto-buttons {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 8px;
        margin-bottom: 10px;
    }

    .tip-section .monto-btn {
        padding: 10px;
        border: 2px solid var(--border);
        border-radius: 8px;
        background: white;
        font-size: 14px;
        font-weight: 600;
        color: var(--text);
        cursor: pointer;
        transition: all 0.2s;
    }

    .tip-section .monto-btn:hover {
        border-color: var(--primary);
        color: var(--primary);
    }

    .tip-section .monto-btn.active {
        border-color: var(--primary);
        background: var(--primary);
        color: white;
    }

    .tip-section .monto-input {
        border: 2px solid var(--border);
        border-radius: 8px;
        padding: 10px 12px;
        font-size: 14px;
        width: 100%;
    }

    /* RESPONSIVE - Tablets */
    @@media (max-width: 768px) {
        .profile-container {
            padding: 20px 15px;
        }

        .profile-header {
            margin-bottom: 20px;
            padding-bottom: 20px;
        }

        .profile-pic-wrapper {
            margin-right: 20px;
        }

        .profile-pic {
            width: 100px;
            height: 100px;
        }

        .pic-placeholder {
            font-size: 36px;
        }

        .profile-username {
            font-size: 22px;
        }

        .profile-stats {
            gap: 25px;
        }

        .posts-grid {
            gap: 4px;
        }
    }

    /* RESPONSIVE - Moviles */
    @@media (max-width: 576px) {
        .profile-container {
            padding: 15px 10px;
        }

        .profile-header {
            flex-direction: column;
            align-items: center;
            text-align: center;
            margin-bottom: 20px;
            padding-bottom: 20px;
        }

        .profile-pic-wrapper {
            margin-right: 0;
            margin-bottom: 15px;
        }

        .profile-pic {
            width: 90px;
            height: 90px;
        }

        .pic-placeholder {
            font-size: 32px;
        }

        .profile-info {
            width: 100%;
        }

        .profile-row {
            flex-direction: column;
            align-items: center;
            gap: 12px;
        }

        .profile-username {
            font-size: 20px;
            text-align: center;
        }

        /* Badge de seudonimo en movil */
        .seudonimo-badge {
            margin-top: 8px;
        }

        .profile-actions {
            width: 100%;
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            justify-content: center;
            margin-bottom: 15px;
        }

        .profile-actions .btn {
            flex: 1 1 calc(50% - 10px);
            min-width: 0;
            max-width: none;
            padding: 12px 16px;
            font-size: 14px;
            text-align: center;
        }

        .profile-actions form {
            flex: 1 1 calc(50% - 10px);
            min-width: 0;
        }

        .profile-actions form .btn {
            width: 100%;
        }

        .profile-stats {
            justify-content: center;
            gap: 20px;
            margin-bottom: 15px;
        }

        .stat {
            font-size: 14px;
            text-align: center;
        }

        .stat-number {
            display: block;
            font-size: 18px;
        }

        .stat-label {
            font-size: 12px;
            color: var(--text-light);
        }

        .profile-bio {
            text-align: center;
        }

        .bio-fullname {
            font-size: 15px;
        }

        .bio-text {
            font-size: 14px;
        }

        /* Tabs */
        .profile-tabs {
            margin: 0 -10px;
        }

        .tab {
            margin: 0 15px;
            font-size: 11px;
            padding: 10px 0;
        }

        /* Grid */
        .posts-grid {
            gap: 2px;
            margin-top: 15px;
        }

        /* Lock icon mas pequeno */
        .lock-icon-circle {
            width: 45px;
            height: 45px;
        }

        .lock-icon-circle svg {
            width: 20px;
            height: 20px;
        }

        .lock-text {
            font-size: 12px;
        }

        /* Empty state */
        .empty-posts {
            padding: 40px 15px;
        }

        .empty-title {
            font-size: 22px;
        }

        .empty-subtitle {
            font-size: 13px;
        }

        /* Post overlay en movil siempre visible */
        .post-overlay {
            gap: 15px;
        }

        .post-stat {
            font-size: 14px;
            gap: 5px;
        }

        .post-stat svg {
            width: 16px;
            height: 16px;
        }
    }

    /* RESPONSIVE - Moviles muy pequenos */
    @@media (max-width: 375px) {
        .profile-pic {
            width: 80px;
            height: 80px;
        }

        .profile-username {
            font-size: 18px;
        }

        .profile-actions .btn {
            padding: 8px 12px;
            font-size: 13px;
            min-width: 80px;
        }

        .stat-number {
            font-size: 16px;
        }

        .profile-stats {
            gap: 15px;
        }
    }

    /* Toast Notification */
    .toast-notification {
        position: fixed;
        top: 20px;
        left: 50%;
        transform: translateX(-50%) translateY(-100px);
        z-index: 99999999;
        padding: 14px 24px;
        border-radius: 12px;
        font-size: 15px;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 10px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
        opacity: 0;
        transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        max-width: 90%;
    }

    .toast-notification.show {
        transform: translateX(-50%) translateY(0);
        opacity: 1;
    }

    .toast-notification.success {
        background: linear-gradient(135deg, #10B981, #059669);
        color: white;
    }

    .toast-notification.error {
        background: linear-gradient(135deg, #EF4444, #DC2626);
        color: white;
    }

    .toast-notification.warning {
        background: linear-gradient(135deg, #F59E0B, #D97706);
        color: white;
    }

    .toast-notification.info {
        background: linear-gradient(135deg, var(--primary), var(--primary-dark));
        color: white;
    }

    .toast-notification svg {
        width: 20px;
        height: 20px;
        flex-shrink: 0;
    }

    /* Modal de confirmacion elegante */
    .confirm-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(4px);
        z-index: 99999998;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s;
    }

    .confirm-overlay.show {
        opacity: 1;
        visibility: visible;
    }

    .confirm-dialog {
        background: white;
        border-radius: 16px;
        padding: 24px;
        max-width: 340px;
        width: 90%;
        text-align: center;
        transform: scale(0.9);
        transition: transform 0.3s;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.25);
    }

    .confirm-overlay.show .confirm-dialog {
        transform: scale(1);
    }

    .confirm-icon {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, #F59E0B, #D97706);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 16px;
    }

    .confirm-icon svg {
        width: 28px;
        height: 28px;
        stroke: white;
    }

    .confirm-title {
        font-size: 18px;
        font-weight: 600;
        color: var(--text);
        margin-bottom: 8px;
    }

    .confirm-message {
        font-size: 14px;
        color: var(--text-light);
        margin-bottom: 20px;
        line-height: 1.5;
    }

    .confirm-buttons {
        display: flex;
        gap: 10px;
    }

    .confirm-btn {
        flex: 1;
        padding: 12px;
        border-radius: 10px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        border: none;
        transition: all 0.2s;
    }

    .confirm-btn.cancel {
        background: #f3f4f6;
        color: var(--text);
    }

    .confirm-btn.cancel:hover {
        background: #e5e7eb;
    }

    .confirm-btn.confirm {
        background: linear-gradient(135deg, var(--primary), var(--primary-dark));
        color: white;
    }

    .confirm-btn.confirm:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(70, 130, 180, 0.4);
    }
</style>

<div class="profile-container">
    <!-- HEADER -->
    <div class="profile-header">
        <div class="profile-pic-wrapper">
            <div class="profile-pic">
                @if (!string.IsNullOrEmpty(fotoPerfilMostrar))
                {
                    <img src="@fotoPerfilMostrar" alt="@nombreMostrado">
                }
                else
                {
                    <div class="pic-placeholder">@nombreMostrado.Substring(0, 1)</div>
                }
            </div>
        </div>

        <div class="profile-info">
            <div class="profile-row">
                @* ⭐ MOSTRAR USERNAME DEPENDIENDO DEL MODO *@
                <h2 class="profile-username">@usernameMostrado</h2>

                @* ⭐ BADGE DE SEUDÓNIMO *@
                @if (mostrandoSeudonimo)
                {
                    <span class="seudonimo-badge">Seudonimo</span>
                }
            </div>

            <div class="profile-actions">
                @if (!estaSuscrito)
                {
                    <form asp-controller="Pagos" asp-action="Suscribirse" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="creadorId" value="@Model.Id" />
                        <input type="hidden" name="precio" value="@Model.PrecioSuscripcion" />
                        <input type="hidden" name="tipoLado" value="@ViewBag.TipoLadoActual" />
                        <button type="submit" class="btn btn-subscribe">Suscribirse</button>
                    </form>
                }
                <button class="btn btn-message" data-bs-toggle="modal" data-bs-target="#messageModal">Mensaje</button>
                @if (estaSuscrito)
                {
                    <button class="btn btn-cancel" data-bs-toggle="modal" data-bs-target="#cancelModal">Suscrito</button>
                }
            </div>

            <div class="profile-stats">
                <div class="stat">
                    <span class="stat-number">@ViewBag.TotalPublicaciones</span>
                    <span class="stat-label">publicaciones</span>
                </div>
                <div class="stat">
                    <span class="stat-number">@ViewBag.NumeroSuscriptores</span>
                    <span class="stat-label">seguidores</span>
                </div>
                <div class="stat">
                    <span class="stat-number">
                        @{
                            var totalLikes = ViewBag.TotalLikes;
                            var likesDisplay = totalLikes < 1000 ? totalLikes.ToString() : $"{(totalLikes / 1000.0):0.#}K";
                        }
                        @likesDisplay
                    </span>
                    <span class="stat-label">me gusta</span>
                </div>
            </div>

            <div class="profile-bio">
                @* ⭐ NOMBRE MOSTRADO DEPENDIENDO DEL MODO *@
                <span class="bio-fullname">@nombreMostrado</span>
                @if (!string.IsNullOrEmpty(Model.Biografia))
                {
                    <span class="bio-text">@Model.Biografia</span>
                }
            </div>

        </div>
    </div>

    <!-- TABS -->
    <div class="profile-tabs">
        <div class="tab active">
