@model Lado.Models.ApplicationUser
@{
    ViewData["Title"] = Model.NombreCompleto;
    var estaSuscrito = (bool)ViewBag.EstaSuscrito;
    var contenidos = ViewBag.Contenidos as List<Lado.Models.Contenido>;
    var mostrandoSeudonimo = ViewBag.MostrandoSeudonimo ?? false;
    var nombreMostrado = ViewBag.NombreMostrado ?? Model.NombreCompleto;
    var usernameMostrado = ViewBag.UsernameMostrado ?? $"@{Model.UserName}";
}

<style>
    :root {
        --primary: #4682B4;
        --primary-dark: #36648B;
        --bg: #ffffff;
        --text: #262626;
        --text-light: #8e8e8e;
        --border: #dbdbdb;
    }

    body {
        background: var(--bg);
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    .profile-container {
        max-width: 975px;
        margin: 0 auto;
        padding: 30px 20px;
    }

    /* HEADER MINIMALISTA */
    .profile-header {
        display: flex;
        margin-bottom: 44px;
        padding-bottom: 44px;
        border-bottom: 1px solid var(--border);
    }

    .profile-pic-wrapper {
        flex: 0 0 auto;
        margin-right: 80px;
    }

    .profile-pic {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        overflow: hidden;
        background: linear-gradient(135deg, var(--primary), var(--primary-dark));
    }

        .profile-pic img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .pic-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 48px;
        font-weight: 600;
    }

    /* INFO DEL PERFIL */
    .profile-info {
        flex: 1;
    }

    .profile-row {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
        gap: 20px;
    }

    .profile-username {
        font-size: 28px;
        font-weight: 300;
        color: var(--text);
        margin: 0;
    }

    .profile-actions {
        display: flex;
        gap: 8px;
    }

    .btn {
        padding: 7px 16px;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        border: none;
    }

    .btn-subscribe {
        background: var(--primary);
        color: white;
    }

        .btn-subscribe:hover {
            background: var(--primary-dark);
        }

    .btn-message {
        background: #efefef;
        color: var(--text);
    }

        .btn-message:hover {
            background: #dbdbdb;
        }

    .btn-cancel {
        background: #efefef;
        color: var(--text);
    }

        .btn-cancel:hover {
            background: #ffe0e0;
            color: #ed4956;
        }

    /* STATS */
    .profile-stats {
        display: flex;
        gap: 40px;
        margin-bottom: 20px;
    }

    .stat {
        font-size: 16px;
    }

    .stat-number {
        font-weight: 600;
        color: var(--text);
        margin-right: 4px;
    }

    .stat-label {
        color: var(--text);
    }

    /* BIO */
    .profile-bio {
        font-size: 16px;
        line-height: 1.5;
    }

    .bio-fullname {
        font-weight: 600;
        color: var(--text);
        display: block;
        margin-bottom: 4px;
    }

    .bio-text {
        color: var(--text);
        white-space: pre-wrap;
    }

    /* TABS */
    .profile-tabs {
        display: flex;
        justify-content: center;
        border-top: 1px solid var(--border);
    }

    .tab {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
        padding: 12px 0;
        margin: 0 30px;
        border-top: 1px solid transparent;
        margin-top: -1px;
        cursor: pointer;
        font-size: 12px;
        font-weight: 600;
        letter-spacing: 1px;
        color: var(--text-light);
        text-transform: uppercase;
    }

        .tab.active {
            border-top-color: var(--text);
            color: var(--text);
        }

        .tab svg {
            width: 12px;
            height: 12px;
        }

    /* GRID DE CONTENIDO */
    .posts-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 28px;
        margin-top: 28px;
    }

    .post-item {
        position: relative;
        aspect-ratio: 1;
        overflow: hidden;
        cursor: pointer;
        background: #f6f6f6;
    }

        .post-item img,
        .post-item video {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }

    .post-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.3);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 30px;
        opacity: 0;
        transition: opacity 0.2s;
    }

    .post-item:hover .post-overlay {
        opacity: 1;
    }

    .post-stat {
        display: flex;
        align-items: center;
        gap: 8px;
        color: white;
        font-size: 16px;
        font-weight: 600;
    }

        .post-stat svg {
            width: 19px;
            height: 19px;
            fill: white;
        }

    /* PREMIUM LOCK */
    .post-lock {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(15px);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        color: white;
    }

    .lock-icon-circle {
        width: 60px;
        height: 60px;
        background: var(--primary);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 12px;
    }

        .lock-icon-circle svg {
            width: 28px;
            height: 28px;
            stroke: white;
            stroke-width: 2;
        }

    .lock-text {
        font-size: 14px;
        font-weight: 600;
    }

    /* VIDEO BADGE */
    .video-indicator {
        position: absolute;
        top: 12px;
        right: 12px;
    }

        .video-indicator svg {
            width: 18px;
            height: 18px;
            fill: white;
            filter: drop-shadow(0 1px 3px rgba(0,0,0,0.5));
        }

    /* EMPTY STATE */
    .empty-posts {
        text-align: center;
        padding: 60px 20px;
    }

    .empty-icon-border {
        width: 62px;
        height: 62px;
        border: 2px solid var(--text);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
    }

        .empty-icon-border svg {
            width: 32px;
            height: 32px;
            stroke: var(--text);
            stroke-width: 2;
        }

    .empty-title {
        font-size: 28px;
        font-weight: 700;
        color: var(--text);
        margin-bottom: 10px;
    }

    .empty-subtitle {
        font-size: 14px;
        color: var(--text-light);
    }

    /* RESPONSIVE */
    @@media (max-width: 735px) {
        .profile-header {
            margin-bottom: 24px;
            padding-bottom: 24px;
        }

        .profile-pic-wrapper {
            margin-right: 28px;
        }

        .profile-pic {
            width: 77px;
            height: 77px;
        }

        .profile-username {
            font-size: 20px;
        }

        .profile-row {
            flex-direction: column;
            align-items: flex-start;
            gap: 12px;
        }

        .profile-actions {
            width: 100%;
        }

        .btn {
            flex: 1;
        }

        .profile-stats {
            gap: 20px;
        }

        .stat {
            font-size: 14px;
        }

        .posts-grid {
            gap: 3px;
        }
    }
</style>

<div class="profile-container">
    <!-- HEADER -->
    <div class="profile-header">
        <div class="profile-pic-wrapper">
            <div class="profile-pic">
                @if (!string.IsNullOrEmpty(Model.FotoPerfil))
                {
                    <img src="@Model.FotoPerfil" alt="@nombreMostrado">
                }
                else
                {
                    <div class="pic-placeholder">@nombreMostrado.Substring(0, 1)</div>
                }
            </div>
        </div>

        <div class="profile-info">
            <div class="profile-row">
                @* ⭐ MOSTRAR USERNAME DEPENDIENDO DEL MODO *@
                <h2 class="profile-username">@usernameMostrado</h2>

                @* ⭐ BADGE DE SEUDÓNIMO *@
                @if (mostrandoSeudonimo)
                {
                    <span style="background: var(--primary); color: white; padding: 4px 12px; border-radius: 6px; font-size: 12px; font-weight: 600; margin-left: 12px;">
                        Seudónimo
                    </span>
                }

                <div class="profile-actions">
                    @if (!estaSuscrito)
                    {
                        <form asp-controller="Pagos" asp-action="Suscribirse" method="post" style="display: inline;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="creadorId" value="@Model.Id" />
                            <input type="hidden" name="precio" value="@Model.PrecioSuscripcion" />
                            <button type="submit" class="btn btn-subscribe">Suscribirse</button>
                        </form>
                    }
                    <button class="btn btn-message" data-bs-toggle="modal" data-bs-target="#tipModal">Mensaje</button>
                    @if (estaSuscrito)
                    {
                        <button class="btn btn-cancel" data-bs-toggle="modal" data-bs-target="#cancelModal">Suscrito</button>
                    }
                </div>
            </div>

            <div class="profile-stats">
                <div class="stat">
                    <span class="stat-number">@ViewBag.TotalPublicaciones</span>
                    <span class="stat-label">publicaciones</span>
                </div>
                <div class="stat">
                    <span class="stat-number">@ViewBag.NumeroSuscriptores</span>
                    <span class="stat-label">seguidores</span>
                </div>
                <div class="stat">
                    <span class="stat-number">
                        @{
                            var totalLikes = ViewBag.TotalLikes;
                            var likesDisplay = totalLikes < 1000 ? totalLikes.ToString() : $"{(totalLikes / 1000.0):0.#}K";
                        }
                        @likesDisplay
                    </span>
                    <span class="stat-label">me gusta</span>
                </div>
            </div>

            <div class="profile-bio">
                @* ⭐ NOMBRE MOSTRADO DEPENDIENDO DEL MODO *@
                <span class="bio-fullname">@nombreMostrado</span>
                @if (!string.IsNullOrEmpty(Model.Biografia))
                {
                    <span class="bio-text">@Model.Biografia</span>
                }
            </div>

            @* ⭐ BOTÓN PARA VER PERFIL COMPLETO (solo si está en modo seudónimo) *@
            @if (mostrandoSeudonimo)
            {
                <div style="margin-top: 16px;">
                    <a href="/Feed/Perfil/@Model.Id" class="btn btn-message" style="display: inline-block;">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="margin-right: 6px;">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" />
                            <circle cx="12" cy="7" r="4" />
                        </svg>
                        Ver perfil completo
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- TABS -->
    <div class="profile-tabs">
        <div class="tab active">
            <svg viewBox="0 0 24 24" fill="currentColor">
                <rect x="3" y="3" width="7" height="7" />
                <rect x="14" y="3" width="7" height="7" />
                <rect x="14" y="14" width="7" height="7" />
                <rect x="3" y="14" width="7" height="7" />
            </svg>
            <span>Publicaciones</span>
        </div>
    </div>

    @* ⭐ MENSAJE EXPLICATIVO SI ESTÁ EN MODO SEUDÓNIMO *@
    @if (mostrandoSeudonimo)
    {
        <div style="background: var(--primary-light); border: 1px solid var(--primary); border-radius: 12px; padding: 16px; margin: 24px 0; text-align: center;">
            <p style="margin: 0; color: var(--text); font-size: 14px;">
                📌 Estás viendo solo el contenido del seudónimo <strong>@(Model.Seudonimo ?? "usuario")</strong>
            </p>
        </div>
    }

    <!-- GRID -->
    @if (contenidos != null && contenidos.Any())
    {
        <div class="posts-grid">
            @foreach (var contenido in contenidos)
            {
                <div class="post-item" onclick="window.location.href='/Feed/Detalle/@contenido.Id'">
                    @if (contenido.EsPremium && !estaSuscrito)
                    {
                        <img src="@(contenido.RutaArchivo ?? "/images/placeholder.jpg")" alt="Premium" style="filter: blur(20px);">
                        <div class="post-lock">
                            <div class="lock-icon-circle">
                                <svg viewBox="0 0 24 24" fill="none">
                                    <rect x="3" y="11" width="18" height="11" rx="2" ry="2" />
                                    <path d="M7 11V7a5 5 0 0 1 10 0v4" />
                                </svg>
                            </div>
                            <span class="lock-text">Contenido Premium</span>
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(contenido.RutaArchivo))
                    {
                        @if ((int)contenido.TipoContenido == 0)
                        {
                            <img src="@contenido.RutaArchivo" alt="Post">
                        }
                        else if ((int)contenido.TipoContenido == 1)
                        {
                            <video src="@contenido.RutaArchivo"></video>
                            <div class="video-indicator">
                                <svg viewBox="0 0 24 24">
                                    <polygon points="5 3 19 12 5 21 5 3" />
                                </svg>
                            </div>
                        }

                        <div class="post-overlay">
                            <div class="post-stat">
                                <svg viewBox="0 0 24 24">
                                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" />
                                </svg>
                                <span>@contenido.NumeroLikes</span>
                            </div>
                            <div class="post-stat">
                                <svg viewBox="0 0 24 24">
                                    <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z" />
                                </svg>
                                <span>@contenido.NumeroComentarios</span>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-posts">
            <div class="empty-icon-border">
                <svg viewBox="0 0 24 24" fill="none">
                    <circle cx="12" cy="12" r="3.2" />
                    <path d="M9 2L7.17 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2h-3.17L15 2H9z" />
                </svg>
            </div>
            <h2 class="empty-title">Sin publicaciones</h2>
            <p class="empty-subtitle">
                @if (mostrandoSeudonimo)
                {
                    @:No hay contenido del seudónimo aún.
                }
                else
                {
                    @:Cuando publique, verás sus fotos y videos aquí.
                }
            </p>
        </div>
    }
</div>

<!-- Modales -->
<div class="modal fade" id="tipModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Enviar Mensaje</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form asp-controller="Pagos" asp-action="EnviarTip" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="creadorId" value="@Model.Id" />
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Monto</label>
                        <div class="d-flex gap-2 mb-2">
                            <button type="button" class="btn btn-message flex-fill" onclick="document.getElementById('montoTip').value='5'">$5</button>
                            <button type="button" class="btn btn-message flex-fill" onclick="document.getElementById('montoTip').value='10'">$10</button>
                            <button type="button" class="btn btn-message flex-fill" onclick="document.getElementById('montoTip').value='20'">$20</button>
                        </div>
                        <input type="number" id="montoTip" name="monto" class="form-control" placeholder="Otro monto" min="1" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Mensaje (opcional)</label>
                        <textarea name="mensaje" class="form-control" rows="3" placeholder="Escribe algo..."></textarea>
                    </div>
                    <button type="submit" class="btn btn-subscribe w-100">Enviar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="cancelModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Dejar de seguir</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>¿Dejar de seguir a <strong>@Model.UserName</strong>?</p>
                <div class="d-flex gap-2">
                    <button type="button" class="btn btn-message flex-fill" data-bs-dismiss="modal">Cancelar</button>
                    <form asp-controller="Pagos" asp-action="CancelarDesdeCreador" method="post" class="flex-fill">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="creadorId" value="@Model.Id" />
                        <button type="submit" class="btn btn-cancel w-100">Dejar de seguir</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>