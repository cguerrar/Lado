<script>
document.addEventListener('DOMContentLoaded', function() {
    // ========================================
    // Sistema de Toast Notifications
    // ========================================
    function showToast(message, type = 'info', duration = 3000) {
        // Remover toast anterior si existe
        const existingToast = document.querySelector('.toast-notification');
        if (existingToast) existingToast.remove();

        const icons = {
            success: '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>',
            error: '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><line x1="15" y1="9" x2="9" y2="15"/><line x1="9" y1="9" x2="15" y2="15"/></svg>',
            warning: '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/><line x1="12" y1="9" x2="12" y2="13"/><line x1="12" y1="17" x2="12.01" y2="17"/></svg>',
            info: '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><line x1="12" y1="16" x2="12" y2="12"/><line x1="12" y1="8" x2="12.01" y2="8"/></svg>'
        };

        const toast = document.createElement('div');
        toast.className = `toast-notification ${type}`;
        toast.innerHTML = `${icons[type] || icons.info}<span>${message}</span>`;
        document.body.appendChild(toast);

        // Trigger animation
        requestAnimationFrame(() => {
            toast.classList.add('show');
        });

        // Auto remove
        setTimeout(() => {
            toast.classList.remove('show');
            setTimeout(() => toast.remove(), 400);
        }, duration);
    }

    // ========================================
    // Sistema de Confirm Dialog elegante
    // ========================================
    function showConfirm(title, message) {
        return new Promise((resolve) => {
            const overlay = document.createElement('div');
            overlay.className = 'confirm-overlay';
            overlay.innerHTML = `
                <div class="confirm-dialog">
                    <div class="confirm-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke-width="2">
                            <circle cx="12" cy="12" r="10"/>
                            <line x1="12" y1="8" x2="12" y2="12"/>
                            <line x1="12" y1="16" x2="12.01" y2="16"/>
                        </svg>
                    </div>
                    <div class="confirm-title">${title}</div>
                    <div class="confirm-message">${message}</div>
                    <div class="confirm-buttons">
                        <button class="confirm-btn cancel">Cancelar</button>
                        <button class="confirm-btn confirm">Aceptar</button>
                    </div>
                </div>
            `;
            document.body.appendChild(overlay);

            requestAnimationFrame(() => overlay.classList.add('show'));

            const closeDialog = (result) => {
                overlay.classList.remove('show');
                setTimeout(() => {
                    overlay.remove();
                    resolve(result);
                }, 300);
            };

            overlay.querySelector('.confirm-btn.cancel').addEventListener('click', () => closeDialog(false));
            overlay.querySelector('.confirm-btn.confirm').addEventListener('click', () => closeDialog(true));
            overlay.addEventListener('click', (e) => {
                if (e.target === overlay) closeDialog(false);
            });
        });
    }

    // ========================================
    // FIX: Mover modales al body para evitar problemas de z-index
    // ========================================
    const messageModal = document.getElementById('messageModal');
    const cancelModal = document.getElementById('cancelModal');

    if (messageModal && messageModal.parentElement !== document.body) {
        document.body.appendChild(messageModal);
    }
    if (cancelModal && cancelModal.parentElement !== document.body) {
        document.body.appendChild(cancelModal);
    }

    // Asegurar interactividad cuando el modal se abre
    if (messageModal) {
        messageModal.addEventListener('shown.bs.modal', function () {
            this.style.pointerEvents = 'auto';
            const dialog = this.querySelector('.modal-dialog');
            if (dialog) dialog.style.pointerEvents = 'auto';
            const content = this.querySelector('.modal-content');
            if (content) content.style.pointerEvents = 'auto';

            // Enfocar el textarea
            const textarea = this.querySelector('textarea');
            if (textarea) textarea.focus();
        });
    }

    // ========================================
    // Toggle de propina
    // ========================================
    const tipCheckbox = document.getElementById('tipCheckbox');
    const tipSection = document.getElementById('tipSection');
    const btnEnviarTexto = document.getElementById('btnEnviarTexto');

    if (tipCheckbox && tipSection) {
        tipCheckbox.addEventListener('change', function() {
            if (this.checked) {
                tipSection.classList.add('active');
                btnEnviarTexto.textContent = 'Enviar con Propina';
            } else {
                tipSection.classList.remove('active');
                btnEnviarTexto.textContent = 'Enviar Mensaje';
                // Limpiar monto
                document.getElementById('montoTip').value = '';
                document.querySelectorAll('.monto-btn').forEach(b => b.classList.remove('active'));
            }
        });
    }

    // Botones de monto predefinido
    const montoBtns = document.querySelectorAll('.monto-btn');
    const montoInput = document.getElementById('montoTip');

    montoBtns.forEach(btn => {
        btn.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            montoBtns.forEach(b => b.classList.remove('active'));
            this.classList.add('active');
            montoInput.value = this.dataset.monto;
        });
    });

    if (montoInput) {
        montoInput.addEventListener('input', function() {
            const val = this.value;
            montoBtns.forEach(btn => {
                btn.classList.toggle('active', btn.dataset.monto === val);
            });
        });
    }

    // ========================================
    // Enviar formulario
    // ========================================
    const messageForm = document.getElementById('messageForm');

    if (messageForm) {
        messageForm.addEventListener('submit', async function(e) {
            e.preventDefault();

            const submitBtn = document.getElementById('btnEnviarMensaje');
            const originalHtml = submitBtn.innerHTML;
            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Enviando...';
            submitBtn.disabled = true;

            const mensaje = document.getElementById('mensajeTexto').value.trim();
            const creadorId = this.querySelector('input[name="creadorId"]').value;
            const incluyePropina = tipCheckbox && tipCheckbox.checked;
            const monto = incluyePropina && montoInput ? parseFloat(montoInput.value) || 0 : 0;

            if (!mensaje) {
                showToast('Por favor escribe un mensaje', 'warning');
                submitBtn.innerHTML = originalHtml;
                submitBtn.disabled = false;
                return;
            }

            if (incluyePropina && monto < 1) {
                showToast('El monto mínimo de propina es $1', 'warning');
                submitBtn.innerHTML = originalHtml;
                submitBtn.disabled = false;
                return;
            }

            try {
                const response = await fetch('/Mensajes/EnviarMensajeDirecto', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        receptorId: creadorId,
                        mensaje: mensaje,
                        monto: monto
                    })
                });

                const result = await response.json();

                if (result.success) {
                    // Cerrar modal
                    const modal = bootstrap.Modal.getInstance(messageModal);
                    if (modal) modal.hide();

                    // Mostrar éxito con toast elegante
                    showToast(monto > 0 ? '¡Mensaje y propina enviados!' : '¡Mensaje enviado!', 'success');

                    // Limpiar formulario
                    messageForm.reset();
                    if (tipSection) tipSection.classList.remove('active');
                    if (btnEnviarTexto) btnEnviarTexto.textContent = 'Enviar Mensaje';
                    if (montoBtns) montoBtns.forEach(b => b.classList.remove('active'));
                } else {
                    if (result.requiereRecarga) {
                        const confirmed = await showConfirm('Saldo insuficiente', result.message + '\n\n¿Deseas recargar saldo?');
                        if (confirmed) {
                            window.location.href = '/Billetera';
                        }
                    } else {
                        showToast(result.message || 'Error al enviar', 'error');
                    }
                }
            } catch (error) {
                console.error('Error:', error);
                showToast('Error de conexión. Intenta de nuevo.', 'error');
            } finally {
                submitBtn.innerHTML = originalHtml;
                submitBtn.disabled = false;
            }
        });
    }
});
</script>

