<script>
    // Debug: Log cuando carga la página
    console.log('✅ Página de perfil cargada');
    console.log('Creador ID: @Model.Id');
    console.log('Está suscrito: @estaSuscrito.ToString().ToLower()');

    // Función para manejar suscripción con feedback visual
    function handleSuscripcion(event) {
        console.log('🔵 Iniciando proceso de suscripción...');

        const btn = document.getElementById('btnSuscribirse');
        const textoBoton = document.getElementById('textoBoton');

        // Deshabilitar botón y mostrar loading
        btn.disabled = true;
        textoBoton.textContent = 'Procesando...';

        console.log('✅ Formulario enviándose...');

        // Permitir que el formulario se envíe normalmente
        return true;
    }

    function showTab(tabName) {
        // Hide all tabs
        document.querySelectorAll('.tab-content-custom').forEach(tab => {
            tab.style.display = 'none';
        });

        // Remove active from all links
        document.querySelectorAll('.tab-link').forEach(link => {
            link.classList.remove('active');
        });

        // Show selected tab
        document.getElementById(tabName + '-tab').style.display = 'block';

        // Add active to clicked link
        event.target.closest('.tab-link').classList.add('active');
    }

    // Debug: Verificar que el formulario existe
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('formSuscribirse');
        if (form) {
            console.log('✅ Formulario encontrado');
            console.log('Action:', form.action);
            console.log('Method:', form.method);
        } else {
            console.warn('⚠️ Formulario NO encontrado');
        }
    });
</script>