<!-- Pull to Refresh Indicator -->
<div class="pull-to-refresh" id="pullToRefresh">
    <div class="pull-indicator">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 12a9 9 0 1 1-6.219-8.56"></path>
        </svg>
    </div>
</div>

<div class="explorar-container">
    <!-- Barra de búsqueda -->
    <div class="search-header">
        <div class="search-box">
            <i class="fas fa-search"></i>
            <input type="text" id="searchGlobal" placeholder="Buscar creadores o contenido...">
        </div>
    </div>

    <!-- Tabs -->
    <div class="explorar-tabs">
        <button class="explorar-tab active" onclick="switchTab('contenido', this)">
            <i class="fas fa-th"></i>
            <span>Contenido</span>
            <span class="tab-count">@contenidoExplorar.Count</span>
        </button>
        <button class="explorar-tab" onclick="switchTab('creadores', this)">
            <i class="fas fa-users"></i>
            <span>Creadores</span>
            <span class="tab-count">@creadoresLadoA.Count</span>
        </button>
        <button class="explorar-tab" onclick="switchTab('premium', this)">
            <i class="fas fa-crown"></i>
            <span>Exclusivo</span>
            <span class="tab-count">@creadoresLadoB.Count</span>
        </button>
        <button class="explorar-tab" onclick="switchTab('mapa', this)">
            <i class="fas fa-map-marker-alt"></i>
            <span>Mapa</span>
            <span class="tab-count">@contenidoMapa.Count</span>
        </button>
        <button class="explorar-tab" onclick="switchTab('elementos', this)">
            <i class="fas fa-tags"></i>
            <span>Elementos</span>
        </button>
    </div>

    <!-- Tab: Contenido -->
    <div id="tab-contenido" class="tab-content active">
        <!-- Filtros -->
        <div class="filters-bar">
            <div class="filter-chips">
                <button class="filter-chip active" data-tipo="todos" onclick="filterContent('todos', this)">Todos</button>
                <button class="filter-chip" data-tipo="siguiendo" onclick="filterContent('siguiendo', this)">
                    <i class="fas fa-user-friends"></i> Siguiendo
                </button>
                <button class="filter-chip" data-tipo="fotos" onclick="filterContent('fotos', this)">
                    <i class="fas fa-image"></i> Fotos
                </button>
                <button class="filter-chip" data-tipo="videos" onclick="filterContent('videos', this)">
                    <i class="fas fa-video"></i> Videos
                </button>
            </div>
            <select class="order-select" id="orderSelect" onchange="changeOrder()">
                <option value="popular">Más popular</option>
                <option value="reciente">Más reciente</option>
            </select>
        </div>

        <!-- Grid de contenido -->
        <div class="explore-grid" id="exploreGrid">
            @foreach (var item in contenidoExplorar)
            {
                var esVideo = (int)item.TipoContenido == 2;
                var esPremium = item.TipoLado == Lado.Models.TipoLado.LadoB;
                var estaBloqueado = esPremium && !suscripcionesLadoB.Contains(item.UsuarioId);
                // Usar thumbnail si existe, sino usar placeholder para videos o la imagen original
                var tieneThumb = !string.IsNullOrEmpty(item.Thumbnail);
                var imagenSrc = tieneThumb ? item.Thumbnail : (esVideo ? "/images/video-placeholder.svg" : item.RutaArchivo);
                var itemClass = estaBloqueado ? "explore-item bloqueado" : "explore-item";
                var clickAction = estaBloqueado ? $"window.location.href='/Feed/Perfil/{item.UsuarioId}'" : (item.EsContenidoSensible ? "" : $"window.location.href='/Feed/Detalle/{item.Id}'");
                <div class="@itemClass" onclick="@clickAction" data-tipo="@((int)item.TipoContenido)" data-post-id="@item.Id" data-video-src="@(esVideo ? item.RutaArchivo : "")" data-bloqueado="@estaBloqueado.ToString().ToLower()">
                    @if (esVideo && !tieneThumb)
                    {
                        <!-- Video sin thumbnail: usar video element para mostrar primer frame -->
                        <video src="@(item.RutaArchivo)#t=0.1" preload="metadata" muted playsinline class="explore-thumb video-preview"></video>
                        <div class="video-badge">
                            <i class="fas fa-play"></i>
                        </div>
                    }
                    else
                    {
                        <!-- Imagen o video con thumbnail -->
                        <img src="@imagenSrc" alt="" loading="lazy" decoding="async" class="explore-thumb">
                        @if (esVideo)
                        {
                            <div class="video-badge">
                                <i class="fas fa-play"></i>
                            </div>
                        }
                    }
                    @if (esPremium)
                    {
                        <div class="premium-badge">
                            <i class="fas fa-crown"></i>
                        </div>
                    }
                    @if (estaBloqueado)
                    {
                        <div class="locked-overlay">
                            <div class="locked-content">
                                <i class="fas fa-lock"></i>
                                <span>Suscríbete</span>
                            </div>
                        </div>
                    }
                    else if (item.EsContenidoSensible)
                    {
                        <div class="sensitive-content-overlay" data-post-id="@item.Id">
                            <div class="sensitive-warning">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="sensitive-icon">
                                    <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"></path>
                                    <circle cx="12" cy="12" r="3"></circle>
                                    <line x1="2" y1="2" x2="22" y2="22"></line>
                                </svg>
                                <span class="sensitive-title">Contenido Delicado</span>
                                <button class="sensitive-reveal-btn" onclick="event.stopPropagation(); revelarContenidoSensibleExplorar(event, @item.Id)">Ver</button>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="explore-overlay">
                            <div class="explore-stat">
                                <i class="fas fa-heart"></i>
                                <span>@item.NumeroLikes</span>
                            </div>
                            <div class="explore-stat">
                                <i class="fas fa-comment"></i>
                                <span>@item.NumeroComentarios</span>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>

        <!-- Loading spinner -->
        <div class="loading-container" id="loadingSpinner" style="display: none;">
            <div class="loading-spinner"></div>
        </div>

        <!-- No more content message -->
        <div class="no-more-content" id="noMoreContent" style="display: none;">
            No hay más contenido para mostrar
        </div>

        @if (!contenidoExplorar.Any())
        {
            <div class="empty-state">
                <i class="fas fa-image"></i>
                <h3>No hay contenido disponible</h3>
                <p>Vuelve pronto para descubrir nuevo contenido</p>
            </div>
        }
