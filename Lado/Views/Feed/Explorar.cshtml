    /* ========================================
       REDISEÑO COMPLETO MÓVIL - Estilo Instagram/TikTok
       ======================================== */
    @@media (max-width: 768px) {
        /* === CONTENEDOR PRINCIPAL === */
        .explorar-container {
            padding: 0;
            max-width: 100%;
        }

        /* === BÚSQUEDA - Sticky en la parte superior === */
        .search-header {
            position: sticky;
            top: 0;
            z-index: 100;
            background: var(--surface);
            padding: 12px 16px;
            margin-bottom: 0;
            border-bottom: 1px solid var(--line);
            display: flex;
            gap: 10px;
            align-items: center;
        }

        .search-box {
            position: relative;
            flex: 1;
        }

        .search-box input {
            width: 100%;
            padding: 10px 16px 10px 40px;
            border-radius: 24px;
            font-size: 15px;
            background: var(--bg-tertiary);
            border: none;
        }

        .search-box input:focus {
            background: var(--bg-secondary);
            box-shadow: 0 0 0 2px var(--primary);
        }

        .search-box i {
            left: 14px;
            font-size: 14px;
        }

        /* === TABS - Scroll horizontal estilo Stories === */
        .explorar-tabs {
            display: flex;
            gap: 8px;
            padding: 12px 16px;
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
            scrollbar-width: none;
            border-bottom: none;
            margin-bottom: 0;
            background: var(--surface);
        }

        .explorar-tabs::-webkit-scrollbar {
            display: none;
        }

        .explorar-tab {
            flex: 0 0 auto;
            padding: 8px 16px;
            font-size: 13px;
            font-weight: 600;
            border-radius: 20px;
            background: var(--bg-tertiary);
            border: none;
            color: var(--fg);
            white-space: nowrap;
            display: flex;
            align-items: center;
            gap: 6px;
            min-height: 36px;
        }

        .explorar-tab i {
            font-size: 14px;
        }

        .explorar-tab span:not(.tab-count) {
            display: inline;
        }

        .explorar-tab.active {
            background: var(--primary);
            color: white;
        }

        .explorar-tab.active::after {
            display: none;
        }

        .tab-count {
            font-size: 11px;
            padding: 2px 6px;
            border-radius: 10px;
            background: rgba(0,0,0,0.1);
        }

        .explorar-tab.active .tab-count {
            background: rgba(255,255,255,0.25);
            color: white;
        }

        /* === FILTROS - Chips scrollables === */
        .filters-bar {
            display: flex;
            flex-direction: column;
            gap: 10px;
            padding: 12px 16px;
            background: var(--surface);
            border-bottom: 1px solid var(--line);
            margin-bottom: 0;
        }

        .filter-chips {
            display: flex;
            gap: 8px;
            overflow-x: auto;
            padding-bottom: 4px;
            -webkit-overflow-scrolling: touch;
            scrollbar-width: none;
        }

        .filter-chips::-webkit-scrollbar {
            display: none;
        }

        .filter-chip {
            flex: 0 0 auto;
            padding: 8px 14px;
            border-radius: 18px;
            font-size: 13px;
            font-weight: 500;
            white-space: nowrap;
        }

        .filter-chip i {
            margin-right: 4px;
        }

        .order-select {
            width: 100%;
            padding: 10px 36px 10px 14px;
            border-radius: 10px;
            font-size: 14px;
        }

        /* === GRID DE CONTENIDO - 3 columnas sin gap === */
        .explore-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 1px;
            background: var(--line);
        }

        .explore-item {
            aspect-ratio: 1;
            background: var(--bg-tertiary);
        }

        .explore-item img,
        .explore-item video {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        /* Overlay solo visible al tap en móvil */
        .explore-overlay {
            opacity: 0;
            gap: 12px;
        }

        .explore-item:active .explore-overlay {
            opacity: 1;
        }

        .explore-stat {
            font-size: 12px;
            font-weight: 600;
        }

        .explore-stat i {
            font-size: 14px;
        }

        /* Badges más pequeños */
        .video-badge {
            top: 6px;
            right: 6px;
            padding: 4px;
            border-radius: 4px;
        }

        .video-badge i {
            font-size: 10px;
        }

        .premium-badge {
            top: 6px;
            left: 6px;
            padding: 2px 6px;
            font-size: 9px;
            border-radius: 4px;
        }

        .premium-badge i {
            font-size: 8px;
        }

        /* Contenido bloqueado */
        .locked-content i {
            font-size: 20px;
        }

        .locked-content span {
            font-size: 9px;
        }

        /* === CREADORES - Lista compacta === */
        .creators-list {
            display: flex;
            flex-direction: column;
            gap: 0;
            padding: 0;
        }

        .creator-card {
            border-radius: 0;
            border: none;
            border-bottom: 1px solid var(--line);
            display: flex;
            flex-direction: row;
            align-items: center;
            padding: 12px 16px;
            gap: 12px;
            position: relative;
        }

        .creator-card:hover {
            transform: none;
            box-shadow: none;
        }

        .creator-card:active {
            background: var(--bg-tertiary);
        }

        .creator-card-cover {
            display: none;
        }

        .creator-card-avatar {
            position: static;
            left: auto;
            top: auto;
            transform: none;
            width: 50px;
            height: 50px;
            border: 2px solid var(--line);
            flex-shrink: 0;
        }

        .creator-card.premium .creator-card-avatar {
            border-color: #8b5cf6;
        }

        .creator-card-body {
            flex: 1;
            padding: 0;
            padding-right: 100px; /* Espacio para el botón */
            text-align: left;
            display: flex;
            flex-direction: column;
            min-width: 0;
            overflow: hidden;
        }

        .creator-card-name {
            font-size: 14px;
            font-weight: 600;
            display: block;
            margin-bottom: 1px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            max-width: 100%;
        }

        .creator-card-name .creator-card-verified {
            margin-left: 4px;
            vertical-align: middle;
        }

        .creator-card-username {
            font-size: 12px;
            margin-bottom: 0;
            color: var(--muted);
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .creator-card-bio {
            display: none;
        }

        .creator-card-stats {
            display: none;
        }

        .creator-card-price {
            display: none;
        }

        .creator-card-badge {
            position: absolute;
            top: 8px;
            left: 8px;
            padding: 2px 6px;
            font-size: 9px;
            margin: 0;
        }

        .btn-follow-card {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            width: auto;
            padding: 6px 14px;
            font-size: 12px;
            border-radius: 6px;
            flex-shrink: 0;
        }

        .btn-follow-card.following {
            padding: 6px 12px;
        }

        /* === ESTADOS VACÍOS === */
        .empty-state {
            padding: 48px 24px;
        }

        .empty-state i {
            font-size: 40px;
        }

        .empty-state h3 {
            font-size: 16px;
        }

        .empty-state p {
            font-size: 13px;
        }

        /* === LOADING === */
        .loading-container {
            padding: 24px 0;
        }

        .loading-spinner {
            width: 28px;
            height: 28px;
        }

        .no-more-content {
            padding: 24px 16px;
            font-size: 13px;
            background: var(--surface);
        }

        /* === PULL TO REFRESH === */
        .pull-to-refresh {
            top: calc(60px + env(safe-area-inset-top, 0px));
        }

        .pull-indicator {
            width: 44px;
            height: 44px;
        }

        .pull-indicator svg {
            width: 20px;
            height: 20px;
        }

        .pull-text {
            font-size: 11px;
        }

        /* === REFRESH FAB === */
        .refresh-fab {
            width: 44px;
            height: 44px;
            bottom: calc(80px + env(safe-area-inset-bottom, 0px));
        }

        .refresh-fab svg {
            width: 20px;
            height: 20px;
        }
    }

    /* === MÓVIL PEQUEÑO (< 480px) - Ajustes finos === */
    @@media (max-width: 480px) {
        .search-header {
            padding: 10px 12px;
        }

        .search-box input {
            padding: 8px 14px 8px 36px;
            font-size: 14px;
        }

        .explorar-tabs {
            padding: 10px 12px;
            gap: 6px;
        }

        .explorar-tab {
            padding: 6px 12px;
            font-size: 12px;
            min-height: 32px;
        }

        .explorar-tab i {
            font-size: 12px;
        }

        .tab-count {
            font-size: 10px;
            padding: 1px 5px;
        }

        .filters-bar {
            padding: 10px 12px;
        }

        .filter-chip {
            padding: 6px 12px;
            font-size: 12px;
        }

        .objetos-section {
            padding: 10px 12px;
        }

        .objeto-chip {
            padding: 5px 10px;
            font-size: 11px;
        }

        /* Grid 3 columnas se mantiene */
        .explore-grid {
            gap: 1px;
        }

        /* Creadores aún más compactos */
        .creator-card {
            padding: 10px 12px;
            gap: 10px;
        }

        .creator-card-body {
            padding-right: 80px;
        }

        .creator-card-avatar {
            width: 44px;
            height: 44px;
        }

        .creator-card-name {
            font-size: 13px;
        }

        .creator-card-username {
            font-size: 11px;
        }

        .btn-follow-card {
            padding: 5px 12px;
            font-size: 11px;
            right: 10px;
        }
    }

    /* === PANTALLAS MUY PEQUEÑAS (< 360px) === */
    @@media (max-width: 359px) {
        .explorar-tab {
            padding: 5px 10px;
            font-size: 11px;
        }

        .explorar-tab span:not(.tab-count) {
            display: none;
        }

        .explorar-tab i {
            font-size: 14px;
        }

        .filter-chip {
            padding: 5px 10px;
            font-size: 11px;
        }

        .creator-card {
            padding: 8px 10px;
            gap: 8px;
        }

        .creator-card-body {
            padding-right: 70px;
        }

        .creator-card-avatar {
            width: 40px;
            height: 40px;
        }

        .creator-card-name {
            font-size: 12px;
        }

        .creator-card-username {
            font-size: 10px;
        }

        .btn-follow-card {
            padding: 4px 10px;
            font-size: 10px;
            right: 8px;
        }
    }

    /* =====================================================
       OVERLAY CONTENIDO SENSIBLE
    ===================================================== */
    .sensitive-content-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 50;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(0, 0, 0, 0.15);
        backdrop-filter: blur(40px) saturate(1.2);
        -webkit-backdrop-filter: blur(40px) saturate(1.2);
    }

    .sensitive-warning {
        position: relative;
        z-index: 2;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 16px;
    }

    .sensitive-icon {
        width: 36px;
        height: 36px;
        stroke: rgba(255, 255, 255, 0.85);
        margin-bottom: 8px;
    }

    .sensitive-title {
        font-size: 13px;
        font-weight: 600;
        color: #fff;
        margin-bottom: 8px;
    }

    .sensitive-reveal-btn {
        background: transparent;
        border: 1px solid rgba(255, 255, 255, 0.6);
        color: #fff;
        padding: 6px 18px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .sensitive-reveal-btn:hover {
        background: rgba(255, 255, 255, 0.15);
        border-color: #fff;
    }

    .sensitive-content-overlay.revealing {
        animation: sensitiveReveal 0.3s ease forwards;
    }

    @@keyframes sensitiveReveal {
        from { opacity: 1; }
        to { opacity: 0; pointer-events: none; }
    }

    /* =====================================================
       COMPATIBILIDAD iOS / SAFARI
    ===================================================== */
    /* Fix para imágenes en iOS Safari */
    .explore-item img,
    .creator-card-avatar img {
        -webkit-transform: translateZ(0);
        transform: translateZ(0);
        -webkit-backface-visibility: hidden;
        backface-visibility: hidden;
        image-rendering: -webkit-optimize-contrast;
    }

    /* Fix aspect-ratio en iOS < 15 */
    @@supports not (aspect-ratio: 1) {
        .explore-item {
            padding-bottom: 100%;
            height: 0;
        }
        .explore-item > * {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
    }

    /* Fix backdrop-filter en iOS */
    @@supports (-webkit-touch-callout: none) {
        .sensitive-content-overlay {
            background: rgba(0, 0, 0, 0.6);
        }
        .creator-card-badge {
            background: rgba(255, 255, 255, 0.95);
        }
    }

    /* Fix videos en iOS - poster y playsinline */
    .explore-item video {
        -webkit-playsinline: true;
        playsinline: true;
    }

    /* Safe area para notch en iPhone */
    @@supports (padding-top: env(safe-area-inset-top)) {
        .explorar-container {
            padding-left: max(16px, env(safe-area-inset-left));
            padding-right: max(16px, env(safe-area-inset-right));
        }
    }

    /* Fix hover en dispositivos táctiles iOS */
    @@media (hover: none) and (pointer: coarse) {
        .explore-item:hover img,
        .explore-item:hover video {
            transform: none;
        }

        .explore-item:active {
            opacity: 0.8;
        }

        .creator-card:hover {
            transform: none;
            box-shadow: none;
        }

        .creator-card:active {
            transform: scale(0.98);
        }

        /* Grid más compacto en móviles táctiles */
        .creators-list {
            grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
            gap: 12px;
        }

        .creator-card-cover {
            height: 60px;
        }

        .creator-card-avatar {
            width: 56px;
            height: 56px;
            top: 32px;
        }

        .creator-card-body {
            padding: 32px 12px 12px;
        }

        .creator-card-name {
            font-size: 14px;
        }

        .creator-card-bio {
            display: none;
        }

        .creator-card-stats {
            gap: 12px;
        }

        .creator-stat-value {
            font-size: 14px;
        }
    }

    /* Efecto día/noche compatible con iOS */
    @@media (prefers-color-scheme: dark) {
        .creator-card {
            background: var(--surface, #1a1a1a);
            border-color: var(--line, #333);
        }

        .creator-card-cover {
            background: linear-gradient(135deg, #3a7ca5 0%, #1e4a6d 100%);
        }

        .creator-card.premium .creator-card-cover {
            background: linear-gradient(135deg, #7c3aed 0%, #5b21b6 100%);
        }

        .creator-card-avatar {
            border-color: var(--surface, #1a1a1a);
        }

        .creator-card-avatar-placeholder {
            background: linear-gradient(135deg, #1e3a5f 0%, #0f2942 100%);
            color: #60a5fa;
        }

        .creator-card-badge {
            background: rgba(30, 30, 30, 0.9);
            color: #a78bfa;
        }

        .btn-follow-card.following {
            background: transparent;
            border-color: #444;
        }

        .btn-follow-card.following:hover {
            background: #3d1f1f;
            color: #f87171;
            border-color: #5c2626;
        }
    }

