        // ========================================
        // PULL TO REFRESH
        // ========================================
        function initPullToRefresh() {
            const pullIndicator = document.getElementById('pullToRefresh');
            let startY = 0;
            let currentY = 0;
            let isPulling = false;
            let isRefreshing = false;
            let touchStartElement = null;

            const threshold = 80; // Distancia necesaria para activar refresh

            // Elementos que no deben activar pull-to-refresh
            function shouldIgnoreElement(element) {
                if (!element) return true;

                // Ignorar si el touch es en el sidebar, hamburger, top-navbar, o tabs
                const ignoredSelectors = [
                    '.sidebar',
                    '.sidebar-overlay',
                    '.hamburger-btn',
                    '.top-navbar',
                    '.explorar-tabs',
                    '.filter-chips',
                    '.search-box',
                    'button',
                    'input',
                    'a'
                ];

                return ignoredSelectors.some(selector => element.closest(selector));
            }

            document.addEventListener('touchstart', function(e) {
                touchStartElement = e.target;

                // No activar si el touch es en elementos interactivos
                if (shouldIgnoreElement(touchStartElement)) {
                    isPulling = false;
                    return;
                }

                // Solo activar si estamos en la parte superior de la página
                if (window.scrollY <= 0 && !isRefreshing) {
                    startY = e.touches[0].pageY;
                    isPulling = true;
                }
            }, { passive: true });

            document.addEventListener('touchmove', function(e) {
                if (!isPulling || isRefreshing) return;

                currentY = e.touches[0].pageY;
                const pullDistance = currentY - startY;

                if (pullDistance > 0 && window.scrollY <= 0) {
                    // Prevenir scroll mientras arrastramos
                    if (pullDistance > 10) {
                        pullIndicator.classList.add('visible');
                    }

                    // Movimiento con resistencia
                    const resistance = 0.5;
                    const adjustedDistance = Math.min(pullDistance * resistance, threshold + 30);

                    pullIndicator.style.transform = `translateX(-50%) translateY(${adjustedDistance - 40}px)`;

                    // Rotar icono según progreso
                    const rotation = (adjustedDistance / threshold) * 180;
                    pullIndicator.querySelector('svg').style.transform = `rotate(${rotation}deg)`;

                    // Marcar como "listo" si supera el umbral
                    if (adjustedDistance >= threshold) {
                        pullIndicator.classList.add('ready');
                    } else {
                        pullIndicator.classList.remove('ready');
                    }
                }
            }, { passive: true });

            document.addEventListener('touchend', function(e) {
                if (!isPulling || isRefreshing) return;

                const pullDistance = currentY - startY;
                const adjustedDistance = pullDistance * 0.5;

                if (adjustedDistance >= threshold) {
                    // Activar refresh
                    isRefreshing = true;
                    pullIndicator.classList.add('refreshing');
                    pullIndicator.classList.remove('ready');
                    pullIndicator.style.transform = 'translateX(-50%) translateY(20px)';

                    // Ejecutar refresh
                    refreshExplorar();
                } else {
                    // Cancelar - volver a estado inicial
                    resetPullIndicator();
                }

                isPulling = false;
                startY = 0;
                currentY = 0;
            }, { passive: true });

            function resetPullIndicator() {
                pullIndicator.classList.remove('visible', 'ready', 'refreshing');
                pullIndicator.style.transform = 'translateX(-50%) translateY(-100%)';
                pullIndicator.querySelector('svg').style.transform = 'rotate(0deg)';
            }

            window.resetPullIndicator = resetPullIndicator;
            window.setRefreshing = (val) => { isRefreshing = val; };
        }

