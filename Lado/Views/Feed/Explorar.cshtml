@model IEnumerable<Lado.Models.ApplicationUser>
@{
    ViewData["Title"] = "Explorar Creadores";
    var creadoresLadoA = Model.Where(c => !c.TieneLadoB()).ToList();
    var creadoresLadoB = Model.Where(c => c.TieneLadoB()).ToList();
}

<style>
    .explorar-container {
        padding: 24px 16px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .explorar-header {
        margin-bottom: 24px;
    }

    .explorar-header h2 {
        font-size: 26px;
        font-weight: 700;
        color: var(--fg);
        margin-bottom: 4px;
    }

    .explorar-header p {
        color: var(--muted);
        font-size: 14px;
        margin: 0;
    }

    /* Tabs */
    .explorar-tabs {
        display: flex;
        gap: 8px;
        margin-bottom: 24px;
        border-bottom: 1px solid var(--line);
        padding-bottom: 0;
    }

    .explorar-tab {
        padding: 12px 20px;
        font-size: 14px;
        font-weight: 600;
        color: var(--muted);
        background: transparent;
        border: none;
        cursor: pointer;
        position: relative;
        transition: all 0.2s ease;
    }

    .explorar-tab:hover {
        color: var(--fg);
    }

    .explorar-tab.active {
        color: var(--primary);
    }

    .explorar-tab.active::after {
        content: '';
        position: absolute;
        bottom: -1px;
        left: 0;
        right: 0;
        height: 2px;
        background: var(--primary);
        border-radius: 2px 2px 0 0;
    }

    .explorar-tab .tab-count {
        margin-left: 8px;
        padding: 2px 8px;
        font-size: 12px;
        font-weight: 600;
        border-radius: 10px;
        background: var(--bg-tertiary);
        color: var(--muted);
    }

    .explorar-tab.active .tab-count {
        background: var(--primary);
        color: white;
    }

    /* Tab content */
    .tab-content {
        display: none;
    }

    .tab-content.active {
        display: block;
    }

    /* Search */
    .search-box {
        position: relative;
        margin-bottom: 24px;
    }

    .search-box input {
        width: 100%;
        padding: 12px 16px 12px 44px;
        border: 1px solid var(--line);
        border-radius: var(--radius-md);
        font-size: 14px;
        background: var(--surface);
        color: var(--fg);
        transition: all 0.2s ease;
    }

    .search-box input:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 3px rgba(70, 130, 180, 0.1);
    }

    .search-box i {
        position: absolute;
        left: 16px;
        top: 50%;
        transform: translateY(-50%);
        color: var(--muted);
    }

    /* Grid de creadores */
    .creators-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 20px;
    }

    /* Card de creador */
    .creator-card {
        background: var(--surface);
        border-radius: var(--radius-lg);
        overflow: hidden;
        border: 1px solid var(--line);
        transition: all 0.2s ease;
        position: relative;
    }

    .creator-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-lg);
        border-color: var(--primary-light);
    }

    .creator-cover {
        height: 100px;
        background: var(--primary-gradient);
        position: relative;
    }

    .creator-cover img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .creator-avatar-wrapper {
        display: flex;
        justify-content: center;
        margin-top: -40px;
        position: relative;
        z-index: 2;
    }

    .creator-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        border: 4px solid var(--surface);
        overflow: hidden;
        background: var(--bg-tertiary);
    }

    .creator-avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .creator-avatar-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
        font-weight: 700;
        color: var(--primary);
        background: var(--primary-light);
    }

    .creator-info {
        padding: 12px 16px 16px;
        text-align: center;
    }

    .creator-name {
        font-size: 16px;
        font-weight: 700;
        color: var(--fg);
        margin: 0 0 4px;
    }

    .creator-username {
        font-size: 13px;
        color: var(--muted);
        margin: 0 0 8px;
    }

    .creator-bio {
        font-size: 13px;
        color: var(--fg-secondary);
        margin: 0 0 12px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        line-height: 1.4;
    }

    .creator-stats {
        display: flex;
        justify-content: center;
        gap: 20px;
        padding: 10px 0;
        border-top: 1px solid var(--line);
        margin-bottom: 12px;
    }

    .creator-stat {
        text-align: center;
    }

    .creator-stat-value {
        font-size: 15px;
        font-weight: 700;
        color: var(--fg);
    }

    .creator-stat-label {
        font-size: 11px;
        color: var(--muted);
        text-transform: uppercase;
    }

    .creator-action {
        display: block;
        width: calc(100% - 32px);
        margin: 0 16px 16px;
        padding: 10px 16px;
        text-align: center;
        text-decoration: none;
        border-radius: var(--radius-sm);
        font-size: 14px;
        font-weight: 600;
        transition: all 0.2s ease;
    }

    /* Card LadoA - Gratuito */
    .creator-card.ladoA .creator-action {
        background: var(--primary);
        color: white;
    }

    .creator-card.ladoA .creator-action:hover {
        background: var(--primary-dark);
    }

    /* Card LadoB - Premium */
    .creator-card.ladoB {
        border-color: var(--accent);
    }

    .creator-card.ladoB:hover {
        border-color: var(--accent);
        box-shadow: 0 8px 24px rgba(139, 92, 246, 0.15);
    }

    .creator-card.ladoB .creator-cover {
        background: var(--accent-gradient);
    }

    .premium-badge {
        position: absolute;
        top: 12px;
        right: 12px;
        display: flex;
        align-items: center;
        gap: 4px;
        padding: 4px 10px;
        background: rgba(139, 92, 246, 0.95);
        color: white;
        font-size: 11px;
        font-weight: 700;
        border-radius: 20px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        z-index: 3;
    }

    .premium-badge i {
        font-size: 10px;
    }

    .creator-price {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        padding: 4px 12px;
        background: var(--accent-light);
        color: var(--accent);
        font-size: 13px;
        font-weight: 700;
        border-radius: 20px;
        margin-bottom: 12px;
    }

    .creator-card.ladoB .creator-action {
        background: var(--accent);
        color: white;
    }

    .creator-card.ladoB .creator-action:hover {
        background: #7c3aed;
    }

    /* Empty state */
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: var(--muted);
    }

    .empty-state i {
        font-size: 48px;
        margin-bottom: 16px;
        opacity: 0.5;
    }

    .empty-state h3 {
        font-size: 18px;
        font-weight: 600;
        color: var(--fg);
        margin-bottom: 8px;
    }

    .empty-state p {
        font-size: 14px;
        margin: 0;
    }

    @@media (max-width: 768px) {
        .explorar-container {
            padding: 16px 12px;
        }

        .creators-grid {
            grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
            gap: 16px;
        }

        .explorar-tabs {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }

        .explorar-tab {
            white-space: nowrap;
        }
    }
</style>

<div class="explorar-container">
    <div class="explorar-header">
        <h2>Explorar Creadores</h2>
        <p>Descubre nuevos creadores y su contenido</p>
    </div>

    <!-- Tabs -->
    <div class="explorar-tabs">
        <button class="explorar-tab active" onclick="switchTab('creadores')">
            <i class="fas fa-users"></i> Creadores
            <span class="tab-count">@creadoresLadoA.Count</span>
        </button>
        <button class="explorar-tab" onclick="switchTab('premium')">
            <i class="fas fa-crown"></i> Premium
            <span class="tab-count">@creadoresLadoB.Count</span>
        </button>
    </div>

    <!-- Tab: Creadores LadoA -->
    <div id="tab-creadores" class="tab-content active">
        <!-- Buscador -->
        <div class="search-box">
            <i class="fas fa-search"></i>
            <input type="text" id="searchLadoA" placeholder="Buscar creadores..." onkeyup="filterCreators('ladoA')">
        </div>

        @if (creadoresLadoA.Any())
        {
            <div class="creators-grid" id="gridLadoA">
                @foreach (var creador in creadoresLadoA)
                {
                    <div class="creator-card ladoA" data-name="@creador.NombreCompleto?.ToLower()" data-username="@creador.UserName?.ToLower()">
                        <div class="creator-cover">
                            @if (!string.IsNullOrEmpty(creador.FotoPortada))
                            {
                                <img src="@creador.FotoPortada" alt="Portada">
                            }
                        </div>

                        <div class="creator-avatar-wrapper">
                            <div class="creator-avatar">
                                @if (!string.IsNullOrEmpty(creador.FotoPerfil))
                                {
                                    <img src="@creador.FotoPerfil" alt="@creador.NombreCompleto">
                                }
                                else
                                {
                                    <div class="creator-avatar-placeholder">
                                        @(creador.NombreCompleto?.Substring(0, 1).ToUpper() ?? "?")
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="creator-info">
                            <h3 class="creator-name">@creador.NombreCompleto</h3>
                            <p class="creator-username">@@@creador.UserName</p>

                            @if (!string.IsNullOrEmpty(creador.Biografia))
                            {
                                <p class="creator-bio">@creador.Biografia</p>
                            }

                            <div class="creator-stats">
                                <div class="creator-stat">
                                    <div class="creator-stat-value">@creador.NumeroSeguidores</div>
                                    <div class="creator-stat-label">Seguidores</div>
                                </div>
                            </div>

                            <a href="/Feed/Perfil/@creador.Id" class="creator-action">
                                Ver Perfil
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-users"></i>
                <h3>No hay creadores disponibles</h3>
                <p>Vuelve pronto para descubrir nuevo contenido</p>
            </div>
        }
    </div>

    <!-- Tab: Creadores LadoB (Premium) -->
    <div id="tab-premium" class="tab-content">
        <!-- Buscador -->
        <div class="search-box">
            <i class="fas fa-search"></i>
            <input type="text" id="searchLadoB" placeholder="Buscar creadores premium..." onkeyup="filterCreators('ladoB')">
        </div>

        @if (creadoresLadoB.Any())
        {
            <div class="creators-grid" id="gridLadoB">
                @foreach (var creador in creadoresLadoB)
                {
                    <div class="creator-card ladoB" data-name="@(creador.Seudonimo ?? creador.NombreCompleto)?.ToLower()" data-username="@creador.UserName?.ToLower()">
                        <span class="premium-badge">
                            <i class="fas fa-crown"></i> Premium
                        </span>

                        <div class="creator-cover">
                            @if (!string.IsNullOrEmpty(creador.FotoPortada))
                            {
                                <img src="@creador.FotoPortada" alt="Portada">
                            }
                        </div>

                        <div class="creator-avatar-wrapper">
                            <div class="creator-avatar">
                                @if (!string.IsNullOrEmpty(creador.FotoPerfilLadoB))
                                {
                                    <img src="@creador.FotoPerfilLadoB" alt="@creador.Seudonimo">
                                }
                                else if (!string.IsNullOrEmpty(creador.FotoPerfil))
                                {
                                    <img src="@creador.FotoPerfil" alt="@creador.Seudonimo">
                                }
                                else
                                {
                                    <div class="creator-avatar-placeholder">
                                        @((creador.Seudonimo ?? creador.NombreCompleto)?.Substring(0, 1).ToUpper() ?? "?")
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="creator-info">
                            <h3 class="creator-name">@(creador.Seudonimo ?? creador.NombreCompleto)</h3>
                            <p class="creator-username">@@@creador.UserName</p>

                            @if (!string.IsNullOrEmpty(creador.BiografiaLadoB))
                            {
                                <p class="creator-bio">@creador.BiografiaLadoB</p>
                            }
                            else if (!string.IsNullOrEmpty(creador.Biografia))
                            {
                                <p class="creator-bio">@creador.Biografia</p>
                            }

                            <div class="creator-price">
                                <i class="fas fa-tag"></i>
                                $@creador.PrecioSuscripcion.ToString("N2")/mes
                            </div>

                            <div class="creator-stats">
                                <div class="creator-stat">
                                    <div class="creator-stat-value">@creador.NumeroSeguidores</div>
                                    <div class="creator-stat-label">Seguidores</div>
                                </div>
                            </div>

                            <a href="/Feed/Perfil/@creador.Id?verSeudonimo=true" class="creator-action">
                                Ver Contenido Premium
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-crown"></i>
                <h3>No hay creadores premium</h3>
                <p>Vuelve pronto para descubrir contenido exclusivo</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function switchTab(tabName) {
            // Ocultar todos los contenidos
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });

            // Desactivar todos los tabs
            document.querySelectorAll('.explorar-tab').forEach(tab => {
                tab.classList.remove('active');
            });

            // Mostrar contenido seleccionado
            document.getElementById('tab-' + tabName).classList.add('active');

            // Activar tab seleccionado
            event.target.closest('.explorar-tab').classList.add('active');
        }

        function filterCreators(tipo) {
            const searchInput = tipo === 'ladoA' ? document.getElementById('searchLadoA') : document.getElementById('searchLadoB');
            const grid = tipo === 'ladoA' ? document.getElementById('gridLadoA') : document.getElementById('gridLadoB');

            if (!searchInput || !grid) return;

            const filter = searchInput.value.toLowerCase();
            const cards = grid.querySelectorAll('.creator-card');

            cards.forEach(card => {
                const name = card.getAttribute('data-name') || '';
                const username = card.getAttribute('data-username') || '';

                if (name.includes(filter) || username.includes(filter)) {
                    card.style.display = '';
                } else {
                    card.style.display = 'none';
                }
            });
        }
    </script>
}
