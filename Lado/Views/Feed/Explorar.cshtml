        // Renderizar grafo para desktop
        function renderElementosGraph(data) {
            const container = document.getElementById('elementosGraphContainer');
            const svg = d3.select('#elementosGraph');

            // Limpiar SVG
            svg.selectAll('*').remove();

            const width = container.clientWidth;
            const height = parseInt(getComputedStyle(svg.node()).height);

            svg.attr('width', width).attr('height', height);

            // Crear tooltip
            let tooltip = container.querySelector('.graph-tooltip');
            if (!tooltip) {
                tooltip = document.createElement('div');
                tooltip.className = 'graph-tooltip';
                tooltip.innerHTML = '<div class="graph-tooltip-name"></div><div class="graph-tooltip-count"></div>';
                container.appendChild(tooltip);
            }

            // Calcular tamaños según el tipo de nodo (estilo del dibujo)
            const getNodeRadius = (n) => {
                if (n.tipo === 'centro') return 38; // Nodo YO (30% más pequeño)
                if (n.tipo === 'subcategoria') return 22; // Subcategorías pequeñas
                // Categorías principales - tamaño basado en contenido
                return Math.max(35, Math.min(48, 30 + (n.peso || 1) * 2));
            };

            // Preparar datos - nodos blancos (el color se maneja en CSS)
            const nodes = data.nodos.map((n, i) => ({
                ...n,
                radius: getNodeRadius(n)
            }));

            const links = data.enlaces.map(e => ({
                source: e.source,
                target: e.target
            }));

            // Crear simulación de fuerzas con distribución radial
            elementosSimulation = d3.forceSimulation(nodes)
                .force('link', d3.forceLink(links).id(d => d.id).distance(d => {
                    // Distancia según tipo de conexión
                    const source = nodes.find(n => n.id === (d.source.id || d.source));
                    const target = nodes.find(n => n.id === (d.target.id || d.target));
                    if (source?.tipo === 'centro') return 120; // Centro a categoría
                    return 70; // Categoría a subcategoría
                }).strength(0.8))
                .force('charge', d3.forceManyBody().strength(d => d.tipo === 'centro' ? -400 : -200))
                .force('center', d3.forceCenter(width / 2, height / 2))
                .force('collision', d3.forceCollide().radius(d => d.radius + 15))
                .force('radial', d3.forceRadial(d => {
                    if (d.tipo === 'centro') return 0;
                    if (d.tipo === 'categoria') return 140;
                    return 220;
                }, width / 2, height / 2).strength(0.3));

            // Dibujar enlaces
            const link = svg.append('g')
                .selectAll('line')
                .data(links)
                .join('line')
                .attr('class', 'graph-link')
                .attr('data-source', d => d.source.id || d.source)
                .attr('data-target', d => d.target.id || d.target);

            // Dibujar nodos
            const node = svg.append('g')
                .selectAll('g')
                .data(nodes)
                .join('g')
                .attr('class', d => {
                    let classes = 'graph-node';
                    if (d.tipo === 'centro') classes += ' center';
                    if (d.tipo === 'subcategoria') classes += ' subcategoria';
                    return classes;
                })
                .attr('data-id', d => d.id)
                .call(d3.drag()
                    .on('start', dragstarted)
                    .on('drag', dragged)
                    .on('end', dragended))
                .on('click', (event, d) => {
                    if (d.tipo === 'centro') {
                        selectMiContenido();
                    } else {
                        selectElementoGraph(d);
                    }
                })
                .on('mouseenter', (event, d) => {
                    if (d.tipo !== 'centro') {
                        tooltip.querySelector('.graph-tooltip-name').textContent = d.label;
                        tooltip.querySelector('.graph-tooltip-count').textContent =
                            d.contadorContenido ? `${d.contadorContenido} publicaciones` : '';
                        tooltip.classList.add('visible');

                        const rect = container.getBoundingClientRect();
                        tooltip.style.left = (event.clientX - rect.left + 10) + 'px';
                        tooltip.style.top = (event.clientY - rect.top - 30) + 'px';
                    }
                })
                .on('mousemove', (event) => {
                    const rect = container.getBoundingClientRect();
                    tooltip.style.left = (event.clientX - rect.left + 10) + 'px';
                    tooltip.style.top = (event.clientY - rect.top - 30) + 'px';
                })
                .on('mouseleave', () => {
                    tooltip.classList.remove('visible');
                });

            // Círculo del nodo (color blanco via CSS)
            node.append('circle')
                .attr('class', 'graph-node-circle')
                .attr('r', d => d.radius);

            // Texto del nodo
            node.append('text')
                .attr('class', 'graph-node-label')
                .attr('dy', '0.35em')
                .text(d => {
                    if (d.tipo === 'centro') return 'YO';
                    // Truncar texto según tamaño del nodo
                    const maxLen = d.tipo === 'subcategoria' ? 8 : 12;
                    return d.label.length > maxLen ? d.label.substring(0, maxLen) + '...' : d.label;
                });

            // Actualizar posiciones en cada tick
            elementosSimulation.on('tick', () => {
                link
                    .attr('x1', d => d.source.x)
                    .attr('y1', d => d.source.y)
                    .attr('x2', d => d.target.x)
                    .attr('y2', d => d.target.y);

                node.attr('transform', d => {
                    // Mantener nodos dentro del SVG
                    d.x = Math.max(d.radius, Math.min(width - d.radius, d.x));
                    d.y = Math.max(d.radius, Math.min(height - d.radius, d.y));
                    return `translate(${d.x},${d.y})`;
                });
            });

            function dragstarted(event, d) {
                if (!event.active) elementosSimulation.alphaTarget(0.3).restart();
                d.fx = d.x;
                d.fy = d.y;
            }

            function dragged(event, d) {
                d.fx = event.x;
                d.fy = event.y;
            }

            function dragended(event, d) {
                if (!event.active) elementosSimulation.alphaTarget(0);
                d.fx = null;
                d.fy = null;
            }
        }

        function selectElementoGraph(nodo) {
            selectedElementoId = nodo.categoriaId;
            elementosPage = 1;
            elementosHasMore = true;
            miContenidoMode = false;

            // Actualizar visualización del nodo seleccionado
            d3.selectAll('.graph-node').classed('selected', false);
            d3.select(`.graph-node[data-id="${nodo.id}"]`).classed('selected', true);

            // Resaltar enlaces conectados
            d3.selectAll('.graph-link').classed('highlighted', false);
            d3.selectAll(`.graph-link[data-source="${nodo.id}"], .graph-link[data-target="${nodo.id}"]`)
                .classed('highlighted', true);

            // Mostrar nombre del filtro
            document.getElementById('elementosFilterName').textContent = nodo.label;
            document.getElementById('elementosContentSection').style.display = 'block';
            document.getElementById('elementosGrid').innerHTML = '';
            document.getElementById('elementosNoMore').style.display = 'none';

            // Cargar contenido
            cargarContenidoPorElemento();
        }

        let miContenidoMode = false;

        function selectMiContenido() {
            selectedElementoId = null;
            elementosPage = 1;
            elementosHasMore = true;
            miContenidoMode = true;

            // Actualizar visualización del nodo seleccionado
            d3.selectAll('.graph-node').classed('selected', false);
            d3.select('.graph-node.center').classed('selected', true);

            // Resaltar todos los enlaces desde el centro
            d3.selectAll('.graph-link').classed('highlighted', true);

            // Mostrar nombre del filtro
            document.getElementById('elementosFilterName').textContent = 'Mi Contenido';
            document.getElementById('elementosContentSection').style.display = 'block';
            document.getElementById('elementosGrid').innerHTML = '';
            document.getElementById('elementosNoMore').style.display = 'none';

            // Cargar mi contenido
            cargarMiContenido();
        }

        async function cargarMiContenido() {
            if (elementosLoading || !elementosHasMore || !miContenidoMode) return;

            elementosLoading = true;
            document.getElementById('elementosLoading').style.display = 'flex';

            try {
                const response = await fetch(`/Feed/ObtenerMiContenidoGrafo?page=${elementosPage}`);
                const data = await response.json();

                if (data.success && data.items && data.items.length > 0) {
                    const grid = document.getElementById('elementosGrid');

                    data.items.forEach(item => {
                        const div = document.createElement('div');
                        div.className = 'explore-item';
                        div.setAttribute('data-tipo', item.tipoContenido);
                        div.setAttribute('data-post-id', item.id);
                        div.onclick = () => window.location.href = '/Feed/Detalle/' + item.id;

                        const isVideo = item.tipoContenido === 2;
                        const imageSrc = item.thumbnail || item.rutaArchivo;
                        const videoBadge = isVideo ? '<div class="video-badge"><i class="fas fa-play"></i></div>' : '';

                        const statsOverlay = `
                            <div class="explore-overlay">
                                <div class="explore-stat"><i class="fas fa-heart"></i><span>${item.numeroLikes}</span></div>
                                <div class="explore-stat"><i class="fas fa-comment"></i><span>${item.numeroComentarios}</span></div>
                            </div>
                        `;

                        const mediaElement = isVideo
                            ? `<video src="${item.rutaArchivo}#t=0.1" preload="metadata" muted playsinline loop class="explore-thumb video-preview"></video>`
                            : `<img src="${imageSrc}" alt="" loading="lazy" class="explore-thumb">`;

                        div.innerHTML = `${mediaElement}${videoBadge}${statsOverlay}`;
                        grid.appendChild(div);
                    });

                    setupProgressiveLoading(grid);
                    elementosPage++;
                    elementosHasMore = data.hasMore;

                    if (!elementosHasMore) {
                        document.getElementById('elementosNoMore').style.display = 'block';
                    }
                } else {
                    elementosHasMore = false;
                    if (elementosPage === 1) {
                        document.getElementById('elementosGrid').innerHTML = `
                            <div class="empty-state" style="grid-column: 1/-1;">
                                <i class="fas fa-camera"></i>
                                <h3>Sin publicaciones</h3>
                                <p>Aún no has publicado contenido</p>
                            </div>
                        `;
                    } else {
                        document.getElementById('elementosNoMore').style.display = 'block';
                    }
                }
            } catch (error) {
            } finally {
                elementosLoading = false;
                document.getElementById('elementosLoading').style.display = 'none';
            }
        }

        // Observador para infinite scroll en elementos
        const elementosObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting && document.getElementById('tab-elementos').classList.contains('active')) {
                    // Cargar según el tipo de filtro seleccionado
                    if (selectedElementoType === 'categoria' && selectedElementoId) {
                        cargarContenidoPorElemento();
                    } else if (selectedElementoType === 'objeto' && selectedObjetoNombre) {
                        cargarContenidoPorObjeto();
                    } else if (miContenidoMode) {
                        cargarMiContenido();
                    }
                }
            });
        }, { rootMargin: '200px' });

        // Observar el spinner de elementos cuando el DOM esté listo
        document.addEventListener('DOMContentLoaded', function() {
            const elementosLoadingEl = document.getElementById('elementosLoading');
            if (elementosLoadingEl) {
                elementosObserver.observe(elementosLoadingEl);
            }
        });

</script>
