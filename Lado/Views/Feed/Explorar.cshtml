    /* =====================================================
       OVERLAY CONTENIDO SENSIBLE
    ===================================================== */
    .sensitive-content-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 50;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(0, 0, 0, 0.15);
        backdrop-filter: blur(40px) saturate(1.2);
        -webkit-backdrop-filter: blur(40px) saturate(1.2);
    }

    .sensitive-warning {
        position: relative;
        z-index: 2;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 16px;
    }

    .sensitive-icon {
        width: 36px;
        height: 36px;
        stroke: rgba(255, 255, 255, 0.85);
        margin-bottom: 8px;
    }

    .sensitive-title {
        font-size: 13px;
        font-weight: 600;
        color: #fff;
        margin-bottom: 8px;
    }

    .sensitive-reveal-btn {
        background: transparent;
        border: 1px solid rgba(255, 255, 255, 0.6);
        color: #fff;
        padding: 6px 18px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .sensitive-reveal-btn:hover {
        background: rgba(255, 255, 255, 0.15);
        border-color: #fff;
    }

    .sensitive-content-overlay.revealing {
        animation: sensitiveReveal 0.3s ease forwards;
    }

    @@keyframes sensitiveReveal {
        from { opacity: 1; }
        to { opacity: 0; pointer-events: none; }
    }

    /* =====================================================
       COMPATIBILIDAD iOS / SAFARI
    ===================================================== */
    /* Fix para imágenes en iOS Safari */
    .explore-item img,
    .creator-card-avatar img {
        -webkit-transform: translateZ(0);
        transform: translateZ(0);
        -webkit-backface-visibility: hidden;
        backface-visibility: hidden;
        image-rendering: -webkit-optimize-contrast;
    }

    /* Fix aspect-ratio en iOS < 15 */
    @@supports not (aspect-ratio: 1) {
        .explore-item {
            padding-bottom: 100%;
            height: 0;
        }
        .explore-item > * {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
    }

    /* Fix backdrop-filter en iOS */
    @@supports (-webkit-touch-callout: none) {
        .sensitive-content-overlay {
            background: rgba(0, 0, 0, 0.6);
        }
        .creator-card-badge {
            background: rgba(255, 255, 255, 0.95);
        }
    }

    /* Fix videos en iOS - poster y playsinline */
    .explore-item video {
        -webkit-playsinline: true;
        playsinline: true;
    }

    /* Safe area para notch en iPhone */
    @@supports (padding-top: env(safe-area-inset-top)) {
        .explorar-container {
            padding-left: max(16px, env(safe-area-inset-left));
            padding-right: max(16px, env(safe-area-inset-right));
        }
    }

    /* Fix hover en dispositivos táctiles iOS */
    @@media (hover: none) and (pointer: coarse) {
        .explore-item:hover img,
        .explore-item:hover video {
            transform: none;
        }

        .explore-item:active {
            opacity: 0.8;
        }

        .creator-card:hover {
            transform: none;
            box-shadow: none;
        }

        .creator-card:active {
            transform: scale(0.98);
        }

        /* Grid más compacto en móviles táctiles */
        .creators-list {
            grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
            gap: 12px;
        }

        .creator-card-cover {
            height: 60px;
