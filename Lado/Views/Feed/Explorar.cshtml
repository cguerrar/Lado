<!-- Leaflet JS -->
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" crossorigin=""></script>
<script src="https://unpkg.com/leaflet.markercluster@1.4.1/dist/leaflet.markercluster.js"></script>

<script>
        // ========================================
        // UTILIDADES DE SEGURIDAD - XSS Prevention
        // ========================================
        function escapeHtml(text) {
            if (text == null) return '';
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // ========================================
        // RENDERIZAR ITEM DE EXPLORAR
        // ========================================
        function renderExploreItem(item) {
            const isVideo = item.tipoContenido === 2;
            const imageSrc = item.thumbnail || item.rutaArchivo;
            const premiumBadge = item.esPremium ? '<div class="premium-badge"><i class="fas fa-crown"></i></div>' : '';
            const videoBadge = isVideo ? '<div class="video-badge"><i class="fas fa-play"></i></div>' : '';

            const lockedOverlay = item.bloqueado ? `
                <div class="locked-overlay">
                    <div class="locked-content">
                        <i class="fas fa-lock"></i>
                        <span>Suscríbete</span>
                    </div>
                </div>
            ` : '';

            const sensitiveOverlay = !item.bloqueado && item.esContenidoSensible ? `
                <div class="sensitive-content-overlay" data-post-id="${item.id}">
                    <div class="sensitive-warning">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="sensitive-icon">
                            <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"></path>
                            <circle cx="12" cy="12" r="3"></circle>
                            <line x1="2" y1="2" x2="22" y2="22"></line>
                        </svg>
                        <span class="sensitive-title">Contenido Delicado</span>
                        <button class="sensitive-reveal-btn" onclick="event.stopPropagation(); revelarContenidoSensibleExplorar(event, ${item.id})">Ver</button>
                    </div>
                </div>
            ` : '';

            const statsOverlay = (item.esContenidoSensible || item.bloqueado) ? '' : `
                <div class="explore-overlay">
                    <div class="explore-stat"><i class="fas fa-heart"></i><span>${item.numeroLikes}</span></div>
                    <div class="explore-stat"><i class="fas fa-comment"></i><span>${item.numeroComentarios}</span></div>
                </div>
            `;

            const mediaElement = isVideo
                ? `<video src="${item.rutaArchivo}#t=0.1" preload="metadata" muted playsinline loop class="explore-thumb video-preview"></video>`
                : `<img src="${imageSrc}" alt="" loading="lazy" class="explore-thumb">`;

            const clickAction = item.bloqueado
                ? `onclick="window.location.href='/Feed/Perfil/${item.usuario?.id || item.usuarioId}'"`
                : (item.esContenidoSensible ? '' : `onclick="window.location.href='/Feed/Detalle/${item.id}'"`);

            return `
                <div class="explore-item ${item.bloqueado ? 'bloqueado' : ''}"
                     data-tipo="${item.tipoContenido}"
                     data-post-id="${item.id}"
                     data-bloqueado="${item.bloqueado}"
                     ${clickAction}>
                    ${mediaElement}
                    ${videoBadge}
                    ${premiumBadge}
                    ${lockedOverlay}
                    ${sensitiveOverlay}
                    ${statsOverlay}
                </div>
            `;
        }

        // ========================================
        // CARGA PROGRESIVA DE IMAGENES
        // ========================================
        function setupProgressiveLoading(container) {
            const items = container ? container.querySelectorAll('.explore-item') : document.querySelectorAll('.explore-item');

            items.forEach((item) => {
                const img = item.querySelector('img');
                const video = item.querySelector('video');

                if (img && !img.classList.contains('loaded')) {
                    // Si ya está en cache, mostrar inmediatamente
                    if (img.complete && img.naturalHeight !== 0) {
                        img.classList.add('loaded');
                        item.classList.add('media-loaded');
                    } else {
                        // Agregar listener para cuando cargue
                        img.addEventListener('load', function() {
                            // Delay aleatorio pequeño para efecto visual de "llenado"
                            const delay = Math.random() * 200;
                            setTimeout(() => {
                                this.classList.add('loaded');
                                item.classList.add('media-loaded');
                            }, delay);
                        });

                        // Manejar errores de carga
                        img.addEventListener('error', function() {
                            this.classList.add('error');
                            this.classList.add('loaded');
                            item.classList.add('media-loaded');
                            this.src = '/images/video-placeholder.svg';
                        });
                    }
                }

                if (video) {
                    // Para videos, marcar como cargado cuando tenga metadata o datos
                    const markVideoLoaded = function() {
                        if (!video.classList.contains('loaded')) {
                            const delay = Math.random() * 200;
                            setTimeout(() => {
                                video.classList.add('loaded');
                                item.classList.add('media-loaded');
                            }, delay);
                        }
                    };

                    video.addEventListener('loadedmetadata', markVideoLoaded);
                    video.addEventListener('loadeddata', markVideoLoaded);

                    // Si ya tiene datos
                    if (video.readyState >= 1) {
                        video.classList.add('loaded');
                        item.classList.add('media-loaded');
                    }

                    video.addEventListener('error', function() {
                        item.classList.add('media-loaded');
                    });
                }
            });
        }

        // Inicializar carga progresiva al cargar la página
        document.addEventListener('DOMContentLoaded', function() {
            const exploreGrid = document.getElementById('exploreGrid');
            if (exploreGrid) {
                setupProgressiveLoading(exploreGrid);
            }
        });

        // Estado de la aplicación
        let currentPage = 1;
        let currentTipo = 'todos';
        let currentOrden = 'popular';
        let isLoading = false;
        let hasMore = true;

        // Cambiar tabs
        function switchTab(tabName, btn) {
            // Ocultar todos los contenidos
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });

            // Desactivar todos los tabs
            document.querySelectorAll('.explorar-tab').forEach(tab => {
                tab.classList.remove('active');
            });

            // Mostrar contenido seleccionado
            const tabContent = document.getElementById('tab-' + tabName);
            if (tabContent) {
                tabContent.classList.add('active');
            }

            // Activar tab seleccionado
            if (btn) {
                btn.classList.add('active');
            }

            // Inicializar mapa cuando se selecciona el tab
            // Usar requestAnimationFrame doble para asegurar que el DOM esté listo
            if (tabName === 'mapa') {
                requestAnimationFrame(() => {
                    requestAnimationFrame(() => {
                        initMapaLeaflet();
                    });
                });
            }
        }

        // Fix para iOS/Android: agregar eventos táctiles a los tabs
        document.addEventListener('DOMContentLoaded', function() {
            // Tabs principales
            document.querySelectorAll('.explorar-tab').forEach(tab => {
                tab.addEventListener('touchend', function(e) {
                    e.preventDefault();
                    this.click();
                }, { passive: false });
            });

            // Filter chips
            document.querySelectorAll('.filter-chip').forEach(chip => {
                chip.addEventListener('touchend', function(e) {
                    e.preventDefault();
                    this.click();
                }, { passive: false });
            });
        });

        // Filtrar contenido por tipo
        function filterContent(tipo, btn) {
            currentTipo = tipo;
            currentPage = 1;
            hasMore = true;

            // Actualizar chips activos
            document.querySelectorAll('.filter-chip').forEach(chip => {
                chip.classList.remove('active');
            });
            btn.classList.add('active');

            // Recargar contenido
            reloadContent();
        }

        // Cambiar orden
        function changeOrder() {
            currentOrden = document.getElementById('orderSelect').value;
            currentPage = 1;
            hasMore = true;
            reloadContent();
        }

        // Recargar contenido desde cero
        async function reloadContent() {
            const grid = document.getElementById('exploreGrid');
            grid.innerHTML = '';
            document.getElementById('noMoreContent').style.display = 'none';
            await loadMoreContent();
        }

        // Cargar más contenido (infinite scroll)
        async function loadMoreContent() {
            if (isLoading || !hasMore) return;

            isLoading = true;
            document.getElementById('loadingSpinner').style.display = 'flex';

            try {
                let url = `/Feed/ExplorarContenido?page=${currentPage}&tipo=${currentTipo}&orden=${currentOrden}`;
                const response = await fetch(url);
                const data = await response.json();

                if (data.success && data.items.length > 0) {
                    const grid = document.getElementById('exploreGrid');

                    data.items.forEach(item => {
                        const div = document.createElement('div');
                        div.className = item.bloqueado ? 'explore-item bloqueado' : 'explore-item';
                        div.setAttribute('data-tipo', item.tipoContenido);
                        div.setAttribute('data-post-id', item.id);
                        div.setAttribute('data-bloqueado', item.bloqueado);

                        // Click action: si está bloqueado ir al perfil, si no al detalle
                        if (item.bloqueado) {
                            div.onclick = () => window.location.href = '/Feed/Perfil/' + item.usuario.id;
                        } else if (!item.esContenidoSensible) {
                            div.onclick = () => window.location.href = '/Feed/Detalle/' + item.id;
                        }

                        const isVideo = item.tipoContenido === 2;
                        const imageSrc = item.thumbnail || item.rutaArchivo;
                        const premiumBadge = item.esPremium ? '<div class="premium-badge"><i class="fas fa-crown"></i></div>' : '';

                        // Overlay de contenido bloqueado (LadoB sin suscripción)
                        const lockedOverlay = item.bloqueado ? `
                            <div class="locked-overlay">
                                <div class="locked-content">
                                    <i class="fas fa-lock"></i>
                                    <span>Suscríbete</span>
                                </div>
                            </div>
                        ` : '';

                        // Overlay de contenido sensible
                        const sensitiveOverlay = !item.bloqueado && item.esContenidoSensible ? `
                            <div class="sensitive-content-overlay" data-post-id="${item.id}">
                                <div class="sensitive-warning">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="sensitive-icon">
                                        <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"></path>
                                        <circle cx="12" cy="12" r="3"></circle>
                                        <line x1="2" y1="2" x2="22" y2="22"></line>
                                    </svg>
                                    <span class="sensitive-title">Contenido Delicado</span>
                                    <button class="sensitive-reveal-btn" onclick="event.stopPropagation(); revelarContenidoSensibleExplorar(event, ${item.id})">Ver</button>
                                </div>
                            </div>
                        ` : '';

                        // Overlay normal de estadísticas (solo si no es sensible ni bloqueado)
                        const statsOverlay = (item.esContenidoSensible || item.bloqueado) ? '' : `
                            <div class="explore-overlay">
                                <div class="explore-stat"><i class="fas fa-heart"></i><span>${item.numeroLikes}</span></div>
                                <div class="explore-stat"><i class="fas fa-comment"></i><span>${item.numeroComentarios}</span></div>
                            </div>
                        `;

                        const videoBadge = isVideo ? '<div class="video-badge"><i class="fas fa-play"></i></div>' : '';

                        // Para videos, usar elemento video para mostrar preview y permitir hover play
                        const mediaElement = isVideo
                            ? `<video src="${item.rutaArchivo}#t=0.1" preload="metadata" muted playsinline loop class="explore-thumb video-preview"></video>`
                            : `<img src="${imageSrc}" alt="" loading="lazy" class="explore-thumb">`;

                        div.innerHTML = `
                            ${mediaElement}
                            ${videoBadge}
                            ${premiumBadge}
                            ${lockedOverlay}
                            ${sensitiveOverlay}
                            ${statsOverlay}
                        `;

                        grid.appendChild(div);
                    });

                    // Aplicar carga progresiva a los nuevos items
                    setupProgressiveLoading(grid);

                    currentPage++;
                    hasMore = data.hasMore;

                    if (!hasMore) {
                        document.getElementById('noMoreContent').style.display = 'block';
                    }
                } else {
                    hasMore = false;
                    if (currentPage === 1) {
                        document.getElementById('exploreGrid').innerHTML = `
                            <div class="empty-state" style="grid-column: 1/-1;">
                                <i class="fas fa-image"></i>
                                <h3>No hay contenido disponible</h3>
                                <p>Prueba con otros filtros</p>
                            </div>
                        `;
                    } else {
                        document.getElementById('noMoreContent').style.display = 'block';
                    }
                }
            } catch (error) {
            } finally {
                isLoading = false;
                document.getElementById('loadingSpinner').style.display = 'none';
            }
        }

        // Infinite scroll con Intersection Observer
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting && document.getElementById('tab-contenido').classList.contains('active')) {
                    loadMoreContent();
                }
            });
        }, {
            rootMargin: '200px'
        });

        // Observar el spinner
        observer.observe(document.getElementById('loadingSpinner'));

        // Filtrar creadores
        function filterCreators(tipo) {
            const searchInput = tipo === 'creadores'
                ? document.getElementById('searchCreadores')
                : document.getElementById('searchPremium');

            const list = tipo === 'creadores'
                ? document.getElementById('creatorsListA')
                : document.getElementById('creatorsListB');

            if (!searchInput || !list) return;

            const filter = searchInput.value.toLowerCase();
            const rows = list.querySelectorAll('.creator-card');

            rows.forEach(row => {
                const name = row.getAttribute('data-name') || '';
                const username = row.getAttribute('data-username') || '';

                if (name.includes(filter) || username.includes(filter)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }

        // Toggle follow
        async function toggleFollow(userId, btn, tipoLado) {
            try {
                const response = await fetch('/Feed/Seguir', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'X-CSRF-TOKEN': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    },
                    body: `id=${userId}&tipoLado=${tipoLado}`
                });

                const data = await response.json();

                if (data.success) {
                    if (data.siguiendo) {
                        btn.classList.add('following');
                        btn.textContent = 'Siguiendo';
                    } else {
                        btn.classList.remove('following');
                        btn.textContent = 'Seguir';
                    }
                }
            } catch (error) {
            }
        }

        // Búsqueda global (debounced) - Búsqueda real por API
        let searchTimeout;
        let searchQuery = '';
        document.getElementById('searchGlobal').addEventListener('input', function() {
            clearTimeout(searchTimeout);
            searchQuery = this.value.trim();

            searchTimeout = setTimeout(async () => {
                // Filtrar creadores localmente (ya están cargados)
                const queryLower = searchQuery.toLowerCase();
                document.querySelectorAll('.creator-row, .creator-card').forEach(row => {
                    const name = (row.getAttribute('data-name') || '').toLowerCase();
                    const username = (row.getAttribute('data-username') || '').toLowerCase();

                    if (searchQuery.length === 0 || name.includes(queryLower) || username.includes(queryLower)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });

                // Búsqueda de contenido por API si hay texto suficiente
                if (searchQuery.length >= 2) {
                    try {
                        const grid = document.getElementById('exploreGrid');
                        grid.innerHTML = '<div class="loading-search" style="grid-column: 1/-1; text-align: center; padding: 2rem;"><i class="fas fa-spinner fa-spin"></i> Buscando...</div>';

                        const response = await fetch(`/Feed/ExplorarContenido?page=1&buscar=${encodeURIComponent(searchQuery)}`);
                        const data = await response.json();

                        grid.innerHTML = '';
                        if (data.success && data.items && data.items.length > 0) {
                            data.items.forEach(item => {
                                grid.innerHTML += renderExploreItem(item);
                            });
                            initVideoHover();
                            setupProgressiveLoading(grid);
                        } else {
                            grid.innerHTML = '<div style="grid-column: 1/-1; text-align: center; padding: 2rem; color: var(--text-secondary);">No se encontraron resultados para "' + escapeHtml(searchQuery) + '"</div>';
                        }
                        // Desactivar infinite scroll durante búsqueda
                        hasMore = false;
                    } catch (error) {
                        document.getElementById('exploreGrid').innerHTML = '<div style="grid-column: 1/-1; text-align: center; padding: 2rem; color: var(--text-secondary);">Error al buscar. Intenta de nuevo.</div>';
                    }
                } else if (searchQuery.length === 0) {
                    // Restaurar contenido original
                    location.reload();
                }
            }, 400);
        });

        // Video hover play (sin audio)
        function initVideoHover() {
            document.querySelectorAll('.explore-item').forEach(item => {
                const video = item.querySelector('video');
                if (video) {
                    // Asegurar que esté muted
                    video.muted = true;
                    video.loop = true;

                    item.addEventListener('mouseenter', () => {
                        video.play().catch(() => {});
                    });

                    item.addEventListener('mouseleave', () => {
                        video.pause();
                        video.currentTime = 0;
                    });
                }
            });
        }

        // Inicializar para los videos existentes
        initVideoHover();

        // Re-inicializar después de cargar más contenido (MutationObserver)
        const gridObserver = new MutationObserver((mutations) => {
            mutations.forEach(mutation => {
                mutation.addedNodes.forEach(node => {
                    if (node.nodeType === 1 && node.classList.contains('explore-item')) {
                        const video = node.querySelector('video');
                        if (video) {
                            video.muted = true;
                            video.loop = true;

                            node.addEventListener('mouseenter', () => {
                                video.play().catch(() => {});
                            });

                            node.addEventListener('mouseleave', () => {
                                video.pause();
                                video.currentTime = 0;
                            });
                        }
                    }
                });
            });
        });

        const exploreGrid = document.getElementById('exploreGrid');
        if (exploreGrid) {
            gridObserver.observe(exploreGrid, { childList: true });
        }

        // Revelar contenido sensible
        function revelarContenidoSensibleExplorar(event, postId) {
            event.stopPropagation();
            event.preventDefault();

            const overlay = document.querySelector(`.sensitive-content-overlay[data-post-id="${postId}"]`);
            if (overlay) {
                overlay.classList.add('revealing');
                setTimeout(() => {
                    overlay.remove();
                    // Re-habilitar click en el item
                    const item = document.querySelector(`.explore-item[data-post-id="${postId}"]`);
                    if (item) {
                        item.onclick = () => window.location.href = '/Feed/Detalle/' + postId;
                    }
                }, 300);
            }
        }

        // ========================================
        // PULL TO REFRESH - MEJORADO PARA PWA
        // ⚡ Mayor sensibilidad, haptic feedback, auto-refresh
        // ========================================
        const PULL_THRESHOLD = 50; // ⚡ Reducido de 80 a 50 para mayor sensibilidad
        const BACKGROUND_AUTO_REFRESH_THRESHOLD = 60000; // 60 segundos
        let hasTriggeredHaptic = false;
        let hiddenTime = null;

        // ⚡ Haptic feedback (vibración táctil)
        function triggerHaptic() {
            if (hasTriggeredHaptic) return;
            hasTriggeredHaptic = true;
            if ('vibrate' in navigator) {
                navigator.vibrate(15);
            }
        }

        function initPullToRefresh() {
            const pullIndicator = document.getElementById('pullToRefresh');
            const pullText = document.getElementById('pullText');
            let startY = 0;
            let currentY = 0;
            let isPulling = false;
            let isRefreshing = false;
            let touchStartElement = null;

            // Actualizar texto según estado
            function updatePullText(state) {
                if (!pullText) return;
                switch(state) {
                    case 'pull':
                        pullText.textContent = 'Desliza para actualizar';
                        break;
                    case 'ready':
                        pullText.textContent = '¡Suelta para actualizar!';
                        break;
                    case 'refreshing':
                        pullText.textContent = 'Actualizando...';
                        break;
                }
            }

            // Elementos que no deben activar pull-to-refresh
            function shouldIgnoreElement(element) {
                if (!element) return true;

                const ignoredSelectors = [
                    '.sidebar',
                    '.sidebar-overlay',
                    '.hamburger-btn',
                    '.top-navbar',
                    '.explorar-tabs',
                    '.filter-chips',
                    '.search-box',
                    'button',
                    'input',
                    'a'
                ];

                return ignoredSelectors.some(selector => element.closest(selector));
            }

            document.addEventListener('touchstart', function(e) {
                touchStartElement = e.target;

                if (shouldIgnoreElement(touchStartElement)) {
                    isPulling = false;
                    return;
                }

                // ⚡ Aumentado tolerancia a 10px
                if (window.scrollY <= 10 && !isRefreshing) {
                    startY = e.touches[0].pageY;
                    isPulling = true;
                    hasTriggeredHaptic = false;
                }
            }, { passive: true });

            document.addEventListener('touchmove', function(e) {
                if (!isPulling || isRefreshing) return;

                currentY = e.touches[0].pageY;
                const pullDistance = currentY - startY;

                if (pullDistance > 0 && window.scrollY <= 10) {
                    if (pullDistance > 5) {
                        pullIndicator.classList.add('visible');
                    }

                    // ⚡ Resistencia mejorada
                    const resistance = 0.6;
                    const adjustedDistance = Math.min(pullDistance * resistance, 100);

                    pullIndicator.style.transform = `translateX(-50%) translateY(${adjustedDistance}px)`;

                    // Rotar icono proporcionalmente
                    const rotation = Math.min((adjustedDistance / PULL_THRESHOLD) * 180, 180);
                    pullIndicator.querySelector('svg').style.transform = `rotate(${rotation}deg)`;

                    if (adjustedDistance >= PULL_THRESHOLD) {
                        pullIndicator.classList.add('ready');
                        updatePullText('ready');
                        triggerHaptic(); // ⚡ Vibración al alcanzar threshold
                    } else {
                        pullIndicator.classList.remove('ready');
                        updatePullText('pull');
                    }
                }
            }, { passive: true });

            document.addEventListener('touchend', function(e) {
                if (!isPulling || isRefreshing) return;

                const pullDistance = currentY - startY;
                const adjustedDistance = pullDistance * 0.6;

                if (adjustedDistance >= PULL_THRESHOLD) {
                    isRefreshing = true;
                    pullIndicator.classList.add('refreshing');
                    pullIndicator.classList.remove('ready');
                    pullIndicator.style.transform = 'translateX(-50%) translateY(30px)';
                    pullIndicator.querySelector('svg').style.transform = '';
                    updatePullText('refreshing');

                    refreshExplorar();
                } else {
                    resetPullIndicator();
                }

                isPulling = false;
                startY = 0;
                currentY = 0;
            }, { passive: true });

            function resetPullIndicator() {
                pullIndicator.classList.remove('visible', 'ready', 'refreshing');
                pullIndicator.style.transform = 'translateX(-50%) translateY(-100%)';
                pullIndicator.querySelector('svg').style.transform = '';
                updatePullText('pull');
            }

            window.resetPullIndicator = resetPullIndicator;
            window.setRefreshing = (val) => { isRefreshing = val; };
        }

        function refreshExplorar() {
            currentPage = 1;
            hasMore = true;

            setTimeout(() => {
                window.location.reload();
            }, 500);
        }

        // ⚡ Refresh desde el botón flotante (FAB)
        function refreshExplorarFromFab() {
            const fab = document.getElementById('refreshFab');
            if (!fab || fab.classList.contains('refreshing')) return;

            fab.classList.add('refreshing');
            triggerHaptic();

            setTimeout(() => {
                window.location.reload();
            }, 300);
        }

        // ⚡ Mostrar FAB cuando la página ha estado abierta un rato
        function showRefreshFabAfterTime() {
            setTimeout(() => {
                const fab = document.getElementById('refreshFab');
                if (fab) {
                    fab.classList.add('visible');
                }
            }, 120000); // Mostrar después de 2 minutos
        }

        // ⚡ Auto-refresh cuando vuelve del background
        document.addEventListener('visibilitychange', function() {
            if (document.hidden) {
                hiddenTime = Date.now();
            } else {
                const timeInBackground = hiddenTime ? Date.now() - hiddenTime : 0;

                if (timeInBackground > BACKGROUND_AUTO_REFRESH_THRESHOLD) {
                    console.log('[Explorar] Auto-actualizando por tiempo en background');

                    const pullIndicator = document.getElementById('pullToRefresh');
                    const pullText = document.getElementById('pullText');
                    if (pullIndicator && pullText) {
                        pullIndicator.classList.add('visible', 'refreshing');
                        pullIndicator.style.transform = 'translateX(-50%) translateY(30px)';
                        pullText.textContent = 'Actualizando...';
                    }

                    setTimeout(() => {
                        window.location.reload();
                    }, 500);
                }

                hiddenTime = null;
            }
        });

        // Inicializar pull-to-refresh
        document.addEventListener('DOMContentLoaded', function() {
            initPullToRefresh();
            showRefreshFabAfterTime();
        });

        // ========================================
        // MAPA INTERACTIVO CON LEAFLET
        // ========================================

        let mapaLeaflet = null;
        let markersCluster = null;
        let mapaInitialized = false;
        let mapaRetryCount = 0;
        const MAPA_MAX_RETRIES = 5;

        function initMapaLeaflet() {
            if (mapaInitialized) {
                if (mapaLeaflet) {
                    // Forzar recálculo de tamaño cuando se vuelve a mostrar el tab
                    setTimeout(() => mapaLeaflet.invalidateSize(), 100);
                }
                return;
            }

            const container = document.getElementById('mapaContainer');
            const loading = document.getElementById('mapaLoading');
            const emptyState = document.getElementById('mapaEmptyState');

            if (!container) {
                return;
            }

            // Mostrar contenedor primero
            container.style.display = 'block';

            // Validar que el contenedor tenga dimensiones reales
            const rect = container.getBoundingClientRect();
            if (rect.width === 0 || rect.height === 0) {
                mapaRetryCount++;
                if (mapaRetryCount < MAPA_MAX_RETRIES) {
                    setTimeout(() => initMapaLeaflet(), 150);
                    return;
                } else {
                    return;
                }
            }

            // Crear mapa con coordenadas de Chile por defecto
            mapaLeaflet = L.map('mapaContainer').setView([-33.45, -70.65], 4);

            // Tiles rápidos
            L.tileLayer('https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}{r}.png', {
                attribution: '© OSM © CARTO',
                maxZoom: 18
            }).addTo(mapaLeaflet);

            // Cluster simple
            markersCluster = L.markerClusterGroup({
                maxClusterRadius: 50,
                disableClusteringAtZoom: 15,
                iconCreateFunction: function(cluster) {
                    return L.divIcon({
                        html: '<div class="marker-cluster">' + cluster.getChildCount() + '</div>',
                        className: 'marker-cluster-container',
                        iconSize: [40, 40]
                    });
                }
            });

            mapaLeaflet.addLayer(markersCluster);
            mapaInitialized = true;

            // Cargar datos
            cargarFotosMapa(loading, emptyState);
        }

        async function cargarFotosMapa(loading, emptyState) {
            try {
                const response = await fetch('/Feed/ObtenerContenidoMapa');
                const data = await response.json();

                if (loading) loading.style.display = 'none';

                if (data.success && data.items && data.items.length > 0) {
                    if (emptyState) emptyState.style.display = 'none';

                    // Agregar marcadores directamente (simple y rápido)
                    data.items.forEach(item => {
                        const marker = L.marker([item.lat, item.lon], {
                            icon: L.divIcon({
                                html: `<div class="foto-marker" style="background-image:url('${item.thumbnail}')">
                                    ${item.esVideo ? '<i class="fas fa-play marker-play"></i>' : ''}
                                </div>`,
                                iconSize: [44, 44],
                                className: 'foto-marker-container'
                            })
                        });

                        marker.on('click', () => {
                            window.location.href = '/Feed/Detalle/' + item.id;
                        });

                        markersCluster.addLayer(marker);
                    });

                    // Forzar recálculo del tamaño del mapa después de cambios en DOM
                    if (mapaLeaflet) {
                        setTimeout(() => mapaLeaflet.invalidateSize(), 50);
                    }

                    // Ajustar vista
                    if (markersCluster.getLayers().length > 0) {
                        setTimeout(() => {
                            mapaLeaflet.fitBounds(markersCluster.getBounds(), { padding: [30, 30] });
                        }, 100);
                    }
                } else {
                    document.getElementById('mapaContainer').style.display = 'none';
                    if (emptyState) emptyState.style.display = 'flex';
                }
            } catch (error) {
                if (loading) loading.style.display = 'none';
                if (emptyState) emptyState.style.display = 'flex';
            }
        }

