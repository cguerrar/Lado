            } else {
                showToast(data.message || 'Error al enviar reporte');
            }
        } catch (err) {
            console.error('Error:', err);
            showToast('Error al enviar reporte');
        }
        cerrarMenus();
    }

    // Cerrar todos los menus
    function cerrarMenus() {
        document.querySelectorAll('.post-menu-dropdown.show').forEach(d => {
            d.classList.remove('show');
        });
    }

    // ========================================
    // VIDEO AUTOPLAY TIKTOK-STYLE
    // ========================================

    // Toggle play/pause on click
    function toggleVideoPlay(event, video) {
        event.stopPropagation();
        event.preventDefault();

        const overlay = video.nextElementSibling;

        if (video.paused) {
            // Pausar todos los demas videos
            document.querySelectorAll('.feed-video').forEach(v => {
                if (v !== video && !v.paused) {
                    v.pause();
                    v.closest('.post-media').classList.add('video-paused');
                }
            });
            video.play();
            video.closest('.post-media').classList.remove('video-paused');
        } else {
            video.pause();
            video.closest('.post-media').classList.add('video-paused');
        }
    }

    // Toggle mute
    function toggleVideoMute(event, btn) {
        event.stopPropagation();
        event.preventDefault();

        const video = btn.closest('.post-media').querySelector('.feed-video');
        const mutedIcon = btn.querySelector('.muted-icon');
        const unmutedIcon = btn.querySelector('.unmuted-icon');

        video.muted = !video.muted;

        if (video.muted) {
            mutedIcon.style.display = 'block';
            unmutedIcon.style.display = 'none';
        } else {
            mutedIcon.style.display = 'none';
            unmutedIcon.style.display = 'block';
        }

        // Sincronizar estado de mute en todos los videos
        document.querySelectorAll('.feed-video').forEach(v => {
            v.muted = video.muted;
        });
        document.querySelectorAll('.video-mute-btn').forEach(b => {
            const mi = b.querySelector('.muted-icon');
            const ui = b.querySelector('.unmuted-icon');
            if (video.muted) {
                mi.style.display = 'block';
                ui.style.display = 'none';
            } else {
                mi.style.display = 'none';
                ui.style.display = 'block';
            }
        });
    }

    // Intersection Observer para autoplay
    document.addEventListener('DOMContentLoaded', function() {
        const videos = document.querySelectorAll('.feed-video');

        if (videos.length === 0) return;

        const observerOptions = {
            root: null,
            rootMargin: '0px',
            threshold: 0.6 // 60% visible para activar
        };

        const videoObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                const video = entry.target;
                const postMedia = video.closest('.post-media');

                if (entry.isIntersecting) {
                    // El video es visible - reproducir
                    // Primero pausar todos los demas
                    document.querySelectorAll('.feed-video').forEach(v => {
                        if (v !== video && !v.paused) {
                            v.pause();
                            v.closest('.post-media').classList.add('video-paused');
                        }
                    });

                    // Reproducir este video
                    video.play().catch(err => {
                        console.log('Autoplay bloqueado:', err);
                        postMedia.classList.add('video-paused');
                    });
                    postMedia.classList.remove('video-paused');
                } else {
                    // El video ya no es visible - pausar
                    video.pause();
                    postMedia.classList.add('video-paused');
                }
            });
        }, observerOptions);

        // Observar todos los videos
        videos.forEach(video => {
            videoObserver.observe(video);
            // Inicialmente mostrar como pausado
            video.closest('.post-media').classList.add('video-paused');
        });
    });
