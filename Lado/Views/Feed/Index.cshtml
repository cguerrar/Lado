        border-bottom: 1px solid var(--line);
    }

    .create-story-header h3 {
        margin: 0;
        font-size: 16px;
        font-weight: 600;
        color: var(--fg);
    }

    .create-story-close {
        background: none;
        border: none;
        color: var(--muted);
        cursor: pointer;
        padding: 4px;
