@model IEnumerable<Lado.Models.Contenido>
@{
    ViewData["Title"] = "Feed";
}

@Html.AntiForgeryToken()

<style>
    :root {
        --primary: #32d67b;
        --primary-dark: #16a34a;
        --bg: #fafafa;
        --card-bg: #ffffff;
        --fg: #000000;
        --muted: #737373;
        --border: #dbdbdb;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: var(--bg);
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    .feed-layout {
        max-width: 935px;
        margin: 0 auto;
        padding: 30px 20px 0;
        display: grid;
        grid-template-columns: minmax(0, 614px) 1fr;
        gap: 28px;
    }

    .feed-main {
        min-width: 0;
    }

    .feed-sidebar {
        position: sticky;
        top: 90px;
        height: fit-content;
    }

    /* STORIES */
    .stories-wrapper {
        background: var(--card-bg);
        border: 1px solid var(--border);
        border-radius: 8px;
        padding: 16px 0;
        margin-bottom: 24px;
    }

    .stories-container {
        overflow-x: auto;
        overflow-y: hidden;
        scrollbar-width: none;
    }

        .stories-container::-webkit-scrollbar {
            display: none;
        }

    .stories-list {
        display: flex;
        gap: 16px;
        padding: 0 18px;
    }

    .story-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 6px;
        cursor: pointer;
        flex-shrink: 0;
    }

    .story-ring {
        width: 66px;
        height: 66px;
        border-radius: 50%;
        padding: 2px;
        background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .story-ring.visto {
            background: var(--border);
        }

    .story-ring-inner {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        background: var(--card-bg);
        padding: 2px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .story-avatar {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
    }

    .story-avatar-placeholder {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--primary), var(--primary-dark));
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
        font-size: 18px;
    }

    .story-username {
        font-size: 12px;
        color: var(--fg);
        max-width: 66px;
        text-align: center;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    /* POST CARD */
    .post-card {
        background: var(--card-bg);
        border: 1px solid var(--border);
        border-radius: 8px;
        margin-bottom: 24px;
    }

    .post-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 14px 16px;
    }

    .post-user-info {
        display: flex;
        align-items: center;
        gap: 12px;
        text-decoration: none;
        flex: 1;
    }

    .post-avatar {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        overflow: hidden;
        background: linear-gradient(135deg, var(--primary), var(--primary-dark));
    }

        .post-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .avatar-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
        font-size: 14px;
    }

    .post-user-details h6 {
        font-size: 14px;
        font-weight: 600;
        color: var(--fg);
        margin: 0;
    }

    .post-user-details small {
        font-size: 12px;
        color: var(--muted);
    }

    .post-menu-btn {
        background: none;
        border: none;
        padding: 8px;
        cursor: pointer;
        color: var(--fg);
    }

    .post-media {
        background: #000;
        max-height: 600px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .post-media img,
        .post-media video {
            width: 100%;
            max-height: 600px;
            object-fit: contain;
        }

    .post-actions {
        padding: 4px 16px 0;
    }

    .action-buttons {
        display: flex;
        align-items: center;
        gap: 16px;
        padding: 8px 0;
    }

    .action-btn {
        background: none;
        border: none;
        padding: 8px 0;
        cursor: pointer;
        color: var(--fg);
        display: flex;
        align-items: center;
    }

        .action-btn:hover {
            opacity: 0.5;
        }

        .action-btn svg {
            width: 24px;
            height: 24px;
            fill: none;
            stroke: currentColor;
            stroke-width: 2;
        }

    .like-btn.liked {
        color: #ed4956;
    }

        .like-btn.liked svg {
            fill: #ed4956;
            stroke: #ed4956;
        }

    .post-likes {
        font-size: 14px;
        font-weight: 600;
        color: var(--fg);
        padding: 0 0 8px;
    }

    .post-caption {
        font-size: 14px;
        color: var(--fg);
        padding: 0 0 8px;
    }

        .post-caption .username {
            font-weight: 600;
            margin-right: 6px;
        }

    .post-timestamp {
        font-size: 10px;
        color: var(--muted);
        text-transform: uppercase;
        padding: 0 0 16px;
    }

    .add-comment {
        border-top: 1px solid var(--border);
        padding: 16px;
        display: flex;
        gap: 12px;
    }

    .comment-input {
        flex: 1;
        border: none;
        outline: none;
        font-size: 14px;
    }

        .comment-input::placeholder {
            color: var(--muted);
        }

    .post-comment-btn {
        background: none;
        border: none;
        color: #0095f6;
        font-weight: 600;
        cursor: pointer;
        font-size: 14px;
    }

        .post-comment-btn:disabled {
            opacity: 0.3;
            cursor: default;
        }

    /* SIDEBAR */
    .user-profile-card {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 20px 0 10px;
    }

    .user-profile-avatar {
        width: 56px;
        height: 56px;
        border-radius: 50%;
        overflow: hidden;
        background: linear-gradient(135deg, var(--primary), var(--primary-dark));
    }

        .user-profile-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .user-profile-info h6 {
        font-size: 14px;
        font-weight: 600;
        color: var(--fg);
        margin: 0 0 2px 0;
    }

    .user-profile-info p {
        font-size: 14px;
        color: var(--muted);
        margin: 0;
    }

    .suggestions-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 24px 0 16px;
    }

        .suggestions-header h5 {
            font-size: 14px;
            font-weight: 600;
            color: var(--muted);
            margin: 0;
        }

        .suggestions-header a {
            font-size: 12px;
            font-weight: 600;
            color: var(--fg);
            text-decoration: none;
        }

    .suggestion-item {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 16px;
    }

    .suggestion-link {
        display: flex;
        align-items: center;
        gap: 12px;
        flex: 1;
        text-decoration: none;
        min-width: 0;
    }

    .suggestion-avatar {
        width: 44px;
        height: 44px;
        border-radius: 50%;
        overflow: hidden;
        background: linear-gradient(135deg, var(--primary), var(--primary-dark));
        flex-shrink: 0;
    }

        .suggestion-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .suggestion-info {
        flex: 1;
        min-width: 0;
    }

        .suggestion-info h6 {
            font-size: 14px;
            font-weight: 600;
            color: var(--fg);
            margin: 0 0 2px 0;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .suggestion-info p {
            font-size: 12px;
            color: var(--muted);
            margin: 0;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

    .btn-follow {
        background: none;
        border: none;
        color: #0095f6;
        font-size: 12px;
        font-weight: 600;
        cursor: pointer;
        white-space: nowrap;
    }

        .btn-follow:hover {
            color: var(--fg);
        }

    .footer-links {
        font-size: 11px;
        color: #c7c7c7;
        padding: 24px 0;
    }

        .footer-links a {
            color: #c7c7c7;
            text-decoration: none;
            margin-right: 8px;
        }

    .empty-feed {
        text-align: center;
        padding: 60px 20px;
        background: var(--card-bg);
        border: 1px solid var(--border);
        border-radius: 8px;
    }

        .empty-feed h3 {
            font-size: 22px;
            font-weight: 700;
            color: var(--fg);
            margin: 0 0 10px 0;
        }

        .empty-feed p {
            font-size: 14px;
            color: var(--muted);
            margin: 0 0 20px 0;
        }

    .explore-btn {
        background: #0095f6;
        color: white;
        border: none;
        padding: 8px 24px;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
    }

    @@media (max-width: 1024px) {
        .feed-layout {
            grid-template-columns: 1fr;
            padding: 0;
        }

        .feed-sidebar {
            display: none;
        }

        .stories-wrapper,
        .post-card {
            border-radius: 0;
            border-left: none;
            border-right: none;
        }

        .stories-wrapper {
            margin-bottom: 0;
            border-bottom: 8px solid var(--bg);
        }

        .post-card {
            margin-bottom: 0;
            border-bottom: 8px solid var(--bg);
        }
    }
</style>

<div class="feed-layout">
    <!-- MAIN FEED -->
    <div class="feed-main">
        <!-- STORIES -->
        @{
            var stories = ViewBag.Stories as IEnumerable<dynamic>;
        }
        @if (stories != null && stories.Any())
        {
            <div class="stories-wrapper">
                <div class="stories-container">
                    <div class="stories-list">
                        @foreach (var storyGroup in stories)
                        {
                            <div class="story-item" onclick="window.location.href='/Feed/Perfil/@storyGroup.CreadorId'">
                                <div class="story-ring @(storyGroup.TieneStorysSinVer ? "" : "visto")">
                                    <div class="story-ring-inner">
                                        @if (!string.IsNullOrEmpty(storyGroup.Creador.FotoPerfil))
                                        {
                                            <img src="@storyGroup.Creador.FotoPerfil" alt="@storyGroup.Creador.NombreCompleto" class="story-avatar">
                                        }
                                        else
                                        {
                                            <div class="story-avatar-placeholder">
                                                @storyGroup.Creador.NombreCompleto.Substring(0, 1)
                                            </div>
                                        }
                                    </div>
                                </div>
                                <span class="story-username">@storyGroup.Creador.NombreCompleto.Split(' ')[0]</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }

        <!-- POSTS -->
        @if (Model.Any())
        {
            @foreach (var contenido in Model)
            {
                <div class="post-card" data-content-id="@contenido.Id">
                    <div class="post-header">
                        @* ⭐ LÓGICA NUEVA: Determinar URL según TipoLado *@
                        @{
                            var urlPerfil = contenido.TipoLado == TipoLado.LadoB
                            ? $"/Feed/Perfil/{contenido.UsuarioId}?verSeudonimo=true"
                            : $"/Feed/Perfil/{contenido.UsuarioId}";
                        }

                        <a href="@urlPerfil" class="post-user-info">
                            <div class="post-avatar">
                                @if (!string.IsNullOrEmpty(contenido.Usuario?.FotoPerfil))
                                {
                                    <img src="@contenido.Usuario.FotoPerfil" alt="@contenido.NombreMostrado">
                                }
                                else
                                {
                                    <div class="avatar-placeholder">
                                        @(contenido.NombreMostrado?.Substring(0, 1) ?? "U")
                                    </div>
                                }
                            </div>
                            <div class="post-user-details">
                                <h6>@(contenido.NombreMostrado ?? "Usuario")</h6>
                                <small>
                                    @{
                                        var tiempo = DateTime.Now - contenido.FechaPublicacion;
                                        var tiempoTexto = tiempo.TotalDays >= 1 ? $"{(int)tiempo.TotalDays}d" :
                                        tiempo.TotalHours >= 1 ? $"{(int)tiempo.TotalHours}h" : $"{(int)tiempo.TotalMinutes}m";
                                    }
                                    Hace @tiempoTexto
                                </small>
                            </div>
                        </a>
                        <button class="post-menu-btn">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                                <circle cx="12" cy="12" r="1.5" />
                                <circle cx="6" cy="12" r="1.5" />
                                <circle cx="18" cy="12" r="1.5" />
                            </svg>
                        </button>
                    </div>

                    @if (!string.IsNullOrEmpty(contenido.RutaArchivo))
                    {
                        <div class="post-media">
                            @if ((int)contenido.TipoContenido == 0)
                            {
                                <img src="@contenido.RutaArchivo" alt="Post">
                            }
                            else
                            {
                                <video src="@contenido.RutaArchivo" controls></video>
                            }
                        </div>
                    }

                    <div class="post-actions">
                        <div class="action-buttons">
                            <button class="action-btn like-btn" data-id="@contenido.Id">
                                <svg viewBox="0 0 24 24">
                                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" />
                                </svg>
                            </button>
                            <button class="action-btn" onclick="window.location.href='/Feed/Detalle/@contenido.Id'">
                                <svg viewBox="0 0 24 24">
                                    <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z" />
                                </svg>
                            </button>
                            <button class="action-btn">
                                <svg viewBox="0 0 24 24">
                                    <line x1="22" y1="2" x2="11" y2="13" />
                                    <polygon points="22 2 15 22 11 13 2 9 22 2" />
                                </svg>
                            </button>
                        </div>

                        @if (contenido.NumeroLikes > 0)
                        {
                            <div class="post-likes">
                                <span id="likes-count-@contenido.Id">@contenido.NumeroLikes</span> Me gusta
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(contenido.Descripcion))
                        {
                            <div class="post-caption">
                                <span class="username">@(contenido.NombreMostrado ?? "Usuario")</span>
                                @contenido.Descripcion
                            </div>
                        }

                        <div class="post-timestamp">
                            Hace @tiempoTexto
                        </div>
                    </div>

                    <div class="add-comment">
                        <input type="text" class="comment-input" placeholder="Añade un comentario..." data-content-id="@contenido.Id">
                        <button class="post-comment-btn" disabled data-content-id="@contenido.Id">Publicar</button>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-feed">
                <h3>¡Bienvenido a tu Feed!</h3>
                <p>Sigue a creadores para ver su contenido aquí</p>
                <a href="/Feed/Explorar" class="explore-btn">Explorar</a>
            </div>
        }
    </div>

    <!-- SIDEBAR -->
    <div class="feed-sidebar">
        <!-- USER PROFILE -->
        @{
            var usuarioActual = ViewBag.UsuarioActual as Lado.Models.ApplicationUser;
        }
        @if (usuarioActual != null)
        {
            <div class="user-profile-card">
                <div class="user-profile-avatar">
                    @if (!string.IsNullOrEmpty(usuarioActual.FotoPerfil))
                    {
                        <img src="@usuarioActual.FotoPerfil" alt="@usuarioActual.NombreCompleto">
                    }
                    else
                    {
                        <div class="avatar-placeholder">@usuarioActual.NombreCompleto.Substring(0, 1)</div>
                    }
                </div>
                <div class="user-profile-info">
                    <h6>@usuarioActual.UserName</h6>
                    <p>@usuarioActual.NombreCompleto</p>
                </div>
            </div>
        }

        <!-- SUGGESTIONS -->
        <div class="suggestions-header">
            <h5>Sugerencias para ti</h5>
            <a href="/Feed/Explorar">Ver todo</a>
        </div>

        @if (ViewBag.CreadoresSugeridos != null && ((List<Lado.Models.ApplicationUser>)ViewBag.CreadoresSugeridos).Any())
        {
            @foreach (var creador in (List<Lado.Models.ApplicationUser>)ViewBag.CreadoresSugeridos)
            {
                <div class="suggestion-item">
                    <a href="/Feed/Perfil/@creador.Id" class="suggestion-link">
                        <div class="suggestion-avatar">
                            @if (!string.IsNullOrEmpty(creador.FotoPerfil))
                            {
                                <img src="@creador.FotoPerfil" alt="@creador.NombreCompleto">
                            }
                            else
                            {
                                <div class="avatar-placeholder">@creador.NombreCompleto.Substring(0, 1)</div>
                            }
                        </div>
                        <div class="suggestion-info">
                            <h6>@creador.UserName</h6>
                            <p>@creador.NombreCompleto</p>
                        </div>
                    </a>
                    <button class="btn-follow" onclick="window.location.href='/Feed/Perfil/@creador.Id'">Seguir</button>
                </div>
            }
        }

        <!-- FOOTER -->
        <div class="footer-links">
            <div>© 2025 LADO</div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        cargarEstadoLikes();

        async function cargarEstadoLikes() {
            const contenidos = document.querySelectorAll('.post-card[data-content-id]');
            const contentIds = Array.from(contenidos).map(c => c.dataset.contentId);

            if (contentIds.length === 0) return;

            try {
                const response = await fetch('/Feed/ObtenerMisLikes', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    },
                    body: JSON.stringify({ contenidoIds: contentIds })
                });

                if (response.ok) {
                    const data = await response.json();
                    if (data.success && data.likesUsuario) {
                        data.likesUsuario.forEach(contenidoId => {
                            const likeBtn = document.querySelector(`.like-btn[data-id="${contenidoId}"]`);
                            if (likeBtn) likeBtn.classList.add('liked');
                        });
                    }
                }
            } catch (error) {
                console.error('Error:', error);
            }
        }

        document.querySelectorAll('.like-btn').forEach(btn => {
            btn.addEventListener('click', async function() {
                const contentId = this.dataset.id;

                try {
                    const response = await fetch('/Feed/Like', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                        },
                        body: `id=${contentId}`
                    });

                    if (response.ok) {
                        const data = await response.json();
                        if (data.success) {
                            this.classList.toggle('liked', data.liked);
                            const likesCount = document.getElementById(`likes-count-${contentId}`);
                            if (likesCount) likesCount.textContent = data.likes;
                        }
                    }
                } catch (error) {
                    console.error('Error:', error);
                }
            });
        });

        document.querySelectorAll('.comment-input').forEach(input => {
            const btn = document.querySelector(`.post-comment-btn[data-content-id="${input.dataset.contentId}"]`);

            input.addEventListener('input', function() {
                btn.disabled = !this.value.trim();
            });
        });

        document.querySelectorAll('.post-comment-btn').forEach(btn => {
            btn.addEventListener('click', async function() {
                const contentId = this.dataset.contentId;
                const input = document.querySelector(`.comment-input[data-content-id="${contentId}"]`);
                const texto = input.value.trim();

                if (!texto) return;

                try {
                    const response = await fetch('/Feed/Comentar', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                        },
                        body: `id=${contentId}&texto=${encodeURIComponent(texto)}`
                    });

                    if (response.ok) {
                        const data = await response.json();
                        if (data.success) {
                            input.value = '';
                            this.disabled = true;
                        }
                    }
                } catch (error) {
                    console.error('Error:', error);
                }
            });
        });
    });
</script>