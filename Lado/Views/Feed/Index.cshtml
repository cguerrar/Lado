                        preview.className = 'post-comments-preview';
                        post.querySelector('.post-add-comment').before(preview);
                    }

                    const newComment = document.createElement('div');
                    newComment.className = 'comment-preview';
                    newComment.innerHTML = `<span class="comment-preview-username">${data.comentario.username}</span><span class="comment-preview-text">${data.comentario.texto}</span>`;
