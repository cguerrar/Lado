    // ========================================
    // SISTEMA DE VIDEO - OPTIMIZADO PARA iOS
    // ========================================

    let activeVideoObservers = 0;
    const MAX_VIDEO_OBSERVERS = 30;
    let isGlobalMuted = true;

    // Deteccion de iOS/iPadOS (incluye iPadOS 13+)
    const isIOSDevice = (() => {
        const ua = navigator.userAgent;
        const isIOS = /iPad|iPhone|iPod/.test(ua) && !window.MSStream;
        const isIPadOS = (navigator.platform === 'MacIntel' && navigator.maxTouchPoints > 1) ||
                         (navigator.userAgent.includes('Mac') && 'ontouchend' in document);
        return isIOS || isIPadOS;
    })();

    // Safari detection
    const isSafari = /^((?!chrome|android).)*safari/i.test(navigator.userAgent);

    // Videos pausados manualmente por el usuario (no autoplay)
    const manuallyPausedVideos = new Set();

    // Actualizar estado visual del video
    function updateVideoState(video, isPlaying) {
        const postMedia = video?.closest('.post-media');
        if (!postMedia) return;

        if (isPlaying) {
            postMedia.classList.remove('video-paused');
            postMedia.classList.add('video-playing');
        } else {
            postMedia.classList.remove('video-playing');
            postMedia.classList.add('video-paused');
        }
    }

    // Pausar todos los videos excepto uno
    function pauseAllVideosExcept(exceptVideo) {
        document.querySelectorAll('.feed-video').forEach(v => {
            if (v !== exceptVideo && !v.paused) {
                v.pause();
                updateVideoState(v, false);
            }
        });
    }

    // Reproducir video - estrategia para iOS (usa iOSMediaFix si disponible)
    async function playVideo(video) {
        const postMedia = video?.closest('.post-media');
        if (!video || !postMedia) return false;

        // 🍎 iOS: Usar el nuevo API iOSMediaFix para mejor compatibilidad
        if (window.iOSMediaFix?.isIOS) {
            const success = await window.iOSMediaFix.playVideo(video);
            if (!success) {
                // Mostrar indicador visual de que necesita tap
                postMedia.classList.add('needs-tap');
                postMedia.classList.remove('video-playing');
                postMedia.classList.add('video-paused');
            } else {
                postMedia.classList.remove('needs-tap');
                // IMPORTANTE: Aplicar estado global de mute después de reproducir
                video.muted = isGlobalMuted;
            }
            return success;
        }

        // Fallback para navegadores sin iOSMediaFix
        video.muted = isGlobalMuted; // Respetar estado global de mute

        if (video.readyState < 2) {
            video.load();
            await new Promise(resolve => {
                const onCanPlay = () => {
                    video.removeEventListener('canplay', onCanPlay);
                    video.removeEventListener('error', onError);
                    resolve();
                };
                const onError = () => {
                    video.removeEventListener('canplay', onCanPlay);
                    video.removeEventListener('error', onError);
                    resolve();
                };
                video.addEventListener('canplay', onCanPlay);
                video.addEventListener('error', onError);
                // Timeout más largo para conexiones 3G/LTE lentas (8 segundos)
                setTimeout(resolve, 8000);
            });
        }

        try {
            const playPromise = video.play();
            if (playPromise !== undefined) {
                await playPromise;
            }
            postMedia.classList.remove('video-paused');
            postMedia.classList.add('video-playing');
            return true;
        } catch (err) {
            postMedia.classList.remove('video-playing');
            postMedia.classList.add('video-paused');
            return false;
        }
    }

    // Handler para click en overlay - toggle play/pause con tap
    function handleVideoClick(event, overlay) {
        event.stopPropagation();
        event.preventDefault();

        const postMedia = overlay.closest('.post-media');
        const video = postMedia?.querySelector('video.feed-video');
        if (!video) return;

        const videoId = video.getAttribute('data-post-id') || video.src;

        // 🍎 iOS: Usar iOSMediaFix.toggleVideo para mejor compatibilidad
        if (window.iOSMediaFix?.isIOS) {
            if (video.paused) {
                // Usuario quiere reproducir
                manuallyPausedVideos.delete(videoId);
                postMedia.classList.remove('needs-tap');
                video.muted = isGlobalMuted;
            } else {
                // Usuario quiere pausar - marcar como pausa manual
                manuallyPausedVideos.add(videoId);
            }

            window.iOSMediaFix.toggleVideo(video, { preserveMuteState: false });
            // Asegurar estado mute correcto después del toggle
            video.muted = isGlobalMuted;
            return;
        }

        // Fallback para navegadores sin iOSMediaFix
        if (video.paused) {
            manuallyPausedVideos.delete(videoId);
            pauseAllVideosExcept(video);
            video.muted = isGlobalMuted;
            video.play().then(() => {
                updateVideoState(video, true);
            }).catch((err) => {
                updateVideoState(video, false);
            });
        } else {
            manuallyPausedVideos.add(videoId);
            video.pause();
            updateVideoState(video, false);
        }
    }

    // Actualizar iconos de mute
    function updateAllMuteIcons() {
        // Actualizar iconos de video
        document.querySelectorAll('.video-mute-btn').forEach(btn => {
            const mi = btn.querySelector('.muted-icon');
            const ui = btn.querySelector('.unmuted-icon');
            if (mi && ui) {
