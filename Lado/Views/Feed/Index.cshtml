            loadRetryCount++;

            // Reintentar automáticamente hasta MAX_RETRIES
            if (loadRetryCount < MAX_RETRIES && !isRetry) {
                isLoadingMore = false;
                setTimeout(() => loadMorePosts(true), 2000);
