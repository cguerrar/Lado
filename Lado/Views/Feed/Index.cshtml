        var diff = DateTime.Now - fecha;
        if (diff.TotalDays >= 7) return fecha.ToString("dd MMM");
        if (diff.TotalDays >= 1) return $"Hace {(int)diff.TotalDays}d";
        if (diff.TotalHours >= 1) return $"Hace {(int)diff.TotalHours}h";
