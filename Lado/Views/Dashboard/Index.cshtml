@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('ingresosChart');
        if (ctx) {
            const datosIngresos = [
        @(ViewBag.IngresosSemana1 ?? 0),
        @(ViewBag.IngresosSemana2 ?? 0),
        @(ViewBag.IngresosSemana3 ?? 0),
        @(ViewBag.IngresosSemana4 ?? 0)
            ];

            const hayDatos = datosIngresos.some(val => val > 0);

            console.log('Datos del gráfico:', datosIngresos);

            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['Sem 1', 'Sem 2', 'Sem 3', 'Sem 4'],
                    datasets: [{
                        label: 'Ingresos ($)',
                        data: datosIngresos,
                        borderColor: '#00bcd4',
                        backgroundColor: 'rgba(0, 188, 212, 0.1)',
                        tension: 0.4,
                        fill: true,
                        pointBackgroundColor: '#00bcd4',
                        pointBorderColor: '#fff',
                        pointBorderWidth: 2,
                        pointRadius: 5,
                        pointHoverRadius: 7
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            backgroundColor: 'rgba(0, 0, 0, 0.8)',
                            padding: 12,
                            callbacks: {
                                label: function(context) {
                                    return 'Ingresos: $' + context.parsed.y.toLocaleString('es-CL', {
                                        minimumFractionDigits: 2,
                                        maximumFractionDigits: 2
                                    });
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return '$' + value.toLocaleString('es-CL');
                                }
                            },
                            grid: {
                                color: 'rgba(0, 0, 0, 0.05)'
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });

            if (!hayDatos) {
                const canvas = document.getElementById('ingresosChart');
                const parent = canvas.parentElement;
                const mensaje = document.createElement('div');
                mensaje.className = 'text-center text-muted py-4';
                mensaje.innerHTML = '<i class="fas fa-chart-line fa-2x mb-2"></i><p>No hay datos de ingresos aún</p>';
                canvas.style.display = 'none';
                parent.appendChild(mensaje);
            }
        }

        function copiarLink() {
            const input = document.getElementById('linkPerfil');
            input.select();
            input.setSelectionRange(0, 99999);

            navigator.clipboard.writeText(input.value).then(() => {
                const btn = event.target.closest('button');
                const icon = btn.querySelector('i');
                const originalClass = icon.className;

                icon.className = 'fas fa-check text-white';
                btn.classList.add('btn-success');
                btn.classList.remove('btn-primary');

                setTimeout(() => {
                    icon.className = originalClass;
                    btn.classList.remove('btn-success');
                    btn.classList.add('btn-primary');
                }, 2000);
            }).catch(err => {
                alert('Error al copiar: ' + err);
            });
        }
    </script>
}