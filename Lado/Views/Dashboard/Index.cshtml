<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    function copiarLink() {
        const input = document.getElementById('linkPerfil');
        input.select();
        navigator.clipboard.writeText(input.value).then(() => {
            alert('¡Link copiado!');
        });
    }

    // Copiar Link in Bio
    function copyLinkBio() {
        const linkUrl = document.getElementById('linkBioUrl')?.textContent;
        const btn = document.getElementById('btnCopyLink');
        if (!linkUrl || !btn) return;

        navigator.clipboard.writeText(linkUrl).then(() => {
            // Cambiar apariencia del botón
            btn.classList.add('copied');
            btn.querySelector('i').className = 'fas fa-check';
            btn.querySelector('span').textContent = 'Copiado';

            // Restaurar después de 2 segundos
            setTimeout(() => {
                btn.classList.remove('copied');
                btn.querySelector('i').className = 'fas fa-copy';
                btn.querySelector('span').textContent = 'Copiar';
            }, 2000);
        }).catch(err => {
            // Fallback para navegadores sin soporte clipboard
            const textarea = document.createElement('textarea');
            textarea.value = linkUrl;
            document.body.appendChild(textarea);
            textarea.select();
            try {
                document.execCommand('copy');
                btn.classList.add('copied');
                btn.querySelector('i').className = 'fas fa-check';
                btn.querySelector('span').textContent = 'Copiado';
                setTimeout(() => {
                    btn.classList.remove('copied');
                    btn.querySelector('i').className = 'fas fa-copy';
                    btn.querySelector('span').textContent = 'Copiar';
                }, 2000);
            } catch (e) {
                console.error('Error al copiar:', e);
            }
            document.body.removeChild(textarea);
        });
    }

    const ctx = document.getElementById('ingresosChart');
    if (ctx) {
        const datosIngresos = [
    @(ViewBag.IngresosSemana1 ?? 0),
    @(ViewBag.IngresosSemana2 ?? 0),
    @(ViewBag.IngresosSemana3 ?? 0),
    @(ViewBag.IngresosSemana4 ?? 0)
        ];

        // Detectar tema actual
        const isDark = document.documentElement.getAttribute('data-theme') === 'dark';
        const primaryColor = isDark ? '#6CA6CD' : '#4682B4';
        const bgColor = isDark ? 'rgba(108, 166, 205, 0.1)' : 'rgba(70, 130, 180, 0.1)';
        const gridColor = isDark ? '#334155' : '#e2e8f0';
        const textColor = isDark ? '#94a3b8' : '#64748b';

        const chart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Sem 1', 'Sem 2', 'Sem 3', 'Sem 4'],
                datasets: [{
                    label: 'Ingresos',
                    data: datosIngresos,
                    borderColor: primaryColor,
                    backgroundColor: bgColor,
                    tension: 0.4,
                    fill: true,
                    pointBackgroundColor: primaryColor,
                    pointBorderColor: isDark ? '#1e293b' : '#fff',
                    pointBorderWidth: 2,
                    pointRadius: 5,
                    pointHoverRadius: 7,
                    borderWidth: 3
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: gridColor,
                            drawBorder: false
                        },
                        ticks: {
                            color: textColor,
                            callback: function(value) {
                                return '$' + value.toLocaleString();
                            }
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        },
                        ticks: {
                            color: textColor
                        }
                    }
                }
            }
        });

        // Actualizar gráfico cuando cambia el tema
        const observer = new MutationObserver(function(mutations) {
            mutations.forEach(function(mutation) {
                if (mutation.attributeName === 'data-theme') {
                    const isDarkNow = document.documentElement.getAttribute('data-theme') === 'dark';
                    chart.data.datasets[0].borderColor = isDarkNow ? '#6CA6CD' : '#4682B4';
                    chart.data.datasets[0].backgroundColor = isDarkNow ? 'rgba(108, 166, 205, 0.1)' : 'rgba(70, 130, 180, 0.1)';
                    chart.data.datasets[0].pointBackgroundColor = isDarkNow ? '#6CA6CD' : '#4682B4';
                    chart.data.datasets[0].pointBorderColor = isDarkNow ? '#1e293b' : '#fff';
                    chart.options.scales.y.grid.color = isDarkNow ? '#334155' : '#e2e8f0';
                    chart.options.scales.y.ticks.color = isDarkNow ? '#94a3b8' : '#64748b';
                    chart.options.scales.x.ticks.color = isDarkNow ? '#94a3b8' : '#64748b';
                    chart.update();
                }
            });
        });
        observer.observe(document.documentElement, { attributes: true });
    }

    // Animación suave de los blobs decorativos de la billetera
    var blob1 = document.querySelector('.wallet-blob-1');
    var blob2 = document.querySelector('.wallet-blob-2');

    if (blob1 && blob2) {
        var startTime = Date.now();

        function animateWalletBlobs() {
            var elapsed = (Date.now() - startTime) / 1000;

            // Ciclo completo cada 12 y 15 segundos
            var cycle1 = (elapsed / 12) * Math.PI * 2;
            var cycle2 = (elapsed / 15) * Math.PI * 2;

            // Desplazamiento máximo de 15px
            var x1 = Math.sin(cycle1) * 15;
            var y1 = Math.cos(cycle1) * 12;
            var x2 = Math.cos(cycle2) * 12;
            var y2 = Math.sin(cycle2) * 15;

            blob1.style.transform = 'translate(' + x1 + 'px, ' + y1 + 'px)';
            blob2.style.transform = 'translate(' + x2 + 'px, ' + y2 + 'px)';

            requestAnimationFrame(animateWalletBlobs);
        }

        animateWalletBlobs();
    }

    // ========================================
    // MODAL DE SEGUIDORES
    // ========================================
    let currentTipoLado = null;
    let currentPage = 1;
    let isLoading = false;
    let hasMore = true;

    function abrirModalSeguidores(tipoLado) {
        currentTipoLado = tipoLado;
        currentPage = 1;
        hasMore = true;

        const modal = document.getElementById('modalSeguidores');
        const titulo = document.getElementById('modalSeguidoresTitulo');
        const lista = document.getElementById('listaSeguidores');

        if (!modal) {
            return;
        }

        titulo.innerHTML = tipoLado === 'ladoA'
            ? '<img src="/images/angelito.png" alt="" style="height: 24px; margin-right: 8px;">Seguidores LadoA'
            : '<img src="/images/diablito.png" alt="" style="height: 24px; margin-right: 8px;">Seguidores LadoB';

        lista.innerHTML = '<div class="loading-spinner"><i class="fas fa-spinner fa-spin"></i> Cargando...</div>';
        modal.classList.add('active');

        cargarSeguidores();
    }

    function cerrarModalSeguidores() {
        document.getElementById('modalSeguidores').classList.remove('active');
    }

    async function cargarSeguidores() {
        if (isLoading || !hasMore) {
            return;
        }
        isLoading = true;

        try {
            const url = '/Dashboard/ObtenerTodosSeguidores?tipoLado=' + currentTipoLado + '&page=' + currentPage;
            const response = await fetch(url);

            if (!response.ok) {
                throw new Error('Error HTTP: ' + response.status);
            }

            const data = await response.json();

            if (data.success) {
                const lista = document.getElementById('listaSeguidores');

                if (currentPage === 1) {
                    lista.innerHTML = '';
                }

                data.seguidores.forEach(s => {
                    const item = document.createElement('a');
                    item.href = '/' + escapeHtml(s.username);
                    item.className = 'seguidor-item';
                    item.innerHTML = `
                        ${s.fotoPerfil
                            ? `<img src="${escapeHtml(s.fotoPerfil)}" alt="${escapeHtml(s.username)}" class="seguidor-avatar">`
                            : `<div class="seguidor-avatar-placeholder"><i class="fas fa-user"></i></div>`
                        }
                        <div class="seguidor-info">
                            <div class="seguidor-nombre">${escapeHtml(s.nombreCompleto || s.username)}</div>
                            <div class="seguidor-username">@("@")${escapeHtml(s.username)}</div>
                        </div>
                        <div class="seguidor-fecha">
                            <i class="fas fa-calendar-alt"></i>
                            ${new Date(s.fechaSuscripcion).toLocaleDateString('es', { day: 'numeric', month: 'short' })}
                        </div>
                    `;
                    lista.appendChild(item);
                });

                hasMore = data.hasMore;
                currentPage++;

                if (hasMore) {
                    if (!document.getElementById('btnCargarMas')) {
                        const btn = document.createElement('button');
                        btn.id = 'btnCargarMas';
                        btn.className = 'btn-cargar-mas';
                        btn.textContent = 'Cargar más';
                        btn.onclick = cargarSeguidores;
                        lista.after(btn);
                    }
                } else {
                    const btnExistente = document.getElementById('btnCargarMas');
                    if (btnExistente) btnExistente.remove();
                }
            }
        } catch (error) {
            const lista = document.getElementById('listaSeguidores');
            lista.innerHTML = '<div style="text-align: center; padding: 20px; color: var(--muted);">Error al cargar seguidores</div>';
        } finally {
            isLoading = false;
        }
    }

    function escapeHtml(text) {
        if (!text) return '';
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }

    // Cerrar modal al hacer clic fuera - esperar a que el DOM esté listo
    document.addEventListener('DOMContentLoaded', function() {
        const modal = document.getElementById('modalSeguidores');
        if (modal) {
            modal.addEventListener('click', function(e) {
                if (e.target === this) {
                    cerrarModalSeguidores();
                }
            });
        }
    });
</script>

