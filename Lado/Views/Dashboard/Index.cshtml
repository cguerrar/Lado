@model Lado.Models.ApplicationUser
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Dashboard";
    var suscriptores = ViewBag.Suscriptores ?? 0;
    var likes = ViewBag.Likes ?? 0;
}

<style>
    /* ========================================
       DASHBOARD STYLES - Usa variables del Layout
       ======================================== */

    .page-header {
        margin-bottom: 28px;
    }

        .page-header h1 {
            font-size: 1.875rem;
            font-weight: 800;
            color: var(--fg);
            margin-bottom: 6px;
            letter-spacing: -0.02em;
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            gap: 12px;
        }

        .page-header p {
            color: var(--muted);
            font-size: 1rem;
        }

    /* Badges de identidad */
    .identity-badges {
        display: inline-flex;
        gap: 8px;
    }

    .identity-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 12px;
        border-radius: var(--radius-lg);
        font-size: 0.8125rem;
        font-weight: 600;
        transition: transform var(--transition-fast);
    }

        .identity-badge:hover {
            transform: translateY(-1px);
        }

        .identity-badge.real {
            background: var(--primary-light);
            color: var(--primary-dark);
        }

        .identity-badge.pseudo {
            background: var(--accent-light);
            color: var(--accent);
        }

    /* Alerta de verificación */
    .alert-verify {
        background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
        border: 1px solid #fbbf24;
        border-radius: var(--radius-lg);
        padding: 16px 20px;
        margin-bottom: 24px;
        display: flex;
        align-items: center;
        gap: 16px;
        box-shadow: var(--shadow-sm);
    }

    [data-theme="dark"] .alert-verify {
        background: linear-gradient(135deg, rgba(251, 191, 36, 0.15) 0%, rgba(245, 158, 11, 0.1) 100%);
        border-color: rgba(251, 191, 36, 0.3);
    }

        .alert-verify svg {
            width: 24px;
            height: 24px;
            flex-shrink: 0;
            color: #d97706;
        }

    .alert-content h5 {
        font-size: 1rem;
        font-weight: 700;
        color: #78350f;
        margin-bottom: 4px;
    }

    [data-theme="dark"] .alert-content h5 {
        color: #fbbf24;
    }

    .alert-content p {
        color: #92400e;
        font-size: 0.875rem;
        margin-bottom: 10px;
        line-height: 1.5;
    }

    [data-theme="dark"] .alert-content p {
        color: #fcd34d;
    }

    /* Botones mejorados */
    .btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 18px;
        border-radius: var(--radius-md);
        font-weight: 600;
        font-size: 0.875rem;
        text-decoration: none;
        transition: all var(--transition-fast);
        border: none;
        cursor: pointer;
    }

    .btn-sm {
        padding: 8px 14px;
        font-size: 0.8125rem;
    }

    .btn-primary {
        background: var(--primary-gradient);
        color: white;
        box-shadow: var(--shadow-sm);
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: var(--primary-glow);
        }

    .btn-warning {
        background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
        color: #78350f;
        box-shadow: var(--shadow-sm);
    }

        .btn-warning:hover {
            transform: translateY(-2px);
            box-shadow: 0 0 20px rgba(251, 191, 36, 0.4);
        }

    .btn-outline {
        background: var(--surface);
        border: 1px solid var(--line);
        color: var(--fg);
    }

        .btn-outline:hover {
            border-color: var(--primary);
            background: var(--primary-light);
            color: var(--primary);
            transform: translateY(-1px);
        }


    /* WALLET CARD - Diseño Premium */
    .wallet-card {
        background: linear-gradient(135deg, #4682B4 0%, #36648B 100%);
        border-radius: 24px;
        padding: 32px;
        color: white;
        box-shadow: 0 20px 60px rgba(70, 130, 180, 0.3);
        margin-bottom: 24px;
        display: grid;
        grid-template-columns: auto 1fr auto;
        gap: 28px;
        align-items: center;
        position: relative;
        overflow: hidden;
    }

    .wallet-blob {
        position: absolute;
        border-radius: 50%;
        pointer-events: none;
    }

    .wallet-blob-1 {
        width: 300px;
        height: 300px;
        background: rgba(255,255,255,0.15);
        top: -100px;
        right: -50px;
    }

    .wallet-blob-2 {
        width: 200px;
        height: 200px;
        background: rgba(255,255,255,0.12);
        bottom: -80px;
        left: -40px;
    }

    .wallet-balance-section {
        display: flex;
        align-items: center;
        gap: 16px;
        position: relative;
        z-index: 1;
    }

    .wallet-icon {
        width: 52px;
        height: 52px;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border-radius: var(--radius-md);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .wallet-balance-label {
        font-size: 0.8125rem;
        opacity: 0.9;
        margin-bottom: 4px;
        font-weight: 500;
    }

    .wallet-balance {
        font-size: 2.25rem;
        font-weight: 800;
        line-height: 1;
        letter-spacing: -0.02em;
    }

    .wallet-stats {
        display: flex;
        gap: 32px;
        position: relative;
        z-index: 1;
    }

    .wallet-stat {
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .wallet-stat svg {
            width: 18px;
            height: 18px;
            opacity: 0.9;
        }

    .wallet-stat-label {
        font-size: 0.8125rem;
        opacity: 0.85;
        font-weight: 500;
    }

    .wallet-stat-value {
        font-size: 1rem;
        font-weight: 700;
    }

    .wallet-actions {
        display: flex;
        gap: 10px;
        position: relative;
        z-index: 1;
    }

    .btn-light {
        background: white;
        color: var(--primary-dark);
        box-shadow: var(--shadow-sm);
    }

        .btn-light:hover {
            background: #f8fafc;
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }

    .btn-outline-light {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: white;
    }

        .btn-outline-light:hover {
            background: rgba(255, 255, 255, 0.2);
            border-color: white;
            transform: translateY(-2px);
        }

    /* STATS GRID - Cards de estadísticas */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 20px;
        margin-bottom: 24px;
    }

    .stat-card {
        background: var(--surface);
        border-radius: var(--radius-lg);
        padding: 24px;
        box-shadow: var(--shadow-sm);
        transition: all var(--transition-fast);
        border: 1px solid var(--line);
        position: relative;
        overflow: hidden;
    }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: var(--primary-gradient);
            opacity: 0;
            transition: opacity var(--transition-fast);
        }

        .stat-card:hover {
            box-shadow: var(--shadow-lg);
            transform: translateY(-4px);
            border-color: var(--primary);
        }

        .stat-card:hover::before {
            opacity: 1;
        }

    .stat-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }

    .stat-label {
        color: var(--muted);
        font-size: 0.875rem;
        font-weight: 500;
        margin-bottom: 8px;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 800;
        color: var(--fg);
        line-height: 1;
        letter-spacing: -0.02em;
    }

    .stat-change {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        font-size: 0.8125rem;
        color: var(--primary);
        margin-top: 8px;
        font-weight: 600;
    }

    .stat-icon {
        width: 48px;
        height: 48px;
        border-radius: var(--radius-md);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        font-size: 1.125rem;
    }

    .icon-success {
        background: var(--primary-light);
        color: var(--primary);
    }

    .icon-primary {
        background: rgba(59, 130, 246, 0.1);
        color: var(--info);
    }

    [data-theme="dark"] .icon-primary {
        background: rgba(59, 130, 246, 0.15);
    }

    .icon-info {
        background: var(--accent-light);
        color: var(--accent);
    }

    .icon-danger {
        background: rgba(239, 68, 68, 0.1);
        color: var(--danger);
    }

    [data-theme="dark"] .icon-danger {
        background: rgba(239, 68, 68, 0.15);
    }

    .icon-warning {
        background: rgba(245, 158, 11, 0.1);
        color: var(--warning);
    }

    [data-theme="dark"] .icon-warning {
        background: rgba(245, 158, 11, 0.15);
    }

    /* CARDS GENERALES */
    .card {
        background: var(--surface);
        border-radius: var(--radius-lg);
        padding: 24px;
        box-shadow: var(--shadow-sm);
        margin-bottom: 24px;
        border: 1px solid var(--line);
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        padding-bottom: 16px;
        border-bottom: 1px solid var(--line);
    }

    .card-title {
        font-size: 1.125rem;
        font-weight: 700;
        color: var(--fg);
    }

    /* BARRA DE ACCIONES */
    .actions-bar {
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
        align-items: center;
        background: var(--surface);
        padding: 18px 20px;
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-sm);
        margin-bottom: 24px;
        border: 1px solid var(--line);
    }

    .actions-label {
        font-weight: 600;
        color: var(--muted);
        font-size: 0.875rem;
        margin-right: 8px;
    }

    /* CONTENT TYPE CARDS */
    .content-type-cards {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 16px;
        margin-bottom: 24px;
    }

    .content-type-card {
        background: var(--surface);
        border: 2px solid var(--line);
        border-radius: var(--radius-lg);
        padding: 24px 20px;
        text-align: center;
        transition: all var(--transition-fast);
        cursor: pointer;
        text-decoration: none;
        color: var(--fg);
        position: relative;
        overflow: visible;
    }

    /* Mascotas angelito/diablito */
    .lado-mascota {
        position: absolute;
        right: 15px;
        bottom: calc(100% + 2px);
        width: auto;
        height: 60px;
        transform: scale(0.7);
        transform-origin: bottom right;
        pointer-events: none;
        z-index: 10;
        filter: drop-shadow(0 2px 4px rgba(0,0,0,0.15));
    }

        .content-type-card::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, transparent 0%, rgba(255,255,255,0.05) 100%);
            pointer-events: none;
        }

        .content-type-card:hover {
            transform: translateY(-4px);
            box-shadow: var(--shadow-lg);
        }

        .content-type-card.ladoa {
            border-color: var(--primary);
        }

        .content-type-card.ladoa:hover {
            background: var(--primary-light);
            box-shadow: var(--primary-glow);
        }

        .content-type-card.ladob {
            border-color: var(--accent);
        }

        .content-type-card.ladob:hover {
            background: var(--accent-light);
            box-shadow: 0 0 20px rgba(139, 92, 246, 0.3);
        }

    .content-type-icon {
        width: 56px;
        height: 56px;
        margin: 0 auto 14px;
        border-radius: var(--radius-md);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
    }

        .content-type-icon.ladoa {
            background: var(--primary-light);
            color: var(--primary);
        }

        .content-type-icon.ladob {
            background: var(--accent-light);
            color: var(--accent);
        }

    .content-type-title {
        font-weight: 700;
        margin-bottom: 6px;
        font-size: 1rem;
    }

    .content-type-desc {
        font-size: 0.875rem;
        color: var(--muted);
    }

    /* LISTA DE ACTIVIDAD */
    .activity-list {
        display: flex;
        flex-direction: column;
        gap: 16px;
        max-height: 420px;
        overflow-y: auto;
        padding-right: 8px;
    }

    .activity-list::-webkit-scrollbar {
        width: 4px;
    }

    .activity-list::-webkit-scrollbar-track {
        background: var(--bg-tertiary);
        border-radius: 2px;
    }

    .activity-list::-webkit-scrollbar-thumb {
        background: var(--line);
        border-radius: 2px;
    }

    .activity-item {
        display: flex;
        align-items: flex-start;
        gap: 14px;
        padding: 12px;
        background: var(--bg-secondary);
        border-radius: var(--radius-md);
        transition: all var(--transition-fast);
    }

        .activity-item:hover {
            background: var(--bg-tertiary);
        }

    .activity-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: var(--primary-light);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .activity-content {
        flex: 1;
    }

    .activity-text {
        font-size: 0.9375rem;
        color: var(--fg);
        margin-bottom: 6px;
        font-weight: 500;
    }

    .activity-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .activity-date {
        font-size: 0.8125rem;
        color: var(--muted);
    }

    .activity-amount {
        font-size: 0.9375rem;
        font-weight: 700;
        color: var(--primary);
    }

    /* EMPTY STATE */
    .empty-state {
        text-align: center;
        padding: 48px 24px;
    }

        .empty-state i {
            font-size: 2.5rem;
            color: var(--muted-light);
            margin-bottom: 16px;
        }

        .empty-state p {
            color: var(--muted);
            margin-bottom: 20px;
            font-size: 1rem;
        }

    /* GRID LAYOUTS */
    .grid-2 {
        display: grid;
        grid-template-columns: 1.5fr 1fr;
        gap: 24px;
    }

    /* COMPARTIR PERFIL */
    .link-share {
        display: flex;
        gap: 10px;
    }

    .link-input {
        flex: 1;
        padding: 12px 16px;
        border: 1px solid var(--line);
        border-radius: var(--radius-md);
        font-size: 0.875rem;
        background: var(--bg-tertiary);
        color: var(--fg);
        font-family: 'SF Mono', 'Fira Code', monospace;
    }

    /* SUBSCRIPTIONS */
    .subscriptions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        gap: 16px;
    }

    .subscription-card {
        background: var(--surface);
        border-radius: var(--radius-lg);
        padding: 20px;
        text-align: center;
        box-shadow: var(--shadow-sm);
        transition: all var(--transition-fast);
        border: 1px solid var(--line);
    }

        .subscription-card:hover {
            box-shadow: var(--shadow-lg);
            transform: translateY(-4px);
            border-color: var(--primary);
        }

    .profile-avatar {
        width: 72px;
        height: 72px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 12px;
        border: 3px solid var(--primary-light);
    }

    .profile-placeholder {
        width: 72px;
        height: 72px;
        border-radius: 50%;
        background: var(--bg-tertiary);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 12px;
        border: 3px solid var(--line);
    }

    .subscription-name {
        font-weight: 700;
        font-size: 1rem;
        margin-bottom: 4px;
        color: var(--fg);
    }

    .subscription-username {
        color: var(--muted);
        font-size: 0.875rem;
        margin-bottom: 12px;
    }

    /* BADGES */
    .badge {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .badge-success {
        background: var(--primary-light);
        color: var(--primary-dark);
    }

    @@media (max-width: 1024px) {
        .grid-2

    {
        grid-template-columns: 1fr;
    }

    .wallet-card {
        grid-template-columns: 1fr;
        gap: 16px;
    }

    .wallet-stats {
        flex-direction: column;
        gap: 12px;
    }

    .wallet-actions {
        justify-content: stretch;
    }

        .wallet-actions .btn {
            flex: 1;
        }

    .content-type-cards {
        grid-template-columns: 1fr;
    }

    }

    @@media (max-width: 768px) {
        .stats-grid

    {
        grid-template-columns: repeat(2, 1fr);
    }

    .actions-bar {
        flex-direction: column;
        align-items: stretch;
    }

    .subscriptions-grid {
        grid-template-columns: repeat(2, 1fr);
    }

    .identity-badges {
        display: flex;
        margin-left: 0;
        margin-top: 8px;
    }

    }

    @@media (max-width: 576px) {
        .stats-grid

    {
        grid-template-columns: 1fr;
    }

    .subscriptions-grid {
        grid-template-columns: 1fr;
    }

    .wallet-balance-section {
        flex-direction: column;
        text-align: center;
    }

    }

    /* Generador de imagenes promo */
    .promo-generator-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: var(--radius-xl);
        padding: 20px 24px;
        margin-bottom: 24px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 16px;
        box-shadow: var(--shadow-md);
        transition: transform var(--transition-fast), box-shadow var(--transition-fast);
    }

    .promo-generator-card:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-lg);
    }

    .promo-generator-info {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .promo-generator-icon {
        width: 48px;
        height: 48px;
        background: rgba(255,255,255,0.2);
        border-radius: var(--radius-lg);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: white;
    }

    .promo-generator-text h3 {
        color: white;
        font-size: 1rem;
        font-weight: 700;
        margin-bottom: 4px;
    }

    .promo-generator-text p {
        color: rgba(255,255,255,0.8);
        font-size: 0.85rem;
    }

    .promo-generator-btn {
        background: white;
        color: #667eea;
        padding: 10px 20px;
        border-radius: var(--radius-lg);
        font-weight: 600;
        font-size: 0.9rem;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: transform var(--transition-fast);
        white-space: nowrap;
    }

    .promo-generator-btn:hover {
        transform: scale(1.05);
    }

    @@media (max-width: 576px) {
        .promo-generator-card {
            flex-direction: column;
            text-align: center;
        }

        .promo-generator-info {
            flex-direction: column;
        }

        .promo-generator-btn {
            width: 100%;
            justify-content: center;
        }
    }

    /* =============================================
       MOBILE OPTIMIZATIONS - Dashboard
       ============================================= */
    @@media (max-width: 767px) {
        /* Page header mobile */
        .page-header {
            margin-bottom: 20px;
            padding: 0 4px;
        }

        .page-header h1 {
            font-size: 1.5rem;
            flex-direction: column;
            align-items: flex-start;
            gap: 8px;
        }

        .page-header p {
            font-size: 0.9rem;
        }

        .identity-badges {
            width: 100%;
            justify-content: flex-start;
            flex-wrap: wrap;
        }

        .identity-badge {
            font-size: 0.75rem;
            padding: 5px 10px;
        }

        /* Alert verify mobile */
        .alert-verify {
            flex-direction: column;
            text-align: center;
            padding: 16px;
            gap: 12px;
        }

        .alert-verify svg {
            margin: 0 auto;
        }

        .alert-content .btn {
            width: 100%;
        }

        /* Content type cards mobile - horizontal scroll */
        .content-type-cards {
            display: flex;
            overflow-x: auto;
            gap: 12px;
            padding-bottom: 8px;
            -webkit-overflow-scrolling: touch;
            scroll-snap-type: x mandatory;
        }

        .content-type-card {
            flex: 0 0 calc(50% - 6px);
            min-width: 140px;
            padding: 18px 14px;
            scroll-snap-align: start;
        }

        .content-type-icon {
            width: 48px;
            height: 48px;
            margin-bottom: 10px;
        }

        .content-type-title {
            font-size: 0.9rem;
        }

        .content-type-desc {
            font-size: 0.8rem;
        }

        .lado-mascota {
            height: 45px;
            right: 8px;
        }

        /* Promo generator card mobile */
        .promo-generator-card {
            padding: 16px;
            border-radius: 14px;
        }

        .promo-generator-icon {
            width: 42px;
            height: 42px;
        }

        .promo-generator-text h3 {
            font-size: 0.95rem;
        }

        .promo-generator-text p {
            font-size: 0.8rem;
        }

        /* Wallet card mobile */
        .wallet-card {
            grid-template-columns: 1fr;
            gap: 16px;
            padding: 20px 16px;
            border-radius: 16px;
