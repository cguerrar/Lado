}

@if (Model.TipoUsuario == 1)
{
    <!-- Dashboard para Creadores -->
    <div class="row g-3 mb-3">
        <div class="col-md-6 col-xl-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Este mes</p>
                            <h4 class="mb-0">$@ViewBag.IngresosEsteMes.ToString("N2")</h4>
                            <small class="text-success"><i class="fas fa-arrow-up"></i> 12.5%</small>
                        </div>
                        <div class="icon-box bg-success bg-opacity-10 text-success">
                            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <line x1="12" y1="1" x2="12" y2="23"></line>
                                <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                            </svg>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-xl-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Suscriptores totales</p>
                            <h4 class="mb-0">
                                @if (suscriptores >= 1000)
                                {
                                    @((suscriptores / 1000.0).ToString("N1"))

                                    <text>K</text>
                                }
                                else
                                {
                                    @suscriptores
                                }
                            </h4>
                            <small class="text-success"><i class="fas fa-arrow-up"></i> +@ViewBag.NuevosSeguidores</small>
                        </div>
                        <div class="icon-box bg-primary bg-opacity-10 text-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                <circle cx="9" cy="7" r="4"></circle>
                                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                            </svg>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-xl-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Publicaciones</p>
                            <h4 class="mb-0">@ViewBag.Contenidos</h4>
                            <small class="text-muted">Esta semana: 12</small>
                        </div>
                        <div class="icon-box bg-info bg-opacity-10 text-info">
                            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"></path>
                                <circle cx="12" cy="13" r="4"></circle>
                            </svg>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-xl-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Total de likes</p>
                            <h4 class="mb-0">
                                @if (likes >= 1000)
                                {
                                    @((likes / 1000.0).ToString("N1"))

                                    <text>K</text>
                                }
                                else
                                {
                                    @likes
                                }
                            </h4>
                            <small class="text-muted">Engagement: @ViewBag.Engagement%</small>
                        </div>
                        <div class="icon-box bg-danger bg-opacity-10 text-danger">
                            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                            </svg>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-3">
        <!-- Acciones Rápidas -->
        <div class="col-lg-9">
            <div class="card shadow-sm border-0">
                <div class="card-body py-3">
                    <div class="row g-2 align-items-center">
                        <div class="col-auto">
                            <h6 class="mb-0 text-muted">Acciones:</h6>
                        </div>
                        <div class="col-auto">
                            <a href="/Contenido/Crear" class="btn btn-primary btn-sm">
                                <i class="fas fa-plus"></i> Nueva Publicación
                            </a>
                        </div>
                        <div class="col-auto">
                            <a href="/Contenido/Crear" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-image"></i> Subir Foto
                            </a>
                        </div>
                        <div class="col-auto">
                            <a href="/Contenido/Crear" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-video"></i> Subir Video
                            </a>
                        </div>
                        <div class="col-auto">
                            <a href="#" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-broadcast-tower"></i> Iniciar Live
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Compartir Perfil Compacto -->
        <div class="col-lg-3">
            <div class="card shadow-sm border-0">
                <div class="card-body py-3">
                    @{
                        var perfilUrl = $"https://Ladodemo.com/{Model.UserName}";
                    }
                    <div class="d-flex align-items-center">
                        <input type="text" class="form-control form-control-sm me-2" id="linkPerfil" value="@perfilUrl" readonly>
                        <button class="btn btn-primary btn-sm" onclick="copiarLink()" title="Copiar">
                            <i class="fas fa-copy"></i>
                        </button>
                        <div class="dropdown ms-1">
                            <button class="btn btn-outline-primary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="fas fa-share-alt"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" href="@($"https://api.whatsapp.com/send?text={Uri.EscapeDataString($"¡Sígueme en Lado! {perfilUrl}")}")" target="_blank">
                                        <i class="fab fa-whatsapp text-success"></i> WhatsApp
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@($"https://twitter.com/intent/tweet?text=¡Sígueme en Lado!&url={Uri.EscapeDataString(perfilUrl)}")" target="_blank">
                                        <i class="fab fa-x-twitter"></i> Twitter
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@($"https://www.facebook.com/sharer/sharer.php?u={Uri.EscapeDataString(perfilUrl)}")" target="_blank">
                                        <i class="fab fa-facebook-f text-primary"></i> Facebook
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@($"https://t.me/share/url?url={Uri.EscapeDataString(perfilUrl)}&text={Uri.EscapeDataString("¡Sígueme en Lado!")}")" target="_blank">
                                        <i class="fab fa-telegram-plane text-info"></i> Telegram
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <!-- Gráfico de Ingresos -->
        <div class="col-lg-7">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="mb-0">Ingresos</h5>
                        <select class="form-select form-select-sm" style="width: auto;">
                            <option>Última semana</option>
                            <option selected>Último mes</option>
                            <option>Último año</option>
                        </select>
                    </div>
                    <canvas id="ingresosChart" height="100"></canvas>
                </div>
            </div>
        </div>

        <!-- Actividad -->
        <div class="col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center py-3">
                    <h5 class="mb-0">Actividad Reciente</h5>
                    <a href="/Usuario/ActividadReciente" class="btn btn-sm btn-link p-0 text-decoration-none">
                        Ver todo <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
                <div class="card-body">
                    <div class="activity-list">
                        @if (ViewBag.Actividades != null && ViewBag.Actividades.Count > 0)
                        {
                            @foreach (var actividad in ViewBag.Actividades)
                            {
                                <div class="activity-item">
                                    <div class="d-flex align-items-start">
                                        <div class="activity-icon me-3">
                                            <i class="fas fa-user-plus text-success"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <p class="mb-0 small">@actividad.Descripcion</p>
                                            <div class="d-flex justify-content-between align-items-center mt-1">
                                                <small class="text-muted">@actividad.FechaTransaccion.ToString("dd/MM/yyyy HH:mm")</small>
                                                <strong class="text-success small">+$@actividad.Monto.ToString("N2")</strong>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-inbox fa-2x text-muted mb-2"></i>
                                <p class="text-muted mb-0 small">No hay actividad reciente</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}
