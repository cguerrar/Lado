@model Lado.Models.ApplicationUser
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Dashboard";
    var suscriptores = ViewBag.Suscriptores ?? 0;
    var likes = ViewBag.Likes ?? 0;
}

<style>
    :root {
        --primary: #32d67b;
        --primary-dark: #16a34a;
        --primary-light: #e6f9ee;
        --bg: #ffffff;
        --fg: #111827;
        --muted: #6b7280;
        --light-bg: #f9fafb;
        --card-bg: #fafafa;
        --line: #e5e7eb;
        --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.06);
        --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.08);
        --radius-sm: 10px;
        --radius-md: 16px;
        --radius-lg: 20px;
    }

    .page-header {
        margin-bottom: 20px;
    }

        .page-header h1 {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--fg);
            margin-bottom: 4px;
        }

        .page-header p {
            color: var(--muted);
            font-size: 0.9375rem;
        }

    /* ⭐ NUEVO: Badge de identidad dual */
    .identity-badges {
        display: inline-flex;
        gap: 8px;
        margin-left: 12px;
    }

    .identity-badge {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 600;
    }

        .identity-badge.real {
            background: var(--primary-light);
            color: var(--primary-dark);
        }

        .identity-badge.pseudo {
            background: #fef3c7;
            color: #92400e;
        }

    .alert-verify {
        background: #fef3c7;
        border: 1px solid #fbbf24;
        border-radius: var(--radius-md);
        padding: 12px 16px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 12px;
    }

        .alert-verify svg {
            width: 20px;
            height: 20px;
            flex-shrink: 0;
            color: #d97706;
        }

    .alert-content h5 {
        font-size: 0.9375rem;
        font-weight: 600;
        color: #78350f;
        margin-bottom: 2px;
    }

    .alert-content p {
        color: #78350f;
        font-size: 0.8125rem;
        margin-bottom: 8px;
        line-height: 1.4;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 8px 16px;
        border-radius: var(--radius-sm);
        font-weight: 600;
        font-size: 0.875rem;
        text-decoration: none;
        transition: all 0.2s ease;
        border: none;
        cursor: pointer;
    }

    .btn-sm {
        padding: 6px 12px;
        font-size: 0.8125rem;
    }

    .btn-primary {
        background: var(--primary);
        color: white;
    }

        .btn-primary:hover {
            background: var(--primary-dark);
            transform: translateY(-1px);
            box-shadow: var(--shadow-md);
        }

    .btn-warning {
        background: #fbbf24;
        color: #78350f;
    }

        .btn-warning:hover {
            background: #f59e0b;
        }

    .btn-outline {
        background: white;
        border: 1px solid var(--line);
        color: var(--fg);
    }

        .btn-outline:hover {
            border-color: var(--primary);
            background: var(--primary-light);
            color: var(--primary);
        }

    /* WALLET COMPACTO */
    .wallet-card {
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        border-radius: var(--radius-md);
        padding: 20px;
        color: white;
        box-shadow: var(--shadow-md);
        margin-bottom: 20px;
        display: grid;
        grid-template-columns: auto 1fr auto;
        gap: 20px;
        align-items: center;
    }

    .wallet-balance-section {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .wallet-icon {
        width: 40px;
        height: 40px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: var(--radius-sm);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .wallet-balance-label {
        font-size: 0.75rem;
        opacity: 0.9;
        margin-bottom: 2px;
    }

    .wallet-balance {
        font-size: 1.75rem;
        font-weight: 700;
        line-height: 1;
    }

    .wallet-stats {
        display: flex;
        gap: 24px;
    }

    .wallet-stat {
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .wallet-stat svg {
            width: 16px;
            height: 16px;
        }

    .wallet-stat-label {
        font-size: 0.75rem;
        opacity: 0.9;
    }

    .wallet-stat-value {
        font-size: 0.9375rem;
        font-weight: 600;
    }

    .wallet-actions {
        display: flex;
        gap: 8px;
    }

    .btn-light {
        background: white;
        color: var(--fg);
    }

        .btn-light:hover {
            background: #f3f4f6;
        }

    .btn-outline-light {
        background: transparent;
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: white;
    }

        .btn-outline-light:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: white;
        }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 16px;
        margin-bottom: 20px;
    }

    .stat-card {
        background: white;
        border-radius: var(--radius-md);
        padding: 20px;
        box-shadow: var(--shadow-sm);
        transition: all 0.2s ease;
        border: 1px solid var(--line);
    }

        .stat-card:hover {
            box-shadow: var(--shadow-md);
            transform: translateY(-2px);
        }

    .stat-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 12px;
    }

    .stat-label {
        color: var(--muted);
        font-size: 0.8125rem;
        font-weight: 500;
        margin-bottom: 6px;
    }

    .stat-value {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--fg);
        line-height: 1;
    }

    .stat-change {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        font-size: 0.8125rem;
        color: var(--primary);
        margin-top: 6px;
    }

    .stat-icon {
        width: 40px;
        height: 40px;
        border-radius: var(--radius-sm);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .icon-success {
        background: var(--primary-light);
        color: var(--primary);
    }

    .icon-primary {
        background: #dbeafe;
        color: #2563eb;
    }

    .icon-info {
        background: #e0e7ff;
        color: #6366f1;
    }

    .icon-danger {
        background: #fee2e2;
        color: #ef4444;
    }

    .icon-warning {
        background: #fef3c7;
        color: #d97706;
    }

    .card {
        background: white;
        border-radius: var(--radius-md);
        padding: 20px;
        box-shadow: var(--shadow-sm);
        margin-bottom: 20px;
        border: 1px solid var(--line);
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        padding-bottom: 12px;
        border-bottom: 1px solid var(--line);
    }

    .card-title {
        font-size: 1.125rem;
        font-weight: 600;
        color: var(--fg);
    }

    .actions-bar {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        align-items: center;
        background: white;
        padding: 16px;
        border-radius: var(--radius-md);
        box-shadow: var(--shadow-sm);
        margin-bottom: 20px;
        border: 1px solid var(--line);
    }

    .actions-label {
        font-weight: 600;
        color: var(--muted);
        font-size: 0.875rem;
        margin-right: 8px;
    }

    /* ⭐ NUEVO: Cards de tipo de contenido */
    .content-type-cards {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 12px;
        margin-bottom: 20px;
    }

    .content-type-card {
        background: white;
        border: 2px solid var(--line);
        border-radius: var(--radius-md);
        padding: 16px;
        text-align: center;
        transition: all 0.2s ease;
        cursor: pointer;
        text-decoration: none;
        color: var(--fg);
    }

        .content-type-card:hover {
            border-color: var(--primary);
            background: var(--primary-light);
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }

        .content-type-card.ladoa {
            border-color: var(--primary);
        }

        .content-type-card.ladob {
            border-color: #fbbf24;
        }

    .content-type-icon {
        width: 48px;
        height: 48px;
        margin: 0 auto 10px;
        border-radius: var(--radius-sm);
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .content-type-icon.ladoa {
            background: var(--primary-light);
            color: var(--primary);
        }

        .content-type-icon.ladob {
            background: #fef3c7;
            color: #d97706;
        }

    .content-type-title {
        font-weight: 600;
        margin-bottom: 4px;
    }

    .content-type-desc {
        font-size: 0.8125rem;
        color: var(--muted);
    }

    .activity-list {
        display: flex;
        flex-direction: column;
        gap: 12px;
        max-height: 400px;
        overflow-y: auto;
    }

    .activity-item {
        display: flex;
        align-items: flex-start;
        gap: 10px;
        padding-bottom: 12px;
        border-bottom: 1px solid var(--line);
    }

        .activity-item:last-child {
            border-bottom: none;
            padding-bottom: 0;
        }

    .activity-icon {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background: var(--light-bg);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .activity-content {
        flex: 1;
    }

    .activity-text {
        font-size: 0.875rem;
        color: var(--fg);
        margin-bottom: 4px;
    }

    .activity-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .activity-date {
        font-size: 0.8125rem;
        color: var(--muted);
    }

    .activity-amount {
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--primary);
    }

    .empty-state {
        text-align: center;
        padding: 32px 20px;
    }

        .empty-state i {
            font-size: 2rem;
            color: var(--muted);
            margin-bottom: 12px;
        }

        .empty-state p {
            color: var(--muted);
            margin-bottom: 16px;
            font-size: 0.9375rem;
        }

    .grid-2 {
        display: grid;
        grid-template-columns: 1.5fr 1fr;
        gap: 20px;
    }

    .link-share {
        display: flex;
        gap: 8px;
    }

    .link-input {
        flex: 1;
        padding: 8px 12px;
        border: 1px solid var(--line);
        border-radius: var(--radius-sm);
        font-size: 0.8125rem;
        background: var(--light-bg);
        color: var(--muted);
        font-family: 'Courier New', monospace;
    }

    .subscriptions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        gap: 16px;
    }

    .subscription-card {
        background: white;
        border-radius: var(--radius-md);
        padding: 16px;
        text-align: center;
        box-shadow: var(--shadow-sm);
        transition: all 0.2s ease;
        border: 1px solid var(--line);
    }

        .subscription-card:hover {
            box-shadow: var(--shadow-md);
            transform: translateY(-2px);
        }

    .profile-avatar {
        width: 64px;
        height: 64px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 10px;
    }

    .profile-placeholder {
        width: 64px;
        height: 64px;
        border-radius: 50%;
        background: var(--light-bg);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 10px;
    }

    .subscription-name {
        font-weight: 600;
        font-size: 0.9375rem;
        margin-bottom: 2px;
    }

    .subscription-username {
        color: var(--muted);
        font-size: 0.8125rem;
        margin-bottom: 10px;
    }

    .badge {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        padding: 4px 10px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .badge-success {
        background: var(--primary-light);
        color: var(--primary-dark);
    }

    @@media (max-width: 1024px) {
        .grid-2

    {
        grid-template-columns: 1fr;
    }

    .wallet-card {
        grid-template-columns: 1fr;
        gap: 16px;
    }

    .wallet-stats {
        flex-direction: column;
        gap: 12px;
    }

    .wallet-actions {
        justify-content: stretch;
    }

        .wallet-actions .btn {
            flex: 1;
        }

    .content-type-cards {
        grid-template-columns: 1fr;
    }

    }

    @@media (max-width: 768px) {
        .stats-grid

    {
        grid-template-columns: repeat(2, 1fr);
    }

    .actions-bar {
        flex-direction: column;
        align-items: stretch;
    }

    .subscriptions-grid {
        grid-template-columns: repeat(2, 1fr);
    }

    .identity-badges {
        display: flex;
        margin-left: 0;
        margin-top: 8px;
    }

    }

    @@media (max-width: 576px) {
        .stats-grid

    {
        grid-template-columns: 1fr;
    }

    .subscriptions-grid {
        grid-template-columns: 1fr;
    }

    .wallet-balance-section {
        flex-direction: column;
        text-align: center;
    }

    }
</style>

<div class="page-header">
    <h1>
        Bienvenido, @Model.NombreCompleto 👋
        <div class="identity-badges">
            <span class="identity-badge real">
                <i class="fas fa-user"></i> @Model.NombreCompleto
            </span>
            <span class="identity-badge pseudo">
                <i class="fas fa-mask"></i> @@@Model.Seudonimo
            </span>
        </div>
    </h1>
    <p>Gestiona tu contenido público (LadoA) y premium (LadoB)</p>
</div>

<!-- ⭐ CAMBIO: Ya no verificamos TipoUsuario, solo CreadorVerificado -->
@if (!Model.CreadorVerificado)
{
    <div class="alert-verify">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        <div class="alert-content">
            <h5>Verificación Pendiente</h5>
            <p>Completa tu verificación para publicar contenido monetizado (LadoB)</p>
            <a href="/CreatorVerification/Request" class="btn btn-warning btn-sm">
                <i class="fas fa-user-check"></i> Verificar Ahora
            </a>
        </div>
    </div>
}

<!-- ⭐ NUEVO: Cards de tipo de contenido -->
<div class="content-type-cards">
    <a href="/Contenido?filtro=ladoa" class="content-type-card ladoa">
        <div class="content-type-icon ladoa">
            <i class="fas fa-globe fa-lg"></i>
        </div>
        <div class="content-type-title">LadoA - Público</div>
        <div class="content-type-desc">@(ViewBag.TotalLadoA ?? 0) publicaciones</div>
    </a>
    <a href="/Contenido?filtro=ladob" class="content-type-card ladob">
        <div class="content-type-icon ladob">
            <i class="fas fa-lock fa-lg"></i>
        </div>
        <div class="content-type-title">LadoB - Premium</div>
        <div class="content-type-desc">@(ViewBag.TotalLadoB ?? 0) publicaciones</div>
    </a>
</div>

<!-- Billetera/Ganancias -->
<div class="wallet-card">
    <div class="wallet-balance-section">
        <div class="wallet-icon">
            <svg width="24" height="24" fill="none" stroke="white" stroke-width="2" viewBox="0 0 24 24">
                <line x1="12" y1="1" x2="12" y2="23"></line>
                <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
            </svg>
        </div>
        <div>
            <div class="wallet-balance-label">Saldo Disponible</div>
            <div class="wallet-balance">$@Model.Saldo.ToString("N2")</div>
        </div>
    </div>

    <div class="wallet-stats">
        <div class="wallet-stat">
            <svg fill="none" stroke="white" stroke-width="2" viewBox="0 0 24 24">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                <circle cx="9" cy="7" r="4"></circle>
            </svg>
            <div>
                <div class="wallet-stat-label">Suscriptores</div>
                <div class="wallet-stat-value">@(ViewBag.Suscriptores ?? 0)</div>
            </div>
        </div>
        <div class="wallet-stat">
            <svg fill="none" stroke="white" stroke-width="2" viewBox="0 0 24 24">
                <line x1="12" y1="19" x2="12" y2="5"></line>
                <polyline points="5 12 12 5 19 12"></polyline>
            </svg>
            <div>
                <div class="wallet-stat-label">Este mes</div>
                <div class="wallet-stat-value">$@((ViewBag.IngresosEsteMes ?? 0).ToString("N2"))</div>
            </div>
        </div>
    </div>

    <div class="wallet-actions">
        <a href="/Usuario/Billetera" class="btn btn-light btn-sm">
            <i class="fas fa-wallet"></i> Ver Billetera
        </a>
        <a href="/Usuario/Estadisticas" class="btn btn-outline-light btn-sm">
            <i class="fas fa-chart-line"></i> Estadísticas
        </a>
    </div>
</div>

<!-- Stats Grid -->
<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-header">
            <div>
                <div class="stat-label">Ingresos este mes</div>
                <div class="stat-value">$@((ViewBag.IngresosEsteMes ?? 0).ToString("N2"))</div>
                <div class="stat-change">
                    <i class="fas fa-arrow-up"></i> 12.5%
                </div>
            </div>
            <div class="stat-icon icon-success">
                <i class="fas fa-dollar-sign"></i>
            </div>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-header">
            <div>
                <div class="stat-label">Suscriptores</div>
                <div class="stat-value">
                    @if (suscriptores >= 1000)
                    {
                        @((suscriptores / 1000.0).ToString("N1"))

                        <text>K</text>
                    }
                    else
                    {
                        @suscriptores
                    }
                </div>
                <div class="stat-change">
                    <i class="fas fa-arrow-up"></i> +@(ViewBag.NuevosSeguidores ?? 0)
                </div>
            </div>
            <div class="stat-icon icon-primary">
                <i class="fas fa-users"></i>
            </div>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-header">
            <div>
                <div class="stat-label">Publicaciones</div>
                <div class="stat-value">@(ViewBag.Contenidos ?? 0)</div>
                <div class="stat-change">
                    LadoA: @(ViewBag.TotalLadoA ?? 0) | LadoB: @(ViewBag.TotalLadoB ?? 0)
                </div>
            </div>
            <div class="stat-icon icon-info">
                <i class="fas fa-camera"></i>
            </div>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-header">
            <div>
                <div class="stat-label">Likes totales</div>
                <div class="stat-value">
                    @if (likes >= 1000)
                    {
                        @((likes / 1000.0).ToString("N1"))

                        <text>K</text>
                    }
                    else
                    {
                        @likes
                    }
                </div>
                <div class="stat-change">
                    Engagement: @(ViewBag.Engagement ?? 0)%
                </div>
            </div>
            <div class="stat-icon icon-danger">
                <i class="fas fa-heart"></i>
            </div>
        </div>
    </div>
</div>

<!-- Acciones rápidas -->
<div class="actions-bar">
    <span class="actions-label">Acciones rápidas:</span>
    <a href="/Contenido/Crear" class="btn btn-primary btn-sm">
        <i class="fas fa-plus"></i> Nueva Publicación
    </a>
    <a href="/Contenido/Crear" class="btn btn-outline btn-sm">
        <i class="fas fa-image"></i> Subir Foto
    </a>
    <a href="/Contenido/Crear" class="btn btn-outline btn-sm">
        <i class="fas fa-video"></i> Subir Video
    </a>
    <a href="/Contenido" class="btn btn-outline btn-sm">
        <i class="fas fa-folder"></i> Mi Contenido
    </a>
</div>

<!-- Compartir perfil -->
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Compartir perfil</h3>
    </div>
    @{
        var perfilUrl = $"https://Ladodemo.com/{Model.UserName}";
    }
    <div class="link-share">
        <input type="text" class="link-input" id="linkPerfil" value="@perfilUrl" readonly>
        <button class="btn btn-primary btn-sm" onclick="copiarLink()">
            <i class="fas fa-copy"></i>
        </button>
    </div>
</div>

<!-- Grid principal -->
<div class="grid-2">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Ingresos</h3>
        </div>
        <canvas id="ingresosChart" height="120"></canvas>
    </div>

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Actividad Reciente</h3>
        </div>
        <div class="activity-list">
            @if (ViewBag.Actividades != null && ViewBag.Actividades.Count > 0)
            {
                @foreach (var actividad in ViewBag.Actividades)
                {
                    <div class="activity-item">
                        <div class="activity-icon">
                            <i class="fas fa-user-plus" style="color: var(--primary); font-size: 0.875rem;"></i>
                        </div>
                        <div class="activity-content">
                            <div class="activity-text">@actividad.Descripcion</div>
                            <div class="activity-meta">
                                <span class="activity-date">@actividad.FechaTransaccion.ToString("dd/MM HH:mm")</span>
                                <span class="activity-amount">+$@actividad.Monto.ToString("N2")</span>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-inbox"></i>
                    <p>No hay actividad reciente</p>
                </div>
            }
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    function copiarLink() {
        const input = document.getElementById('linkPerfil');
        input.select();
        navigator.clipboard.writeText(input.value).then(() => {
            alert('¡Link copiado!');
        });
    }

    const ctx = document.getElementById('ingresosChart');
    if (ctx) {
        const datosIngresos = [
    @(ViewBag.IngresosSemana1 ?? 0),
    @(ViewBag.IngresosSemana2 ?? 0),
    @(ViewBag.IngresosSemana3 ?? 0),
    @(ViewBag.IngresosSemana4 ?? 0)
        ];

        new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Sem 1', 'Sem 2', 'Sem 3', 'Sem 4'],
                datasets: [{
                    label: 'Ingresos',
                    data: datosIngresos,
                    borderColor: '#32d67b',
                    backgroundColor: 'rgba(50, 214, 123, 0.1)',
                    tension: 0.4,
                    fill: true,
                    pointBackgroundColor: '#32d67b',
                    pointBorderColor: '#fff',
                    pointBorderWidth: 2,
                    pointRadius: 4,
                    pointHoverRadius: 6
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return '$' + value.toLocaleString();
                            }
                        }
                    }
                }
            }
        });
    }
</script>