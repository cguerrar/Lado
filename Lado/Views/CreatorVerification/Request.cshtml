@model CreatorVerificationRequestViewModel
@{
    ViewData["Title"] = "Verificación de Identidad - Creadores";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            @if (ViewBag.SolicitudPendiente == true)
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-5">
                        <div class="mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="#ffc107" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="12" r="10" />
                                <polyline points="12 6 12 12 16 14" />
                            </svg>
                        </div>
                        <h3>Solicitud en Revisión</h3>
                        <p class="text-muted mb-4">Tu solicitud de verificación está siendo procesada por nuestro equipo.</p>
                        <p class="mb-0"><strong>Fecha de solicitud:</strong> @ViewBag.FechaSolicitud.ToString("dd/MM/yyyy HH:mm")</p>
                        <p class="text-muted mb-4">Tiempo estimado de revisión: 24-48 horas</p>
                        <a href="/Dashboard" class="btn btn-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: inline-block; vertical-align: middle; margin-right: 5px;">
                                <polyline points="15 18 9 12 15 6" />
                            </svg>
                            Volver al Dashboard
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-gradient-primary text-white py-4">
                        <div class="d-flex align-items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-3">
                                <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                                <circle cx="8.5" cy="7" r="4" />
                                <polyline points="17 11 19 13 23 9" />
                            </svg>
                            <div>
                                <h4 class="mb-0">Verificación de Identidad</h4>
                                <small class="opacity-75">Completa tu verificación para comenzar a publicar contenido</small>
                            </div>
                        </div>
                    </div>

                    <div class="card-body p-4">
                        <!-- Texto explicativo juvenil -->
                        <div class="alert alert-light border-0 mb-4" style="background: linear-gradient(135deg, #4682B415 0%, #2563EB15 100%); border-left: 4px solid #4682B4 !important;">
                            <div class="d-flex align-items-start">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#4682B4" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="min-width: 24px; margin-right: 12px; margin-top: 2px;">
                                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" />
                                    <polyline points="22 4 12 14.01 9 11.01" />
                                </svg>
                                <div>
                                    <h6 class="mb-2" style="color: #111827; font-weight: 600;">¿Por qué verificarte?</h6>
                                    <p class="mb-2" style="color: #111827; line-height: 1.6;">
                                        <strong>Sabemos que puede ser un rollo</strong>, pero la verificación es súper importante para mantener Lado como un espacio seguro y profesional.
                                    </p>
                                    <p class="mb-2" style="color: #111827; line-height: 1.6;">
                                        🛡️ <strong>Protege a tu comunidad:</strong> Verificamos que eres quien dices ser para que tus fans confíen en ti<br>
                                        💼 <strong>Es la ley:</strong> Por regulaciones legales, necesitamos confirmar tu identidad antes de que publiques contenido<br>
                                        ✅ <strong>Te da credibilidad:</strong> Los creadores verificados se ven más profesionales y confiables
                                    </p>
                                    <p class="mb-0" style="color: #6B7280; font-size: 0.9rem;">
                                        <em>Tus datos están 100% seguros. Solo los usamos para verificar tu identidad y nunca los compartimos con nadie.</em>
                                    </p>
                                </div>
                            </div>
                        </div>

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                @Html.ValidationSummary(false)
                            </div>
                        }

                        <form asp-action="Request" method="post" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()

                            <h5 class="mb-3">Información Personal</h5>

                            <div class="row g-3 mb-4">
                                <div class="col-md-12">
                                    <label asp-for="NombreCompleto" class="form-label">Nombre Completo (tal como aparece en tu documento)</label>
                                    <input asp-for="NombreCompleto" class="form-control" placeholder="Ej: Juan Pérez García" required />
                                    <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="TipoDocumento" class="form-label">Tipo de Documento</label>
                                    <select asp-for="TipoDocumento" class="form-select" required>
                                        <option value="">Selecciona...</option>
                                        <option value="DNI">DNI / Cédula</option>
                                        <option value="Pasaporte">Pasaporte</option>
                                        <option value="Licencia">Licencia de Conducir</option>
                                    </select>
                                    <span asp-validation-for="TipoDocumento" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="NumeroDocumento" class="form-label">Número de Documento</label>
                                    <input asp-for="NumeroDocumento" class="form-control" placeholder="12345678-9" required />
                                    <span asp-validation-for="NumeroDocumento" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Pais" class="form-label">País</label>
                                    <select asp-for="Pais" class="form-select" required>
                                        <option value="">Selecciona tu país</option>
                                        <option value="CL">Chile</option>
                                        <option value="MX">México</option>
                                        <option value="AR">Argentina</option>
                                        <option value="CO">Colombia</option>
                                        <option value="ES">España</option>
                                        <option value="PE">Perú</option>
                                        <option value="OTHER">Otro</option>
                                    </select>
                                    <span asp-validation-for="Pais" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Ciudad" class="form-label">Ciudad</label>
                                    <input asp-for="Ciudad" class="form-control" placeholder="Santiago" required />
                                    <span asp-validation-for="Ciudad" class="text-danger"></span>
                                </div>

                                <div class="col-md-8">
                                    <label asp-for="Direccion" class="form-label">Dirección</label>
                                    <input asp-for="Direccion" class="form-control" placeholder="Av. Libertador 1234" required />
                                    <span asp-validation-for="Direccion" class="text-danger"></span>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="Telefono" class="form-label">Teléfono</label>
                                    <input asp-for="Telefono" type="tel" class="form-control" placeholder="+56912345678" required />
                                    <span asp-validation-for="Telefono" class="text-danger"></span>
                                </div>
                            </div>

                            <hr class="my-4" />

                            <h5 class="mb-3">Documentos Requeridos</h5>

                            <div class="mb-3">
                                <label asp-for="DocumentoIdentidad" class="form-label">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: inline-block; vertical-align: middle;">
                                        <rect x="2" y="6" width="20" height="12" rx="2" />
                                        <circle cx="8" cy="12" r="2" />
                                        <path d="M14 10h4M14 14h4" />
                                    </svg>
                                    Documento de Identidad (Frente) <span class="text-danger">*</span>
                                </label>
                                <input asp-for="DocumentoIdentidad" type="file" class="form-control" accept=".jpg,.jpeg,.png,.pdf" required />
                                <small class="form-text text-muted">Foto clara del documento completo. Formatos: JPG, PNG, PDF (máx 10MB)</small>
                                <span asp-validation-for="DocumentoIdentidad" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="SelfieConDocumento" class="form-label">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: inline-block; vertical-align: middle;">
                                        <path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z" />
                                        <circle cx="12" cy="13" r="4" />
                                    </svg>
                                    Selfie sosteniendo tu Documento <span class="text-danger">*</span>
                                </label>
                                <input asp-for="SelfieConDocumento" type="file" class="form-control" accept=".jpg,.jpeg,.png" required />
                                <small class="form-text text-muted">Foto tuya sosteniendo tu documento junto a tu rostro (ambos deben verse claramente)</small>
                                <span asp-validation-for="SelfieConDocumento" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="PruebaDireccion" class="form-label">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: inline-block; vertical-align: middle;">
                                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                                        <polyline points="14 2 14 8 20 8" />
                                    </svg>
                                    Prueba de Domicilio (Opcional)
                                </label>
                                <input asp-for="PruebaDireccion" type="file" class="form-control" accept=".jpg,.jpeg,.png,.pdf" />
                                <small class="form-text text-muted">Factura de servicios, extracto bancario o contrato de arriendo (últimos 3 meses)</small>
                            </div>

                            <div class="alert alert-warning border-0 mb-4">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: inline-block; vertical-align: middle; margin-right: 8px;">
                                    <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z" />
                                    <line x1="12" y1="9" x2="12" y2="13" />
                                    <line x1="12" y1="17" x2="12.01" y2="17" />
                                </svg>
                                <strong>Importante:</strong> Tu información personal será tratada de forma confidencial y solo será utilizada para verificar tu identidad.
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: inline-block; vertical-align: middle; margin-right: 8px;">
                                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" />
                                        <polyline points="22 4 12 14.01 9 11.01" />
                                    </svg>
                                    Enviar Solicitud de Verificación
                                </button>
                                <a href="/Dashboard" class="btn btn-outline-secondary">Cancelar</a>
                            </div>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #4682B4 0%, #2563EB 100%);
    }

    .form-control:focus, .form-select:focus {
        border-color: #4682B4;
        box-shadow: 0 0 0 0.2rem rgba(70, 130, 180, 0.25);
    }

    .btn-primary {
        background: #2563EB;
        border-color: #2563EB;
        transition: all 0.2s ease;
    }

        .btn-primary:hover {
            background: #1E40AF;
            border-color: #1E40AF;
            transform: translateY(-1px);
        }

    .btn-outline-secondary:hover {
        background: #6B7280;
        border-color: #6B7280;
    }

    .card {
        border-radius: 12px;
        overflow: hidden;
    }

    .card-header {
        border-radius: 12px 12px 0 0 !important;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .container {
            padding: 0 16px;
        }

        .card-body {
            padding: 24px !important;
        }

        .card-header {
            padding: 24px !important;
        }

        .alert {
            font-size: 0.9rem;
        }
    }
</style>