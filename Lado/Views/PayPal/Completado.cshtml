@{
    ViewData["Title"] = "Pago Completado";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var saldoActual = ViewBag.SaldoActual ?? 0m;
}

<style>
    .resultado-container {
        max-width: 500px;
        margin: 80px auto;
        padding: 0 20px;
        text-align: center;
    }

    .resultado-card {
        background: var(--card-bg);
        border-radius: 16px;
        padding: 48px 32px;
        box-shadow: var(--shadow-md);
    }

    .success-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 24px;
        animation: scaleIn 0.5s ease-out;
    }

    .success-icon svg {
        width: 40px;
        height: 40px;
        color: white;
    }

    @@keyframes scaleIn {
        0% { transform: scale(0); opacity: 0; }
        50% { transform: scale(1.1); }
        100% { transform: scale(1); opacity: 1; }
    }

    .resultado-title {
        font-size: 24px;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 12px;
    }

    .resultado-message {
        font-size: 15px;
        color: var(--text-secondary);
        margin-bottom: 24px;
        line-height: 1.5;
    }

    .saldo-box {
        background: rgba(var(--success-rgb), 0.1);
        border-radius: 12px;
        padding: 16px;
        margin-bottom: 32px;
    }

    .saldo-label {
        font-size: 13px;
        color: var(--text-secondary);
        margin-bottom: 4px;
    }

    .saldo-value {
        font-size: 28px;
        font-weight: 700;
        color: var(--success);
    }

    .resultado-actions {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .btn-primary {
        padding: 14px 24px;
        background: var(--primary);
        color: white;
        border: none;
        border-radius: 10px;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        text-decoration: none;
        transition: all 0.2s;
    }

    .btn-primary:hover {
        background: var(--primary-dark);
        transform: translateY(-2px);
    }

    .btn-secondary {
        padding: 14px 24px;
        background: transparent;
        color: var(--text-secondary);
        border: 1px solid var(--border-color);
        border-radius: 10px;
        font-size: 15px;
        font-weight: 500;
        cursor: pointer;
        text-decoration: none;
        transition: all 0.2s;
    }

    .btn-secondary:hover {
        background: var(--bg-secondary);
        color: var(--text-primary);
    }
</style>

<div class="resultado-container">
    <div class="resultado-card">
        <div class="success-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
        </div>

        <h1 class="resultado-title">Pago Completado</h1>
        <p class="resultado-message">
            Tu recarga se ha procesado exitosamente. El saldo ya esta disponible en tu cuenta.
        </p>

        <div class="saldo-box">
            <p class="saldo-label">Tu saldo actual</p>
            <p class="saldo-value">$@(((decimal)saldoActual).ToString("N2"))</p>
        </div>

        <div class="resultado-actions">
            <a href="@Url.Action("MiBilletera", "FanBilletera")" class="btn-primary">
                Ir a Mi Billetera
            </a>
            <a href="@Url.Action("Index", "Feed")" class="btn-secondary">
                Explorar Contenido
            </a>
        </div>
    </div>
</div>
