@model List<Lado.Models.Reporte>
@{
    ViewData["Title"] = "Mis Reportes";
    var pendientes = Model.Count(r => r.Estado == "Pendiente");
    var resueltos = Model.Count(r => r.Estado == "Resuelto");
}

<div class="container py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="fas fa-flag text-danger"></i> Mis Reportes</h2>
            <p class="text-muted">
                <span class="badge bg-warning">@pendientes Pendientes</span>
                <span class="badge bg-success ms-2">@resueltos Resueltos</span>
            </p>
        </div>
        <div class="col-md-4 text-end">
            <a href="@Url.Action("Index", "Dashboard")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </div>
    </div>

    @if (Model.Any())
    {
        <!-- Lista de Reportes -->
        <div class="row g-3">
            @foreach (var reporte in Model)
            {
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm h-100 @(reporte.Estado == "Pendiente" ? "border-warning" : "")">
                        <div class="card-header @(reporte.Estado == "Pendiente" ? "bg-warning bg-opacity-10" : "bg-success bg-opacity-10")">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="badge @(reporte.Estado == "Pendiente" ? "bg-warning" : "bg-success")">
                                        @reporte.Estado
                                    </span>
                                    <span class="badge bg-secondary ms-2">
                                        @reporte.TipoReporte
                                    </span>
                                </div>
                                <small class="text-muted">@reporte.FechaReporte.ToString("dd/MM/yyyy")</small>
                            </div>
                        </div>
                        <div class="card-body">
                            <!-- Usuario/Contenido Reportado -->
                            @if (reporte.TipoReporte == "Usuario" && reporte.UsuarioReportado != null)
                            {
                                <div class="mb-3">
                                    <strong class="text-muted d-block mb-2">Usuario reportado:</strong>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(reporte.UsuarioReportado.FotoPerfil))
                                        {
                                            <img src="@reporte.UsuarioReportado.FotoPerfil"
                                                 class="rounded-circle me-2" style="width: 40px; height: 40px;">
                                        }
                                        else
                                        {
                                            <div class="rounded-circle bg-primary text-white me-2 d-flex align-items-center justify-content-center"
                                                 style="width: 40px; height: 40px;">
                                                @reporte.UsuarioReportado.UserName.Substring(0, 1).ToUpper()
                                            </div>
                                        }
                                        <strong>@reporte.UsuarioReportado.UserName</strong>
                                    </div>
                                </div>
                            }

                            @if (reporte.TipoReporte == "Contenido" && reporte.ContenidoReportado != null)
                            {
                                <div class="mb-3">
                                    <strong class="text-muted d-block mb-2">Contenido reportado:</strong>
                                    <p class="mb-0">
                                        @(reporte.ContenidoReportado.Descripcion.Length > 100
                                            ? reporte.ContenidoReportado.Descripcion.Substring(0, 100) + "..."
                                            : reporte.ContenidoReportado.Descripcion)
                                    </p>
                                </div>
                            }

                            <!-- Motivo -->
                            <div class="mb-3">
                                <strong class="text-muted d-block mb-1">Motivo:</strong>
                                <p class="mb-0">@reporte.Motivo</p>
                            </div>

                            <!-- Descripción -->
                            @if (!string.IsNullOrEmpty(reporte.Descripcion))
                            {
                                <div class="mb-3">
                                    <strong class="text-muted d-block mb-1">Descripción:</strong>
                                    <p class="mb-0 small">@reporte.Descripcion</p>
                                </div>
                            }

                            <!-- Estado y Acción -->
                            @if (reporte.Estado == "Resuelto")
                            {
                                <div class="alert alert-success mb-0">
                                    <strong>Resuelto el @reporte.FechaResolucion?.ToString("dd/MM/yyyy")</strong>
                                    @if (!string.IsNullOrEmpty(reporte.Accion))
                                    {
                                        <br>
                                        <small>Acción tomada: @reporte.Accion</small>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning mb-0">
                                    <i class="fas fa-clock"></i>
                                    <strong>En revisión</strong><br>
                                    <small>Nuestro equipo revisará este reporte pronto</small>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <!-- Sin reportes -->
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                <h5 class="text-muted">No has realizado ningún reporte</h5>
                <p class="text-muted">
                    Si encuentras contenido o usuarios que violen nuestras políticas,
                    puedes reportarlos utilizando el botón de reporte.
                </p>
            </div>
        </div>
    }
</div>

<style>
    .card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15) !important;
        }
</style>