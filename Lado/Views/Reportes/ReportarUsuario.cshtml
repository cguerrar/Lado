@{
    ViewData["Title"] = "Reportar Usuario";
    var usuario = ViewBag.Usuario as Lado.Models.ApplicationUser;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-flag"></i> Reportar Usuario
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Usuario a reportar -->
                    <div class="alert alert-warning mb-4">
                        <div class="d-flex align-items-center">
                            @if (!string.IsNullOrEmpty(usuario.FotoPerfil))
                            {
                                <img src="@usuario.FotoPerfil" alt="@usuario.UserName"
                                     class="rounded-circle me-3" style="width: 50px; height: 50px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="rounded-circle bg-primary text-white me-3 d-flex align-items-center justify-content-center"
                                     style="width: 50px; height: 50px; font-size: 1.5rem;">
                                    <strong>@usuario.UserName.Substring(0, 1).ToUpper()</strong>
                                </div>
                            }
                            <div>
                                <strong>Estás reportando a: @usuario.UserName</strong><br>
                                <small>Este reporte será revisado por nuestro equipo de moderación</small>
                            </div>
                        </div>
                    </div>

                    <!-- Formulario -->
                    <form method="post" asp-action="ReportarUsuario">
                        <input type="hidden" name="usuarioReportadoId" value="@usuario.Id" />

                        <div class="mb-3">
                            <label class="form-label">
                                <strong>Motivo del reporte</strong>
                                <span class="text-danger">*</span>
                            </label>
                            <select name="motivo" class="form-select" required>
                                <option value="">Selecciona un motivo...</option>
                                <option value="Contenido inapropiado">Contenido inapropiado</option>
                                <option value="Spam o publicidad">Spam o publicidad</option>
                                <option value="Acoso o intimidación">Acoso o intimidación</option>
                                <option value="Suplantación de identidad">Suplantación de identidad</option>
                                <option value="Estafa o fraude">Estafa o fraude</option>
                                <option value="Violación de términos">Violación de términos de servicio</option>
                                <option value="Otro">Otro</option>
                            </select>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">
                                <strong>Descripción detallada</strong>
                                <span class="text-muted">(Opcional)</span>
                            </label>
                            <textarea name="descripcion" class="form-control" rows="5"
                                      placeholder="Proporciona más detalles sobre el motivo del reporte..."></textarea>
                            <small class="text-muted">
                                Cuanto más detallado sea tu reporte, más rápido podremos actuar.
                            </small>
                        </div>

                        <!-- Información importante -->
                        <div class="alert alert-info">
                            <h6 class="alert-heading">
                                <i class="fas fa-info-circle"></i> Información importante
                            </h6>
                            <ul class="mb-0 small">
                                <li>Los reportes falsos pueden resultar en suspensión de tu cuenta</li>
                                <li>Tu identidad permanecerá anónima para el usuario reportado</li>
                                <li>Recibirás una notificación cuando se revise tu reporte</li>
                                <li>El proceso de revisión puede tomar hasta 48 horas</li>
                            </ul>
                        </div>

                        <!-- Botones -->
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-flag"></i> Enviar Reporte
                            </button>
                            <a href="@Url.Action("Index", "Dashboard")" class="btn btn-outline-secondary">
                                Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
