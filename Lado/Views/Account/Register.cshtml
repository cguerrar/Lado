    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.6.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.12/jquery.validation.unobtrusive.min.js"></script>
    <script>
        // ========================================
        // ESTADO DE DISPONIBILIDAD
        // ========================================
        let emailAvailable = null;
        let usernameAvailable = null;
        let seudonimoAvailable = null;

        // ========================================
        // VALIDACIÓN DEL FORMULARIO ANTES DE SUBMIT
        // ========================================
        document.getElementById('registerForm').addEventListener('submit', function(e) {
            let errors = [];

            // Verificar campos vacíos
            const email = document.getElementById('emailInput').value.trim();
            const username = document.getElementById('usernameInput').value.trim();
            const seudonimo = document.getElementById('seudonimoInput').value.trim();
            const nombre = document.querySelector('input[name="NombreCompleto"]').value.trim();
            const password = document.getElementById('passwordInput').value;
            const confirmPassword = document.querySelector('input[name="ConfirmarContraseña"]').value;
            const acceptTerms = document.querySelector('input[name="AceptaTerminos"]').checked;

            // Validar campos requeridos
            if (!email) errors.push('El email es requerido');
            if (!username) errors.push('El nombre de usuario es requerido');
            if (username.length < 3) errors.push('El nombre de usuario debe tener al menos 3 caracteres');
            if (!/^[a-zA-Z0-9_]+$/.test(username)) errors.push('El nombre de usuario solo puede contener letras, números y guión bajo');
            if (!seudonimo) errors.push('El seudónimo es requerido');
            if (seudonimo.length < 3) errors.push('El seudónimo debe tener al menos 3 caracteres');
            if (!nombre) errors.push('El nombre completo es requerido');
            if (!password) errors.push('La contraseña es requerida');
            if (password.length < 8) errors.push('La contraseña debe tener al menos 8 caracteres');
            if (!/[a-zA-Z]/.test(password)) errors.push('La contraseña debe contener letras');
            if (!/[0-9!@@#$%^&*(),.?":{}|<>]/.test(password)) errors.push('La contraseña debe contener números o símbolos');
            if (password !== confirmPassword) errors.push('Las contraseñas no coinciden');
            if (!acceptTerms) errors.push('Debes aceptar los términos y condiciones');

            // Verificar disponibilidad (solo bloquear si sabemos que NO está disponible)
            if (emailAvailable === false) errors.push('El email ya está registrado');
            if (usernameAvailable === false) errors.push('El nombre de usuario ya está en uso');
            if (seudonimoAvailable === false) errors.push('El seudónimo ya está en uso');

            // NOTA: Si la verificación está pendiente (null), permitimos el envío
            // El servidor validará la disponibilidad de todas formas

            if (errors.length > 0) {
                e.preventDefault();
                alert('Por favor corrige los siguientes errores:\n\n• ' + errors.join('\n• '));
                return false;
            }
        });

        // ========================================
        // TOGGLE PASSWORD
        // ========================================
        function togglePassword() {
            const passwordInput = document.getElementById('passwordInput');
            const toggleIcon = document.getElementById('toggleIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }

        // ========================================
        // PASSWORD VALIDATION
        // ========================================
        const passwordInput = document.getElementById('passwordInput');
        const requirements = document.querySelectorAll('.requirement');

        passwordInput.addEventListener('input', function() {
            const value = this.value;
            
            // Check length
            if (value.length >= 8) {
                requirements[0].classList.add('valid');
                requirements[0].classList.remove('invalid');
                requirements[0].querySelector('i').classList.remove('fa-times');
                requirements[0].querySelector('i').classList.add('fa-check');
            } else {
                requirements[0].classList.remove('valid');
                requirements[0].classList.add('invalid');
                requirements[0].querySelector('i').classList.remove('fa-check');
                requirements[0].querySelector('i').classList.add('fa-times');
            }
            
            // Check number or symbol
            if (/[0-9!@@#$%^&*(),.?":{}|<>]/.test(value)) {
                requirements[1].classList.add('valid');
                requirements[1].classList.remove('invalid');
                requirements[1].querySelector('i').classList.remove('fa-times');
                requirements[1].querySelector('i').classList.add('fa-check');
            } else {
                requirements[1].classList.remove('valid');
                requirements[1].classList.add('invalid');
                requirements[1].querySelector('i').classList.remove('fa-check');
                requirements[1].querySelector('i').classList.add('fa-times');
            }
            
            // Check letter
            if (/[a-zA-Z]/.test(value)) {
                requirements[2].classList.add('valid');
                requirements[2].classList.remove('invalid');
                requirements[2].querySelector('i').classList.remove('fa-times');
                requirements[2].querySelector('i').classList.add('fa-check');
            } else {
                requirements[2].classList.remove('valid');
                requirements[2].classList.add('invalid');
                requirements[2].querySelector('i').classList.remove('fa-check');
                requirements[2].querySelector('i').classList.add('fa-times');
            }
        });

        // ========================================
        // ⭐ NUEVO: VERIFICACIÓN DE DISPONIBILIDAD (AJAX)
        // ========================================
        let emailTimeout, usernameTimeout, seudonimoTimeout;

        // Email availability
        document.getElementById('emailInput').addEventListener('input', function() {
            const email = this.value.trim();
            const indicator = document.getElementById('emailIndicator');

            clearTimeout(emailTimeout);
            emailAvailable = null; // Reset estado

            if (email.length < 3 || !email.includes('@@')) {
                indicator.className = 'availability-indicator';
                return;
            }

            indicator.className = 'availability-indicator checking';
            indicator.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';

            emailTimeout = setTimeout(async () => {
                try {
                    const controller = new AbortController();
                    const timeoutId = setTimeout(() => controller.abort(), 5000); // 5 segundos timeout

                    const response = await fetch('/Account/CheckEmailAvailability', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                        body: 'email=' + encodeURIComponent(email),
                        signal: controller.signal
                    });
                    clearTimeout(timeoutId);

                    if (!response.ok) throw new Error('Network error');
                    const data = await response.json();

                    emailAvailable = data.available;
                    indicator.className = data.available ? 'availability-indicator available' : 'availability-indicator unavailable';
                    indicator.innerHTML = data.available
                        ? '<i class="fas fa-check"></i>'
                        : '<i class="fas fa-times"></i>';
                } catch (error) {
                    // En caso de error, ocultar indicador y permitir envío
                    indicator.className = 'availability-indicator';
                    emailAvailable = null; // El servidor validará
                }
            }, 600);
        });

        // Username availability
        document.getElementById('usernameInput').addEventListener('input', function() {
            const username = this.value.trim();
            const indicator = document.getElementById('usernameIndicator');

            clearTimeout(usernameTimeout);
            usernameAvailable = null; // Reset estado

            // Validar formato en tiempo real
            if (username.length > 0 && !/^[a-zA-Z0-9_]+$/.test(username)) {
                indicator.className = 'availability-indicator unavailable';
                indicator.innerHTML = '<i class="fas fa-times"></i>';
                usernameAvailable = false;
                return;
            }

            if (username.length < 3) {
                indicator.className = 'availability-indicator';
                return;
            }

            indicator.className = 'availability-indicator checking';
            indicator.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';

            usernameTimeout = setTimeout(async () => {
                try {
                    const controller = new AbortController();
                    const timeoutId = setTimeout(() => controller.abort(), 5000);

                    const response = await fetch('/Account/CheckUsernameAvailability', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                        body: 'username=' + encodeURIComponent(username),
                        signal: controller.signal
                    });
                    clearTimeout(timeoutId);

                    if (!response.ok) throw new Error('Network error');
                    const data = await response.json();

                    usernameAvailable = data.available;
                    indicator.className = data.available ? 'availability-indicator available' : 'availability-indicator unavailable';
                    indicator.innerHTML = data.available
                        ? '<i class="fas fa-check"></i>'
                        : '<i class="fas fa-times"></i>';
                } catch (error) {
                    indicator.className = 'availability-indicator';
                    usernameAvailable = null;
                }
            }, 600);
        });

        // Seudónimo availability
        document.getElementById('seudonimoInput').addEventListener('input', function() {
            const seudonimo = this.value.trim();
            const indicator = document.getElementById('seudonimoIndicator');

            clearTimeout(seudonimoTimeout);
            seudonimoAvailable = null; // Reset estado

            if (seudonimo.length < 3) {
                indicator.className = 'availability-indicator';
                return;
            }

            indicator.className = 'availability-indicator checking';
            indicator.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';

            seudonimoTimeout = setTimeout(async () => {
                try {
                    const controller = new AbortController();
                    const timeoutId = setTimeout(() => controller.abort(), 5000);

                    const response = await fetch('/Account/CheckSeudonimoAvailability', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                        body: 'seudonimo=' + encodeURIComponent(seudonimo),
                        signal: controller.signal
                    });
                    clearTimeout(timeoutId);

                    if (!response.ok) throw new Error('Network error');
                    const data = await response.json();

                    seudonimoAvailable = data.available;
                    indicator.className = data.available ? 'availability-indicator available' : 'availability-indicator unavailable';
                    indicator.innerHTML = data.available
                        ? '<i class="fas fa-check"></i>'
                        : '<i class="fas fa-times"></i>';
                } catch (error) {
                    indicator.className = 'availability-indicator';
                    seudonimoAvailable = null;
                }
            }, 600);
        });

        // Validación visual del checkbox de términos
        document.querySelector('input[name="AceptaTerminos"]').addEventListener('change', function() {
            const label = this.closest('.form-check');
            if (this.checked) {
                label.style.borderColor = 'transparent';
            }
        });

        // ========================================
        // SELECCIÓN DE LADO PREFERIDO
        // ========================================
        document.querySelectorAll('.lado-option input[type="radio"]').forEach(radio => {
            radio.addEventListener('change', function() {
                // Remover clase 'selected' de todas las opciones
                document.querySelectorAll('.lado-option').forEach(opt => {
                    opt.classList.remove('selected');
                });
                // Agregar clase 'selected' a la opción seleccionada
                this.closest('.lado-option').classList.add('selected');
            });
        });

        // ========================================
        // DETECCIÓN AUTOMÁTICA DE ZONA HORARIA
        // ========================================
        (function() {
            try {
                // Detectar zona horaria del navegador (formato IANA: America/Santiago, etc.)
                const zonaHoraria = Intl.DateTimeFormat().resolvedOptions().timeZone;
                if (zonaHoraria) {
                    document.getElementById('zonaHorariaInput').value = zonaHoraria;
                    console.log('Zona horaria detectada:', zonaHoraria);
                }
            } catch (e) {
                console.warn('No se pudo detectar la zona horaria:', e);
            }
        })();
    </script>
