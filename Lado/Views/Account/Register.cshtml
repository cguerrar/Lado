@model Lado.ViewModels.RegisterViewModel
@inject Lado.Services.ILocalizationService Localizer
@{
    ViewData["Title"] = Localizer.Get("Auth_Register") + " - Lado";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #4682B4;
            --primary-dark: #36648B;
            --primary-light: #e6f9ee;
            --bg: #ffffff;
            --fg: #111827;
            --muted: #6b7280;
            --light-bg: #f9fafb;
            --line: #e5e7eb;
            --radius-sm: 10px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: var(--bg);
            min-height: 100vh;
        }

        .register-container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            min-height: 100vh;
        }

        .register-left {
            padding: 48px 80px;
            display: flex;
            flex-direction: column;
            background: var(--bg);
            overflow-y: auto;
        }

        /* Logo */
        .brand {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            text-decoration: none;
            color: var(--fg);
            font-weight: 800;
            font-size: 1.5rem;
            transition: transform 0.2s ease;
            margin-bottom: 48px;
        }

        .brand:hover {
            transform: scale(1.02);
        }

        .brand-badge {
            width: 36px;
            height: 36px;
            border-radius: 8px;
            background: var(--primary);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 1.25rem;
            box-shadow: 0 2px 8px rgba(70, 130, 180, 0.25);
        }

        .form-wrapper {
            max-width: 480px;
            width: 100%;
        }

        .form-header {
            margin-bottom: 40px;
        }

        .form-header h1 {
            color: var(--fg);
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 16px;
            line-height: 1.1;
            letter-spacing: -0.02em;
        }

        .form-header p {
            color: var(--muted);
            font-size: 1rem;
            line-height: 1.5;
        }

        .form-header p a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
        }

        .form-header p a:hover {
            text-decoration: underline;
        }

        .form-section {
            margin-bottom: 32px;
        }

        .section-title {
            color: var(--fg);
            font-size: 1.125rem;
            font-weight: 600;
            margin-bottom: 20px;
        }

        /* ⭐ NUEVO: Info Badge para explicar el concepto */
        .info-badge {
            background: var(--primary-light);
            border: 1px solid var(--primary);
            border-radius: var(--radius-sm);
            padding: 16px;
            margin-bottom: 24px;
            display: flex;
            gap: 12px;
            align-items: flex-start;
        }

        .info-badge-icon {
            color: var(--primary);
            font-size: 1.25rem;
            flex-shrink: 0;
            margin-top: 2px;
        }

        .info-badge-content {
            flex: 1;
        }

        .info-badge-title {
            font-weight: 600;
            color: var(--fg);
            margin-bottom: 4px;
            font-size: 0.9375rem;
        }

        .info-badge-text {
            color: var(--muted);
            font-size: 0.875rem;
            line-height: 1.5;
        }

        .form-group {
            margin-bottom: 24px;
        }

        .form-label {
            display: block;
            font-weight: 500;
            color: var(--fg);
            margin-bottom: 8px;
            font-size: 0.9375rem;
        }

        .form-label-help {
            font-weight: 400;
            color: var(--muted);
            font-size: 0.875rem;
            margin-left: 4px;
        }

        .form-control {
            width: 100%;
            padding: 12px 16px;
            border: 1px solid var(--line);
            border-radius: var(--radius-sm);
            font-size: 1rem;
            transition: all 0.15s ease;
            background: var(--bg);
            color: var(--fg);
            font-family: inherit;
        }

        .form-control::placeholder {
            color: #9ca3af;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px var(--primary-light);
        }

        .input-group {
            display: flex;
        }

        .input-group-text {
            background: var(--light-bg);
            border: 1px solid var(--line);
            border-right: none;
            padding: 12px 16px;
            border-radius: var(--radius-sm) 0 0 var(--radius-sm);
            color: var(--muted);
            font-weight: 500;
        }

        .input-group .form-control {
            border-radius: 0 var(--radius-sm) var(--radius-sm) 0;
        }

        .password-toggle {
            position: relative;
        }

        .password-toggle-btn {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: var(--muted);
            cursor: pointer;
            padding: 4px;
        }

        .password-requirements {
            margin-top: 12px;
            display: flex;
            flex-direction: column;
            gap: 6px;
        }

        .requirement {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 0.875rem;
            color: var(--muted);
        }

        .requirement i {
            width: 16px;
            font-size: 0.75rem;
        }

        .requirement.valid {
            color: var(--primary);
        }

        .requirement.invalid {
            color: #ef4444;
        }

        .text-danger {
            color: #ef4444;
            font-size: 0.875rem;
            margin-top: 6px;
            display: block;
        }

        .form-check {
            display: flex;
            align-items: flex-start;
            margin-bottom: 32px;
        }

        .form-check-input {
            width: 18px;
            height: 18px;
            margin-right: 10px;
            margin-top: 3px;
            cursor: pointer;
            accent-color: var(--primary);
            flex-shrink: 0;
        }

        .form-check-label {
            font-size: 0.9375rem;
            color: var(--muted);
            line-height: 1.6;
        }

        .form-check-label a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 500;
        }

        .form-check-label a:hover {
            text-decoration: underline;
        }

        .btn-register {
            width: 100%;
            padding: 14px 24px;
            background: var(--primary);
            color: white;
            border: none;
            border-radius: var(--radius-sm);
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .btn-register:hover {
            background: var(--primary-dark);
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(70, 130, 180, 0.3);
        }

        .btn-register i {
            font-size: 1rem;
        }

        .alert {
            padding: 12px 16px;
            border-radius: var(--radius-sm);
            margin-bottom: 24px;
            font-size: 0.9375rem;
        }

        .alert-danger {
            background: #fee2e2;
            color: #991b1b;
            border: 1px solid #fca5a5;
        }

        .register-right {
            position: relative;
            overflow: hidden;
        }

        .image-container {
            position: absolute;
            inset: 0;
            width: 100%;
            height: 100%;
        }

        .image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
        }

        /* ⭐ NUEVO: Indicador de disponibilidad */
        .availability-indicator {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            display: none;
        }

        .availability-indicator.checking {
            display: block;
            color: var(--muted);
        }

        .availability-indicator.available {
            display: block;
            color: var(--primary);
        }

        .availability-indicator.unavailable {
            display: block;
            color: #ef4444;
        }

        .field-with-indicator {
            position: relative;
        }

        @@media (max-width: 1024px) {
            .register-container {
                grid-template-columns: 1fr;
            }

            .register-right {
                display: none;
            }

            .register-left {
                padding: 40px 32px;
                justify-content: flex-start;
            }

            .brand {
                margin-bottom: 40px;
            }

            .form-wrapper {
                max-width: 540px;
                margin: 0 auto;
            }
        }

        @@media (max-width: 640px) {
            .register-left {
                padding: 32px 24px;
            }

            .form-header h1 {
                font-size: 2rem;
            }

            .brand {
                font-size: 1.35rem;
                margin-bottom: 32px;
            }

            .brand-badge {
                width: 32px;
                height: 32px;
                font-size: 1.1rem;
            }
        }

        /* ========================================
           OPTIMIZACIONES MOVIL AVANZADAS
           ======================================== */
        @@media (max-width: 479px) {
            body {
                min-height: 100vh;
                min-height: -webkit-fill-available;
            }

            .register-left {
                padding: 20px 16px;
                padding-top: calc(20px + env(safe-area-inset-top));
                padding-bottom: calc(24px + env(safe-area-inset-bottom));
            }

            .brand {
                margin-bottom: 24px;
            }

            .brand img {
                height: 48px !important;
            }

            .form-header {
                margin-bottom: 28px;
            }

            .form-header h1 {
                font-size: 1.5rem;
            }

            .form-header p {
                font-size: 0.9rem;
            }

            /* Info badge compacto */
            .info-badge {
                padding: 12px;
                margin-bottom: 20px;
            }

            .info-badge-icon {
                font-size: 1.1rem;
            }

            .info-badge-title {
                font-size: 0.875rem;
            }

            .info-badge-text {
                font-size: 0.8rem;
            }

            .section-title {
                font-size: 1rem;
                margin-bottom: 16px;
            }

            /* Inputs optimizados para movil */
            .form-control {
                font-size: 16px; /* Previene zoom en iOS */
                padding: 12px 14px;
                border-radius: 8px;
                -webkit-appearance: none;
            }

            .form-label {
                font-size: 0.875rem;
                margin-bottom: 6px;
            }

            .form-label-help {
                display: block;
                margin-left: 0;
                margin-top: 2px;
                font-size: 0.75rem;
            }

            .form-group {
                margin-bottom: 18px;
            }

            .input-group-text {
                padding: 12px 14px;
                font-size: 0.9rem;
            }

            /* Password requirements compactos */
            .password-requirements {
                margin-top: 10px;
                gap: 4px;
            }

            .requirement {
                font-size: 0.8rem;
            }

            /* Selector de Lado compacto */
            .lado-selector {
                flex-direction: column;
                gap: 10px;
            }

            .lado-option-content {
                padding: 12px;
            }

            .lado-icon {
                width: 38px;
                height: 38px;
                font-size: 1rem;
            }

            .lado-title {
                font-size: 0.875rem;
            }

            .lado-desc {
                font-size: 0.75rem;
            }

            /* Checkbox mas grande para touch */
            .form-check {
                margin-bottom: 24px;
            }

            .form-check-input {
                width: 22px;
                height: 22px;
                min-width: 22px;
            }

            .form-check-label {
                font-size: 0.8rem;
                line-height: 1.5;
            }

            /* Boton registro touch-friendly */
            .btn-register {
                padding: 14px 20px;
                font-size: 1rem;
                border-radius: 10px;
                min-height: 52px;
            }

            .btn-social {
                padding: 14px;
                min-height: 50px;
                border-radius: 10px;
            }

            .divider {
                margin: 20px 0;
            }

            .divider span {
                font-size: 0.75rem;
            }

            /* Indicadores de disponibilidad */
            .availability-indicator {
                right: 10px;
            }

            .availability-indicator i {
                font-size: 0.9rem;
            }

            .text-danger {
                font-size: 0.8rem;
            }

            .alert {
                padding: 10px 14px;
                font-size: 0.85rem;
            }
        }

        /* Ultra pequeño (iPhone SE, etc) */
        @@media (max-width: 359px) {
            .register-left {
                padding: 16px 14px;
                padding-bottom: calc(20px + env(safe-area-inset-bottom));
            }

            .form-header h1 {
                font-size: 1.35rem;
            }

            .form-control {
                padding: 11px 12px;
            }

            .lado-option-content {
                padding: 10px;
                gap: 10px;
            }

            .lado-icon {
                width: 34px;
                height: 34px;
            }

            .btn-register {
                padding: 12px 16px;
                font-size: 0.95rem;
            }

            .form-check-label {
                font-size: 0.75rem;
            }
        }

        /* Touch device optimizations */
        @@media (hover: none) and (pointer: coarse) {
            * {
                -webkit-tap-highlight-color: transparent;
            }

            .brand:hover {
                transform: none;
            }

            .brand:active {
                transform: scale(0.98);
            }

            .btn-register:hover {
                transform: none;
                box-shadow: none;
            }

            .btn-register:active {
                transform: scale(0.98);
                opacity: 0.9;
            }

            .btn-social:hover {
                transform: none;
                box-shadow: none;
                background: var(--bg);
            }

            .btn-social:active {
                background: var(--light-bg);
                transform: scale(0.98);
            }

            .lado-option:hover .lado-option-content {
                border-color: var(--line);
                background: var(--bg);
            }

            .lado-option:active .lado-option-content {
                background: rgba(70, 130, 180, 0.05);
            }

            .lado-option.selected:hover .lado-option-content,
            .lado-option.selected:active .lado-option-content {
                border-color: var(--primary);
                background: rgba(70, 130, 180, 0.08);
            }

            .password-toggle-btn:active {
                background: var(--light-bg);
                border-radius: 4px;
            }

            .form-header p a:active {
                opacity: 0.7;
            }

            .form-check-label a:active {
                opacity: 0.7;
            }

            /* Scroll suave en iOS */
            .register-left {
                -webkit-overflow-scrolling: touch;
            }
        }

        /* Selector de Lado Preferido */
        .lado-selector {
            display: flex;
            gap: 16px;
        }

        .lado-option {
            flex: 1;
            cursor: pointer;
        }

        .lado-option input[type="radio"] {
            display: none;
        }

        .lado-option-content {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 16px;
            border: 2px solid var(--line);
            border-radius: var(--radius-sm);
            transition: all 0.2s ease;
            background: var(--bg);
        }

        .lado-option:hover .lado-option-content {
            border-color: var(--primary);
            background: rgba(70, 130, 180, 0.03);
        }

        .lado-option.selected .lado-option-content {
            border-color: var(--primary);
            background: rgba(70, 130, 180, 0.08);
        }

        .lado-icon {
            width: 44px;
            height: 44px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.1rem;
            flex-shrink: 0;
        }

        .lado-info {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 2px;
        }

        .lado-title {
            font-weight: 600;
            color: var(--fg);
            font-size: 0.9375rem;
        }

        .lado-desc {
            font-size: 0.8125rem;
            color: var(--muted);
        }

        .lado-check {
            color: var(--primary);
            font-size: 1.25rem;
            opacity: 0;
            transition: opacity 0.2s ease;
        }

        .lado-option.selected .lado-check {
            opacity: 1;
        }

        /* Divider */
        .divider {
            position: relative;
            text-align: center;
            margin: 28px 0;
        }

        .divider::before {
            content: "";
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 1px;
            background: var(--line);
        }

        .divider span {
            position: relative;
            background: var(--bg);
            padding: 0 16px;
            color: var(--muted);
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        /* Social button */
        .btn-social {
            width: 100%;
            padding: 14px;
            background: var(--bg);
            border: 1px solid var(--line);
            border-radius: var(--radius-sm);
            cursor: pointer;
            transition: all 0.2s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            font-size: 0.95rem;
            color: var(--fg);
            font-weight: 600;
            font-family: inherit;
        }

        .btn-social:hover {
            border-color: var(--muted);
            background: var(--light-bg);
            transform: translateY(-1px);
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }

        .btn-social svg {
            width: 20px;
            height: 20px;
        }

        @@media (max-width: 640px) {
            .lado-selector {
                flex-direction: column;
                gap: 12px;
            }

            .lado-option-content {
                padding: 14px;
            }

            .lado-icon {
                width: 40px;
                height: 40px;
            }
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-left">
            <a href="/" class="brand">
                <img src="/images/logo.png" alt="Lado" style="height: 64px; width: auto; border-radius: 8px;">
            </a>

            <div class="form-wrapper">
                <div class="form-header">
                    <h1>@Localizer.Get("Auth_CreateAccount")</h1>
                    <p>@Localizer.Get("Auth_HaveAccount") <a href="/Account/Login">@Localizer.Get("Auth_Login")</a></p>
                </div>

                <!-- Info sobre el concepto dual -->
                <div class="info-badge">
                    <i class="fas fa-info-circle info-badge-icon"></i>
                    <div class="info-badge-content">
                        <div class="info-badge-title">@Localizer.Get("Register_DualIdentity")</div>
                        <div class="info-badge-text">
                            @Localizer.Get("Register_DualIdentityDesc")
                        </div>
                    </div>
                </div>

                <form asp-action="Register" method="post" id="registerForm">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="form-section">
                        <h3 class="section-title">@Localizer.Get("Register_AccountDetails")</h3>

                        <div class="form-group">
                            <label asp-for="Email" class="form-label">@Localizer.Get("Auth_Email")</label>
                            <div class="field-with-indicator">
                                <input asp-for="Email" type="email" class="form-control" placeholder="@Localizer.Get("Auth_EmailPlaceholder")" id="emailInput" />
                                <span class="availability-indicator" id="emailIndicator">
                                    <i class="fas fa-spinner fa-spin"></i>
                                </span>
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="NombreUsuario" class="form-label">@Localizer.Get("Auth_Username")</label>
                            <div class="field-with-indicator">
                                <input asp-for="NombreUsuario" class="form-control" placeholder="@Localizer.Get("Register_UsernamePlaceholder")" id="usernameInput" />
                                <span class="availability-indicator" id="usernameIndicator">
                                    <i class="fas fa-spinner fa-spin"></i>
                                </span>
                            </div>
                            <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="NombreCompleto" class="form-label">
                                @Localizer.Get("Auth_FullName")
                                <span class="form-label-help">(@Localizer.Get("Register_RealIdentity"))</span>
                            </label>
                            <input asp-for="NombreCompleto" class="form-control" placeholder="@Localizer.Get("Register_FullNamePlaceholder")" />
                            <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                        </div>

                        <!-- Campo de Seudónimo -->
                        <div class="form-group">
                            <label asp-for="Seudonimo" class="form-label">
                                @Localizer.Get("Register_Pseudonym")
                                <span class="form-label-help">(@Localizer.Get("Register_ForPremiumContent"))</span>
                            </label>
                            <div class="field-with-indicator">
                                <input asp-for="Seudonimo" class="form-control" placeholder="@Localizer.Get("Register_PseudonymPlaceholder")" id="seudonimoInput" />
                                <span class="availability-indicator" id="seudonimoIndicator">
                                    <i class="fas fa-spinner fa-spin"></i>
                                </span>
                            </div>
                            <span asp-validation-for="Seudonimo" class="text-danger"></span>
                        </div>

                        <!-- Selección de Lado Preferido -->
                        <div class="form-group">
                            <label class="form-label">
                                ¿Cuál lado prefieres ver primero?
                                <span class="form-label-help">(Puedes cambiarlo después)</span>
                            </label>
                            <div class="lado-selector">
                                <label class="lado-option selected" id="ladoAOption">
                                    <input type="radio" asp-for="LadoPreferido" value="0" checked />
                                    <div class="lado-option-content">
                                        <div class="lado-icon" style="background: linear-gradient(135deg, #4682B4, #5a9fd4);">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <div class="lado-info">
                                            <span class="lado-title">Lado A</span>
                                            <span class="lado-desc">Contenido público y gratuito</span>
                                        </div>
                                        <div class="lado-check">
                                            <i class="fas fa-check-circle"></i>
                                        </div>
                                    </div>
                                </label>
                                <label class="lado-option" id="ladoBOption">
                                    <input type="radio" asp-for="LadoPreferido" value="1" />
                                    <div class="lado-option-content">
                                        <div class="lado-icon" style="background: linear-gradient(135deg, #9333ea, #c084fc);">
                                            <i class="fas fa-star"></i>
                                        </div>
                                        <div class="lado-info">
