@model Lado.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Registro - Lado";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #00bcd4;
        }

        body {
            background: linear-gradient(135deg, var(--primary-color) 0%, #0288d1 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            padding: 40px 0;
        }

        .register-container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            overflow: hidden;
        }

        .register-left {
            background: var(--primary-color);
            color: white;
            padding: 40px 35px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            min-height: 100%;
        }

        .register-right {
            padding: 60px;
        }

        .brand-logo {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .left-subtitle {
            margin-bottom: 30px;
        }

        .left-subtitle h2 {
            font-size: 1.75rem;
            margin-bottom: 15px;
        }

        .left-subtitle p {
            font-size: 1rem;
            opacity: 0.95;
        }

        .feature-item {
            margin-bottom: 20px;
            display: flex;
            align-items: flex-start;
        }

            .feature-item i {
                margin-right: 15px;
                font-size: 1.3rem;
                margin-top: 3px;
                flex-shrink: 0;
            }

        .form-control {
            padding: 12px 15px;
            border-radius: 10px;
        }

        .btn-register {
            background: var(--primary-color);
            color: white;
            padding: 12px;
            border-radius: 10px;
            border: none;
            width: 100%;
            font-weight: 600;
            transition: all 0.3s;
        }

            .btn-register:hover {
                background: #0288d1;
                transform: translateY(-2px);
            }

        .tipo-usuario-tabs {
            display: flex;
            gap: 15px;
            margin-bottom: 25px;
        }

        .tipo-tab {
            flex: 1;
            padding: 15px;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
        }

            .tipo-tab.active {
                border-color: var(--primary-color);
                background: rgba(0, 188, 212, 0.1);
            }

            .tipo-tab i {
                font-size: 2rem;
                display: block;
                margin-bottom: 10px;
                color: var(--primary-color);
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="register-container">
            <div class="row g-0">
                <div class="col-lg-5 d-none d-lg-block">
                    <div class="register-left">
                        <div class="brand-logo">
                            <i class="fas fa-fire"></i> Lado
                        </div>
                        <div class="left-subtitle">
                            <h2>Descubre creadores increíbles</h2>
                            <p>Accede a contenido exclusivo de tus creadores favoritos</p>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check-circle"></i>
                            <div>
                                <strong>Contenido exclusivo</strong><br>
                                <small>Accede a fotos, videos y streams privados</small>
                            </div>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check-circle"></i>
                            <div>
                                <strong>Interacción directa</strong><br>
                                <small>Chatea y conecta con tus creadores favoritos</small>
                            </div>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check-circle"></i>
                            <div>
                                <strong>Contenido personalizado</strong><br>
                                <small>Solicita contenido exclusivo y personalizado</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="register-right">
                        <h2 class="mb-3">Lado</h2>
                        <p class="text-muted mb-4">Crea tu cuenta y comienza a ganar</p>

                        <form asp-action="Register" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                            <div class="tipo-usuario-tabs">
                                <div class="tipo-tab active" data-tipo="0">
                                    <i class="fas fa-user"></i>
                                    <div><strong>Fan</strong></div>
                                    <small>Consume contenido</small>
                                </div>
                                <div class="tipo-tab" data-tipo="1">
                                    <i class="fas fa-camera"></i>
                                    <div><strong>Creador</strong></div>
                                    <small>Monetiza tu contenido</small>
                                </div>
                            </div>

                            <input type="hidden" asp-for="TipoUsuario" id="tipoUsuarioInput" value="0" />

                            <div class="mb-3">
                                <label asp-for="NombreUsuario" class="form-label">Nombre de usuario</label>
                                <div class="input-group">
                                    <span class="input-group-text">@@</span>
                                    <input asp-for="NombreUsuario" class="form-control" placeholder="tunombre" />
                                </div>
                                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="tu@email.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="NombreCompleto" class="form-label">Nombre completo</label>
                                <input asp-for="NombreCompleto" class="form-control" placeholder="Tu nombre" />
                                <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Contraseña" class="form-label">Contraseña</label>
                                <input asp-for="Contraseña" type="password" class="form-control" placeholder="Mínimo 8 caracteres" />
                                <span asp-validation-for="Contraseña" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ConfirmarContraseña" class="form-label">Confirmar contraseña</label>
                                <input asp-for="ConfirmarContraseña" type="password" class="form-control" placeholder="Repite tu contraseña" />
                                <span asp-validation-for="ConfirmarContraseña" class="text-danger"></span>
                            </div>

                            <div class="form-check mb-3">
                                <input asp-for="AceptaTerminos" class="form-check-input" type="checkbox" />
                                <label asp-for="AceptaTerminos" class="form-check-label">
                                    Acepto los <a href="/Home/Terms" target="_blank">términos y condiciones</a> y la <a href="/Home/Privacy" target="_blank">política de privacidad</a>
                                </label>
                                <span asp-validation-for="AceptaTerminos" class="text-danger d-block"></span>
                            </div>

                            <button type="submit" class="btn btn-register">
                                Crear cuenta
                            </button>
                        </form>

                        <div class="text-center mt-4">
                            <p class="text-muted">¿Ya tienes una cuenta? <a href="/Account/Login">Inicia sesión</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.12/jquery.validation.unobtrusive.min.js"></script>
    <script>
        document.querySelectorAll('.tipo-tab').forEach(tab => {
            tab.addEventListener('click', function() {
                document.querySelectorAll('.tipo-tab').forEach(t => t.classList.remove('active'));
                this.classList.add('active');
                document.getElementById('tipoUsuarioInput').value = this.dataset.tipo;
            });
        });
    </script>
</body>
</html>