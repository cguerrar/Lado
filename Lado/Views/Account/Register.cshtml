@model Lado.ViewModels.RegisterViewModel
@inject Lado.Services.ILocalizationService Localizer
@{
    ViewData["Title"] = Localizer.Get("Auth_Register") + " - Lado";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #4682B4;
            --primary-dark: #36648B;
            --primary-light: #e6f9ee;
            --bg: #ffffff;
            --fg: #111827;
            --muted: #6b7280;
            --light-bg: #f9fafb;
            --line: #e5e7eb;
            --radius-sm: 10px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: var(--bg);
            min-height: 100vh;
        }

        .register-container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            min-height: 100vh;
        }

        .register-left {
            padding: 48px 80px;
            display: flex;
            flex-direction: column;
            background: var(--bg);
            overflow-y: auto;
        }

        /* Logo */
        .brand {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            text-decoration: none;
            color: var(--fg);
            font-weight: 800;
            font-size: 1.5rem;
            transition: transform 0.2s ease;
            margin-bottom: 48px;
        }

        .brand:hover {
            transform: scale(1.02);
        }

        .brand-badge {
            width: 36px;
            height: 36px;
            border-radius: 8px;
            background: var(--primary);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 1.25rem;
            box-shadow: 0 2px 8px rgba(70, 130, 180, 0.25);
        }

        .form-wrapper {
            max-width: 480px;
            width: 100%;
        }

        .form-header {
            margin-bottom: 40px;
        }

        .form-header h1 {
            color: var(--fg);
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 16px;
            line-height: 1.1;
            letter-spacing: -0.02em;
        }

        .form-header p {
            color: var(--muted);
            font-size: 1rem;
            line-height: 1.5;
        }

        .form-header p a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
        }

        .form-header p a:hover {
            text-decoration: underline;
        }

        .form-section {
            margin-bottom: 32px;
        }

        .section-title {
            color: var(--fg);
            font-size: 1.125rem;
            font-weight: 600;
            margin-bottom: 20px;
        }

        /* ⭐ NUEVO: Info Badge para explicar el concepto */
        .info-badge {
            background: var(--primary-light);
            border: 1px solid var(--primary);
            border-radius: var(--radius-sm);
            padding: 16px;
            margin-bottom: 24px;
            display: flex;
            gap: 12px;
            align-items: flex-start;
        }

        .info-badge-icon {
            color: var(--primary);
            font-size: 1.25rem;
            flex-shrink: 0;
            margin-top: 2px;
        }

        .info-badge-content {
            flex: 1;
        }

        .info-badge-title {
            font-weight: 600;
            color: var(--fg);
            margin-bottom: 4px;
            font-size: 0.9375rem;
        }

        .info-badge-text {
            color: var(--muted);
            font-size: 0.875rem;
            line-height: 1.5;
        }

        .form-group {
            margin-bottom: 24px;
        }

        .form-label {
            display: block;
            font-weight: 500;
            color: var(--fg);
            margin-bottom: 8px;
            font-size: 0.9375rem;
        }

        .form-label-help {
            font-weight: 400;
            color: var(--muted);
            font-size: 0.875rem;
            margin-left: 4px;
        }

        .form-control {
            width: 100%;
            padding: 12px 16px;
            border: 1px solid var(--line);
            border-radius: var(--radius-sm);
            font-size: 1rem;
            transition: all 0.15s ease;
            background: var(--bg);
            color: var(--fg);
            font-family: inherit;
        }

        .form-control::placeholder {
            color: #9ca3af;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px var(--primary-light);
        }

        .input-group {
            display: flex;
        }

        .input-group-text {
            background: var(--light-bg);
            border: 1px solid var(--line);
            border-right: none;
            padding: 12px 16px;
            border-radius: var(--radius-sm) 0 0 var(--radius-sm);
            color: var(--muted);
            font-weight: 500;
        }

        .input-group .form-control {
            border-radius: 0 var(--radius-sm) var(--radius-sm) 0;
        }

        .password-toggle {
            position: relative;
        }

        .password-toggle-btn {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: var(--muted);
            cursor: pointer;
            padding: 4px;
        }

        .password-requirements {
            margin-top: 12px;
            display: flex;
            flex-direction: column;
            gap: 6px;
        }

        .requirement {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 0.875rem;
            color: var(--muted);
        }

        .requirement i {
            width: 16px;
            font-size: 0.75rem;
        }

        .requirement.valid {
            color: var(--primary);
        }

        .requirement.invalid {
            color: #ef4444;
        }

        .text-danger {
            color: #ef4444;
            font-size: 0.875rem;
            margin-top: 6px;
            display: block;
        }

        .form-check {
            display: flex;
            align-items: flex-start;
            margin-bottom: 32px;
        }

        .form-check-input {
            width: 18px;
            height: 18px;
            margin-right: 10px;
            margin-top: 3px;
            cursor: pointer;
            accent-color: var(--primary);
            flex-shrink: 0;
        }

        .form-check-label {
            font-size: 0.9375rem;
            color: var(--muted);
            line-height: 1.6;
        }

        .form-check-label a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 500;
        }

        .form-check-label a:hover {
            text-decoration: underline;
        }

        .btn-register {
            width: 100%;
            padding: 14px 24px;
            background: var(--primary);
            color: white;
            border: none;
            border-radius: var(--radius-sm);
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .btn-register:hover {
            background: var(--primary-dark);
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(70, 130, 180, 0.3);
        }

        .btn-register i {
            font-size: 1rem;
        }

        .alert {
            padding: 12px 16px;
            border-radius: var(--radius-sm);
            margin-bottom: 24px;
            font-size: 0.9375rem;
        }

        .alert-danger {
            background: #fee2e2;
            color: #991b1b;
            border: 1px solid #fca5a5;
        }

        .register-right {
            position: relative;
            overflow: hidden;
        }

        .image-container {
            position: absolute;
            inset: 0;
            width: 100%;
            height: 100%;
        }

        .image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
        }

        /* ⭐ NUEVO: Indicador de disponibilidad */
        .availability-indicator {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            display: none;
        }

        .availability-indicator.checking {
            display: block;
            color: var(--muted);
        }

        .availability-indicator.available {
            display: block;
            color: var(--primary);
        }

        .availability-indicator.unavailable {
            display: block;
            color: #ef4444;
        }

        .field-with-indicator {
            position: relative;
        }

        @@media (max-width: 1024px) {
            .register-container {
                grid-template-columns: 1fr;
            }

            .register-right {
                display: none;
            }

            .register-left {
                padding: 40px 32px;
                justify-content: flex-start;
            }

            .brand {
                margin-bottom: 40px;
            }

            .form-wrapper {
                max-width: 540px;
                margin: 0 auto;
            }
        }

        @@media (max-width: 640px) {
            .register-left {
                padding: 32px 24px;
            }

            .form-header h1 {
                font-size: 2rem;
            }

            .brand {
                font-size: 1.35rem;
                margin-bottom: 32px;
            }

            .brand-badge {
                width: 32px;
                height: 32px;
                font-size: 1.1rem;
            }
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-left">
            <a href="/" class="brand">
                <img src="/images/logo.png" alt="Lado" style="height: 64px; width: auto; border-radius: 8px;">
            </a>

            <div class="form-wrapper">
                <div class="form-header">
                    <h1>@Localizer.Get("Auth_CreateAccount")</h1>
                    <p>@Localizer.Get("Auth_HaveAccount") <a href="/Account/Login">@Localizer.Get("Auth_Login")</a></p>
                </div>

                <!-- Info sobre el concepto dual -->
                <div class="info-badge">
                    <i class="fas fa-info-circle info-badge-icon"></i>
                    <div class="info-badge-content">
                        <div class="info-badge-title">@Localizer.Get("Register_DualIdentity")</div>
                        <div class="info-badge-text">
                            @Localizer.Get("Register_DualIdentityDesc")
                        </div>
                    </div>
                </div>

                <form asp-action="Register" method="post" id="registerForm">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="form-section">
                        <h3 class="section-title">@Localizer.Get("Register_AccountDetails")</h3>

                        <div class="form-group">
                            <label asp-for="Email" class="form-label">@Localizer.Get("Auth_Email")</label>
                            <div class="field-with-indicator">
                                <input asp-for="Email" type="email" class="form-control" placeholder="@Localizer.Get("Auth_EmailPlaceholder")" id="emailInput" />
                                <span class="availability-indicator" id="emailIndicator">
                                    <i class="fas fa-spinner fa-spin"></i>
                                </span>
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="NombreUsuario" class="form-label">@Localizer.Get("Auth_Username")</label>
                            <div class="field-with-indicator">
                                <input asp-for="NombreUsuario" class="form-control" placeholder="@Localizer.Get("Register_UsernamePlaceholder")" id="usernameInput" />
                                <span class="availability-indicator" id="usernameIndicator">
                                    <i class="fas fa-spinner fa-spin"></i>
                                </span>
                            </div>
                            <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="NombreCompleto" class="form-label">
                                @Localizer.Get("Auth_FullName")
                                <span class="form-label-help">(@Localizer.Get("Register_RealIdentity"))</span>
                            </label>
                            <input asp-for="NombreCompleto" class="form-control" placeholder="@Localizer.Get("Register_FullNamePlaceholder")" />
                            <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                        </div>

                        <!-- Campo de Seudónimo -->
                        <div class="form-group">
                            <label asp-for="Seudonimo" class="form-label">
                                @Localizer.Get("Register_Pseudonym")
                                <span class="form-label-help">(@Localizer.Get("Register_ForPremiumContent"))</span>
                            </label>
                            <div class="field-with-indicator">
                                <input asp-for="Seudonimo" class="form-control" placeholder="@Localizer.Get("Register_PseudonymPlaceholder")" id="seudonimoInput" />
                                <span class="availability-indicator" id="seudonimoIndicator">
                                    <i class="fas fa-spinner fa-spin"></i>
                                </span>
                            </div>
                            <span asp-validation-for="Seudonimo" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Contraseña" class="form-label">@Localizer.Get("Auth_Password")</label>
                            <div class="password-toggle">
                                <input asp-for="Contraseña" type="password" class="form-control" id="passwordInput" placeholder="••••••••" />
                                <button type="button" class="password-toggle-btn" onclick="togglePassword()">
                                    <i class="fas fa-eye" id="toggleIcon"></i>
                                </button>
                            </div>
                            <div class="password-requirements">
                                <div class="requirement">
                                    <i class="fas fa-times"></i>
                                    <span>@Localizer.Get("Register_PwdReq8Chars")</span>
                                </div>
                                <div class="requirement">
                                    <i class="fas fa-times"></i>
                                    <span>@Localizer.Get("Register_PwdReqNumber")</span>
                                </div>
                                <div class="requirement">
                                    <i class="fas fa-times"></i>
                                    <span>@Localizer.Get("Register_PwdReqLetter")</span>
                                </div>
                            </div>
                            <span asp-validation-for="Contraseña" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ConfirmarContraseña" class="form-label">@Localizer.Get("Auth_ConfirmPassword")</label>
                            <input asp-for="ConfirmarContraseña" type="password" class="form-control" placeholder="••••••••" />
                            <span asp-validation-for="ConfirmarContraseña" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-check">
                        <input asp-for="AceptaTerminos" class="form-check-input" type="checkbox" />
                        <label asp-for="AceptaTerminos" class="form-check-label">
                            @Localizer.Get("Register_AcceptTermsText") <a href="/Home/Privacy" target="_blank">@Localizer.Get("Register_PrivacyPolicy")</a> @Localizer.Get("Auth_Or") <a href="/Home/Terms" target="_blank">@Localizer.Get("Register_RegistrationAgreement")</a>.
                        </label>
                        <span asp-validation-for="AceptaTerminos" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn-register">
                        <span>@Localizer.Get("Register_CreateMyAccount")</span>
                        <i class="fas fa-arrow-right"></i>
                    </button>
                </form>
            </div>
        </div>

        <div class="register-right">
            <div class="image-container">
                <img src="~/images/hero-avatar.png" alt="Lado - Plataforma de creadores" />
            </div>
        </div>
    </div>

    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.6.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.12/jquery.validation.unobtrusive.min.js"></script>
    <script>
        // ========================================
        // TOGGLE PASSWORD
        // ========================================
        function togglePassword() {
            const passwordInput = document.getElementById('passwordInput');
            const toggleIcon = document.getElementById('toggleIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }

        // ========================================
        // PASSWORD VALIDATION
        // ========================================
        const passwordInput = document.getElementById('passwordInput');
        const requirements = document.querySelectorAll('.requirement');

        passwordInput.addEventListener('input', function() {
            const value = this.value;
            
            // Check length
            if (value.length >= 8) {
                requirements[0].classList.add('valid');
                requirements[0].classList.remove('invalid');
                requirements[0].querySelector('i').classList.remove('fa-times');
                requirements[0].querySelector('i').classList.add('fa-check');
            } else {
                requirements[0].classList.remove('valid');
                requirements[0].classList.add('invalid');
                requirements[0].querySelector('i').classList.remove('fa-check');
                requirements[0].querySelector('i').classList.add('fa-times');
            }
            
            // Check number or symbol
            if (/[0-9!@@#$%^&*(),.?":{}|<>]/.test(value)) {
                requirements[1].classList.add('valid');
                requirements[1].classList.remove('invalid');
                requirements[1].querySelector('i').classList.remove('fa-times');
                requirements[1].querySelector('i').classList.add('fa-check');
            } else {
                requirements[1].classList.remove('valid');
                requirements[1].classList.add('invalid');
                requirements[1].querySelector('i').classList.remove('fa-check');
                requirements[1].querySelector('i').classList.add('fa-times');
            }
            
            // Check letter
            if (/[a-zA-Z]/.test(value)) {
                requirements[2].classList.add('valid');
                requirements[2].classList.remove('invalid');
                requirements[2].querySelector('i').classList.remove('fa-times');
                requirements[2].querySelector('i').classList.add('fa-check');
            } else {
                requirements[2].classList.remove('valid');
                requirements[2].classList.add('invalid');
                requirements[2].querySelector('i').classList.remove('fa-check');
                requirements[2].querySelector('i').classList.add('fa-times');
            }
        });

        // ========================================
        // ⭐ NUEVO: VERIFICACIÓN DE DISPONIBILIDAD (AJAX)
        // ========================================
        let emailTimeout, usernameTimeout, seudonimoTimeout;

        // Email availability
        document.getElementById('emailInput').addEventListener('input', function() {
            const email = this.value.trim();
            const indicator = document.getElementById('emailIndicator');
            
            clearTimeout(emailTimeout);
            
            if (email.length < 3 || !email.includes('@@')) {
                indicator.className = 'availability-indicator';
                return;
            }
            
            indicator.className = 'availability-indicator checking';
            
            emailTimeout = setTimeout(async () => {
                try {
                    const response = await fetch('/Account/CheckEmailAvailability', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ email: email })
                    });
                    const data = await response.json();
                    
                    indicator.className = data.available ? 'availability-indicator available' : 'availability-indicator unavailable';
                    indicator.innerHTML = data.available 
                        ? '<i class="fas fa-check"></i>' 
                        : '<i class="fas fa-times"></i>';
                } catch (error) {
                    console.error('Error checking email:', error);
                    indicator.className = 'availability-indicator';
                }
            }, 500);
        });

        // Username availability
        document.getElementById('usernameInput').addEventListener('input', function() {
            const username = this.value.trim();
            const indicator = document.getElementById('usernameIndicator');
            
            clearTimeout(usernameTimeout);
            
            if (username.length < 3) {
                indicator.className = 'availability-indicator';
                return;
            }
            
            indicator.className = 'availability-indicator checking';
            
            usernameTimeout = setTimeout(async () => {
                try {
                    const response = await fetch('/Account/CheckUsernameAvailability', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ username: username })
                    });
                    const data = await response.json();
                    
                    indicator.className = data.available ? 'availability-indicator available' : 'availability-indicator unavailable';
                    indicator.innerHTML = data.available 
                        ? '<i class="fas fa-check"></i>' 
                        : '<i class="fas fa-times"></i>';
                } catch (error) {
                    console.error('Error checking username:', error);
                    indicator.className = 'availability-indicator';
                }
            }, 500);
        });

        // ⭐ NUEVO: Seudónimo availability
        document.getElementById('seudonimoInput').addEventListener('input', function() {
            const seudonimo = this.value.trim();
            const indicator = document.getElementById('seudonimoIndicator');
            
            clearTimeout(seudonimoTimeout);
            
            if (seudonimo.length < 3) {
                indicator.className = 'availability-indicator';
                return;
            }
            
            indicator.className = 'availability-indicator checking';
            
            seudonimoTimeout = setTimeout(async () => {
                try {
                    const response = await fetch('/Account/CheckSeudonimoAvailability', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ seudonimo: seudonimo })
                    });
                    const data = await response.json();
                    
                    indicator.className = data.available ? 'availability-indicator available' : 'availability-indicator unavailable';
                    indicator.innerHTML = data.available 
                        ? '<i class="fas fa-check"></i>' 
                        : '<i class="fas fa-times"></i>';
                } catch (error) {
                    console.error('Error checking seudonimo:', error);
                    indicator.className = 'availability-indicator';
                }
            }, 500);
        });
    </script>
</body>
</html>