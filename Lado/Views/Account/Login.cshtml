@model Lado.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesión - Lado";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #00bcd4;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, var(--primary-color) 0%, #0288d1 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        }

        .login-container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            overflow: hidden;
            max-width: 1200px;
            width: 100%;
        }

        .login-left {
            background: var(--primary-color);
            color: white;
            padding: 60px 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            text-align: center;
            min-height: 100%;
        }

        .brand-logo {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 30px;
        }

            .brand-logo svg {
                width: 60px;
                height: 60px;
                fill: white;
            }

        .stat-item {
            margin-bottom: 30px;
        }

            .stat-item svg {
                width: 40px;
                height: 40px;
                fill: white;
                margin-bottom: 10px;
            }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 700;
        }

        .login-right {
            padding: 60px 50px;
        }

        .form-control {
            padding: 12px 15px;
            border-radius: 10px;
            border: 2px solid #e0e0e0;
            transition: all 0.3s;
        }

            .form-control:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 0.2rem rgba(0, 188, 212, 0.15);
            }

        .password-wrapper {
            position: relative;
        }

        .password-toggle {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            padding: 5px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: opacity 0.3s;
        }

            .password-toggle:hover {
                opacity: 0.7;
            }

            .password-toggle svg {
                width: 20px;
                height: 20px;
                fill: #666;
            }

        .btn-login {
            background: var(--primary-color);
            color: white;
            padding: 12px;
            border-radius: 10px;
            border: none;
            width: 100%;
            font-weight: 600;
            transition: all 0.3s;
            font-size: 16px;
        }

            .btn-login:hover {
                background: #0288d1;
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(0, 188, 212, 0.4);
            }

        .divider {
            text-align: center;
            margin: 25px 0;
            position: relative;
        }

            .divider::before {
                content: "";
                position: absolute;
                top: 50%;
                left: 0;
                right: 0;
                height: 1px;
                background: #e0e0e0;
            }

            .divider span {
                background: white;
                padding: 0 15px;
                position: relative;
                color: #999;
            }

        .social-btn {
            width: 48%;
            padding: 10px;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            background: white;
            cursor: pointer;
            transition: all 0.3s;
            font-size: 15px;
        }

            .social-btn:hover {
                border-color: var(--primary-color);
                transform: translateY(-2px);
            }

            .social-btn svg {
                width: 18px;
                height: 18px;
                margin-right: 8px;
                vertical-align: middle;
            }

        .feature-badge {
            background: rgba(255,255,255,0.2);
            padding: 15px 25px;
            border-radius: 50px;
            margin-bottom: 15px;
            display: inline-block;
        }

            .feature-badge svg {
                width: 16px;
                height: 16px;
                fill: white;
                margin-right: 8px;
                vertical-align: middle;
            }

        .form-check-input:checked {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

        .text-primary {
            color: var(--primary-color) !important;
        }

        a.text-primary:hover {
            color: #0288d1 !important;
        }

        /* Responsive */
        @@media (max-width: 991px) {
            .login-right

        {
            padding: 40px 30px;
        }

        }

        @@media (max-width: 576px) {
            .login-right

        {
            padding: 30px 20px;
        }

        .brand-logo {
            font-size: 2rem;
        }

        .stat-number {
            font-size: 2rem;
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <div class="login-container">
            <div class="row g-0">
                <div class="col-lg-5 d-none d-lg-block">
                    <div class="login-left">
                        <div class="brand-logo">
                            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path d="M13.5.67s.74 2.65.74 4.8c0 2.06-1.35 3.73-3.41 3.73-2.07 0-3.63-1.67-3.63-3.73l.03-.36C5.21 7.51 4 10.62 4 14c0 4.42 3.58 8 8 8s8-3.58 8-8C20 8.61 17.41 3.8 13.5.67zM11.71 19c-1.78 0-3.22-1.4-3.22-3.14 0-1.62 1.05-2.76 2.81-3.12 1.77-.36 3.6-1.21 4.62-2.58.39 1.29.59 2.65.59 4.04 0 2.65-2.15 4.8-4.8 4.8z" />
                            </svg>
                        </div>
                        <h1 class="mb-4">Bienvenido de vuelta</h1>
                        <p class="mb-5">Tu contenido favorito te está esperando</p>

                        <div class="stat-item">
                            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z" />
                            </svg>
                            <div class="stat-number">50K+</div>
                            <div>Creadores activos</div>
                        </div>

                        <div class="stat-item">
                            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" />
                            </svg>
                            <div class="stat-number">2M+</div>
                            <div>Fans conectados</div>
                        </div>

                        <div class="stat-item">
                            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path d="M11.8 10.9c-2.27-.59-3-1.2-3-2.15 0-1.09 1.01-1.85 2.7-1.85 1.78 0 2.44.85 2.5 2.1h2.21c-.07-1.72-1.12-3.3-3.21-3.81V3h-3v2.16c-1.94.42-3.5 1.68-3.5 3.61 0 2.31 1.91 3.46 4.7 4.13 2.5.6 3 1.48 3 2.41 0 .69-.49 1.79-2.7 1.79-2.06 0-2.87-.92-2.98-2.1h-2.2c.12 2.19 1.76 3.42 3.68 3.83V21h3v-2.15c1.95-.37 3.5-1.5 3.5-3.55 0-2.84-2.43-3.81-4.7-4.4z" />
                            </svg>
                            <div class="stat-number">$10M+</div>
                            <div>Pagado a creadores</div>
                        </div>

                        <div class="mt-5">
                            <div class="feature-badge">
                                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" />
                                </svg>
                                Contenido exclusivo 24/7
                            </div>
                            <div class="feature-badge">
                                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" />
                                </svg>
                                Mensajes directos
                            </div>
                            <div class="feature-badge">
                                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" />
                                </svg>
                                Lives exclusivos
                            </div>
                            <div class="feature-badge mt-3">
                                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm-2 16l-4-4 1.41-1.41L10 14.17l6.59-6.59L18 9l-8 8z" />
                                </svg>
                                Plataforma 100% segura y privada
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="login-right">
                        <h2 class="mb-3">Lado</h2>
                        <p class="text-muted mb-4">Inicia sesión en tu cuenta</p>

                        <form asp-action="Login" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                            <div class="mb-3">
                                <label asp-for="EmailOUsuario" class="form-label">Email o nombre de usuario</label>
                                <input asp-for="EmailOUsuario" class="form-control" placeholder="tu@email.com o @@tunombre" autocomplete="username" />
                                <span asp-validation-for="EmailOUsuario" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Contraseña" class="form-label">Contraseña</label>
                                <div class="password-wrapper">
                                    <input asp-for="Contraseña" type="password" class="form-control" id="passwordInput" placeholder="Tu contraseña" autocomplete="current-password" />
                                    <button type="button" class="password-toggle" id="togglePassword" aria-label="Mostrar contraseña">
                                        <svg id="eyeIcon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z" />
                                        </svg>
                                        <svg id="eyeOffIcon" style="display: none;" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M12 7c2.76 0 5 2.24 5 5 0 .65-.13 1.26-.36 1.83l2.92 2.92c1.51-1.26 2.7-2.89 3.43-4.75-1.73-4.39-6-7.5-11-7.5-1.4 0-2.74.25-3.98.7l2.16 2.16C10.74 7.13 11.35 7 12 7zM2 4.27l2.28 2.28.46.46C3.08 8.3 1.78 10.02 1 12c1.73 4.39 6 7.5 11 7.5 1.55 0 3.03-.3 4.38-.84l.42.42L19.73 22 21 20.73 3.27 3 2 4.27zM7.53 9.8l1.55 1.55c-.05.21-.08.43-.08.65 0 1.66 1.34 3 3 3 .22 0 .44-.03.65-.08l1.55 1.55c-.67.33-1.41.53-2.2.53-2.76 0-5-2.24-5-5 0-.79.2-1.53.53-2.2zm4.31-.78l3.15 3.15.02-.16c0-1.66-1.34-3-3-3l-.17.01z" />
                                        </svg>
                                    </button>
                                </div>
                                <span asp-validation-for="Contraseña" class="text-danger"></span>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="form-check">
                                    <input asp-for="Recordarme" class="form-check-input" type="checkbox" id="recordarmeCheck" />
                                    <label asp-for="Recordarme" class="form-check-label" for="recordarmeCheck">
                                        Recordarme
                                    </label>
                                </div>
                                <a href="#" class="text-primary">¿Olvidaste tu contraseña?</a>
                            </div>

                            <button type="submit" class="btn btn-login">
                                Iniciar sesión
                            </button>
                        </form>

                        <div class="divider">
                            <span>O continúa con</span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button class="social-btn">
                                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" fill="#DB4437">
                                    <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" />
                                    <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" />
                                    <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" />
                                    <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" />
                                </svg>
                                Google
                            </button>
                            <button class="social-btn">
                                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" fill="#1DA1F2">
                                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z" />
                                </svg>
                                Twitter
                            </button>
                        </div>

                        <div class="text-center mt-4">
                            <p class="text-muted">¿No tienes una cuenta? <a href="/Account/Register" class="text-primary">Regístrate gratis</a></p>
                        </div>

                        <div class="text-center mt-4 pt-4" style="border-top: 1px solid #e0e0e0;">
                            <small class="text-muted">
                                <a href="/Home/Terms" class="text-decoration-none text-muted">Términos</a> •
                                <a href="/Home/Privacy" class="text-decoration-none text-muted">Privacidad</a> •
                                <a href="#" class="text-decoration-none text-muted">Ayuda</a> •
                                <a href="#" class="text-decoration-none text-muted">Contacto</a>
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.6.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.12/jquery.validation.unobtrusive.min.js"></script>

    <script>
        // Toggle password visibility
        document.addEventListener('DOMContentLoaded', function() {
            const togglePassword = document.getElementById('togglePassword');
            const passwordInput = document.getElementById('passwordInput');
            const eyeIcon = document.getElementById('eyeIcon');
            const eyeOffIcon = document.getElementById('eyeOffIcon');

            if (togglePassword && passwordInput) {
                togglePassword.addEventListener('click', function() {
                    const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                    passwordInput.setAttribute('type', type);

                    // Toggle icons
                    if (type === 'password') {
                        eyeIcon.style.display = 'block';
                        eyeOffIcon.style.display = 'none';
                        togglePassword.setAttribute('aria-label', 'Mostrar contraseña');
                    } else {
                        eyeIcon.style.display = 'none';
                        eyeOffIcon.style.display = 'block';
                        togglePassword.setAttribute('aria-label', 'Ocultar contraseña');
                    }
                });
            }
        });
    </script>
</body>
</html>