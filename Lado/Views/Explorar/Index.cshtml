@model IEnumerable<Lado.Controllers.PerfilExplorar>
@{
    ViewData["Title"] = "Buscar Usuarios";
    var suscripcionesLadoA = ViewBag.SuscripcionesLadoA as List<string> ?? new List<string>();
    var suscripcionesLadoB = ViewBag.SuscripcionesLadoB as List<string> ?? new List<string>();
}

<style>
    .explorar-page {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .explorar-header {
        text-align: center;
        margin-bottom: 24px;
    }

    .explorar-header h1 {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 8px;
    }

    .explorar-header p {
        color: var(--muted);
        font-size: 0.9375rem;
    }

    /* Search box */
    .search-container {
        background: var(--surface);
        border: 1px solid var(--line);
        border-radius: var(--radius-lg);
        padding: 16px;
        margin-bottom: 24px;
    }

    .search-form {
        display: flex;
        gap: 12px;
    }

    .search-input-wrapper {
        flex: 1;
        position: relative;
    }

    .search-input-wrapper svg {
        position: absolute;
        left: 14px;
        top: 50%;
        transform: translateY(-50%);
        width: 20px;
        height: 20px;
        color: var(--muted);
    }

    .search-input {
        width: 100%;
        padding: 12px 16px 12px 46px;
        border: 1px solid var(--line);
        border-radius: var(--radius-md);
        font-size: 0.9375rem;
        background: var(--bg);
        color: var(--fg);
        transition: all 0.2s;
    }

    .search-input:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 3px rgba(70, 130, 180, 0.15);
    }

    .search-btn {
        padding: 12px 24px;
        background: var(--primary);
        color: white;
        border: none;
        border-radius: var(--radius-md);
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .search-btn:hover {
        background: var(--primary-dark);
    }

    .search-btn svg {
        width: 18px;
        height: 18px;
    }

    /* Results count */
    .results-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 16px;
        font-size: 0.875rem;
        color: var(--muted);
    }

    /* User list */
    .user-list {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .user-card {
        display: flex;
        align-items: center;
        gap: 14px;
        padding: 14px 16px;
        background: var(--surface);
        border: 1px solid var(--line);
        border-radius: var(--radius-lg);
        transition: all 0.2s;
    }

    .user-card:hover {
        border-color: var(--primary);
        background: var(--bg-tertiary);
    }

    .user-card.lado-b {
        border-left: 3px solid #a855f7;
    }

    .user-avatar {
        width: 56px;
        height: 56px;
        border-radius: 50%;
        overflow: hidden;
        flex-shrink: 0;
        background: var(--bg-tertiary);
        position: relative;
    }

    .user-avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .user-avatar-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #4682B4 0%, #5a9fd4 100%);
    }

    .user-card.lado-b .user-avatar-placeholder {
        background: linear-gradient(135deg, #a855f7 0%, #c084fc 100%);
    }

    .user-avatar-placeholder svg {
        width: 28px;
        height: 28px;
        color: white;
    }

    .user-info {
        flex: 1;
        min-width: 0;
    }

    .user-name {
        display: flex;
        align-items: center;
        gap: 6px;
        font-weight: 600;
        font-size: 0.9375rem;
        color: var(--fg);
        margin-bottom: 2px;
    }

    .verified-badge {
        width: 16px;
        height: 16px;
        color: var(--primary);
    }

    .ladob-badge {
        padding: 2px 8px;
        background: rgba(168, 85, 247, 0.15);
        color: #a855f7;
        font-size: 0.6875rem;
        font-weight: 600;
        border-radius: 4px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .user-username {
        font-size: 0.8125rem;
        color: var(--muted);
        margin-bottom: 4px;
    }

    .user-bio {
        font-size: 0.8125rem;
        color: var(--muted);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .user-stats {
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 0.8125rem;
        color: var(--muted);
        margin-right: 12px;
    }

    .user-stats span {
        display: flex;
        align-items: center;
        gap: 4px;
    }

    .user-stats svg {
        width: 14px;
        height: 14px;
    }

    .user-actions {
        display: flex;
        gap: 8px;
        flex-shrink: 0;
    }

    .btn-profile {
        padding: 8px 16px;
        background: transparent;
        border: 1px solid var(--line);
        border-radius: var(--radius-md);
        color: var(--fg);
        font-size: 0.8125rem;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .btn-profile:hover {
        border-color: var(--primary);
        color: var(--primary);
    }

    .btn-profile svg {
        width: 16px;
        height: 16px;
    }

    .btn-message {
        padding: 8px 16px;
        background: var(--primary);
        border: none;
        border-radius: var(--radius-md);
        color: white;
        font-size: 0.8125rem;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .btn-message:hover {
        background: var(--primary-dark);
        color: white;
    }

    .btn-message svg {
        width: 16px;
        height: 16px;
    }

    .following-badge {
        padding: 4px 10px;
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
        font-size: 0.75rem;
        font-weight: 500;
        border-radius: 20px;
        margin-right: 8px;
    }

    /* Empty state */
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        background: var(--surface);
        border: 1px solid var(--line);
        border-radius: var(--radius-lg);
    }

    .empty-state .empty-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 20px;
        background: var(--bg-tertiary);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .empty-state .empty-icon svg {
        width: 40px;
        height: 40px;
        color: var(--muted);
    }

    .empty-state h3 {
        font-size: 1.125rem;
        font-weight: 600;
        margin-bottom: 8px;
        color: var(--fg);
    }

    .empty-state p {
        color: var(--muted);
        font-size: 0.9375rem;
    }

    /* Responsive */
    @@media (max-width: 640px) {
        .explorar-page {
            padding: 16px;
        }

        .search-form {
            flex-direction: column;
        }

        .search-btn {
            justify-content: center;
        }

        .user-card {
            flex-wrap: wrap;
            padding: 12px;
        }

        .user-info {
            flex: 1 1 calc(100% - 70px);
        }

        .user-stats {
            display: none;
        }

        .user-actions {
            width: 100%;
            margin-top: 10px;
        }

        .user-actions a,
        .user-actions button {
            flex: 1;
            justify-content: center;
        }
    }
</style>

<div class="explorar-page">
    <div class="explorar-header">
        <h1>Buscar Usuarios</h1>
        <p>Encuentra personas para seguir o enviar mensajes</p>
    </div>

    <div class="search-container">
        <form asp-action="Index" method="get" class="search-form">
            <div class="search-input-wrapper">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="11" cy="11" r="8"></circle>
                    <path d="m21 21-4.35-4.35"></path>
                </svg>
                <input type="text"
                       name="buscar"
                       class="search-input"
                       placeholder="Buscar por nombre o usuario..."
                       value="@ViewBag.BuscarTexto"
                       autocomplete="off">
            </div>
            <button type="submit" class="search-btn">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="11" cy="11" r="8"></circle>
                    <path d="m21 21-4.35-4.35"></path>
                </svg>
                Buscar
            </button>
        </form>
    </div>

    @if (Model.Any())
    {
        <div class="results-info">
            <span>@ViewBag.TotalUsuarios perfiles encontrados</span>
            @if (!string.IsNullOrEmpty(ViewBag.BuscarTexto as string))
            {
                <a href="/Explorar" style="color: var(--primary); text-decoration: none;">Limpiar búsqueda</a>
            }
        </div>

        <div class="user-list">
            @foreach (var perfil in Model)
            {
                var estaSuscrito = perfil.EsLadoB
                    ? suscripcionesLadoB.Contains(perfil.Id)
                    : suscripcionesLadoA.Contains(perfil.Id);

                var perfilUrl = perfil.EsLadoB
                    ? $"/Feed/Perfil/{perfil.Id}?verSeudonimo=true"
                    : $"/Feed/Perfil/{perfil.Id}";

                <div class="user-card @(perfil.EsLadoB ? "lado-b" : "")">
                    <div class="user-avatar">
                        @if (!string.IsNullOrEmpty(perfil.FotoPerfil))
                        {
                            <img src="@perfil.FotoPerfil" alt="@perfil.UsernameMostrado">
                        }
                        else
                        {
                            <div class="user-avatar-placeholder">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="12" cy="7" r="4"></circle>
                                </svg>
                            </div>
                        }
                    </div>

                    <div class="user-info">
                        <div class="user-name">
                            @perfil.NombreMostrado
                            @if (perfil.CreadorVerificado)
                            {
                                <svg class="verified-badge" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                            }
                            @if (perfil.EsLadoB)
                            {
                                <span class="ladob-badge">Premium</span>
                            }
                        </div>
                        <div class="user-username">@@@perfil.UsernameMostrado</div>
                        @if (!string.IsNullOrEmpty(perfil.Biografia))
                        {
                            <div class="user-bio">
                                @(perfil.Biografia.Length > 80 ? perfil.Biografia.Substring(0, 80) + "..." : perfil.Biografia)
                            </div>
                        }
                    </div>

                    <div class="user-stats">
                        <span>
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                <circle cx="9" cy="7" r="4"></circle>
                            </svg>
                            @FormatNumber(perfil.NumeroSeguidores)
                        </span>
                    </div>

                    @if (estaSuscrito)
                    {
                        <span class="following-badge">Siguiendo</span>
                    }

                    <div class="user-actions">
                        <a href="@perfilUrl" class="btn-profile">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                <circle cx="12" cy="7" r="4"></circle>
                            </svg>
                            Perfil
                        </a>
                        <a href="/Mensajes/Chat/@perfil.Id" class="btn-message">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                            </svg>
                            Mensaje
                        </a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <circle cx="11" cy="11" r="8"></circle>
                    <path d="m21 21-4.35-4.35"></path>
                </svg>
            </div>
            @if (!string.IsNullOrEmpty(ViewBag.BuscarTexto as string))
            {
                <h3>No se encontraron usuarios</h3>
                <p>Intenta con otros términos de búsqueda</p>
            }
            else
            {
                <h3>Busca usuarios</h3>
                <p>Escribe un nombre o usuario para comenzar</p>
            }
        </div>
    }
</div>

@functions {
    string FormatNumber(int number)
    {
        if (number >= 1000000)
            return (number / 1000000.0).ToString("0.#") + "M";
        if (number >= 1000)
            return (number / 1000.0).ToString("0.#") + "K";
        return number.ToString();
    }
}
