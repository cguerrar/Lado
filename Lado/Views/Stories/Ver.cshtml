@model Lado.Models.Story
@{
    ViewData["Title"] = $"Historia de {Model.Creador?.NombreCompleto ?? "Usuario"}";
    Layout = null;
    var requiereSuscripcion = ViewBag.RequiereSuscripcion == true;
    var creadorInfo = ViewBag.Creador as Lado.Models.ApplicationUser ?? Model.Creador;
    var esVideo = Model.TipoContenido == Lado.Models.TipoContenido.Video;
    var cdnBase = ViewBag.CdnUrl ?? "";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>@ViewData["Title"] - LadoApp</title>

    <!-- Open Graph meta tags para compartir -->
    <meta property="og:title" content="Historia de @(creadorInfo?.NombreCompleto ?? "Usuario") en LadoApp">
    <meta property="og:description" content="Mira esta historia en LadoApp">
    <meta property="og:type" content="video.other">
    @if (!requiereSuscripcion)
    {
        <meta property="og:image" content="@(cdnBase)@(Model.RutaArchivo)">
    }
    <meta property="og:url" content="@Context.Request.Scheme://@Context.Request.Host/Stories/Ver/@Model.Id">
    <meta property="og:site_name" content="LadoApp">

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="Historia de @(creadorInfo?.NombreCompleto ?? "Usuario")">
    <meta name="twitter:description" content="Mira esta historia en LadoApp">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary: #E91E63;
            --primary-dark: #C2185B;
            --bg: #000;
            --text: #fff;
            --muted: rgba(255,255,255,0.7);
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: var(--bg);
            color: var(--text);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .story-container {
            width: 100%;
            max-width: 420px;
            height: 100vh;
            max-height: 750px;
            position: relative;
            background: #111;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 25px 80px rgba(0,0,0,0.5);
        }

        @@media (max-width: 420px) {
            .story-container {
                max-height: 100vh;
                border-radius: 0;
            }
        }

        /* Header */
        .story-header {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            z-index: 10;
            padding: 12px 16px;
            background: linear-gradient(to bottom, rgba(0,0,0,0.7), transparent);
        }

        .story-user {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .story-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            border: 2px solid var(--primary);
            object-fit: cover;
        }

        .story-avatar-placeholder {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary), #ff6b6b);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 16px;
            color: white;
        }

        .story-user-info {
            flex: 1;
        }

        .story-username {
            font-weight: 600;
            font-size: 14px;
            color: white;
            text-decoration: none;
        }

        .story-username:hover {
            text-decoration: underline;
        }

        .story-time {
            font-size: 12px;
            color: var(--muted);
        }

        /* Media */
        .story-media {
            width: 100%;
            height: 100%;
            object-fit: contain;
            background: #000;
        }

        /* Blur overlay for LadoB */
        .story-blur-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            backdrop-filter: blur(30px);
            -webkit-backdrop-filter: blur(30px);
            background: rgba(0,0,0,0.6);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 40px 20px;
            text-align: center;
        }

        .blur-lock-icon {
            width: 64px;
            height: 64px;
            margin-bottom: 24px;
            background: linear-gradient(135deg, var(--primary), #ff6b6b);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .blur-lock-icon svg {
            width: 32px;
            height: 32px;
            color: white;
        }

        .blur-title {
            font-size: 20px;
            font-weight: 700;
            margin-bottom: 12px;
        }

        .blur-subtitle {
            font-size: 14px;
            color: var(--muted);
            margin-bottom: 24px;
            line-height: 1.5;
        }

        .blur-cta {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 14px 28px;
            background: linear-gradient(135deg, var(--primary), var(--primary-dark));
            color: white;
            border-radius: 30px;
            font-weight: 600;
            font-size: 15px;
            text-decoration: none;
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .blur-cta:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 30px rgba(233,30,99,0.4);
        }

        /* Bottom bar */
        .story-bottom {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 20px;
            background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
            display: flex;
            flex-direction: column;
            gap: 16px;
        }

        .story-text {
            font-size: 15px;
            line-height: 1.5;
            color: white;
            text-shadow: 0 1px 3px rgba(0,0,0,0.5);
        }

        .story-actions {
            display: flex;
            gap: 12px;
        }

        .story-action-btn {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            padding: 12px;
            background: rgba(255,255,255,0.15);
            backdrop-filter: blur(10px);
            border: none;
            border-radius: 12px;
            color: white;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            text-decoration: none;
            transition: background 0.2s;
        }

        .story-action-btn:hover {
            background: rgba(255,255,255,0.25);
        }

        .story-action-btn.primary {
            background: var(--primary);
        }

        .story-action-btn.primary:hover {
            background: var(--primary-dark);
        }

        /* Expired state */
        .story-expired {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100%;
            padding: 40px;
            text-align: center;
        }

        .expired-icon {
            width: 80px;
            height: 80px;
            margin-bottom: 24px;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .expired-title {
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .expired-text {
            color: var(--muted);
            margin-bottom: 24px;
        }

        /* Stats */
        .story-stats {
            display: flex;
            gap: 16px;
            font-size: 13px;
            color: var(--muted);
        }

        .story-stat {
            display: flex;
            align-items: center;
            gap: 4px;
        }

        /* Logo watermark */
        .logo-watermark {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            opacity: 0.1;
            pointer-events: none;
            font-size: 48px;
            font-weight: 700;
            letter-spacing: -2px;
        }
    </style>
</head>
<body>
    <div class="story-container">
        @if (requiereSuscripcion)
        {
            <!-- Vista blur para Lado B sin suscripción -->
            @if (esVideo)
            {
                <video class="story-media" poster="" style="filter: blur(30px); transform: scale(1.1);">
                    <source src="@cdnBase@Model.RutaArchivo" type="video/mp4">
                </video>
            }
            else
            {
                <img class="story-media" src="@cdnBase@Model.RutaArchivo" alt="Story" style="filter: blur(30px); transform: scale(1.1);">
            }

            <div class="story-blur-overlay">
                <div class="blur-lock-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                        <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
                    </svg>
                </div>
                <h2 class="blur-title">Contenido exclusivo</h2>
                <p class="blur-subtitle">
                    Esta historia es contenido Lado B de @(creadorInfo?.NombreCompleto ?? "este creador").
                    Suscríbete para ver todo su contenido exclusivo.
                </p>
                <a href="/Usuario/@(creadorInfo?.UserName)" class="blur-cta">
                    <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                        <circle cx="12" cy="7" r="4"/>
                    </svg>
                    Ver perfil
                </a>
            </div>
        }
        else
        {
            <!-- Header -->
            <div class="story-header">
                <div class="story-user">
                    @if (!string.IsNullOrEmpty(Model.Creador?.FotoPerfil))
                    {
                        <img src="@cdnBase@Model.Creador.FotoPerfil" alt="@Model.Creador.NombreCompleto" class="story-avatar">
                    }
                    else
                    {
                        <div class="story-avatar-placeholder">@(Model.Creador?.NombreCompleto?.FirstOrDefault().ToString().ToUpper() ?? "?")</div>
                    }
                    <div class="story-user-info">
                        <a href="/Usuario/@Model.Creador?.UserName" class="story-username">@(Model.Creador?.NombreCompleto ?? "Usuario")</a>
                        <div class="story-time">
                            @{
                                var tiempo = DateTime.Now - Model.FechaPublicacion;
                                var tiempoTexto = tiempo.TotalMinutes < 60 ? $"Hace {(int)tiempo.TotalMinutes}m" :
                                                  tiempo.TotalHours < 24 ? $"Hace {(int)tiempo.TotalHours}h" :
                                                  Model.FechaPublicacion.ToString("dd MMM");
                            }
                            @tiempoTexto
                        </div>
                    </div>
                </div>
            </div>

            <!-- Media -->
            @if (esVideo)
            {
                <video class="story-media" controls playsinline autoplay muted>
                    <source src="@cdnBase@Model.RutaArchivo" type="video/mp4">
                    Tu navegador no soporta videos.
                </video>
            }
            else
            {
                <img class="story-media" src="@cdnBase@Model.RutaArchivo" alt="Historia de @Model.Creador?.NombreCompleto">
            }

            <!-- Logo watermark -->
            <div class="logo-watermark">LADO</div>

            <!-- Bottom bar -->
            <div class="story-bottom">
                @if (!string.IsNullOrEmpty(Model.Texto))
                {
                    <p class="story-text">@Model.Texto</p>
                }

                <div class="story-stats">
                    <span class="story-stat">
                        <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                            <circle cx="12" cy="12" r="3"/>
                        </svg>
                        @Model.NumeroVistas vistas
                    </span>
                    <span class="story-stat">
                        <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                        </svg>
                        @Model.NumeroLikes
                    </span>
                </div>

                <div class="story-actions">
                    <a href="/" class="story-action-btn primary">
                        <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                            <polyline points="9 22 9 12 15 12 15 22"/>
                        </svg>
                        Abrir LadoApp
                    </a>
                    <a href="/Usuario/@Model.Creador?.UserName" class="story-action-btn">
                        <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                            <circle cx="12" cy="7" r="4"/>
                        </svg>
                        Ver perfil
                    </a>
                </div>
            </div>
        }
    </div>

    <script>
        // Auto-mute video para iOS
        document.addEventListener('DOMContentLoaded', function() {
            const video = document.querySelector('video');
            if (video) {
                video.muted = true;
                video.play().catch(() => {});
            }
        });
    </script>
</body>
</html>
