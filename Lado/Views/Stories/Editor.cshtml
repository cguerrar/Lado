                    } else {
                        resultsDiv.innerHTML = '<div style="padding:12px;color:var(--muted);">No se encontraron usuarios</div>';
                        resultsDiv.classList.add('active');
                    }
                } catch (error) {
                    console.error('Error buscando usuarios:', error);
                }
            }, 300);
        }

