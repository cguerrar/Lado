@model Lado.Models.ApplicationUser
@using Lado.Models
@{
    Layout = null;

    // Datos del contenido
    var contenidoPublico = ViewBag.ContenidoPublico as List<Contenido> ?? new List<Contenido>();
    var contenidoPremium = ViewBag.ContenidoPremium as List<Contenido> ?? new List<Contenido>();
    var totalPublicaciones = ViewBag.TotalPublicaciones as int? ?? 0;
    var numeroSuscriptores = ViewBag.NumeroSuscriptores as int? ?? 0;
    var totalLikes = ViewBag.TotalLikes as int? ?? 0;

    // Datos LadoB
    var precioSuscripcion = ViewBag.PrecioSuscripcion as decimal? ?? 0;
    var totalFotos = ViewBag.TotalFotos as int? ?? 0;
    var totalVideos = ViewBag.TotalVideos as int? ?? 0;
    var totalContenidosLadoB = ViewBag.TotalContenidosLadoB as int? ?? 0;

    // Estado
    var estaAutenticado = ViewBag.EstaAutenticado as bool? ?? false;
    var esCreadorLadoB = ViewBag.EsCreadorLadoB as bool? ?? false;

    // Datos del perfil
    var nombreMostrar = ViewBag.NombreMostrar as string ?? Model?.NombreCompleto ?? "Usuario";
    var fotoMostrar = ViewBag.FotoMostrar as string ?? "";
    var bioMostrar = ViewBag.BioMostrar as string ?? "";
    var usernameMostrar = ViewBag.UsernameMostrar as string ?? Model?.UserName ?? "";
    var coverMostrar = Model?.FotoPortada ?? "";

    // Datos adicionales del usuario
    var pais = Model?.Pais ?? "";
    var ciudad = Model?.Ciudad ?? "";
    var fechaRegistro = Model?.FechaRegistro ?? DateTime.Now;
    var ubicacion = !string.IsNullOrEmpty(ciudad) && !string.IsNullOrEmpty(pais)
        ? $"{ciudad}, {pais}"
        : (!string.IsNullOrEmpty(pais) ? pais : (!string.IsNullOrEmpty(ciudad) ? ciudad : ""));

    // Combinar contenido
    var todoContenido = contenidoPremium.Concat(contenidoPublico).ToList();
    var totalContenido = esCreadorLadoB ? totalContenidosLadoB : totalPublicaciones;

    // Función para limpiar rutas
    string LimpiarRuta(string ruta) {
        if (string.IsNullOrEmpty(ruta)) return "";
        return ruta.Trim().Replace("\"", "").Replace("'", "").Replace("&quot;", "").Replace("%22", "");
    }

    // Formatear números
    string FormatNumber(int num) {
        if (num >= 1000000) return $"{num/1000000.0:0.#}M";
        if (num >= 1000) return $"{num/1000.0:0.#}K";
        return num.ToString();
    }
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>@nombreMostrar (@@@@usernameMostrar) - Lado</title>
    <meta name="description" content="@(bioMostrar ?? $"Encuentra a {nombreMostrar} en Lado")">
    <meta property="og:title" content="@nombreMostrar - Lado">
    <meta property="og:image" content="@(fotoMostrar ?? "/images/og-default.jpg")">
    <link rel="icon" type="image/png" href="/favicon.png">
    <meta name="theme-color" content="#4682B4">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary: #4682B4;
            --primary-dark: #36648B;
            --primary-light: #5A9BD4;
            --primary-gradient: linear-gradient(135deg, #4682B4 0%, #36648B 100%);
            --bg: #ffffff;
            --bg-secondary: #f5f7fa;
            --bg-card: #ffffff;
            --text: #1a1a2e;
            --text-secondary: #64748b;
            --text-muted: #94a3b8;
            --border: #e2e8f0;
            --success: #10b981;
            --shadow-sm: 0 1px 2px rgba(0,0,0,0.05);
            --shadow: 0 4px 6px -1px rgba(0,0,0,0.1), 0 2px 4px -2px rgba(0,0,0,0.1);
            --shadow-lg: 0 10px 15px -3px rgba(0,0,0,0.1), 0 4px 6px -4px rgba(0,0,0,0.1);
        }

        html, body {
            min-height: 100vh;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: var(--bg-secondary);
            color: var(--text);
            -webkit-font-smoothing: antialiased;
            line-height: 1.5;
        }

        /* ========================================
           NAVBAR
           ======================================== */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            height: 60px;
            background: rgba(255,255,255,0.95);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid var(--border);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
            z-index: 1000;
        }

        .navbar-brand {
            font-size: 24px;
            font-weight: 800;
            color: var(--primary);
            text-decoration: none;
            letter-spacing: -0.5px;
        }

        .navbar-actions {
            display: flex;
            gap: 12px;
        }

        .nav-btn {
            padding: 8px 16px;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.2s;
        }

        .nav-btn-outline {
            color: var(--text);
            border: 1px solid var(--border);
            background: transparent;
        }

        .nav-btn-outline:hover {
            border-color: var(--primary);
            color: var(--primary);
        }

        .nav-btn-primary {
            background: var(--primary);
            color: white;
        }

        .nav-btn-primary:hover {
            background: var(--primary-dark);
        }

        /* ========================================
           MAIN CONTAINER
           ======================================== */
        .main-container {
            max-width: 935px;
            margin: 0 auto;
            padding-top: 60px;
        }

        /* ========================================
           COVER / BANNER
           ======================================== */
        .cover-section {
            position: relative;
            height: 280px;
            background: var(--primary-gradient);
            overflow: hidden;
        }

        .cover-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .cover-overlay {
            position: absolute;
            inset: 0;
            background: linear-gradient(180deg, transparent 0%, rgba(0,0,0,0.3) 100%);
        }

        /* ========================================
           PROFILE CARD
           ======================================== */
        .profile-card {
            background: var(--bg-card);
            margin: -80px 20px 20px;
            border-radius: 20px;
            box-shadow: var(--shadow-lg);
            position: relative;
            z-index: 10;
        }

        .profile-header {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 0 24px 24px;
            text-align: center;
        }

        /* Avatar */
        .avatar-container {
            margin-top: -60px;
            position: relative;
        }

        .avatar-wrapper {
            position: relative;
            width: 140px;
            height: 140px;
        }

        .avatar-ring {
            position: absolute;
            inset: -5px;
            border-radius: 50%;
            background: var(--primary-gradient);
            padding: 5px;
        }

        .avatar-ring-inner {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            background: white;
            padding: 4px;
        }

        .avatar {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            object-fit: cover;
        }

        .avatar-placeholder {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            background: var(--primary-gradient);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 56px;
            font-weight: 700;
            color: white;
        }

        .online-indicator {
            position: absolute;
            bottom: 8px;
            right: 8px;
            width: 24px;
            height: 24px;
            background: var(--success);
            border: 4px solid white;
            border-radius: 50%;
            z-index: 2;
        }

        /* User Info */
        .user-info {
            margin-top: 16px;
        }

        .user-name {
            font-size: 28px;
            font-weight: 800;
            color: var(--text);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            margin-bottom: 4px;
        }

        .verified-badge {
            width: 26px;
            height: 26px;
            background: var(--primary);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .verified-badge svg {
            width: 16px;
            height: 16px;
            fill: white;
        }

        .user-handle {
            font-size: 16px;
            color: var(--text-muted);
            margin-bottom: 16px;
        }

        /* Stats Row */
        .stats-row {
            display: flex;
            justify-content: center;
            gap: 8px;
            flex-wrap: wrap;
            margin-bottom: 20px;
        }

        .stat-item {
            display: flex;
            align-items: center;
            gap: 6px;
            padding: 8px 16px;
            background: var(--bg-secondary);
            border-radius: 50px;
            font-size: 14px;
            color: var(--text-secondary);
        }

        .stat-item svg {
            width: 16px;
            height: 16px;
            color: var(--primary);
        }

        .stat-value {
            font-weight: 700;
            color: var(--text);
        }

        /* Bio */
        .user-bio {
            font-size: 15px;
            color: var(--text-secondary);
            line-height: 1.6;
            max-width: 500px;
            margin: 0 auto 20px;
            white-space: pre-line;
        }

        /* Location & Date */
        .user-meta {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
            font-size: 14px;
            color: var(--text-muted);
            margin-bottom: 24px;
        }

        .user-meta-item {
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .user-meta-item svg {
            width: 16px;
            height: 16px;
        }

        /* ========================================
           ACTION BUTTONS
           ======================================== */
        .action-buttons {
            display: flex;
            gap: 12px;
            justify-content: center;
            flex-wrap: wrap;
            padding: 0 24px 24px;
        }

        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            padding: 14px 28px;
            border-radius: 50px;
            font-size: 15px;
            font-weight: 600;
            text-decoration: none;
            border: none;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .btn svg {
            width: 20px;
            height: 20px;
        }

        .btn-subscribe {
            background: var(--primary-gradient);
            color: white;
            min-width: 200px;
            box-shadow: 0 4px 14px rgba(70, 130, 180, 0.4);
        }

        .btn-subscribe:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(70, 130, 180, 0.5);
        }

        .btn-subscribe .price {
            background: rgba(255,255,255,0.2);
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 13px;
            margin-left: 4px;
        }

        .btn-tip {
            background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
            color: white;
        }

        .btn-tip:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 14px rgba(245, 158, 11, 0.4);
        }

        .btn-message {
            background: var(--bg-secondary);
            color: var(--text);
            border: 2px solid var(--border);
        }

        .btn-message:hover {
            border-color: var(--primary);
            color: var(--primary);
        }

        /* ========================================
           CONTENT STATS BAR
           ======================================== */
        .content-stats-bar {
            display: flex;
            justify-content: space-around;
            padding: 20px;
            background: var(--bg-card);
            margin: 0 20px 20px;
            border-radius: 16px;
            box-shadow: var(--shadow-sm);
        }

        .content-stat {
            text-align: center;
            padding: 8px 16px;
        }

        .content-stat-value {
            font-size: 24px;
            font-weight: 800;
            color: var(--text);
            margin-bottom: 4px;
        }

        .content-stat-label {
            font-size: 13px;
            color: var(--text-muted);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        /* ========================================
           CONTENT TABS
           ======================================== */
        .content-tabs {
            display: flex;
            background: var(--bg-card);
            margin: 0 20px 20px;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: var(--shadow-sm);
        }

        .content-tab {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            padding: 16px;
            font-size: 14px;
            font-weight: 600;
            color: var(--text-muted);
            cursor: pointer;
            border-bottom: 3px solid transparent;
            transition: all 0.2s;
        }

        .content-tab:hover {
            color: var(--text-secondary);
            background: var(--bg-secondary);
        }

        .content-tab.active {
            color: var(--primary);
            border-bottom-color: var(--primary);
            background: rgba(70, 130, 180, 0.05);
        }

        .content-tab svg {
            width: 20px;
            height: 20px;
        }

        .tab-count {
            background: var(--bg-secondary);
            padding: 2px 8px;
            border-radius: 10px;
            font-size: 12px;
            font-weight: 700;
        }

        .content-tab.active .tab-count {
            background: var(--primary);
            color: white;
        }

        /* ========================================
           CONTENT GRID
           ======================================== */
        .content-section {
            margin: 0 20px 20px;
        }

        .content-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 4px;
            border-radius: 16px;
            overflow: hidden;
        }

        .content-item {
            position: relative;
            aspect-ratio: 1;
            background: var(--bg-secondary);
            overflow: hidden;
            cursor: pointer;
        }

        .content-item img,
        .content-item video {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .content-item:hover img,
        .content-item:hover video {
            transform: scale(1.08);
        }

        /* Locked content */
        .content-item.locked img,
        .content-item.locked video {
            filter: blur(30px);
            transform: scale(1.2);
        }

        .content-item.locked:hover img,
        .content-item.locked:hover video {
            filter: blur(30px);
            transform: scale(1.25);
        }

        .lock-overlay {
            position: absolute;
            inset: 0;
            background: rgba(0,0,0,0.5);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .lock-overlay svg {
            width: 36px;
            height: 36px;
            color: white;
            opacity: 0.9;
        }

        .unlock-price {
            background: var(--primary);
            color: white;
            padding: 6px 16px;
            border-radius: 20px;
            font-size: 14px;
            font-weight: 700;
        }

        /* Hover overlay */
        .hover-overlay {
            position: absolute;
            inset: 0;
            background: rgba(0,0,0,0.6);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 24px;
            opacity: 0;
            transition: opacity 0.2s;
        }

        .content-item:not(.locked):hover .hover-overlay {
            opacity: 1;
        }

        .hover-stat {
            display: flex;
            align-items: center;
            gap: 8px;
            color: white;
            font-size: 16px;
            font-weight: 700;
        }

        .hover-stat svg {
            width: 22px;
            height: 22px;
            fill: white;
        }

        /* Media badge */
        .media-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            background: rgba(0,0,0,0.7);
            color: white;
            padding: 6px 10px;
            border-radius: 6px;
            font-size: 12px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 4px;
            z-index: 5;
        }

        .media-badge svg {
            width: 14px;
            height: 14px;
        }

        /* Pinned badge */
        .pinned-badge {
            position: absolute;
            top: 10px;
            left: 10px;
            background: var(--primary);
            color: white;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 10px;
            font-weight: 700;
            text-transform: uppercase;
            z-index: 5;
        }

        /* ========================================
           EMPTY STATE
           ======================================== */
        .empty-state {
            background: var(--bg-card);
            border-radius: 16px;
            padding: 60px 20px;
            text-align: center;
        }

        .empty-state svg {
            width: 80px;
            height: 80px;
            color: var(--text-muted);
            opacity: 0.4;
            margin-bottom: 20px;
        }

        .empty-state h4 {
            font-size: 20px;
            font-weight: 700;
            color: var(--text);
            margin-bottom: 8px;
        }

        .empty-state p {
            color: var(--text-muted);
            font-size: 15px;
        }

        /* ========================================
           CTA SECTION
           ======================================== */
        .cta-section {
            background: var(--bg-card);
            margin: 0 20px 20px;
            border-radius: 16px;
            padding: 40px 24px;
            text-align: center;
            box-shadow: var(--shadow-sm);
        }

        .cta-icon {
            width: 64px;
            height: 64px;
            background: var(--primary-gradient);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
        }

        .cta-icon svg {
            width: 32px;
            height: 32px;
            color: white;
        }

        .cta-section h3 {
            font-size: 24px;
            font-weight: 800;
            color: var(--text);
            margin-bottom: 8px;
        }

        .cta-section p {
            color: var(--text-secondary);
            font-size: 15px;
            margin-bottom: 24px;
            max-width: 400px;
            margin-left: auto;
            margin-right: auto;
        }

        .cta-buttons {
            display: flex;
            gap: 12px;
            justify-content: center;
            flex-wrap: wrap;
        }

        /* ========================================
           FOOTER
           ======================================== */
        .footer {
            padding: 32px 20px;
            text-align: center;
        }

        .footer-brand {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: var(--text-muted);
            font-size: 14px;
            text-decoration: none;
            transition: color 0.2s;
        }

        .footer-brand:hover {
            color: var(--primary);
        }

        .footer-brand img {
            height: 24px;
        }

        .footer-brand strong {
            font-weight: 800;
            color: var(--primary);
        }

        /* ========================================
           RESPONSIVE
           ======================================== */
        @@media (max-width: 768px) {
            .cover-section {
                height: 200px;
            }

            .profile-card {
                margin: -60px 12px 16px;
                border-radius: 16px;
            }

            .avatar-wrapper {
                width: 120px;
                height: 120px;
            }

            .avatar-container {
                margin-top: -50px;
            }

            .avatar-placeholder {
                font-size: 48px;
            }

            .user-name {
                font-size: 24px;
            }

            .stats-row {
                gap: 6px;
            }

            .stat-item {
                padding: 6px 12px;
                font-size: 13px;
            }

            .action-buttons {
                padding: 0 16px 20px;
            }

            .btn {
                padding: 12px 20px;
                font-size: 14px;
            }

            .btn-subscribe {
                min-width: 180px;
            }

            .content-stats-bar,
            .content-tabs,
            .content-section,
            .cta-section {
                margin-left: 12px;
                margin-right: 12px;
            }

            .content-stat-value {
                font-size: 20px;
            }

            .content-tab {
                padding: 12px 8px;
                font-size: 13px;
            }

            .content-grid {
                gap: 2px;
            }
        }

        @@media (max-width: 480px) {
            .navbar-brand {
                font-size: 20px;
            }

            .nav-btn {
                padding: 6px 12px;
                font-size: 13px;
            }

            .cover-section {
                height: 160px;
            }

            .user-name {
                font-size: 22px;
            }

            .user-handle {
                font-size: 14px;
            }

            .user-bio {
                font-size: 14px;
            }

            .action-buttons {
                flex-direction: column;
                align-items: stretch;
            }

            .btn {
                width: 100%;
            }

            .btn-subscribe {
                min-width: unset;
            }

            .content-tab span:not(.tab-count) {
                display: none;
            }
        }
    </style>
</head>
<body>
    <!-- NAVBAR -->
    <nav class="navbar">
        <a href="/" class="navbar-brand">LADO</a>
        <div class="navbar-actions">
            @if (!estaAutenticado)
            {
                <a href="@Url.Action("Login", "Account")" class="nav-btn nav-btn-outline">Iniciar sesion</a>
                <a href="@Url.Action("Register", "Account")" class="nav-btn nav-btn-primary">Registrarse</a>
            }
        </div>
    </nav>

    <div class="main-container">
        <!-- COVER -->
        <section class="cover-section">
            @if (!string.IsNullOrEmpty(coverMostrar))
            {
                <img src="@coverMostrar" alt="Cover" class="cover-image">
            }
            <div class="cover-overlay"></div>
        </section>

        <!-- PROFILE CARD -->
        <div class="profile-card">
            <div class="profile-header">
                <!-- Avatar -->
                <div class="avatar-container">
                    <div class="avatar-wrapper">
                        <div class="avatar-ring">
                            <div class="avatar-ring-inner">
                                @if (!string.IsNullOrEmpty(fotoMostrar))
                                {
                                    <img src="@fotoMostrar" alt="@nombreMostrar" class="avatar" onerror="this.style.display='none';this.nextElementSibling.style.display='flex';">
                                    <div class="avatar-placeholder" style="display:none;">@(nombreMostrar?.Substring(0, 1).ToUpper())</div>
                                }
                                else
                                {
                                    <div class="avatar-placeholder">@(nombreMostrar?.Substring(0, 1).ToUpper())</div>
                                }
                            </div>
                        </div>
                        @if (Model?.UltimaActividad != null && (DateTime.UtcNow - Model.UltimaActividad.Value).TotalMinutes <= 15)
                        {
                            <div class="online-indicator" title="En linea"></div>
                        }
                    </div>
                </div>

                <!-- User Info -->
                <div class="user-info">
                    <h1 class="user-name">
                        @nombreMostrar
                        @if (Model?.CreadorVerificado == true)
                        {
                            <span class="verified-badge" title="Verificado">
                                <svg viewBox="0 0 24 24"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>
                            </span>
                        }
                    </h1>
                    <p class="user-handle">@@@@usernameMostrar</p>

                    <!-- Stats Pills -->
                    <div class="stats-row">
                        @if (totalLikes > 0)
                        {
                            <div class="stat-item">
                                <svg viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                                </svg>
                                <span class="stat-value">@FormatNumber(totalLikes)</span> Likes
                            </div>
                        }
                        <div class="stat-item">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                <path d="M21 15l-5-5L5 21"></path>
                            </svg>
                            <span class="stat-value">@totalContenido</span> Posts
                        </div>
                        @if (totalFotos > 0)
                        {
                            <div class="stat-item">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                    <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                    <path d="M21 15l-5-5L5 21"></path>
                                </svg>
                                <span class="stat-value">@totalFotos</span> Fotos
                            </div>
                        }
                        @if (totalVideos > 0)
                        {
                            <div class="stat-item">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <polygon points="23 7 16 12 23 17 23 7"></polygon>
                                    <rect x="1" y="5" width="15" height="14" rx="2" ry="2"></rect>
                                </svg>
                                <span class="stat-value">@totalVideos</span> Videos
                            </div>
                        }
                    </div>

                    <!-- Bio -->
                    @if (!string.IsNullOrEmpty(bioMostrar))
                    {
                        <p class="user-bio">@bioMostrar</p>
                    }

                    <!-- Location & Date -->
                    <div class="user-meta">
                        @if (!string.IsNullOrEmpty(ubicacion))
                        {
                            <span class="user-meta-item">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                    <circle cx="12" cy="10" r="3"></circle>
                                </svg>
                                @ubicacion
                            </span>
                        }
                        <span class="user-meta-item">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                <line x1="16" y1="2" x2="16" y2="6"></line>
                                <line x1="8" y1="2" x2="8" y2="6"></line>
                                <line x1="3" y1="10" x2="21" y2="10"></line>
                            </svg>
                            Miembro desde @fechaRegistro.ToString("MMM yyyy")
                        </span>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="action-buttons">
                @if (esCreadorLadoB && precioSuscripcion > 0)
                {
                    <a href="@Url.Action("Register", "Account", new { returnUrl = $"/@{usernameMostrar}" })" class="btn btn-subscribe">
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
                        </svg>
                        Suscribirse
                        <span class="price">$@precioSuscripcion.ToString("0.##")/mes</span>
                    </a>
                    <a href="@Url.Action("Register", "Account")" class="btn btn-tip">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="12" y1="1" x2="12" y2="23"></line>
                            <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                        </svg>
                        Propina
                    </a>
                    <a href="@Url.Action("Register", "Account")" class="btn btn-message">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                        </svg>
                        Mensaje
                    </a>
                }
                else
                {
                    <a href="@Url.Action("Register", "Account")" class="btn btn-subscribe">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                            <circle cx="8.5" cy="7" r="4"></circle>
                            <line x1="20" y1="8" x2="20" y2="14"></line>
                            <line x1="23" y1="11" x2="17" y2="11"></line>
                        </svg>
                        Seguir
                    </a>
                    <a href="@Url.Action("Login", "Account")" class="btn btn-message">
                        Iniciar sesion
                    </a>
                }
            </div>
        </div>

        <!-- CONTENT TABS -->
        <div class="content-tabs">
            <div class="content-tab active" data-tab="all">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="3" width="7" height="7"></rect>
                    <rect x="14" y="3" width="7" height="7"></rect>
                    <rect x="14" y="14" width="7" height="7"></rect>
                    <rect x="3" y="14" width="7" height="7"></rect>
                </svg>
                <span>Todo</span>
                <span class="tab-count">@totalContenido</span>
            </div>
            @if (totalFotos > 0)
            {
                <div class="content-tab" data-tab="photos">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                        <circle cx="8.5" cy="8.5" r="1.5"></circle>
                        <path d="M21 15l-5-5L5 21"></path>
                    </svg>
                    <span>Fotos</span>
                    <span class="tab-count">@totalFotos</span>
                </div>
            }
            @if (totalVideos > 0)
            {
                <div class="content-tab" data-tab="videos">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polygon points="23 7 16 12 23 17 23 7"></polygon>
                        <rect x="1" y="5" width="15" height="14" rx="2" ry="2"></rect>
                    </svg>
                    <span>Videos</span>
                    <span class="tab-count">@totalVideos</span>
                </div>
            }
        </div>

        <!-- CONTENT GRID -->
        <section class="content-section">
            @if (todoContenido.Any())
            {
                <div class="content-grid">
                    @foreach (var contenido in todoContenido.Take(18))
                    {
                        var rutaArchivo = LimpiarRuta(contenido.RutaArchivo);
                        var thumbnailUrl = LimpiarRuta(contenido.Thumbnail);
                        var esVideo = contenido.TipoContenido == TipoContenido.Video;
                        var esBloqueado = contenido.TipoLado == TipoLado.LadoB;
                        var precioItem = contenido.PrecioDesbloqueo ?? precioSuscripcion;

                        <div class="content-item @(esBloqueado ? "locked" : "")" onclick="window.location.href='@Url.Action("Register", "Account")'">
                            @if (!string.IsNullOrEmpty(thumbnailUrl))
                            {
                                <img src="@thumbnailUrl" alt="" loading="lazy" onerror="this.src='/images/placeholder.jpg'">
                            }
                            else if (!string.IsNullOrEmpty(rutaArchivo))
                            {
                                if (esVideo)
                                {
                                    <video src="@rutaArchivo" muted preload="metadata"></video>
                                }
                                else
                                {
                                    <img src="@rutaArchivo" alt="" loading="lazy" onerror="this.src='/images/placeholder.jpg'">
                                }
                            }
                            else
                            {
                                <div style="background: var(--primary-gradient); width:100%; height:100%;"></div>
                            }

                            @if (esVideo)
                            {
                                <div class="media-badge">
                                    <svg viewBox="0 0 24 24" fill="currentColor"><polygon points="5,3 19,12 5,21"/></svg>
                                    Video
                                </div>
                            }

                            @if (esBloqueado)
                            {
                                <div class="lock-overlay">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                                        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                                    </svg>
                                    @if (precioItem > 0)
                                    {
                                        <span class="unlock-price">$@precioItem.ToString("0.##")</span>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="hover-overlay">
                                    <span class="hover-stat">
                                        <svg viewBox="0 0 24 24"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/></svg>
                                        @contenido.NumeroLikes
                                    </span>
                                    <span class="hover-stat">
                                        <svg viewBox="0 0 24 24"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/></svg>
                                        @contenido.NumeroComentarios
                                    </span>
                                </div>
                            }
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                        <circle cx="8.5" cy="8.5" r="1.5"></circle>
                        <path d="M21 15l-5-5L5 21"></path>
                    </svg>
                    <h4>Sin publicaciones</h4>
                    <p>Este usuario aun no ha compartido contenido</p>
                </div>
            }
        </section>

        <!-- CTA SECTION -->
        @if (!estaAutenticado)
        {
            <section class="cta-section">
                <div class="cta-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
                    </svg>
                </div>
                <h3>Unete a Lado</h3>
                <p>Crea una cuenta gratuita para seguir a @nombreMostrar, dar likes y acceder a contenido exclusivo</p>
                <div class="cta-buttons">
                    <a href="@Url.Action("Register", "Account")" class="btn btn-subscribe">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                            <circle cx="8.5" cy="7" r="4"></circle>
                            <line x1="20" y1="8" x2="20" y2="14"></line>
                            <line x1="23" y1="11" x2="17" y2="11"></line>
                        </svg>
                        Crear cuenta gratis
                    </a>
                    <a href="@Url.Action("Login", "Account")" class="btn btn-message">Ya tengo cuenta</a>
                </div>
            </section>
        }

        <!-- FOOTER -->
        <footer class="footer">
            <a href="/" class="footer-brand">
                Hecho con <strong>LADO</strong>
            </a>
        </footer>
    </div>

    <script>
        // Tab switching (visual only for public view)
        document.querySelectorAll('.content-tab').forEach(tab => {
            tab.addEventListener('click', function() {
                document.querySelectorAll('.content-tab').forEach(t => t.classList.remove('active'));
                this.classList.add('active');
            });
        });
    </script>
</body>
</html>
