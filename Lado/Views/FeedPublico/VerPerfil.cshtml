@model Lado.Models.ApplicationUser
@using Lado.Models
@{
    ViewData["Title"] = $"{Model?.NombrePublico} - Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var contenidoPublico = ViewBag.ContenidoPublico as List<Contenido> ?? new List<Contenido>();
    var contenidoPremium = ViewBag.ContenidoPremium as List<Contenido> ?? new List<Contenido>();
    var contenidoPremiumIds = ViewBag.ContenidoPremiumIds as List<int> ?? new List<int>();
    var totalPublicaciones = ViewBag.TotalPublicaciones as int? ?? 0;
    var totalLikes = ViewBag.TotalLikes as int? ?? 0;
    var numeroSuscriptores = ViewBag.NumeroSuscriptores as int? ?? 0;
    var estaAutenticado = ViewBag.EstaAutenticado as bool? ?? false;
}

<style>
    /* ========================================
       PERFIL PUBLICO - ESTILOS
       ======================================== */
    .profile-page {
        max-width: 935px;
        margin: 0 auto;
        padding: 30px 20px;
    }

    /* Header del perfil */
    .profile-header {
        display: flex;
        gap: 80px;
        margin-bottom: 44px;
        padding-bottom: 44px;
        border-bottom: 1px solid var(--line);
    }

    .profile-avatar-container {
        flex-shrink: 0;
    }

    .profile-avatar {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid var(--line);
    }

    .profile-avatar-placeholder {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 700;
        font-size: 48px;
        border: 4px solid var(--line);
    }

    .profile-info {
        flex: 1;
    }

    .profile-header-top {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 20px;
    }

    .profile-username {
        font-size: 28px;
        font-weight: 400;
        color: var(--fg);
        margin: 0;
    }

    .profile-verified {
        color: var(--primary);
    }

    .profile-actions {
        display: flex;
        gap: 12px;
    }

    .btn-action {
        padding: 10px 24px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 14px;
        text-decoration: none;
        transition: all 0.2s;
        border: none;
        cursor: pointer;
    }

    .btn-action.primary {
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        color: white;
    }

    .btn-action.primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(70, 130, 180, 0.4);
    }

    .btn-action.secondary {
        background: var(--surface);
        border: 1px solid var(--line);
        color: var(--fg);
    }

    .btn-action.secondary:hover {
        background: var(--line);
    }

    /* Stats */
    .profile-stats {
        display: flex;
        gap: 40px;
        margin-bottom: 20px;
    }

    .stat-item {
        text-align: center;
    }

    .stat-value {
        font-size: 18px;
        font-weight: 700;
        color: var(--fg);
    }

    .stat-label {
        font-size: 14px;
        color: var(--muted);
    }

    /* Bio */
    .profile-bio {
        font-size: 14px;
        line-height: 1.5;
        color: var(--fg);
    }

    .profile-bio .name {
        font-weight: 600;
        display: block;
        margin-bottom: 4px;
    }

    /* Premium badge */
    .premium-creator-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        color: white;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        margin-top: 12px;
    }

    .premium-creator-badge svg {
        width: 14px;
        height: 14px;
    }

    /* ========================================
       CONTENIDO GRID
       ======================================== */
    .content-tabs {
        display: flex;
        justify-content: center;
        gap: 60px;
        border-top: 1px solid var(--line);
        margin-bottom: 4px;
    }

    .content-tab {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 16px 0;
        color: var(--muted);
        font-size: 12px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        cursor: pointer;
        border-top: 2px solid transparent;
        margin-top: -1px;
        transition: all 0.2s;
    }

    .content-tab.active {
        color: var(--fg);
        border-top-color: var(--fg);
    }

    .content-tab svg {
        width: 12px;
        height: 12px;
    }

    /* Grid de contenido */
    .content-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 4px;
    }

    .content-item {
        position: relative;
        aspect-ratio: 1;
        background: #f0f0f0;
        overflow: hidden;
        cursor: pointer;
    }

    .content-item img,
    .content-item video {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .content-item-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0,0,0,0.3);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 24px;
        opacity: 0;
        transition: opacity 0.2s;
    }

    .content-item:hover .content-item-overlay {
        opacity: 1;
    }

    .content-item-stat {
        display: flex;
        align-items: center;
        gap: 6px;
        color: white;
        font-weight: 700;
        font-size: 14px;
    }

    .content-item-stat svg {
        width: 18px;
        height: 18px;
    }

    /* Premium content item */
    .content-item.premium img,
    .content-item.premium video {
        filter: blur(20px);
        transform: scale(1.1);
    }

    .content-item.premium .premium-lock {
        position: absolute;
        inset: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background: rgba(0,0,0,0.5);
        color: white;
        text-align: center;
        padding: 20px;
    }

    .content-item.premium .premium-lock svg {
        width: 32px;
        height: 32px;
        margin-bottom: 8px;
    }

    .content-item.premium .premium-lock span {
        font-size: 12px;
        font-weight: 600;
    }

    /* Login prompt banner */
    .login-banner {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
        border-radius: 16px;
        padding: 32px;
        text-align: center;
        color: white;
        margin-top: 32px;
    }

    .login-banner h3 {
        font-size: 1.25rem;
        font-weight: 700;
        margin: 0 0 8px;
    }

    .login-banner p {
        opacity: 0.8;
        margin: 0 0 20px;
        font-size: 0.95rem;
    }

    .login-banner .btn-group {
        display: flex;
        gap: 12px;
        justify-content: center;
    }

    .login-banner .btn {
        padding: 12px 28px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 14px;
        text-decoration: none;
        transition: all 0.2s;
    }

    .login-banner .btn-primary {
        background: var(--primary);
        color: white;
    }

    .login-banner .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(70, 130, 180, 0.4);
    }

    .login-banner .btn-secondary {
        background: rgba(255,255,255,0.1);
        color: white;
        border: 1px solid rgba(255,255,255,0.2);
    }

    .login-banner .btn-secondary:hover {
        background: rgba(255,255,255,0.2);
    }

    /* Empty state */
    .empty-content {
        text-align: center;
        padding: 60px 24px;
        color: var(--muted);
    }

    .empty-content svg {
        width: 60px;
        height: 60px;
        opacity: 0.3;
        margin-bottom: 16px;
    }

    .empty-content h4 {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--fg);
        margin: 0 0 8px;
    }

    .empty-content p {
        margin: 0;
        font-size: 0.9rem;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .profile-header {
            flex-direction: column;
            align-items: center;
            gap: 24px;
            text-align: center;
        }

        .profile-header-top {
            flex-direction: column;
            gap: 16px;
        }

        .profile-stats {
            justify-content: center;
        }

        .profile-avatar,
        .profile-avatar-placeholder {
            width: 100px;
            height: 100px;
            font-size: 32px;
        }

        .content-grid {
            grid-template-columns: repeat(3, 1fr);
            gap: 2px;
        }
    }
</style>

<div class="profile-page">
    <!-- HEADER DEL PERFIL -->
    <div class="profile-header">
        <div class="profile-avatar-container">
            @if (!string.IsNullOrEmpty(Model?.FotoPerfil))
            {
                <img src="@Url.Content($"~/{Model.FotoPerfil}")" alt="@Model?.NombrePublico" class="profile-avatar">
            }
            else
            {
                <div class="profile-avatar-placeholder">
                    @(Model?.NombrePublico?.Substring(0, 1).ToUpper() ?? "U")
                </div>
            }
        </div>

        <div class="profile-info">
            <div class="profile-header-top">
                <h1 class="profile-username">
                    @Model?.NombrePublico
                    @if (Model?.CreadorVerificado == true)
                    {
                        <svg class="profile-verified" style="width:22px;height:22px;vertical-align:middle;margin-left:8px;" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/>
                        </svg>
                    }
                </h1>

                <div class="profile-actions">
                    @if (estaAutenticado)
                    {
                        <a href="@Url.Action("Perfil", "Feed", new { id = Model?.Id })" class="btn-action primary">
                            Ver perfil completo
                        </a>
                    }
                    else
                    {
                        <a href="@Url.Action("Register", "Account")" class="btn-action primary">
                            Seguir
                        </a>
                        <a href="@Url.Action("Login", "Account")" class="btn-action secondary">
                            Iniciar sesion
                        </a>
                    }
                </div>
            </div>

            <div class="profile-stats">
                <div class="stat-item">
                    <span class="stat-value">@totalPublicaciones</span>
                    <span class="stat-label">publicaciones</span>
                </div>
                <div class="stat-item">
                    <span class="stat-value">@Model?.NumeroSeguidores</span>
                    <span class="stat-label">seguidores</span>
                </div>
                @if (contenidoPremium.Any())
                {
                    <div class="stat-item">
                        <span class="stat-value">@numeroSuscriptores</span>
                        <span class="stat-label">suscriptores</span>
                    </div>
                }
            </div>

            <div class="profile-bio">
                @if (!string.IsNullOrEmpty(Model?.NombreCompleto))
                {
                    <span class="name">@Model.NombreCompleto</span>
                }
                @if (!string.IsNullOrEmpty(Model?.Biografia))
                {
                    <p>@Model.Biografia</p>
                }
            </div>

            @if (contenidoPremium.Any())
            {
                <div class="premium-creator-badge">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
                    </svg>
                    Creador Premium
                </div>
            }
        </div>
    </div>

    <!-- TABS DE CONTENIDO -->
    <div class="content-tabs">
        <div class="content-tab active">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="3" width="7" height="7"></rect>
                <rect x="14" y="3" width="7" height="7"></rect>
                <rect x="14" y="14" width="7" height="7"></rect>
                <rect x="3" y="14" width="7" height="7"></rect>
            </svg>
            PUBLICACIONES
        </div>
        @if (contenidoPremium.Any())
        {
            <div class="content-tab">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                    <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                </svg>
                PREMIUM (@contenidoPremium.Count)
            </div>
        }
    </div>

    <!-- GRID DE CONTENIDO -->
    @if (contenidoPublico.Any() || contenidoPremium.Any())
    {
        <div class="content-grid">
            @foreach (var contenido in contenidoPublico)
            {
                <div class="content-item">
                    @if (!string.IsNullOrEmpty(contenido.RutaArchivo))
                    {
                        @if (contenido.TipoContenido == TipoContenido.Video)
                        {
                            <video src="@Url.Content($"~/{contenido.RutaArchivo}")" muted></video>
                        }
                        else
                        {
                            <img src="@Url.Content($"~/{contenido.RutaArchivo}")" alt="Contenido">
                        }
                    }
                    else if (!string.IsNullOrEmpty(contenido.Thumbnail))
                    {
                        <img src="@Url.Content($"~/{contenido.Thumbnail}")" alt="Contenido">
                    }
                    <div class="content-item-overlay">
                        <span class="content-item-stat">
                            <svg viewBox="0 0 24 24" fill="currentColor">
                                <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                            </svg>
                            @contenido.NumeroLikes
                        </span>
                        <span class="content-item-stat">
                            <svg viewBox="0 0 24 24" fill="currentColor">
                                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                            </svg>
                            @contenido.NumeroComentarios
                        </span>
                    </div>
                </div>
            }

            @foreach (var contenido in contenidoPremium)
            {
                <div class="content-item premium">
                    @if (!string.IsNullOrEmpty(contenido.RutaArchivo))
                    {
                        @if (contenido.TipoContenido == TipoContenido.Video)
                        {
                            <video src="@Url.Content($"~/{contenido.RutaArchivo}")" muted></video>
                        }
                        else
                        {
                            <img src="@Url.Content($"~/{contenido.RutaArchivo}")" alt="Contenido Premium">
                        }
                    }
                    else if (!string.IsNullOrEmpty(contenido.Thumbnail))
                    {
                        <img src="@Url.Content($"~/{contenido.Thumbnail}")" alt="Contenido Premium">
                    }
                    <div class="premium-lock">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                            <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                        </svg>
                        <span>Contenido Premium</span>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-content">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                <circle cx="8.5" cy="8.5" r="1.5"></circle>
                <path d="M21 15l-5-5L5 21"></path>
            </svg>
            <h4>Sin publicaciones</h4>
            <p>Este usuario aun no ha compartido contenido</p>
        </div>
    }

    <!-- Banner de login para usuarios anonimos -->
    @if (!estaAutenticado)
    {
        <div class="login-banner">
            <h3>Quieres ver mas de @Model?.NombrePublico?</h3>
            <p>Crea una cuenta para seguir, dar likes, comentar y acceder a contenido exclusivo</p>
            <div class="btn-group">
                <a href="@Url.Action("Register", "Account")" class="btn btn-primary">Crear cuenta gratis</a>
                <a href="@Url.Action("Login", "Account")" class="btn btn-secondary">Ya tengo cuenta</a>
            </div>
        </div>
    }
</div>
