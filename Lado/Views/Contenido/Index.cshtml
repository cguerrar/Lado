@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Navegación de tabs
            document.querySelectorAll('#filtroTabs .nav-link').forEach(tab => {
                tab.addEventListener('click', function(e) {
                    e.preventDefault();
                    const filtro = this.dataset.filtro;
                    window.location.href = `/Contenido/Index?filtro=${filtro}`;
                });
            });

            // Búsqueda
            const searchInput = document.getElementById('searchInput');
            const tipoFilter = document.getElementById('tipoFilter');
            const cards = document.querySelectorAll('.content-card');

            function filterCards() {
                const searchTerm = searchInput.value.toLowerCase();
                const tipoSelected = tipoFilter.value;

                cards.forEach(card => {
                    const description = card.querySelector('.content-description')?.textContent.toLowerCase() || '';
                    const tipo = card.dataset.tipo;

                    const matchesSearch = description.includes(searchTerm);
                    const matchesTipo = !tipoSelected || tipo === tipoSelected;

                    card.style.display = matchesSearch && matchesTipo ? '' : 'none';
                });
            }

            searchInput?.addEventListener('input', filterCards);
            tipoFilter?.addEventListener('change', filterCards);
        });
    </script>
