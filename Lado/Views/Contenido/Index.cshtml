@model IEnumerable<Lado.Models.Contenido>
@{
    ViewData["Title"] = "Mi Contenido";
    var filtroActual = ViewBag.FiltroActual?.ToString() ?? "todos";
}

<!-- Token global para AJAX -->
@Html.AntiForgeryToken()

<div class="content-manager">
    <!-- Header -->
    <header class="cm-header">
        <div class="cm-header-left">
            <h1>Mi Contenido</h1>
            <span class="cm-count">@Model.Count() publicaciones</span>
        </div>
        <a href="/Contenido/Crear" class="cm-btn-create">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            Crear
        </a>
    </header>

    <!-- Filtros -->
    <div class="cm-filters">
        <div class="cm-tabs">
            <button class="cm-tab lado-a @(filtroActual == "ladoa" ? "active" : "")" data-filtro="ladoa" style="--tab-color: #3b82f6;">
                <span style="font-weight: 800; font-size: 0.75rem; background: rgba(59,130,246,0.15); padding: 2px 8px; border-radius: 10px; margin-right: 4px;">A</span>
                Lado A <span class="cm-tab-count">(@ViewBag.TotalLadoA)</span>
            </button>
            <button class="cm-tab lado-b @(filtroActual == "ladob" ? "active" : "")" data-filtro="ladob" style="--tab-color: #ec4899;">
                <span style="font-weight: 800; font-size: 0.75rem; background: rgba(236,72,153,0.15); padding: 2px 8px; border-radius: 10px; margin-right: 4px;">B</span>
                Lado B <span class="cm-tab-count">(@ViewBag.TotalLadoB)</span>
            </button>
            <button class="cm-tab @(filtroActual == "todos" ? "active" : "")" data-filtro="todos">
                <svg viewBox="0 0 24 24" fill="currentColor"><path d="M4 8h4V4H4v4zm6 12h4v-4h-4v4zm-6 0h4v-4H4v4zm0-6h4v-4H4v4zm6 0h4v-4h-4v4zm6-10v4h4V4h-4zm-6 4h4V4h-4v4zm6 6h4v-4h-4v4zm0 6h4v-4h-4v4z"/></svg>
                Todos
            </button>
            <button class="cm-tab @(filtroActual == "borradores" ? "active" : "")" data-filtro="borradores">
                <svg viewBox="0 0 24 24" fill="currentColor"><path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/></svg>
                Borradores
            </button>
        </div>
        <div class="cm-search-bar">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
            <input type="text" placeholder="Buscar..." id="searchInput">
        </div>
        <select class="cm-select" id="tipoFilter">
            <option value="">Todos</option>
            <option value="posts">Posts</option>
            <option value="reels">Reels</option>
        </select>
    </div>

    <!-- Grid -->
    @if (Model.Any())
    {
        <div class="cm-grid" id="contenidoGrid">
            @foreach (var contenido in Model)
            {
                var esVideo = (int)contenido.TipoContenido == 2;
                var tieneThumb = !string.IsNullOrEmpty(contenido.Thumbnail);

                <article class="cm-card @(contenido.EsBorrador ? "draft" : "")" data-id="@contenido.Id" data-tipo="@((int)contenido.TipoContenido)" data-es-reel="@contenido.EsReel.ToString().ToLower()">
                    <a href="/Feed/Detalle/@contenido.Id" class="cm-card-media">
                        @if (!string.IsNullOrEmpty(contenido.RutaArchivo))
                        {
                            if (esVideo)
                            {
                                if (tieneThumb)
                                {
                                    <img src="@contenido.Thumbnail" alt="" loading="lazy">
                                }
                                else
                                {
                                    <video src="@(contenido.RutaArchivo)#t=0.5" muted preload="metadata" playsinline></video>
                                }
                                <div class="cm-play-icon">
                                    <svg viewBox="0 0 24 24" fill="white"><polygon points="5 3 19 12 5 21 5 3"/></svg>
                                </div>
                            }
                            else
                            {
                                <img src="@contenido.RutaArchivo" alt="" loading="lazy">
                            }
                        }
                        else
                        {
                            <div class="cm-no-media">
                                <svg viewBox="0 0 24 24" fill="currentColor"><path d="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z"/></svg>
                            </div>
                        }

                        <!-- Badges -->
                        <div class="cm-badges">
                            @if (contenido.EsBorrador)
                            {
                                <span class="cm-badge draft">Borrador</span>
                            }
                            @if (contenido.TipoLado == Lado.Models.TipoLado.LadoB)
                            {
                                <span class="cm-badge premium">$@contenido.PrecioDesbloqueo</span>
                            }
                            @if (contenido.EsReel)
                            {
                                <span class="cm-badge reel">Reel</span>
                            }
                        </div>
                    </a>

                    <div class="cm-card-body">
                        <div class="cm-card-meta">
                            @if (contenido.EsBorrador)
                            {
                                <span class="cm-draft-label">
                                    <svg viewBox="0 0 24 24" fill="currentColor"><path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25z"/></svg>
                                    Borrador
                                </span>
                            }
                            else
                            {
                                var dias = (DateTime.Now - contenido.FechaPublicacion).Days;
                                <span class="cm-date">@(dias == 0 ? "Hoy" : dias == 1 ? "Ayer" : $"Hace {dias} días")</span>
                            }
                        </div>

                        <p class="cm-description">
                            @if (string.IsNullOrEmpty(contenido.Descripcion))
                            {
                                <em>Sin descripción</em>
                            }
                            else
                            {
                                @(contenido.Descripcion.Length > 60 ? contenido.Descripcion.Substring(0, 60) + "..." : contenido.Descripcion)
                            }
                        </p>

                        <div class="cm-stats">
                            <div class="cm-stat">
                                <svg viewBox="0 0 24 24" fill="currentColor"><path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/></svg>
                                @contenido.NumeroLikes
                            </div>
                            <div class="cm-stat">
                                <svg viewBox="0 0 24 24" fill="currentColor"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/></svg>
                                @contenido.NumeroComentarios
                            </div>
                            <div class="cm-stat">
                                <svg viewBox="0 0 24 24" fill="currentColor"><path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/></svg>
                                @(contenido.NumeroVistas >= 1000 ? (contenido.NumeroVistas / 1000.0).ToString("0.0") + "K" : contenido.NumeroVistas.ToString())
                            </div>
                        </div>
                    </div>

                    <div class="cm-card-actions">
                        @if (contenido.EsBorrador)
                        {
                            <form asp-action="Publicar" asp-route-id="@contenido.Id" method="post" class="cm-action-form">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="cm-btn publish">
                                    <svg viewBox="0 0 24 24" fill="currentColor"><path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"/></svg>
                                    Publicar
                                </button>
                            </form>
                        }
                        <a href="/Contenido/Editar/@contenido.Id" class="cm-btn edit">
                            <svg viewBox="0 0 24 24" fill="currentColor"><path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/></svg>
                        </a>
                        <button type="button" class="cm-btn delete" onclick="showDeleteModal(@contenido.Id, '@(contenido.EsBorrador ? "borrador" : "contenido")')">
                            <svg viewBox="0 0 24 24" fill="currentColor"><path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"/></svg>
                        </button>
                    </div>
                </article>
            }
        </div>
    }
    else
    {
        <div class="cm-empty">
            <div class="cm-empty-icon">
                <svg viewBox="0 0 24 24" fill="currentColor">
                    <path d="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z"/>
                </svg>
            </div>
            @if (filtroActual == "borradores")
            {
                <h3>Sin borradores</h3>
                <p>Los borradores te permiten guardar contenido sin publicar</p>
            }
            else if (filtroActual == "publicados")
            {
                <h3>Sin publicaciones</h3>
                <p>Publica contenido para que tus fans puedan verlo</p>
            }
            else if (filtroActual == "programados")
            {
                <h3>Sin contenido programado</h3>
                <p>Programa publicaciones para el futuro</p>
            }
            else
            {
                <h3>Empieza a crear</h3>
                <p>Comparte contenido exclusivo con tus fans</p>
            }
            <a href="/Contenido/Crear" class="cm-btn-create large">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19"></line>
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
                Crear Publicación
            </a>
        </div>
    }
</div>

<!-- Modal Eliminar -->
<div class="cm-modal-overlay" id="deleteModal">
    <div class="cm-modal">
        <div class="cm-modal-icon">
            <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM8 9h8v10H8V9zm7.5-5l-1-1h-5l-1 1H5v2h14V4h-3.5z"/>
            </svg>
        </div>
        <h3>Eliminar <span id="deleteType">contenido</span></h3>
        <p>Esta acción no se puede deshacer</p>
        <div class="cm-modal-actions">
            <button type="button" class="cm-modal-btn cancel" onclick="hideDeleteModal()">Cancelar</button>
            <button type="button" class="cm-modal-btn confirm" id="confirmDeleteBtn" onclick="confirmarEliminacion()">Eliminar</button>
        </div>
    </div>
</div>

<style>
    /* ==========================================
       CONTENT MANAGER - Diseño Moderno
       Usa variables globales del tema
       ========================================== */

    /* Variables CSS globales para el Content Manager */
    :root {
        --cm-primary: #6366f1;
        --cm-primary-hover: #4f46e5;
        --cm-danger: #ef4444;
        --cm-warning: #f59e0b;
        --cm-success: #10b981;
        --cm-radius: 12px;
        --cm-radius-sm: 8px;
    }

    .content-manager {
        max-width: 1200px;
        margin: 0 auto;
        padding: 24px;
        color: var(--fg);
    }

    /* Header */
    .cm-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
        gap: 16px;
        flex-wrap: wrap;
    }

    .cm-header-left {
        display: flex;
        align-items: baseline;
        gap: 12px;
        flex-wrap: wrap;
    }

    .cm-header h1 {
        font-size: 28px;
        font-weight: 700;
        margin: 0;
        color: var(--fg);
    }

    .cm-count {
        font-size: 14px;
        color: var(--muted);
        background: var(--surface);
        padding: 4px 12px;
        border-radius: 20px;
    }

    .cm-btn-create {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: var(--cm-primary);
        color: white;
        padding: 12px 24px;
        border-radius: var(--cm-radius);
        text-decoration: none;
        font-weight: 600;
        font-size: 14px;
        border: none;
        cursor: pointer;
        transition: all 0.2s;
    }

    .cm-btn-create:hover {
        background: var(--cm-primary-hover);
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(99, 102, 241, 0.3);
    }

    .cm-btn-create svg {
        width: 18px;
        height: 18px;
    }

    .cm-btn-create.large {
        padding: 14px 28px;
        font-size: 15px;
    }

    /* Filtros */
    .cm-filters {
        display: flex;
        align-items: center;
        gap: 16px;
        margin-bottom: 24px;
        flex-wrap: wrap;
    }

    .cm-tabs {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    .cm-tab {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 10px 16px;
        background: var(--surface);
        border: none;
        border-radius: 24px;
        font-size: 13px;
        font-weight: 500;
        color: var(--muted);
        cursor: pointer;
        transition: all 0.2s;
        white-space: nowrap;
    }

    .cm-tab svg {
        width: 16px;
        height: 16px;
    }

    .cm-tab:hover {
        color: var(--cm-primary);
        background: rgba(99, 102, 241, 0.1);
    }

    .cm-tab.active {
        background: var(--cm-primary);
        color: white;
    }

    /* Pestañas LadoA y LadoB con colores específicos */
    .cm-tab.lado-a:hover {
        color: #3b82f6;
        background: rgba(59, 130, 246, 0.1);
    }
    .cm-tab.lado-a.active {
        background: linear-gradient(135deg, #3b82f6, #1d4ed8);
        color: white;
    }
    .cm-tab.lado-b:hover {
        color: #ec4899;
        background: rgba(236, 72, 153, 0.1);
    }
    .cm-tab.lado-b.active {
        background: linear-gradient(135deg, #ec4899, #be185d);
        color: white;
    }
    .cm-tab-count {
        font-size: 11px;
        opacity: 0.8;
    }

    .cm-search-bar {
        display: flex;
        align-items: center;
        gap: 8px;
        background: var(--surface);
        border: 1px solid var(--line);
        border-radius: var(--cm-radius-sm);
        padding: 0 12px;
        flex: 1;
        max-width: 280px;
        min-width: 180px;
    }

    .cm-search-bar svg {
        width: 18px;
        height: 18px;
        color: var(--muted);
        flex-shrink: 0;
    }

    .cm-search-bar input {
        flex: 1;
        border: none;
        background: transparent;
        padding: 10px 0;
        font-size: 14px;
        color: var(--fg);
        outline: none;
        min-width: 0;
    }

    .cm-search-bar input::placeholder {
        color: var(--muted);
    }

    .cm-select {
        padding: 10px 14px;
        background: var(--surface);
        border: 1px solid var(--line);
        border-radius: var(--cm-radius-sm);
        font-size: 13px;
        color: var(--fg);
        cursor: pointer;
        min-width: 100px;
    }

    .cm-select:focus {
        outline: none;
        border-color: var(--cm-primary);
    }

    /* Grid */
    .cm-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 20px;
    }

    /* Cards */
    .cm-card {
        background: var(--bg);
        border-radius: var(--cm-radius);
        overflow: hidden;
        border: 1px solid var(--line);
        transition: all 0.25s;
        display: flex;
        flex-direction: column;
    }

    .cm-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 32px rgba(0, 0, 0, 0.12);
        border-color: transparent;
    }

    [data-theme="dark"] .cm-card:hover {
        box-shadow: 0 12px 32px rgba(0, 0, 0, 0.4);
    }

    .cm-card.draft {
        border: 2px dashed var(--muted);
        opacity: 0.9;
    }

    .cm-card.draft:hover {
        opacity: 1;
        border-color: var(--cm-warning);
    }

    /* Card Media */
    .cm-card-media {
        position: relative;
        aspect-ratio: 1;
        background: var(--surface);
        display: block;
        overflow: hidden;
    }

    .cm-card-media img,
    .cm-card-media video {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s;
    }

    .cm-card:hover .cm-card-media img,
    .cm-card:hover .cm-card-media video {
        transform: scale(1.05);
    }

    .cm-no-media {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--muted);
    }

    .cm-no-media svg {
        width: 48px;
        height: 48px;
        opacity: 0.5;
    }

    .cm-play-icon {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 48px;
        height: 48px;
        background: rgba(0, 0, 0, 0.6);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
    }

    .cm-card:hover .cm-play-icon {
        background: var(--cm-primary);
        transform: translate(-50%, -50%) scale(1.1);
    }

    .cm-play-icon svg {
        width: 22px;
        height: 22px;
        margin-left: 3px;
    }

    /* Badges */
    .cm-badges {
        position: absolute;
        top: 10px;
        left: 10px;
        right: 10px;
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
    }

    .cm-badge {
        padding: 4px 10px;
        border-radius: 6px;
        font-size: 11px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .cm-badge.draft {
        background: rgba(0, 0, 0, 0.7);
        color: white;
    }

    .cm-badge.premium {
        background: var(--cm-warning);
        color: white;
        margin-left: auto;
    }

    .cm-badge.reel {
        background: linear-gradient(135deg, #833AB4, #FD1D1D, #F77737);
        color: white;
    }

    /* Card Body */
    .cm-card-body {
        padding: 14px;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .cm-card-meta {
        margin-bottom: 8px;
    }

    .cm-date {
        font-size: 12px;
        color: var(--muted);
    }

    .cm-draft-label {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        font-size: 12px;
        color: var(--cm-warning);
        font-weight: 600;
    }

    .cm-draft-label svg {
        width: 14px;
        height: 14px;
    }

    .cm-description {
        font-size: 14px;
        color: var(--fg);
        line-height: 1.5;
        margin: 0 0 12px 0;
        flex: 1;
    }

    .cm-description em {
        color: var(--muted);
    }

    .cm-stats {
        display: flex;
        gap: 14px;
        padding-top: 12px;
        border-top: 1px solid var(--line);
    }

    .cm-stat {
        display: flex;
        align-items: center;
        gap: 5px;
        font-size: 13px;
        color: var(--muted);
    }

    .cm-stat svg {
        width: 14px;
        height: 14px;
    }

    /* Card Actions */
    .cm-card-actions {
        display: flex;
        gap: 8px;
        padding: 12px 14px;
        background: var(--surface);
        border-top: 1px solid var(--line);
    }

    .cm-action-form {
        flex: 1;
    }

    .cm-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
        padding: 10px 14px;
        border-radius: var(--cm-radius-sm);
        font-size: 13px;
        font-weight: 600;
        border: none;
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none;
    }

    .cm-btn svg {
        width: 16px;
        height: 16px;
    }

    .cm-btn.publish {
        flex: 1;
        background: var(--cm-primary);
        color: white;
    }

    .cm-btn.publish:hover {
        background: var(--cm-primary-hover);
    }

    .cm-btn.edit {
        background: var(--bg);
        color: var(--fg);
        border: 1px solid var(--line);
        padding: 10px 12px;
    }

    .cm-btn.edit:hover {
        border-color: var(--cm-primary);
        color: var(--cm-primary);
    }

    .cm-btn.delete {
        background: transparent;
        color: var(--muted);
        padding: 10px 12px;
    }

    .cm-btn.delete:hover {
        background: rgba(239, 68, 68, 0.1);
        color: var(--cm-danger);
    }

    /* Empty State */
    .cm-empty {
        text-align: center;
        padding: 60px 20px;
        background: var(--bg);
        border-radius: var(--cm-radius);
        border: 2px dashed var(--line);
    }

    .cm-empty-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 20px;
        background: var(--surface);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .cm-empty-icon svg {
        width: 40px;
        height: 40px;
        color: var(--muted);
    }

    .cm-empty h3 {
