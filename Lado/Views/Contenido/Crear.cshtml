            // Selector de tipo de censura
            const tipoCensuraOptions = document.querySelectorAll('.tipo-censura-option');
            tipoCensuraOptions.forEach(option => {
                option.addEventListener('click', function() {
                    tipoCensuraOptions.forEach(opt => opt.classList.remove('selected'));
                    this.classList.add('selected');
