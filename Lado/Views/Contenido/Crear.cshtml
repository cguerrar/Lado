                const tieneVideo = selectedFiles.some(f => isVideoFileGlobal(f));
                const tieneImagen = selectedFiles.some(f => !isVideoFileGlobal(f));

                if (tieneVideo) {
                    tipoInput.value = '2'; // Video
                } else if (tieneImagen) {
                    tipoInput.value = '1'; // Foto
                } else {
                    tipoInput.value = '0'; // Solo texto
                }
            }

            // Detectar iOS
            const isIOS = /iPad|iPhone|iPod/.test(navigator.userAgent) ||
                          (navigator.platform === 'MacIntel' && navigator.maxTouchPoints > 1);

            // Botón pegar desde portapapeles (para móviles)
            const btnPasteClipboard = document.getElementById('btnPasteClipboard');

            btnPasteClipboard.addEventListener('click', async (e) => {
                e.preventDefault();
                e.stopPropagation();

                // En iOS, abrir directamente el selector de archivos (más confiable)
                if (isIOS) {
                    archivoInput.click();
                    return;
                }

                // En Android/Desktop, intentar usar la API de Clipboard
                try {
                    if (!navigator.clipboard || !navigator.clipboard.read) {
                        // Sin soporte, usar selector de archivos
                        archivoInput.click();
                        return;
                    }

                    const clipboardItems = await navigator.clipboard.read();
                    const filesToAdd = [];

                    for (const item of clipboardItems) {
                        for (const type of item.types) {
                            if (type.startsWith('image/')) {
                                const blob = await item.getType(type);
                                const ext = type.split('/')[1] || 'png';
                                const timestamp = new Date().toISOString().replace(/[:.]/g, '-');
                                const fileName = `pegado-${timestamp}.${ext}`;
                                const file = new File([blob], fileName, { type: type });
                                filesToAdd.push(file);
