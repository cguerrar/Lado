                // Verificar límite
                const remaining = MAX_FILES - selectedFiles.length;
                const filesToAdd = validFiles.slice(0, remaining);

                if (filesToAdd.length < validFiles.length) {
                    alert(`Solo puedes subir un máximo de ${MAX_FILES} archivos`);
