            async function cargarMediaDesdeURL() {
                const urlParams = new URLSearchParams(window.location.search);

                // Obtener IDs de galería desde URL (singular o plural)
                const idsFromUrl = [];
                const singleId = urlParams.get('galeriaMediaId');
