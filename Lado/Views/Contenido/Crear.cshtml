@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const usuarioVerificado = @(usuarioVerificado ? "true" : "false");

            // Elementos
            const ladoOptions = document.querySelectorAll('.lado-option');
            const esGratisInput = document.getElementById('esGratisInput');
            const precioSectionWrapper = document.getElementById('precioSectionWrapper');
            const tipoCards = document.querySelectorAll('.tipo-card');
            const tipoInput = document.getElementById('tipoContenidoInput');
            const archivoSection = document.getElementById('archivoSection');
            const uploadArea = document.getElementById('uploadArea');
            const archivoInput = document.getElementById('archivoInput');
            const previewArea = document.getElementById('previewArea');
            const imagePreview = document.getElementById('imagePreview');
            const videoPreview = document.getElementById('videoPreview');
            const fileInfo = document.getElementById('fileInfo');
            const removeFileBtn = document.getElementById('removeFileBtn');
            const precioSelect = document.getElementById('precioSelect');
            const descripcionTextarea = document.getElementById('descripcionTextarea');
            const charCount = document.getElementById('charCount');
            const btnBorrador = document.getElementById('btnBorrador');
            const formContenido = document.getElementById('formContenido');
            const esBorradorInput = document.getElementById('esBorradorInput');
            const loadingOverlay = document.getElementById('loadingOverlay');

            // Selector de Lado
            ladoOptions.forEach(option => {
                option.addEventListener('click', function() {
                    ladoOptions.forEach(opt => opt.classList.remove('active'));
                    this.classList.add('active');

                    const esGratis = this.dataset.esgratis === 'true';
                    esGratisInput.value = esGratis ? 'true' : 'false';

                    if (esGratis) {
                        precioSectionWrapper.style.display = 'none';
                        if (precioSelect) precioSelect.removeAttribute('required');
                    } else {
                        precioSectionWrapper.style.display = 'block';
                        if (usuarioVerificado && precioSelect) {
                            precioSelect.setAttribute('required', 'required');
                        }
                    }
                });
            });

            // Tipo de contenido
            tipoCards.forEach(card => {
                card.addEventListener('click', function() {
                    tipoCards.forEach(c => c.classList.remove('active'));
                    this.classList.add('active');
                    tipoInput.value = this.dataset.tipo;

                    if (this.dataset.tipo === '0') { // Post = 0 (solo texto)
                        archivoSection.style.display = 'none';
                        archivoInput.removeAttribute('required');
                    } else {
                        archivoSection.style.display = 'block';
                        archivoInput.setAttribute('required', 'required');
                    }
                });
            });

            // Upload
            uploadArea.addEventListener('click', () => archivoInput.click());
            uploadArea.addEventListener('dragover', (e) => {
                e.preventDefault();
                uploadArea.classList.add('dragover');
            });
            uploadArea.addEventListener('dragleave', () => {
                uploadArea.classList.remove('dragover');
            });
            uploadArea.addEventListener('drop', (e) => {
                e.preventDefault();
                uploadArea.classList.remove('dragover');
                const files = e.dataTransfer.files;
                if (files.length > 0) {
                    const dt = new DataTransfer();
                    dt.items.add(files[0]);
                    archivoInput.files = dt.files;
                    handleFileSelect(files[0]);
                }
            });

            archivoInput.addEventListener('change', (e) => {
                if (e.target.files.length > 0) {
                    handleFileSelect(e.target.files[0]);
                }
            });

            removeFileBtn.addEventListener('click', (e) => {
                e.stopPropagation();
                archivoInput.value = '';
                previewArea.classList.remove('show');
                imagePreview.classList.remove('show');
                videoPreview.classList.remove('show');
            });

            function handleFileSelect(file) {
                const reader = new FileReader();
                previewArea.classList.add('show');

                const sizeMB = (file.size / (1024 * 1024)).toFixed(2);
                fileInfo.textContent = `${file.name} (${sizeMB} MB)`;

                if (file.type.startsWith('image/')) {
                    videoPreview.classList.remove('show');
                    imagePreview.classList.add('show');
                    reader.onload = (e) => imagePreview.src = e.target.result;
                    reader.readAsDataURL(file);
                } else if (file.type.startsWith('video/')) {
                    imagePreview.classList.remove('show');
                    videoPreview.classList.add('show');
                    reader.onload = (e) => videoPreview.src = e.target.result;
                    reader.readAsDataURL(file);
                }
            }

            // Character counter
            descripcionTextarea.addEventListener('input', function() {
                charCount.textContent = this.value.length;
            });

            // Guardar borrador
            btnBorrador.addEventListener('click', function() {
                esBorradorInput.value = 'true';
                archivoInput.removeAttribute('required');
                descripcionTextarea.removeAttribute('required');
                loadingOverlay.classList.add('show');
                formContenido.submit();
            });

            // Validación del formulario
            formContenido.addEventListener('submit', function(e) {
                const tipoContenido = tipoInput.value;
                const esBorrador = esBorradorInput.value === 'true';
                const esGratis = esGratisInput.value === 'true';

                // Validar archivo requerido (excepto para posts de solo texto o borradores)
                if (!esBorrador && tipoContenido !== '0' && !archivoInput.files.length) {
                    e.preventDefault();
                    if (typeof showToast === 'function') {
                        showToast('error', 'Error', 'Por favor selecciona un archivo para publicar');
                    } else {
                        alert('Por favor selecciona un archivo para publicar');
                    }
                    return false;
                }

                // Validar precio para contenido premium
                if (!esGratis && usuarioVerificado && precioSelect) {
                    const precio = parseInt(precioSelect.value);
                    if (!precio || precio <= 0 || precio % 5 !== 0) {
                        e.preventDefault();
                        if (typeof showToast === 'function') {
                            showToast('error', 'Error', 'El precio debe ser un múltiplo de 5');
                        } else {
                            alert('El precio debe ser un múltiplo de 5');
                        }
                        return false;
                    }
                }

                // Mostrar loading
                loadingOverlay.classList.add('show');
            });
        });
    </script>
