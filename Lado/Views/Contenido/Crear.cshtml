                toast.innerHTML = `<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" style="vertical-align:-4px;margin-right:8px"><polyline points="20 6 9 17 4 12"/></svg>${count} archivo${count > 1 ? 's' : ''} pegado${count > 1 ? 's' : ''}`;
                document.body.appendChild(toast);

                setTimeout(() => toast.remove(), 2500);
