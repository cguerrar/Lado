            // Auto-detectar tipo de contenido basado en archivos
            function actualizarTipoContenido() {
                if (selectedFiles.length === 0) {
                    tipoInput.value = '0'; // Solo texto
                    return;
                }

                const tieneVideo = selectedFiles.some(f => isVideoFileGlobal(f));
                const tieneImagen = selectedFiles.some(f => !isVideoFileGlobal(f));

                if (tieneVideo) {
                    tipoInput.value = '2'; // Video
                } else if (tieneImagen) {
                    tipoInput.value = '1'; // Foto
                } else {
                    tipoInput.value = '0'; // Solo texto
                }
            }

            // Detectar iOS
            const isIOS = /iPad|iPhone|iPod/.test(navigator.userAgent) ||
                          (navigator.platform === 'MacIntel' && navigator.maxTouchPoints > 1);

            // Botón pegar desde portapapeles (para móviles)
            const btnPasteClipboard = document.getElementById('btnPasteClipboard');

            btnPasteClipboard.addEventListener('click', async (e) => {
                e.preventDefault();
                e.stopPropagation();

                // En iOS, abrir directamente el selector de archivos (más confiable)
                if (isIOS) {
                    archivoInput.click();
                    return;
                }

                // En Android/Desktop, intentar usar la API de Clipboard
                try {
                    if (!navigator.clipboard || !navigator.clipboard.read) {
                        // Sin soporte, usar selector de archivos
                        archivoInput.click();
                        return;
                    }

                    const clipboardItems = await navigator.clipboard.read();
                    const filesToAdd = [];

                    for (const item of clipboardItems) {
                        for (const type of item.types) {
                            if (type.startsWith('image/')) {
                                const blob = await item.getType(type);
                                const ext = type.split('/')[1] || 'png';
                                const timestamp = new Date().toISOString().replace(/[:.]/g, '-');
                                const fileName = `pegado-${timestamp}.${ext}`;
                                const file = new File([blob], fileName, { type: type });
                                filesToAdd.push(file);
                                break;
                            }
                        }
                    }

                    if (filesToAdd.length > 0) {
                        handleFilesSelect(filesToAdd);
                        showPasteToast(filesToAdd.length);
                    } else {
                        alert('No hay imágenes en el portapapeles. Copia una imagen primero o usa el selector de archivos.');
                    }
                } catch (err) {
                    // Fallback: abrir selector de archivos
                    archivoInput.click();
                }
            });

            // Upload - Click (evitar que el botón de paste dispare esto)
            uploadArea.addEventListener('click', (e) => {
                if (e.target.closest('.btn-paste-mobile')) return;
                archivoInput.click();
            });

            // Upload - Paste en la zona de upload (cuando tiene focus)
            uploadArea.addEventListener('paste', (e) => {
                const clipboardData = e.clipboardData || window.clipboardData;
                if (!clipboardData) return;

                const items = clipboardData.items;
                if (!items) return;

                const filesToAdd = [];

                for (let i = 0; i < items.length; i++) {
                    const item = items[i];
                    if (item.kind === 'file') {
                        const file = item.getAsFile();
                        if (file && (file.type.startsWith('image/') || file.type.startsWith('video/'))) {
                            let finalFile = file;
                            if (!file.name || file.name === 'image.png') {
                                const ext = file.type.split('/')[1] || 'png';
                                const timestamp = new Date().toISOString().replace(/[:.]/g, '-');
                                finalFile = new File([file], `pegado-${timestamp}.${ext}`, { type: file.type });
                            }
                            filesToAdd.push(finalFile);
                        }
                    }
                }

                if (filesToAdd.length > 0) {
                    e.preventDefault();
                    handleFilesSelect(filesToAdd);
                    showPasteToast(filesToAdd.length);
                }
            });

            // Upload - Drag & Drop
            uploadArea.addEventListener('dragover', (e) => {
                e.preventDefault();
                uploadArea.classList.add('dragover');
            });
            uploadArea.addEventListener('dragleave', () => {
                uploadArea.classList.remove('dragover');
            });
            uploadArea.addEventListener('drop', (e) => {
                e.preventDefault();
                uploadArea.classList.remove('dragover');
                handleFilesSelect(e.dataTransfer.files);
            });

            // Upload - Paste desde portapapeles (Ctrl+V)
            document.addEventListener('paste', (e) => {
                // Verificar si hay archivos en el clipboard
                const clipboardData = e.clipboardData || window.clipboardData;
                if (!clipboardData) return;

                const items = clipboardData.items;
                if (!items) return;

                const filesToAdd = [];

                for (let i = 0; i < items.length; i++) {
                    const item = items[i];

                    // Solo procesar archivos (no texto)
                    if (item.kind === 'file') {
                        const file = item.getAsFile();
                        if (file) {
                            // Verificar si es imagen o video
                            const isImage = file.type.startsWith('image/');
                            const isVideo = file.type.startsWith('video/');

                            if (isImage || isVideo) {
                                // Renombrar archivo si no tiene nombre (screenshots)
                                let finalFile = file;
                                if (!file.name || file.name === 'image.png') {
                                    const ext = file.type.split('/')[1] || 'png';
                                    const timestamp = new Date().toISOString().replace(/[:.]/g, '-');
                                    const newName = `pegado-${timestamp}.${ext}`;
                                    finalFile = new File([file], newName, { type: file.type });
                                }
                                filesToAdd.push(finalFile);
                            }
                        }
                    }
                }

                if (filesToAdd.length > 0) {
                    e.preventDefault();
                    handleFilesSelect(filesToAdd);

                    // Feedback visual
                    showPasteToast(filesToAdd.length);
                }
            });

            // Toast para feedback de pegado
            function showPasteToast(count) {
                const existingToast = document.getElementById('pasteToast');
