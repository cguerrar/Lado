                const formData = new FormData();
                console.log('[Crear] Archivos a enviar:', selectedFiles.length);
                selectedFiles.forEach((file, idx) => {
                    console.log(`[Crear] Archivo ${idx}: ${file.name} (${(file.size/1024/1024).toFixed(2)}MB)`);
                    formData.append('archivos', file);
                });
                formData.append('Descripcion', descripcionTextarea.value);

                console.log('[DEBUG submitCarrusel] esGratisInput.value:', esGratisInput.value);
                console.log('[DEBUG submitCarrusel] precioSelect.value:', precioSelect?.value);
                console.log('[DEBUG submitCarrusel] soloSuscriptoresInput.value:', soloSuscriptoresInput?.value);

                formData.append('EsGratis', esGratisInput.value);
                formData.append('EsBorrador', esBorrador ? 'true' : 'false');
                formData.append('EsPublicoGeneral', esPublicoGeneralInput?.checked ? 'true' : 'false');

                if (precioSelect) {
                    formData.append('PrecioDesbloqueo', precioSelect.value);
                }

                // Parámetros de monetización (LadoB)
                if (soloSuscriptoresInput) {
                    formData.append('SoloSuscriptores', soloSuscriptoresInput.value);
                }

                // Indicar lado destino (LadoB si usuario está en modo LadoB)
                const publicarEnLadoBInput = document.getElementById('publicarEnLadoBInput');
                if (publicarEnLadoBInput) {
                    formData.append('PublicarEnLadoB', publicarEnLadoBInput.value);
                    console.log('[DEBUG submitCarrusel] PublicarEnLadoB:', publicarEnLadoBInput.value);
                }

                // Parámetros de Preview Blur
                const crearPreviewBlurInput = document.getElementById('crearPreviewBlurInput');
                if (crearPreviewBlurInput?.checked) {
                    formData.append('CrearPreviewBlur', 'true');
                    const tipoCensuraChecked = document.querySelector('input[name="TipoCensuraPreview"]:checked');
                    if (tipoCensuraChecked) {
                        formData.append('TipoCensuraPreview', tipoCensuraChecked.value);
                    }
                }

                // Agregar token antiforgery
                const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                console.log('[Upload] Token CSRF:', token ? `${token.substring(0, 20)}...` : 'NULL');
                if (!token) {
                    loadingOverlay.classList.remove('show');
                    alert('Error de seguridad: Token de verificación no encontrado. Por favor recarga la página e intenta de nuevo.');
                    return;
                }
                formData.append('__RequestVerificationToken', token);

                // Usar XMLHttpRequest para tracking de progreso
                const xhr = new XMLHttpRequest();

                // Progress handler
                xhr.upload.addEventListener('progress', function(e) {
                    if (e.lengthComputable) {
                        const percent = Math.round((e.loaded / e.total) * 100);
                        progressBar.style.width = percent + '%';
                        percentageText.textContent = percent + '%';

                        // Actualizar mensajes según el progreso
                        if (percent < 30) {
                            loadingMessage.textContent = 'Iniciando la carga de archivos...';
                        } else if (percent < 60) {
                            loadingMessage.textContent = 'Subiendo tu contenido al servidor...';
                        } else if (percent < 90) {
                            loadingMessage.textContent = 'Ya casi terminamos, un momento...';
                        } else {
                            loadingTitle.textContent = 'Procesando';
                            loadingMessage.textContent = 'Finalizando y guardando tu publicación...';
                        }
                    }
                });

                // Load complete
                xhr.addEventListener('load', async function() {
                    if (xhr.status >= 200 && xhr.status < 300) {
                        // Reset retry counter on success
                        window._uploadRetryCount = 0;

                        try {
                            const data = JSON.parse(xhr.responseText);
                            if (data.success) {
                                progressBar.style.width = '100%';
                                percentageText.textContent = '100%';
                                loadingTitle.textContent = '¡Listo!';
                                loadingMessage.textContent = 'Tu contenido se ha publicado exitosamente';

                                setTimeout(() => {
                                    // Redirigir al filtro correcto según el lado donde se publicó
                                    const filtro = ladoPreferidoEsB ? 'ladob' : 'ladoa';
                                    window.location.href = '/Contenido?filtro=' + filtro + '&t=' + Date.now();
                                }, 800);
                            } else {
                                loadingOverlay.classList.remove('show');
                                alert(data.message || 'Error al crear el contenido');
                            }
                        } catch (e) {
                            loadingOverlay.classList.remove('show');
                            alert('Error al procesar la respuesta del servidor');
                        }
                    } else {
                        loadingOverlay.classList.remove('show');
                        console.error('Error al crear contenido:', xhr.status, xhr.responseText);

                        // Error 400: Token CSRF o sesión expirada - verificar y reintentar
                        if (xhr.status === 400 && typeof window.validarTokenCSRF === 'function') {
                            window._uploadRetryCount = (window._uploadRetryCount || 0) + 1;
                            console.log('[Upload] Error 400, intento:', window._uploadRetryCount);

                            // Log al servidor para diagnóstico
                            if (typeof window.logErrorServidor === 'function') {
                                window.logErrorServidor(
                                    `Upload Error 400 (intento ${window._uploadRetryCount})`,
                                    `Response: ${xhr.responseText?.substring(0, 300)}`
                                );
                            }

                            if (window._uploadRetryCount <= 1) {
                                const renovado = await window.validarTokenCSRF();

                                // Si validarTokenCSRF devuelve false, es porque la sesión expiró
                                // y ya se mostró el modal de sesión expirada
                                if (!renovado) {
                                    console.warn('[Upload] Sesión expirada detectada');
                                    window._uploadRetryCount = 0;
                                    return;
                                }

                                // Si se renovó exitosamente, reintentar el upload
                                setTimeout(() => {
                                    submitCarrusel(esBorrador);
                                }, 500);
                                return;
                            }

                            // Ya reintentamos - verificar si es sesión expirada
                            window._uploadRetryCount = 0;

                            // Log al servidor: fallo definitivo
                            if (typeof window.logErrorServidor === 'function') {
                                window.logErrorServidor(
                                    'Upload Error 400 - Fallo definitivo después de retry',
                                    `Response: ${xhr.responseText?.substring(0, 500)}`
                                );
                            }

                            // Llamar a verificar sesión para mostrar modal si está expirada
                            if (typeof window.verificarSesion === 'function') {
                                window.verificarSesion().then(activa => {
                                    if (activa === false) {
                                        window.mostrarSesionExpirada();
                                    } else {
                                        alert('Error al subir el contenido. Por favor intenta de nuevo.');
                                    }
                                });
                            } else if (typeof window.mostrarSesionExpirada === 'function') {
                                window.mostrarSesionExpirada();
                            } else {
                                alert('Error de autenticación. Por favor recarga la página.');
                            }
                            return;
                        }

                        // Error 401: No autenticado
                        if (xhr.status === 401) {
                            window.location.href = '/Account/Login?returnUrl=' + encodeURIComponent(window.location.pathname);
                            return;
                        }

                        let errorMsg = 'Error al crear el contenido. Código: ' + xhr.status;
                        // Intentar extraer mensaje de error del servidor
                        try {
                            const errorData = JSON.parse(xhr.responseText);
                            if (errorData.message) {
                                errorMsg = errorData.message;
                            }
                        } catch (e) {
                            // Si no es JSON, mostrar los primeros 200 caracteres
                            if (xhr.responseText && xhr.responseText.length > 0) {
                                errorMsg += '\n' + xhr.responseText.substring(0, 200);
                            }
                        }
                        alert(errorMsg);
                    }
                });

                // Error handler
                xhr.addEventListener('error', function() {
                    loadingOverlay.classList.remove('show');
                    if (typeof window.logErrorServidor === 'function') {
                        window.logErrorServidor('Upload Error - Error de conexión/red', 'XHR error event');
                    }
                    alert('Error de conexión. Por favor verifica tu internet e intenta de nuevo.');
                });

                // Abort handler
                xhr.addEventListener('abort', function() {
                    loadingOverlay.classList.remove('show');
                    alert('La carga fue cancelada');
                });

                xhr.open('POST', '/Contenido/CrearCarrusel');
                // Enviar token también en header para compatibilidad con configuración de servidor
                xhr.setRequestHeader('X-CSRF-TOKEN', token);
                xhr.send(formData);
            }

            console.log('[Init] Crear.cshtml inicialización completada correctamente');

            } catch (initError) {
                console.error('[Init] ERROR CRÍTICO en inicialización:', initError);
                alert('Error al inicializar la página. Por favor recarga la página. Error: ' + initError.message);
            }
        });

        // ========================================
        // RENOVACIÓN AUTOMÁTICA DEL TOKEN CSRF
        // v4.0: Simplificado - siempre renueva silenciosamente, solo muestra error si sesión expiró
        // ========================================
        (function() {
            // CONFIGURACIÓN
            const CONFIG = {
                REFRESH_INTERVAL: 15 * 60 * 1000,  // Renovar cada 15 min preventivamente
                MIN_REFRESH_GAP: 10000,            // Mínimo 10s entre renovaciones (throttle)
                FETCH_TIMEOUT: 15000               // 15s timeout para fetch
            };

            // ESTADO CENTRALIZADO
            const state = {
                tokenInput: document.querySelector('input[name="__RequestVerificationToken"]'),
                lastRefresh: Date.now(),
                isRenewing: false,           // MUTEX: previene renovaciones concurrentes
                tokenValid: true,
                sessionExpiredShown: false
            };

            // UTILIDADES
            function log(level, msg, data = null) {
                const prefix = '[TokenManager]';
                const timestamp = new Date().toISOString().substring(11, 23);
                const logMsg = `${prefix} [${timestamp}] ${msg}`;
                if (level === 'error') {
                    console.error(logMsg, data || '');
                    enviarLogServidor('error', msg, data);
                } else if (level === 'warn') {
                    console.warn(logMsg, data || '');
                    enviarLogServidor('warning', msg, data);
                } else {
                    console.log(logMsg, data !== null ? data : '');
                }
            }

            // Enviar logs al servidor - CORREGIDO: usa fetch con keepalive en lugar de sendBeacon
            function enviarLogServidor(tipo, mensaje, detalle = null) {
                try {
                    const payload = {
                        tipo: tipo,
                        mensaje: `[Crear.cshtml] ${mensaje}`,
                        detalle: detalle ? String(detalle).substring(0, 1000) : null,
                        url: window.location.pathname
                    };

                    // Usar fetch con keepalive - más confiable que sendBeacon
                    fetch('/Admin/RegistrarLogFrontend', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Accept': 'application/json'
                        },
                        body: JSON.stringify(payload),
                        keepalive: true,  // Permite que complete aunque la página se cierre
                        credentials: 'same-origin'
                    }).catch(() => {
                        // Fallback a sendBeacon si fetch falla
                        try {
                            navigator.sendBeacon('/Admin/RegistrarLogFrontend',
                                new Blob([JSON.stringify(payload)], { type: 'application/json' })
                            );
                        } catch (e) { /* silenciar */ }
                    });
                } catch (e) {
                    // Silenciar errores de logging
                }
            }

            // Exportar para uso global
            window.logErrorServidor = function(mensaje, detalle) {
                enviarLogServidor('error', mensaje, detalle);
            };

            // MODAL DE SESIÓN EXPIRADA
            function mostrarSesionExpirada() {
                if (state.sessionExpiredShown) return;
                state.sessionExpiredShown = true;
                state.tokenValid = false;

                // Log antes de mostrar modal
                enviarLogServidor('warning', 'Sesión expirada - mostrando modal',
                    `lastRefresh: ${Math.round((Date.now() - state.lastRefresh)/60000)}min ago`);

                const overlay = document.createElement('div');
                overlay.id = 'sesionExpiradaModal';
                overlay.style.cssText = 'position:fixed;top:0;left:0;right:0;bottom:0;background:rgba(0,0,0,0.7);z-index:99999;display:flex;align-items:center;justify-content:center;';
                overlay.innerHTML = `
                    <div style="background:#fff;border-radius:16px;padding:32px;max-width:400px;width:90%;text-align:center;box-shadow:0 10px 40px rgba(0,0,0,0.3);">
                        <div style="width:64px;height:64px;background:#fee2e2;border-radius:50%;display:flex;align-items:center;justify-content:center;margin:0 auto 20px;">
                            <svg width="32" height="32" fill="none" stroke="#dc2626" stroke-width="2" viewBox="0 0 24 24">
                                <circle cx="12" cy="12" r="10"></circle>
                                <line x1="12" y1="8" x2="12" y2="12"></line>
                                <line x1="12" y1="16" x2="12.01" y2="16"></line>
                            </svg>
                        </div>
                        <h3 style="margin:0 0 12px;font-size:20px;font-weight:600;color:#1f2937;">Sesión expirada</h3>
                        <p style="margin:0 0 24px;color:#6b7280;font-size:14px;line-height:1.5;">
                            Tu sesión ha expirado por inactividad. Por favor inicia sesión nuevamente para continuar.
                        </p>
                        <button onclick="window.location.href='/Account/Login?returnUrl=' + encodeURIComponent(window.location.pathname)"
                                style="background:linear-gradient(135deg,#4682B4,#2c5f8a);color:#fff;border:none;padding:14px 32px;border-radius:8px;font-size:15px;font-weight:600;cursor:pointer;width:100%;">
                            Iniciar sesión
                        </button>
                        <button onclick="window.location.reload()"
                                style="background:transparent;color:#6b7280;border:none;padding:12px;font-size:13px;cursor:pointer;margin-top:12px;width:100%;">
                            Recargar página
                        </button>
                    </div>
                `;
                document.body.appendChild(overlay);
            }

            // FETCH SEGURO - CORREGIDO: redirect:'manual', AbortController propio, validación JSON
            async function fetchSeguro(url, options = {}) {
                // Crear AbortController PROPIO para esta petición (no compartido)
                const controller = new AbortController();
                const timeoutId = setTimeout(() => controller.abort(), CONFIG.FETCH_TIMEOUT);

                try {
                    const response = await fetch(url, {
                        ...options,
                        credentials: 'same-origin',
                        redirect: 'manual',  // CRÍTICO: No seguir redirects automáticamente
                        signal: controller.signal,
                        headers: {
                            ...options.headers,
                            'Accept': 'application/json',
                            'X-Requested-With': 'XMLHttpRequest'  // Indica que es AJAX
                        }
                    });
                    clearTimeout(timeoutId);

                    // Detectar redirect (sesión expirada que intenta redirigir a login)
                    if (response.type === 'opaqueredirect' || response.status === 0) {
                        log('warn', 'Redirect detectado (sesión expirada)', url);
                        return { redirected: true, status: 302 };
                    }

                    return response;
                } catch (e) {
                    clearTimeout(timeoutId);
                    if (e.name === 'AbortError') {
                        log('warn', 'Fetch timeout', url);
                        return { timeout: true, status: 0 };
                    }
                    throw e;
                }
            }

            // Verificar si response es JSON válido
            async function parseJsonSeguro(response) {
                try {
                    const text = await response.text();
                    // Verificar que empieza como JSON
                    if (!text || (!text.startsWith('{') && !text.startsWith('['))) {
                        log('error', 'Respuesta no es JSON', text.substring(0, 200));
                        return null;
                    }
                    return JSON.parse(text);
                } catch (e) {
                    log('error', 'Error parseando JSON', e.message);
                    return null;
                }
            }

            // FUNCIÓN PRINCIPAL: RENOVAR TOKEN (CON MUTEX)
            async function renovarToken(forzar = false, motivo = '') {
                // MUTEX: Si ya hay una renovación en progreso, salir
                if (state.isRenewing) {
                    return state.tokenValid;
                }

                // Throttle: no renovar demasiado frecuente
                const tiempoDesdeUltima = Date.now() - state.lastRefresh;
                if (!forzar && tiempoDesdeUltima < CONFIG.MIN_REFRESH_GAP) {
                    return state.tokenValid;
                }

                // Adquirir mutex
                state.isRenewing = true;

                try {
                    const response = await fetchSeguro('/Contenido/RenovarTokenSeguro', {
                        method: 'GET'
                    });

                    // Detectar redirect o timeout
                    if (response.redirected || response.timeout) {
                        log('warn', 'Sesión expirada (redirect/timeout)', motivo);
                        mostrarSesionExpirada();
                        return false;
                    }

                    // Verificar status 401 (sesión expirada)
                    if (response.status === 401) {
                        log('warn', 'Sesión expirada (401)', motivo);
                        mostrarSesionExpirada();
                        return false;
                    }

                    if (response.ok) {
                        const data = await parseJsonSeguro(response);

                        // Si no es JSON válido, puede ser página de login
                        if (!data) {
                            log('warn', 'Respuesta no es JSON válido - posible redirect a login');
                            mostrarSesionExpirada();
                            return false;
                        }

                        if (!data.success || data.authenticated === false) {
                            log('warn', 'Respuesta indica no autenticado', JSON.stringify(data));
                            mostrarSesionExpirada();
                            return false;
                        }

                        if (data.token && state.tokenInput) {
                            state.tokenInput.value = data.token;
                            state.lastRefresh = Date.now();
                            state.tokenValid = true;
                            log('info', 'Token renovado', motivo || 'automático');
                            return true;
                        }
                    } else {
                        log('error', 'Error HTTP renovando token', `status: ${response.status}, motivo: ${motivo}`);
                    }
                } catch (e) {
                    log('error', 'Excepción renovando token', `${e.message}, motivo: ${motivo}`);
                    // En error de red, mantener estado anterior
                    return state.tokenValid;
                } finally {
                    // Liberar mutex
                    state.isRenewing = false;
                }

                return false;
            }

            // VERIFICAR SESIÓN (para hibernación prolongada)
            async function verificarSesion() {
                try {
                    const response = await fetchSeguro('/Contenido/VerificarSesion', {
                        method: 'GET'
                    });

                    if (response.redirected || response.timeout || response.status === 401) {
                        return false;
                    }

                    if (response.ok) {
                        const data = await parseJsonSeguro(response);
                        if (!data) return false;
                        return data.authenticated === true;
                    }
                    return false;
                } catch (e) {
                    log('warn', 'Error verificando sesión', e.message);
                    return null; // null = error de red
                }
            }

            // API PÚBLICA - Validar y renovar token antes de operaciones críticas
            // Siempre intenta renovar silenciosamente. Si la sesión expiró, muestra modal.
            window.validarTokenCSRF = async function() {
                // Siempre renovar token (con throttle mínimo de 10s para evitar spam)
                return await renovarToken(false, 'pre-validación');
            };
            window.verificarSesion = verificarSesion;
            window.mostrarSesionExpirada = mostrarSesionExpirada;

            // ========================================
            // MANEJADORES DE EVENTOS
            // ========================================

            // 1. VISIBILITYCHANGE - Renovar token cuando la página vuelve a ser visible
            document.addEventListener('visibilitychange', async () => {
                if (document.visibilityState === 'visible') {
                    // Pequeña pausa para que la red se estabilice (especialmente en iOS)
                    await new Promise(r => setTimeout(r, 500));
                    // Siempre intentar renovar silenciosamente al volver
                    await renovarToken(true, 'visible');
                }
            });

            // 2. PAGESHOW - Para bfcache (iOS Safari especialmente)
            window.addEventListener('pageshow', async (event) => {
                if (event.persisted) {
                    log('info', 'Página restaurada de bfcache');
                    await new Promise(r => setTimeout(r, 300));
                    await renovarToken(true, 'bfcache');
                }
            });

            // 3. INTERVALO DE RENOVACIÓN PREVENTIVA (cada 15 min si la página está visible)
            setInterval(() => {
                if (document.visibilityState === 'visible' && !state.isRenewing) {
                    renovarToken(false, 'intervalo');
                }
            }, CONFIG.REFRESH_INTERVAL);

            // 4. FOCUS - Backup para iOS cuando visibilitychange falla
            window.addEventListener('focus', async () => {
                await renovarToken(false, 'focus');
            });

            // Renovación inicial si viene de navegación back/forward
            if (performance.navigation?.type === 2) {
                renovarToken(true, 'back/forward');
            }

            log('info', 'TokenManager v3.0 inicializado');
        })();
    </script>
