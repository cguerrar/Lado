                    const isVideo = isVideoMime || isVideoExt;

                    // Para formatos RAW (HEIC, DNG, etc.), usar límite de video ya que son archivos grandes
                    const rawFormats = ['.heic', '.heif', '.dng', '.raw', '.cr2', '.nef', '.arw', '.tiff', '.tif'];
                    const isRawFormat = rawFormats.includes(ext);

                    // Limite de tamaño desde configuración Admin
                    const maxSizeImage = MAX_SIZE_IMAGE_MB * 1024 * 1024;
                    const maxSizeVideo = MAX_SIZE_VIDEO_MB * 1024 * 1024;
                    // RAW usa límite de video por su tamaño típico (serán convertidos a JPEG en servidor)
                    const maxSize = (isVideo || isRawFormat) ? maxSizeVideo : maxSizeImage;
                    const isValidSize = file.size <= maxSize;

                    console.log(`[FileSelect] Validando ${file.name}: isImage=${isImage}, isVideo=${isVideo}, isRaw=${isRawFormat}, size=${(file.size/1024/1024).toFixed(2)}MB, limit=${maxSize/1024/1024}MB`);

                    // Mostrar error especifico si excede el tamaño
