                const imageExtensions = ['.jpg', '.jpeg', '.png', '.gif', '.webp', '.heic', '.heif', '.bmp', '.avif', '.dng', '.raw', '.cr2', '.nef', '.arw', '.tiff', '.tif'];
                const videoExtensions = ['.mp4', '.mov', '.avi', '.webm', '.m4v', '.3gp', '.3gpp', '.mkv', '.mpg', '.mpeg', '.wmv', '.flv', '.mxf'];
                const allExtensions = [...imageExtensions, ...videoExtensions];

                // Log para diagnóstico
