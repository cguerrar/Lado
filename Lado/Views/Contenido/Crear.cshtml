                // Log para diagnóstico
                console.log('[FileSelect] Archivos recibidos:', filesArray.length);
                filesArray.forEach((f, i) => {
                    console.log(`[FileSelect] Archivo ${i}: ${f.name}, MIME: ${f.type || 'N/A'}, Size: ${(f.size/1024/1024).toFixed(2)}MB`);
