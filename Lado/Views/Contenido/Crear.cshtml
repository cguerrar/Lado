@model dynamic
@{
    ViewData["Title"] = "Nueva Publicación";
    var usuarioVerificado = ViewBag.UsuarioVerificado ?? false;
}

<div class="crear-container">
    <div class="crear-card">
        <!-- Header -->
        <div class="crear-header">
            <h1>
                <svg width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm5 11h-4v4h-2v-4H7v-2h4V7h2v4h4v2z" />
                </svg>
                Nueva Publicación
            </h1>
            <p>Comparte tu contenido con tu comunidad</p>
        </div>

        <form asp-action="Crear" method="post" enctype="multipart/form-data" id="formContenido">
            @Html.AntiForgeryToken()

            <!-- Selección de Lado -->
            <div class="form-section">
                <label class="section-label">¿Dónde quieres publicar?</label>
                <div class="lado-selector">
                    <!-- LADO A - GRATIS CON NOMBRE REAL -->
                    <div class="lado-option active" data-lado="ladoa" data-esgratis="true">
                        <div class="lado-badge ladoa">A</div>
                        <div class="lado-info">
                            <h3>LadoA · Público</h3>
                            <p>Contenido gratuito con tu nombre real</p>
                        </div>
                        <div class="lado-check">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" />
                            </svg>
                        </div>
                    </div>

                    <!-- LADO B - CON SEUDÓNIMO (solo visible si verificado) -->
                    @if (usuarioVerificado)
                    {
                        <div class="lado-option" data-lado="ladob" data-esgratis="false">
                            <div class="lado-badge ladob">B</div>
                            <div class="lado-info">
                                <h3>LadoB · Con seudónimo</h3>
                                <p>Contenido con tu identidad alternativa</p>
                            </div>
                            <div class="lado-check">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" />
                                </svg>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Input hidden para EsGratis -->
            <input type="hidden" name="EsGratis" id="esGratisInput" value="true" />

            <!-- Tipo de Contenido -->
            <div class="form-section">
                <label class="section-label">Tipo de contenido</label>
                <div class="tipo-grid">
                    <div class="tipo-card active" data-tipo="1">
                        <div class="tipo-icon">
                            <svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z" />
                            </svg>
                        </div>
                        <h3>Foto</h3>
                        <p>JPG, PNG, GIF</p>
                    </div>

                    <div class="tipo-card" data-tipo="2">
                        <div class="tipo-icon">
                            <svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M17 10.5V7c0-.55-.45-1-1-1H4c-.55 0-1 .45-1 1v10c0 .55.45 1 1 1h12c.55 0 1-.45 1-1v-3.5l4 4v-11l-4 4z" />
                            </svg>
                        </div>
                        <h3>Video</h3>
                        <p>MP4, MOV, AVI</p>
                    </div>

                    <div class="tipo-card" data-tipo="0">
                        <div class="tipo-icon">
                            <svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z" />
                            </svg>
                        </div>
                        <h3>Post</h3>
                        <p>Solo texto</p>
                    </div>
                </div>
                <input type="hidden" name="TipoContenido" id="tipoContenidoInput" value="1" />
            </div>

            <!-- Subir Archivo -->
            <div class="form-section" id="archivoSection">
                <label class="section-label">
                    Subir archivo
                    <span class="required">*</span>
                </label>
                <div class="upload-zone" id="uploadArea">
                    <div class="upload-content">
                        <svg width="64" height="64" viewBox="0 0 24 24" fill="currentColor" class="upload-icon">
                            <path d="M19.35 10.04C18.67 6.59 15.64 4 12 4 9.11 4 6.6 5.64 5.35 8.04 2.34 8.36 0 10.91 0 14c0 3.31 2.69 6 6 6h13c2.76 0 5-2.24 5-5 0-2.64-2.05-4.78-4.65-4.96zM14 13v4h-4v-4H7l5-5 5 5h-3z" />
                        </svg>
                        <h3>Arrastra tu archivo aquí</h3>
                        <p>o haz clic para seleccionar</p>
                        <span class="upload-hint">Máximo 100 MB</span>
                    </div>
                    <input type="file" name="archivo" id="archivoInput" class="file-input" accept="image/*,video/*" required>
                </div>

                <div id="previewArea" class="preview-area">
                    <div class="preview-container">
                        <img id="imagePreview" class="preview-media" alt="Preview">
                        <video id="videoPreview" class="preview-media" controls></video>
                        <button type="button" class="preview-remove" id="removeFileBtn">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" />
                            </svg>
                        </button>
                    </div>
                    <div class="preview-info" id="fileInfo"></div>
                </div>
            </div>

            <!-- Descripción -->
            <div class="form-section">
                <label class="section-label">Descripción</label>
                <textarea name="Descripcion" class="form-textarea" rows="5" placeholder="Escribe una descripción atractiva para tu contenido..." maxlength="500" id="descripcionTextarea"></textarea>
                <div class="char-counter">
                    <span id="charCount">0</span>/500 caracteres
                </div>
            </div>

            <!-- Configuración Premium (solo para LadoB) -->
            <div class="form-section" id="precioSectionWrapper" style="display: none;">
                <div class="premium-card">
                    @if (!usuarioVerificado)
                    {
                        <div class="verification-alert">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z" />
                            </svg>
                            <div>
                                <h4>Monetización Bloqueada</h4>
                                <p>Para monetizar contenido en LadoB debes verificar tu identidad. Por ahora, tu contenido se publicará <strong>gratis</strong> con tu seudónimo.</p>
                                <a href="/CreatorVerification/Request" class="btn-verify">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm-2 16l-4-4 1.41-1.41L10 14.17l6.59-6.59L18 9l-8 8z" />
                                    </svg>
                                    Verificar Identidad
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="premium-info">
                            <h3>
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z" />
                                </svg>
                                Monetizar contenido premium
                            </h3>
                            <p>Este contenido se publicará en tu LadoB con tu seudónimo</p>
                        </div>

                        <div class="precio-selector">
                            <label class="precio-label">
                                Precio de desbloqueo
                                <span class="required">*</span>
                            </label>
                            <div class="precio-input-group">
                                <span class="precio-currency">$</span>
                                <select name="PrecioDesbloqueo" class="precio-select" id="precioSelect">
                                    <option value="5">5</option>
                                    <option value="10" selected>10</option>
                                    <option value="15">15</option>
                                    <option value="20">20</option>
                                    <option value="25">25</option>
                                    <option value="30">30</option>
                                    <option value="35">35</option>
                                    <option value="40">40</option>
                                    <option value="45">45</option>
                                    <option value="50">50</option>
                                    <option value="60">60</option>
                                    <option value="70">70</option>
                                    <option value="80">80</option>
                                    <option value="90">90</option>
                                    <option value="100">100</option>
                                </select>
                            </div>
                            <small class="precio-hint">
                                <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" style="vertical-align: middle; margin-right: 4px;">
                                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z" />
                                </svg>
                                Los usuarios pagarán este monto para desbloquear tu contenido
                            </small>
                        </div>
                    }
                </div>
            </div>

            <!-- Botones de Acción -->
            <div class="form-actions">
                <button type="submit" class="btn btn-primary" id="btnPublicar">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z" />
                    </svg>
                    Publicar Ahora
                </button>
                <button type="button" class="btn btn-secondary" id="btnBorrador">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M17 3H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V7l-4-4zm-5 16c-1.66 0-3-1.34-3-3s1.34-3 3-3 3 1.34 3 3-1.34 3-3 3zm3-10H5V5h10v4z" />
                    </svg>
                    Guardar Borrador
                </button>
                <a href="/Contenido" class="btn btn-outline">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" />
                    </svg>
                    Cancelar
                </a>
            </div>

            <input type="hidden" name="EsBorrador" id="esBorradorInput" value="false">
        </form>
    </div>

    <!-- Tips Card -->
    <div class="tips-card">
        <h3>
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M9 21c0 .55.45 1 1 1h4c.55 0 1-.45 1-1v-1H9v1zm3-19C8.14 2 5 5.14 5 9c0 2.38 1.19 4.47 3 5.74V17c0 .55.45 1 1 1h6c.55 0 1-.45 1-1v-2.26c1.81-1.27 3-3.36 3-5.74 0-3.86-3.14-7-7-7zm2.85 11.1l-.85.6V16h-4v-2.3l-.85-.6C7.8 12.16 7 10.63 7 9c0-2.76 2.24-5 5-5s5 2.24 5 5c0 1.63-.8 3.16-2.15 4.1z" />
            </svg>
            Tips para contenido exitoso
        </h3>
        <ul>
            <li>Usa descripciones claras y atractivas</li>
            <li>Sube imágenes de alta calidad (mínimo 1080p)</li>
            <li>El contenido premium genera más ingresos</li>
            <li>Publica en LadoB aunque sea gratis para usar tu seudónimo</li>
            <li>Verifica tu identidad para desbloquear monetización</li>
        </ul>
    </div>
</div>

<!-- Loading Overlay -->
<div class="loading-overlay" id="loadingOverlay">
    <div class="loading-spinner">
        <div class="spinner"></div>
        <p>Publicando contenido...</p>
    </div>
</div>

<style>
    * {
        box-sizing: border-box;
    }

    .crear-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 32px 24px;
    }

    .crear-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        padding: 40px;
        margin-bottom: 24px;
    }

    .crear-header {
        margin-bottom: 40px;
        text-align: center;
    }

        .crear-header h1 {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            font-size: 32px;
            font-weight: 700;
            color: #111827;
            margin: 0 0 12px 0;
        }

            .crear-header h1 svg {
                color: #4682B4;
            }

        .crear-header p {
            color: #6B7280;
            font-size: 16px;
            margin: 0;
        }

    .form-section {
        margin-bottom: 32px;
    }

    .section-label {
        display: block;
        font-size: 16px;
        font-weight: 600;
        color: #111827;
        margin-bottom: 16px;
    }

    .required {
        color: #EF4444;
        margin-left: 4px;
    }

    .lado-selector {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 16px;
    }

    .lado-option {
        display: flex;
        align-items: center;
        gap: 16px;
        padding: 20px;
        background: white;
        border: 2px solid #E5E7EB;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
    }

        .lado-option:hover {
            border-color: #4682B4;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(70, 130, 180, 0.15);
        }

        .lado-option.active {
            border-color: #4682B4;
            background: rgba(70, 130, 180, 0.05);
        }

    .lado-badge {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        font-weight: 700;
        color: white;
        flex-shrink: 0;
    }

        .lado-badge.ladoa {
            background: #4682B4;
        }

        .lado-badge.ladob {
            background: #F59E0B;
        }

    .lado-info {
        flex: 1;
    }

        .lado-info h3 {
            font-size: 16px;
            font-weight: 600;
            color: #111827;
            margin: 0 0 4px 0;
        }

        .lado-info p {
            font-size: 13px;
            color: #6B7280;
            margin: 0;
        }

    .lado-check {
        width: 24px;
        height: 24px;
        border-radius: 50%;
        border: 2px solid #E5E7EB;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        transition: all 0.3s ease;
    }

        .lado-check svg {
            opacity: 0;
            transform: scale(0);
            transition: all 0.3s ease;
        }

    .lado-option.active .lado-check {
        background: #4682B4;
        border-color: #4682B4;
    }

        .lado-option.active .lado-check svg {
            opacity: 1;
            transform: scale(1);
            fill: white;
        }

    .tipo-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 16px;
    }

    .tipo-card {
        background: white;
        border: 2px solid #E5E7EB;
        border-radius: 12px;
        padding: 24px 16px;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .tipo-card:hover {
            border-color: #4682B4;
            transform: translateY(-4px);
            box-shadow: 0 8px 16px rgba(70, 130, 180, 0.15);
        }

        .tipo-card.active {
            border-color: #4682B4;
            background: rgba(70, 130, 180, 0.05);
        }

    .tipo-icon {
        margin-bottom: 12px;
    }

        .tipo-icon svg {
            color: #4682B4;
        }

    .tipo-card h3 {
        font-size: 18px;
        font-weight: 600;
        color: #111827;
        margin: 0 0 4px 0;
    }

    .tipo-card p {
        font-size: 13px;
        color: #6B7280;
        margin: 0;
    }

    .upload-zone {
        position: relative;
        border: 3px dashed #4682B4;
        border-radius: 16px;
        padding: 48px 24px;
        background: rgba(70, 130, 180, 0.05);
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .upload-zone:hover {
            border-color: #36648B;
            background: rgba(70, 130, 180, 0.1);
            transform: scale(1.01);
        }

        .upload-zone.dragover {
            border-color: #36648B;
            background: rgba(70, 130, 180, 0.15);
            transform: scale(1.02);
        }

    .upload-content {
        text-align: center;
        pointer-events: none;
    }

    .upload-icon {
        color: #4682B4;
        margin-bottom: 16px;
    }

    .upload-content h3 {
        font-size: 18px;
        font-weight: 600;
        color: #111827;
        margin: 0 0 8px 0;
    }

    .upload-content p {
        font-size: 15px;
        color: #6B7280;
        margin: 0 0 12px 0;
    }

    .upload-hint {
        display: inline-block;
        font-size: 13px;
        color: #9CA3AF;
        background: white;
        padding: 4px 12px;
        border-radius: 12px;
    }

    .file-input {
        display: none;
    }

    .preview-area {
        display: none;
        margin-top: 20px;
    }

        .preview-area.show {
            display: block;
        }

    .preview-container {
        position: relative;
        border-radius: 12px;
        overflow: hidden;
        background: #F9FAFB;
    }

    .preview-media {
        display: none;
        width: 100%;
        max-height: 400px;
        object-fit: contain;
    }

        .preview-media.show {
            display: block;
        }

    .preview-remove {
        position: absolute;
        top: 12px;
        right: 12px;
        width: 36px;
        height: 36px;
        background: rgba(239, 68, 68, 0.95);
        border: none;
        border-radius: 50%;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s ease;
    }

        .preview-remove:hover {
            background: #DC2626;
            transform: scale(1.1);
        }

        .preview-remove svg {
            fill: white;
        }

    .preview-info {
        margin-top: 12px;
        font-size: 14px;
        color: #6B7280;
        text-align: center;
    }

    .form-textarea {
        width: 100%;
        padding: 16px;
        border: 2px solid #E5E7EB;
        border-radius: 12px;
        font-size: 15px;
        font-family: inherit;
        resize: vertical;
        transition: all 0.2s ease;
    }

        .form-textarea:focus {
            outline: none;
            border-color: #4682B4;
            box-shadow: 0 0 0 4px rgba(70, 130, 180, 0.1);
        }

    .char-counter {
        margin-top: 8px;
        font-size: 13px;
        color: #9CA3AF;
        text-align: right;
    }

        .char-counter span {
            color: #4682B4;
            font-weight: 600;
        }

    .premium-card {
        background: rgba(70, 130, 180, 0.05);
        border: 2px solid rgba(70, 130, 180, 0.2);
        border-radius: 12px;
        padding: 24px;
    }

    .verification-alert {
        display: flex;
        align-items: flex-start;
        gap: 16px;
        padding: 20px;
        background: #FFF3CD;
        border: 2px solid #FFE69C;
        border-radius: 12px;
    }

        .verification-alert svg {
            flex-shrink: 0;
            color: #F59E0B;
        }

        .verification-alert h4 {
            font-size: 16px;
            font-weight: 600;
            color: #111827;
            margin: 0 0 8px 0;
        }

        .verification-alert p {
            font-size: 14px;
            color: #6B7280;
            margin: 0 0 16px 0;
            line-height: 1.5;
        }

            .verification-alert p strong {
                color: #111827;
            }

    .btn-verify {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: #F59E0B;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        font-size: 14px;
        transition: all 0.2s;
    }

        .btn-verify:hover {
            background: #D97706;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(245, 158, 11, 0.3);
        }

    .premium-info h3 {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 18px;
        font-weight: 600;
        color: #111827;
        margin: 0 0 4px 0;
    }

        .premium-info h3 svg {
            color: #F59E0B;
        }

    .premium-info p {
        font-size: 14px;
        color: #6B7280;
        margin: 0;
    }

    .precio-selector {
        margin-top: 20px;
        padding-top: 20px;
        border-top: 1px solid rgba(70, 130, 180, 0.2);
    }

    .precio-label {
        display: block;
        font-size: 15px;
        font-weight: 600;
        color: #111827;
        margin-bottom: 12px;
    }

    .precio-input-group {
        display: flex;
        align-items: center;
        gap: 0;
        background: white;
        border: 2px solid #E5E7EB;
        border-radius: 10px;
        overflow: hidden;
        max-width: 200px;
    }

    .precio-currency {
        padding: 12px 16px;
        background: #F9FAFB;
        font-size: 16px;
        font-weight: 600;
        color: #6B7280;
    }

    .precio-select {
        flex: 1;
        padding: 12px 16px;
