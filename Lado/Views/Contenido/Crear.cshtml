@model dynamic
@{
    ViewData["Title"] = "Nueva Publicación";
    var usuarioVerificado = ViewBag.UsuarioVerificado ?? false;
    var ladoPreferido = ViewBag.LadoPreferido ?? Lado.Models.TipoLado.LadoA;
    var ladoPreferidoEsB = ladoPreferido == Lado.Models.TipoLado.LadoB && usuarioVerificado;
    var permitirPreviewBlur = ViewBag.PermitirPreviewBlur ?? false;

    // Límites de archivos desde Admin
    var limiteFotoMB = ViewBag.LimiteFotoMB ?? 10;
    var limiteVideoMB = ViewBag.LimiteVideoMB ?? 100;
    var limiteCantidadArchivos = ViewBag.LimiteCantidadArchivos ?? 10;
}

<div class="crear-container">
    <div class="crear-card">
        <!-- Header compacto -->
        <div class="crear-header">
            <h1>
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
                </svg>
                Nueva publicación
            </h1>
        </div>

        <form asp-action="Crear" method="post" enctype="multipart/form-data" id="formContenido">
            @Html.AntiForgeryToken()

            <!-- Indicador visual del lado actual (no editable) -->
            <div class="form-section">
                <div class="lado-actual-banner @(ladoPreferidoEsB ? "lado-b" : "lado-a")">
                    @if (ladoPreferidoEsB)
                    {
                        <div class="lado-badge-texto ladob">LadoB</div>
                        <span>Publicando con tu <strong>seudónimo</strong></span>
                    }
                    else
                    {
                        <div class="lado-badge-texto ladoa">LadoA</div>
                        <span>Publicando con tu <strong>nombre real</strong></span>
                    }
                    <a href="/Contenido" class="cambiar-lado-link" title="Cambia tu identidad en el menú lateral y vuelve a crear">Cambiar</a>
                </div>
            </div>

            <!-- Input hidden para EsGratis (basado en LadoPreferido) -->
            <input type="hidden" name="EsGratis" id="esGratisInput" value="@(ladoPreferidoEsB ? "false" : "true")" />
            <!-- Input hidden para indicar si publicar en LadoB (independiente de si es gratis) -->
            <input type="hidden" name="PublicarEnLadoB" id="publicarEnLadoBInput" value="@(ladoPreferidoEsB ? "true" : "false")" />

            <!-- Opcion Feed Publico (solo para LadoA) -->
            <div class="form-section" id="feedPublicoSection" style="@(ladoPreferidoEsB ? "display: none;" : "")">
                <div class="publico-card">
                    <div class="publico-toggle">
                        <label class="toggle-container">
                            <input type="checkbox" name="EsPublicoGeneral" id="esPublicoGeneralInput" value="true" checked>
                            <span class="toggle-slider"></span>
                        </label>
                        <div class="publico-info">
                            <h4>
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
                                </svg>
                                Mostrar en Feed Publico
                            </h4>
                            <p>Este contenido sera visible para usuarios anonimos en el feed publico "Que esta pasando?"</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tipo de Contenido (auto-detectado) -->
            <input type="hidden" name="TipoContenido" id="tipoContenidoInput" value="1" />

            <!-- Subir Archivo(s) -->
            <div class="form-section" id="archivoSection">
                <!-- Input file oculto -->
                <input type="file"
                       name="archivos"
                       id="archivoInput"
                       class="file-input-hidden-accessible"
                       accept="image/*,video/*,.heic,.heif,.mov,.mp4"
                       multiple>
                <!-- Label con for="" - ÚNICA forma que funciona en iOS Safari -->
                <label for="archivoInput" class="btn-select-files-main" id="btnSelectFiles">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                        <path d="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z"/>
                    </svg>
                    <span>Seleccionar fotos o videos</span>
                </label>
                <p class="upload-hint-text">Hasta @limiteCantidadArchivos archivos · Fotos max @(limiteFotoMB)MB · Videos max @(limiteVideoMB)MB</p>

                <!-- Boton para usar galeria -->
                <button type="button" class="btn-usar-galeria" id="btnUsarGaleria">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="3" width="7" height="7"></rect>
                        <rect x="14" y="3" width="7" height="7"></rect>
                        <rect x="14" y="14" width="7" height="7"></rect>
                        <rect x="3" y="14" width="7" height="7"></rect>
                    </svg>
                    <span>Usar de mi galeria</span>
                </button>

                <!-- Hidden input para IDs de galeria -->
                <div id="galeriaMediaContainer"></div>

                <!-- Zona de drag & drop solo para desktop -->
                <div class="upload-zone desktop-only" id="uploadArea" tabindex="0">
                    <div class="upload-content">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor" class="upload-icon">
                            <path d="M19.35 10.04C18.67 6.59 15.64 4 12 4 9.11 4 6.6 5.64 5.35 8.04 2.34 8.36 0 10.91 0 14c0 3.31 2.69 6 6 6h13c2.76 0 5-2.24 5-5 0-2.64-2.05-4.78-4.65-4.96zM14 13v4h-4v-4H7l5-5 5 5h-3z" />
                        </svg>
                        <p>O arrastra archivos aquí</p>
                    </div>
                </div>

                <!-- Preview Grid para múltiples archivos -->
                <div id="previewGrid" class="preview-grid" style="display: none;">
                    <div class="preview-header">
                        <span id="fileCount">0 archivos seleccionados</span>
                        <button type="button" class="btn-clear-all" id="clearAllBtn">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" />
                            </svg>
                            Limpiar todo
                        </button>
                    </div>
                    <div class="preview-items" id="previewItems">
                        <!-- Items de preview se agregan dinámicamente -->
                    </div>
                    <div class="reorder-hint" id="reorderHint" style="display: none;">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M10 9h4V6h3l-5-5-5 5h3v3zm-1 1H6V7l-5 5 5 5v-3h3v-4zm14 2l-5-5v3h-3v4h3v3l5-5zm-9 3h-4v3H7l5 5 5-5h-3v-3z"/>
                        </svg>
                        <span class="hint-desktop">Arrastra para reordenar</span>
                        <span class="hint-mobile">Mantén presionado y arrastra</span>
                    </div>
                    <input type="file" id="addMoreInput" class="file-input-hidden-accessible" accept="image/*,video/*,.heic,.heif,.mov,.mp4" multiple>
                    <label for="addMoreInput" class="btn-add-more" id="addMoreBtn">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm5 11h-4v4h-2v-4H7v-2h4V7h2v4h4v2z" />
                        </svg>
                        <span>Agregar más</span>
                    </label>
                </div>

                <!-- Preview single (compatibilidad) -->
                <div id="previewArea" class="preview-area" style="display: none;">
                    <div class="preview-container">
                        <img id="imagePreview" class="preview-media" alt="Preview">
                        <video id="videoPreview" class="preview-media" controls></video>
                        <button type="button" class="preview-remove" id="removeFileBtn">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" />
                            </svg>
                        </button>
                    </div>
                    <div class="preview-info" id="fileInfo"></div>
                </div>
            </div>

            <!-- Descripción -->
            <div class="form-section">
                <label class="section-label">Descripción</label>
                <textarea name="Descripcion" class="form-textarea" rows="5" placeholder="Escribe una descripción atractiva para tu contenido..." maxlength="500" id="descripcionTextarea"></textarea>
                <div class="char-counter">
                    <span id="charCount">0</span>/500 caracteres
                </div>
            </div>

            <!-- Configuración Premium (solo para LadoB) -->
            <div class="form-section" id="precioSectionWrapper" style="@(ladoPreferidoEsB ? "display: block;" : "display: none;")">
                <div class="premium-card">
                    @if (!usuarioVerificado)
                    {
                        <div class="verification-alert">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z" />
                            </svg>
                            <div>
                                <h4>Monetización Bloqueada</h4>
                                <p>Para monetizar contenido en LadoB debes verificar tu identidad. Por ahora, tu contenido se publicará <strong>gratis</strong> con tu seudónimo.</p>
                                <a href="/CreatorVerification/Request" class="btn-verify">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm-2 16l-4-4 1.41-1.41L10 14.17l6.59-6.59L18 9l-8 8z" />
                                    </svg>
                                    Verificar Identidad
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="premium-info">
                            <h3>
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z" />
                                </svg>
                                Configurar acceso al contenido
                            </h3>
                            <p>Este contenido se publicará en tu LadoB con tu seudónimo</p>
                        </div>

                        <!-- Tipo de acceso -->
                        <div class="acceso-selector">
                            <label class="acceso-label">¿Quién puede ver este contenido?</label>
                            <div class="acceso-options">
                                <!-- Opción 1: Solo Suscriptores -->
                                <label class="acceso-option" data-tipo="suscriptores">
                                    <input type="radio" name="TipoAcceso" value="suscriptores" checked>
                                    <div class="acceso-option-content">
                                        <div class="acceso-icon suscriptores">
                                            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                                                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/>
                                            </svg>
                                        </div>
                                        <div class="acceso-text">
                                            <strong>Solo suscriptores</strong>
                                            <span>Incluido en tu plan de suscripción</span>
                                        </div>
                                        <div class="acceso-check">
                                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                                <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                                            </svg>
                                        </div>
                                    </div>
                                </label>

                                <!-- Opción 2: Compra Individual -->
                                <label class="acceso-option" data-tipo="compra">
                                    <input type="radio" name="TipoAcceso" value="compra">
                                    <div class="acceso-option-content">
                                        <div class="acceso-icon compra">
                                            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                                                <path d="M11.8 10.9c-2.27-.59-3-1.2-3-2.15 0-1.09 1.01-1.85 2.7-1.85 1.78 0 2.44.85 2.5 2.1h2.21c-.07-1.72-1.12-3.3-3.21-3.81V3h-3v2.16c-1.94.42-3.5 1.68-3.5 3.61 0 2.31 1.91 3.46 4.7 4.13 2.5.6 3 1.48 3 2.41 0 .69-.49 1.79-2.7 1.79-2.06 0-2.87-.92-2.98-2.1h-2.2c.12 2.19 1.76 3.42 3.68 3.83V21h3v-2.15c1.95-.37 3.5-1.5 3.5-3.55 0-2.84-2.43-3.81-4.7-4.4z"/>
                                            </svg>
                                        </div>
                                        <div class="acceso-text">
                                            <strong>Compra individual</strong>
                                            <span>Cualquiera puede comprar este contenido</span>
                                        </div>
                                        <div class="acceso-check">
                                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                                <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                                            </svg>
                                        </div>
                                    </div>
                                </label>

                                <!-- Opción 3: Ambos -->
                                <label class="acceso-option" data-tipo="ambos">
                                    <input type="radio" name="TipoAcceso" value="ambos">
                                    <div class="acceso-option-content">
                                        <div class="acceso-icon ambos">
                                            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                                                <path d="M12 2l-5.5 9h11L12 2zm0 3.84L13.93 9h-3.87L12 5.84zM17.5 13c-2.49 0-4.5 2.01-4.5 4.5s2.01 4.5 4.5 4.5 4.5-2.01 4.5-4.5-2.01-4.5-4.5-4.5zm0 7c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5zM3 21.5h8v-8H3v8zm2-6h4v4H5v-4z"/>
                                            </svg>
                                        </div>
                                        <div class="acceso-text">
                                            <strong>Suscriptores + Compra</strong>
                                            <span>Suscriptores gratis, otros pueden comprar</span>
                                        </div>
                                        <div class="acceso-check">
                                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                                <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                                            </svg>
                                        </div>
                                    </div>
                                </label>

                                <!-- Opción 4: Gratis para todos -->
                                <label class="acceso-option" data-tipo="gratis">
                                    <input type="radio" name="TipoAcceso" value="gratis">
                                    <div class="acceso-option-content">
                                        <div class="acceso-icon gratis">
                                            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                                                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                                            </svg>
                                        </div>
                                        <div class="acceso-text">
                                            <strong>Gratis para todos</strong>
                                            <span>Visible públicamente en tu LadoB</span>
                                        </div>
                                        <div class="acceso-check">
                                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                                <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                                            </svg>
                                        </div>
                                    </div>
                                </label>
                            </div>
                        </div>

                        <!-- Selector de precio (solo visible si hay compra) -->
                        <div class="precio-selector" id="precioSelectorDiv" style="display: none;">
                            <label class="precio-label">
                                Precio de compra individual
                                <span class="required">*</span>
                            </label>
                            <div class="precio-input-group">
                                <span class="precio-currency">$</span>
                                <select name="PrecioDesbloqueo" class="precio-select" id="precioSelect">
                                    <option value="0">0 (Gratis)</option>
                                    <option value="5">5</option>
                                    <option value="10" selected>10</option>
                                    <option value="15">15</option>
                                    <option value="20">20</option>
                                    <option value="25">25</option>
                                    <option value="30">30</option>
                                    <option value="35">35</option>
                                    <option value="40">40</option>
                                    <option value="45">45</option>
                                    <option value="50">50</option>
                                    <option value="60">60</option>
                                    <option value="70">70</option>
                                    <option value="80">80</option>
                                    <option value="90">90</option>
                                    <option value="100">100</option>
                                </select>
                            </div>
                            <small class="precio-hint">
                                <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" style="vertical-align: middle; margin-right: 4px;">
                                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z" />
                                </svg>
                                Los no-suscriptores pagarán este monto para desbloquear
                            </small>
                        </div>

                        <!-- Input hidden para SoloSuscriptores -->
                        <input type="hidden" name="SoloSuscriptores" id="soloSuscriptoresInput" value="true" />
                    }
                </div>
            </div>

            <!-- Opción Preview Blur (solo para LadoB si está habilitado) -->
            @if (permitirPreviewBlur)
            {
            <div class="form-section" id="previewBlurSection" style="@(ladoPreferidoEsB ? "display: block;" : "display: none;")">
                <div class="preview-blur-card">
                    <div class="preview-blur-toggle">
                        <label class="toggle-container">
                            <input type="checkbox" name="CrearPreviewBlur" id="crearPreviewBlurInput" value="true">
                            <span class="toggle-slider"></span>
                        </label>
                        <div class="preview-blur-info">
                            <h4>
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2" fill="none" stroke="currentColor" stroke-width="2"/>
                                    <circle cx="8.5" cy="8.5" r="1.5"/>
                                    <polyline points="21 15 16 10 5 21" fill="none" stroke="currentColor" stroke-width="2"/>
                                </svg>
                                Publicar preview en LadoA
                            </h4>
                            <p>Se creará una versión censurada (blur) de este contenido que aparecerá en tu feed público como adelanto</p>
                        </div>
                    </div>
                    <div class="tipo-censura-selector" id="tipoCensuraSelector" style="display: none;">
                        <label class="tipo-censura-label">Tipo de censura:</label>
                        <div class="tipo-censura-options">
                            <label class="tipo-censura-option selected">
                                <input type="radio" name="TipoCensuraPreview" value="0" checked>
                                <span class="option-icon">
                                    <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><circle cx="12" cy="12" r="10" opacity="0.3"/></svg>
                                </span>
                                <span class="option-label">Blur</span>
                            </label>
                            <label class="tipo-censura-option">
                                <input type="radio" name="TipoCensuraPreview" value="1">
                                <span class="option-icon">
                                    <svg width="24" height="24" viewBox="0 0 24 24"><rect x="2" y="2" width="5" height="5" fill="currentColor"/><rect x="9" y="2" width="5" height="5" fill="currentColor" opacity="0.7"/><rect x="16" y="2" width="5" height="5" fill="currentColor" opacity="0.4"/></svg>
                                </span>
                                <span class="option-label">Pixelado</span>
                            </label>
                            <label class="tipo-censura-option">
                                <input type="radio" name="TipoCensuraPreview" value="3">
                                <span class="option-icon">
                                    <svg width="24" height="24" viewBox="0 0 24 24"><rect x="2" y="2" width="20" height="20" rx="2" fill="currentColor" opacity="0.2"/><rect x="2" y="14" width="20" height="8" rx="1" fill="currentColor" opacity="0.6"/></svg>
                                </span>
                                <span class="option-label">Parcial</span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            }

            <!-- Botones de Acción -->
            <div class="form-actions">
                <button type="submit" class="btn btn-primary" id="btnPublicar">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z" />
                    </svg>
                    Publicar Ahora
                </button>
                <button type="button" class="btn btn-secondary" id="btnBorrador">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M17 3H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V7l-4-4zm-5 16c-1.66 0-3-1.34-3-3s1.34-3 3-3 3 1.34 3 3-1.34 3-3 3zm3-10H5V5h10v4z" />
                    </svg>
                    Guardar Borrador
                </button>
                <a href="/Contenido" class="btn btn-outline">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" />
                    </svg>
                    Cancelar
                </a>
            </div>

            <input type="hidden" name="EsBorrador" id="esBorradorInput" value="false">
        </form>

        <!-- Modal selector de galeria -->
        @await Html.PartialAsync("_GaleriaSeleccionModal", new ViewDataDictionary(ViewData) { { "Multiple", true }, { "MaxSeleccion", 10 } })
    </div>

    <!-- Tips Card -->
    <div class="tips-card">
        <h3>
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
