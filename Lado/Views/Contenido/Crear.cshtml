                    const isVideo = isVideoFile(file);

                    // Crear preview con manejo de errores para iOS
                    try {
                        const objectUrl = URL.createObjectURL(file);

                        if (isVideo) {
                            const video = document.createElement('video');
                            video.muted = true;
                            video.playsInline = true; // Importante para iOS
                            video.src = objectUrl;
                            video.onerror = () => {
                                // Fallback si no puede cargar el video
                                item.innerHTML = '<div class="preview-fallback"><svg viewBox="0 0 24 24" fill="currentColor"><path d="M8 5v14l11-7z"/></svg></div>';
                            };
                            item.appendChild(video);
                        } else {
                            const img = document.createElement('img');
                            img.src = objectUrl;
                            img.onerror = () => {
                                // Fallback para HEIC u otros formatos no soportados
                                item.innerHTML = '<div class="preview-fallback"><svg viewBox="0 0 24 24" fill="currentColor"><path d="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z"/></svg></div>';
                            };
                            item.appendChild(img);
                        }
                    } catch (e) {
                        // Error al crear ObjectURL
                        item.innerHTML = '<div class="preview-fallback"><svg viewBox="0 0 24 24" fill="currentColor"><path d="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z"/></svg></div>';
                    }

                    // Badge de orden
                    const orderBadge = document.createElement('span');
                    orderBadge.className = 'order-badge';
                    orderBadge.textContent = index + 1;
                    item.appendChild(orderBadge);

                    // Badge de tipo (video) - usar la misma función helper
                    if (isVideoFile(file)) {
                        const typeBadge = document.createElement('span');
                        typeBadge.className = 'type-badge';
                        typeBadge.innerHTML = '<svg width="14" height="14" viewBox="0 0 24 24" fill="white"><path d="M8 5v14l11-7z"/></svg>';
                        item.appendChild(typeBadge);
                    }

                    // Botón eliminar
                    const removeBtn = document.createElement('button');
                    removeBtn.type = 'button';
                    removeBtn.className = 'remove-item';
                    removeBtn.innerHTML = '<svg viewBox="0 0 24 24"><path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/></svg>';
                    removeBtn.addEventListener('click', (e) => {
                        e.stopPropagation();
                        selectedFiles.splice(index, 1);
                        updatePreviewGrid();
                    });
                    item.appendChild(removeBtn);

                    // Drag & Drop para reordenar (solo si hay más de 1 archivo)
                    if (selectedFiles.length > 1) {
                        item.draggable = true;

                        item.addEventListener('dragstart', (e) => {
                            e.dataTransfer.effectAllowed = 'move';
                            e.dataTransfer.setData('text/plain', index.toString());
                            item.classList.add('dragging');
                            draggedIndex = index;
                        });

                        item.addEventListener('dragend', () => {
                            item.classList.remove('dragging');
                            document.querySelectorAll('.preview-item').forEach(el => el.classList.remove('drag-over'));
                            draggedIndex = null;
                        });

                        item.addEventListener('dragover', (e) => {
                            e.preventDefault();
                            e.dataTransfer.dropEffect = 'move';
                            if (draggedIndex !== null && draggedIndex !== index) {
                                item.classList.add('drag-over');
                            }
                        });

                        item.addEventListener('dragleave', () => {
                            item.classList.remove('drag-over');
                        });

                        item.addEventListener('drop', (e) => {
                            e.preventDefault();
                            item.classList.remove('drag-over');
                            const fromIndex = parseInt(e.dataTransfer.getData('text/plain'));
                            const toIndex = index;

                            if (fromIndex !== toIndex && !isNaN(fromIndex)) {
                                // Reordenar array
                                const [movedFile] = selectedFiles.splice(fromIndex, 1);
                                selectedFiles.splice(toIndex, 0, movedFile);
                                console.log('[Reorder] Movido de posición', fromIndex + 1, 'a', toIndex + 1);
                                updatePreviewGrid();
                            }
                        });

                        // Touch support para móviles
                        setupTouchReorder(item, index);
                    }

                    previewItems.appendChild(item);
                });

                // Agregar clase y hint si hay múltiples archivos (para cursor grab y reordenar)
                const reorderHint = document.getElementById('reorderHint');
                if (selectedFiles.length > 1) {
                    previewItems.classList.add('has-multiple');
                    if (reorderHint) reorderHint.style.display = 'flex';
                } else {
                    previewItems.classList.remove('has-multiple');
                    if (reorderHint) reorderHint.style.display = 'none';
                }

                // Actualizar el input file con los archivos seleccionados
                updateFileInput();
            }

            // Variable para tracking del drag
            let draggedIndex = null;

            // Touch support para móviles
            let touchStartIndex = null;
            let touchStartX = 0;
            let touchStartY = 0;
            let touchMoved = false;

            function setupTouchReorder(item, index) {
                if (selectedFiles.length <= 1) return;

                let longPressTimer = null;
                let isDragging = false;

                item.addEventListener('touchstart', (e) => {
                    touchStartIndex = index;
                    touchStartX = e.touches[0].clientX;
                    touchStartY = e.touches[0].clientY;
                    touchMoved = false;

                    // Long press para iniciar drag
                    longPressTimer = setTimeout(() => {
                        isDragging = true;
                        item.classList.add('dragging');
                        navigator.vibrate && navigator.vibrate(50); // Feedback háptico
                    }, 300);
                }, { passive: true });

                item.addEventListener('touchmove', (e) => {
                    const deltaX = Math.abs(e.touches[0].clientX - touchStartX);
                    const deltaY = Math.abs(e.touches[0].clientY - touchStartY);

                    if (deltaX > 10 || deltaY > 10) {
                        touchMoved = true;
                        if (!isDragging) {
                            clearTimeout(longPressTimer);
                        }
                    }

                    if (isDragging) {
                        e.preventDefault();
                        // Encontrar elemento bajo el dedo
                        const touch = e.touches[0];
                        const elementBelow = document.elementFromPoint(touch.clientX, touch.clientY);
                        const targetItem = elementBelow?.closest('.preview-item');

                        document.querySelectorAll('.preview-item').forEach(el => el.classList.remove('drag-over'));
                        if (targetItem && targetItem !== item) {
                            targetItem.classList.add('drag-over');
                        }
                    }
                }, { passive: false });

                item.addEventListener('touchend', (e) => {
                    clearTimeout(longPressTimer);

                    if (isDragging) {
                        item.classList.remove('dragging');

                        // Encontrar destino
                        const touch = e.changedTouches[0];
                        const elementBelow = document.elementFromPoint(touch.clientX, touch.clientY);
                        const targetItem = elementBelow?.closest('.preview-item');

                        document.querySelectorAll('.preview-item').forEach(el => el.classList.remove('drag-over'));

                        if (targetItem && targetItem !== item) {
                            const toIndex = parseInt(targetItem.dataset.index);
                            if (!isNaN(toIndex) && toIndex !== index) {
                                const [movedFile] = selectedFiles.splice(index, 1);
                                selectedFiles.splice(toIndex, 0, movedFile);
                                console.log('[Touch Reorder] Movido de posición', index + 1, 'a', toIndex + 1);
                                updatePreviewGrid();
                            }
                        }
                    }

                    isDragging = false;
                    touchStartIndex = null;
                }, { passive: true });

                item.addEventListener('touchcancel', () => {
                    clearTimeout(longPressTimer);
                    item.classList.remove('dragging');
                    document.querySelectorAll('.preview-item').forEach(el => el.classList.remove('drag-over'));
                    isDragging = false;
                }, { passive: true });
            }

            function updateFileInput() {
                // Intentar usar DataTransfer (no soportado en iOS Safari antiguo)
                try {
                    if (typeof DataTransfer !== 'undefined') {
                        const dt = new DataTransfer();
                        selectedFiles.forEach(file => dt.items.add(file));
                        archivoInput.files = dt.files;
                    }
                } catch (e) {
                    // En iOS antiguo, DataTransfer no está soportado
                    // No es crítico porque usamos FormData directamente en submitCarrusel
                }
            }

            // Helper global para detectar si es video (para usar en submit también)
            function isVideoFileGlobal(file) {
                if (file.type && file.type.startsWith('video/')) return true;
                const ext = '.' + file.name.toLowerCase().split('.').pop();
                return ['.mp4', '.mov', '.avi', '.webm', '.m4v', '.3gp', '.3gpp', '.mkv', '.mpg', '.mpeg', '.wmv', '.flv', '.mxf'].includes(ext);
            }

            // Character counter
            descripcionTextarea.addEventListener('input', function() {
                charCount.textContent = this.value.length;
            });

            // Guardar borrador
            btnBorrador.addEventListener('click', function() {
                esBorradorInput.value = 'true';

                // Siempre usar submitCarrusel para archivos (1 o más)
                if (selectedFiles.length >= 1) {
                    submitCarrusel(true);
                } else {
                    // Solo texto - submit normal
                    loadingOverlay.classList.add('show');
                    formContenido.submit();
                }
            });

            // Submit del formulario
            formContenido.addEventListener('submit', function(e) {
                const tipoContenido = tipoInput.value;
                const esBorrador = esBorradorInput.value === 'true';
                const esGratis = esGratisInput.value === 'true';

                console.log('[DEBUG SUBMIT] esGratisInput.value:', esGratisInput.value);
                console.log('[DEBUG SUBMIT] esGratis (boolean):', esGratis);
                console.log('[DEBUG SUBMIT] precioSelect.value:', precioSelect?.value);
                console.log('[DEBUG SUBMIT] soloSuscriptoresInput.value:', soloSuscriptoresInput?.value);

                // Auto-detectar tipo antes de validar
                actualizarTipoContenido();

                // Validar: si no hay archivos, debe haber descripción (post de solo texto)
                if (!esBorrador && selectedFiles.length === 0 && !descripcionTextarea.value.trim()) {
                    e.preventDefault();
                    alert('Por favor sube contenido o escribe una descripción');
                    return false;
                }

                // Validar precio para contenido premium (solo si NO es gratis)
                // Si esGratis=true, no validar precio
                console.log('[DEBUG Validación] esGratis:', esGratis, 'precioSelect.value:', precioSelect?.value);
                if (!esGratis && usuarioVerificado && precioSelect) {
                    const precio = parseInt(precioSelect.value) || 0;
                    // Solo validar si hay un precio > 0 (si es 0 y no es SoloSuscriptores, el backend asignará default)
                    if (precio > 0 && precio % 5 !== 0) {
                        e.preventDefault();
                        alert('El precio debe ser un múltiplo de 5 (5, 10, 15, 20...)');
                        return false;
                    }
                }

                // Siempre usar endpoint de carrusel para archivos (funciona para 1 o más)
                if (selectedFiles.length >= 1) {
                    e.preventDefault();
                    submitCarrusel(false);
                    return false;
                }

                // Solo texto (post sin archivo) - submit normal
                loadingOverlay.classList.add('show');
            });

            function submitCarrusel(esBorrador) {
                // Validar que hay archivos
                if (!selectedFiles || selectedFiles.length === 0) {
                    alert('Por favor selecciona al menos un archivo');
                    return;
                }

                loadingOverlay.classList.add('show');

                const progressBar = document.getElementById('uploadProgressBar');
                const percentageText = document.getElementById('uploadPercentage');
                const loadingTitle = document.querySelector('.loading-title');
                const loadingMessage = document.querySelector('.loading-message');

                // Reset progress
                progressBar.style.width = '0%';
                percentageText.textContent = '0%';

                const formData = new FormData();
                console.log('[Crear] Archivos a enviar:', selectedFiles.length);
                selectedFiles.forEach((file, idx) => {
                    console.log(`[Crear] Archivo ${idx}: ${file.name} (${(file.size/1024/1024).toFixed(2)}MB)`);
                    formData.append('archivos', file);
                });
                formData.append('Descripcion', descripcionTextarea.value);

                console.log('[DEBUG submitCarrusel] esGratisInput.value:', esGratisInput.value);
                console.log('[DEBUG submitCarrusel] precioSelect.value:', precioSelect?.value);
                console.log('[DEBUG submitCarrusel] soloSuscriptoresInput.value:', soloSuscriptoresInput?.value);

                formData.append('EsGratis', esGratisInput.value);
                formData.append('EsBorrador', esBorrador ? 'true' : 'false');
                formData.append('EsPublicoGeneral', esPublicoGeneralInput?.checked ? 'true' : 'false');

                if (precioSelect) {
                    formData.append('PrecioDesbloqueo', precioSelect.value);
                }

                // Parámetros de monetización (LadoB)
                if (soloSuscriptoresInput) {
                    formData.append('SoloSuscriptores', soloSuscriptoresInput.value);
                }

                // Indicar lado destino (LadoB si usuario está en modo LadoB)
                const publicarEnLadoBInput = document.getElementById('publicarEnLadoBInput');
                if (publicarEnLadoBInput) {
                    formData.append('PublicarEnLadoB', publicarEnLadoBInput.value);
                    console.log('[DEBUG submitCarrusel] PublicarEnLadoB:', publicarEnLadoBInput.value);
                }

                // Parámetros de Preview Blur
                const crearPreviewBlurInput = document.getElementById('crearPreviewBlurInput');
                if (crearPreviewBlurInput?.checked) {
                    formData.append('CrearPreviewBlur', 'true');
                    const tipoCensuraChecked = document.querySelector('input[name="TipoCensuraPreview"]:checked');
                    if (tipoCensuraChecked) {
                        formData.append('TipoCensuraPreview', tipoCensuraChecked.value);
                    }
                }

                // Agregar token antiforgery
                const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                if (!token) {
                    loadingOverlay.classList.remove('show');
                    alert('Error de seguridad: Token de verificación no encontrado. Por favor recarga la página e intenta de nuevo.');
                    return;
                }
                formData.append('__RequestVerificationToken', token);

                // Usar XMLHttpRequest para tracking de progreso
                const xhr = new XMLHttpRequest();

                // Progress handler
                xhr.upload.addEventListener('progress', function(e) {
                    if (e.lengthComputable) {
                        const percent = Math.round((e.loaded / e.total) * 100);
                        progressBar.style.width = percent + '%';
                        percentageText.textContent = percent + '%';

                        // Actualizar mensajes según el progreso
                        if (percent < 30) {
                            loadingMessage.textContent = 'Iniciando la carga de archivos...';
                        } else if (percent < 60) {
                            loadingMessage.textContent = 'Subiendo tu contenido al servidor...';
                        } else if (percent < 90) {
                            loadingMessage.textContent = 'Ya casi terminamos, un momento...';
                        } else {
                            loadingTitle.textContent = 'Procesando';
                            loadingMessage.textContent = 'Finalizando y guardando tu publicación...';
                        }
                    }
                });

                // Load complete
                xhr.addEventListener('load', function() {
                    if (xhr.status >= 200 && xhr.status < 300) {
                        try {
                            const data = JSON.parse(xhr.responseText);
                            if (data.success) {
                                progressBar.style.width = '100%';
                                percentageText.textContent = '100%';
                                loadingTitle.textContent = '¡Listo!';
                                loadingMessage.textContent = 'Tu contenido se ha publicado exitosamente';

                                setTimeout(() => {
                                    // Redirigir al filtro correcto según el lado donde se publicó
                                    const filtro = ladoPreferidoEsB ? 'ladob' : 'ladoa';
                                    window.location.href = '/Contenido?filtro=' + filtro + '&t=' + Date.now();
                                }, 800);
                            } else {
                                loadingOverlay.classList.remove('show');
                                alert(data.message || 'Error al crear el contenido');
                            }
                        } catch (e) {
                            loadingOverlay.classList.remove('show');
                            alert('Error al procesar la respuesta del servidor');
                        }
                    } else {
                        loadingOverlay.classList.remove('show');
                        console.error('Error al crear contenido:', xhr.status, xhr.responseText);

                        // Error 400: Generalmente es token CSRF expirado por inactividad
                        if (xhr.status === 400) {
                            const recargar = confirm(
                                'Tu sesión ha expirado por inactividad.\n\n' +
                                '¿Deseas recargar la página para continuar?\n\n' +
                                '(Tu contenido no se perderá si lo seleccionas de nuevo)'
                            );
                            if (recargar) {
                                window.location.reload();
                            }
                            return;
                        }

                        // Error 401: No autenticado
                        if (xhr.status === 401) {
                            alert('Tu sesión ha expirado. Por favor inicia sesión nuevamente.');
                            window.location.href = '/Account/Login?returnUrl=' + encodeURIComponent(window.location.pathname);
                            return;
                        }

                        let errorMsg = 'Error al crear el contenido. Código: ' + xhr.status;
                        // Intentar extraer mensaje de error del servidor
                        try {
                            const errorData = JSON.parse(xhr.responseText);
                            if (errorData.message) {
                                errorMsg = errorData.message;
                            }
                        } catch (e) {
                            // Si no es JSON, mostrar los primeros 200 caracteres
                            if (xhr.responseText && xhr.responseText.length > 0) {
                                errorMsg += '\n' + xhr.responseText.substring(0, 200);
                            }
                        }
                        alert(errorMsg);
                    }
                });

                // Error handler
                xhr.addEventListener('error', function() {
                    loadingOverlay.classList.remove('show');
                    alert('Error de conexión. Por favor verifica tu internet e intenta de nuevo.');
                });

                // Abort handler
                xhr.addEventListener('abort', function() {
                    loadingOverlay.classList.remove('show');
                    alert('La carga fue cancelada');
                });

                xhr.open('POST', '/Contenido/CrearCarrusel');
                // Enviar token también en header para compatibilidad con configuración de servidor
                xhr.setRequestHeader('X-CSRF-TOKEN', token);
                xhr.send(formData);
            }
        });

        // ========================================
        // RENOVACIÓN AUTOMÁTICA DEL TOKEN CSRF
        // ========================================
        // Renueva el token cada 15 minutos para evitar error 400 por inactividad
        (function() {
            const TOKEN_REFRESH_INTERVAL = 15 * 60 * 1000; // 15 minutos
            const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
            let lastActivity = Date.now();

            // Actualizar timestamp de última actividad
            ['click', 'keypress', 'scroll', 'mousemove'].forEach(event => {
                document.addEventListener(event, () => { lastActivity = Date.now(); }, { passive: true });
            });

            // Función para renovar el token
            async function renovarToken() {
                try {
                    const response = await fetch('/Contenido/RenovarToken');
                    if (response.ok) {
                        const data = await response.json();
                        if (data.success && data.token && tokenInput) {
                            tokenInput.value = data.token;
                            console.log('[Token] Renovado exitosamente');
                        }
                    }
                } catch (e) {
                    console.warn('[Token] Error renovando:', e);
                }
            }

            // Renovar token periódicamente
            setInterval(() => {
                const inactivo = (Date.now() - lastActivity) < TOKEN_REFRESH_INTERVAL;
                // Solo renovar si el usuario sigue activo en la página
                if (document.visibilityState === 'visible') {
                    renovarToken();
                }
            }, TOKEN_REFRESH_INTERVAL);

            // También renovar cuando la página vuelve a ser visible después de estar oculta
            document.addEventListener('visibilitychange', () => {
                if (document.visibilityState === 'visible') {
                    const tiempoOculto = Date.now() - lastActivity;
                    // Si la página estuvo oculta más de 10 minutos, renovar token
                    if (tiempoOculto > 10 * 60 * 1000) {
                        renovarToken();
                    }
                }
            });
        })();
    </script>
