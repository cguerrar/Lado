            function drawWaveform() {
                if (!audioBuffer || !waveformCanvas || !waveformContainer) {
                    console.error('[AudioCutter] drawWaveform: Faltan elementos', { audioBuffer: !!audioBuffer, canvas: !!waveformCanvas, container: !!waveformContainer });
                    return;
                }

                const ctx = waveformCanvas.getContext('2d');
                const width = waveformContainer.offsetWidth || waveformContainer.clientWidth || 400;
                const height = waveformContainer.offsetHeight || waveformContainer.clientHeight || 80;

                console.log('[AudioCutter] drawWaveform: Dimensiones', { width, height });

                waveformCanvas.width = width * window.devicePixelRatio;
                waveformCanvas.height = height * window.devicePixelRatio;
                waveformCanvas.style.width = width + 'px';
                waveformCanvas.style.height = height + 'px';
                ctx.scale(window.devicePixelRatio, window.devicePixelRatio);

                // Combinar canales si es stereo
                const channelData = audioBuffer.getChannelData(0);
                const data = audioBuffer.numberOfChannels > 1
                    ? mergeChannels(channelData, audioBuffer.getChannelData(1))
                    : channelData;

                // Calcular pico máximo para normalizar
                let maxPeak = 0;
                for (let i = 0; i < data.length; i++) {
                    const absVal = Math.abs(data[i]);
                    if (absVal > maxPeak) maxPeak = absVal;
                }
                maxPeak = maxPeak || 1;

                // Configuración de barras
                const barWidth = 3;
                const barGap = 1;
                const barCount = Math.floor(width / (barWidth + barGap));
                const samplesPerBar = Math.floor(data.length / barCount);
                const centerY = height / 2;

                ctx.clearRect(0, 0, width, height);

                for (let i = 0; i < barCount; i++) {
                    const startSample = i * samplesPerBar;
                    const endSample = startSample + samplesPerBar;

                    // Calcular RMS (Root Mean Square) para mejor representación
                    let sumSquares = 0;
                    let peakInBar = 0;
                    for (let j = startSample; j < endSample && j < data.length; j++) {
                        const val = Math.abs(data[j]);
                        sumSquares += val * val;
                        if (val > peakInBar) peakInBar = val;
                    }
                    const rms = Math.sqrt(sumSquares / samplesPerBar);

                    // Combinar RMS y pico para visualización más dinámica
                    const normalizedValue = ((rms * 0.7) + (peakInBar * 0.3)) / maxPeak;

                    // Altura de la barra (mínimo 2px, máximo 90% del canvas)
                    const barHeight = Math.max(2, normalizedValue * height * 0.9);

                    const x = i * (barWidth + barGap);
                    const y = centerY - (barHeight / 2);

                    // Gradiente de color para las barras
                    ctx.fillStyle = 'rgba(255, 255, 255, 0.5)';

                    // Dibujar barra con bordes redondeados
                    ctx.beginPath();
                    ctx.roundRect(x, y, barWidth, barHeight, 1);
                    ctx.fill();
                }
            }

            function mergeChannels(ch1, ch2) {
                const merged = new Float32Array(ch1.length);
                for (let i = 0; i < ch1.length; i++) {
                    merged[i] = (ch1[i] + ch2[i]) / 2;
                }
                return merged;
            }

            function updateSelection() {
                if (!waveformContainer || !waveformSelection || !audioDuration) return;

                const containerWidth = waveformContainer.offsetWidth;
                const startPercent = (selectionStart / audioDuration) * 100;
                const endPercent = (selectionEnd / audioDuration) * 100;
                const startPx = (selectionStart / audioDuration) * containerWidth;
                const endPx = (selectionEnd / audioDuration) * containerWidth;

                // Actualizar caja de selección
                waveformSelection.style.left = startPx + 'px';
                waveformSelection.style.width = (endPx - startPx) + 'px';

                // Posicionar handles con pixels
                if (handleLeft) handleLeft.style.left = (startPx - 8) + 'px'; // -8 para centrar el handle de 16px
                if (handleRight) handleRight.style.left = (endPx - 8) + 'px';

                // Actualizar textos de tiempo (ahora son <strong> no inputs)
                if (cutStartInput) cutStartInput.textContent = formatTime(selectionStart);
                if (cutEndInput) cutEndInput.textContent = formatTime(selectionEnd);
                if (selectionDurationSpan) {
                    selectionDurationSpan.textContent = Math.round(selectionEnd - selectionStart) + 's';
                }

                // Guardar en hidden input (como entero para el modelo)
                if (audioTrimInicioInput) audioTrimInicioInput.value = Math.round(selectionStart).toString();
            }

            function formatTime(seconds) {
                const mins = Math.floor(seconds / 60);
                const secs = Math.floor(seconds % 60);
                return `${mins.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
            }

            function formatTimeMs(seconds) {
                const mins = Math.floor(seconds / 60);
                const secs = (seconds % 60).toFixed(1);
                return `${mins.toString().padStart(2, '0')}:${secs.padStart(4, '0')}`;
            }

            // Drag handles para selección
            let dragHandlesConfigured = false;
            function setupDragHandles() {
                if (dragHandlesConfigured) return; // Evitar duplicados
                if (!handleLeft || !handleRight || !waveformContainer) {
                    console.error('[AudioCutter] setupDragHandles: Faltan elementos');
                    return;
                }

                console.log('[AudioCutter] Configurando drag handles');
                dragHandlesConfigured = true;

                const startDrag = (e, handle) => {
                    e.preventDefault();
                    e.stopPropagation();
                    isDragging = true;
                    dragHandle = handle;

                    // Visual feedback
                    document.body.style.cursor = 'ew-resize';
                    if (handle === 'left') {
                        handleLeft.classList.add('dragging');
                    } else {
                        handleRight.classList.add('dragging');
                    }

                    document.addEventListener('mousemove', onDrag);
                    document.addEventListener('mouseup', stopDrag);
                    document.addEventListener('touchmove', onDrag, { passive: false });
                    document.addEventListener('touchend', stopDrag);
                };

                // Mouse events
                handleLeft.addEventListener('mousedown', (e) => startDrag(e, 'left'));
                handleRight.addEventListener('mousedown', (e) => startDrag(e, 'right'));

                // Touch events con passive: false
                handleLeft.addEventListener('touchstart', (e) => startDrag(e, 'left'), { passive: false });
                handleRight.addEventListener('touchstart', (e) => startDrag(e, 'right'), { passive: false });
            }

            function onDrag(e) {
                if (!isDragging || !waveformContainer || !audioDuration) {
                    return;
                }
                e.preventDefault();

                const rect = waveformContainer.getBoundingClientRect();
                const clientX = e.touches ? e.touches[0].clientX : e.clientX;
                let x = clientX - rect.left;
                x = Math.max(0, Math.min(x, rect.width));

                const time = (x / rect.width) * audioDuration;

                if (dragHandle === 'left') {
                    selectionStart = Math.min(time, selectionEnd - 1);
                    selectionStart = Math.max(0, selectionStart);
                } else {
                    selectionEnd = Math.max(time, selectionStart + 1);
                    selectionEnd = Math.min(audioDuration, selectionEnd);
                }

                updateSelection();
            }

            function stopDrag() {
                isDragging = false;
                document.body.style.cursor = '';

                if (handleLeft) handleLeft.classList.remove('dragging');
                if (handleRight) handleRight.classList.remove('dragging');

                dragHandle = null;
                document.removeEventListener('mousemove', onDrag);
                document.removeEventListener('mouseup', stopDrag);
                document.removeEventListener('touchmove', onDrag);
                document.removeEventListener('touchend', stopDrag);
            }

            // Click en waveform para mover selección
            if (waveformContainer) {
                waveformContainer.addEventListener('click', function(e) {
                    if (isDragging) return;
                    // Ignorar clicks en los handles
                    if (e.target === handleLeft || e.target === handleRight ||
                        e.target.parentElement === handleLeft || e.target.parentElement === handleRight) return;
                    if (!audioDuration) return;

                    const rect = waveformContainer.getBoundingClientRect();
                    const x = e.clientX - rect.left;
                    const clickTime = (x / rect.width) * audioDuration;

                    // Mover selección centrada en el click
                    const duration = selectionEnd - selectionStart;
                    let newStart = clickTime - (duration / 2);
                    newStart = Math.max(0, Math.min(newStart, audioDuration - duration));

                    selectionStart = newStart;
                    selectionEnd = newStart + duration;
                    updateSelection();
                });
            }

            // Reproducir selección
            if (cutterPlayBtn) {
                cutterPlayBtn.addEventListener('click', function() {
                    if (isPlaying) {
                        stopPlayback();
                    } else {
                        playSelection();
                    }
                });
            }

            function playSelection() {
                console.log('[AudioCutter] playSelection llamado', { audioBuffer: !!audioBuffer, audioContext: !!audioContext, audioDuration });
                if (!audioBuffer || !audioContext) {
                    console.error('[AudioCutter] playSelection: No hay audio cargado');
                    return;
                }

                // Resume context si está suspendido
                if (audioContext.state === 'suspended') {
                    audioContext.resume();
                }

                const volume = (cutterVolumeSlider?.value || 70) / 100;

                // Crear source
                playbackSource = audioContext.createBufferSource();
                playbackSource.buffer = audioBuffer;

                // Gain node para volumen
                const gainNode = audioContext.createGain();
                gainNode.gain.value = volume;

                playbackSource.connect(gainNode);
                gainNode.connect(audioContext.destination);

                // Reproducir selección
                const duration = selectionEnd - selectionStart;
                playbackStartTime = audioContext.currentTime;
                playbackSource.start(0, selectionStart, duration);

                playbackSource.onended = () => {
                    stopPlayback();
                };

                isPlaying = true;
                updatePlayButton(true);
                animatePlayhead();
            }

            function stopPlayback() {
                if (playbackSource) {
                    try {
                        playbackSource.stop();
                    } catch(e) {}
                    playbackSource = null;
                }
                if (playbackAnimationId) {
                    cancelAnimationFrame(playbackAnimationId);
                    playbackAnimationId = null;
                }
                isPlaying = false;
                updatePlayButton(false);
                if (waveformPlayhead) {
                    waveformPlayhead.style.display = 'none';
                }
            }

            function animatePlayhead() {
                if (!isPlaying || !waveformPlayhead || !audioContext || !audioDuration) return;

                const elapsed = audioContext.currentTime - playbackStartTime;
                const currentTime = selectionStart + elapsed;

                if (currentTime >= selectionEnd) {
                    stopPlayback();
                    return;
                }

                const percent = (currentTime / audioDuration) * 100;
                waveformPlayhead.style.display = 'block';
                waveformPlayhead.style.left = percent + '%';

                playbackAnimationId = requestAnimationFrame(animatePlayhead);
            }

            function updatePlayButton(playing) {
                const playIcon = document.getElementById('playIcon');
                const pauseIcon = document.getElementById('pauseIcon');

                if (playing) {
                    if (playIcon) playIcon.style.display = 'none';
                    if (pauseIcon) pauseIcon.style.display = 'block';
                } else {
                    if (playIcon) playIcon.style.display = 'block';
                    if (pauseIcon) pauseIcon.style.display = 'none';
                }
            }

            // Control de volumen
            if (cutterVolumeSlider) {
                cutterVolumeSlider.addEventListener('input', function() {
                    const value = parseInt(this.value);
                    if (cutterVolumeValue) {
                        cutterVolumeValue.textContent = value + '%';
                    }
                    musicaVolumenInput.value = (value / 100).toFixed(2);
                });
            }

            // Actualizar cuando se selecciona nueva música
            if (selectMusicBtn) {
                selectMusicBtn.addEventListener('click', function() {
                    if (selectedTrack) {
                        currentMusicUrl = selectedTrack.url;
                        selectionStart = 0;
                        selectionEnd = 15;
                        audioTrimInicioInput.value = '0';
                        musicaVolumenInput.value = '0.7';
                        if (cutterVolumeSlider) cutterVolumeSlider.value = 70;
                        if (cutterVolumeValue) cutterVolumeValue.textContent = '70%';
                        if (cutterFilename) cutterFilename.textContent = selectedTrack.title;

                        // Mostrar el audio cutter y ocultar error
                        if (audioCutter) audioCutter.style.display = 'block';
                        const audioErrorMsg = document.getElementById('audioErrorMsg');
                        if (audioErrorMsg) audioErrorMsg.style.display = 'none';

                        // Reiniciar audio cutter
                        stopPlayback();
                        initAudioCutter(currentMusicUrl);
                    }
                });
            }

            // Redimensionar canvas en resize
            window.addEventListener('resize', () => {
                if (audioBuffer) {
                    drawWaveform();
                    updateSelection();
                }
            });
        });

        // Usar como foto de perfil
        async function usarComoFotoPerfil(lado) {
            if (!confirm(`¿Usar esta foto como tu foto de perfil ${lado === 'B' ? 'premium' : 'publico'}?`)) return;

            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                if (!token) {
                    alert('Error: Token de seguridad no encontrado');
                    return;
                }

                const response = await fetch('/Contenido/UsarComoFotoPerfil', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'
                    },
                    body: `id=@Model.Id&lado=${lado}&__RequestVerificationToken=${encodeURIComponent(token)}`
                });

                if (!response.ok) {
                    const text = await response.text();
                    alert(`Error HTTP ${response.status}`);
                    return;
                }

                const data = await response.json();
                if (data.success) {
                    alert(data.message);
                } else {
                    alert(data.message || 'Error al actualizar foto de perfil');
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        }
