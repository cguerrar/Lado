<div class="edit-page">
    <!-- Header -->
    <div class="page-header">
        <h1 class="page-title">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
                <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/>
            </svg>
            Editar Publicación
        </h1>
        <p class="page-subtitle">Actualiza el contenido de tu publicación</p>
    </div>

    <div class="edit-layout">
        <!-- Main Form -->
        <div class="edit-card">
            <!-- Status Badge -->
            @if (Model.EsBorrador)
            {
                <div class="status-badge draft">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>
                    </svg>
                    Borrador - No visible para suscriptores
                </div>
            }
            else
            {
                <div class="status-badge published">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                    </svg>
                    Publicado
                </div>
            }

            <form asp-action="Editar" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data" id="formContenido">
                @Html.AntiForgeryToken()

                <!-- Selección de Lado -->
                @if (usuarioVerificado)
                {
                    <div class="form-section">
                        <label class="section-label">¿Dónde publicar?</label>
                        <div class="lado-selector">
                            <div class="lado-option @(Model.TipoLado == Lado.Models.TipoLado.LadoA ? "active" : "")" data-lado="ladoa" data-esgratis="true">
                                <img src="/images/angelito.png" alt="" class="lado-mascota" />
                                <div class="lado-badge ladoa">A</div>
                                <div class="lado-info">
                                    <h4>LadoA · Público</h4>
                                    <p>Contenido gratuito</p>
                                </div>
                                <div class="lado-check">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                                    </svg>
                                </div>
                            </div>

                            <div class="lado-option @(Model.TipoLado == Lado.Models.TipoLado.LadoB ? "active" : "")" data-lado="ladob" data-esgratis="false">
                                <img src="/images/diablito.png" alt="" class="lado-mascota" />
                                <div class="lado-badge ladob">B</div>
                                <div class="lado-info">
                                    <h4>LadoB · Premium</h4>
                                    <p>Contenido monetizado</p>
                                </div>
                                <div class="lado-check">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                                    </svg>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <input type="hidden" name="EsGratis" value="true" />
                }

                <input type="hidden" name="EsGratis" id="esGratisInput" value="@(Model.TipoLado == Lado.Models.TipoLado.LadoA ? "true" : "false")" />

                <!-- Opción Feed Público (solo para LadoA) -->
                <div class="form-section" id="feedPublicoSection" style="display: @(Model.TipoLado == Lado.Models.TipoLado.LadoA && !Model.EsPrivado ? "block" : "none")">
                    <div class="publico-card">
                        <div class="publico-header">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
                            </svg>
                            <h4>Mostrar en Feed Publico</h4>
