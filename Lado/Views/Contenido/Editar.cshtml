</style>

<div class="edit-page">
    <!-- Header -->
    <div class="page-header">
        <h1 class="page-title">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
                <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/>
            </svg>
            Editar Publicación
        </h1>
        <p class="page-subtitle">Actualiza el contenido de tu publicación</p>
    </div>

    <div class="edit-layout">
        <!-- Main Form -->
        <div class="edit-card">
            <!-- Status Badge -->
            @if (Model.EsBorrador)
            {
                <div class="status-badge draft">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>
                    </svg>
                    Borrador - No visible para suscriptores
                </div>
            }
            else
            {
                <div class="status-badge published">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                    </svg>
                    Publicado
                </div>
            }

            <form asp-action="Editar" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data" id="formContenido">
                @Html.AntiForgeryToken()

                <!-- Selección de Lado -->
                @if (usuarioVerificado)
                {
                    <div class="form-section">
                        <label class="section-label">¿Dónde publicar?</label>
                        <div class="lado-selector">
                            <div class="lado-option @(Model.TipoLado == Lado.Models.TipoLado.LadoA ? "active" : "")" data-lado="ladoa" data-esgratis="true">
                                <div class="lado-badge ladoa">A</div>
                                <div class="lado-info">
                                    <h4>LadoA · Público</h4>
                                    <p>Contenido gratuito</p>
                                </div>
                                <div class="lado-check">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                                    </svg>
                                </div>
                            </div>

                            <div class="lado-option @(Model.TipoLado == Lado.Models.TipoLado.LadoB ? "active" : "")" data-lado="ladob" data-esgratis="false">
                                <div class="lado-badge ladob">B</div>
                                <div class="lado-info">
                                    <h4>LadoB · Premium</h4>
                                    <p>Contenido monetizado</p>
                                </div>
                                <div class="lado-check">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                                    </svg>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <input type="hidden" name="EsGratis" value="true" />
                }

                <input type="hidden" name="EsGratis" id="esGratisInput" value="@(Model.TipoLado == Lado.Models.TipoLado.LadoA ? "true" : "false")" />

                <!-- Opción Feed Público (solo para LadoA) -->
                <div class="form-section" id="feedPublicoSection" style="display: @(Model.TipoLado == Lado.Models.TipoLado.LadoA && !Model.EsPrivado ? "block" : "none")">
                    <div class="publico-card">
                        <div class="publico-header">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
                            </svg>
                            <h4>Mostrar en Feed Publico</h4>
                        </div>
                        <p class="publico-desc">Contenido visible para usuarios no registrados</p>
                        <div class="toggle-container">
                            <label class="publico-toggle">
                                <input type="checkbox" name="EsPublicoGeneral" id="esPublicoGeneralInput" value="true" @(Model.EsPublicoGeneral ? "checked" : "") />
                                <span class="toggle-slider"></span>
                            </label>
                            <span class="toggle-label" id="toggleLabel">@(Model.EsPublicoGeneral ? "Visible en feed publico" : "Solo para seguidores")</span>
                        </div>
                    </div>
                </div>

                <!-- Opción Solo para mí (privado) -->
                <div class="form-section" id="privadoSection">
                    <div class="privado-card">
                        <div class="privado-header">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm0 10.99h7c-.53 4.12-3.28 7.79-7 8.94V12H5V6.3l7-3.11v8.8z"/>
                            </svg>
                            <h4>Solo para mi</h4>
                        </div>
                        <p class="privado-desc">Este contenido solo sera visible para ti. Ideal para guardar borradores o contenido personal.</p>
                        <div class="toggle-container">
                            <label class="publico-toggle privado-toggle">
                                <input type="checkbox" name="EsPrivado" id="esPrivadoInput" value="true" @(Model.EsPrivado ? "checked" : "") />
                                <span class="toggle-slider"></span>
                            </label>
                            <span class="toggle-label" id="privadoToggleLabel">@(Model.EsPrivado ? "Contenido privado" : "Contenido visible")</span>
                        </div>
                    </div>
                </div>

                <!-- Tipo de Contenido -->
                <div class="form-section">
                    <label class="section-label">Tipo de contenido</label>
                    <div class="tipo-grid">
                        <div class="tipo-card @(Model.TipoContenido == Lado.Models.TipoContenido.Foto ? "active" : "")" data-tipo="0">
                            <svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z"/>
                            </svg>
                            <h4>Foto</h4>
                            <p>JPG, PNG, GIF</p>
                        </div>

                        <div class="tipo-card @(Model.TipoContenido == Lado.Models.TipoContenido.Video ? "active" : "")" data-tipo="1">
                            <svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M17 10.5V7c0-.55-.45-1-1-1H4c-.55 0-1 .45-1 1v10c0 .55.45 1 1 1h12c.55 0 1-.45 1-1v-3.5l4 4v-11l-4 4z"/>
                            </svg>
                            <h4>Video</h4>
                            <p>MP4, MOV, AVI</p>
                        </div>

                        <div class="tipo-card @(Model.TipoContenido == Lado.Models.TipoContenido.Post ? "active" : "")" data-tipo="3">
                            <svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z"/>
                            </svg>
                            <h4>Post</h4>
                            <p>Solo texto</p>
                        </div>
                    </div>
                    <input type="hidden" name="TipoContenido" id="tipoContenidoInput" value="@((int)Model.TipoContenido)" />
                </div>

                <!-- Subir Nuevo Archivo -->
                <div class="form-section" id="archivoSection" style="display: @(Model.TipoContenido == Lado.Models.TipoContenido.Post ? "none" : "block")">
                    <label class="section-label">
                        @if (!string.IsNullOrEmpty(Model.RutaArchivo))
                        {
                            <text>Cambiar archivo (opcional)</text>
                        }
                        else
                        {
                            <text>Subir archivo <span class="required">*</span></text>
                        }
                    </label>
                    <div class="upload-zone" id="uploadArea">
                        <div class="upload-content">
                            <svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M19.35 10.04C18.67 6.59 15.64 4 12 4 9.11 4 6.6 5.64 5.35 8.04 2.34 8.36 0 10.91 0 14c0 3.31 2.69 6 6 6h13c2.76 0 5-2.24 5-5 0-2.64-2.05-4.78-4.65-4.96zM14 13v4h-4v-4H7l5-5 5 5h-3z"/>
                            </svg>
                            <h4>Arrastra tu archivo aquí</h4>
                            <p>o haz clic para seleccionar</p>
                            <span class="upload-hint">Máximo 100 MB</span>
                        </div>
                        <input type="file" name="archivo" id="archivoInput" class="file-input" accept="image/*,video/*">
                    </div>

                    <!-- Preview del nuevo archivo -->
                    <div id="newPreviewArea" class="new-preview-area">
                        <div class="new-preview-container">
                            <img id="newImagePreview" class="new-preview-media" alt="Preview">
                            <video id="newVideoPreview" class="new-preview-media" controls></video>
                            <button type="button" class="preview-remove" id="removeFileBtn">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
                                </svg>
                            </button>
                        </div>
                        <div class="new-file-info" id="newFileInfo"></div>
                    </div>
                </div>

                <!-- Descripción -->
                <div class="form-section">
                    <label class="section-label">Descripción</label>
                    <textarea name="Descripcion" class="form-textarea" rows="4" placeholder="Escribe una descripción atractiva..." maxlength="500" id="descripcionTextarea">@Model.Descripcion</textarea>
                    <div class="char-counter">
                        <span id="charCount">@(Model.Descripcion?.Length ?? 0)</span>/500
                    </div>
                </div>

                <!-- Sección de Música (solo para fotos) -->
                <div class="form-section" id="musicSection" style="display: @(Model.TipoContenido == Lado.Models.TipoContenido.Foto || Model.TipoContenido == Lado.Models.TipoContenido.Imagen ? "block" : "none")">
                    <div class="music-card">
                        <div class="music-header">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12 3v10.55c-.59-.34-1.27-.55-2-.55-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4V7h4V3h-6z"/>
                            </svg>
                            <h4>Música de fondo</h4>
                        </div>
                        <p class="music-desc">Agrega música a tu foto para hacerla más atractiva</p>

                        <!-- Música actual -->
                        <div id="currentMusicContainer" style="display: @(Model.PistaMusical != null ? "block" : "none")">
                            <div class="current-music">
                                <div class="current-music-icon">
                                    <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M12 3v10.55c-.59-.34-1.27-.55-2-.55-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4V7h4V3h-6z"/>
                                    </svg>
                                </div>
                                <div class="current-music-info">
                                    <div class="current-music-title" id="currentMusicTitle">@(Model.PistaMusical?.Titulo ?? "")</div>
                                    <div class="current-music-artist" id="currentMusicArtist">@(Model.PistaMusical?.Artista ?? "")</div>
                                </div>
                                <button type="button" class="current-music-remove" id="removeMusicBtn">Quitar</button>
                            </div>
                        </div>

                        <!-- Botón para agregar música -->
                        <button type="button" class="add-music-btn" id="addMusicBtn" style="display: @(Model.PistaMusical == null ? "flex" : "none")">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
                            </svg>
                            Agregar música
                        </button>

                        <!-- Hidden inputs -->
                        <input type="hidden" name="PistaMusicalId" id="pistaMusicalIdInput" value="@(Model.PistaMusicalId?.ToString() ?? "")">
                        <input type="hidden" name="AudioTrimInicio" id="audioTrimInicioInput" value="@(Model.AudioTrimInicio?.ToString() ?? "0")">
                        <input type="hidden" name="MusicaVolumen" id="musicaVolumenInput" value="@(Model.MusicaVolumen?.ToString(System.Globalization.CultureInfo.InvariantCulture) ?? "0.7")">
                    </div>
                </div>

                <!-- Configuración Premium -->
                @if (usuarioVerificado)
                {
                    <div class="form-section" id="precioSectionWrapper" style="display: @(Model.TipoLado == Lado.Models.TipoLado.LadoB ? "block" : "none")">
                        <div class="premium-card">
                            <div class="premium-header">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z"/>
                                </svg>
                                <h4>Precio Premium</h4>
                            </div>
                            <p class="premium-desc">Este contenido se publicará en tu LadoB</p>
                            <div class="precio-input-group">
                                <span class="precio-currency">$</span>
                                <select name="PrecioDesbloqueo" class="precio-select" id="precioSelect">
                                    @{
                                        var precioActual = Model.PrecioDesbloqueo ?? 10m;
                                        for (int i = 5; i <= 100; i += 5)
                                        {
                                            if (precioActual == i)
                                            {
                                                <option value="@i" selected>@i</option>
                                            }
                                            else
                                            {
                                                <option value="@i">@i</option>
                                            }
                                        }
                                    }
                                </select>
                            </div>
                            <small class="precio-hint">Los usuarios pagarán este monto para desbloquear</small>
                        </div>
                    </div>
                }

                <!-- Botones -->
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M17 3H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V7l-4-4zm-5 16c-1.66 0-3-1.34-3-3s1.34-3 3-3 3 1.34 3 3-1.34 3-3 3zm3-10H5V5h10v4z"/>
                        </svg>
                        Guardar Cambios
                    </button>
                    <a href="/Contenido" class="btn btn-outline">Cancelar</a>
                </div>
            </form>
        </div>

        <!-- Preview Sidebar -->
        <div class="preview-sidebar">
            <div class="preview-card">
                <div class="preview-header">
                    <h3>
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>
                        </svg>
                        Vista previa actual
                    </h3>
                </div>
                <div class="preview-content">
                    @{
                        var rutaArchivo = Model.RutaArchivo;
                        var thumbnail = Model.Thumbnail;
                        var tieneArchivo = !string.IsNullOrEmpty(rutaArchivo);
                        var tieneThumbnail = !string.IsNullOrEmpty(thumbnail);
                        var tipoContenido = Model.TipoContenido;

                        // Usar el tipo de contenido de la base de datos
                        var esFoto = tipoContenido == Lado.Models.TipoContenido.Foto || tipoContenido == Lado.Models.TipoContenido.Imagen;
                        var esVideo = tipoContenido == Lado.Models.TipoContenido.Video;
                        var esAudio = tipoContenido == Lado.Models.TipoContenido.Audio;
                        var esPost = tipoContenido == Lado.Models.TipoContenido.Post;
                    }

                    @if (esFoto && tieneArchivo)
                    {
                        <!-- Contenido tipo Foto/Imagen -->
                        <img src="@rutaArchivo" class="current-media" alt="Contenido actual" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                        <div class="no-media" style="display: none;">
                            <svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z"/>
                            </svg>
                            <p>Error al cargar imagen</p>
                        </div>
                    }
                    else if (esVideo && tieneArchivo)
                    {
                        <!-- Contenido tipo Video -->
                        <video src="@rutaArchivo" class="current-video" controls preload="metadata">
                            Tu navegador no soporta video HTML5.
                        </video>
                    }
                    else if (esAudio && tieneArchivo)
                    {
                        <!-- Contenido tipo Audio -->
                        <div class="audio-preview">
                            <svg width="64" height="64" viewBox="0 0 24 24" fill="var(--primary)">
                                <path d="M12 3v10.55c-.59-.34-1.27-.55-2-.55-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4V7h4V3h-6z"/>
                            </svg>
                            <audio src="@rutaArchivo" class="current-audio" controls preload="metadata">
                                Tu navegador no soporta audio HTML5.
                            </audio>
                        </div>
                    }
                    else if (esPost)
                    {
                        <!-- Contenido tipo Post (texto) -->
                        @if (tieneThumbnail)
                        {
                            <img src="@thumbnail" class="current-media" alt="Miniatura del post" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                            <div class="no-media" style="display: none;">
                                <svg width="48" height="48" viewBox="0 0 24 24" fill="var(--primary)">
                                    <path d="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z"/>
                                </svg>
                                <p>Post de texto</p>
                            </div>
                        }
                        else
                        {
                            <div class="no-media post-preview">
                                <svg width="48" height="48" viewBox="0 0 24 24" fill="var(--primary)">
                                    <path d="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z"/>
                                </svg>
                                <p>Post de texto</p>
                                @if (!string.IsNullOrEmpty(Model.Descripcion))
                                {
                                    <span class="post-excerpt">@(Model.Descripcion.Length > 50 ? Model.Descripcion.Substring(0, 50) + "..." : Model.Descripcion)</span>
                                }
                            </div>
                        }
                    }
                    else if (tieneArchivo)
                    {
                        <!-- Archivo existe pero tipo no reconocido - intentar mostrar como imagen -->
                        <img src="@rutaArchivo" class="current-media" alt="Contenido actual" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                        <div class="no-media" style="display: none;">
                            <svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm4 18H6V4h7v5h5v11z"/>
                            </svg>
                            <p>Archivo: @System.IO.Path.GetFileName(rutaArchivo)</p>
                        </div>
                    }
                    else
                    {
                        <div class="no-media">
                            <svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z"/>
                            </svg>
                            <p>Sin contenido multimedia</p>
                        </div>
                    }
                </div>
                <div class="preview-info">
                    <div class="preview-meta">
                        <div class="preview-meta-item">
                            <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
                            </svg>
                            <span>Creado: <strong>@Model.FechaPublicacion.ToString("dd/MM/yyyy")</strong></span>
                        </div>
                        <div class="preview-meta-item">
                            <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>
                            </svg>
                            <span>Vistas: <strong>@Model.NumeroVistas</strong></span>
                        </div>
                        <div class="preview-meta-item">
                            <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                            </svg>
                            <span>Likes: <strong>@Model.NumeroLikes</strong></span>
                        </div>
                        @if (Model.TipoLado == Lado.Models.TipoLado.LadoB && Model.PrecioDesbloqueo.HasValue)
                        {
                            <div class="preview-meta-item">
                                <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M11.8 10.9c-2.27-.59-3-1.2-3-2.15 0-1.09 1.01-1.85 2.7-1.85 1.78 0 2.44.85 2.5 2.1h2.21c-.07-1.72-1.12-3.3-3.21-3.81V3h-3v2.16c-1.94.42-3.5 1.68-3.5 3.61 0 2.31 1.91 3.46 4.7 4.13 2.5.6 3 1.48 3 2.41 0 .69-.49 1.79-2.7 1.79-2.06 0-2.87-.92-2.98-2.1h-2.2c.12 2.19 1.76 3.42 3.68 3.83V21h3v-2.15c1.95-.37 3.5-1.5 3.5-3.55 0-2.84-2.43-3.81-4.7-4.4z"/>
                                </svg>
                                <span>Precio: <strong>$@Model.PrecioDesbloqueo</strong></span>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Tips -->
            <div class="tips-card">
                <h4>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M9 21c0 .55.45 1 1 1h4c.55 0 1-.45 1-1v-1H9v1zm3-19C8.14 2 5 5.14 5 9c0 2.38 1.19 4.47 3 5.74V17c0 .55.45 1 1 1h6c.55 0 1-.45 1-1v-2.26c1.81-1.27 3-3.36 3-5.74 0-3.86-3.14-7-7-7z"/>
                    </svg>
                    Tips
                </h4>
                <ul>
                    <li>Si subes un nuevo archivo, reemplazará el anterior</li>
                    <li>Los cambios se aplican inmediatamente</li>
                    <li>Las estadísticas se mantienen</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Música -->
<div class="music-modal" id="musicModal">
    <div class="music-modal-content">
        <div class="music-modal-header">
            <h3>Seleccionar música</h3>
            <button type="button" class="music-modal-close" id="closeMusicModal">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
                </svg>
            </button>
        </div>
        <div class="music-search">
            <input type="text" id="musicSearchInput" placeholder="Buscar música...">
        </div>
        <div class="music-list" id="musicList">
            <p style="text-align: center; color: var(--muted); padding: 20px;">Cargando música...</p>
        </div>
        <div class="music-modal-footer">
            <button type="button" class="btn btn-outline" id="cancelMusicBtn">Cancelar</button>
            <button type="button" class="btn btn-primary" id="selectMusicBtn" disabled>Seleccionar</button>
        </div>
    </div>
</div>

<!-- Audio para previsualización -->
<audio id="previewAudio" style="display: none;"></audio>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const ladoOptions = document.querySelectorAll('.lado-option');
            const esGratisInput = document.getElementById('esGratisInput');
            const precioSectionWrapper = document.getElementById('precioSectionWrapper');
            const tipoCards = document.querySelectorAll('.tipo-card');
            const tipoInput = document.getElementById('tipoContenidoInput');
            const archivoSection = document.getElementById('archivoSection');
            const uploadArea = document.getElementById('uploadArea');
            const archivoInput = document.getElementById('archivoInput');
            const newPreviewArea = document.getElementById('newPreviewArea');
            const newImagePreview = document.getElementById('newImagePreview');
            const newVideoPreview = document.getElementById('newVideoPreview');
            const newFileInfo = document.getElementById('newFileInfo');
            const removeFileBtn = document.getElementById('removeFileBtn');
            const precioSelect = document.getElementById('precioSelect');
            const descripcionTextarea = document.getElementById('descripcionTextarea');
            const charCount = document.getElementById('charCount');
            const feedPublicoSection = document.getElementById('feedPublicoSection');
            const esPublicoGeneralInput = document.getElementById('esPublicoGeneralInput');
            const toggleLabel = document.getElementById('toggleLabel');

            // Toggle de feed publico
            if (esPublicoGeneralInput && toggleLabel) {
                esPublicoGeneralInput.addEventListener('change', function() {
                    toggleLabel.textContent = this.checked ? 'Visible en feed publico' : 'Solo para seguidores';
                });
            }

            // Toggle de privado
            const esPrivadoInput = document.getElementById('esPrivadoInput');
            const privadoToggleLabel = document.getElementById('privadoToggleLabel');
            const privadoSection = document.getElementById('privadoSection');

            if (esPrivadoInput && privadoToggleLabel) {
                esPrivadoInput.addEventListener('change', function() {
                    privadoToggleLabel.textContent = this.checked ? 'Contenido privado' : 'Contenido visible';

                    // Si es privado, ocultar opciones de feed publico y desmarcar
                    if (feedPublicoSection) {
                        if (this.checked) {
                            feedPublicoSection.style.display = 'none';
                            if (esPublicoGeneralInput) {
                                esPublicoGeneralInput.checked = false;
                                if (toggleLabel) {
                                    toggleLabel.textContent = 'Solo para seguidores';
                                }
                            }
                        } else {
                            // Mostrar solo si es LadoA
                            const activeLado = document.querySelector('.lado-option.active');
                            const esLadoA = !activeLado || activeLado.dataset.esgratis === 'true';
                            feedPublicoSection.style.display = esLadoA ? 'block' : 'none';
                        }
                    }
                });
            }

            // Lado selector
            if (ladoOptions.length > 0) {
                ladoOptions.forEach(option => {
                    option.addEventListener('click', function() {
                        ladoOptions.forEach(opt => opt.classList.remove('active'));
                        this.classList.add('active');

                        const esGratis = this.dataset.esgratis === 'true';
                        if (esGratisInput) {
                            esGratisInput.value = esGratis ? 'true' : 'false';
                        }

                        if (precioSectionWrapper) {
                            precioSectionWrapper.style.display = esGratis ? 'none' : 'block';
                        }

                        if (precioSelect) {
                            if (esGratis) {
                                precioSelect.removeAttribute('required');
                            } else {
                                precioSelect.setAttribute('required', 'required');
                            }
                        }

                        // Mostrar/ocultar sección de feed público (solo si no es privado)
                        const esPrivado = esPrivadoInput && esPrivadoInput.checked;
                        if (feedPublicoSection) {
                            feedPublicoSection.style.display = (esGratis && !esPrivado) ? 'block' : 'none';
                            // Si es LadoB, desmarcar el checkbox
                            if (!esGratis && esPublicoGeneralInput) {
                                esPublicoGeneralInput.checked = false;
                                if (toggleLabel) {
                                    toggleLabel.textContent = 'Solo para seguidores';
                                }
                            }
                        }
                    });
                });
            }

            // Tipo de contenido
            tipoCards.forEach(card => {
                card.addEventListener('click', function() {
                    tipoCards.forEach(c => c.classList.remove('active'));
                    this.classList.add('active');
                    tipoInput.value = this.dataset.tipo;
                    archivoSection.style.display = this.dataset.tipo === '3' ? 'none' : 'block';
                });
            });

            // Upload area
            if (uploadArea) {
                uploadArea.addEventListener('click', () => archivoInput.click());

                uploadArea.addEventListener('dragover', (e) => {
                    e.preventDefault();
                    uploadArea.classList.add('dragover');
                });

                uploadArea.addEventListener('dragleave', () => {
                    uploadArea.classList.remove('dragover');
                });

                uploadArea.addEventListener('drop', (e) => {
                    e.preventDefault();
                    uploadArea.classList.remove('dragover');
                    const files = e.dataTransfer.files;
                    if (files.length > 0) {
                        const dt = new DataTransfer();
                        dt.items.add(files[0]);
                        archivoInput.files = dt.files;
                        handleFileSelect(files[0]);
                    }
                });
            }

            if (archivoInput) {
                archivoInput.addEventListener('change', (e) => {
                    if (e.target.files.length > 0) {
                        handleFileSelect(e.target.files[0]);
                    }
                });
            }

            if (removeFileBtn) {
                removeFileBtn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    archivoInput.value = '';
                    newPreviewArea.classList.remove('show');
                    newImagePreview.classList.remove('show');
                    newVideoPreview.classList.remove('show');
                });
            }

            function handleFileSelect(file) {
                const reader = new FileReader();
                newPreviewArea.classList.add('show');

                const sizeMB = (file.size / (1024 * 1024)).toFixed(2);
                newFileInfo.textContent = `Nuevo archivo: ${file.name} (${sizeMB} MB)`;

                if (file.type.startsWith('image/')) {
                    newVideoPreview.classList.remove('show');
                    newImagePreview.classList.add('show');
                    reader.onload = (e) => {
                        newImagePreview.src = e.target.result;
                    };
                    reader.readAsDataURL(file);
                } else if (file.type.startsWith('video/')) {
                    newImagePreview.classList.remove('show');
                    newVideoPreview.classList.add('show');
                    reader.onload = (e) => {
                        newVideoPreview.src = e.target.result;
                    };
                    reader.readAsDataURL(file);
                }
            }

            // Character counter
            if (descripcionTextarea && charCount) {
                descripcionTextarea.addEventListener('input', function() {
                    charCount.textContent = this.value.length;
                });
            }

            // Form validation
            document.getElementById('formContenido').addEventListener('submit', function(e) {
                if (esGratisInput && esGratisInput.value === 'false' && precioSelect) {
                    const precio = parseInt(precioSelect.value);
                    if (!precio || precio <= 0 || precio % 5 !== 0) {
                        e.preventDefault();
                        alert('El precio debe ser un múltiplo de 5 (5, 10, 15, 20...)');
                        return false;
                    }
                }
            });

            // === MÚSICA FUNCTIONALITY ===
            const musicSection = document.getElementById('musicSection');
            const addMusicBtn = document.getElementById('addMusicBtn');
            const removeMusicBtn = document.getElementById('removeMusicBtn');
            const musicModal = document.getElementById('musicModal');
            const closeMusicModal = document.getElementById('closeMusicModal');
            const cancelMusicBtn = document.getElementById('cancelMusicBtn');
            const selectMusicBtn = document.getElementById('selectMusicBtn');
            const musicSearchInput = document.getElementById('musicSearchInput');
            const musicList = document.getElementById('musicList');
            const previewAudio = document.getElementById('previewAudio');
            const currentMusicContainer = document.getElementById('currentMusicContainer');
            const currentMusicTitle = document.getElementById('currentMusicTitle');
            const currentMusicArtist = document.getElementById('currentMusicArtist');
            const pistaMusicalIdInput = document.getElementById('pistaMusicalIdInput');
            const audioTrimInicioInput = document.getElementById('audioTrimInicioInput');
            const musicaVolumenInput = document.getElementById('musicaVolumenInput');

            let allMusicTracks = [];
            let selectedTrack = null;
            let currentlyPlayingItem = null;

            // Mostrar/ocultar sección de música según tipo de contenido
            tipoCards.forEach(card => {
                card.addEventListener('click', function() {
                    const tipo = this.dataset.tipo;
                    // Mostrar música solo para fotos (tipo 0)
                    if (musicSection) {
                        musicSection.style.display = (tipo === '0') ? 'block' : 'none';
                    }
                });
            });

            // Abrir modal de música
            if (addMusicBtn) {
                addMusicBtn.addEventListener('click', function() {
                    musicModal.classList.add('active');
                    loadMusicTracks();
                });
            }

            // Cerrar modal
            function closeMusicModalFn() {
                musicModal.classList.remove('active');
                stopPreview();
                selectedTrack = null;
                selectMusicBtn.disabled = true;
                // Quitar selección visual
                document.querySelectorAll('.music-item.selected').forEach(item => {
                    item.classList.remove('selected');
                });
            }

            if (closeMusicModal) {
                closeMusicModal.addEventListener('click', closeMusicModalFn);
            }
            if (cancelMusicBtn) {
                cancelMusicBtn.addEventListener('click', closeMusicModalFn);
            }

            // Cerrar modal al hacer click fuera
            if (musicModal) {
                musicModal.addEventListener('click', function(e) {
                    if (e.target === musicModal) {
                        closeMusicModalFn();
                    }
                });
            }

            // Cargar lista de música
            async function loadMusicTracks() {
                musicList.innerHTML = '<p style="text-align: center; color: var(--muted); padding: 20px;">Cargando música...</p>';

                try {
                    const response = await fetch('/api/Musica/biblioteca');
                    if (!response.ok) throw new Error('Error al cargar música');

                    allMusicTracks = await response.json();
                    renderMusicList(allMusicTracks);
                } catch (error) {
                    console.error('Error loading music:', error);
                    musicList.innerHTML = '<p style="text-align: center; color: var(--muted); padding: 20px;">Error al cargar la música. Intenta de nuevo.</p>';
                }
            }

            // Renderizar lista de música
            function renderMusicList(tracks) {
                if (tracks.length === 0) {
                    musicList.innerHTML = '<p style="text-align: center; color: var(--muted); padding: 20px;">No se encontró música</p>';
                    return;
                }

                musicList.innerHTML = tracks.map(track => `
                    <div class="music-item" data-id="${track.id}" data-url="${track.rutaArchivo}" data-title="${track.titulo}" data-artist="${track.artista || 'Desconocido'}">
                        <div class="music-item-cover">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12 3v10.55c-.59-.34-1.27-.55-2-.55-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4V7h4V3h-6z"/>
                            </svg>
                        </div>
                        <div class="music-item-info">
                            <div class="music-item-title">${track.titulo}</div>
                            <div class="music-item-artist">${track.artista || 'Desconocido'}</div>
                        </div>
                        <button type="button" class="music-item-play" data-url="${track.rutaArchivo}">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M8 5v14l11-7z"/>
                            </svg>
                        </button>
                    </div>
                `).join('');

                // Event listeners para selección
                document.querySelectorAll('.music-item').forEach(item => {
                    item.addEventListener('click', function(e) {
                        // Si se hizo click en el botón de play, no seleccionar
                        if (e.target.closest('.music-item-play')) return;

                        // Quitar selección anterior
                        document.querySelectorAll('.music-item.selected').forEach(i => {
                            i.classList.remove('selected');
                        });

                        // Seleccionar este
                        this.classList.add('selected');
                        selectedTrack = {
                            id: this.dataset.id,
                            url: this.dataset.url,
                            title: this.dataset.title,
                            artist: this.dataset.artist
                        };
                        selectMusicBtn.disabled = false;
                    });
                });

                // Event listeners para preview
                document.querySelectorAll('.music-item-play').forEach(btn => {
                    btn.addEventListener('click', function(e) {
                        e.stopPropagation();
                        const url = this.dataset.url;

                        // Si ya está sonando este, pausar
                        if (currentlyPlayingItem === this && !previewAudio.paused) {
                            stopPreview();
                            return;
                        }

                        // Cambiar icono del anterior
                        if (currentlyPlayingItem) {
                            currentlyPlayingItem.innerHTML = `
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M8 5v14l11-7z"/>
                                </svg>
                            `;
                        }

                        // Reproducir
                        previewAudio.src = url;
                        previewAudio.play();
                        currentlyPlayingItem = this;

                        // Cambiar icono a pausa
                        this.innerHTML = `
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/>
                            </svg>
                        `;
                    });
                });
            }

            // Parar preview
            function stopPreview() {
                previewAudio.pause();
                previewAudio.src = '';
                if (currentlyPlayingItem) {
                    currentlyPlayingItem.innerHTML = `
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M8 5v14l11-7z"/>
                        </svg>
                    `;
                    currentlyPlayingItem = null;
                }
            }

            // Cuando el audio termina
            previewAudio.addEventListener('ended', function() {
                if (currentlyPlayingItem) {
                    currentlyPlayingItem.innerHTML = `
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M8 5v14l11-7z"/>
                        </svg>
                    `;
                    currentlyPlayingItem = null;
                }
            });

            // Buscar música
            if (musicSearchInput) {
                let searchTimeout;
                musicSearchInput.addEventListener('input', function() {
                    clearTimeout(searchTimeout);
                    const query = this.value.toLowerCase();

                    searchTimeout = setTimeout(() => {
                        if (query.trim() === '') {
                            renderMusicList(allMusicTracks);
                        } else {
                            const filtered = allMusicTracks.filter(track =>
                                track.titulo.toLowerCase().includes(query) ||
                                (track.artista && track.artista.toLowerCase().includes(query))
                            );
                            renderMusicList(filtered);
                        }
                    }, 300);
                });
            }

            // Seleccionar música
            if (selectMusicBtn) {
                selectMusicBtn.addEventListener('click', function() {
                    if (!selectedTrack) return;

                    // Actualizar hidden inputs
                    pistaMusicalIdInput.value = selectedTrack.id;
                    audioTrimInicioInput.value = '0';
                    musicaVolumenInput.value = '0.7';

                    // Actualizar UI
                    currentMusicTitle.textContent = selectedTrack.title;
                    currentMusicArtist.textContent = selectedTrack.artist;
                    currentMusicContainer.style.display = 'block';
                    addMusicBtn.style.display = 'none';

                    closeMusicModalFn();
                });
            }

            // Quitar música
            if (removeMusicBtn) {
                removeMusicBtn.addEventListener('click', function() {
                    // Limpiar hidden inputs (usar 0 para indicar "quitar")
                    pistaMusicalIdInput.value = '0';
                    audioTrimInicioInput.value = '';
                    musicaVolumenInput.value = '';

                    // Actualizar UI
                    currentMusicContainer.style.display = 'none';
                    addMusicBtn.style.display = 'flex';
                });
            }
        });
    </script>
}
