                                        <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
                                    </svg>
                                </button>
                            </div>
                            <div class="new-file-info" id="newFileInfo"></div>
                        </div>
                    </div>
                }

                <!-- Descripción -->
                <div class="form-section">
                    <label class="section-label">Descripción</label>
                    <textarea name="Descripcion" class="form-textarea" rows="4" placeholder="Escribe una descripción atractiva..." maxlength="500" id="descripcionTextarea">@Model.Descripcion</textarea>
                    <div class="char-counter">
