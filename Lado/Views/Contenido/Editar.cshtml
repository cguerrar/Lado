@model Lado.Models.Contenido
@{
    ViewData["Title"] = "Editar Publicación";
    var usuarioVerificado = ViewBag.UsuarioVerificado ?? false;
}

<div class="crear-container">
    <div class="crear-card">
        <!-- Header -->
        <div class="crear-header">
            <h1>
                <svg width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z" />
                </svg>
                Editar Publicación
            </h1>
            <p>Actualiza tu contenido</p>
        </div>

        <form asp-action="Editar" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data" id="formContenido">
            @Html.AntiForgeryToken()

            <!-- Estado del contenido -->
            @if (Model.EsBorrador)
            {
                <div class="alert alert-warning">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" style="vertical-align: middle; margin-right: 8px;">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z" />
                    </svg>
                    Este contenido es un <strong>borrador</strong> y no está visible para tus suscriptores.
                </div>
            }

            <!-- Selección de Lado (Solo si está verificado) -->
            @if (usuarioVerificado)
            {
                <div class="form-section">
                    <label class="section-label">¿Dónde quieres publicar?</label>
                    <div class="lado-selector">
                        <div class="lado-option @(Model.TipoLado == Lado.Models.TipoLado.LadoA ? "active" : "")" data-lado="ladoa" data-esgratis="true">
                            <div class="lado-badge ladoa">A</div>
                            <div class="lado-info">
                                <h3>LadoA · Público</h3>
                                <p>Contenido gratuito visible para todos</p>
                            </div>
                            <div class="lado-check">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" />
                                </svg>
                            </div>
                        </div>

                        <div class="lado-option @(Model.TipoLado == Lado.Models.TipoLado.LadoB ? "active" : "")" data-lado="ladob" data-esgratis="false">
                            <div class="lado-badge ladob">B</div>
                            <div class="lado-info">
                                <h3>LadoB · Premium</h3>
                                <p>Contenido monetizado con tu seudónimo</p>
                            </div>
                            <div class="lado-check">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" />
                                </svg>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- Si no está verificado, solo puede publicar en LadoA -->
                <input type="hidden" name="EsGratis" value="true" />
            }
            
            <!-- Campo hidden que siempre se envía -->
            <input type="hidden" name="EsGratis" id="esGratisInput" value="@(Model.TipoLado == Lado.Models.TipoLado.LadoA ? "true" : "false")" />

            <!-- Tipo de Contenido -->
            <div class="form-section">
                <label class="section-label">Tipo de contenido</label>
                <div class="tipo-grid">
                    <div class="tipo-card @(Model.TipoContenido == Lado.Models.TipoContenido.Foto ? "active" : "")" data-tipo="0">
                        <div class="tipo-icon">
                            <svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z" />
                            </svg>
                        </div>
                        <h3>Foto</h3>
                        <p>JPG, PNG, GIF</p>
                    </div>

                    <div class="tipo-card @(Model.TipoContenido == Lado.Models.TipoContenido.Video ? "active" : "")" data-tipo="1">
                        <div class="tipo-icon">
                            <svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M17 10.5V7c0-.55-.45-1-1-1H4c-.55 0-1 .45-1 1v10c0 .55.45 1 1 1h12c.55 0 1-.45 1-1v-3.5l4 4v-11l-4 4z" />
                            </svg>
                        </div>
                        <h3>Video</h3>
                        <p>MP4, MOV, AVI</p>
                    </div>

                    <div class="tipo-card @(Model.TipoContenido == Lado.Models.TipoContenido.Post ? "active" : "")" data-tipo="3">
                        <div class="tipo-icon">
                            <svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z" />
                            </svg>
                        </div>
                        <h3>Post</h3>
                        <p>Solo texto</p>
                    </div>
                </div>
                <input type="hidden" name="TipoContenido" id="tipoContenidoInput" value="@((int)Model.TipoContenido)" />
            </div>

            <!-- Archivo Actual -->
            @if (!string.IsNullOrEmpty(Model.RutaArchivo))
            {
                <div class="form-section">
                    <label class="section-label">Archivo actual</label>
                    <div class="archivo-actual">
                        @if (Model.TipoContenido == Lado.Models.TipoContenido.Foto)
                        {
                            <img src="@Model.RutaArchivo" class="archivo-preview" alt="Vista previa">
                        }
                        else if (Model.TipoContenido == Lado.Models.TipoContenido.Video)
                        {
                            <video src="@Model.RutaArchivo" class="archivo-preview" controls></video>
                        }
                        <p class="archivo-info">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" style="vertical-align: middle;">
                                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z" />
                            </svg>
                            Puedes subir un nuevo archivo para reemplazar este
                        </p>
                    </div>
                </div>
            }

            <!-- Subir Nuevo Archivo -->
            <div class="form-section" id="archivoSection" style="display: @(Model.TipoContenido == Lado.Models.TipoContenido.Post ? "none" : "block")">
                <label class="section-label">
                    @if (!string.IsNullOrEmpty(Model.RutaArchivo))
                    {
                        <text>Cambiar archivo (opcional)</text>
                    }
                    else
                    {
                        <text>Subir archivo <span class="required">*</span></text>
                    }
                </label>
                <div class="upload-zone" id="uploadArea">
                    <div class="upload-content">
                        <svg width="64" height="64" viewBox="0 0 24 24" fill="currentColor" class="upload-icon">
                            <path d="M19.35 10.04C18.67 6.59 15.64 4 12 4 9.11 4 6.6 5.64 5.35 8.04 2.34 8.36 0 10.91 0 14c0 3.31 2.69 6 6 6h13c2.76 0 5-2.24 5-5 0-2.64-2.05-4.78-4.65-4.96zM14 13v4h-4v-4H7l5-5 5 5h-3z" />
                        </svg>
                        <h3>Arrastra tu archivo aquí</h3>
                        <p>o haz clic para seleccionar</p>
                        <span class="upload-hint">Máximo 100 MB</span>
                    </div>
                    <input type="file" name="archivo" id="archivoInput" class="file-input" accept="image/*,video/*">
                </div>

                <!-- Preview -->
                <div id="previewArea" class="preview-area">
                    <div class="preview-container">
                        <img id="imagePreview" class="preview-media" alt="Preview">
                        <video id="videoPreview" class="preview-media" controls></video>
                        <button type="button" class="preview-remove" id="removeFileBtn">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" />
                            </svg>
                        </button>
                    </div>
                    <div class="preview-info" id="fileInfo"></div>
                </div>
            </div>

            <!-- Descripción -->
            <div class="form-section">
                <label class="section-label">Descripción</label>
                <textarea name="Descripcion" class="form-textarea" rows="5" placeholder="Escribe una descripción atractiva para tu contenido..." maxlength="500" id="descripcionTextarea">@Model.Descripcion</textarea>
                <div class="char-counter">
                    <span id="charCount">@(Model.Descripcion?.Length ?? 0)</span>/500 caracteres
                </div>
            </div>

            <!-- Configuración Premium -->
            @if (usuarioVerificado)
            {
                <div class="form-section" id="precioSectionWrapper" style="display: @(Model.TipoLado == Lado.Models.TipoLado.LadoB ? "block" : "none")">
                    <div class="premium-card">
                        <!-- Header -->
                        <div class="premium-info">
                            <h3>
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z" />
                                </svg>
                                Precio del contenido premium
                            </h3>
                            <p>Este contenido se publicará en tu LadoB con tu seudónimo</p>
                        </div>

                        <!-- Selector de Precio -->
                        <div class="precio-selector">
                            <label class="precio-label">
                                Precio de desbloqueo 
                                <span class="required">*</span>
                            </label>
                            <div class="precio-input-group">
                                <span class="precio-currency">$</span>
                                <select name="PrecioDesbloqueo" class="precio-select" id="precioSelect">
                                    @{
                                        var precioActual = Model.PrecioDesbloqueo ?? 10m;
                                        for (int i = 5; i <= 100; i += 5)
                                        {
                                            <option value="@i" @@(precioActual == i ? "selected" : "")>@i</option>
                                        }
                                    }
                                </select>
                            </div>
                            <small class="precio-hint">
                                <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" style="vertical-align: middle; margin-right: 4px;">
                                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>
                                </svg>
                                Los usuarios pagarán este monto para desbloquear tu contenido
                            </small>
                        </div>
                    </div>
                </div>
            }

            <!-- Botones de Acción -->
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M17 3H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V7l-4-4zm-5 16c-1.66 0-3-1.34-3-3s1.34-3 3-3 3 1.34 3 3-1.34 3-3 3zm3-10H5V5h10v4z" />
                    </svg>
                    Guardar Cambios
                </button>
                <a href="/Contenido" class="btn btn-outline">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" />
                    </svg>
                    Cancelar
                </a>
            </div>
        </form>
    </div>

    <!-- Tips Card -->
    <div class="tips-card">
        <h3>
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M9 21c0 .55.45 1 1 1h4c.55 0 1-.45 1-1v-1H9v1zm3-19C8.14 2 5 5.14 5 9c0 2.38 1.19 4.47 3 5.74V17c0 .55.45 1 1 1h6c.55 0 1-.45 1-1v-2.26c1.81-1.27 3-3.36 3-5.74 0-3.86-3.14-7-7-7zm2.85 11.1l-.85.6V16h-4v-2.3l-.85-.6C7.8 12.16 7 10.63 7 9c0-2.76 2.24-5 5-5s5 2.24 5 5c0 1.63-.8 3.16-2.15 4.1z" />
            </svg>
            Tips para editar
        </h3>
        <ul>
            <li>Si subes un nuevo archivo, reemplazará el anterior</li>
            <li>Los cambios se aplicarán inmediatamente</li>
            <li>Puedes cambiar entre contenido gratuito y premium</li>
            <li>Las estadísticas (likes, vistas) se mantienen</li>
        </ul>
    </div>
</div>

<style>
    * {
        box-sizing: border-box;
    }

    .crear-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 32px 24px;
    }

    /* Card Principal */
    .crear-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        padding: 40px;
        margin-bottom: 24px;
    }

    /* Header */
    .crear-header {
        margin-bottom: 40px;
        text-align: center;
    }

    .crear-header h1 {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
        font-size: 32px;
        font-weight: 700;
        color: #111827;
        margin: 0 0 12px 0;
    }

    .crear-header h1 svg {
        color: #32d67b;
    }

    .crear-header p {
        color: #6B7280;
        font-size: 16px;
        margin: 0;
    }

    /* Alert */
    .alert {
        padding: 16px;
        border-radius: 12px;
        margin-bottom: 32px;
        display: flex;
        align-items: center;
    }

    .alert-warning {
        background: #FFF3CD;
        border: 1px solid #FFE69C;
        color: #664D03;
    }

    /* Form Sections */
    .form-section {
        margin-bottom: 32px;
    }

    .section-label {
        display: block;
        font-size: 16px;
        font-weight: 600;
        color: #111827;
        margin-bottom: 16px;
    }

    .required {
        color: #EF4444;
        margin-left: 4px;
    }

    /* Lado Selector */
    .lado-selector {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 16px;
    }

    .lado-option {
        display: flex;
        align-items: center;
        gap: 16px;
        padding: 20px;
        background: white;
        border: 2px solid #E5E7EB;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
    }

    .lado-option:hover {
        border-color: #32d67b;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(50, 214, 123, 0.15);
    }

    .lado-option.active {
        border-color: #32d67b;
        background: rgba(50, 214, 123, 0.05);
    }

    .lado-badge {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        font-weight: 700;
        color: white;
        flex-shrink: 0;
    }

    .lado-badge.ladoa {
        background: #32d67b;
    }

    .lado-badge.ladob {
        background: #F59E0B;
    }

    .lado-info {
        flex: 1;
    }

    .lado-info h3 {
        font-size: 16px;
        font-weight: 600;
        color: #111827;
        margin: 0 0 4px 0;
    }

    .lado-info p {
        font-size: 13px;
        color: #6B7280;
        margin: 0;
    }

    .lado-check {
        width: 24px;
        height: 24px;
        border-radius: 50%;
        border: 2px solid #E5E7EB;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        transition: all 0.3s ease;
    }

    .lado-check svg {
        opacity: 0;
        transform: scale(0);
        transition: all 0.3s ease;
    }

    .lado-option.active .lado-check {
        background: #32d67b;
        border-color: #32d67b;
    }

    .lado-option.active .lado-check svg {
        opacity: 1;
        transform: scale(1);
        fill: white;
    }

    /* Tipo de Contenido */
    .tipo-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 16px;
    }

    .tipo-card {
        background: white;
        border: 2px solid #E5E7EB;
        border-radius: 12px;
        padding: 24px 16px;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .tipo-card:hover {
        border-color: #32d67b;
        transform: translateY(-4px);
        box-shadow: 0 8px 16px rgba(50, 214, 123, 0.15);
    }

    .tipo-card.active {
        border-color: #32d67b;
        background: rgba(50, 214, 123, 0.05);
    }

    .tipo-icon {
        margin-bottom: 12px;
    }

    .tipo-icon svg {
        color: #32d67b;
    }

    .tipo-card h3 {
        font-size: 18px;
        font-weight: 600;
        color: #111827;
        margin: 0 0 4px 0;
    }

    .tipo-card p {
        font-size: 13px;
        color: #6B7280;
        margin: 0;
    }

    /* Archivo Actual */
    .archivo-actual {
        background: #F9FAFB;
        border: 2px solid #E5E7EB;
        border-radius: 12px;
        padding: 20px;
        text-align: center;
    }

    .archivo-preview {
        max-width: 100%;
        max-height: 300px;
        border-radius: 8px;
        margin-bottom: 12px;
    }

    .archivo-info {
        font-size: 14px;
        color: #6B7280;
        margin: 0;
    }

    /* Upload Zone */
    .upload-zone {
        position: relative;
        border: 3px dashed #32d67b;
        border-radius: 16px;
        padding: 48px 24px;
        background: rgba(50, 214, 123, 0.05);
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .upload-zone:hover {
        border-color: #16a34a;
        background: rgba(50, 214, 123, 0.1);
        transform: scale(1.01);
    }

    .upload-zone.dragover {
        border-color: #16a34a;
        background: rgba(50, 214, 123, 0.15);
        transform: scale(1.02);
    }

    .upload-content {
        text-align: center;
        pointer-events: none;
    }

    .upload-icon {
        color: #32d67b;
        margin-bottom: 16px;
    }

    .upload-content h3 {
        font-size: 18px;
        font-weight: 600;
        color: #111827;
        margin: 0 0 8px 0;
    }

    .upload-content p {
        font-size: 15px;
        color: #6B7280;
        margin: 0 0 12px 0;
    }

    .upload-hint {
        display: inline-block;
        font-size: 13px;
        color: #9CA3AF;
        background: white;
        padding: 4px 12px;
        border-radius: 12px;
    }

    .file-input {
        display: none;
    }

    /* Preview */
    .preview-area {
        display: none;
        margin-top: 20px;
    }

    .preview-area.show {
        display: block;
    }

    .preview-container {
        position: relative;
        border-radius: 12px;
        overflow: hidden;
        background: #F9FAFB;
    }

    .preview-media {
        display: none;
        width: 100%;
        max-height: 400px;
        object-fit: contain;
    }

    .preview-media.show {
        display: block;
    }

    .preview-remove {
        position: absolute;
        top: 12px;
        right: 12px;
        width: 36px;
        height: 36px;
        background: rgba(239, 68, 68, 0.95);
        border: none;
        border-radius: 50%;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s ease;
    }

    .preview-remove:hover {
        background: #DC2626;
        transform: scale(1.1);
    }

    .preview-remove svg {
        fill: white;
    }

    .preview-info {
        margin-top: 12px;
        font-size: 14px;
        color: #6B7280;
        text-align: center;
    }

    /* Textarea */
    .form-textarea {
        width: 100%;
        padding: 16px;
        border: 2px solid #E5E7EB;
        border-radius: 12px;
        font-size: 15px;
        font-family: inherit;
        resize: vertical;
        transition: all 0.2s ease;
    }

    .form-textarea:focus {
        outline: none;
        border-color: #32d67b;
        box-shadow: 0 0 0 4px rgba(50, 214, 123, 0.1);
    }

    .char-counter {
        margin-top: 8px;
        font-size: 13px;
        color: #9CA3AF;
        text-align: right;
    }

    .char-counter span {
        color: #32d67b;
        font-weight: 600;
    }

    /* Premium Card */
    .premium-card {
        background: rgba(50, 214, 123, 0.05);
        border: 2px solid rgba(50, 214, 123, 0.2);
        border-radius: 12px;
        padding: 24px;
    }

    .premium-info h3 {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 18px;
        font-weight: 600;
        color: #111827;
        margin: 0 0 4px 0;
    }

    .premium-info h3 svg {
        color: #F59E0B;
    }

    .premium-info p {
        font-size: 14px;
        color: #6B7280;
        margin: 0;
    }

    /* Precio Selector */
    .precio-selector {
        margin-top: 20px;
        padding-top: 20px;
        border-top: 1px solid rgba(50, 214, 123, 0.2);
    }

    .precio-label {
        display: block;
        font-size: 15px;
        font-weight: 600;
        color: #111827;
        margin-bottom: 12px;
    }

    .precio-input-group {
        display: flex;
        align-items: center;
        gap: 0;
        background: white;
