                                <input type="checkbox" name="EsPublicoGeneral" id="esPublicoGeneralInput" value="true" @(Model.EsPublicoGeneral ? "checked" : "") />
                                <span class="toggle-slider"></span>
                            </label>
                            <span class="toggle-label" id="toggleLabel">@(Model.EsPublicoGeneral ? "Visible en feed publico" : "Solo para seguidores")</span>
                        </div>
                    </div>
                </div>

                <!-- Opción Solo para mí (privado) -->
                <div class="form-section" id="privadoSection">
                    <div class="privado-card">
                        <div class="privado-header">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
