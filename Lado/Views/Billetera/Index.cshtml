<script>
document.addEventListener('DOMContentLoaded', function() {
    var esCreador = @(esCreador.ToString().ToLower());
    var comisionRetiro = @Model.ComisionRetiro;
    var retencionImpuestos = @(ViewBag.RetencionImpuestos != null ? (decimal)ViewBag.RetencionImpuestos : 0);

    // Funcin para calcular el desglose del retiro
    function calcularDesgloseRetiro(monto) {
        var comision = monto * (comisionRetiro / 100);
        var impuestos = monto * (retencionImpuestos / 100);
        var neto = monto - comision - impuestos;

        var montoBruto = document.getElementById('montoBruto');
        var montoComision = document.getElementById('montoComision');
        var montoImpuestos = document.getElementById('montoImpuestos');
        var montoNeto = document.getElementById('montoNeto');

        if (montoBruto) montoBruto.textContent = monto.toFixed(2);
        if (montoComision) montoComision.textContent = comision.toFixed(2);
        if (montoImpuestos) montoImpuestos.textContent = impuestos.toFixed(2);
        if (montoNeto) montoNeto.textContent = neto.toFixed(2);
    }

    // Event delegation para botones de montos rapidos (funciona siempre)
    document.addEventListener('click', function(e) {
        var btn = e.target.closest('.quick-amount-btn');
        if (btn) {
            e.preventDefault();
            e.stopPropagation();
            var amount = btn.getAttribute('data-amount');
            console.log('Monto rpido seleccionado:', amount);

            // Buscar el input dentro del modal que est actualmente abierto
            var modal = btn.closest('.modal');
            var inputMonto = modal ? modal.querySelector('#inputMonto') : document.getElementById('inputMonto');

            console.log('Input encontrado:', inputMonto);
            if (inputMonto) {
                inputMonto.value = amount;
                inputMonto.focus();
                // Disparar eventos para que cualquier listener reaccione
                inputMonto.dispatchEvent(new Event('input', { bubbles: true }));
                inputMonto.dispatchEvent(new Event('change', { bubbles: true }));
                console.log('Valor asignado:', inputMonto.value);
            }

            // Marcar el botn como seleccionado visualmente
            var allBtns = modal ? modal.querySelectorAll('.quick-amount-btn') : document.querySelectorAll('.quick-amount-btn');
            allBtns.forEach(function(b) { b.classList.remove('selected'); });
            btn.classList.add('selected');
        }
    });

    // Event delegation para el input de retiro (funciona siempre)
    document.addEventListener('input', function(e) {
        if (e.target && e.target.id === 'inputMontoRetiro') {
            var monto = parseFloat(e.target.value) || 0;
            calcularDesgloseRetiro(monto);
        }
    });

    // Configurar modal de retiro cuando se muestre
    function setupModalRetiro() {
        var modalRetiro = document.getElementById('modalSolicitarRetiro');
        if (modalRetiro && !modalRetiro._billeteraSetup) {
            modalRetiro._billeteraSetup = true;
            modalRetiro.addEventListener('shown.bs.modal', function() {
                var inputRetiro = document.getElementById('inputMontoRetiro');
                if (inputRetiro) {
                    inputRetiro.addEventListener('input', function() {
                        calcularDesgloseRetiro(parseFloat(this.value) || 0);
                    });
                    if (inputRetiro.value) {
                        calcularDesgloseRetiro(parseFloat(inputRetiro.value) || 0);
                    }
                }
            });
        }
    }

    // Ejecutar setup inmediatamente y tambin despus de un pequeo delay
    // para asegurar que el modal ya fue movido al body
    setupModalRetiro();
    setTimeout(setupModalRetiro, 100);
    setTimeout(setupModalRetiro, 500);

    // Animacion suave de los blobs decorativos
    var blob1 = document.querySelector('.wallet-blob-1');
    var blob2 = document.querySelector('.wallet-blob-2');

    if (blob1 && blob2) {
        var startTime = Date.now();

        function animateBlobs() {
            var elapsed = (Date.now() - startTime) / 1000;
            var cycle1 = (elapsed / 12) * Math.PI * 2;
            var cycle2 = (elapsed / 15) * Math.PI * 2;

            var x1 = Math.sin(cycle1) * 15;
            var y1 = Math.cos(cycle1) * 12;
            var x2 = Math.cos(cycle2) * 12;
            var y2 = Math.sin(cycle2) * 15;

            blob1.style.transform = 'translate(' + x1 + 'px, ' + y1 + 'px)';
            blob2.style.transform = 'translate(' + x2 + 'px, ' + y2 + 'px)';

            requestAnimationFrame(animateBlobs);
        }

        animateBlobs();
    }

    console.log('Billetera: Script cargado correctamente');
});
</script>
