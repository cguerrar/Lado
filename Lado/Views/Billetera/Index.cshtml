@model Lado.Models.ApplicationUser
@{
    ViewData["Title"] = "Mi Billetera";
    var esCreador = Model.EsCreador;
}

<style>
    .wallet-gradient-card {
        background: linear-gradient(135deg, #4682B4 0%, #36648B 100%);
        border-radius: 24px;
        padding: 32px;
        color: white;
        position: relative;
        overflow: hidden;
        box-shadow: 0 20px 60px rgba(70, 130, 180, 0.3);
    }

    .wallet-blob {
        position: absolute;
        border-radius: 50%;
        pointer-events: none;
        will-change: transform;
    }

    .wallet-blob-1 {
        width: 300px;
        height: 300px;
        background: rgba(255,255,255,0.15);
        top: -100px;
        right: -50px;
    }

    .wallet-blob-2 {
        width: 200px;
        height: 200px;
        background: rgba(255,255,255,0.12);
        bottom: -80px;
        left: -40px;
    }

    .wallet-icon-box {
        width: 80px;
        height: 80px;
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    }

    .stat-card {
        transition: all 0.3s ease;
        border-radius: 20px;
        border: 1px solid #e5e7eb;
        position: relative;
        overflow: hidden;
    }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: var(--primary);
            transform: scaleY(0);
            transition: transform 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 40px rgba(70, 130, 180, 0.15);
            border-color: var(--primary);
        }

            .stat-card:hover::before {
                transform: scaleY(1);
            }

    .stat-icon-circle {
        width: 64px;
        height: 64px;
        border-radius: 18px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }

    .stat-card:hover .stat-icon-circle {
        transform: rotate(360deg);
    }

    .transaction-card {
        border-radius: 20px;
        border: none;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    }

    .transaction-table {
        border-collapse: separate;
        border-spacing: 0 8px;
    }

        .transaction-table tbody tr {
            background: white;
            transition: all 0.2s ease;
            border-radius: 12px;
        }

            .transaction-table tbody tr:hover {
                transform: translateX(8px);
                box-shadow: 0 4px 20px rgba(70, 130, 180, 0.1);
            }

        .transaction-table tbody td {
            border: none;
            padding: 16px;
            vertical-align: middle;
        }

        .transaction-table tbody tr td:first-child {
            border-top-left-radius: 12px;
            border-bottom-left-radius: 12px;
        }

        .transaction-table tbody tr td:last-child {
            border-top-right-radius: 12px;
            border-bottom-right-radius: 12px;
        }

    .info-card {
        border-radius: 20px;
        background: linear-gradient(135deg, #f0f7fc 0%, #dbeafe 100%);
        border: 2px solid #93c5fd;
    }

    .info-list-item {
        padding: 12px 16px;
        background: white;
        border-radius: 12px;
        margin-bottom: 8px;
        transition: all 0.2s ease;
        border: 1px solid #dbeafe;
    }

        .info-list-item:hover {
            transform: translateX(8px);
            border-color: var(--primary);
            box-shadow: 0 4px 12px rgba(70, 130, 180, 0.1);
        }

    .renewal-card {
        border-radius: 20px;
        background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
        border: none;
    }

    .commission-card {
        border-radius: 20px;
        background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
        border: 2px solid #f59e0b;
    }

    .btn-action {
        border-radius: 12px;
        padding: 12px 28px;
        font-weight: 600;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .btn-action::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.3);
            transform: translate(-50%, -50%);
            transition: width 0.6s, height 0.6s;
        }

        .btn-action:hover::before {
            width: 300px;
            height: 300px;
        }

    .badge-custom {
        padding: 8px 16px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 0.8rem;
    }

    .empty-state {
        padding: 80px 20px;
        text-align: center;
    }

    .empty-state-icon {
        width: 120px;
        height: 120px;
        margin: 0 auto 24px;
        background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .modal-content {
        border-radius: 24px;
        border: none;
        position: relative;
    }

    .quick-amount-btn {
        border-radius: 12px;
        padding: 12px;
        font-weight: 600;
        transition: all 0.2s ease;
        border: 2px solid #e5e7eb;
        background: white;
        color: #6b7280;
    }

        .quick-amount-btn:hover,
        .quick-amount-btn.selected {
            border-color: var(--primary);
            background: var(--primary-light);
            color: var(--primary);
            transform: scale(1.05);
        }

        .quick-amount-btn.selected {
            background: var(--primary);
            color: white;
            border-color: var(--primary);
        }

    @@media (max-width: 768px) {
        .wallet-gradient-card {
            padding: 24px;
        }

        .wallet-icon-box {
            width: 60px;
            height: 60px;
        }

        .stat-icon-circle {
            width: 48px;
            height: 48px;
        }
    }
</style>

<div class="container-fluid">
    <!-- Banner Beta -->
    <div class="alert mb-4" style="background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%); border: 2px solid #f59e0b; border-radius: 16px; padding: 20px;">
        <div class="d-flex align-items-center gap-3">
            <div style="width: 48px; height: 48px; background: #f59e0b; border-radius: 12px; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
                    <line x1="12" y1="9" x2="12" y2="13"></line>
                    <line x1="12" y1="17" x2="12.01" y2="17"></line>
                </svg>
            </div>
            <div>
                <h6 style="font-weight: 700; color: #92400e; margin: 0 0 4px 0;">
                    LADO Beta - Dinero Ficticio
                </h6>
                <p style="color: #a16207; margin: 0; font-size: 0.9rem;">
                    Mientras LADO esta en etapa Beta, todo el dinero mostrado es <strong>ficticio y de prueba</strong>.
                    No se realizan cobros reales. Disfruta explorando la plataforma.
                </p>
            </div>
        </div>
    </div>

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <h1 class="mb-2" style="font-weight: 800; font-size: 2.5rem; color: #111827;">
                        Mi Billetera
                    </h1>
                    <p class="text-muted mb-0" style="font-size: 1.1rem;">
                        @if (esCreador)
                        {
                            <span>Gestiona tus ganancias y solicita retiros</span>
                        }
                        else
                        {
                            <span>Gestiona tu saldo y realiza pagos de forma segura</span>
                        }
                    </p>
                </div>
                <div class="d-flex gap-2 flex-wrap">
                    <button class="btn btn-primary btn-action" data-bs-toggle="modal" data-bs-target="#modalCargarSaldo">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: inline-block; vertical-align: middle; margin-right: 8px;">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="12" y1="8" x2="12" y2="16"></line>
                            <line x1="8" y1="12" x2="16" y2="12"></line>
                        </svg>
                        Cargar Saldo
                    </button>
                    @if (esCreador)
                    {
                        <button class="btn btn-success btn-action" data-bs-toggle="modal" data-bs-target="#modalSolicitarRetiro">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: inline-block; vertical-align: middle; margin-right: 8px;">
                                <line x1="12" y1="5" x2="12" y2="19"></line>
                                <polyline points="19 12 12 19 5 12"></polyline>
                            </svg>
                            Solicitar Retiro
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Card Principal de Saldo -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="wallet-gradient-card">
                <div class="wallet-blob wallet-blob-1"></div>
                <div class="wallet-blob wallet-blob-2"></div>
                <div class="row align-items-center position-relative">
                    <div class="col-md-8">
                        <p class="mb-2 opacity-75" style="font-size: 0.95rem; text-transform: uppercase; letter-spacing: 1px;">
                            @if (esCreador)
                            {
                                <span>Saldo Disponible para Retiro</span>
                            }
                            else
                            {
                                <span>Saldo Disponible</span>
                            }
                        </p>
                        <h1 class="mb-3" style="font-size: 3.5rem; font-weight: 800;">$@Model.Saldo.ToString("N2")</h1>
                        <div class="d-flex gap-3 flex-wrap">
                            @if (esCreador)
                            {
                                <div class="d-flex align-items-center gap-2">
                                    <div style="width: 8px; height: 8px; background: #10b981; border-radius: 50%; box-shadow: 0 0 8px #10b981;"></div>
                                    <small class="opacity-90">Ganancias acumuladas: $@Model.TotalGanancias.ToString("N2")</small>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex align-items-center gap-2">
                                    <div style="width: 8px; height: 8px; background: #60a5fa; border-radius: 50%; box-shadow: 0 0 8px #60a5fa;"></div>
                                    <small class="opacity-90">Listo para usar</small>
                                </div>
                            }
                            <div class="d-flex align-items-center gap-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                                    <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                                </svg>
                                <small class="opacity-90">Protegido y seguro</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 text-end d-none d-md-block">
                        <div class="wallet-icon-box ms-auto">
                            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M19 7V4a1 1 0 0 0-1-1H5a2 2 0 0 0 0 4h15a1 1 0 0 1 1 1v4h-3a2 2 0 0 0 0 4h3a1 1 0 0 0 1-1v-2a1 1 0 0 0-1-1"></path>
                                <path d="M3 5v14a2 2 0 0 0 2 2h15a1 1 0 0 0 1-1v-4"></path>
                            </svg>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (esCreador)
    {
        <!-- VISTA CREADOR -->
        <!-- Aviso de Comision -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card commission-card">
                    <div class="card-body" style="padding: 24px;">
                        <div class="d-flex align-items-start gap-3">
                            <div style="width: 56px; height: 56px; background: #f59e0b; border-radius: 16px; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <line x1="12" y1="1" x2="12" y2="23"></line>
                                    <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                                </svg>
                            </div>
                            @{
                                decimal retencionImpuestosVal = ViewBag.RetencionImpuestos != null ? (decimal)ViewBag.RetencionImpuestos : 0m;
                                string nombrePaisVal = ViewBag.NombrePais ?? "No definido";
                                decimal comisionEjemplo = 100 * Model.ComisionRetiro / 100;
                                decimal impuestoEjemplo = 100 * retencionImpuestosVal / 100;
                                decimal netoEjemplo = 100 - comisionEjemplo - impuestoEjemplo;
                            }
                            <div class="flex-grow-1">
                                <h5 style="font-weight: 700; color: #92400e; margin: 0 0 8px 0;">
                                    Informacion sobre Comisiones, Impuestos y Retiros
                                </h5>
                                <p style="color: #a16207; margin: 0 0 16px 0; font-size: 0.95rem; line-height: 1.6;">
                                    Al momento del retiro, <strong>LadoApp.com</strong> aplicara la comision acordada en tu contrato
                                    y la retencion de impuestos segun tu pais de residencia (@nombrePaisVal).
                                </p>
                                @{
                                    var comisionBilletera = ViewBag.ComisionBilleteraElectronica ?? "2.5";
                                    decimal comisionBilleteraVal;
                                    if (!decimal.TryParse(comisionBilletera.ToString(), System.Globalization.NumberStyles.Any, System.Globalization.CultureInfo.InvariantCulture, out comisionBilleteraVal))
                                    {
                                        comisionBilleteraVal = 2.5m;
                                    }
                                }
                                <div class="row g-2 mb-3">
                                    <div class="col-6 col-md-4 col-xl-2">
                                        <div class="p-3" style="background: white; border-radius: 12px; border: 2px solid rgba(245, 158, 11, 0.3);">
                                            <small class="text-muted d-block mb-1">Comision LadoApp</small>
                                            <strong style="font-size: 1.3rem; color: #dc2626;">@Model.ComisionRetiro%</strong>
                                        </div>
                                    </div>
                                    <div class="col-6 col-md-4 col-xl-2">
                                        <div class="p-3" style="background: white; border-radius: 12px; border: 2px solid rgba(139, 92, 246, 0.3);">
                                            <small class="text-muted d-block mb-1">Billetera Electronica</small>
                                            <strong style="font-size: 1.3rem; color: #8b5cf6;">@comisionBilleteraVal.ToString("N2")%</strong>
                                        </div>
                                    </div>
                                    <div class="col-6 col-md-4 col-xl-2">
                                        <div class="p-3" style="background: white; border-radius: 12px; border: 2px solid rgba(245, 158, 11, 0.3);">
                                            <small class="text-muted d-block mb-1">Retencion Impuestos</small>
                                            <strong style="font-size: 1.3rem; color: #d97706;">@retencionImpuestosVal%</strong>
                                        </div>
                                    </div>
                                    <div class="col-6 col-md-4 col-xl-2">
                                        <div class="p-3" style="background: white; border-radius: 12px; border: 2px solid rgba(245, 158, 11, 0.3);">
                                            <small class="text-muted d-block mb-1">Minimo para retirar</small>
                                            <strong style="font-size: 1.3rem; color: #92400e;">$@Model.MontoMinimoRetiro.ToString("N0")</strong>
                                        </div>
                                    </div>
                                    <div class="col-6 col-md-4 col-xl-2">
                                        <div class="p-3" style="background: white; border-radius: 12px; border: 2px solid rgba(16, 185, 129, 0.3);">
                                            <small class="text-muted d-block mb-1">Retiro de $100</small>
                                            <strong style="font-size: 1.3rem; color: #10b981;">$@netoEjemplo.ToString("N2")</strong>
                                        </div>
                                    </div>
                                    <div class="col-6 col-md-4 col-xl-2">
                                        <div class="p-3" style="background: white; border-radius: 12px; border: 2px solid rgba(6, 182, 212, 0.3);">
                                            <small class="text-muted d-block mb-1">Tiempo Proceso</small>
                                            <strong style="font-size: 1rem; color: #0891b2;">@(ViewBag.TiempoProcesoRetiro ?? "3-5 dias")</strong>
                                        </div>
                                    </div>
                                </div>
                                <div class="p-2 mb-2" style="background: rgba(255,255,255,0.7); border-radius: 8px; font-size: 0.85rem; color: #78350f;">
                                    <strong>Desglose retiro $100:</strong> $100 - $@comisionEjemplo.ToString("N2") (comision LadoApp) - $@impuestoEjemplo.ToString("N2") (impuestos) = <strong class="text-success">$@netoEjemplo.ToString("N2") neto</strong>
                                </div>
                                <div class="p-2" style="background: rgba(139, 92, 246, 0.1); border-radius: 8px; font-size: 0.8rem; color: #6d28d9;">
                                    <i class="fas fa-info-circle me-1"></i>
                                    <strong>Billetera Electronica (@comisionBilleteraVal.ToString("N2")%):</strong> Esta comision aplica cuando retiras a billeteras digitales como PayPal, Payoneer, Skrill o similares. Si retiras por transferencia bancaria directa, esta comision no aplica.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Cards de Estadisticas Creador -->
        <div class="row g-4 mb-4">
            <div class="col-md-6 col-xl-3">
                <div class="card stat-card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <p class="text-muted mb-1" style="font-size: 0.9rem; font-weight: 600;">Ingresos Este Mes</p>
                                <h2 class="mb-0" style="font-weight: 800; color: #111827;">$@((ViewBag.IngresosEsteMes ?? 0m).ToString("N2"))</h2>
                            </div>
                            <div class="stat-icon-circle" style="background: #dcfce7;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#16a34a" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <line x1="12" y1="5" x2="12" y2="19"></line>
                                    <polyline points="19 12 12 19 5 12"></polyline>
                                </svg>
                            </div>
                        </div>
                        @if ((decimal)(ViewBag.CrecimientoMes ?? 0m) != 0)
                        {
                            var crecimiento = (decimal)(ViewBag.CrecimientoMes ?? 0m);
                            var colorCrecimiento = crecimiento >= 0 ? "#16a34a" : "#dc2626";
                            var iconoCrecimiento = crecimiento >= 0 ? "M5 12l5-5 5 5" : "M19 12l-5 5-5-5";
                            <p class="mb-0" style="font-size: 0.85rem; color: @colorCrecimiento; font-weight: 600;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: middle;">
                                    <polyline points="@iconoCrecimiento"></polyline>
                                </svg>
                                @(crecimiento >= 0 ? "+" : "")@crecimiento.ToString("N1")% vs mes anterior
                            </p>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-xl-3">
                <div class="card stat-card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <p class="text-muted mb-1" style="font-size: 0.9rem; font-weight: 600;">Total Retirado</p>
                                <h2 class="mb-0" style="font-weight: 800; color: #111827;">$@((ViewBag.TotalRetirado ?? 0m).ToString("N2"))</h2>
                            </div>
                            <div class="stat-icon-circle" style="background: #dbeafe;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#2563eb" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                                    <line x1="1" y1="10" x2="23" y2="10"></line>
                                </svg>
                            </div>
                        </div>
                        <p class="text-muted mb-0" style="font-size: 0.85rem;">
                            Historico de retiros completados
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-xl-3">
                <div class="card stat-card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <p class="text-muted mb-1" style="font-size: 0.9rem; font-weight: 600;">Retiros Pendientes</p>
                                <h2 class="mb-0" style="font-weight: 800; color: #111827;">@(ViewBag.RetirosPendientes ?? 0)</h2>
                            </div>
                            <div class="stat-icon-circle" style="background: #fef3c7;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#d97706" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <circle cx="12" cy="12" r="10"></circle>
                                    <polyline points="12 6 12 12 16 14"></polyline>
                                </svg>
                            </div>
                        </div>
                        <p class="text-muted mb-0" style="font-size: 0.85rem;">
                            En proceso de transferencia
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-xl-3">
                <div class="card stat-card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <p class="text-muted mb-1" style="font-size: 0.9rem; font-weight: 600;">Proximo Pago</p>
                                <h2 class="mb-0" style="font-weight: 800; color: #111827;">@((ViewBag.ProximoPago ?? DateTime.Now).ToString("dd MMM"))</h2>
                            </div>
