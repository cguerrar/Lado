@model Lado.Models.ApplicationUser
@{
    ViewData["Title"] = "Mi Billetera";
}

<div class="row">
    <div class="col-12 mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2>
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#28a745" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: inline-block; vertical-align: middle;">
                        <path d="M19 7V4a1 1 0 0 0-1-1H5a2 2 0 0 0 0 4h15a1 1 0 0 1 1 1v4h-3a2 2 0 0 0 0 4h3a1 1 0 0 0 1-1v-2a1 1 0 0 0-1-1"></path>
                        <path d="M3 5v14a2 2 0 0 0 2 2h15a1 1 0 0 0 1-1v-4"></path>
                    </svg>
                    Mi Billetera
                </h2>
                <p class="text-muted">Gestiona tus ingresos y retiros</p>
            </div>
            <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalRetiro">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: inline-block; vertical-align: middle; margin-right: 8px;">
                    <rect x="2" y="5" width="20" height="14" rx="2"></rect>
                    <line x1="2" y1="10" x2="22" y2="10"></line>
                </svg>
                Solicitar Retiro
            </button>
        </div>
    </div>
</div>

<!-- Cards de Resumen -->
<div class="row g-3 mb-4">
    <div class="col-md-6 col-xl-3">
        <div class="card shadow-sm border-0 bg-gradient-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="mb-1 opacity-75">Saldo Disponible</p>
                        <h2 class="mb-0">$@Model.Saldo.ToString("N2")</h2>
                        <small class="opacity-75">Listo para retirar</small>
                    </div>
                    <div class="icon-box-wallet">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <line x1="12" y1="1" x2="12" y2="23"></line>
                            <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-xl-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1">Ingresos Este Mes</p>
                        <h3 class="mb-0">$@((ViewBag.IngresosEsteMes ?? 0).ToString("N2"))</h3>
                        <small class="text-success">
                            <i class="fas fa-arrow-up"></i> +@(ViewBag.CrecimientoMes ?? 0)%
                        </small>
                    </div>
                    <div class="icon-box bg-primary bg-opacity-10 text-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-xl-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1">Total Retirado</p>
                        <h3 class="mb-0">$@((ViewBag.TotalRetirado ?? 0).ToString("N2"))</h3>
                        <small class="text-muted">Histórico</small>
                    </div>
                    <div class="icon-box bg-info bg-opacity-10 text-info">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                            <polyline points="22 4 12 14.01 9 11.01"></polyline>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-xl-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1">Retiros Pendientes</p>
                        <h3 class="mb-0">@(ViewBag.RetirosPendientes ?? 0)</h3>
                        <small class="text-warning">
                            <i class="fas fa-clock"></i> En proceso
                        </small>
                    </div>
                    <div class="icon-box bg-warning bg-opacity-10 text-warning">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"></circle>
                            <polyline points="12 6 12 12 16 14"></polyline>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Gráfico de Ingresos -->
    <div class="col-lg-8 mb-4">
        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Ingresos Mensuales</h5>
                    <select class="form-select form-select-sm" style="width: auto;">
                        <option>Últimos 6 meses</option>
                        <option>Último año</option>
                        <option>Todo el tiempo</option>
                    </select>
                </div>
            </div>
            <div class="card-body">
                <canvas id="ingresosChart" height="80"></canvas>
            </div>
        </div>

        <!-- Tabla de Transacciones -->
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Transacciones Recientes</h5>
                    <a href="/Usuario/ActividadReciente" class="btn btn-sm btn-link">
                        Ver todas <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Fecha</th>
                                <th>Tipo</th>
                                <th>Descripción</th>
                                <th class="text-end">Monto</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.Transacciones != null && ViewBag.Transacciones.Count > 0)
                            {
                                @foreach (var trans in ViewBag.Transacciones)
                                {
                                    <tr>
                                        <td>
                                            <small class="text-muted">@trans.FechaTransaccion.ToString("dd/MM/yyyy")</small>
                                        </td>
                                        <td>
                                            @if (trans.Tipo == "Ingreso")
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-arrow-down"></i> Ingreso
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-arrow-up"></i> Retiro
                                                </span>
                                            }
                                        </td>
                                        <td>@trans.Descripcion</td>
                                        <td class="text-end">
                                            <strong class="@(trans.Tipo == "Ingreso" ? "text-success" : "text-danger")">
                                                @(trans.Tipo == "Ingreso" ? "+" : "-")$@trans.Monto.ToString("N2")
                                            </strong>
                                        </td>
                                        <td>
                                            @if (trans.Estado == "Completado")
                                            {
                                                <span class="badge bg-success">Completado</span>
                                            }
                                            else if (trans.Estado == "Pendiente")
                                            {
                                                <span class="badge bg-warning">Pendiente</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Procesando</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-4 text-muted">
                                        <i class="fas fa-inbox fa-2x mb-2"></i>
                                        <p class="mb-0">No hay transacciones registradas</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Panel Lateral -->
    <div class="col-lg-4">
        <!-- Método de Pago -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white">
                <h6 class="mb-0">Método de Pago</h6>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(ViewBag.MetodoPago))
                {
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-box bg-primary bg-opacity-10 text-primary me-3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                                <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                            </svg>
                        </div>
                        <div class="flex-grow-1">
                            <p class="mb-0 fw-semibold">@ViewBag.MetodoPago</p>
                            <small class="text-muted">@ViewBag.CuentaBancaria</small>
                        </div>
                    </div>
                    <button class="btn btn-outline-primary btn-sm w-100" data-bs-toggle="modal" data-bs-target="#modalEditarPago">
                        <i class="fas fa-edit"></i> Editar
                    </button>
                }
                else
                {
                    <div class="text-center py-3">
                        <i class="fas fa-credit-card fa-3x text-muted mb-3"></i>
                        <p class="text-muted mb-3">No has configurado un método de pago</p>
                        <button class="btn btn-primary btn-sm w-100" data-bs-toggle="modal" data-bs-target="#modalEditarPago">
                            <i class="fas fa-plus"></i> Agregar Método
                        </button>
                    </div>
                }
            </div>
        </div>

        <!-- Próximo Pago -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white">
                <h6 class="mb-0">Próximo Pago Automático</h6>
            </div>
            <div class="card-body">
                @if (ViewBag.ProximoPago != null)
                {
                    <div class="text-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="#0d6efd" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mb-3">
                            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                            <line x1="16" y1="2" x2="16" y2="6"></line>
                            <line x1="8" y1="2" x2="8" y2="6"></line>
                            <line x1="3" y1="10" x2="21" y2="10"></line>
                        </svg>
                        <h4 class="mb-0">@ViewBag.ProximoPago.ToString("dd MMM")</h4>
                        <p class="text-muted">@ViewBag.ProximoPago.ToString("yyyy")</p>
                        <hr>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Monto estimado:</span>
                            <strong class="text-success">$@((ViewBag.MontoEstimado ?? 0).ToString("N2"))</strong>
                        </div>
                        <small class="text-muted">Basado en suscripciones activas</small>
                    </div>
                }
                else
                {
                    <div class="text-center py-3">
                        <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                        <p class="text-muted mb-0">No hay pagos programados</p>
                    </div>
                }
            </div>
        </div>

        <!-- Ayuda -->
        <div class="card shadow-sm">
            <div class="card-body">
                <h6 class="mb-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#0d6efd" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: inline-block; vertical-align: middle; margin-right: 8px;">
                        <circle cx="12" cy="12" r="10"></circle>
                        <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
                        <line x1="12" y1="17" x2="12.01" y2="17"></line>
                    </svg>
                    ¿Necesitas ayuda?
                </h6>
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <a href="#" class="text-decoration-none">
                            <i class="fas fa-chevron-right fa-xs me-2"></i>
                            ¿Cómo solicitar un retiro?
                        </a>
                    </li>
                    <li class="mb-2">
                        <a href="#" class="text-decoration-none">
                            <i class="fas fa-chevron-right fa-xs me-2"></i>
                            Tiempos de procesamiento
                        </a>
                    </li>
                    <li class="mb-2">
                        <a href="#" class="text-decoration-none">
                            <i class="fas fa-chevron-right fa-xs me-2"></i>
                            Comisiones y tarifas
                        </a>
                    </li>
                    <li>
                        <a href="#" class="text-decoration-none">
                            <i class="fas fa-chevron-right fa-xs me-2"></i>
                            Preguntas frecuentes
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Modal Solicitar Retiro -->
<div class="modal fade" id="modalRetiro" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title">
                    <i class="fas fa-money-bill-wave text-success"></i> Solicitar Retiro
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form asp-action="SolicitarRetiro" asp-controller="Billetera" method="post">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <strong>Saldo disponible: $@Model.Saldo.ToString("N2")</strong>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Monto a Retirar</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input type="number"
                                   class="form-control"
                                   name="Monto"
                                   step="0.01"
                                   min="10"
                                   max="@Model.Saldo"
                                   required>
                        </div>
                        <small class="text-muted">Mínimo: $10.00 | Máximo: $@Model.Saldo.ToString("N2")</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Método de Pago</label>
                        <select class="form-select" name="MetodoPago" required>
                            <option value="">Selecciona un método</option>
                            <option value="Transferencia">Transferencia Bancaria</option>
                            <option value="PayPal">PayPal</option>
                        </select>
                    </div>

                    <div class="alert alert-warning">
                        <small>
                            <i class="fas fa-exclamation-triangle"></i>
                            Los retiros se procesan en 3-5 días hábiles. Se aplicará una comisión del 5%.
                        </small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Notas (opcional)</label>
                        <textarea class="form-control" name="Notas" rows="2" placeholder="Agrega cualquier observación..."></textarea>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-success flex-grow-1">
                            <i class="fas fa-check"></i> Confirmar Retiro
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal Editar Método de Pago -->
<div class="modal fade" id="modalEditarPago" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title">
                    <i class="fas fa-credit-card text-primary"></i> Configurar Método de Pago
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form asp-action="ActualizarMetodoPago" asp-controller="Billetera" method="post">
                    <div class="mb-3">
                        <label class="form-label">Tipo de Cuenta</label>
                        <select class="form-select" name="TipoCuenta" required>
                            <option value="">Selecciona...</option>
                            <option value="Bancaria">Cuenta Bancaria</option>
                            <option value="PayPal">PayPal</option>
                            <option value="Stripe">Stripe</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Nombre del Banco</label>
                        <input type="text" class="form-control" name="NombreBanco" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Número de Cuenta</label>
                        <input type="text" class="form-control" name="NumeroCuenta" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Nombre del Titular</label>
                        <input type="text" class="form-control" name="NombreTitular" value="@Model.NombreCompleto" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">RUT/Identificación</label>
                        <input type="text" class="form-control" name="Identificacion" required>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary flex-grow-1">
                            <i class="fas fa-save"></i> Guardar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('ingresosChart');
        if (ctx) {
            const datosIngresos = [
        @(ViewBag.IngresosMes1 ?? 0),
        @(ViewBag.IngresosMes2 ?? 0),
        @(ViewBag.IngresosMes3 ?? 0),
        @(ViewBag.IngresosMes4 ?? 0),
        @(ViewBag.IngresosMes5 ?? 0),
        @(ViewBag.IngresosMes6 ?? 0)
            ];

            const nombresMeses = [
                '@ViewBag.NombreMes1',
                '@ViewBag.NombreMes2',
                '@ViewBag.NombreMes3',
                '@ViewBag.NombreMes4',
                '@ViewBag.NombreMes5',
                '@ViewBag.NombreMes6'
            ];

            console.log('=== DEBUG BILLETERA ===');
            console.log('Datos de ingresos:', datosIngresos);
            console.log('Nombres de meses:', nombresMeses);
            console.log('¿Hay datos?', datosIngresos.some(val => val > 0));

            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: nombresMeses,
                    datasets: [{
                        label: 'Ingresos ($)',
                        data: datosIngresos,
                        borderColor: '#28a745',
                        backgroundColor: 'rgba(40, 167, 69, 0.1)',
                        tension: 0.4,
                        fill: true,
                        pointBackgroundColor: '#28a745',
                        pointBorderColor: '#fff',
                        pointBorderWidth: 2,
                        pointRadius: 5
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return 'Ingresos: $' + context.parsed.y.toLocaleString('es-CL', {
                                        minimumFractionDigits: 2,
                                        maximumFractionDigits: 2
                                    });
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return '$' + value.toLocaleString('es-CL', {
                                        minimumFractionDigits: 0,
                                        maximumFractionDigits: 0
                                    });
                                }
                            }
                        }
                    }
                }
            });
        }
    </script>
}

<style>
    .bg-gradient-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
    }

    .icon-box-wallet {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 15px;
    }

    .icon-box {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 15px;
    }

    .card:hover {
        transform: translateY(-2px);
        transition: transform 0.2s;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa;
    }
</style>