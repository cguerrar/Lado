@model Lado.Models.ApplicationUser
@{
    ViewData["Title"] = "Configuración";
}

<div class="row">
    <div class="col-12 mb-4">
        <h2><i class="fas fa-cog text-primary"></i> Configuración</h2>
        <p class="text-muted">Administra la configuración de tu cuenta y preferencias</p>
    </div>
</div>

<div class="row">
    <div class="col-lg-3 mb-4">
        <!-- Menú de Navegación -->
        <div class="card shadow-sm">
            <div class="list-group list-group-flush">
                <a href="#cuenta" class="list-group-item list-group-item-action active" data-bs-toggle="list">
                    <i class="fas fa-user me-2"></i> Cuenta
                </a>
                <a href="#seguridad" class="list-group-item list-group-item-action" data-bs-toggle="list">
                    <i class="fas fa-lock me-2"></i> Seguridad
                </a>
                <a href="#notificaciones" class="list-group-item list-group-item-action" data-bs-toggle="list">
                    <i class="fas fa-bell me-2"></i> Notificaciones
                </a>
                <a href="#privacidad" class="list-group-item list-group-item-action" data-bs-toggle="list">
                    <i class="fas fa-shield-alt me-2"></i> Privacidad
                </a>
                @if (Model.TipoUsuario == (int)Lado.Models.TipoUsuario.Creador)
                {
                    <a href="#pagos" class="list-group-item list-group-item-action" data-bs-toggle="list">
                        <i class="fas fa-credit-card me-2"></i> Pagos
                    </a>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-9">
        <div class="tab-content">
            <!-- Tab Cuenta -->
            <div class="tab-pane fade show active" id="cuenta">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">Información de la Cuenta</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="ActualizarCuenta" method="post">
                            <div class="mb-3">
                                <label class="form-label">Correo Electrónico</label>
                                <input type="email" class="form-control" value="@Model.Email" disabled>
                                <small class="text-muted">Para cambiar tu correo, contacta con soporte</small>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Nombre de Usuario</label>
                                <div class="input-group">
                                    <span class="input-group-text">@@</span>
                                    <input type="text" class="form-control" value="@Model.UserName" asp-for="UserName">
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Tipo de Cuenta</label>
                                <input type="text" class="form-control" value="@((Lado.Models.TipoUsuario)Model.TipoUsuario)" disabled>
                            </div>

                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Guardar Cambios
                            </button>
                        </form>
                    </div>
                </div>

                <div class="card shadow-sm border-danger">
                    <div class="card-header bg-white">
                        <h5 class="mb-0 text-danger">Zona de Peligro</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6>Eliminar Cuenta</h6>
                                <p class="text-muted mb-0">Una vez eliminada, no podrás recuperar tu cuenta</p>
                            </div>
                            <button class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#modalEliminar">
                                <i class="fas fa-trash"></i> Eliminar Cuenta
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tab Seguridad -->
            <div class="tab-pane fade" id="seguridad">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">Cambiar Contraseña</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="CambiarContrasena" method="post">
                            <div class="mb-3">
                                <label class="form-label">Contraseña Actual</label>
                                <input type="password" class="form-control" name="ContrasenaActual" required>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Nueva Contraseña</label>
                                <input type="password" class="form-control" name="NuevaContrasena" required>
                                <small class="text-muted">Mínimo 8 caracteres</small>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Confirmar Nueva Contraseña</label>
                                <input type="password" class="form-control" name="ConfirmarContrasena" required>
                            </div>

                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-key"></i> Cambiar Contraseña
                            </button>
                        </form>
                    </div>
                </div>

                <div class="card shadow-sm">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">Autenticación de Dos Factores</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6>Autenticación de Dos Factores (2FA)</h6>
                                <p class="text-muted mb-0">Agrega una capa extra de seguridad a tu cuenta</p>
                            </div>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="switch2FA" style="width: 3rem; height: 1.5rem;">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tab Notificaciones -->
            <div class="tab-pane fade" id="notificaciones">
                <div class="card shadow-sm">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">Preferencias de Notificaciones</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="ActualizarNotificaciones" method="post">
                            <h6 class="mb-3">Notificaciones por Email</h6>

                            <div class="mb-3 d-flex justify-content-between align-items-center">
                                <div>
                                    <label class="form-label mb-0">Nuevos Seguidores</label>
                                    <small class="text-muted d-block">Recibe un email cuando alguien te siga</small>
                                </div>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" name="EmailNuevosSeguidores" checked>
                                </div>
                            </div>

                            <div class="mb-3 d-flex justify-content-between align-items-center">
                                <div>
                                    <label class="form-label mb-0">Nuevos Mensajes</label>
                                    <small class="text-muted d-block">Notificación de mensajes directos</small>
                                </div>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" name="EmailNuevosMensajes" checked>
                                </div>
                            </div>

                            @if (Model.TipoUsuario == (int)Lado.Models.TipoUsuario.Creador)
                            {
                                <div class="mb-3 d-flex justify-content-between align-items-center">
                                    <div>
                                        <label class="form-label mb-0">Nuevas Suscripciones</label>
                                        <small class="text-muted d-block">Cuando alguien se suscriba a tu contenido</small>
                                    </div>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" name="EmailNuevasSuscripciones" checked>
                                    </div>
                                </div>

                                <div class="mb-3 d-flex justify-content-between align-items-center">
                                    <div>
                                        <label class="form-label mb-0">Pagos Recibidos</label>
                                        <small class="text-muted d-block">Cuando recibas un pago</small>
                                    </div>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" name="EmailPagos" checked>
                                    </div>
                                </div>
                            }

                            <hr>
                            <h6 class="mb-3">Notificaciones Push</h6>

                            <div class="mb-3 d-flex justify-content-between align-items-center">
                                <div>
                                    <label class="form-label mb-0">Activar Notificaciones Push</label>
                                    <small class="text-muted d-block">Recibe notificaciones en tu dispositivo</small>
                                </div>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" name="PushNotifications">
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary mt-3">
                                <i class="fas fa-save"></i> Guardar Preferencias
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Tab Privacidad -->
            <div class="tab-pane fade" id="privacidad">
                <div class="card shadow-sm">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">Configuración de Privacidad</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="ActualizarPrivacidad" method="post">
                            <div class="mb-4 d-flex justify-content-between align-items-center">
                                <div>
                                    <label class="form-label mb-0">Perfil Público</label>
                                    <small class="text-muted d-block">Permite que cualquiera vea tu perfil</small>
                                </div>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" name="PerfilPublico" checked>
                                </div>
                            </div>

                            <div class="mb-4 d-flex justify-content-between align-items-center">
                                <div>
                                    <label class="form-label mb-0">Mostrar en Búsquedas</label>
                                    <small class="text-muted d-block">Aparecer en resultados de búsqueda</small>
                                </div>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" name="MostrarBusquedas" checked>
                                </div>
                            </div>

                            <div class="mb-4 d-flex justify-content-between align-items-center">
                                <div>
                                    <label class="form-label mb-0">Mensajes de Desconocidos</label>
                                    <small class="text-muted d-block">Permite mensajes de personas que no sigues</small>
                                </div>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" name="MensajesDesconocidos">
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Guardar Configuración
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Tab Pagos (Solo Creadores) -->
            @if (Model.TipoUsuario == (int)Lado.Models.TipoUsuario.Creador)
            {
                <div class="tab-pane fade" id="pagos">
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-white">
                            <h5 class="mb-0">Métodos de Pago</h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted">Configura cómo deseas recibir tus pagos</p>

                            <div class="mb-3">
                                <label class="form-label">Método de Retiro Preferido</label>
                                <select class="form-select">
                                    <option>Transferencia Bancaria</option>
                                    <option>PayPal</option>
                                    <option>Stripe</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Cuenta Bancaria</label>
                                <input type="text" class="form-control" placeholder="Número de cuenta">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Banco</label>
                                <input type="text" class="form-control" placeholder="Nombre del banco">
                            </div>

                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Guardar Información
                            </button>
                        </div>
                    </div>

                    <div class="card shadow-sm">
                        <div class="card-header bg-white">
                            <h5 class="mb-0">Historial de Retiros</h5>
                        </div>
                        <div class="card-body">
                            <div class="text-center py-4">
                                <i class="fas fa-file-invoice-dollar fa-3x text-muted mb-3"></i>
                                <p class="text-muted">No hay retiros registrados</p>
                                <a href="/Billetera" class="btn btn-outline-primary">
                                    <i class="fas fa-wallet"></i> Ir a Billetera
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="modal fade" id="modalEliminar" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="EliminarCuenta" asp-controller="Usuario" method="post">
                @Html.AntiForgeryToken()

                <div class="modal-header border-0">
                    <h5 class="modal-title text-danger">
                        <i class="fas fa-exclamation-triangle"></i> Eliminar Cuenta
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <p><strong>¿Estás seguro de que deseas eliminar tu cuenta?</strong></p>
                    <p class="text-muted">Esta acción es permanente y no se puede deshacer. Perderás:</p>
                    <ul class="text-muted">
                        <li>Todo tu contenido publicado</li>
                        <li>Tus seguidores y suscriptores</li>
                        <li>Tu historial de transacciones</li>
                        <li>Todos tus mensajes y conversaciones</li>
                        <li>Todos tus datos personales</li>
                    </ul>

                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-circle"></i>
                        <strong>¡Advertencia!</strong> Esta acción no se puede revertir.
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Escribe <strong>ELIMINAR</strong> para confirmar</label>
                        <input type="text"
                               class="form-control"
                               id="confirmarEliminar"
                               name="confirmacion"
                               placeholder="ELIMINAR"
                               required>
                    </div>
                </div>

                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times"></i> Cancelar
                    </button>
                    <button type="submit" class="btn btn-danger" id="btnEliminarCuenta" disabled>
                        <i class="fas fa-trash"></i> Eliminar Mi Cuenta
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Validar que se escriba "ELIMINAR" correctamente
        document.getElementById('confirmarEliminar').addEventListener('input', function() {
            const btnEliminar = document.getElementById('btnEliminarCuenta');
            if (this.value === 'ELIMINAR') {
                btnEliminar.disabled = false;
                btnEliminar.classList.remove('btn-secondary');
                btnEliminar.classList.add('btn-danger');
            } else {
                btnEliminar.disabled = true;
                btnEliminar.classList.remove('btn-danger');
                btnEliminar.classList.add('btn-secondary');
            }
        });

        // Confirmar antes de enviar
        document.querySelector('#modalEliminar form').addEventListener('submit', function(e) {
            const confirmacion = document.getElementById('confirmarEliminar').value;

            if (confirmacion !== 'ELIMINAR') {
                e.preventDefault();
                alert('Debes escribir "ELIMINAR" exactamente para confirmar');
                return false;
            }

            // Confirmación final
            if (!confirm('¿Estás ABSOLUTAMENTE seguro? Esta acción NO se puede deshacer.')) {
                e.preventDefault();
                return false;
            }

            // Mostrar mensaje de carga
            const btnEliminar = document.getElementById('btnEliminarCuenta');
            btnEliminar.disabled = true;
            btnEliminar.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Eliminando...';

            return true;
        });

        // Limpiar al cerrar modal
        document.getElementById('modalEliminar').addEventListener('hidden.bs.modal', function () {
            document.getElementById('confirmarEliminar').value = '';
            document.getElementById('btnEliminarCuenta').disabled = true;
        });
    </script>
}


<style>
    

    .list-group-item-action:hover {
        background-color: #f8f9fa;
        border-left: 3px solid #00bcd4;
    }

    .list-group-item-action.active {
        background-color: rgba(0, 188, 212, 0.1);
        border-left: 3px solid #00bcd4;
        color: #00bcd4;
    }

    .form-check-input:checked {
        background-color: #00bcd4;
        border-color: #00bcd4;
    }

    #btnEliminarCuenta:disabled {
        cursor: not-allowed;
        opacity: 0.5;
    }

</style>