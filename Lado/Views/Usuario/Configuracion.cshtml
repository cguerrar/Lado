    async function inicializarPushNotifications() {
        const statusTitle = document.getElementById('push-status-title');
        const statusDesc = document.getElementById('push-status-desc');
        const btnActivar = document.getElementById('btn-activar-push');
        const btnDesactivar = document.getElementById('btn-desactivar-push');
        const btnTest = document.getElementById('btn-test-push');
        const notSupported = document.getElementById('push-not-supported');
        const devicesInfo = document.getElementById('push-devices-info');
        const iosNotice = document.getElementById('ios-pwa-notice');

        // Detectar iOS
        const isIOS = /iPad|iPhone|iPod/.test(navigator.userAgent);
        if (isIOS) {
            iosNotice.style.display = 'block';
        }

        // Verificar soporte
        if (!('serviceWorker' in navigator) || !('PushManager' in window)) {
            statusTitle.textContent = 'No soportado';
            statusDesc.textContent = 'Tu navegador no soporta notificaciones push';
            notSupported.style.display = 'inline';
            return;
        }

        // Verificar permiso actual
        const permission = Notification.permission;

        if (permission === 'denied') {
            statusTitle.textContent = 'Bloqueadas';
            statusDesc.innerHTML = 'Has bloqueado las notificaciones. <a href="#" onclick="mostrarAyudaDesbloqueo()">Ver cómo desbloquear</a>';
            notSupported.style.display = 'inline';
            return;
        }

        try {
            // Obtener clave VAPID
            const keyResponse = await fetch('/api/NotificacionesPush/vapid-public-key');
            const keyData = await keyResponse.json();
            vapidPublicKey = keyData.publicKey;

            // Verificar estado en el servidor
            const estadoResponse = await fetch('/api/NotificacionesPush/estado');
            const estadoData = await estadoResponse.json();

            if (estadoData.success) {
                // Cargar preferencias
                cargarPreferencias(estadoData.preferencias);

                if (estadoData.activo) {
                    statusTitle.textContent = 'Notificaciones activadas';
                    statusDesc.textContent = 'Recibirás notificaciones en este dispositivo';
                    btnDesactivar.style.display = 'inline-block';
                    btnTest.style.display = 'inline-block';
                    devicesInfo.style.display = 'block';
                    document.getElementById('push-devices-count').textContent = estadoData.dispositivos;
                } else {
                    statusTitle.textContent = 'Notificaciones desactivadas';
                    statusDesc.textContent = 'Actívalas para recibir alertas en tiempo real';
                    btnActivar.style.display = 'inline-block';
                }
            }
        } catch (error) {
            console.error('Error al inicializar push:', error);
            statusTitle.textContent = 'Error';
            statusDesc.textContent = 'No se pudo verificar el estado de las notificaciones';
        }
    }

