        const isChrome = navigator.userAgent.includes('Chrome');
        const isFirefox = navigator.userAgent.includes('Firefox');
        const isSafari = navigator.userAgent.includes('Safari') && !navigator.userAgent.includes('Chrome');

        let mensaje = '';
        if (isChrome) {
            mensaje = 'En Chrome: Haz clic en el candado en la barra de direcciones > Configuración del sitio > Notificaciones > Permitir';
        } else if (isFirefox) {
            mensaje = 'En Firefox: Haz clic en el candado > Permisos > Notificaciones > Permitir';
        } else if (isSafari) {
            mensaje = 'En Safari: Preferencias > Sitios web > Notificaciones > Permitir para este sitio';
        } else {
            mensaje = 'Busca la configuración de notificaciones en la configuración de tu navegador';
        }

        alert(mensaje);
    }

    // Convertir VAPID key de base64 a Uint8Array
    function urlBase64ToUint8Array(base64String) {
        const padding = '='.repeat((4 - base64String.length % 4) % 4);
        const base64 = (base64String + padding)
            .replace(/-/g, '+')
            .replace(/_/g, '/');

        const rawData = window.atob(base64);
        const outputArray = new Uint8Array(rawData.length);

        for (let i = 0; i < rawData.length; ++i) {
            outputArray[i] = rawData.charCodeAt(i);
        }
        return outputArray;
    }

    // Toast helper (si no existe)
    function mostrarToast(mensaje, tipo) {
        if (typeof window.showToast === 'function') {
            window.showToast(mensaje, tipo);
        } else {
            // Fallback simple
            const toast = document.createElement('div');
            toast.className = 'toast-simple ' + tipo;
            toast.textContent = mensaje;
            toast.style.cssText = 'position:fixed;bottom:20px;right:20px;padding:12px 24px;border-radius:8px;color:white;z-index:9999;animation:fadeIn 0.3s;' +
                (tipo === 'success' ? 'background:#10b981;' : tipo === 'error' ? 'background:#ef4444;' : 'background:#f59e0b;');
            document.body.appendChild(toast);
            setTimeout(() => toast.remove(), 3000);
        }
    }
