        }

        .config-modal-body ul {
            padding-left: 20px;
        }

        .config-modal-body li {
            padding: 4px 0;
        }

        .config-modal-footer {
            padding: 16px 20px;
            padding-bottom: calc(20px + env(safe-area-inset-bottom, 20px));
            flex-direction: column-reverse;
            gap: 12px;
            background: var(--config-card-bg);
        }

        .config-modal-footer .config-btn {
            margin: 0;
        }

        .config-modal-footer .config-btn-danger {
            order: 1;
        }

        /* === ALERTS === */
        .config-alert {
            padding: 14px;
            font-size: 0.85rem;
            border-radius: 12px;
            margin: 16px;
        }

        /* === OPTIONS CARDS (Idioma, Lado Preferido) === */
        .language-option,
        .lado-pref-option,
        .promo-option,
        .bloquear-option,
        .ocultar-publico-option {
