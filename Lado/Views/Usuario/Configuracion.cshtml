<script>
    // === SCROLL DETECTION PARA NAVEGACIÓN MÓVIL ===
    (function() {
        var sidebar = document.getElementById('configSidebar');
        var wrapper = document.getElementById('sidebarWrapper');
        var scrollHint = document.getElementById('scrollHint');
        var hasScrolled = false;

        if (!sidebar || !wrapper) return;

        function updateScrollIndicators() {
            var scrollLeft = sidebar.scrollLeft;
            var scrollWidth = sidebar.scrollWidth;
            var clientWidth = sidebar.clientWidth;
            var maxScroll = scrollWidth - clientWidth;

            // Mostrar/ocultar gradientes según posición
            if (scrollLeft > 10) {
                wrapper.classList.add('can-scroll-left');
            } else {
                wrapper.classList.remove('can-scroll-left');
            }

            if (scrollLeft < maxScroll - 10) {
                wrapper.classList.add('can-scroll-right');
            } else {
                wrapper.classList.remove('can-scroll-right');
            }

            // Ocultar hint después del primer scroll
            if (!hasScrolled && scrollLeft > 20) {
                hasScrolled = true;
                if (scrollHint) {
                    scrollHint.classList.remove('visible');
                }
            }
        }

        // Escuchar evento de scroll
        sidebar.addEventListener('scroll', updateScrollIndicators, { passive: true });

        // Verificar estado inicial después de que el layout se estabilice
        setTimeout(function() {
            updateScrollIndicators();
            // Mostrar hint solo si hay scroll disponible
            var maxScroll = sidebar.scrollWidth - sidebar.clientWidth;
            if (maxScroll > 20 && scrollHint) {
                scrollHint.classList.add('visible');
                // Auto-ocultar hint después de 5 segundos
                setTimeout(function() {
                    if (!hasScrolled && scrollHint) {
                        scrollHint.classList.remove('visible');
                    }
                }, 5000);
            }
        }, 100);

        // Actualizar en resize
        window.addEventListener('resize', function() {
            setTimeout(updateScrollIndicators, 100);
        });
    })();

    // Cambiar entre tabs
    function cambiarTab(tabId) {
        // Ocultar todos los tabs
        document.querySelectorAll('.config-tab-content').forEach(tab => {
            tab.classList.remove('active');
        });

        // Remover active de nav items
        document.querySelectorAll('.config-nav-item').forEach(item => {
            item.classList.remove('active');
        });

        // Mostrar el tab seleccionado
        document.getElementById(tabId).classList.add('active');

        // Marcar nav item como activo
        event.target.closest('.config-nav-item').classList.add('active');
    }

