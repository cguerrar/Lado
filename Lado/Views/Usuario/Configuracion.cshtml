    async function activarNotificacionesPush() {
        const btnActivar = document.getElementById('btn-activar-push');
        btnActivar.disabled = true;
        btnActivar.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Activando...';

        try {
            // Solicitar permiso
            const permission = await Notification.requestPermission();

            if (permission !== 'granted') {
                mostrarToast('Necesitas permitir las notificaciones en tu navegador', 'warning');
                btnActivar.disabled = false;
                btnActivar.innerHTML = '<i class="fas fa-bell"></i> Activar';
                return;
            }

            // Registrar service worker si no está registrado
            const registration = await navigator.serviceWorker.ready;

            // Convertir VAPID key a Uint8Array
            const applicationServerKey = urlBase64ToUint8Array(vapidPublicKey);

            // Suscribirse a push
            pushSubscription = await registration.pushManager.subscribe({
                userVisibleOnly: true,
                applicationServerKey: applicationServerKey
            });

            // Enviar suscripción al servidor
            const response = await fetch('/api/NotificacionesPush/suscribir', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    endpoint: pushSubscription.endpoint,
                    keys: {
                        p256dh: btoa(String.fromCharCode.apply(null, new Uint8Array(pushSubscription.getKey('p256dh')))),
                        auth: btoa(String.fromCharCode.apply(null, new Uint8Array(pushSubscription.getKey('auth'))))
                    }
                })
            });

            const data = await response.json();

            if (data.success) {
                mostrarToast('Notificaciones activadas correctamente', 'success');
                inicializarPushNotifications(); // Refrescar estado
            } else {
                throw new Error(data.error || 'Error al activar');
            }
        } catch (error) {
            console.error('Error al activar push:', error);
            mostrarToast('Error al activar las notificaciones: ' + error.message, 'error');
            btnActivar.disabled = false;
            btnActivar.innerHTML = '<i class="fas fa-bell"></i> Activar';
        }
    }

