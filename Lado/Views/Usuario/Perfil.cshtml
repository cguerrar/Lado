@model Lado.Models.ApplicationUser
@{
    ViewData["Title"] = "Mi Perfil";
}

<div class="row">
    <div class="col-lg-4 mb-4">
        <!-- Card de Perfil -->
        <div class="card shadow-sm">
            <div class="card-body text-center p-4">
                @if (!string.IsNullOrEmpty(Model.FotoPerfil))
                {
                    <img src="@Model.FotoPerfil"
                         class="rounded-circle mb-3"
                         style="width: 150px; height: 150px; object-fit: cover; border: 4px solid #00bcd4;"
                         alt="@Model.UserName">
                }
                else
                {
                    <div class="rounded-circle bg-primary d-inline-flex align-items-center justify-content-center mb-3"
                         style="width: 150px; height: 150px; border: 4px solid #00bcd4;">
                        <span class="text-white" style="font-size: 3rem; font-weight: 700;">
                            @Model.NombreCompleto.Substring(0, 1).ToUpper()
                        </span>
                    </div>
                }

                <h4 class="mb-1">@Model.NombreCompleto</h4>
                <p class="text-muted mb-3">@@@Model.UserName</p>

                @if (Model.TipoUsuario == 1)
                {
                    <span class="badge bg-primary mb-3">
                        <i class="fas fa-star"></i> Creador
                    </span>
                }
                else
                {
                    <span class="badge bg-info mb-3">
                        <i class="fas fa-heart"></i> Fan
                    </span>
                }

                <div class="d-grid gap-2 mt-3">
                    <a href="/Usuario/EditarPerfil" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Editar Perfil
                    </a>
                    <a href="/Usuario/Configuracion" class="btn btn-outline-secondary">
                        <i class="fas fa-cog"></i> Configuración
                    </a>
                </div>
            </div>
        </div>

        <!-- Estadísticas Rápidas -->
        @if (Model.TipoUsuario == 1)
        {
            <div class="card shadow-sm mt-3">
                <div class="card-body">
                    <h6 class="text-muted mb-3">Estadísticas</h6>
                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-muted">Suscriptores</span>
                        <strong>@(ViewBag.Suscriptores ?? 0)</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-muted">Publicaciones</span>
                        <strong>@(ViewBag.Publicaciones ?? 0)</strong>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="text-muted">Ingresos Totales</span>
                        <strong class="text-success">$@(ViewBag.IngresosTotales?.ToString("N2") ?? "0.00")</strong>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="col-lg-8">
        <!-- Información Personal -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="fas fa-user me-2"></i>Información Personal</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="text-muted small">Nombre Completo</label>
                        <p class="fw-semibold">@Model.NombreCompleto</p>
                    </div>
                    <div class="col-md-6">
                        <label class="text-muted small">Nombre de Usuario</label>
                        <p class="fw-semibold">@@@Model.UserName</p>
                    </div>
                    <div class="col-md-6">
                        <label class="text-muted small">Correo Electrónico</label>
                        <p class="fw-semibold">@Model.Email</p>
                    </div>
                    <div class="col-md-6">
                        <label class="text-muted small">Teléfono</label>
                        <p class="fw-semibold">@(!string.IsNullOrEmpty(Model.PhoneNumber) ? Model.PhoneNumber : "No especificado")</p>
                    </div>
                    <div class="col-12">
                        <label class="text-muted small">Biografía</label>
                        <p class="fw-semibold">@(!string.IsNullOrEmpty(Model.Biografia) ? Model.Biografia : "Sin biografía")</p>
                    </div>
                </div>
            </div>
        </div>

        @if (Model.TipoUsuario == 1)
        {
            <!-- Información de Creador -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-dollar-sign me-2"></i>Información Financiera</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="text-muted small">Precio de Suscripción</label>
                            <p class="fw-semibold text-success">$@(Model.PrecioSuscripcion.ToString("N2")) / mes</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Saldo Disponible</label>
                            <p class="fw-semibold text-success">$@Model.Saldo.ToString("N2")</p>
                        </div>
                        <div class="col-md-12">
                            <a href="/Billetera" class="btn btn-success">
                                <i class="fas fa-wallet"></i> Ver Billetera
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Cuenta y Seguridad -->
        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="fas fa-shield-alt me-2"></i>Cuenta y Seguridad</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="text-muted small">Tipo de Cuenta</label>
                        <p class="fw-semibold">
                            @if (Model.TipoUsuario == 1)
                            {
                                <text>Creador</text>
                            }
                            else if (Model.TipoUsuario == 2)
                            {
                                <text>Agencia</text>
                            }
                            else
                            {
                                <text>Fan</text>
                            }
                        </p>
                    </div>
                    <div class="col-md-6">
                        <label class="text-muted small">Fecha de Registro</label>
                        <p class="fw-semibold">@Model.FechaRegistro.ToString("dd/MM/yyyy")</p>
                    </div>
                    <div class="col-12">
                        <a href="/Usuario/CambiarContrasena" class="btn btn-outline-primary">
                            <i class="fas fa-key"></i> Cambiar Contraseña
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-2px);
        }
</style>