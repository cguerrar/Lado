<script>
// ========================================
// HISTORIAS DESTACADAS
// ========================================
const perfilUsuarioId = '@Model.Id';
let destacadosData = [];
let currentHighlightGroupIndex = 0;
let currentHighlightIndex = 0;
let highlightTimer = null;

document.addEventListener('DOMContentLoaded', function() {
    cargarDestacadosPerfil();
});

async function cargarDestacadosPerfil() {
    try {
        console.log('[Destacados] Cargando para usuario:', perfilUsuarioId);
        const response = await fetch(`/Stories/ObtenerGruposDestacados?usuarioId=${perfilUsuarioId}`);
        const data = await response.json();
        console.log('[Destacados] Respuesta:', data);

        if (data.success && data.grupos && data.grupos.length > 0) {
            console.log('[Destacados] Mostrando', data.grupos.length, 'grupos');
            renderizarGruposDestacados(data.grupos);
            document.getElementById('highlightsSection').style.display = 'block';
        } else {
            console.log('[Destacados] No hay grupos');
        }
    } catch (error) {
        console.error('[Destacados] Error:', error);
    }
}

function renderizarGruposDestacados(grupos) {
    const container = document.getElementById('highlightsContainer');
    container.innerHTML = grupos.map((grupo, index) => `
        <div class="highlight-item" onclick="abrirVisorDestacados(${index}, ${grupo.id})">
            <div class="highlight-circle ${!grupo.imagenPortada ? 'empty' : ''}">
                ${grupo.imagenPortada
                    ? `<img src="${grupo.imagenPortada}" alt="${escapeHtml(grupo.nombre)}" onerror="this.parentElement.classList.add('empty'); this.remove();">`
                    : `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"/>
                       </svg>`
                }
            </div>
            <span class="highlight-label">${escapeHtml(grupo.nombre)}</span>
        </div>
    `).join('');

    destacadosData = grupos;
}

function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
}

async function abrirVisorDestacados(grupoIndex, grupoId) {
    currentHighlightGroupIndex = grupoIndex;
    currentHighlightIndex = 0;

    try {
        const response = await fetch(`/Stories/ObtenerDestacados?usuarioId=${perfilUsuarioId}&grupoId=${grupoId}`);
        const historias = await response.json();

        if (!historias || historias.length === 0) {
            alert('No hay historias en este grupo');
            return;
        }

        destacadosData[grupoIndex].historias = historias;
        document.getElementById('highlightsViewerGroupName').textContent = destacadosData[grupoIndex].nombre;
        renderizarBarrasProgreso(historias.length);
        mostrarDestacado(0);
        document.getElementById('highlightsViewerOverlay').classList.add('active');
        document.body.style.overflow = 'hidden';
    } catch (error) {
        console.error('Error cargando historias destacadas:', error);
    }
}

function renderizarBarrasProgreso(total) {
    const container = document.getElementById('highlightsViewerProgress');
    container.innerHTML = Array(total).fill(0).map((_, i) => `
        <div class="highlights-progress-bar" data-index="${i}">
            <div class="highlights-progress-fill"></div>
        </div>
    `).join('');
}

function mostrarDestacado(index) {
    const grupo = destacadosData[currentHighlightGroupIndex];
    if (!grupo || !grupo.historias) return;

    const historias = grupo.historias;
    if (index < 0 || index >= historias.length) {
        cerrarVisorDestacados();
        return;
    }

    currentHighlightIndex = index;
    const historia = historias[index];
    const container = document.getElementById('highlightsViewerContent');

    if (highlightTimer) {
        clearTimeout(highlightTimer);
        highlightTimer = null;
    }

    actualizarBarrasProgreso(index);

    const esVideo = historia.tipoContenido === 1 || historia.tipoContenido === 'VIDEO' ||
                    (historia.rutaArchivo && historia.rutaArchivo.match(/\.(mp4|webm|mov)$/i));

    if (esVideo) {
        container.innerHTML = `
            <video src="${historia.rutaArchivo}"
                   autoplay playsinline muted
                   style="max-width: 100%; max-height: 100%; object-fit: contain;"
                   onended="navegarDestacado(1)"
                   onclick="this.muted = !this.muted">
            </video>
        `;
        const video = container.querySelector('video');
        video.play().catch(() => {});
    } else {
        container.innerHTML = `
            <img src="${historia.rutaArchivo}"
                 alt="Destacado"
                 style="max-width: 100%; max-height: 100%; object-fit: contain;">
        `;
        highlightTimer = setTimeout(() => navegarDestacado(1), 5000);
    }
}

function actualizarBarrasProgreso(currentIndex) {
    const barras = document.querySelectorAll('.highlights-progress-bar');
    barras.forEach((barra, i) => {
        barra.classList.remove('viewed', 'active');
        if (i < currentIndex) {
            barra.classList.add('viewed');
        } else if (i === currentIndex) {
            barra.classList.add('active');
        }
    });
}

function navegarDestacado(direccion) {
    const grupo = destacadosData[currentHighlightGroupIndex];
    if (!grupo || !grupo.historias) return;

    const nuevoIndex = currentHighlightIndex + direccion;

    if (nuevoIndex < 0) {
        if (currentHighlightGroupIndex > 0) {
            const grupoAnterior = destacadosData[currentHighlightGroupIndex - 1];
            abrirVisorDestacados(currentHighlightGroupIndex - 1, grupoAnterior.id);
        } else {
            cerrarVisorDestacados();
        }
    } else if (nuevoIndex >= grupo.historias.length) {
        if (currentHighlightGroupIndex < destacadosData.length - 1) {
            const grupoSiguiente = destacadosData[currentHighlightGroupIndex + 1];
            abrirVisorDestacados(currentHighlightGroupIndex + 1, grupoSiguiente.id);
        } else {
            cerrarVisorDestacados();
        }
    } else {
        mostrarDestacado(nuevoIndex);
    }
}

function cerrarVisorDestacados(event) {
    if (event && event.target !== event.currentTarget) return;

    if (highlightTimer) {
        clearTimeout(highlightTimer);
        highlightTimer = null;
    }

    const video = document.querySelector('#highlightsViewerContent video');
    if (video) video.pause();

    document.getElementById('highlightsViewerOverlay').classList.remove('active');
    document.body.style.overflow = '';
}

document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && document.getElementById('highlightsViewerOverlay').classList.contains('active')) {
        cerrarVisorDestacados();
    }
    if (document.getElementById('highlightsViewerOverlay').classList.contains('active')) {
        if (e.key === 'ArrowLeft') navegarDestacado(-1);
        if (e.key === 'ArrowRight') navegarDestacado(1);
    }
});
</script>