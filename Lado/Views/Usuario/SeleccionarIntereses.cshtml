@section Scripts {
    <script>
        let selectedCategories = new Set(@Html.Raw(System.Text.Json.JsonSerializer.Serialize(interesesSeleccionados)));

        function toggleCategory(element) {
            const id = parseInt(element.dataset.id);

            if (selectedCategories.has(id)) {
                selectedCategories.delete(id);
                element.classList.remove('selected');
            } else {
                selectedCategories.add(id);
                element.classList.add('selected');
            }

            updateCounter();
        }

        function updateCounter() {
            document.getElementById('selectedCount').textContent = selectedCategories.size;
        }

        async function guardarIntereses() {
            if (selectedCategories.size === 0) {
                alert('Selecciona al menos un interes');
                return;
            }

            showLoading();

            try {
                const response = await fetch('/Usuario/GuardarIntereses', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        categoriaIds: Array.from(selectedCategories)
                    })
                });

                const data = await response.json();

                if (data.success) {
                    window.location.href = '/Feed';
                } else {
                    hideLoading();
                    alert(data.message || 'Error al guardar');
                }
            } catch (error) {
                hideLoading();
                alert('Error de conexion');
            }
        }

        async function omitirSeleccion() {
            showLoading();

            try {
                const response = await fetch('/Usuario/OmitirIntereses', {
                    method: 'POST'
                });

                const data = await response.json();

                if (data.success) {
                    window.location.href = data.redirectUrl || '/Feed';
                } else {
                    hideLoading();
                }
            } catch (error) {
                hideLoading();
                window.location.href = '/Feed';
            }
        }

        function showLoading() {
            document.getElementById('loadingOverlay').classList.add('show');
        }

        function hideLoading() {
            document.getElementById('loadingOverlay').classList.remove('show');
        }
    </script>
}
