<div class="stats-container">
    <div class="stats-header">
        <h1>
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="18" y1="20" x2="18" y2="10"></line>
                <line x1="12" y1="20" x2="12" y2="4"></line>
                <line x1="6" y1="20" x2="6" y2="14"></line>
            </svg>
            Estadisticas
        </h1>
        <p>Analiza el rendimiento de tu perfil y contenido</p>
    </div>

    <!-- KPIs Principales -->
    <div class="stats-grid">
        <!-- Ingresos -->
        <div class="stat-card">
            <div class="stat-card-header">
                <span class="stat-card-title">Ingresos este mes</span>
                <div class="stat-card-icon primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="12" y1="1" x2="12" y2="23"></line>
                        <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                    </svg>
                </div>
            </div>
            <div class="stat-value">
                $@(((decimal)ViewBag.IngresosEsteMes).ToString("N0"))
                @{
                    var crecimiento = (decimal)ViewBag.CrecimientoIngresos;
                    var claseChange = crecimiento > 0 ? "positive" : (crecimiento < 0 ? "negative" : "neutral");
                    var signo = crecimiento > 0 ? "+" : "";
                }
                <span class="stat-change @claseChange">
                    @if (crecimiento != 0)
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                            @if (crecimiento > 0)
                            {
                                <polyline points="18 15 12 9 6 15"></polyline>
                            }
                            else
                            {
                                <polyline points="6 9 12 15 18 9"></polyline>
                            }
                        </svg>
                    }
                    @signo@crecimiento%
                </span>
            </div>
            <p class="stat-subtitle">Mes anterior: $@(((decimal)ViewBag.IngresosMesAnterior).ToString("N0"))</p>
        </div>

        <!-- Suscriptores -->
        <div class="stat-card">
            <div class="stat-card-header">
                <span class="stat-card-title">Suscriptores activos</span>
                <div class="stat-card-icon success">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                    </svg>
                </div>
            </div>
            <div class="stat-value">
                @ViewBag.SuscriptoresActivos
                @if ((int)ViewBag.NuevosSuscriptoresMes > 0)
                {
                    <span class="stat-change positive">
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                            <polyline points="18 15 12 9 6 15"></polyline>
                        </svg>
                        +@ViewBag.NuevosSuscriptoresMes
                    </span>
                }
            </div>
            <p class="stat-subtitle">Nuevos este mes: @ViewBag.NuevosSuscriptoresMes | Retencion: @ViewBag.TasaRetencion%</p>
        </div>

        <!-- Contenido -->
        <div class="stat-card">
            <div class="stat-card-header">
                <span class="stat-card-title">Total contenidos</span>
                <div class="stat-card-icon warning">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                        <circle cx="8.5" cy="8.5" r="1.5"></circle>
                        <polyline points="21 15 16 10 5 21"></polyline>
                    </svg>
                </div>
            </div>
            <div class="stat-value">@ViewBag.TotalContenidos</div>
            <p class="stat-subtitle">Lado A: @ViewBag.ContenidosLadoA | Lado B: @ViewBag.ContenidosLadoB</p>
        </div>

        <!-- Engagement -->
        <div class="stat-card">
            <div class="stat-card-header">
                <span class="stat-card-title">Tasa de engagement</span>
                <div class="stat-card-icon purple">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                    </svg>
                </div>
            </div>
            <div class="stat-value">@ViewBag.Engagement%</div>
            <p class="stat-subtitle">@ViewBag.TotalLikes likes | @ViewBag.TotalComentarios comentarios</p>
        </div>

        <!-- Visitas al perfil -->
        <div class="stat-card">
            <div class="stat-card-header">
                <span class="stat-card-title">Visitas al perfil</span>
                <div class="stat-card-icon info">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                        <circle cx="12" cy="12" r="3"></circle>
                    </svg>
                </div>
            </div>
            <div class="stat-value">@ViewBag.VisitasPerfil</div>
            <p class="stat-subtitle">Total de veces que vieron tu perfil</p>
        </div>
    </div>

    <!-- Proximo Pago Estimado -->
    <div class="payment-card">
        <div class="payment-header">
            <span class="payment-title">Proximo pago estimado</span>
            <div class="payment-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                    <line x1="1" y1="10" x2="23" y2="10"></line>
                </svg>
            </div>
        </div>
        <div class="payment-amount">$@(((decimal)ViewBag.MontoEstimado).ToString("N0"))</div>
        <div class="payment-date">Fecha estimada: @(((DateTime)ViewBag.ProximoPago).ToString("dd 'de' MMMM, yyyy", new System.Globalization.CultureInfo("es-ES")))</div>
        <div class="mini-stats">
            <div class="mini-stat">
                <div class="mini-stat-value">$@(((decimal)ViewBag.TotalGanancias).ToString("N0"))</div>
                <div class="mini-stat-label">Ganancias totales</div>
            </div>
            <div class="mini-stat">
                <div class="mini-stat-value">@ViewBag.SuscriptoresActivos</div>
                <div class="mini-stat-label">Suscriptores activos</div>
            </div>
        </div>
    </div>

    <!-- Graficos -->
    <div class="charts-grid">
        <div class="chart-section">
            <div class="chart-header">
                <h3 class="chart-title">Ingresos por mes</h3>
            </div>
            <div class="chart-wrapper">
                <canvas id="ingresosChart" width="400" height="250"></canvas>
            </div>
        </div>

        <div class="chart-section">
            <div class="chart-header">
                <h3 class="chart-title">Suscriptores por mes</h3>
            </div>
            <div class="chart-wrapper">
                <canvas id="suscriptoresChart" width="400" height="250"></canvas>
            </div>
        </div>
    </div>

    <!-- Top Contenidos -->
    <div class="top-content-section">
        <h3 class="top-content-title">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
            </svg>
            Contenido mas popular
        </h3>
        @{
            var topContenidos = ViewBag.TopContenidos as IEnumerable<dynamic>;
        }
        @if (topContenidos != null && topContenidos.Any())
        {
            <ul class="content-list">
                @{
                    int rank = 1;
                }
                @foreach (var contenido in topContenidos)
                {
                    var rankClass = rank == 1 ? "gold" : (rank == 2 ? "silver" : (rank == 3 ? "bronze" : ""));
                    <li class="content-item">
                        <div class="content-rank @rankClass">@rank</div>
                        <div class="content-info">
                            <div class="content-description">
                                @(contenido.Descripcion?.Length > 60 ? contenido.Descripcion.Substring(0, 60) + "..." : contenido.Descripcion ?? "Sin descripcion")
                            </div>
                            <div class="content-meta">
                                <span class="content-badge @(contenido.EsLadoB ? "badge-ladob" : "badge-ladoa")">
                                    @(contenido.EsLadoB ? "Lado B" : "Lado A")
                                </span>
                                <span>@(((DateTime)contenido.FechaPublicacion).ToString("dd MMM yyyy", new System.Globalization.CultureInfo("es-ES")))</span>
                            </div>
                        </div>
                        <div class="content-stats">
                            <div class="content-stat">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                                </svg>
                                @contenido.TotalLikes
                            </div>
                            <div class="content-stat">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                                </svg>
                                @contenido.TotalComentarios
                            </div>
                        </div>
                    </li>
                    rank++;
                }
            </ul>
        }
        else
        {
            <div class="empty-state">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                    <circle cx="8.5" cy="8.5" r="1.5"></circle>
                    <polyline points="21 15 16 10 5 21"></polyline>
                </svg>
                <p>Aun no tienes contenido publicado</p>
                <a href="/Usuario/CrearContenido" class="btn btn-primary mt-2">Crear contenido</a>
            </div>
        }
    </div>

    <!-- Estadisticas adicionales -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-card-header">
                <span class="stat-card-title">Likes este mes</span>
                <div class="stat-card-icon primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                    </svg>
                </div>
            </div>
            <div class="stat-value">@ViewBag.LikesEsteMes</div>
            <p class="stat-subtitle">Total historico: @ViewBag.TotalLikes</p>
        </div>

        <div class="stat-card">
            <div class="stat-card-header">
                <span class="stat-card-title">Comentarios este mes</span>
                <div class="stat-card-icon success">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                    </svg>
                </div>
            </div>
            <div class="stat-value">@ViewBag.ComentariosEsteMes</div>
            <p class="stat-subtitle">Total historico: @ViewBag.TotalComentarios</p>
        </div>

        <div class="stat-card">
            <div class="stat-card-header">
                <span class="stat-card-title">Contenido este mes</span>
                <div class="stat-card-icon warning">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"></path>
                        <polyline points="14 2 14 8 20 8"></polyline>
                    </svg>
                </div>
            </div>
            <div class="stat-value">@ViewBag.ContenidosEsteMes</div>
            <p class="stat-subtitle">Publicaciones nuevas</p>
        </div>

        <div class="stat-card">
            <div class="stat-card-header">
                <span class="stat-card-title">Bajas este mes</span>
                <div class="stat-card-icon purple">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                        <circle cx="8.5" cy="7" r="4"></circle>
                        <line x1="18" y1="8" x2="23" y2="13"></line>
                        <line x1="23" y1="8" x2="18" y2="13"></line>
                    </svg>
                </div>
            </div>
            <div class="stat-value">@ViewBag.SuscriptoresBajaMes</div>
            <p class="stat-subtitle">Suscripciones canceladas</p>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Configuracion global para evitar redimensionamiento infinito
            Chart.defaults.animation = false;
            Chart.defaults.animations.colors = false;
            Chart.defaults.animations.x = false;
            Chart.defaults.transitions.active.animation.duration = 0;

            // Grafico de Ingresos
            const ingresosCanvas = document.getElementById('ingresosChart');
            const ingresosCtx = ingresosCanvas.getContext('2d');
            new Chart(ingresosCtx, {
                type: 'bar',
                data: {
                    labels: [@Html.Raw(ViewBag.NombresMeses)],
                    datasets: [{
                        label: 'Ingresos',
                        data: [@ViewBag.IngresosMeses],
                        backgroundColor: 'rgba(70, 130, 180, 0.8)',
                        borderColor: '#4682B4',
                        borderWidth: 2,
                        borderRadius: 8,
                        borderSkipped: false
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    animation: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return '$' + context.raw.toLocaleString();
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { color: 'rgba(0,0,0,0.05)' }
                        },
                        x: {
                            grid: { display: false }
                        }
                    }
                }
            });

            // Grafico de Suscriptores
            const suscriptoresCanvas = document.getElementById('suscriptoresChart');
            const suscriptoresCtx = suscriptoresCanvas.getContext('2d');
            new Chart(suscriptoresCtx, {
                type: 'line',
                data: {
                    labels: [@Html.Raw(ViewBag.NombresMeses)],
                    datasets: [{
                        label: 'Suscriptores',
                        data: [@ViewBag.SuscriptoresMeses],
                        backgroundColor: 'rgba(34, 197, 94, 0.1)',
                        borderColor: '#22c55e',
                        borderWidth: 3,
                        fill: true,
                        tension: 0.4,
                        pointBackgroundColor: '#22c55e',
                        pointBorderColor: '#fff',
                        pointBorderWidth: 2,
                        pointRadius: 5,
                        pointHoverRadius: 7
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    animation: false,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { color: 'rgba(0,0,0,0.05)' }
                        },
                        x: {
                            grid: { display: false }
                        }
                    }
                }
            });
        });
    </script>
}
