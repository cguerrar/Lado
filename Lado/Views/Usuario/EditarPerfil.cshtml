@model Lado.Models.ApplicationUser
@{
    ViewData["Title"] = "Editar Perfil";
}

<div class="row">
    <div class="col-12 mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2><i class="fas fa-edit text-primary"></i> Editar Perfil</h2>
                <p class="text-muted">Actualiza tu información personal y gestiona tus dos identidades</p>
            </div>
            <a href="/Usuario/Perfil" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Volver al Perfil
            </a>
        </div>
    </div>
</div>

<form asp-action="EditarPerfil" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-lg-4 mb-4">
            <!-- Foto de Perfil LadoA (Público) -->
            <div class="card shadow-sm mb-3">
                <div class="card-body text-center p-4">
                    <h6 class="text-success mb-1">
                        <i class="fas fa-globe"></i> LadoA (Público)
                    </h6>
                    <small class="text-muted d-block mb-3">Foto de perfil pública</small>

                    <div class="position-relative d-inline-block mb-3">
                        @if (!string.IsNullOrEmpty(Model.FotoPerfil))
                        {
                            <img src="@Model.FotoPerfil"
                                 id="previewFotoA"
                                 class="rounded-circle"
                                 style="width: 120px; height: 120px; object-fit: cover; border: 3px solid #4682B4;"
                                 alt="Foto de perfil" />
                        }
                        else
                        {
                            <div class="rounded-circle bg-success d-inline-flex align-items-center justify-content-center"
                                 id="previewFotoA"
                                 style="width: 120px; height: 120px; border: 3px solid #4682B4;">
                                <span class="text-white" style="font-size: 2.5rem; font-weight: 700;">
                                    @Model.NombreCompleto.Substring(0, 1).ToUpper()
                                </span>
                            </div>
                        }
                    </div>

                    <input type="file"
                           id="fotoPerfil"
                           name="fotoPerfil"
                           class="d-none"
                           accept="image/*" />

                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-success btn-sm" onclick="document.getElementById('fotoPerfil').click()">
                            <i class="fas fa-camera"></i> Cambiar Foto
                        </button>
                        @if (!string.IsNullOrEmpty(Model.FotoPerfil))
                        {
                            <button type="button" class="btn btn-outline-danger btn-sm" onclick="eliminarFoto('A')">
                                <i class="fas fa-trash"></i> Eliminar
                            </button>
                        }
                    </div>

                    <small class="text-muted d-block mt-2">
                        JPG, PNG o GIF (máx. 5MB)
                    </small>
                </div>
            </div>

            <!-- Foto de Perfil LadoB (Premium) -->
            <div class="card shadow-sm">
                <div class="card-body text-center p-4">
                    <h6 class="text-warning mb-1">
                        <i class="fas fa-mask"></i> LadoB (Premium)
                    </h6>
                    <small class="text-muted d-block mb-3">Foto de perfil premium</small>

                    <div class="position-relative d-inline-block mb-3">
                        @if (!string.IsNullOrEmpty(Model.FotoPerfilLadoB))
                        {
                            <img src="@Model.FotoPerfilLadoB"
                                 id="previewFotoB"
                                 class="rounded-circle"
                                 style="width: 120px; height: 120px; object-fit: cover; border: 3px solid #fbbf24;"
                                 alt="Foto de perfil LadoB" />
                        }
                        else
                        {
                            <div class="rounded-circle bg-warning d-inline-flex align-items-center justify-content-center"
                                 id="previewFotoB"
                                 style="width: 120px; height: 120px; border: 3px solid #fbbf24;">
                                <span class="text-white" style="font-size: 2.5rem; font-weight: 700;">
                                    @(!string.IsNullOrEmpty(Model.Seudonimo) ? Model.Seudonimo.Substring(0, 1).ToUpper() : "?")
                                </span>
                            </div>
                        }
                    </div>

                    <input type="file"
                           id="fotoPerfilLadoB"
                           name="fotoPerfilLadoB"
                           class="d-none"
                           accept="image/*" />

                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-warning btn-sm" onclick="document.getElementById('fotoPerfilLadoB').click()">
                            <i class="fas fa-camera"></i> Cambiar Foto
                        </button>
                        @if (!string.IsNullOrEmpty(Model.FotoPerfilLadoB))
                        {
                            <button type="button" class="btn btn-outline-danger btn-sm" onclick="eliminarFoto('B')">
                                <i class="fas fa-trash"></i> Eliminar
                            </button>
                        }
                    </div>

                    <small class="text-muted d-block mt-2">
                        JPG, PNG o GIF (máx. 5MB)
                    </small>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <!-- Información Personal LadoA -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user me-2 text-success"></i>
                        Información Personal - LadoA (Público)
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Nombre Completo <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" asp-for="NombreCompleto" required />
                            <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Nombre de Usuario <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">@@</span>
                                <input type="text" class="form-control" asp-for="UserName" required />
                            </div>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Correo Electrónico <span class="text-danger">*</span></label>
                            <input type="email" class="form-control" asp-for="Email" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Teléfono</label>
                            <input type="tel" class="form-control" asp-for="PhoneNumber" placeholder="+56 9 1234 5678" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label class="form-label">Biografía (LadoA)</label>
                            <textarea class="form-control"
                                      asp-for="Biografia"
                                      rows="3"
                                      maxlength="500"
                                      placeholder="Biografía pública..."></textarea>
                            <small class="text-muted">Máximo 500 caracteres</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Información Personal LadoB -->
            <div class="card shadow-sm mb-4" style="border-left: 4px solid #fbbf24;">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-mask me-2 text-warning"></i>
                        Identidad Premium - LadoB
                    </h5>
                    <small class="text-muted">Información exclusiva para tu contenido premium</small>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">
                                Seudónimo (LadoB)
                                <span class="text-muted" style="font-size: 0.85rem;">
                                    <i class="fas fa-mask"></i> Premium
                                </span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">@@</span>
                                <input type="text" class="form-control" asp-for="Seudonimo" placeholder="Tu alias premium" />
                            </div>
                            <small class="text-muted">Usado para tu identidad premium y contenido exclusivo</small>
                            <span asp-validation-for="Seudonimo" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label class="form-label">
                                Biografía LadoB
                                <span class="text-muted" style="font-size: 0.85rem;">
                                    <i class="fas fa-lock"></i> Solo para suscriptores
                                </span>
                            </label>
                            <textarea class="form-control"
                                      asp-for="BiografiaLadoB"
                                      rows="3"
                                      maxlength="500"
                                      placeholder="Biografía para tu identidad premium..."></textarea>
                            <small class="text-muted">Biografía exclusiva visible solo para tus suscriptores premium</small>
                        </div>

                        <div class="col-12">
                            <div class="alert alert-info d-flex align-items-start">
                                <i class="fas fa-info-circle me-2 mt-1"></i>
                                <div>
                                    <strong>¿Qué es LadoB?</strong>
                                    <p class="mb-0 small">
                                        LadoB es tu identidad premium que te permite mantener separado tu contenido público del exclusivo.
                                        Puedes usar un seudónimo, foto diferente y biografía alternativa para tu contenido premium.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Redes Sociales -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-share-alt me-2"></i>Redes Sociales</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">
                                <i class="fab fa-instagram text-danger"></i> Instagram
                            </label>
                            <input type="text" class="form-control" name="Instagram" placeholder="@@usuario" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">
                                <i class="fab fa-twitter text-info"></i> Twitter/X
                            </label>
                            <input type="text" class="form-control" name="Twitter" placeholder="@@usuario" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">
                                <i class="fab fa-facebook text-primary"></i> Facebook
                            </label>
                            <input type="text" class="form-control" name="Facebook" placeholder="facebook.com/usuario" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">
                                <i class="fab fa-youtube text-danger"></i> YouTube
                            </label>
                            <input type="text" class="form-control" name="YouTube" placeholder="youtube.com/@@usuario" />
                        </div>
                    </div>
                </div>
            </div>

            <!-- Botones de acción -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex gap-2 justify-content-end">
                        <a href="/Usuario/Perfil" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Guardar Cambios
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        // Preview foto LadoA (Público)
        document.getElementById('fotoPerfil').addEventListener('change', function(e) {
            var file = e.target.files[0];
            if (file) {
                // Validar tamaño (5MB max)
                if (file.size > 5 * 1024 * 1024) {
                    alert('La imagen es muy grande. Máximo 5MB permitido.');
                    this.value = '';
                    return;
                }

                // Validar tipo
                if (!file.type.startsWith('image/')) {
                    alert('Solo se permiten archivos de imagen.');
                    this.value = '';
                    return;
                }

                var reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('previewFotoA').innerHTML =
                        '<img src="' + e.target.result + '" class="rounded-circle" ' +
                        'style="width: 120px; height: 120px; object-fit: cover; border: 3px solid #4682B4;" ' +
                        'alt="Preview" />';
                }
                reader.readAsDataURL(file);
            }
        });

        // Preview foto LadoB (Premium)
        document.getElementById('fotoPerfilLadoB').addEventListener('change', function(e) {
            var file = e.target.files[0];
            if (file) {
                // Validar tamaño (5MB max)
                if (file.size > 5 * 1024 * 1024) {
                    alert('La imagen es muy grande. Máximo 5MB permitido.');
                    this.value = '';
                    return;
                }

                // Validar tipo
                if (!file.type.startsWith('image/')) {
                    alert('Solo se permiten archivos de imagen.');
                    this.value = '';
                    return;
                }

                var reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('previewFotoB').innerHTML =
                        '<img src="' + e.target.result + '" class="rounded-circle" ' +
                        'style="width: 120px; height: 120px; object-fit: cover; border: 3px solid #fbbf24;" ' +
                        'alt="Preview" />';
                }
                reader.readAsDataURL(file);
            }
        });

        // Función para eliminar foto
        function eliminarFoto(lado) {
            const mensaje = lado === 'A'
                ? '¿Estás seguro de que deseas eliminar tu foto de perfil pública (LadoA)?'
                : '¿Estás seguro de que deseas eliminar tu foto de perfil premium (LadoB)?';

            if (confirm(mensaje)) {
                window.location.href = '/Usuario/EliminarFoto?lado=' + lado;
            }
        }

        // Mostrar contador de caracteres para biografías
        document.querySelectorAll('textarea[maxlength]').forEach(function(textarea) {
            const maxLength = textarea.getAttribute('maxlength');
            const counterDiv = document.createElement('small');
            counterDiv.className = 'text-muted mt-1 d-block';
            counterDiv.innerHTML = `<span id="${textarea.id}-counter">0</span>/${maxLength} caracteres`;
            textarea.parentNode.appendChild(counterDiv);

            textarea.addEventListener('input', function() {
                const counter = document.getElementById(`${this.id}-counter`);
                if (counter) {
                    counter.textContent = this.value.length;
                }
            });

            // Inicializar contador
            const counter = document.getElementById(`${textarea.id}-counter`);
            if (counter) {
                counter.textContent = textarea.value.length;
            }
        });
    </script>
}

