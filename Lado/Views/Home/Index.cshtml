@{
    ViewData["Title"] = "LADO — Muestra tus dos lados";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    <style>
        :root {
            --primary: #4682B4;
            --primary-dark: #36648B;
            --primary-light: #B0C4DE;
            --bg: #ffffff;
            --fg: #111827;
            --muted: #6b7280;
            --light-bg: #f9fafb;
            --card-bg: #fafafa;
            --line: #e5e7eb;
            --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.06);
            --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.08);
            --shadow-lg: 0 8px 24px rgba(0, 0, 0, 0.12);
            --radius-sm: 10px;
            --radius-md: 16px;
            --radius-lg: 20px;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        html {
            scroll-behavior: smooth;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
            color: var(--fg);
            background: var(--bg);
            line-height: 1.6;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        a {
            text-decoration: none;
            color: inherit;
        }

        /* ============================================
                 NAVBAR
                 ============================================ */
        .nav {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 100;
            background: transparent;
            backdrop-filter: none;
            border-bottom: none;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

            .nav.scrolled {
                background: rgba(255, 255, 255, 0.95);
                backdrop-filter: blur(12px) saturate(180%);
                border-bottom: 1px solid var(--line);
                box-shadow: var(--shadow-sm);
            }

        .nav-inner {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 72px;
            padding: 0 24px;
        }

        .brand {
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: 800;
            font-size: 1.4rem;
            color: var(--fg);
            transition: transform 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        }

            .brand:hover {
                transform: scale(1.02);
            }

        .brand-badge {
            width: 32px;
            height: 32px;
            border-radius: 8px;
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            box-shadow: 0 2px 8px rgba(70, 130, 180, 0.25);
        }

        .menu {
            display: flex;
            gap: 32px;
            align-items: center;
        }

            .menu a {
                font-weight: 600;
                font-size: 15px;
                color: var(--muted);
                transition: color 0.2s ease;
                position: relative;
            }

                .menu a::after {
                    content: '';
                    position: absolute;
                    bottom: -4px;
                    left: 0;
                    width: 0;
                    height: 2px;
                    background: var(--primary);
                    transition: width 0.3s cubic-bezier(0.4, 0, 0.2, 1);
                }

                .menu a:hover {
                    color: var(--fg);
                }

                    .menu a:hover::after {
                        width: 100%;
                    }

        .nav-cta {
            display: flex;
            gap: 12px;
        }

        .btn {
            padding: 10px 20px;
            border-radius: var(--radius-sm);
            font-weight: 700;
            font-size: 14px;
            border: none;
            cursor: pointer;
            transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
            white-space: nowrap;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

            .btn.primary {
                background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
                color: white;
                box-shadow: 0 2px 8px rgba(70, 130, 180, 0.3);
            }

                .btn.primary:hover {
                    transform: translateY(-2px);
                    box-shadow: 0 4px 12px rgba(70, 130, 180, 0.4);
                }

                .btn.primary:active {
                    transform: translateY(0);
                }

            .btn.ghost {
                border: 1.5px solid var(--line);
                background: transparent;
                color: var(--fg);
            }

                .btn.ghost:hover {
                    border-color: var(--primary);
                    background: var(--primary-light);
                }

        /* ============================================
                 HERO CON MOSAICO
                 ============================================ */
        .hero {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            text-align: center;
            padding: 0;
            position: relative;
            overflow: hidden;
            background: #f5f5f5;
        }

        /* Mosaico de fondo - cubre todo */
        .hero-mosaic {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            display: grid;
            gap: 3px;
            z-index: 1;
            pointer-events: none;
            user-select: none;
        }

        .hero-mosaic-item {
            overflow: hidden;
            border-radius: 4px;
            background: #e0e0e0;
            pointer-events: none;
        }

        .hero-mosaic-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0.85;
            pointer-events: none;
            user-select: none;
            -webkit-user-drag: none;
        }

        /* Overlay claro con gradientes */
        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 2;
            pointer-events: none;
        }

        .hero-overlay::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 40%;
            background: linear-gradient(to bottom,
                rgba(255, 255, 255, 1) 0%,
                rgba(255, 255, 255, 0.7) 50%,
                rgba(255, 255, 255, 0) 100%
            );
        }

        .hero-overlay::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 45%;
            background: linear-gradient(to top,
                rgba(255, 255, 255, 1) 0%,
                rgba(255, 255, 255, 0.8) 50%,
                rgba(255, 255, 255, 0) 100%
            );
        }

        .hero-content {
            position: relative;
            z-index: 10;
            max-width: 750px;
            padding: 40px;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(12px);
            border-radius: 24px;
            box-shadow: 0 8px 40px rgba(0, 0, 0, 0.15);
        }

        .hero h1 {
            font-size: clamp(32px, 5vw, 56px);
            font-weight: 800;
            margin: 0 0 16px;
            line-height: 1.15;
            letter-spacing: -0.02em;
            color: var(--primary);
        }

        .hero-subtitle {
            font-size: 1.4rem;
            color: rgba(255, 255, 255, 0.9);
            font-weight: 600;
            margin-bottom: 16px;
            font-style: italic;
            letter-spacing: 0.02em;
        }

        .hero p {
            font-size: 1.1rem;
            color: var(--muted);
            margin-bottom: 28px;
            line-height: 1.6;
        }

        .hero p b {
            color: var(--primary-dark);
            font-weight: 600;
        }

        .actions {
            display: flex;
            gap: 16px;
            justify-content: center;
            flex-wrap: wrap;
            margin-bottom: 24px;
        }

        /* Link explorar */
        .explore-link {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: var(--primary);
            font-size: 14px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            padding: 10px 20px;
            border-radius: 24px;
            background: var(--primary-light);
            border: 1px solid var(--primary);
        }

        .explore-link:hover {
            color: #fff;
            background: var(--primary);
            border-color: var(--primary-dark);
            transform: translateY(-2px);
        }

        .explore-link svg {
            width: 16px;
            height: 16px;
        }

        /* ============================================
                 SECTIONS
                 ============================================ */
        .section {
            padding: 96px 24px;
            background: var(--bg);
        }

            .section.alt {
                background: var(--light-bg);
            }

            .section h2 {
                text-align: center;
                font-size: clamp(32px, 5vw, 48px);
                font-weight: 800;
                margin-bottom: 16px;
                letter-spacing: -0.02em;
            }

            .section p.lead {
                text-align: center;
                color: var(--muted);
                font-size: 1.15rem;
                max-width: 720px;
                margin: 0 auto 64px;
                line-height: 1.7;
            }

        /* ============================================
                 ¿QUÉ ES LADO? GRID
                 ============================================ */
        .que-es-grid {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 32px;
        }

        .que-es-item {
            background: var(--bg);
            border: 1px solid var(--line);
            border-radius: var(--radius-lg);
            padding: 32px 24px;
            text-align: center;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

            .que-es-item:hover {
                transform: translateY(-6px);
                box-shadow: var(--shadow-lg);
                border-color: var(--primary);
            }

        .que-es-icon {
            width: 64px;
            height: 64px;
            background: linear-gradient(135deg, var(--primary-light) 0%, #e0f2fe 100%);
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            color: var(--primary-dark);
        }

        .que-es-item h3 {
            font-size: 1.15rem;
            font-weight: 700;
            margin: 0 0 12px;
            color: var(--fg);
        }

        .que-es-item p {
            color: var(--muted);
            font-size: 0.95rem;
            line-height: 1.6;
            margin: 0;
        }

        /* ============================================
                 DUO GRID
                 ============================================ */
        .duo-grid {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 32px;
            align-items: stretch;
        }

        .duo-card {
            background: var(--card-bg);
            border: 1px solid var(--line);
            border-radius: var(--radius-lg);
            padding: 48px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }

            .duo-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 4px;
                background: linear-gradient(90deg, var(--primary) 0%, var(--primary-dark) 100%);
                transform: scaleX(0);
                transform-origin: left;
                transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            }

            .duo-card:hover {
                transform: translateY(-4px);
                box-shadow: var(--shadow-lg);
            }

                .duo-card:hover::before {
                    transform: scaleX(1);
                }

            .duo-card h3 {
                font-size: 1.75rem;
                font-weight: 700;
                margin: 0 0 16px;
            }

            .duo-card p {
                color: var(--muted);
                font-size: 1.05rem;
                line-height: 1.7;
                margin: 0;
            }

            .duo-card.dark {
                background: #111827;
                border-color: #1f2937;
            }

                .duo-card.dark h3 {
                    color: #f3f4f6;
                }

                .duo-card.dark p {
                    color: #d1d5db;
                }

                .duo-card.dark::before {
                    background: linear-gradient(90deg, var(--primary) 0%, #60efff 100%);
                }

        /* ============================================
                 STEPS
                 ============================================ */
        .steps {
            max-width: 1100px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 32px;
        }

        .step {
            background: var(--primary-light);
            border: 2px solid #b2f0cb;
            border-radius: var(--radius-md);
            padding: 40px 32px;
            text-align: left;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

            .step:hover {
                transform: translateY(-6px);
                box-shadow: var(--shadow-md);
                border-color: var(--primary);
            }

        .num {
            width: 44px;
            height: 44px;
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            color: white;
            font-weight: 800;
            font-size: 1.25rem;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
            margin-bottom: 20px;
            box-shadow: 0 4px 12px rgba(70, 130, 180, 0.3);
        }

        .step h3 {
            font-size: 1.35rem;
            font-weight: 700;
            margin: 0 0 12px;
        }

        .step p {
            color: var(--muted);
            margin: 0;
            line-height: 1.6;
        }

        /* ============================================
                 TRUST/CONFIANZA SECTION
                 ============================================ */
        .trust-grid {
            max-width: 1000px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 24px;
        }

        .trust-item {
            text-align: center;
            padding: 32px 20px;
            background: var(--card-bg);
            border: 1px solid var(--line);
            border-radius: var(--radius-md);
            transition: all 0.3s ease;
        }

        .trust-item:hover {
            transform: translateY(-4px);
            box-shadow: var(--shadow-md);
        }

        .trust-icon {
            width: 56px;
            height: 56px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 16px;
        }

        .trust-icon.verified {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            color: white;
        }

        .trust-icon.active {
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            color: white;
        }

        .trust-icon.original {
            background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
            color: white;
        }

        .trust-icon.clean {
            background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
            color: white;
        }

        .trust-item h3 {
            font-size: 1rem;
            font-weight: 700;
            margin: 0 0 8px;
            color: var(--fg);
        }

        .trust-item p {
            font-size: 0.9rem;
            color: var(--muted);
            margin: 0;
            line-height: 1.5;
        }

        /* ============================================
                 DUALIDAD SECTION
                 ============================================ */
        .dualidad-section {
            background: var(--bg);
        }

        .dualidad-container {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: 480px 1fr;
            gap: 64px;
            align-items: center;
        }

        .dualidad-image {
            position: relative;
        }

            .dualidad-image img {
                width: 100%;
                height: auto;
                border-radius: var(--radius-lg);
                box-shadow: var(--shadow-lg);
            }

        .dualidad-content h2 {
            text-align: left;
            font-size: clamp(32px, 5vw, 48px);
            font-weight: 800;
            margin-bottom: 16px;
            letter-spacing: -0.02em;
        }

        .dualidad-content .lead-text {
            text-align: left;
            font-size: 1.35rem;
            color: var(--primary-dark);
            font-weight: 600;
            margin: 0 0 32px;
            line-height: 1.4;
        }

        .dualidad-text {
            display: flex;
            flex-direction: column;
            gap: 20px;
            margin-bottom: 32px;
        }

            .dualidad-text p {
                font-size: 1.05rem;
                color: var(--muted);
                line-height: 1.7;
                margin: 0;
            }

            .dualidad-text strong {
                color: var(--fg);
                font-weight: 700;
            }

        .dualidad-cta {
            margin-top: 32px;
        }

        /* ============================================
                 FAQ
                 ============================================ */
        .faqs {
            max-width: 800px;
            margin: 0 auto;
            display: grid;
            gap: 16px;
        }

        details {
            border: 1px solid var(--line);
            border-radius: var(--radius-md);
            padding: 20px 24px;
            background: var(--bg);
            cursor: pointer;
            transition: all 0.2s ease;
        }

            details:hover {
                box-shadow: var(--shadow-sm);
            }

            details[open] {
                border-color: var(--primary);
                background: var(--primary-light);
            }

        summary {
            font-weight: 700;
            font-size: 1.05rem;
            cursor: pointer;
            list-style: none;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            summary::-webkit-details-marker {
                display: none;
            }

            summary::after {
                content: '+';
                font-size: 1.5rem;
                font-weight: 300;
                color: var(--primary);
                transition: transform 0.3s ease;
            }

        details[open] summary::after {
            transform: rotate(45deg);
        }

        details p {
            color: var(--muted);
            margin-top: 12px;
            line-height: 1.7;
        }

        /* ============================================
                 CTA
                 ============================================ */
        .cta {
            background: linear-gradient(135deg, #111827 0%, #1f2937 100%);
            color: white;
            padding: 96px 24px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

            .cta::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: radial-gradient(circle at 50% 0%, rgba(70, 130, 180, 0.1) 0%, transparent 50%);
            }

        .cta-content {
            position: relative;
            z-index: 2;
        }

        .cta h2 {
            font-size: clamp(32px, 5vw, 48px);
            margin-bottom: 16px;
            font-weight: 800;
        }

        .cta p {
            opacity: 0.9;
            margin-bottom: 32px;
            font-size: 1.15rem;
        }

        /* ============================================
                 FOOTER
                 ============================================ */
        .footer {
            background: var(--light-bg);
            padding: 72px 24px 32px;
            color: var(--muted);
            border-top: 1px solid var(--line);
        }

        .footer-inner {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: 2fr 1fr 1fr 1fr;
            gap: 48px;
            margin-bottom: 48px;
        }

        .footer-brand {
            display: flex;
            flex-direction: column;
            gap: 16px;
        }

            .footer-brand .brand {
                margin-bottom: 8px;
            }

            .footer-brand p {
                color: var(--muted);
                line-height: 1.6;
            }

        .footer h5 {
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            margin-bottom: 16px;
            color: var(--fg);
            font-weight: 700;
        }

        .footer a {
            color: var(--muted);
            font-weight: 500;
            display: block;
            margin: 8px 0;
            transition: color 0.2s ease;
        }

            .footer a:hover {
                color: var(--primary-dark);
            }

        .copy {
            text-align: center;
            font-size: 0.9rem;
            color: var(--muted);
            padding-top: 32px;
            border-top: 1px solid var(--line);
        }

        .developer-credit {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            margin-top: 24px;
            padding-top: 24px;
            border-top: 1px solid var(--line);
        }

        .developer-credit span {
            font-size: 0.8rem;
            color: var(--muted);
            font-weight: 500;
        }

        .developer-credit a {
            display: flex;
            align-items: center;
            transition: transform 0.2s ease, opacity 0.2s ease;
        }

        .developer-credit a:hover {
            transform: scale(1.05);
            opacity: 0.9;
        }

        .developer-credit img {
            height: 32px;
            width: auto;
        }

        /* ============================================
                 RESPONSIVE
                 ============================================ */
        @@media (max-width: 900px) {
            .nav-inner {
                height: 64px;
            }

            .menu {
                display: none;
            }

            .nav-cta {
                gap: 8px;
            }

            .nav-cta .btn {
                padding: 8px 14px;
                font-size: 13px;
            }

            .hero-content {
                max-width: 90%;
                padding: 32px;
            }

            .hero h1 {
                font-size: 32px;
            }

            .hero p {
                font-size: 1rem;
            }

            .que-es-grid {
                grid-template-columns: repeat(2, 1fr);
                gap: 24px;
            }

            .duo-grid {
                grid-template-columns: 1fr;
                gap: 24px;
            }

            .duo-card {
                padding: 32px;
            }

            .steps {
                grid-template-columns: 1fr;
            }

            .dualidad-container {
                grid-template-columns: 1fr;
                gap: 40px;
            }

            .dualidad-image {
                max-width: 400px;
                margin: 0 auto;
            }

            .dualidad-content h2,
            .dualidad-content .lead-text {
                text-align: center;
            }

            .trust-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .footer-inner {
                grid-template-columns: 1fr 1fr;
                gap: 32px;
            }

            .actions {
                flex-direction: column;
            }

            .btn {
                width: 100%;
            }
        }

        @@media (max-width: 600px) {
            .nav-inner {
                height: 56px;
                padding: 0 12px;
            }

            .brand img {
                height: 44px !important;
            }

            .nav-cta {
                gap: 6px;
            }

            /* Ocultar boton Explorar en movil pequeno */
            .nav-cta .btn.ghost:first-child {
                display: none;
            }

            .nav-cta .btn {
                padding: 7px 12px;
                font-size: 12px;
                border-radius: 8px;
            }

            .nav-cta .btn.ghost {
                border-width: 1px;
            }

            .hero-content {
                max-width: 95%;
                padding: 24px;
                border-radius: 16px;
            }

            .hero h1 {
                font-size: 26px;
            }

            .hero p {
                font-size: 0.95rem;
                margin-bottom: 20px;
            }

            .actions {
                flex-direction: column;
                gap: 10px;
            }

