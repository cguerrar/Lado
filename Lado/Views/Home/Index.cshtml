    <!-- Toast Notification para mensajes -->
    <div id="homeToast" style="position: fixed; top: 20px; right: 20px; padding: 16px 24px; border-radius: 12px; background: #1a1a2e; color: white; box-shadow: 0 8px 24px rgba(0,0,0,0.2); z-index: 10000; display: none; max-width: 350px; font-size: 14px;">
        <span id="homeToastMessage"></span>
    </div>

    <script>
        // Navbar scroll effect
        const navbar = document.getElementById('navbar');
        window.addEventListener('scroll', () => {
            if (window.scrollY > 10) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });

        // Toast notification function
        function showHomeToast(message, type) {
            const toast = document.getElementById('homeToast');
            const toastMsg = document.getElementById('homeToastMessage');
            toastMsg.textContent = message;

            // Color según tipo
            if (type === 'error') {
                toast.style.background = '#dc3545';
            } else if (type === 'warning') {
                toast.style.background = '#ffc107';
                toast.style.color = '#1a1a2e';
            } else {
                toast.style.background = '#1a1a2e';
            }

            toast.style.display = 'block';
            setTimeout(() => { toast.style.display = 'none'; }, 4000);
        }

        // Mostrar TempData al cargar
        @if (TempData["Success"] != null)
        {
            <text>showHomeToast(@System.Text.Json.JsonSerializer.Serialize(TempData["Success"]?.ToString() ?? ""), 'success');</text>
        }
        @if (TempData["Error"] != null)
        {
            <text>showHomeToast(@System.Text.Json.JsonSerializer.Serialize(TempData["Error"]?.ToString() ?? ""), 'error');</text>
        }
        @if (TempData["Warning"] != null)
        {
            <text>showHomeToast(@System.Text.Json.JsonSerializer.Serialize(TempData["Warning"]?.ToString() ?? ""), 'warning');</text>
        }
        @if (TempData["Info"] != null)
        {
            <text>showHomeToast(@System.Text.Json.JsonSerializer.Serialize(TempData["Info"]?.ToString() ?? ""), 'info');</text>
        }

        // Configurar mosaico para cubrir todo el hero
        (function() {
            const grid = document.getElementById('heroMosaic');
            if (!grid) return;

            const items = grid.querySelectorAll('.hero-mosaic-item');
            if (items.length === 0) return;

            function setupGrid() {
                const vw = window.innerWidth;
                const vh = window.innerHeight;
                const gap = 3;

                // Calcular tamaño de celda basado en viewport
                let itemSize;
                if (vw > 1200) {
                    itemSize = 120;
                } else if (vw > 768) {
                    itemSize = 100;
                } else if (vw > 480) {
                    itemSize = 80;
                } else {
                    itemSize = 70;
                }

                // Calcular columnas y filas para cubrir todo el viewport
                const cols = Math.ceil(vw / (itemSize + gap)) + 1;
                const rows = Math.ceil(vh / (itemSize + gap)) + 1;

                grid.style.gridTemplateColumns = `repeat(${cols}, ${itemSize}px)`;
                grid.style.gridTemplateRows = `repeat(${rows}, ${itemSize}px)`;
                grid.style.gap = `${gap}px`;

                const maxItems = cols * rows;
                items.forEach((item, index) => {
                    item.style.display = index < maxItems ? 'block' : 'none';
                });
            }

            setupGrid();
            window.addEventListener('resize', setupGrid);
        })();
    </script>
