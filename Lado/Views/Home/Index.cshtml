@{
    ViewData["Title"] = "LADO — La red social para creadores";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <meta name="description" content="La plataforma más completa para creadores de contenido. Gratis para empezar. Todo lo de Instagram + todo lo de OnlyFans en un solo lugar." />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <style>
        :root {
            --primary: #4682B4;
            --primary-dark: #36648B;
            --primary-light: #B0C4DE;
            --primary-gradient: linear-gradient(135deg, #4682B4 0%, #36648B 100%);
            --bg: #ffffff;
            --fg: #111827;
            --muted: #6b7280;
            --light-bg: #f9fafb;
            --card-bg: #fafafa;
            --line: #e5e7eb;
            --success: #10b981;
            --warning: #f59e0b;
            --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.06);
            --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.08);
            --shadow-lg: 0 8px 24px rgba(0, 0, 0, 0.12);
            --shadow-xl: 0 20px 40px rgba(0, 0, 0, 0.15);
            --radius-sm: 10px;
            --radius-md: 16px;
            --radius-lg: 20px;
            --radius-xl: 28px;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        html {
            scroll-behavior: smooth;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
            color: var(--fg);
            background: var(--bg);
            line-height: 1.6;
            -webkit-font-smoothing: antialiased;
        }

        a {
            text-decoration: none;
            color: inherit;
        }

        /* ============================================
           NAVBAR
           ============================================ */
        .nav {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 100;
            background: transparent;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .nav.scrolled {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(12px) saturate(180%);
            border-bottom: 1px solid var(--line);
            box-shadow: var(--shadow-sm);
        }

        .nav-inner {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 72px;
            padding: 0 24px;
        }

        .brand {
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: 800;
            font-size: 1.4rem;
            color: var(--fg);
            transition: transform 0.2s;
        }

        .brand:hover {
            transform: scale(1.02);
        }

        .menu {
            display: flex;
            gap: 32px;
            align-items: center;
        }

        .menu a {
            font-weight: 600;
            font-size: 15px;
            color: var(--muted);
            transition: color 0.2s ease;
            position: relative;
        }

        .menu a::after {
            content: '';
            position: absolute;
            bottom: -4px;
            left: 0;
            width: 0;
            height: 2px;
            background: var(--primary);
            transition: width 0.3s;
        }

        .menu a:hover {
            color: var(--fg);
        }

        .menu a:hover::after {
            width: 100%;
        }

        .nav-cta {
            display: flex;
            gap: 12px;
        }

        .btn {
            padding: 10px 20px;
            border-radius: var(--radius-sm);
            font-weight: 700;
            font-size: 14px;
            border: none;
            cursor: pointer;
            transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
            white-space: nowrap;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .btn.primary {
            background: var(--primary-gradient);
            color: white;
            box-shadow: 0 2px 8px rgba(70, 130, 180, 0.3);
        }

        .btn.primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 16px rgba(70, 130, 180, 0.4);
        }

        .btn.ghost {
            border: 1.5px solid var(--line);
            background: transparent;
            color: var(--fg);
        }

        .btn.ghost:hover {
            border-color: var(--primary);
            background: var(--primary-light);
        }

        .btn.large {
            padding: 14px 28px;
            font-size: 16px;
            border-radius: var(--radius-md);
        }

        /* ============================================
           HERO
           ============================================ */
        .hero {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            text-align: center;
            padding: 100px 24px 60px;
            position: relative;
            overflow: hidden;
            background: linear-gradient(180deg, #f8fafc 0%, #ffffff 100%);
        }

        .hero-mosaic {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            display: grid;
            gap: 3px;
            z-index: 1;
            pointer-events: none;
            opacity: 0.6;
        }

        .hero-mosaic-item {
            overflow: hidden;
            border-radius: 4px;
            background: #e0e0e0;
        }

        .hero-mosaic-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0.7;
        }

        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 2;
            background: linear-gradient(180deg,
                rgba(255,255,255,0.95) 0%,
                rgba(255,255,255,0.85) 30%,
                rgba(255,255,255,0.9) 70%,
                rgba(255,255,255,1) 100%
            );
        }

        .hero-content {
            position: relative;
            z-index: 10;
            max-width: 900px;
        }

        .hero-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: linear-gradient(135deg, #dcfce7 0%, #d1fae5 100%);
            color: #065f46;
            padding: 8px 16px;
            border-radius: 50px;
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 24px;
            border: 1px solid #a7f3d0;
        }

        .hero-badge i {
            color: #10b981;
        }

        .hero h1 {
            font-size: clamp(36px, 6vw, 64px);
            font-weight: 900;
            margin: 0 0 20px;
            line-height: 1.1;
            letter-spacing: -0.03em;
            color: var(--fg);
        }

        .hero h1 span {
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .hero-subtitle {
            font-size: clamp(18px, 3vw, 24px);
            color: var(--muted);
            margin-bottom: 16px;
            font-weight: 500;
        }

        .hero-subtitle b {
            color: var(--fg);
            font-weight: 700;
        }

        .hero-description {
            font-size: 18px;
            color: var(--muted);
            margin-bottom: 36px;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
            line-height: 1.7;
        }

        .hero-actions {
            display: flex;
            gap: 16px;
            justify-content: center;
            flex-wrap: wrap;
            margin-bottom: 40px;
        }

        .hero-stats {
            display: flex;
            gap: 48px;
            justify-content: center;
            flex-wrap: wrap;
            padding-top: 40px;
            border-top: 1px solid var(--line);
        }

        .hero-stat {
            text-align: center;
        }

        .hero-stat-value {
            font-size: 32px;
            font-weight: 800;
            color: var(--primary);
            display: block;
        }

        .hero-stat-label {
            font-size: 14px;
            color: var(--muted);
            font-weight: 500;
        }

        /* ============================================
           SECTIONS
           ============================================ */
        .section {
            padding: 100px 24px;
            background: var(--bg);
        }

        .section.alt {
            background: var(--light-bg);
        }

        .section.dark {
            background: linear-gradient(135deg, #111827 0%, #1f2937 100%);
            color: white;
        }

        .section-header {
            text-align: center;
            max-width: 800px;
            margin: 0 auto 64px;
        }

        .section-tag {
            display: inline-block;
            background: var(--primary-light);
            color: var(--primary-dark);
            padding: 6px 14px;
            border-radius: 50px;
            font-size: 13px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 16px;
        }

        .section.dark .section-tag {
            background: rgba(70, 130, 180, 0.2);
            color: var(--primary-light);
        }

        .section h2 {
            font-size: clamp(32px, 5vw, 48px);
            font-weight: 800;
            margin-bottom: 16px;
            letter-spacing: -0.02em;
            line-height: 1.2;
        }

        .section p.lead {
            color: var(--muted);
            font-size: 1.15rem;
            line-height: 1.7;
        }

        .section.dark p.lead {
            color: rgba(255,255,255,0.7);
        }

        /* ============================================
           FEATURES GRID - Todo incluido
           ============================================ */
        .features-grid {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 24px;
        }

        .feature-card {
            background: var(--bg);
            border: 1px solid var(--line);
            border-radius: var(--radius-lg);
            padding: 28px 24px;
            text-align: center;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
        }

        .feature-card:hover {
            transform: translateY(-6px);
            box-shadow: var(--shadow-lg);
            border-color: var(--primary);
        }

        .feature-card.highlight {
            background: linear-gradient(135deg, rgba(70, 130, 180, 0.05) 0%, rgba(70, 130, 180, 0.1) 100%);
            border-color: var(--primary);
        }

        .feature-card.highlight::before {
            content: 'NUEVO';
            position: absolute;
            top: 12px;
            right: 12px;
            background: var(--primary);
            color: white;
            font-size: 10px;
            font-weight: 700;
            padding: 3px 8px;
            border-radius: 4px;
        }

        .feature-icon {
            width: 56px;
            height: 56px;
            background: linear-gradient(135deg, var(--primary-light) 0%, #e0f2fe 100%);
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 16px;
            font-size: 24px;
            color: var(--primary-dark);
        }

        .feature-card h3 {
            font-size: 1rem;
            font-weight: 700;
            margin: 0 0 8px;
            color: var(--fg);
        }

        .feature-card p {
            color: var(--muted);
            font-size: 0.9rem;
            line-height: 1.5;
            margin: 0;
        }

        /* ============================================
           COMPARISON TABLE
           ============================================ */
        .comparison-container {
            max-width: 1000px;
            margin: 0 auto;
            overflow-x: auto;
        }

        .comparison-table {
            width: 100%;
            border-collapse: collapse;
            background: var(--bg);
            border-radius: var(--radius-lg);
            overflow: hidden;
            box-shadow: var(--shadow-lg);
        }

        .comparison-table th,
        .comparison-table td {
            padding: 20px 24px;
            text-align: center;
            border-bottom: 1px solid var(--line);
        }

        .comparison-table th {
            background: var(--light-bg);
            font-weight: 700;
            font-size: 14px;
            color: var(--muted);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .comparison-table th.lado-col {
            background: var(--primary);
            color: white;
        }

        .comparison-table td:first-child {
            text-align: left;
            font-weight: 600;
            color: var(--fg);
        }

        .comparison-table td.lado-col {
            background: rgba(70, 130, 180, 0.05);
        }

        .comparison-table tr:last-child td {
            border-bottom: none;
        }

        .check {
            color: var(--success);
            font-size: 20px;
        }

        .cross {
            color: #ef4444;
            font-size: 20px;
        }

        .partial {
            color: var(--warning);
            font-size: 14px;
            font-weight: 600;
        }

        /* ============================================
           AUDIENCE SECTION - Para quien es
           ============================================ */
        .audience-grid {
            max-width: 1100px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 24px;
        }

        .audience-card {
            background: var(--bg);
            border: 1px solid var(--line);
            border-radius: var(--radius-lg);
            padding: 32px;
            text-align: center;
            transition: all 0.3s;
        }

        .audience-card:hover {
            transform: translateY(-4px);
            box-shadow: var(--shadow-lg);
            border-color: var(--primary);
        }

        .audience-icon {
            width: 72px;
            height: 72px;
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            font-size: 32px;
            color: white;
            box-shadow: 0 8px 20px rgba(70, 130, 180, 0.3);
        }

        .audience-card h3 {
            font-size: 1.25rem;
            font-weight: 700;
            margin: 0 0 12px;
            color: var(--fg);
        }

        .audience-card p {
            color: var(--muted);
            font-size: 0.95rem;
            line-height: 1.6;
            margin: 0;
        }

        /* ============================================
           DUO CARDS - LadoA/LadoB
           ============================================ */
        .duo-container {
            max-width: 1100px;
            margin: 0 auto;
        }

        .duo-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 32px;
        }

        .duo-card {
            border-radius: var(--radius-xl);
            padding: 48px 40px;
            position: relative;
            overflow: hidden;
        }

        .duo-card.light {
            background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
            border: 2px solid var(--line);
        }

        .duo-card.dark {
            background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
            color: white;
        }

        .duo-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 8px 16px;
            border-radius: 50px;
            font-size: 13px;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .duo-card.light .duo-badge {
            background: var(--primary-light);
            color: var(--primary-dark);
        }

        .duo-card.dark .duo-badge {
            background: rgba(139, 92, 246, 0.2);
            color: #c4b5fd;
        }

        .duo-card h3 {
            font-size: 1.75rem;
            font-weight: 800;
            margin: 0 0 16px;
        }

        .duo-card .subtitle {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 20px;
            opacity: 0.9;
        }

        .duo-card.light .subtitle {
            color: var(--primary);
        }

        .duo-card.dark .subtitle {
            color: #a78bfa;
        }

        .duo-card p {
            font-size: 1rem;
            line-height: 1.7;
            margin-bottom: 24px;
        }

        .duo-card.light p {
            color: var(--muted);
        }

        .duo-card.dark p {
            color: rgba(255,255,255,0.7);
        }

        .duo-features {
            list-style: none;
        }

        .duo-features li {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 10px 0;
            font-size: 15px;
        }

        .duo-features li i {
            width: 20px;
            color: var(--success);
        }

        .duo-card.dark .duo-features li {
            color: rgba(255,255,255,0.9);
        }

        /* ============================================
           TRUST GRID
           ============================================ */
        .trust-grid {
            max-width: 1000px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 24px;
        }

        .trust-item {
            text-align: center;
            padding: 32px 20px;
            background: rgba(255,255,255,0.05);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: var(--radius-md);
            transition: all 0.3s;
        }

        .trust-item:hover {
            transform: translateY(-4px);
            background: rgba(255,255,255,0.08);
        }

        .trust-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 16px;
            font-size: 26px;
        }

        .trust-icon.verified { background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; }
        .trust-icon.active { background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); color: white; }
        .trust-icon.original { background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); color: white; }
        .trust-icon.clean { background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%); color: white; }

        .trust-item h3 {
            font-size: 1rem;
            font-weight: 700;
            margin: 0 0 8px;
            color: white;
        }

        .trust-item p {
            font-size: 0.9rem;
            color: rgba(255,255,255,0.6);
            margin: 0;
            line-height: 1.5;
        }

        /* ============================================
           STEPS
           ============================================ */
        .steps-container {
            max-width: 900px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 32px;
            position: relative;
        }

        .steps-container::before {
            content: '';
            position: absolute;
            top: 40px;
            left: 15%;
            right: 15%;
            height: 2px;
            background: var(--line);
            z-index: 0;
        }

        .step {
            text-align: center;
            position: relative;
            z-index: 1;
        }

        .step-number {
            width: 80px;
            height: 80px;
            background: var(--primary-gradient);
            color: white;
            font-size: 32px;
            font-weight: 800;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            margin: 0 auto 24px;
            box-shadow: 0 8px 24px rgba(70, 130, 180, 0.3);
        }

        .step h3 {
            font-size: 1.25rem;
            font-weight: 700;
            margin: 0 0 12px;
            color: var(--fg);
        }

        .step p {
            color: var(--muted);
            font-size: 0.95rem;
            line-height: 1.6;
            margin: 0;
        }

        /* ============================================
           CTA
           ============================================ */
        .cta {
            background: var(--primary-gradient);
            color: white;
            padding: 100px 24px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .cta::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
            opacity: 0.5;
        }

        .cta-content {
            position: relative;
            z-index: 2;
            max-width: 700px;
            margin: 0 auto;
        }

        .cta h2 {
            font-size: clamp(32px, 5vw, 48px);
            margin-bottom: 16px;
            font-weight: 800;
        }

        .cta p {
            opacity: 0.9;
            margin-bottom: 32px;
            font-size: 1.2rem;
        }

        .cta .btn {
            background: white;
            color: var(--primary-dark);
            padding: 16px 32px;
            font-size: 17px;
        }

        .cta .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 24px rgba(0,0,0,0.2);
        }

        /* ============================================
           FOOTER
           ============================================ */
        .footer {
            background: #111827;
            padding: 72px 24px 32px;
            color: rgba(255,255,255,0.6);
        }

        .footer-inner {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: 2fr 1fr 1fr 1fr;
            gap: 48px;
            margin-bottom: 48px;
        }

        .footer-brand p {
            color: rgba(255,255,255,0.5);
            line-height: 1.6;
            margin-top: 16px;
        }

        .footer h5 {
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            margin-bottom: 16px;
            color: white;
            font-weight: 700;
        }

        .footer a {
            color: rgba(255,255,255,0.6);
            font-weight: 500;
            display: block;
            margin: 10px 0;
            transition: color 0.2s ease;
        }

        .footer a:hover {
            color: var(--primary-light);
        }

        .footer-bottom {
            text-align: center;
            padding-top: 32px;
            border-top: 1px solid rgba(255,255,255,0.1);
        }

        .copy {
            font-size: 0.9rem;
            color: rgba(255,255,255,0.4);
        }

        .developer-credit {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            margin-top: 24px;
        }

        .developer-credit span {
            font-size: 0.8rem;
            color: rgba(255,255,255,0.4);
        }

        .developer-credit img {
            height: 32px;
            opacity: 0.7;
            transition: opacity 0.2s;
        }

        .developer-credit a:hover img {
            opacity: 1;
        }

        /* ============================================
           RESPONSIVE
           ============================================ */
        @@media (max-width: 1024px) {
            .features-grid {
                grid-template-columns: repeat(2, 1fr);
