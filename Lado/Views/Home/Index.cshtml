@{
    ViewData["Title"] = "Lado - Monetiza tu Contenido Exclusivo";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lado - Monetiza tu Contenido Exclusivo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #00bcd4;
            --primary-dark: #0288d1;
            --dark-bg: #0a1929;
            --light-bg: #f8f9fa;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* NAVBAR MEJORADA */
        .navbar {
            padding: 1.2rem 0;
            box-shadow: 0 2px 15px rgba(0,0,0,0.06);
            position: sticky;
            top: 0;
            z-index: 1000;
            background: white !important;
            transition: all 0.3s;
        }

        .navbar-brand {
            font-size: 1.75rem;
            font-weight: 800;
            color: var(--primary-color) !important;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: transform 0.3s;
        }

            .navbar-brand:hover {
                transform: scale(1.05);
            }

            .navbar-brand i {
                font-size: 2rem;
            }

        .navbar-nav {
            gap: 1.5rem;
            align-items: center;
        }

        .nav-link {
            font-weight: 600;
            color: #555 !important;
            transition: all 0.3s;
            font-size: 0.95rem;
            position: relative;
        }

            .nav-link::after {
                content: '';
                position: absolute;
                bottom: -5px;
                left: 0;
                width: 0;
                height: 2px;
                background: var(--primary-color);
                transition: width 0.3s;
            }

            .nav-link:hover {
                color: var(--primary-color) !important;
            }

                .nav-link:hover::after {
                    width: 100%;
                }

        .btn-login {
            background: transparent;
            color: #555 !important;
            border: none;
            padding: 10px 24px;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s;
            font-size: 0.95rem;
        }

            .btn-login:hover {
                background: #f5f5f5;
                color: var(--primary-color) !important;
            }

        .btn-register {
            background: var(--primary-color);
            color: white !important;
            padding: 12px 32px;
            border-radius: 10px;
            border: none;
            font-weight: 700;
            transition: all 0.3s;
            box-shadow: 0 4px 15px rgba(0,188,212,0.3);
            font-size: 0.95rem;
        }

            .btn-register:hover {
                background: var(--primary-dark);
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(0,188,212,0.4);
            }

        /* SELECTOR DE PAÍS */
        .country-selector {
            position: relative;
        }

        .country-btn {
            background: transparent;
            border: 2px solid #e0e0e0;
            padding: 8px 16px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            gap: 10px;
            cursor: pointer;
            transition: all 0.3s;
            font-weight: 600;
            color: #555;
            font-size: 0.9rem;
        }

            .country-btn:hover {
                border-color: var(--primary-color);
                color: var(--primary-color);
            }

        .country-flag {
            width: 28px;
            height: 21px;
            display: inline-block;
            border-radius: 3px;
            overflow: hidden;
            flex-shrink: 0;
            object-fit: cover;
            border: 1px solid rgba(0,0,0,0.1);
        }

        .country-dropdown {
            position: absolute;
            top: 120%;
            right: 0;
            background: white;
            border-radius: 12px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.15);
            min-width: 220px;
            display: none;
            z-index: 1000;
            overflow: hidden;
        }

            .country-dropdown.show {
                display: block;
                animation: fadeInDown 0.3s;
            }

        .country-option {
            padding: 14px 20px;
            cursor: pointer;
            transition: all 0.2s;
            display: flex;
            align-items: center;
            gap: 15px;
            border-bottom: 1px solid #f0f0f0;
        }

            .country-option:last-child {
                border-bottom: none;
            }

            .country-option:hover {
                background: var(--light-bg);
                color: var(--primary-color);
                padding-left: 25px;
            }

            .country-option img {
                width: 28px;
                height: 21px;
                border-radius: 3px;
                flex-shrink: 0;
                object-fit: cover;
                border: 1px solid rgba(0,0,0,0.1);
            }

            .country-option span:last-child {
                font-weight: 600;
                font-size: 0.95rem;
            }

            .country-option.active {
                background: var(--primary-color);
                color: white;
            }

        @@keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* HERO SECTION */
        .hero-section {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            color: white;
            padding: 120px 0 100px;
            text-align: center;
        }

        .hero-badge {
            background: rgba(255,255,255,0.2);
            backdrop-filter: blur(10px);
            padding: 8px 20px;
            border-radius: 30px;
            display: inline-block;
            margin-bottom: 30px;
            font-weight: 600;
        }

        .hero-title {
            font-size: 3.5rem;
            font-weight: 800;
            margin-bottom: 25px;
            line-height: 1.2;
        }

        .hero-subtitle {
            font-size: 1.25rem;
            margin-bottom: 40px;
            opacity: 0.95;
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
        }

        .btn-hero-primary {
            background: white;
            color: var(--primary-color);
            padding: 16px 45px;
            font-size: 1.1rem;
            border-radius: 50px;
            border: none;
            font-weight: 600;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }

            .btn-hero-primary:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 30px rgba(0,0,0,0.2);
                color: var(--primary-color);
            }

        .btn-hero-secondary {
            background: transparent;
            color: white;
            padding: 16px 45px;
            font-size: 1.1rem;
            border-radius: 50px;
            border: 2px solid white;
            font-weight: 600;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }

            .btn-hero-secondary:hover {
                background: white;
                color: var(--primary-color);
            }

        /* STATS */
        .stats-section {
            background: white;
            padding: 80px 0;
        }

        .stat-card {
            text-align: center;
            padding: 30px;
        }

        .stat-number {
            font-size: 2.8rem;
            font-weight: 800;
            color: var(--primary-color);
            margin-bottom: 10px;
        }

        .stat-label {
            color: #666;
            font-size: 1rem;
            font-weight: 500;
        }

        /* TECH SECURITY - Compacto */
        .tech-badges {
            display: flex;
            gap: 30px;
            align-items: center;
            justify-content: center;
            flex-wrap: wrap;
            padding: 25px 0;
            border-top: 1px solid rgba(255,255,255,0.1);
            border-bottom: 1px solid rgba(255,255,255,0.1);
            margin: 20px 0;
            background: rgba(255,255,255,0.02);
            border-radius: 10px;
        }

        .tech-badge-item {
            display: flex;
            align-items: center;
            gap: 10px;
            color: #aaa;
            font-size: 0.95rem;
            font-weight: 500;
            padding: 8px 15px;
            background: rgba(255,255,255,0.05);
            border-radius: 8px;
            transition: all 0.3s;
        }

            .tech-badge-item:hover {
                background: rgba(0,188,212,0.1);
                color: var(--primary-color);
            }

            .tech-badge-item i {
                color: var(--primary-color);
                font-size: 1.3rem;
            }

        /* FEATURES */
        .features-section {
            padding: 100px 0;
            background: var(--light-bg);
        }

        .section-header {
            text-align: center;
            margin-bottom: 70px;
        }

        .section-title {
            font-size: 2.8rem;
            font-weight: 800;
            margin-bottom: 20px;
            color: #1a1a1a;
        }

        .section-subtitle {
            font-size: 1.2rem;
            color: #666;
            max-width: 600px;
            margin: 0 auto;
        }

        .feature-card {
            text-align: center;
            padding: 40px 30px;
            background: white;
            border-radius: 20px;
            margin-bottom: 30px;
            transition: all 0.3s;
            border: 2px solid transparent;
            height: 100%;
        }

            .feature-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 40px rgba(0,0,0,0.08);
                border-color: var(--primary-color);
            }

        .feature-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            margin: 0 auto 25px;
        }

        .feature-card h4 {
            font-size: 1.4rem;
            font-weight: 700;
            margin-bottom: 15px;
            color: #1a1a1a;
        }

        .feature-card p {
            color: #666;
            line-height: 1.6;
            margin: 0;
        }

        /* PRICING */
        .pricing-section {
            padding: 100px 0;
            background: white;
        }

        .price-card {
            background: white;
            border-radius: 25px;
            padding: 50px 40px;
            text-align: center;
            transition: all 0.3s;
            border: 3px solid #e0e0e0;
            height: 100%;
            position: relative;
        }

            .price-card.featured {
                border-color: var(--primary-color);
                box-shadow: 0 20px 60px rgba(0,188,212,0.2);
                transform: scale(1.05);
            }

        .price-badge {
            background: #ffd700;
            color: #000;
            padding: 6px 18px;
            border-radius: 25px;
            font-size: 0.85rem;
            font-weight: 700;
            display: inline-block;
            margin-bottom: 20px;
            text-transform: uppercase;
        }

        .price-card h3 {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .price {
            font-size: 3.5rem;
            font-weight: 800;
            color: var(--primary-color);
            margin-bottom: 10px;
        }

        .price-desc {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--primary-color);
            margin-bottom: 10px;
        }

        .price-card ul {
            text-align: left;
            margin: 30px 0;
        }

            .price-card ul li {
                padding: 12px 0;
                border-bottom: 1px solid #f0f0f0;
            }

                .price-card ul li:last-child {
                    border-bottom: none;
                }

        /* CTA */
        .cta-section {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            color: white;
            padding: 100px 0;
            text-align: center;
        }

            .cta-section h2 {
                font-size: 3rem;
                font-weight: 800;
                margin-bottom: 25px;
            }

        /* FOOTER */
        footer {
            background: var(--dark-bg);
            color: white;
            padding: 60px 0 30px;
        }

            footer h5 {
                font-weight: 700;
                margin-bottom: 25px;
                color: white;
                font-size: 1.1rem;
                position: relative;
                padding-bottom: 10px;
            }

                footer h5::after {
                    content: '';
                    position: absolute;
                    bottom: 0;
                    left: 0;
                    width: 40px;
                    height: 3px;
                    background: var(--primary-color);
                }

        .footer-section {
            margin-bottom: 30px;
        }

        .footer-logo {
            display: flex;
            align-items: center;
        }

        .footer-links {
            display: flex;
            flex-direction: column;
        }

            .footer-links a {
                color: #aaa;
                text-decoration: none;
                margin-bottom: 12px;
                transition: all 0.3s;
                display: flex;
                align-items: center;
                font-size: 0.95rem;
            }

                .footer-links a:hover {
                    color: var(--primary-color);
                    padding-left: 8px;
                }

                .footer-links a i {
                    font-size: 0.9rem;
                    opacity: 0.7;
                }

        .social-links a {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background: rgba(255,255,255,0.1);
            color: white;
            margin: 0 6px;
            transition: all 0.3s;
            font-size: 1.2rem;
        }

            .social-links a:hover {
                background: var(--primary-color);
                transform: translateY(-5px);
                box-shadow: 0 5px 15px rgba(0,188,212,0.4);
            }

        /* RESPONSIVE */
        @@media (max-width: 991px) {
            .navbar-nav {
                gap: 0;
                margin-top: 20px;
            }

            .nav-item {
                margin: 10px 0;
            }

            .btn-login, .btn-register {
                width: 100%;
                margin: 5px 0 !important;
            }

            .country-btn {
                width: 100%;
                justify-content: center;
            }

            .hero-title {
                font-size: 2.5rem;
            }

            .section-title {
                font-size: 2rem;
            }

            .price-card.featured {
                transform: scale(1);
                margin-bottom: 30px;
            }

            .country-dropdown {
                right: 0;
                left: 0;
            }

            .tech-badges {
                gap: 15px;
                padding: 20px 10px;
            }

            .tech-badge-item {
                font-size: 0.85rem;
                padding: 6px 12px;
            }

                .tech-badge-item i {
                    font-size: 1.1rem;
                }

            footer h5::after {
                left: 50%;
                transform: translateX(-50%);
            }

            .footer-logo {
                justify-content: center;
            }

            footer .row.g-5 {
                text-align: center;
            }

            .footer-links a {
                justify-content: center;
            }

                .footer-links a:hover {
                    padding-left: 0;
                }
        }
    </style>
</head>
<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-fire"></i>
                <span>Lado</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#caracteristicas" data-i18n="nav.features">Características</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#precios" data-i18n="nav.pricing">Precios</a>
                    </li>
                    <li class="nav-item country-selector">
                        <div class="country-btn" onclick="toggleCountryDropdown()">
                            <img src="https://flagcdn.com/w40/cl.png" alt="Chile" class="country-flag" id="selectedFlag">
