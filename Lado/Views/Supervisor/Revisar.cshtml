<!-- Form oculto para aprobar -->
<form id="formAprobar" asp-action="Aprobar" method="post" style="display:none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="colaId" value="@Model.Id">
    <input type="hidden" name="tiempoSegundos" id="tiempoAprobar">
</form>

<!-- Form oculto para liberar -->
<form id="formLiberar" asp-action="Liberar" method="post" style="display:none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="colaId" value="@Model.Id">
</form>

@section Scripts {
<script>
    // Timer
    let segundos = 0;
    const timerInterval = setInterval(() => {
        segundos++;
        const mins = Math.floor(segundos / 60).toString().padStart(2, '0');
        const secs = (segundos % 60).toString().padStart(2, '0');
        document.getElementById('timerValue').textContent = `${mins}:${secs}`;
    }, 1000);

    // Galeria
    let mediaIndex = 0;
    const thumbs = document.querySelectorAll('.gallery-thumb');

    function cambiarMedia(delta) {
        mediaIndex += delta;
        if (mediaIndex < 0) mediaIndex = thumbs.length - 1;
        if (mediaIndex >= thumbs.length) mediaIndex = 0;
        irAMedia(mediaIndex);
    }

    function irAMedia(index) {
        mediaIndex = index;
        const thumb = thumbs[index];
        const viewer = document.getElementById('mediaViewer');
        const src = thumb.dataset.src;
        const type = thumb.dataset.type;

        if (type === 'video') {
            const video = document.createElement('video');
            video.id = 'mediaViewer';
            video.src = src;
            video.controls = true;
            video.autoplay = true;
            video.muted = true;
            video.loop = true;
            viewer.replaceWith(video);
        } else {
            const img = document.createElement('img');
            img.id = 'mediaViewer';
            img.src = src;
            viewer.replaceWith(img);
        }

        thumbs.forEach(t => t.classList.remove('active'));
        thumb.classList.add('active');
    }

    // Modales
    function mostrarModalRechazo() {
        document.getElementById('tiempoRechazo').value = segundos;
        document.getElementById('modalRechazo').classList.add('active');
    }

    function mostrarModalCensura() {
        document.getElementById('tiempoCensura').value = segundos;
        document.getElementById('modalCensura').classList.add('active');
    }

    function mostrarModalEscalar() {
        document.getElementById('tiempoEscalar').value = segundos;
        document.getElementById('modalEscalar').classList.add('active');
    }

    function cerrarModales() {
        document.querySelectorAll('.modal-overlay').forEach(m => m.classList.remove('active'));
    }

    function seleccionarRazon(el, value) {
        document.querySelectorAll('.razon-option').forEach(o => o.classList.remove('selected'));
        el.classList.add('selected');
        document.getElementById('razonSeleccionada').value = value;
    }

    // Acciones
    function aprobar() {
        document.getElementById('tiempoAprobar').value = segundos;
        document.getElementById('formAprobar').submit();
    }

    function liberar() {
        if (confirm('¿Devolver este item a la cola?')) {
            document.getElementById('formLiberar').submit();
        }
    }

    // Atajos de teclado
    document.addEventListener('keydown', (e) => {
        if (e.target.tagName === 'TEXTAREA' || e.target.tagName === 'INPUT') return;

        switch(e.key.toLowerCase()) {
            case 'a':
                aprobar();
                break;
            case 'r':
                mostrarModalRechazo();
                break;
            case 'c':
                mostrarModalCensura();
                break;
            case 'e':
                mostrarModalEscalar();
                break;
            case 'arrowleft':
                cambiarMedia(-1);
                break;
            case 'arrowright':
                cambiarMedia(1);
                break;
            case 'escape':
                cerrarModales();
                break;
        }
    });

    // Cerrar modal con click afuera
    document.querySelectorAll('.modal-overlay').forEach(modal => {
        modal.addEventListener('click', (e) => {
            if (e.target === modal) cerrarModales();
        });
    });
</script>
}
