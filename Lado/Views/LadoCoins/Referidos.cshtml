@model Lado.Controllers.LadoCoinsReferidosViewModel
@{
    ViewData["Title"] = "Programa de Referidos";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/LadoCoins">LadoCoins</a></li>
                    <li class="breadcrumb-item active">Referidos</li>
                </ol>
            </nav>
            <h2>
                <i class="fas fa-users text-primary me-2"></i>Programa de Referidos
            </h2>
        </div>
    </div>

    <!-- Tu enlace de referido -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-gradient-primary text-white">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h4><i class="fas fa-link me-2"></i>Tu enlace de referido</h4>
                            <p class="mb-0">Comparte este enlace y gana LadoCoins cuando alguien se registre.</p>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group">
                                <input type="text" class="form-control" id="linkReferido" value="@Model.LinkReferido" readonly>
                                <button class="btn btn-warning" onclick="copiarLink()">
                                    <i class="fas fa-copy me-1"></i> Copiar
                                </button>
                            </div>
                            <div class="mt-2">
                                <small>Código: <strong>@Model.CodigoReferido</strong></small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bonos del programa -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-success h-100">
                <div class="card-body text-center">
                    <div class="icon icon-shape bg-success text-white rounded-circle mx-auto mb-3" style="width: 60px; height: 60px; line-height: 60px;">
                        <i class="fas fa-user-plus"></i>
                    </div>
                    <h4 class="text-success">$@Model.BonoReferidor.ToString("N2")</h4>
                    <h6>Para Ti</h6>
                    <p class="text-muted small">Cuando alguien se registra con tu código</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-primary h-100">
                <div class="card-body text-center">
                    <div class="icon icon-shape bg-primary text-white rounded-circle mx-auto mb-3" style="width: 60px; height: 60px; line-height: 60px;">
                        <i class="fas fa-handshake"></i>
                    </div>
                    <h4 class="text-primary">$@Model.BonoReferido.ToString("N2")</h4>
                    <h6>Para tu Referido</h6>
                    <p class="text-muted small">Bono de bienvenida extra al registrarse</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-warning h-100">
                <div class="card-body text-center">
                    <div class="icon icon-shape bg-warning text-dark rounded-circle mx-auto mb-3" style="width: 60px; height: 60px; line-height: 60px;">
                        <i class="fas fa-star"></i>
                    </div>
                    <h4 class="text-warning">$@Model.BonoCreadorLadoB.ToString("N2")</h4>
                    <h6>Bono Especial</h6>
                    <p class="text-muted small">Si tu referido se convierte en creador LadoB</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Comisiones -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-info">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h5 class="mb-1"><i class="fas fa-percentage me-2"></i>Comisiones del @Model.PorcentajeComision%</h5>
                        <p class="mb-0">Gana el @Model.PorcentajeComision% de todos los premios que gane tu referido durante @Model.MesesComision meses.</p>
                    </div>
                    <div class="col-md-4 text-end">
                        <h3 class="text-success mb-0">$@Model.TotalComisiones.ToString("N2")</h3>
                        <small class="text-muted">Comisiones ganadas</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Si fue referido por alguien -->
    @if (Model.MiReferidor != null)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-user-friends me-2"></i>Te registraste con código de referido</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            @if (Model.MiReferidor.Referidor?.FotoPerfil != null)
                            {
                                <img src="@Model.MiReferidor.Referidor.FotoPerfil" class="rounded-circle me-3" style="width: 50px; height: 50px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                    <i class="fas fa-user"></i>
                                </div>
                            }
                            <div>
                                <h6 class="mb-0">@(Model.MiReferidor.Referidor?.Seudonimo ?? Model.MiReferidor.Referidor?.NombreCompleto ?? "Usuario")</h6>
                                <small class="text-muted">Te invitó el @Model.MiReferidor.FechaRegistro.ToString("dd/MM/yyyy")</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Lista de referidos -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-list me-2"></i>Tus Referidos (@Model.MisReferidos.Count)</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.MisReferidos.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Usuario</th>
                                        <th>Fecha Registro</th>
                                        <th>Estado</th>
                                        <th class="text-end">Comisión Ganada</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var referido in Model.MisReferidos)
                                    {
                                        var comisionActiva = referido.ComisionActiva && referido.FechaExpiracionComision > DateTime.Now;
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (referido.ReferidoUsuario?.FotoPerfil != null)
                                                    {
                                                        <img src="@referido.ReferidoUsuario.FotoPerfil" class="rounded-circle me-2" style="width: 35px; height: 35px; object-fit: cover;">
                                                    }
                                                    else
                                                    {
                                                        <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-2" style="width: 35px; height: 35px;">
                                                            <i class="fas fa-user small"></i>
                                                        </div>
                                                    }
                                                    <div>
                                                        <span>@(referido.ReferidoUsuario?.Seudonimo ?? referido.ReferidoUsuario?.NombreCompleto ?? "Usuario")</span>
                                                        @if (referido.BonoCreadorLadoBEntregado)
                                                        {
                                                            <br>
                                                            <span class="badge bg-warning text-dark"><i class="fas fa-star"></i> Creador LadoB</span>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <small>@referido.FechaRegistro.ToString("dd/MM/yyyy")</small>
                                            </td>
                                            <td>
                                                @if (comisionActiva)
                                                {
                                                    <span class="badge bg-success">Comisión Activa</span>
                                                    <br>
                                                    <small class="text-muted">Hasta @referido.FechaExpiracionComision.ToString("dd/MM/yyyy")</small>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Comisión Expirada</span>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <span class="text-success fw-bold">$@referido.TotalComisionGanada.ToString("N2")</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Aún no tienes referidos</p>
                            <p class="small text-muted">Comparte tu enlace para empezar a ganar</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function copiarLink() {
            var input = document.getElementById('linkReferido');
            input.select();
            document.execCommand('copy');

            // Feedback visual
            var btn = event.target.closest('button');
            var originalText = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-check me-1"></i> Copiado!';
            btn.classList.remove('btn-warning');
            btn.classList.add('btn-success');

            setTimeout(function() {
                btn.innerHTML = originalText;
                btn.classList.remove('btn-success');
                btn.classList.add('btn-warning');
            }, 2000);
        }
    </script>
}
