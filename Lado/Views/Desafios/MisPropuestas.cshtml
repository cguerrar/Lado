@model IEnumerable<Lado.Models.PropuestaDesafio>

@{
    ViewData["Title"] = "Mis Propuestas";
}

<style>
    .proposals-world {
        background: linear-gradient(135deg, #E0F7FA 0%, #ffffff 100%);
        min-height: 100vh;
        position: relative;
        overflow: hidden;
    }

        .proposals-world::before {
            content: '';
            position: absolute;
            width: 500px;
            height: 500px;
            background: radial-gradient(circle, rgba(0, 188, 212, 0.12) 0%, transparent 70%);
            border-radius: 50%;
            top: -150px;
            right: -150px;
            pointer-events: none;
            animation: float 6s ease-in-out infinite;
        }

    @@keyframes float {
        0%, 100%

    {
        transform: translateY(0px);
    }

    50% {
        transform: translateY(-20px);
    }

    }

    .proposals-hero {
        background: linear-gradient(135deg, #00BCD4 0%, #26C6DA 50%, #4DD0E1 100%);
        border-radius: 30px;
        padding: 50px;
        box-shadow: 0 15px 40px rgba(0, 188, 212, 0.3);
        position: relative;
        overflow: hidden;
        margin-bottom: 40px;
    }

        .proposals-hero::before {
            content: '📝';
            position: absolute;
            font-size: 180px;
            opacity: 0.08;
            right: -20px;
            top: 50%;
            transform: translateY(-50%) rotate(-15deg);
        }

        .proposals-hero h1 {
            color: white;
            font-weight: 900;
            font-size: 3rem;
            margin: 0 0 15px 0;
            text-shadow: 2px 2px 8px rgba(0,0,0,0.2);
        }

        .proposals-hero p {
            color: rgba(255,255,255,0.95);
            margin: 0;
            font-size: 1.2rem;
            font-weight: 500;
        }

    .proposals-btn {
        background: white;
        color: #00BCD4;
        border: none;
        padding: 15px 35px;
        border-radius: 30px;
        font-weight: 700;
        font-size: 1.1rem;
        box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
    }

        .proposals-btn:hover {
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 12px 30px rgba(0,0,0,0.2);
            color: #00BCD4;
            text-decoration: none;
        }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }

    .stat-card {
        background: white;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 8px 25px rgba(0,188,212,0.1);
        text-align: center;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
        }

        .stat-card.warning::before {
            background: linear-gradient(90deg, #FFC107 0%, #FFD54F 100%);
        }

        .stat-card.success::before {
            background: linear-gradient(90deg, #4CAF50 0%, #8BC34A 100%);
        }

        .stat-card.danger::before {
            background: linear-gradient(90deg, #f44336 0%, #e57373 100%);
        }

        .stat-card.info::before {
            background: linear-gradient(90deg, #00BCD4 0%, #26C6DA 100%);
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 35px rgba(0,188,212,0.2);
        }

    .stat-value {
        font-size: 3rem;
        font-weight: 900;
        margin: 10px 0;
    }

        .stat-value.warning {
            background: linear-gradient(135deg, #FFC107 0%, #FFD54F 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .stat-value.success {
            background: linear-gradient(135deg, #4CAF50 0%, #8BC34A 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .stat-value.danger {
            background: linear-gradient(135deg, #f44336 0%, #e57373 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .stat-value.info {
            background: linear-gradient(135deg, #00BCD4 0%, #26C6DA 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

    .stat-label {
        color: #666;
        font-size: 1rem;
        font-weight: 600;
    }

    .proposals-tabs {
        background: white;
        border-radius: 20px;
        padding: 10px;
        box-shadow: 0 4px 20px rgba(0,188,212,0.1);
        display: inline-flex;
        gap: 10px;
        margin-bottom: 30px;
    }

        .proposals-tabs .nav-link {
            border: none;
            border-radius: 15px;
            padding: 12px 25px;
            color: #666;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .proposals-tabs .nav-link.active {
                background: linear-gradient(135deg, #00BCD4 0%, #26C6DA 100%);
                color: white;
                box-shadow: 0 4px 15px rgba(0, 188, 212, 0.3);
            }

            .proposals-tabs .nav-link:hover:not(.active) {
                background: rgba(0, 188, 212, 0.1);
                color: #00BCD4;
            }

    @@media (max-width: 768px) {
        .proposals-hero

    {
        padding: 30px 20px;
    }

    .proposals-hero h1 {
        font-size: 2rem;
    }

    .stats-grid {
        grid-template-columns: 1fr;
    }

    .proposals-tabs {
        flex-wrap: wrap;
        justify-content: center;
    }

    }
</style>

<div class="proposals-world py-4">
    <div class="container-fluid" style="position: relative; z-index: 1;">
        <!-- Hero Header -->
        <div class="proposals-hero">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-4" style="position: relative; z-index: 10;">
                <div>
                    <h1>
                        <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="white" viewBox="0 0 16 16" style="margin-right: 15px; vertical-align: middle;">
                            <path d="M5 4a.5.5 0 0 0 0 1h6a.5.5 0 0 0 0-1H5zm-.5 2.5A.5.5 0 0 1 5 6h6a.5.5 0 0 1 0 1H5a.5.5 0 0 1-.5-.5zM5 8a.5.5 0 0 0 0 1h6a.5.5 0 0 0 0-1H5zm0 2a.5.5 0 0 0 0 1h3a.5.5 0 0 0 0-1H5z" />
                            <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2zm10-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1z" />
                        </svg>
                        Mis Propuestas
                    </h1>
                    <p>Seguimiento de todas tus propuestas en desafíos públicos</p>
                </div>
                <a href="@Url.Action("FeedPublico", "Desafios")" class="proposals-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                    </svg>
                    Explorar Más Desafíos
                </a>
            </div>
        </div>

        <!-- Stats -->
        <div class="stats-grid">
            <div class="stat-card warning">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="#FFC107" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />
                </svg>
                <div class="stat-value warning">@Model.Count(p => p.Estado == EstadoPropuesta.Pendiente)</div>
                <div class="stat-label">Pendientes</div>
            </div>
            <div class="stat-card success">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="#4CAF50" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                </svg>
                <div class="stat-value success">@Model.Count(p => p.Estado == EstadoPropuesta.Aceptada)</div>
                <div class="stat-label">Aceptadas</div>
            </div>
            <div class="stat-card danger">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="#f44336" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z" />
                </svg>
                <div class="stat-value danger">@Model.Count(p => p.Estado == EstadoPropuesta.Rechazada)</div>
                <div class="stat-label">No Seleccionadas</div>
            </div>
            <div class="stat-card info">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="#00BCD4" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                    <path d="M5.255 5.786a.237.237 0 0 0 .241.247h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286zm1.557 5.763c0 .533.425.927 1.01.927.609 0 1.028-.394 1.028-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94z" />
                </svg>
                <div class="stat-value info">@(Model.Any() ? Math.Round((double)Model.Count(p => p.Estado == EstadoPropuesta.Aceptada) / Model.Count() * 100) : 0)%</div>
                <div class="stat-label">Tasa de Éxito</div>
            </div>
        </div>

        <!-- Tabs -->
        <div class="proposals-tabs" id="propuestasTabs" role="tablist">
            <button class="nav-link active" id="pendientes-tab" data-bs-toggle="pill" data-bs-target="#pendientes" type="button">
                ⏳ Pendientes
            </button>
            <button class="nav-link" id="aceptadas-tab" data-bs-toggle="pill" data-bs-target="#aceptadas" type="button">
                ✅ Aceptadas
            </button>
            <button class="nav-link" id="rechazadas-tab" data-bs-toggle="pill" data-bs-target="#rechazadas" type="button">
                ❌ No Seleccionadas
            </button>
            <button class="nav-link" id="todas-tab" data-bs-toggle="pill" data-bs-target="#todas" type="button">
                📋 Todas
            </button>
        </div>

        <!-- Tab Content -->
        <div class="tab-content" id="propuestasTabsContent">
            <!-- Pendientes -->
            <div class="tab-pane fade show active" id="pendientes" role="tabpanel">
                @await Html.PartialAsync("_PropuestasLista", Model.Where(p => p.Estado == EstadoPropuesta.Pendiente))
            </div>

            <!-- Aceptadas -->
            <div class="tab-pane fade" id="aceptadas" role="tabpanel">
                @await Html.PartialAsync("_PropuestasLista", Model.Where(p => p.Estado == EstadoPropuesta.Aceptada))
            </div>

            <!-- Rechazadas -->
            <div class="tab-pane fade" id="rechazadas" role="tabpanel">
                @await Html.PartialAsync("_PropuestasLista", Model.Where(p => p.Estado == EstadoPropuesta.Rechazada))
            </div>

            <!-- Todas -->
            <div class="tab-pane fade" id="todas" role="tabpanel">
                @await Html.PartialAsync("_PropuestasLista", Model)
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('#propuestasTabs button').forEach(tab => {
            tab.addEventListener('shown.bs.tab', function (e) {
                localStorage.setItem('activePropuestasTab', e.target.id);
            });
        });

        window.addEventListener('DOMContentLoaded', (event) => {
            const activeTab = localStorage.getItem('activePropuestasTab');
            if (activeTab) {
                const tabEl = document.querySelector('#' + activeTab);
                if (tabEl) {
                    const tab = new bootstrap.Tab(tabEl);
                    tab.show();
                }
            }
        });
    </script>
}