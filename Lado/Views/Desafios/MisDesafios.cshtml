@model IEnumerable<Lado.Models.Desafio>

@{
    ViewData["Title"] = "Mis Desafíos";
}

<style>
    .game-container {
        background: linear-gradient(135deg, #E0F7FA 0%, #ffffff 100%);
        min-height: 100vh;
        position: relative;
        overflow: hidden;
    }

        .game-container::before {
            content: '';
            position: absolute;
            width: 400px;
            height: 400px;
            background: radial-gradient(circle, rgba(0, 188, 212, 0.15) 0%, transparent 70%);
            border-radius: 50%;
            top: -100px;
            right: -100px;
            pointer-events: none;
        }

        .game-container::after {
            content: '';
            position: absolute;
            width: 300px;
            height: 300px;
            background: radial-gradient(circle, rgba(38, 198, 218, 0.1) 0%, transparent 70%);
            border-radius: 50%;
            bottom: 50px;
            left: -50px;
            pointer-events: none;
        }

    .game-header::before {
        content: '🎮';
        position: absolute;
        font-size: 120px;
        opacity: 0.1;
        right: 30px;
        top: 50%;
        transform: translateY(-50%);
        pointer-events: none;
    }

        .game-header::before {
            content: '🎮';
            position: absolute;
            font-size: 120px;
            opacity: 0.1;
            right: 30px;
            top: 50%;
            transform: translateY(-50%);
        }

        .game-header h1 {
            color: white;
            font-weight: 800;
            font-size: 2.5rem;
            margin: 0;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
        }

        .game-header p {
            color: rgba(255,255,255,0.95);
            margin: 10px 0 0 0;
            font-size: 1.1rem;
        }

    .game-btn {
        background: white;
        color: #00BCD4;
        border: none;
        padding: 12px 30px;
        border-radius: 25px;
        font-weight: 700;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
    }

        .game-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.15);
            color: #00BCD4;
            text-decoration: none;
        }

    .game-tabs {
        background: white;
        border-radius: 20px;
        padding: 10px;
        box-shadow: 0 4px 20px rgba(0,188,212,0.1);
        display: inline-flex;
        gap: 10px;
        margin-bottom: 30px;
    }

        .game-tabs .nav-link {
            border: none;
            border-radius: 15px;
            padding: 12px 25px;
            color: #666;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .game-tabs .nav-link.active {
                background: linear-gradient(135deg, #00BCD4 0%, #26C6DA 100%);
                color: white;
                box-shadow: 0 4px 15px rgba(0, 188, 212, 0.3);
            }

            .game-tabs .nav-link:hover:not(.active) {
                background: rgba(0, 188, 212, 0.1);
                color: #00BCD4;
            }

    .table-game {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0,188,212,0.1);
    }

        .table-game thead {
            background: linear-gradient(135deg, #00BCD4 0%, #26C6DA 100%);
        }

            .table-game thead th {
                color: white;
                font-weight: 700;
                border: none;
                padding: 20px;
                text-transform: uppercase;
                font-size: 0.85rem;
                letter-spacing: 0.5px;
            }

        .table-game tbody tr {
            border-bottom: 1px solid #f0f0f0;
            transition: all 0.3s ease;
        }

            .table-game tbody tr:hover {
                background: rgba(0, 188, 212, 0.05);
                transform: scale(1.01);
            }

        .table-game tbody td {
            padding: 20px;
            vertical-align: middle;
        }

    .badge-game {
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.85rem;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

        .badge-game.publico {
            background: linear-gradient(135deg, #4CAF50 0%, #8BC34A 100%);
            color: white;
        }

        .badge-game.directo {
            background: linear-gradient(135deg, #00BCD4 0%, #26C6DA 100%);
            color: white;
        }

        .badge-game.completado {
            background: linear-gradient(135deg, #4CAF50 0%, #8BC34A 100%);
            color: white;
        }

        .badge-game.pendiente {
            background: linear-gradient(135deg, #FFC107 0%, #FFD54F 100%);
            color: #333;
        }

        .badge-game.cancelado {
            background: linear-gradient(135deg, #f44336 0%, #e57373 100%);
            color: white;
        }

    .game-action-btn {
        border: 2px solid #00BCD4;
        background: white;
        color: #00BCD4;
        padding: 8px 20px;
        border-radius: 15px;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        text-decoration: none;
    }

        .game-action-btn:hover {
            background: #00BCD4;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 188, 212, 0.3);
            text-decoration: none;
        }

        .game-action-btn.danger {
            border-color: #f44336;
            color: #f44336;
        }

            .game-action-btn.danger:hover {
                background: #f44336;
                color: white;
            }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        background: white;
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0,188,212,0.1);
    }

    .empty-state-icon {
        font-size: 80px;
        margin-bottom: 20px;
        opacity: 0.3;
    }

    .empty-state h5 {
        color: #333;
        font-weight: 700;
        margin-bottom: 10px;
    }

    .empty-state p {
        color: #666;
        margin: 0;
    }

    @@media (max-width: 768px) {
        .game-header

    {
        padding: 30px 20px;
    }

    .game-header h1 {
        font-size: 1.8rem;
    }

    .game-tabs {
        flex-wrap: wrap;
        justify-content: center;
    }

    .table-responsive {
        border-radius: 20px;
    }

    }
</style>

<div class="game-container py-4">
    <div class="container-fluid" style="position: relative; z-index: 1;">
        <!-- Header -->
        <div class="game-header">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <h1>
                        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="white" viewBox="0 0 16 16" style="margin-right: 10px; vertical-align: middle;">
                            <path d="M2.5.5A.5.5 0 0 1 3 0h10a.5.5 0 0 1 .5.5c0 .538-.012 1.05-.034 1.536a3 3 0 1 1-1.133 5.89c-.79 1.865-1.878 2.777-2.833 3.011v2.173l1.425.356c.194.048.377.135.537.255L13.3 15.1a.5.5 0 0 1-.3.9H3a.5.5 0 0 1-.3-.9l1.838-1.379c.16-.12.343-.207.537-.255L6.5 13.11v-2.173c-.955-.234-2.043-1.146-2.833-3.012a3 3 0 1 1-1.132-5.89A33.076 33.076 0 0 1 2.5.5z" />
                        </svg>
                        Mis Desafíos
                    </h1>
                    <p>Gestiona todos tus desafíos creados</p>
                </div>
                <a href="/Desafios/CrearPublico" class="game-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z" />
                    </svg>
                    Crear Desafío
                </a>
            </div>
        </div>

        <!-- Tabs -->
        <div class="game-tabs" id="desafiosTabs" role="tablist">
            <button class="nav-link active" id="activos-tab" data-bs-toggle="pill" data-bs-target="#activos" type="button">
                🎯 Activos
            </button>
            <button class="nav-link" id="pendientes-tab" data-bs-toggle="pill" data-bs-target="#pendientes" type="button">
                ⏳ Pendientes
            </button>
            <button class="nav-link" id="completados-tab" data-bs-toggle="pill" data-bs-target="#completados" type="button">
                ✅ Completados
            </button>
            <button class="nav-link" id="todos-tab" data-bs-toggle="pill" data-bs-target="#todos" type="button">
                📋 Todos
            </button>
        </div>

        <!-- Tabs Content -->
        <div class="tab-content" id="desafiosTabsContent">
            <!-- Activos -->
            <div class="tab-pane fade show active" id="activos" role="tabpanel">
                @await Html.PartialAsync("_DesafiosLista", Model.Where(d =>
                         d.Estado == EstadoDesafio.Asignado ||
                         d.Estado == EstadoDesafio.EnProgreso ||
                         d.Estado == EstadoDesafio.ContenidoSubido ||
                         d.Estado == EstadoDesafio.RecibiendoPropuestas))
            </div>

            <!-- Pendientes -->
            <div class="tab-pane fade" id="pendientes" role="tabpanel">
                @await Html.PartialAsync("_DesafiosLista", Model.Where(d =>
                         d.Estado == EstadoDesafio.Pendiente ||
                         d.Estado == EstadoDesafio.RecibiendoPropuestas))
            </div>

            <!-- Completados -->
            <div class="tab-pane fade" id="completados" role="tabpanel">
                @await Html.PartialAsync("_DesafiosLista", Model.Where(d => d.Estado == EstadoDesafio.Completado))
            </div>

            <!-- Todos -->
            <div class="tab-pane fade" id="todos" role="tabpanel">
                @await Html.PartialAsync("_DesafiosLista", Model)
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('#desafiosTabs button').forEach(tab => {
            tab.addEventListener('shown.bs.tab', function (e) {
                localStorage.setItem('activeDesafiosTab', e.target.id);
            });
        });

        window.addEventListener('DOMContentLoaded', (event) => {
            const activeTab = localStorage.getItem('activeDesafiosTab');
            if (activeTab) {
                const tabEl = document.querySelector('#' + activeTab);
                if (tabEl) {
                    const tab = new bootstrap.Tab(tabEl);
                    tab.show();
                }
            }
        });
    </script>
}