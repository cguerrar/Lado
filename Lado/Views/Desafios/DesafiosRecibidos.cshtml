@{
    ViewData["Title"] = "Desafíos Recibidos";
    var desafiosDirectos = ViewBag.DesafiosDirectos as List<Lado.Models.Desafio>;
    var desafiosAsignados = ViewBag.DesafiosAsignados as List<Lado.Models.Desafio>;
}

<style>
    .hero-gradient {
        background: linear-gradient(135deg, #00BCD4 0%, #26C6DA 50%, #4DD0E1 100%);
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0, 188, 212, 0.3);
        position: relative;
        overflow: hidden;
    }

        .hero-gradient::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -20%;
            width: 300px;
            height: 300px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            animation: float 6s ease-in-out infinite;
        }

    @@keyframes float {
        0%, 100%

    {
        transform: translateY(0) rotate(0deg);
    }

    50% {
        transform: translateY(-20px) rotate(180deg);
    }

    }

    .mission-card {
        background: white;
        border: 3px solid #B2EBF2;
        border-radius: 16px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0, 188, 212, 0.1);
    }

        .mission-card:hover {
            transform: translateY(-5px);
            border-color: #00BCD4;
            box-shadow: 0 8px 30px rgba(0, 188, 212, 0.25);
        }

    .badge-new {
        background: linear-gradient(135deg, #00BCD4, #26C6DA);
        color: white;
        font-weight: 700;
        padding: 6px 16px;
        border-radius: 20px;
        box-shadow: 0 4px 10px rgba(0, 188, 212, 0.3);
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%, 100%

    {
        box-shadow: 0 4px 10px rgba(0, 188, 212, 0.3);
    }

    50% {
        box-shadow: 0 4px 20px rgba(0, 188, 212, 0.6);
    }

    }

    .stat-box {
        background: linear-gradient(135deg, #E0F7FA, #FFFFFF);
        border: 2px solid #B2EBF2;
        border-radius: 12px;
        padding: 16px;
        text-align: center;
        transition: all 0.3s ease;
    }

        .stat-box:hover {
            border-color: #00BCD4;
            transform: scale(1.05);
        }

    .btn-accept {
        background: linear-gradient(135deg, #4CAF50, #8BC34A);
        color: white;
        border: none;
        font-weight: 600;
        padding: 12px;
        border-radius: 12px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(76, 175, 80, 0.3);
    }

        .btn-accept:hover {
            background: linear-gradient(135deg, #45a049, #7CB342);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(76, 175, 80, 0.4);
            color: white;
        }

    .btn-reject {
        background: transparent;
        color: #00BCD4;
        border: 2px solid #00BCD4;
        font-weight: 600;
        padding: 12px;
        border-radius: 12px;
        transition: all 0.3s ease;
    }

        .btn-reject:hover {
            background: #00BCD4;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 188, 212, 0.4);
        }

    .section-header {
        background: linear-gradient(135deg, #E0F7FA, #FFFFFF);
        border-left: 5px solid #00BCD4;
        padding: 16px 20px;
        border-radius: 12px;
        margin-bottom: 24px;
    }

    .table-game {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 188, 212, 0.1);
    }

        .table-game thead {
            background: linear-gradient(135deg, #00BCD4, #26C6DA);
        }

        .table-game th {
            color: white;
            font-weight: 700;
            padding: 16px;
            border: none;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
        }

        .table-game tbody tr {
            border-bottom: 1px solid #B2EBF2;
            transition: all 0.3s ease;
        }

            .table-game tbody tr:hover {
                background: #E0F7FA;
                transform: scale(1.01);
            }

        .table-game td {
            padding: 20px 16px;
            vertical-align: middle;
        }

    .badge-status {
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.85rem;
    }

    .badge-info {
        background: linear-gradient(135deg, #00BCD4, #26C6DA);
        color: white;
    }

    .badge-primary {
        background: linear-gradient(135deg, #00BCD4, #26C6DA);
        color: white;
    }

    .empty-state {
        background: linear-gradient(135deg, #E0F7FA, #FFFFFF);
        border: 2px dashed #B2EBF2;
        border-radius: 16px;
        padding: 48px 24px;
        text-align: center;
    }

    .cta-box {
        background: linear-gradient(135deg, #00BCD4, #26C6DA);
        border-radius: 20px;
        padding: 40px;
        text-align: center;
        box-shadow: 0 10px 40px rgba(0, 188, 212, 0.3);
        position: relative;
        overflow: hidden;
    }

        .cta-box::before {
            content: '🎮';
            position: absolute;
            font-size: 150px;
            opacity: 0.1;
            right: -30px;
            top: -30px;
            animation: rotate 20s linear infinite;
        }

    @@keyframes rotate {
        from

    {
        transform: rotate(0deg);
    }

    to {
        transform: rotate(360deg);
    }

    }

    .btn-cta {
        background: white;
        color: #00BCD4;
        font-weight: 700;
        padding: 16px 32px;
        border-radius: 12px;
        border: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

        .btn-cta:hover {
            background: #E0F7FA;
            color: #00BCD4;
            transform: translateY(-3px);
            box-shadow: 0 6px 25px rgba(0, 0, 0, 0.3);
        }

    .btn-details {
        background: transparent;
        color: #00BCD4;
        border: 2px solid #00BCD4;
        font-weight: 600;
        padding: 8px 16px;
        border-radius: 8px;
        transition: all 0.3s ease;
        font-size: 0.9rem;
    }

        .btn-details:hover {
            background: #00BCD4;
            color: white;
            transform: translateY(-2px);
        }

    .profile-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        border: 2px solid #00BCD4;
        object-fit: cover;
    }

    .profile-initial {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, #00BCD4, #26C6DA);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: bold;
        border: 2px solid white;
        box-shadow: 0 2px 8px rgba(0, 188, 212, 0.3);
    }

    @@media (max-width: 768px) {
        .table-game

    {
        font-size: 0.85rem;
    }

    .hero-gradient {
        padding: 30px 20px !important;
    }

    .stat-box {
        margin-bottom: 12px;
    }

    }
</style>

<div class="container-fluid py-4" style="background: linear-gradient(180deg, #E0F7FA 0%, #FFFFFF 100%); min-height: 100vh;">
    <!-- Hero Header -->
    <div class="hero-gradient p-5 mb-5">
        <div class="position-relative" style="z-index: 1;">
            <h1 class="display-5 fw-bold text-white mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="white" viewBox="0 0 16 16" style="vertical-align: middle;">
                    <path d="M4.98 4a.5.5 0 0 0-.39.188L1.54 8H6a.5.5 0 0 1 .5.5 1.5 1.5 0 1 0 3 0A.5.5 0 0 1 10 8h4.46l-3.05-3.812A.5.5 0 0 0 11.02 4H4.98zm-1.17-.437A1.5 1.5 0 0 1 4.98 3h6.04a1.5 1.5 0 0 1 1.17.563l3.7 4.625a.5.5 0 0 1 .106.374l-.39 3.124A1.5 1.5 0 0 1 14.117 13H1.883a1.5 1.5 0 0 1-1.489-1.314l-.39-3.124a.5.5 0 0 1 .106-.374l3.7-4.625z" />
                </svg>
                Buzón de Misiones
            </h1>
            <p class="text-white fs-5 mb-0" style="opacity: 0.95;">
                Gestiona los desafíos que te han enviado y conviértete en leyenda 🏆
            </p>
        </div>
    </div>

    <!-- Desafíos Directos Pendientes -->
    <div class="mb-5">
        <div class="section-header">
            <h3 class="mb-1" style="color: #00BCD4;">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="#00BCD4" viewBox="0 0 16 16" style="vertical-align: middle;">
                    <path d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414.05 3.555ZM0 4.697v7.104l5.803-3.558L0 4.697ZM6.761 8.83l-6.57 4.026A2 2 0 0 0 2 14h6.256A4.493 4.493 0 0 1 8 12.5a4.49 4.49 0 0 1 1.606-3.446l-.367-.225L8 9.586l-1.239-.757ZM16 4.697v4.974A4.491 4.491 0 0 0 12.5 8a4.49 4.49 0 0 0-1.965.45l-.338-.207L16 4.697Z" />
                    <path d="M16 12.5a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0Zm-4.854-1.354a.5.5 0 0 0 0 .708l.647.646-.647.646a.5.5 0 0 0 .708.708l.646-.647.646.647a.5.5 0 0 0 .708-.708l-.647-.646.647-.646a.5.5 0 0 0-.708-.708l-.646.647-.646-.647a.5.5 0 0 0-.708 0Z" />
                </svg>
                Desafíos Directos
                <span class="badge-new ms-2">@(desafiosDirectos?.Count ?? 0) Nuevos</span>
            </h3>
            <p class="mb-0 text-muted">Misiones especiales enviadas directamente para ti</p>
        </div>

        @if (desafiosDirectos != null && desafiosDirectos.Any())
        {
            <div class="row">
                @foreach (var desafio in desafiosDirectos)
                {
                    <div class="col-lg-6 mb-4">
                        <div class="mission-card p-4 h-100">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="fw-bold mb-0" style="color: #00BCD4;">@desafio.Titulo</h5>
                                <span class="badge-new">¡Nuevo!</span>
                            </div>

                            <div class="d-flex align-items-center gap-2 mb-3">
                                @if (!string.IsNullOrEmpty(desafio.Fan?.FotoPerfil))
                                {
                                    <img src="@desafio.Fan.FotoPerfil" class="profile-avatar" alt="@desafio.Fan.NombreCompleto">
                                }
                                else
                                {
                                    <div class="profile-initial">
                                        <span>@desafio.Fan?.NombreCompleto?.Substring(0, 1).ToUpper()</span>
                                    </div>
                                }
                                <div>
                                    <small class="text-muted d-block">Misión asignada por:</small>
                                    <strong style="color: #00BCD4;">@desafio.Fan?.NombreCompleto</strong>
                                </div>
                            </div>

                            <p class="text-muted mb-4">@desafio.Descripcion</p>

                            <div class="row g-3 mb-4">
                                <div class="col-6">
                                    <div class="stat-box">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#00BCD4" viewBox="0 0 16 16">
                                            <path d="M2.5.5A.5.5 0 0 1 3 0h10a.5.5 0 0 1 .5.5c0 .538-.012 1.05-.034 1.536a3 3 0 1 1-1.133 5.89c-.79 1.865-1.878 2.777-2.833 3.011v2.173l1.425.356c.194.048.377.135.537.255L13.3 15.1a.5.5 0 0 1-.3.9H3a.5.5 0 0 1-.3-.9l1.838-1.379c.16-.12.343-.207.537-.255L6.5 13.11v-2.173c-.955-.234-2.043-1.146-2.833-3.012a3 3 0 1 1-1.132-5.89A33.076 33.076 0 0 1 2.5.5zm.099 2.54a2 2 0 0 0 .72 3.935c-.333-1.05-.588-2.346-.72-3.935zm10.083 3.935a2 2 0 0 0 .72-3.935c-.133 1.59-.388 2.885-.72 3.935z" />
                                        </svg>
                                        <div class="fw-bold fs-4" style="color: #00BCD4;">${@desafio.Presupuesto}</div>
                                        <small class="text-muted">Recompensa</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="stat-box">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#00BCD4" viewBox="0 0 16 16">
                                            <path d="M2.5 15a.5.5 0 1 1 0-1h1v-1a4.5 4.5 0 0 1 2.557-4.06c.29-.139.443-.377.443-.59v-.7c0-.213-.154-.451-.443-.59A4.5 4.5 0 0 1 3.5 3V2h-1a.5.5 0 0 1 0-1h11a.5.5 0 0 1 0 1h-1v1a4.5 4.5 0 0 1-2.557 4.06c-.29.139-.443.377-.443.59v.7c0 .213.154.451.443.59A4.5 4.5 0 0 1 12.5 13v1h1a.5.5 0 0 1 0 1h-11zm2-13v1c0 .537.12 1.045.337 1.5h6.326c.216-.455.337-.963.337-1.5V2h-7zm3 6.35c0 .701-.478 1.236-1.011 1.492A3.5 3.5 0 0 0 4.5 13s.866-1.299 3-1.48V8.35zm1 0v3.17c2.134.181 3 1.48 3 1.48a3.5 3.5 0 0 0-1.989-3.158C8.978 9.586 8.5 9.052 8.5 8.351z" />
                                        </svg>
                                        <div class="fw-bold fs-4" style="color: #00BCD4;">@desafio.DiasPlazoPlazo</div>
                                        <small class="text-muted">Días límite</small>
                                    </div>
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="button" class="btn-accept" onclick="aceptarDesafioDirecto(@desafio.Id)">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="white" viewBox="0 0 16 16" style="vertical-align: middle;">
                                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                                    </svg>
                                    Aceptar Misión
                                </button>
                                <button type="button" class="btn-reject" onclick="rechazarDesafioDirecto(@desafio.Id)">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 16 16" style="vertical-align: middle;">
                                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z" />
                                    </svg>
                                    Rechazar
                                </button>
                                <a href="@Url.Action("Detalles", "Desafios", new { id = desafio.Id })" class="btn-details text-center text-decoration-none">
                                    Ver Detalles Completos
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="#B2EBF2" viewBox="0 0 16 16">
                    <path d="M4.98 4a.5.5 0 0 0-.39.188L1.54 8H6a.5.5 0 0 1 .5.5 1.5 1.5 0 1 0 3 0A.5.5 0 0 1 10 8h4.46l-3.05-3.812A.5.5 0 0 0 11.02 4H4.98zm9.954 5H10.45a2.5 2.5 0 0 1-4.9 0H1.066l.32 2.562a.5.5 0 0 0 .497.438h12.234a.5.5 0 0 0 .496-.438L14.933 9zM3.809 3.563A1.5 1.5 0 0 1 4.981 3h6.038a1.5 1.5 0 0 1 1.172.563l3.7 4.625a.5.5 0 0 1 .105.374l-.39 3.124A1.5 1.5 0 0 1 14.117 13H1.883a1.5 1.5 0 0 1-1.489-1.314l-.39-3.124a.5.5 0 0 1 .106-.374l3.7-4.625z" />
                </svg>
                <h5 style="color: #00BCD4;" class="mb-2">No hay desafíos directos</h5>
                <p class="text-muted mb-0">Cuando alguien te envíe un desafío directo, aparecerá aquí</p>
            </div>
        }
    </div>

    <!-- Desafíos En Progreso -->
    <div class="mb-5">
        <div class="section-header">
            <h3 class="mb-1" style="color: #00BCD4;">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="#00BCD4" viewBox="0 0 16 16" style="vertical-align: middle;">
                    <path d="M11.251.068a.5.5 0 0 1 .227.58L9.677 6.5H13a.5.5 0 0 1 .364.843l-8 8.5a.5.5 0 0 1-.842-.49L6.323 9.5H3a.5.5 0 0 1-.364-.843l8-8.5a.5.5 0 0 1 .615-.09z" />
                </svg>
                Misiones En Progreso
                <span class="badge badge-status badge-primary ms-2">@(desafiosAsignados?.Count ?? 0) Activas</span>
            </h3>
            <p class="mb-0 text-muted">Desafíos que estás completando actualmente</p>
        </div>

        @if (desafiosAsignados != null && desafiosAsignados.Any())
        {
            <div class="table-game">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th>Misión</th>
                            <th>Cliente</th>
                            <th>Recompensa</th>
                            <th>Estado</th>
                            <th>Tiempo Restante</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var desafio in desafiosAsignados)
                        {
                            <tr>
                                <td>
                                    <strong style="color: #00BCD4;">@desafio.Titulo</strong>
                                    @if (!string.IsNullOrEmpty(desafio.Categoria))
                                    {
                                        <br>
                                        <small class="text-muted">📁 @desafio.Categoria</small>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        @if (!string.IsNullOrEmpty(desafio.Fan?.FotoPerfil))
                                        {
                                            <img src="@desafio.Fan.FotoPerfil" class="rounded-circle" width="32" height="32" alt="@desafio.Fan.NombreCompleto">
                                        }
                                        else
                                        {
                                            <div class="profile-initial" style="width: 32px; height: 32px; font-size: 0.85rem;">
                                                <span>@desafio.Fan?.NombreCompleto?.Substring(0, 1).ToUpper()</span>
                                            </div>
                                        }
                                        <span class="text-muted">@desafio.Fan?.NombreCompleto</span>
                                    </div>
                                </td>
                                <td>
                                    <strong style="color: #00BCD4; font-size: 1.1rem;">${@(desafio.PrecioFinal ?? desafio.Presupuesto)}</strong>
                                </td>
                                <td>
                                    <span class="badge badge-status @(desafio.Estado == EstadoDesafio.Asignado ? "badge-info" : "badge-primary")">
                                        @desafio.Estado.ToString()
                                    </span>
                                </td>
                                <td>
                                    @if (desafio.FechaAsignacion.HasValue)
                                    {
                                        var diasRestantes = desafio.DiasPlazoPlazo - (DateTime.Now - desafio.FechaAsignacion.Value).Days;
                                        var colorClase = diasRestantes < 2 ? "text-danger" : "text-success";
                                        <span class="@colorClase fw-bold">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="vertical-align: middle;">
                                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z" />
                                            </svg>
                                            @Math.Max(0, diasRestantes) días
                                        </span>
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("Detalles", "Desafios", new { id = desafio.Id })" class="btn btn-sm btn-details">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="vertical-align: middle;">
                                            <path d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576 6.636 10.07Zm6.787-8.201L1.591 6.602l4.339 2.76 7.494-7.493Z" />
                                        </svg>
                                        Entregar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="#B2EBF2" viewBox="0 0 16 16">
                    <path d="M11.251.068a.5.5 0 0 1 .227.58L9.677 6.5H13a.5.5 0 0 1 .364.843l-8 8.5a.5.5 0 0 1-.842-.49L6.323 9.5H3a.5.5 0 0 1-.364-.843l8-8.5a.5.5 0 0 1 .615-.09z" />
                </svg>
                <h5 style="color: #00BCD4;" class="mb-2">No hay misiones activas</h5>
                <p class="text-muted mb-0">Acepta desafíos para comenzar tu aventura</p>
            </div>
        }
    </div>

    <!-- CTA Final -->
    <div class="cta-box">
        <div class="position-relative" style="z-index: 1;">
            <h3 class="text-white fw-bold mb-3">¿Listo para más aventuras?</h3>
            <p class="text-white mb-4" style="opacity: 0.95; font-size: 1.1rem;">
                Explora el tablón de misiones públicas y encuentra desafíos épicos esperando por ti
            </p>
            <a href="@Url.Action("FeedPublico", "Desafios")" class="btn-cta">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16" style="vertical-align: middle;">
