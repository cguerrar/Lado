@section Scripts {
    <script>
        function aceptarDesafioDirecto(desafioId) {
            if (!confirm('¿Aceptas esta misión épica? 🎮')) return;

            fetch('/Desafios/AceptarDesafioDirecto?desafioId=' + desafioId, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(r => r.json())
            .then(data => {
                alert(data.message);
                if (data.success) location.reload();
            })
            .catch(err => alert('Error al aceptar el desafío'));
        }

        function rechazarDesafioDirecto(desafioId) {
            const razon = prompt('¿Por qué rechazas esta misión?');
            if (!razon) return;

            fetch('/Desafios/RechazarDesafioDirecto?desafioId=' + desafioId + '&razon=' + encodeURIComponent(razon), {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(r => r.json())
            .then(data => {
                alert(data.message);
                if (data.success) location.reload();
            })
            .catch(err => alert('Error al rechazar el desafío'));
        }
    </script>
}