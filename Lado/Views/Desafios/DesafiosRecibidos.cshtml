                    <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                        <polyline points="22,6 12,13 2,6"></polyline>
                    </svg>
                    Buzon de Desafios
                </h1>
                <p class="hero-subtitle">Gestiona los desafios que te han enviado y completa tus misiones</p>
            </div>
        </div>

        <!-- Desafios Directos Pendientes -->
        <div class="mb-5">
            <div class="section-header">
                <h3 class="section-title">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M22 17H2a3 3 0 0 0 3-3V9a7 7 0 0 1 14 0v5a3 3 0 0 0 3 3zm-8.27 4a2 2 0 0 1-3.46 0"></path>
                    </svg>
                    Desafios Directos
                    <span class="count-badge">@(desafiosDirectos?.Count ?? 0) Nuevos</span>
                </h3>
                <p class="section-subtitle">Desafios enviados directamente para ti</p>
            </div>

            @if (desafiosDirectos != null && desafiosDirectos.Any())
            {
                <div class="row g-4">
                    @foreach (var desafio in desafiosDirectos)
                    {
                        <div class="col-lg-6">
                            <div class="mission-card">
                                <div class="card-accent"></div>
                                <div class="card-body">
                                    <div class="card-header-row">
                                        <h5 class="card-title">@desafio.Titulo</h5>
                                        <span class="new-badge">Nuevo</span>
                                    </div>

                                    <div class="profile-row">
                                        @if (!string.IsNullOrEmpty(desafio.Fan?.FotoPerfil))
                                        {
                                            <img src="@desafio.Fan.FotoPerfil" class="profile-avatar" alt="@desafio.Fan.NombreCompleto">
                                        }
                                        else
                                        {
                                            <div class="profile-initial">
                                                @desafio.Fan?.NombreCompleto?.Substring(0, 1).ToUpper()
                                            </div>
                                        }
                                        <div class="profile-info">
                                            <small>Enviado por:</small>
                                            <strong>@desafio.Fan?.NombreCompleto</strong>
                                        </div>
                                    </div>

                                    <p class="card-description">@desafio.Descripcion</p>

                                    <div class="stats-grid">
                                        <div class="stat-item">
                                            <div class="stat-icon">
                                                <svg viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                    <line x1="12" y1="1" x2="12" y2="23"></line>
                                                    <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                                                </svg>
                                            </div>
                                            <div class="stat-value">$@desafio.Presupuesto</div>
                                            <div class="stat-label">Recompensa</div>
                                        </div>
                                        <div class="stat-item">
                                            <div class="stat-icon">
                                                <svg viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                    <circle cx="12" cy="12" r="10"></circle>
                                                    <polyline points="12 6 12 12 16 14"></polyline>
                                                </svg>
                                            </div>
                                            <div class="stat-value">@desafio.DiasPlazoPlazo</div>
                                            <div class="stat-label">Dias limite</div>
                                        </div>
                                    </div>

                                    <div class="d-grid gap-2">
                                        <button type="button" class="btn-accept" onclick="aceptarDesafioDirecto(@desafio.Id)">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <polyline points="20 6 9 17 4 12"></polyline>
                                            </svg>
                                            Aceptar Desafio
                                        </button>
                                        <button type="button" class="btn-reject" onclick="rechazarDesafioDirecto(@desafio.Id)">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <line x1="18" y1="6" x2="6" y2="18"></line>
                                                <line x1="6" y1="6" x2="18" y2="18"></line>
                                            </svg>
                                            Rechazar
                                        </button>
                                        <a href="@Url.Action("Detalles", "Desafios", new { id = desafio.Id })" class="btn-details">
                                            Ver Detalles Completos
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                            <polyline points="22,6 12,13 2,6"></polyline>
                        </svg>
                    </div>
                    <h5 class="empty-title">No hay desafios directos</h5>
                    <p class="empty-text">Cuando alguien te envie un desafio directo, aparecera aqui</p>
                </div>
            }
        </div>

        <!-- Desafios En Progreso -->
        <div class="mb-5">
            <div class="section-header">
                <h3 class="section-title">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon>
                    </svg>
                    Desafios En Progreso
                    <span class="count-badge">@(desafiosAsignados?.Count ?? 0) Activos</span>
                </h3>
                <p class="section-subtitle">Desafios que estas completando actualmente</p>
            </div>

            @if (desafiosAsignados != null && desafiosAsignados.Any())
            {
                <div class="table-container">
                    <table class="table-modern">
                        <thead>
                            <tr>
                                <th>Desafio</th>
                                <th>Cliente</th>
                                <th>Recompensa</th>
                                <th>Estado</th>
                                <th>Tiempo</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var desafio in desafiosAsignados)
                            {
                                <tr>
                                    <td>
                                        <div class="mission-title">@desafio.Titulo</div>
                                        @if (!string.IsNullOrEmpty(desafio.Categoria))
                                        {
                                            <div class="mission-category">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                    <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path>
                                                </svg>
                                                @desafio.Categoria
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <div class="client-info">
                                            @if (!string.IsNullOrEmpty(desafio.Fan?.FotoPerfil))
                                            {
                                                <img src="@desafio.Fan.FotoPerfil" class="client-avatar" alt="@desafio.Fan.NombreCompleto">
                                            }
                                            else
                                            {
                                                <div class="client-initial">
                                                    @desafio.Fan?.NombreCompleto?.Substring(0, 1).ToUpper()
                                                </div>
                                            }
                                            <span class="text-muted">@desafio.Fan?.NombreCompleto</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="reward-amount">$@(desafio.PrecioFinal ?? desafio.Presupuesto)</span>
                                    </td>
                                    <td>
                                        <span class="status-badge">
                                            @desafio.Estado.ToString()
                                        </span>
                                    </td>
                                    <td>
                                        @if (desafio.FechaAsignacion.HasValue)
                                        {
                                            var diasRestantes = desafio.DiasPlazoPlazo - (DateTime.Now - desafio.FechaAsignacion.Value).Days;
                                            var esUrgente = diasRestantes < 2;
                                            <span class="time-remaining @(esUrgente ? "urgent" : "normal")">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                    <circle cx="12" cy="12" r="10"></circle>
                                                    <polyline points="12 6 12 12 16 14"></polyline>
                                                </svg>
                                                @Math.Max(0, diasRestantes) dias
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Detalles", "Desafios", new { id = desafio.Id })" class="btn-deliver">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <line x1="22" y1="2" x2="11" y2="13"></line>
                                                <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
                                            </svg>
                                            Entregar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon>
                        </svg>
                    </div>
                    <h5 class="empty-title">No hay desafios activos</h5>
                    <p class="empty-text">Acepta desafios para comenzar a trabajar</p>
                </div>
            }
        </div>

        <!-- CTA Final -->
        <div class="cta-box">
            <div class="cta-content">
                <h3 class="cta-title">多Buscas mas desafios?</h3>
                <p class="cta-text">Explora el feed de desafios publicos y encuentra oportunidades que se ajusten a tu talento</p>
                <a href="@Url.Action("FeedPublico", "Desafios")" class="btn-cta">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="11" cy="11" r="8"></circle>
                        <path d="m21 21-4.35-4.35"></path>
                    </svg>
                    Explorar Desafios Publicos
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function aceptarDesafioDirecto(desafioId) {
            if (!confirm('多Aceptas este desafio?')) return;

            fetch('/Desafios/AceptarDesafioDirecto?desafioId=' + desafioId, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(r => r.json())
            .then(data => {
                alert(data.message);
                if (data.success) location.reload();
            })
            .catch(err => alert('Error al aceptar el desafio'));
        }

        function rechazarDesafioDirecto(desafioId) {
            const razon = prompt('多Por que rechazas este desafio?');
            if (!razon) return;

            fetch('/Desafios/RechazarDesafioDirecto?desafioId=' + desafioId + '&razon=' + encodeURIComponent(razon), {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(r => r.json())
            .then(data => {
                alert(data.message);
                if (data.success) location.reload();
            })
            .catch(err => alert('Error al rechazar el desafio'));
        }
    </script>
}
