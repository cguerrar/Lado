<script>
    // Filter by category
    function filterByCategory(category) {
        const url = new URL(window.location.href);
        if (category) {
            url.searchParams.set('categoria', category);
        } else {
            url.searchParams.delete('categoria');
        }
        url.searchParams.delete('tipoEspecial');
        window.location.href = url.toString();
    }

    // Filter by special type
    function filterBySpecial(tipo) {
        const url = new URL(window.location.href);
        if (url.searchParams.get('tipoEspecial') === tipo) {
            url.searchParams.delete('tipoEspecial');
        } else {
            url.searchParams.set('tipoEspecial', tipo);
        }
        url.searchParams.delete('categoria');
        window.location.href = url.toString();
    }

    // Apply sort
    function applySort() {
        const orden = document.getElementById('sortSelect').value;
        const url = new URL(window.location.href);
        url.searchParams.set('orden', orden);
        window.location.href = url.toString();
    }

    // Toggle advanced filters
    function toggleAdvancedFilters() {
        const panel = document.getElementById('advancedFiltersPanel');
        const btn = document.querySelector('.advanced-filters-btn');
        panel.classList.toggle('show');
        btn.classList.toggle('has-filters', panel.classList.contains('show'));
    }

    // Clear filters
    function clearFilters() {
        window.location.href = '@Url.Action("FeedPublico", "Desafios")';
    }

    // Toggle save challenge
    async function toggleGuardar(desafioId, btn) {
        try {
            const response = await fetch(`/Desafios/ToggleGuardar/${desafioId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                }
            });

            if (response.ok) {
                const data = await response.json();
                if (data.guardado) {
                    btn.classList.add('saved');
                } else {
                    btn.classList.remove('saved');
                }
            } else if (response.status === 401) {
                window.location.href = '/Account/Login?returnUrl=' + encodeURIComponent(window.location.pathname);
            }
        } catch (error) {
            console.error('Error al guardar desafio:', error);
        }
    }

    // Filter chip selection
    document.querySelectorAll('.filter-chip').forEach(chip => {
        chip.addEventListener('click', function() {
            const groupChips = this.closest('.filter-chips').querySelectorAll('.filter-chip');
            groupChips.forEach(c => c.classList.remove('selected'));
            this.classList.add('selected');
            this.querySelector('input').checked = true;
        });
    });

    // Update hidden orden field when form is submitted
    document.getElementById('advancedFiltersForm')?.addEventListener('submit', function() {
        document.getElementById('hiddenOrden').value = document.getElementById('sortSelect').value;
    });
</script>

