        document.addEventListener('DOMContentLoaded', async function() {
            try {
                const response = await fetch('/Desafios/MisGuardados');
                if (response.ok) {
                    const guardados = await response.json();
                    guardados.forEach(id => {
                        const btn = document.querySelector(`[onclick="toggleGuardar(${id}, this)"]`);
                        if (btn) btn.classList.add('saved');
                    });
                }
            } catch (error) {
                // User not logged in or error
            }
        });
    </script>
