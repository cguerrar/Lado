@model Lado.Models.Desafio

@{
    ViewData["Title"] = "Crear Desafío Público";
}

<style>
    .quest-creator {
        background: linear-gradient(135deg, #E0F7FA 0%, #ffffff 100%);
        min-height: 100vh;
        position: relative;
        overflow: hidden;
    }

        .quest-creator::before {
            content: '';
            position: absolute;
            width: 500px;
            height: 500px;
            background: radial-gradient(circle, rgba(0, 188, 212, 0.12) 0%, transparent 70%);
            border-radius: 50%;
            top: -150px;
            right: -150px;
            pointer-events: none;
            animation: float 6s ease-in-out infinite;
        }

        .quest-creator::after {
            content: '';
            position: absolute;
            width: 350px;
            height: 350px;
            background: radial-gradient(circle, rgba(38, 198, 218, 0.08) 0%, transparent 70%);
            border-radius: 50%;
            bottom: 100px;
            left: -100px;
            pointer-events: none;
            animation: float 8s ease-in-out infinite reverse;
        }

    @@keyframes float {
        0%, 100%

    {
        transform: translateY(0px);
    }

    50% {
        transform: translateY(-20px);
    }

    }

    .quest-creator-header {
        background: linear-gradient(135deg, #00BCD4 0%, #26C6DA 50%, #4DD0E1 100%);
        border-radius: 30px;
        padding: 50px;
        text-align: center;
        color: white;
        margin-bottom: 40px;
        box-shadow: 0 15px 40px rgba(0, 188, 212, 0.3);
        position: relative;
        overflow: hidden;
    }

        .quest-creator-header::before {
            content: '🎮';
            position: absolute;
            top: -20px;
            right: -20px;
            font-size: 180px;
            opacity: 0.08;
            transform: rotate(-15deg);
            pointer-events: none;
        }

        .quest-creator-header h1 {
            font-size: 3rem;
            font-weight: 900;
            margin: 0 0 15px 0;
            text-shadow: 2px 2px 8px rgba(0,0,0,0.2);
            position: relative;
            z-index: 2;
        }

        .quest-creator-header p {
            font-size: 1.2rem;
            font-weight: 500;
            margin: 0;
            opacity: 0.95;
            position: relative;
            z-index: 2;
        }

    .quest-card {
        background: white;
        border-radius: 25px;
        padding: 40px;
        box-shadow: 0 8px 25px rgba(0,188,212,0.1);
        margin-bottom: 30px;
        border-top: 5px solid #00BCD4;
    }

    .form-section {
        margin-bottom: 35px;
    }

    .form-section-title {
        color: #00BCD4;
        font-weight: 800;
        font-size: 1.3rem;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .form-label {
        font-weight: 700;
        color: #333;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.95rem;
    }

    .form-control, .form-select {
        border: 2px solid #B2EBF2;
        border-radius: 15px;
        padding: 14px 18px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: #F0FDFF;
    }

        .form-control:focus, .form-select:focus {
            border-color: #00BCD4;
            box-shadow: 0 0 0 4px rgba(0, 188, 212, 0.1);
            background: white;
            outline: none;
        }

    textarea.form-control {
        min-height: 140px;
        resize: vertical;
    }

    .category-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: 15px;
        margin-top: 15px;
    }

    .category-option {
        position: relative;
    }

        .category-option input[type="radio"] {
            position: absolute;
            opacity: 0;
        }

        .category-option label {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 25px 15px;
            background: white;
            border: 3px solid #B2EBF2;
            border-radius: 20px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-align: center;
            height: 100%;
        }

        .category-option input[type="radio"]:checked + label {
            background: linear-gradient(135deg, #00BCD4 0%, #26C6DA 100%);
            border-color: #00BCD4;
            color: white;
            transform: scale(1.05);
            box-shadow: 0 8px 25px rgba(0, 188, 212, 0.3);
        }

        .category-option label:hover:not(:has(input:checked)) {
            border-color: #00BCD4;
            background: rgba(0, 188, 212, 0.05);
            transform: translateY(-3px);
        }

    .category-emoji {
        font-size: 2.5rem;
        margin-bottom: 10px;
    }

    .category-name {
        font-weight: 700;
        font-size: 0.9rem;
    }

    .info-box {
        background: linear-gradient(135deg, #E0F7FA 0%, #B2EBF2 100%);
        border-left: 5px solid #00BCD4;
        border-radius: 15px;
        padding: 25px;
        margin: 25px 0;
    }

    .info-box-title {
        color: #00BCD4;
        font-weight: 800;
        font-size: 1.2rem;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .info-box ul {
        margin: 0;
        padding-left: 25px;
        color: #666;
    }

    .info-box li {
        margin-bottom: 10px;
        line-height: 1.6;
    }

    .fixed-values {
        text-align: center;
        margin: 30px 0;
    }

    .fixed-values-title {
        color: #333;
        font-weight: 700;
        font-size: 1.1rem;
        margin-bottom: 20px;
    }

    .fixed-values-badges {
        display: flex;
        justify-content: center;
        gap: 20px;
        flex-wrap: wrap;
    }

    .value-badge {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        background: linear-gradient(135deg, #4CAF50 0%, #8BC34A 100%);
        color: white;
        padding: 15px 30px;
        border-radius: 25px;
        font-weight: 800;
        font-size: 1.2rem;
        box-shadow: 0 6px 20px rgba(76, 175, 80, 0.3);
    }

    .quest-actions {
        display: flex;
        justify-content: center;
        gap: 20px;
        flex-wrap: wrap;
        margin-top: 40px;
    }

    .quest-btn {
        background: linear-gradient(135deg, #00BCD4 0%, #26C6DA 100%);
        border: none;
        color: white;
        padding: 18px 50px;
        font-size: 1.2rem;
        font-weight: 800;
        border-radius: 30px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 8px 25px rgba(0, 188, 212, 0.3);
        display: inline-flex;
        align-items: center;
        gap: 12px;
    }

        .quest-btn:hover {
            transform: translateY(-4px) scale(1.02);
            box-shadow: 0 12px 35px rgba(0, 188, 212, 0.4);
            color: white;
        }

    .quest-btn-cancel {
        background: white;
        border: 3px solid #e0e0e0;
        color: #666;
        padding: 18px 50px;
        font-size: 1.2rem;
        font-weight: 700;
        border-radius: 30px;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }

        .quest-btn-cancel:hover {
            background: #f5f5f5;
            border-color: #bdbdbd;
            transform: translateY(-2px);
            color: #666;
            text-decoration: none;
        }

    .text-danger {
        color: #f44336;
        font-size: 0.85rem;
        margin-top: 5px;
    }

    .text-muted {
        color: #999;
        font-size: 0.85rem;
        margin-top: 5px;
    }

    @@media (max-width: 768px) {
        .quest-creator-header

    {
        padding: 30px 20px;
    }

    .quest-creator-header h1 {
        font-size: 2rem;
    }

    .quest-creator-header p {
        font-size: 1rem;
    }

    .quest-card {
        padding: 25px 20px;
    }

    .category-grid {
        grid-template-columns: repeat(2, 1fr);
    }

    .fixed-values-badges {
        flex-direction: column;
        align-items: center;
    }

    .quest-actions {
        flex-direction: column;
    }

    .quest-btn, .quest-btn-cancel {
        width: 100%;
        justify-content: center;
    }

    }
</style>

<div class="quest-creator py-4">
    <div class="container" style="max-width: 900px; position: relative; z-index: 1;">
        <!-- Header -->
        <div class="quest-creator-header">
            <h1>🎯 Crear Desafío Público</h1>
            <p>Los mejores creadores competirán por hacer tu contenido</p>
        </div>

        <!-- Form -->
        <form method="post" asp-action="CrearPublico" asp-controller="Desafios">
            @Html.AntiForgeryToken()

            <!-- Main Card -->
            <div class="quest-card">
                <!-- Title -->
                <div class="form-section">
                    <label asp-for="Titulo" class="form-label">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#00BCD4" viewBox="0 0 16 16">
                            <path d="M4 15s1-1 4-1 5 2 8 2 4-1 4-1V3s-1 1-4 1-5-2-8-2-4 1-4 1z"></path>
                            <line x1="4" y1="22" x2="4" y2="15"></line>
                        </svg>
                        Título del Desafío
                    </label>
                    <input asp-for="Titulo" class="form-control"
                           placeholder="Ej: Foto de gatos con lentes 🐱"
                           maxlength="100" required>
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                    <small class="text-muted">Sé creativo y específico</small>
                </div>

                <!-- Description -->
                <div class="form-section">
                    <label asp-for="Descripcion" class="form-label">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#00BCD4" viewBox="0 0 16 16">
                            <path d="M5 4a.5.5 0 0 0 0 1h6a.5.5 0 0 0 0-1H5zm-.5 2.5A.5.5 0 0 1 5 6h6a.5.5 0 0 1 0 1H5a.5.5 0 0 1-.5-.5zM5 8a.5.5 0 0 0 0 1h6a.5.5 0 0 0 0-1H5zm0 2a.5.5 0 0 0 0 1h3a.5.5 0 0 0 0-1H5z" />
                            <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2zm10-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1z" />
                        </svg>
                        Describe tu Desafío
                    </label>
                    <textarea asp-for="Descripcion" class="form-control"
                              placeholder="Describe exactamente qué necesitas: estilo, duración, requisitos específicos, etc."
                              required></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <!-- Category -->
                <div class="form-section">
                    <div class="form-section-title">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M1 2.5A1.5 1.5 0 0 1 2.5 1h3A1.5 1.5 0 0 1 7 2.5v3A1.5 1.5 0 0 1 5.5 7h-3A1.5 1.5 0 0 1 1 5.5v-3zM2.5 2a.5.5 0 0 0-.5.5v3a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 .5-.5v-3a.5.5 0 0 0-.5-.5h-3zm6.5.5A1.5 1.5 0 0 1 10.5 1h3A1.5 1.5 0 0 1 15 2.5v3A1.5 1.5 0 0 1 13.5 7h-3A1.5 1.5 0 0 1 9 5.5v-3zm1.5-.5a.5.5 0 0 0-.5.5v3a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 .5-.5v-3a.5.5 0 0 0-.5-.5h-3zM1 10.5A1.5 1.5 0 0 1 2.5 9h3A1.5 1.5 0 0 1 7 10.5v3A1.5 1.5 0 0 1 5.5 15h-3A1.5 1.5 0 0 1 1 13.5v-3zm1.5-.5a.5.5 0 0 0-.5.5v3a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 .5-.5v-3a.5.5 0 0 0-.5-.5h-3zm6.5.5A1.5 1.5 0 0 1 10.5 9h3a1.5 1.5 0 0 1 1.5 1.5v3a1.5 1.5 0 0 1-1.5 1.5h-3A1.5 1.5 0 0 1 9 13.5v-3zm1.5-.5a.5.5 0 0 0-.5.5v3a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 .5-.5v-3a.5.5 0 0 0-.5-.5h-3z" />
                        </svg>
                        Elige una Categoría
                    </div>
                    <div class="category-grid">
                        <div class="category-option">
                            <input type="radio" name="Categoria" id="cat_fotos" value="Fotos de Gatos" required>
                            <label for="cat_fotos">
                                <div class="category-emoji">🐱</div>
                                <div class="category-name">Fotos Gatos</div>
                            </label>
                        </div>
                        <div class="category-option">
                            <input type="radio" name="Categoria" id="cat_arte" value="Arte y Diseño">
                            <label for="cat_arte">
                                <div class="category-emoji">🎨</div>
                                <div class="category-name">Arte</div>
                            </label>
                        </div>
                        <div class="category-option">
                            <input type="radio" name="Categoria" id="cat_fitness" value="Fitness">
                            <label for="cat_fitness">
                                <div class="category-emoji">💪</div>
                                <div class="category-name">Fitness</div>
                            </label>
                        </div>
                        <div class="category-option">
                            <input type="radio" name="Categoria" id="cat_musica" value="Música">
                            <label for="cat_musica">
                                <div class="category-emoji">🎵</div>
                                <div class="category-name">Música</div>
                            </label>
                        </div>
                        <div class="category-option">
                            <input type="radio" name="Categoria" id="cat_gaming" value="Gaming">
                            <label for="cat_gaming">
                                <div class="category-emoji">🎮</div>
                                <div class="category-name">Gaming</div>
                            </label>
                        </div>
                        <div class="category-option">
                            <input type="radio" name="Categoria" id="cat_otro" value="Otro">
                            <label for="cat_otro">
                                <div class="category-emoji">✨</div>
                                <div class="category-name">Otro</div>
                            </label>
                        </div>
                    </div>
                    <span asp-validation-for="Categoria" class="text-danger d-block mt-2"></span>
                </div>

                <!-- Content Type -->
                <div class="form-section">
                    <label asp-for="TipoContenido" class="form-label">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#00BCD4" viewBox="0 0 16 16">
                            <path d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" />
                            <path d="M2.002 1a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2h-12zm12 1a1 1 0 0 1 1 1v6.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12V3a1 1 0 0 1 1-1h12z" />
                        </svg>
                        Tipo de Contenido
                    </label>
                    <select asp-for="TipoContenido" class="form-select" required>
                        <option value="">Selecciona...</option>
                        <option value="0">📸 Imagen</option>
                        <option value="1">🎬 Video</option>
                        <option value="2">🎙️ Audio</option>
                        <option value="3">📝 Texto</option>
                    </select>
                    <span asp-validation-for="TipoContenido" class="text-danger"></span>
                </div>

                <!-- Info Box -->
                <div class="info-box">
                    <div class="info-box-title">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
                        </svg>
                        ¿Cómo funciona?
                    </div>
                    <ul>
                        <li>✨ Tu desafío será visible por <strong>7 días</strong></li>
                        <li>🎯 Los creadores enviarán propuestas con precio y plazo</li>
                        <li>🏆 <strong>Tú eliges</strong> la mejor propuesta</li>
                        <li>💰 El pago se procesa cuando apruebes el contenido final</li>
                    </ul>
                </div>

                <!-- Fixed Values -->
                <div class="fixed-values">
                    <div class="fixed-values-title">Valores del Desafío:</div>
                    <div class="fixed-values-badges">
                        <span class="value-badge">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="white" viewBox="0 0 16 16">
                                <path d="M4 10.781c.148 1.667 1.513 2.85 3.591 3.003V15h1.043v-1.216c2.27-.179 3.678-1.438 3.678-3.3 0-1.59-.947-2.51-2.956-3.028l-.722-.187V3.467c1.122.11 1.879.714 2.07 1.616h1.47c-.166-1.6-1.54-2.748-3.54-2.875V1H7.591v1.233c-1.939.23-3.27 1.472-3.27 3.156 0 1.454.966 2.483 2.661 2.917l.61.162v4.031c-1.149-.17-1.94-.8-2.131-1.718H4zm3.391-3.836c-1.043-.263-1.6-.825-1.6-1.616 0-.944.704-1.641 1.8-1.828v3.495l-.2-.05zm1.591 1.872c1.287.323 1.852.859 1.852 1.769 0 1.097-.826 1.828-2.2 1.939V8.73l.348.086z" />
                            </svg>
                            $10 USD
                        </span>
                        <span class="value-badge">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="white" viewBox="0 0 16 16">
                                <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z" />
                            </svg>
                            3 Días
                        </span>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="quest-actions">
                <button type="submit" class="quest-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="white" viewBox="0 0 16 16">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                    </svg>
                    Crear Desafío
                </button>
                <a href="/Dashboard" class="quest-btn-cancel">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z" />
                    </svg>
                    Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}