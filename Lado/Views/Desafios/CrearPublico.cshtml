@model Lado.Models.Desafio

@{
    ViewData["Title"] = "Crear Desafio";
    Layout = "_Layout";
}

<style>
    :root {
        --primary: #6366f1;
        --primary-dark: #4f46e5;
        --primary-light: #a5b4fc;
        --primary-pale: rgba(99, 102, 241, 0.08);
        --secondary: #8b5cf6;
        --accent: #f59e0b;
        --success: #10b981;
        --danger: #ef4444;
        --text-dark: #1e1b4b;
        --text-gray: #64748b;
        --text-light: #94a3b8;
        --border-color: #e2e8f0;
        --bg-light: #f8fafc;
        --bg-gradient: linear-gradient(135deg, #f8fafc 0%, #eef2ff 50%, #faf5ff 100%);
        --white: #ffffff;
        --card-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
        --card-shadow-hover: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px(0, 0, 0, 0.1);
    }

    * {
        box-sizing: border-box;
    }

    .crear-desafio-page {
        background: var(--bg-gradient);
        min-height: 100vh;
        padding: 24px 16px;
        padding-top: max(24px, env(safe-area-inset-top));
        padding-bottom: max(24px, env(safe-area-inset-bottom));
    }

    .crear-container {
        max-width: 720px;
        margin: 0 auto;
    }

    /* Header */
    .crear-header {
        text-align: center;
        margin-bottom: 32px;
    }

    .crear-header-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        border-radius: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        box-shadow: 0 10px 40px rgba(99, 102, 241, 0.3);
    }

    .crear-header-icon svg {
        width: 40px;
        height: 40px;
        stroke: white;
    }

    .crear-header h1 {
        font-size: 2rem;
        font-weight: 800;
        color: var(--text-dark);
        margin: 0 0 8px 0;
        letter-spacing: -0.02em;
    }

    .crear-header p {
        color: var(--text-gray);
        font-size: 1rem;
        margin: 0;
    }

    /* Progress Steps */
    .progress-steps {
        display: flex;
        justify-content: center;
        gap: 8px;
        margin-bottom: 32px;
    }

    .progress-step {
        width: 60px;
        height: 4px;
        background: var(--border-color);
        border-radius: 2px;
        transition: all 0.3s ease;
    }

    .progress-step.active {
        background: linear-gradient(90deg, var(--primary), var(--secondary));
    }

    /* Form Card */
    .form-card {
        background: var(--white);
        border-radius: 24px;
        padding: 32px;
        box-shadow: var(--card-shadow);
        margin-bottom: 24px;
    }

    .form-section {
        margin-bottom: 28px;
    }

    .form-section:last-child {
        margin-bottom: 0;
    }

    .section-title {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 16px;
    }

    .section-icon {
        width: 40px;
        height: 40px;
        background: var(--primary-pale);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .section-icon svg {
        width: 20px;
        height: 20px;
        stroke: var(--primary);
    }

    .section-title h3 {
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--text-dark);
        margin: 0;
    }

    .section-title span {
        font-size: 0.85rem;
        color: var(--text-gray);
        font-weight: 500;
    }

    /* Form Controls */
    .form-label {
        display: block;
        font-weight: 600;
        color: var(--text-dark);
        margin-bottom: 8px;
        font-size: 0.9rem;
    }

    .form-control, .form-select {
        width: 100%;
        padding: 14px 16px;
        border: 2px solid var(--border-color);
        border-radius: 12px;
        font-size: 1rem;
        font-family: inherit;
        transition: all 0.2s ease;
        background: var(--white);
        color: var(--text-dark);
    }

    .form-control:focus, .form-select:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 4px var(--primary-pale);
    }

    .form-control::placeholder {
        color: var(--text-light);
    }

    textarea.form-control {
        min-height: 120px;
        resize: vertical;
    }

    .char-counter {
        text-align: right;
        font-size: 0.8rem;
        color: var(--text-light);
        margin-top: 4px;
    }

    /* Category Grid */
    .category-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 12px;
    }

    .category-option {
        position: relative;
    }

    .category-option input {
        position: absolute;
        opacity: 0;
        pointer-events: none;
    }

    .category-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 20px 12px;
        background: var(--bg-light);
        border: 2px solid transparent;
        border-radius: 16px;
        cursor: pointer;
        transition: all 0.2s ease;
        text-align: center;
    }

    .category-card:hover {
        background: var(--primary-pale);
        transform: translateY(-2px);
    }

    .category-option input:checked + .category-card {
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        border-color: var(--primary);
        color: white;
        transform: scale(1.02);
        box-shadow: 0 8px 25px rgba(99, 102, 241, 0.3);
    }

    .category-emoji {
        font-size: 2rem;
        margin-bottom: 8px;
    }

    .category-name {
        font-weight: 600;
        font-size: 0.85rem;
    }

    /* Content Type Grid */
    .content-type-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 12px;
    }

    .content-type-option {
        position: relative;
    }

    .content-type-option input {
        position: absolute;
        opacity: 0;
        pointer-events: none;
    }

    .content-type-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 16px 8px;
        background: var(--bg-light);
        border: 2px solid transparent;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .content-type-card:hover {
        background: var(--primary-pale);
    }

    .content-type-option input:checked + .content-type-card {
        background: var(--primary);
        color: white;
        box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
    }

    .content-type-icon {
        font-size: 1.5rem;
        margin-bottom: 6px;
    }

    .content-type-name {
        font-size: 0.8rem;
        font-weight: 600;
    }

    /* Budget Section */
    .budget-type-toggle {
        display: flex;
        background: var(--bg-light);
        border-radius: 12px;
        padding: 4px;
        margin-bottom: 20px;
    }

    .budget-type-btn {
        flex: 1;
        padding: 12px 16px;
        border: none;
        background: transparent;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.9rem;
        color: var(--text-gray);
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .budget-type-btn.active {
        background: var(--white);
        color: var(--primary);
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .budget-inputs {
        display: flex;
        gap: 16px;
        align-items: center;
    }

    .budget-input-group {
        flex: 1;
    }

    .budget-input-wrapper {
        position: relative;
    }

    .budget-input-wrapper .currency-symbol {
        position: absolute;
        left: 16px;
        top: 50%;
        transform: translateY(-50%);
        color: var(--text-gray);
        font-weight: 600;
    }

    .budget-input-wrapper input {
        padding-left: 36px;
    }

    .budget-separator {
        color: var(--text-light);
        font-weight: 600;
    }

    .budget-presets {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        margin-top: 12px;
    }

    .budget-preset {
        padding: 8px 16px;
        background: var(--bg-light);
        border: 2px solid transparent;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        color: var(--text-gray);
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .budget-preset:hover {
        border-color: var(--primary);
        color: var(--primary);
    }

    .budget-preset.active {
        background: var(--primary);
        color: white;
    }

    /* Duration Slider */
    .duration-display {
        text-align: center;
        margin-bottom: 16px;
    }

    .duration-value {
        font-size: 3rem;
        font-weight: 800;
        color: var(--primary);
        line-height: 1;
    }

    .duration-label {
        font-size: 1rem;
        color: var(--text-gray);
    }

    .duration-slider {
        width: 100%;
        height: 8px;
        -webkit-appearance: none;
        appearance: none;
        background: var(--border-color);
        border-radius: 4px;
        outline: none;
    }

    .duration-slider::-webkit-slider-thumb {
        -webkit-appearance: none;
        appearance: none;
        width: 24px;
        height: 24px;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        border-radius: 50%;
        cursor: pointer;
        box-shadow: 0 4px 10px rgba(99, 102, 241, 0.3);
    }

    .duration-presets {
        display: flex;
        justify-content: space-between;
        margin-top: 8px;
        font-size: 0.8rem;
        color: var(--text-light);
    }

    /* Special Options */
    .special-options {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 12px;
    }

    .special-option {
        position: relative;
    }

    .special-option input {
        position: absolute;
        opacity: 0;
        pointer-events: none;
    }

    .special-card {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 16px;
        background: var(--bg-light);
        border: 2px solid transparent;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .special-card:hover {
        border-color: var(--primary-light);
    }

    .special-option input:checked + .special-card {
        border-color: var(--primary);
        background: var(--primary-pale);
    }

    .special-icon {
        font-size: 1.5rem;
    }

    .special-info h4 {
        margin: 0 0 2px 0;
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--text-dark);
    }

    .special-info p {
        margin: 0;
        font-size: 0.75rem;
        color: var(--text-gray);
    }

    /* Tags Input */
    .tags-input-container {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        padding: 12px;
        background: var(--bg-light);
        border: 2px solid var(--border-color);
        border-radius: 12px;
        min-height: 52px;
        cursor: text;
    }

    .tags-input-container:focus-within {
        border-color: var(--primary);
        box-shadow: 0 0 0 4px var(--primary-pale);
    }

    .tag {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 12px;
        background: var(--primary);
        color: white;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 500;
    }

    .tag-remove {
        cursor: pointer;
        opacity: 0.8;
    }

    .tag-remove:hover {
        opacity: 1;
    }

    .tags-input {
        flex: 1;
        min-width: 100px;
        border: none;
        background: transparent;
        font-size: 0.9rem;
        outline: none;
    }

    /* Submit Button */
    .submit-section {
        display: flex;
        flex-direction: column;
        gap: 16px;
        align-items: center;
    }

    .btn-submit {
        width: 100%;
        padding: 18px 32px;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        border: none;
        border-radius: 16px;
        color: white;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 8px 25px rgba(99, 102, 241, 0.3);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 35px rgba(99, 102, 241, 0.4);
    }

    .btn-submit:active {
        transform: translateY(0);
    }

    .btn-cancel {
        padding: 12px 24px;
        background: transparent;
        border: none;
        color: var(--text-gray);
        font-size: 0.95rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .btn-cancel:hover {
        color: var(--text-dark);
    }

    /* Info Banner */
    .info-banner {
        background: linear-gradient(135deg, var(--primary-pale), rgba(139, 92, 246, 0.08));
        border-radius: 16px;
        padding: 20px;
        display: flex;
        gap: 16px;
        margin-bottom: 24px;
    }

    .info-banner-icon {
        width: 48px;
        height: 48px;
        background: var(--white);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .info-banner-icon svg {
        width: 24px;
        height: 24px;
        stroke: var(--primary);
    }

    .info-banner-content h4 {
        margin: 0 0 8px 0;
        font-size: 1rem;
        font-weight: 700;
        color: var(--text-dark);
    }

    .info-banner-content ul {
        margin: 0;
        padding-left: 18px;
        color: var(--text-gray);
        font-size: 0.9rem;
    }

    .info-banner-content li {
        margin-bottom: 4px;
    }

    /* Responsive */
    @@media (max-width: 640px) {
        .crear-desafio-page {
            padding: 16px;
        }

        .form-card {
            padding: 24px 20px;
            border-radius: 20px;
        }

        .crear-header h1 {
            font-size: 1.5rem;
        }

        .category-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .content-type-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .budget-inputs {
            flex-direction: column;
        }

        .budget-separator {
            display: none;
        }

        .special-options {
            grid-template-columns: 1fr;
        }

        .info-banner {
            flex-direction: column;
            text-align: center;
        }

        .info-banner-icon {
            margin: 0 auto;
        }
    }
</style>

