<style>
    :root {
        --primary: #4682B4;
        --primary-dark: #36648B;
        --primary-darker: #2C5278;
        --primary-light: #B0C4DE;
        --primary-pale: rgba(70, 130, 180, 0.08);
        --primary-glow: rgba(70, 130, 180, 0.3);
        --text-dark: #1a1a2e;
        --text-gray: #64748b;
        --border-color: #e2e8f0;
        --bg-light: #f8fafc;
        --white: #ffffff;
        --success: #10b981;
        --success-light: #d1fae5;
    }

    .quest-creator {
        background: linear-gradient(135deg, var(--bg-light) 0%, #e2e8f0 50%, #cbd5e1 100%);
        min-height: 100vh;
        position: relative;
        overflow: hidden;
        padding: 2rem 0;
    }

    .quest-creator::before {
        content: '';
        position: absolute;
        width: 500px;
        height: 500px;
        background: radial-gradient(circle, rgba(70, 130, 180, 0.12) 0%, transparent 70%);
        border-radius: 50%;
        top: -150px;
        right: -150px;
        pointer-events: none;
        animation: float 6s ease-in-out infinite;
    }

    .quest-creator::after {
        content: '';
        position: absolute;
        width: 350px;
        height: 350px;
        background: radial-gradient(circle, rgba(70, 130, 180, 0.08) 0%, transparent 70%);
        border-radius: 50%;
        bottom: 100px;
        left: -100px;
        pointer-events: none;
        animation: float 8s ease-in-out infinite reverse;
    }

    @@keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-20px); }
    }

    .quest-creator-header {
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 50%, var(--primary-darker) 100%);
        border-radius: 24px;
        padding: 48px;
        text-align: center;
        color: white;
        margin-bottom: 32px;
        box-shadow: 0 15px 40px var(--primary-glow);
        position: relative;
        overflow: hidden;
    }

    .quest-creator-header::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -50%;
        width: 100%;
        height: 100%;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 60%);
        pointer-events: none;
    }

    .quest-creator-header h1 {
        font-size: 2.5rem;
        font-weight: 800;
        margin: 0 0 12px 0;
        text-shadow: 2px 2px 8px rgba(0,0,0,0.2);
        position: relative;
        z-index: 2;
        letter-spacing: -0.02em;
    }

    .quest-creator-header p {
        font-size: 1.1rem;
        font-weight: 500;
        margin: 0;
        opacity: 0.9;
        position: relative;
        z-index: 2;
    }

    .quest-card {
        background: var(--white);
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 8px 30px rgba(0,0,0,0.08);
        margin-bottom: 24px;
        border-top: 4px solid var(--primary);
    }

    .form-section {
        margin-bottom: 28px;
    }

    .form-section-title {
        color: var(--primary);
        font-weight: 700;
        font-size: 1.15rem;
        margin-bottom: 16px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .form-label {
        font-weight: 600;
        color: var(--text-dark);
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.9rem;
    }

    .form-label svg {
        color: var(--primary);
    }

    .form-control, .form-select {
        border: 2px solid var(--border-color);
        border-radius: 12px;
        padding: 14px 16px;
        font-size: 0.95rem;
        transition: all 0.2s ease;
        background: var(--white);
        font-family: inherit;
        font-weight: 500;
        color: var(--text-dark);
    }

    .form-control:focus, .form-select:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 4px var(--primary-pale);
        background: var(--white);
        outline: none;
    }

    .form-control::placeholder {
        color: var(--text-gray);
    }

    textarea.form-control {
        min-height: 120px;
        resize: vertical;
    }

    .category-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
        gap: 12px;
        margin-top: 12px;
    }

    .category-option {
        position: relative;
    }

    .category-option input[type="radio"] {
        position: absolute;
        opacity: 0;
    }

    .category-option label {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 20px 12px;
        background: var(--white);
        border: 2px solid var(--border-color);
        border-radius: 16px;
        cursor: pointer;
        transition: all 0.2s ease;
        text-align: center;
        height: 100%;
    }

    .category-option input[type="radio"]:checked + label {
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        border-color: var(--primary);
        color: white;
        transform: scale(1.02);
        box-shadow: 0 8px 25px var(--primary-glow);
    }

    .category-option label:hover {
        border-color: var(--primary);
        background: var(--primary-pale);
        transform: translateY(-2px);
    }

    .category-option input[type="radio"]:checked + label:hover {
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
    }

    .category-emoji {
        font-size: 2rem;
        margin-bottom: 8px;
    }

    .category-name {
        font-weight: 600;
        font-size: 0.85rem;
    }

    .info-box {
        background: linear-gradient(135deg, var(--primary-pale) 0%, rgba(176, 196, 222, 0.2) 100%);
        border-left: 4px solid var(--primary);
        border-radius: 12px;
        padding: 24px;
        margin: 24px 0;
    }

    .info-box-title {
        color: var(--primary-dark);
        font-weight: 700;
        font-size: 1.1rem;
        margin-bottom: 16px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .info-box ul {
        margin: 0;
        padding-left: 20px;
        color: var(--text-gray);
    }

    .info-box li {
        margin-bottom: 10px;
        line-height: 1.6;
        font-size: 0.9rem;
    }

    .info-box li strong {
        color: var(--text-dark);
    }

    .fixed-values {
        text-align: center;
        margin: 28px 0;
        padding: 24px;
        background: var(--bg-light);
        border-radius: 16px;
    }

    .fixed-values-title {
        color: var(--text-dark);
        font-weight: 600;
        font-size: 1rem;
        margin-bottom: 16px;
    }

    .fixed-values-badges {
        display: flex;
        justify-content: center;
        gap: 16px;
        flex-wrap: wrap;
    }

    .value-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: linear-gradient(135deg, var(--success) 0%, #059669 100%);
        color: white;
        padding: 12px 24px;
        border-radius: 50px;
        font-weight: 700;
        font-size: 1rem;
        box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
    }

    .quest-actions {
        display: flex;
        justify-content: center;
        gap: 16px;
        flex-wrap: wrap;
        margin-top: 32px;
    }

    .quest-btn {
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        border: none;
        color: white;
        padding: 16px 40px;
        font-size: 1rem;
        font-weight: 700;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.25s ease;
        box-shadow: 0 8px 25px var(--primary-glow);
        display: inline-flex;
        align-items: center;
        gap: 10px;
        letter-spacing: -0.01em;
    }

    .quest-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 35px rgba(70, 130, 180, 0.4);
        color: white;
    }

    .quest-btn:active {
        transform: translateY(-1px);
    }

    .quest-btn-cancel {
        background: var(--white);
        border: 2px solid var(--border-color);
        color: var(--text-gray);
        padding: 16px 40px;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.2s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .quest-btn-cancel:hover {
        background: var(--bg-light);
        border-color: var(--text-gray);
        transform: translateY(-2px);
        color: var(--text-dark);
        text-decoration: none;
    }

    .text-danger {
        color: #dc2626;
        font-size: 0.8rem;
        margin-top: 6px;
        font-weight: 500;
    }

    .text-muted {
        color: var(--text-gray);
        font-size: 0.8rem;
        margin-top: 6px;
    }

    @@media (max-width: 768px) {
        .quest-creator {
            padding: 1rem;
        }

        .quest-creator-header {
            padding: 32px 24px;
            border-radius: 20px;
        }

        .quest-creator-header h1 {
            font-size: 1.75rem;
        }

        .quest-creator-header p {
            font-size: 0.95rem;
        }

        .quest-card {
            padding: 24px 20px;
