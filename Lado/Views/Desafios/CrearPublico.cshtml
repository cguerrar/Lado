        }

        .category-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .fixed-values-badges {
            flex-direction: column;
            align-items: center;
        }

        .quest-actions {
            flex-direction: column;
        }

        .quest-btn, .quest-btn-cancel {
            width: 100%;
            justify-content: center;
        }
    }
</style>

