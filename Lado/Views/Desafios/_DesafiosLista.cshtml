@model IEnumerable<Lado.Models.Desafio>

<style>
    .quest-table {
        background: white;
        border-radius: 25px;
        overflow: hidden;
        box-shadow: 0 8px 25px rgba(0,188,212,0.15);
    }

    .quest-table-header {
        background: linear-gradient(135deg, #00BCD4 0%, #26C6DA 100%);
        padding: 20px 30px;
        display: grid;
        grid-template-columns: 2fr 1fr 1.2fr 1fr 1fr 1fr 1.5fr;
        gap: 15px;
        align-items: center;
    }

    .quest-table-header-cell {
        color: white;
        font-weight: 800;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .quest-table-row {
        padding: 25px 30px;
        display: grid;
        grid-template-columns: 2fr 1fr 1.2fr 1fr 1fr 1fr 1.5fr;
        gap: 15px;
        align-items: center;
        border-bottom: 2px solid #f5f5f5;
        transition: all 0.3s ease;
    }

        .quest-table-row:hover {
            background: linear-gradient(90deg, rgba(0, 188, 212, 0.05) 0%, transparent 100%);
            transform: translateX(5px);
        }

        .quest-table-row:last-child {
            border-bottom: none;
        }

    .quest-title-cell {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .quest-icon {
        background: linear-gradient(135deg, #00BCD4 0%, #26C6DA 100%);
        width: 45px;
        height: 45px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 15px rgba(0, 188, 212, 0.3);
        flex-shrink: 0;
    }

    .quest-title-content strong {
        color: #333;
        font-weight: 800;
        font-size: 1rem;
        display: block;
        margin-bottom: 4px;
    }

    .quest-title-content small {
        color: #999;
        font-size: 0.85rem;
    }

    .quest-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 0.85rem;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    }

        .quest-badge.publico {
            background: linear-gradient(135deg, #4CAF50 0%, #8BC34A 100%);
            color: white;
        }

        .quest-badge.directo {
            background: linear-gradient(135deg, #00BCD4 0%, #26C6DA 100%);
            color: white;
        }

    .quest-budget {
        color: #333;
    }

    .quest-budget-value {
        font-weight: 900;
        font-size: 1.1rem;
        color: #00BCD4;
        display: block;
        margin-bottom: 4px;
    }

    .quest-budget-days {
        color: #999;
        font-size: 0.8rem;
    }

    .quest-status-badge {
        display: inline-block;
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 0.85rem;
        text-align: center;
    }

        .quest-status-badge.completado {
            background: linear-gradient(135deg, #4CAF50 0%, #8BC34A 100%);
            color: white;
        }

        .quest-status-badge.rechazado,
        .quest-status-badge.expirado,
        .quest-status-badge.cancelado {
            background: linear-gradient(135deg, #f44336 0%, #e57373 100%);
            color: white;
        }

        .quest-status-badge.asignado,
        .quest-status-badge.enprogreso {
            background: linear-gradient(135deg, #00BCD4 0%, #26C6DA 100%);
            color: white;
        }

        .quest-status-badge.pendiente,
        .quest-status-badge.recibiendopropuestas {
            background: linear-gradient(135deg, #FFC107 0%, #FFD54F 100%);
            color: #333;
        }

    .quest-proposals {
        text-align: center;
    }

    .quest-proposals-badge {
        background: linear-gradient(135deg, #9C27B0 0%, #BA68C8 100%);
        color: white;
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: 700;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        box-shadow: 0 3px 10px rgba(156, 39, 176, 0.3);
    }

    .quest-proposals small {
        color: #999;
        font-size: 0.85rem;
    }

    .quest-date {
        color: #999;
        font-size: 0.9rem;
    }

    .quest-actions {
        display: flex;
        gap: 8px;
        justify-content: flex-end;
    }

    .quest-action-btn {
        border: 2px solid #00BCD4;
        background: white;
        color: #00BCD4;
        padding: 8px 18px;
        border-radius: 12px;
        font-weight: 700;
        font-size: 0.85rem;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        cursor: pointer;
        text-decoration: none;
    }

        .quest-action-btn:hover {
            background: #00BCD4;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 188, 212, 0.3);
            text-decoration: none;
        }

        .quest-action-btn.danger {
            border-color: #f44336;
            color: #f44336;
        }

            .quest-action-btn.danger:hover {
                background: #f44336;
                color: white;
                box-shadow: 0 4px 15px rgba(244, 67, 54, 0.3);
            }

    .empty-state {
        text-align: center;
        padding: 80px 30px;
        background: white;
        border-radius: 25px;
        box-shadow: 0 8px 25px rgba(0,188,212,0.08);
    }

    .empty-state-icon {
        font-size: 100px;
        margin-bottom: 25px;
        opacity: 0.3;
    }

    .empty-state h5 {
        color: #333;
        font-weight: 800;
        font-size: 1.8rem;
        margin-bottom: 15px;
    }

    .empty-state p {
        color: #666;
        font-size: 1.1rem;
        margin: 0;
    }

    @@media (max-width: 1200px) {
        .quest-table-header, .quest-table-row

    {
        grid-template-columns: 1fr;
        gap: 10px;
    }

    .quest-table-header {
        display: none;
    }

    .quest-table-row {
        padding: 20px;
        display: block;
    }

        .quest-table-row > div {
            margin-bottom: 12px;
        }

            .quest-table-row > div:last-child {
                margin-bottom: 0;
            }

    .quest-actions {
        justify-content: flex-start;
        flex-wrap: wrap;
    }

    }
</style>

@if (Model != null && Model.Any())
{
    <div class="quest-table">
        <!-- Header -->
        <div class="quest-table-header">
            <div class="quest-table-header-cell">Título</div>
            <div class="quest-table-header-cell">Tipo</div>
            <div class="quest-table-header-cell">Presupuesto</div>
            <div class="quest-table-header-cell">Estado</div>
            <div class="quest-table-header-cell">Propuestas</div>
            <div class="quest-table-header-cell">Fecha</div>
            <div class="quest-table-header-cell">Acciones</div>
        </div>

        <!-- Rows -->
        @foreach (var desafio in Model)
        {
            <div class="quest-table-row">
                <!-- Title -->
                <div class="quest-title-cell">
                    <div class="quest-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="white" viewBox="0 0 16 16">
                            <path d="M2.5.5A.5.5 0 0 1 3 0h10a.5.5 0 0 1 .5.5c0 .538-.012 1.05-.034 1.536a3 3 0 1 1-1.133 5.89c-.79 1.865-1.878 2.777-2.833 3.011v2.173l1.425.356c.194.048.377.135.537.255L13.3 15.1a.5.5 0 0 1-.3.9H3a.5.5 0 0 1-.3-.9l1.838-1.379c.16-.12.343-.207.537-.255L6.5 13.11v-2.173c-.955-.234-2.043-1.146-2.833-3.012a3 3 0 1 1-1.132-5.89A33.076 33.076 0 0 1 2.5.5z" />
                        </svg>
                    </div>
                    <div class="quest-title-content">
                        <strong>@desafio.Titulo</strong>
                        @if (!string.IsNullOrEmpty(desafio.Categoria))
                        {
                            <small>@desafio.Categoria</small>
                        }
                    </div>
                </div>

                <!-- Type -->
                <div>
                    @if (desafio.TipoDesafio == TipoDesafio.Publico)
                    {
                        <span class="quest-badge publico">
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="white" viewBox="0 0 16 16">
                                <path d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm7.5-6.923c-.67.204-1.335.82-1.887 1.855A7.97 7.97 0 0 0 5.145 4H7.5V1.077zM4.09 4a9.267 9.267 0 0 1 .64-1.539 6.7 6.7 0 0 1 .597-.933A7.025 7.025 0 0 0 2.255 4H4.09zm-.582 3.5c.03-.877.138-1.718.312-2.5H1.674a6.958 6.958 0 0 0-.656 2.5h2.49zM4.847 5a12.5 12.5 0 0 0-.338 2.5H7.5V5H4.847zM8.5 5v2.5h2.99a12.495 12.495 0 0 0-.337-2.5H8.5zM4.51 8.5a12.5 12.5 0 0 0 .337 2.5H7.5V8.5H4.51zm3.99 0V11h2.653c.187-.765.306-1.608.338-2.5H8.5zM5.145 12c.138.386.295.744.468 1.068.552 1.035 1.218 1.65 1.887 1.855V12H5.145zm.182 2.472a6.696 6.696 0 0 1-.597-.933A9.268 9.268 0 0 1 4.09 12H2.255a7.024 7.024 0 0 0 3.072 2.472zM3.82 11a13.652 13.652 0 0 1-.312-2.5h-2.49c.062.89.291 1.733.656 2.5H3.82zm6.853 3.472A7.024 7.024 0 0 0 13.745 12H11.91a9.27 9.27 0 0 1-.64 1.539 6.688 6.688 0 0 1-.597.933zM8.5 12v2.923c.67-.204 1.335-.82 1.887-1.855.173-.324.33-.682.468-1.068H8.5zm3.68-1h2.146c.365-.767.594-1.61.656-2.5h-2.49a13.65 13.65 0 0 1-.312 2.5zm2.802-3.5a6.959 6.959 0 0 0-.656-2.5H12.18c.174.782.282 1.623.312 2.5h2.49zM11.27 2.461c.247.464.462.98.64 1.539h1.835a7.024 7.024 0 0 0-3.072-2.472c.218.284.418.598.597.933zM10.855 4a7.966 7.966 0 0 0-.468-1.068C9.835 1.897 9.17 1.282 8.5 1.077V4h2.355z" />
                            </svg>
                            Público
                        </span>
                    }
                    else
                    {
                        <span class="quest-badge directo">
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="white" viewBox="0 0 16 16">
                                <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z" />
                            </svg>
                            Directo
                        </span>
                    }
                </div>

                <!-- Budget -->
                <div class="quest-budget">
                    <span class="quest-budget-value">$@desafio.Presupuesto</span>
                    <small class="quest-budget-days">@desafio.DiasPlazoPlazo días</small>
                </div>

                <!-- Status -->
                <div>
                    <span class="quest-status-badge @desafio.Estado.ToString().ToLower()">
                        @desafio.Estado.ToString()
                    </span>
                </div>

                <!-- Proposals -->
                <div class="quest-proposals">
                    @if (desafio.TipoDesafio == TipoDesafio.Publico)
                    {
                        <span class="quest-proposals-badge">
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="white" viewBox="0 0 16 16">
                                <path d="M15 14s1 0 1-1-1-4-5-4-5 3-5 4 1 1 1 1h8Zm-7.978-1A.261.261 0 0 1 7 12.996c.001-.264.167-1.03.76-1.72C8.312 10.629 9.282 10 11 10c1.717 0 2.687.63 3.24 1.276.593.69.758 1.457.76 1.72l-.008.002a.274.274 0 0 1-.014.002H7.022ZM11 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4Zm3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0ZM6.936 9.28a5.88 5.88 0 0 0-1.23-.247A7.35 7.35 0 0 0 5 9c-4 0-5 3-5 4 0 .667.333 1 1 1h4.216A2.238 2.238 0 0 1 5 13c0-1.01.377-2.042 1.09-2.904.243-.294.526-.569.846-.816ZM4.92 10A5.493 5.493 0 0 0 4 13H1c0-.26.164-1.03.76-1.724.545-.636 1.492-1.256 3.16-1.275ZM1.5 5.5a3 3 0 1 1 6 0 3 3 0 0 1-6 0Zm3-2a2 2 0 1 0 0 4 2 2 0 0 0 0-4Z" />
                            </svg>
                            @desafio.Propuestas.Count
                        </span>
                    }
                    else if (desafio.CreadorObjetivo != null)
                    {
                        <small>@desafio.CreadorObjetivo.NombreCompleto</small>
                    }
                    else
                    {
                        <small>-</small>
                    }
                </div>

                <!-- Date -->
                <div class="quest-date">
                    <small>@desafio.FechaCreacion.ToString("dd/MM/yyyy")</small>
                </div>

                <!-- Actions -->
                <div class="quest-actions">
                    <a href="@Url.Action("Detalles", "Desafios", new { id = desafio.Id })" class="quest-action-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z" />
                            <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z" />
                        </svg>
                        Ver
                    </a>
                    @if (desafio.Estado == EstadoDesafio.Pendiente || desafio.Estado == EstadoDesafio.RecibiendoPropuestas)
                    {
                        <button type="button" class="quest-action-btn danger" onclick="cancelarDesafio(@desafio.Id)">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                            </svg>
                        </button>
                    }
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="empty-state">
        <div class="empty-state-icon">🎯</div>
        <h5>No tienes desafíos en esta categoría</h5>
        <p>Crea un desafío para empezar a recibir contenido personalizado.</p>
    </div>
}

<script>
    function cancelarDesafio(desafioId) {
        if (!confirm('¿Estás seguro de cancelar este desafío?')) return;

        fetch('/Desafios/CancelarDesafio?desafioId=' + desafioId, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
            }
        })
        .then(r => r.json())
        .then(data => {
            alert(data.message);
            if (data.success) location.reload();
        })
        .catch(err => alert('Error al cancelar el desafío'));
    }
</script>