@model IEnumerable<Lado.Models.PropuestaDesafio>

<style>
    .proposal-card {
        background: white;
        border-radius: 25px;
        padding: 30px;
        margin-bottom: 20px;
        box-shadow: 0 5px 20px rgba(0,188,212,0.1);
        transition: all 0.3s ease;
        border: 3px solid transparent;
        position: relative;
    }

        .proposal-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 6px;
            border-radius: 25px 25px 0 0;
        }

        .proposal-card.pendiente::before {
            background: linear-gradient(90deg, #FFC107 0%, #FFD54F 100%);
        }

        .proposal-card.aceptada::before {
            background: linear-gradient(90deg, #4CAF50 0%, #8BC34A 100%);
        }

        .proposal-card.rechazada::before {
            background: linear-gradient(90deg, #f44336 0%, #e57373 100%);
        }

        .proposal-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0, 188, 212, 0.2);
            border-color: #00BCD4;
        }

    .proposal-header {
        display: flex;
        justify-content: space-between;
        align-items: start;
        margin-bottom: 20px;
        flex-wrap: wrap;
        gap: 15px;
    }

    .proposal-title {
        color: #333;
        font-weight: 800;
        font-size: 1.4rem;
        margin: 0 0 8px 0;
    }

    .proposal-category {
        display: inline-block;
        padding: 6px 14px;
        background: linear-gradient(135deg, #00BCD4 0%, #26C6DA 100%);
        color: white;
        border-radius: 15px;
        font-weight: 700;
        font-size: 0.75rem;
        margin-top: 5px;
    }

    .proposal-badge {
        padding: 8px 18px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 0.85rem;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    }

        .proposal-badge.pendiente {
            background: linear-gradient(135deg, #FFC107 0%, #FFD54F 100%);
            color: #333;
        }

        .proposal-badge.aceptada {
            background: linear-gradient(135deg, #4CAF50 0%, #8BC34A 100%);
            color: white;
        }

        .proposal-badge.rechazada {
            background: linear-gradient(135deg, #f44336 0%, #e57373 100%);
            color: white;
        }

    .proposal-client {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 20px;
    }

    .client-avatar {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        border: 3px solid #00BCD4;
        object-fit: cover;
    }

    .client-avatar-fallback {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        background: linear-gradient(135deg, #00BCD4 0%, #26C6DA 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 800;
        font-size: 1.2rem;
        border: 3px solid white;
        box-shadow: 0 3px 10px rgba(0, 188, 212, 0.3);
    }

    .proposal-message {
        background: linear-gradient(135deg, #E0F7FA 0%, #B2EBF2 100%);
        border-left: 4px solid #00BCD4;
        padding: 20px;
        border-radius: 15px;
        margin-bottom: 20px;
    }

        .proposal-message strong {
            color: #00BCD4;
            display: block;
            margin-bottom: 10px;
        }

        .proposal-message p {
            color: #666;
            margin: 0;
            line-height: 1.6;
        }

    .proposal-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 15px;
        margin-bottom: 20px;
    }

    .proposal-stat {
        background: linear-gradient(135deg, #E0F7FA 0%, #B2EBF2 100%);
        padding: 15px;
        border-radius: 15px;
        text-align: center;
    }

    .proposal-stat-icon {
        margin-bottom: 8px;
    }

    .proposal-stat-value {
        font-weight: 800;
        color: #00BCD4;
        font-size: 1.3rem;
        display: block;
        margin-bottom: 5px;
    }

    .proposal-stat-label {
        color: #666;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .proposal-dates {
        background: #f9f9f9;
        padding: 15px;
        border-radius: 12px;
        margin-bottom: 20px;
    }

        .proposal-dates small {
            color: #666;
            display: block;
            margin-bottom: 8px;
        }

            .proposal-dates small:last-child {
                margin-bottom: 0;
            }

    .proposal-alert {
        padding: 15px;
        border-radius: 15px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .proposal-alert.info {
            background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
            color: #0D47A1;
        }

        .proposal-alert.warning {
            background: linear-gradient(135deg, #FFF8E1 0%, #FFE082 100%);
            color: #F57F17;
        }

    .proposal-action-btn {
        background: linear-gradient(135deg, #00BCD4 0%, #26C6DA 100%);
        color: white;
        border: none;
        padding: 12px 25px;
        border-radius: 15px;
        font-weight: 700;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        box-shadow: 0 4px 15px rgba(0, 188, 212, 0.3);
        text-decoration: none;
        width: 100%;
        justify-content: center;
    }

        .proposal-action-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 188, 212, 0.4);
            color: white;
            text-decoration: none;
        }

    .empty-state {
        text-align: center;
        padding: 80px 30px;
        background: white;
        border-radius: 25px;
        box-shadow: 0 8px 25px rgba(0,188,212,0.08);
    }

    .empty-icon {
        font-size: 100px;
        margin-bottom: 25px;
        opacity: 0.3;
    }

    .empty-state h5 {
        color: #333;
        font-weight: 800;
        font-size: 1.8rem;
        margin-bottom: 15px;
    }

    .empty-state p {
        color: #666;
        font-size: 1.1rem;
        margin: 0;
    }

    @@media (max-width: 768px) {
        .proposal-stats

    {
        grid-template-columns: 1fr;
    }

    }
</style>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var propuesta in Model)
        {
            var estadoClass = propuesta.Estado switch
            {
                EstadoPropuesta.Pendiente => "pendiente",
                EstadoPropuesta.Aceptada => "aceptada",
                EstadoPropuesta.Rechazada => "rechazada",
                _ => ""
            };

            <div class="col-lg-6 mb-4">
                <div class="proposal-card @estadoClass">
                    <!-- Header -->
                    <div class="proposal-header">
                        <div>
                            <h5 class="proposal-title">@propuesta.Desafio?.Titulo</h5>
                            @if (!string.IsNullOrEmpty(propuesta.Desafio?.Categoria))
                            {
                                <span class="proposal-category">@propuesta.Desafio.Categoria</span>
                            }
                        </div>
                        <span class="proposal-badge @estadoClass">
                            @if (propuesta.Estado == EstadoPropuesta.Aceptada)
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" viewBox="0 0 16 16">
                                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                                </svg>
                                <text>Aceptada</text>
                            }
                            else if (propuesta.Estado == EstadoPropuesta.Rechazada)
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" viewBox="0 0 16 16">
                                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z" />
                                </svg>
                                <text>No Seleccionada</text>
                            }
                            else
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />
                                </svg>
                                <text>Pendiente</text>
                            }
                        </span>
                    </div>

                    <!-- Cliente -->
                    <div class="proposal-client">
                        @if (!string.IsNullOrEmpty(propuesta.Desafio?.Fan?.FotoPerfil))
                        {
                            <img src="@propuesta.Desafio.Fan.FotoPerfil" class="client-avatar" alt="@propuesta.Desafio.Fan.NombreCompleto">
                        }
                        else
                        {
                            <div class="client-avatar-fallback">
                                <span>@propuesta.Desafio?.Fan?.NombreCompleto?.Substring(0, 1).ToUpper()</span>
                            </div>
                        }
                        <div>
                            <small style="color: #999; display: block;">Cliente:</small>
                            <strong style="color: #333;">@propuesta.Desafio?.Fan?.NombreCompleto</strong>
                        </div>
                    </div>

                    <!-- Tu Propuesta -->
                    <div class="proposal-message">
                        <strong>Tu Propuesta:</strong>
                        <p>@propuesta.MensajePropuesta</p>
                    </div>

                    <!-- Stats -->
                    <div class="proposal-stats">
                        <div class="proposal-stat">
                            <div class="proposal-stat-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#00BCD4" viewBox="0 0 16 16">
                                    <path d="M4 10.781c.148 1.667 1.513 2.85 3.591 3.003V15h1.043v-1.216c2.27-.179 3.678-1.438 3.678-3.3 0-1.59-.947-2.51-2.956-3.028l-.722-.187V3.467c1.122.11 1.879.714 2.07 1.616h1.47c-.166-1.6-1.54-2.748-3.54-2.875V1H7.591v1.233c-1.939.23-3.27 1.472-3.27 3.156 0 1.454.966 2.483 2.661 2.917l.61.162v4.031c-1.149-.17-1.94-.8-2.131-1.718H4zm3.391-3.836c-1.043-.263-1.6-.825-1.6-1.616 0-.944.704-1.641 1.8-1.828v3.495l-.2-.05zm1.591 1.872c1.287.323 1.852.859 1.852 1.769 0 1.097-.826 1.828-2.2 1.939V8.73l.348.086z" />
                                </svg>
                            </div>
                            <span class="proposal-stat-value">$@propuesta.PrecioPropuesto</span>
                            <div class="proposal-stat-label">Tu Precio</div>
                        </div>
                        <div class="proposal-stat">
                            <div class="proposal-stat-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#00BCD4" viewBox="0 0 16 16">
                                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z" />
                                </svg>
                            </div>
                            <span class="proposal-stat-value">@propuesta.DiasEntrega días</span>
                            <div class="proposal-stat-label">Tu Plazo</div>
                        </div>
                        <div class="proposal-stat">
                            <div class="proposal-stat-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#00BCD4" viewBox="0 0 16 16">
                                    <path d="M15 14s1 0 1-1-1-4-5-4-5 3-5 4 1 1 1 1h8Zm-7.978-1A.261.261 0 0 1 7 12.996c.001-.264.167-1.03.76-1.72C8.312 10.629 9.282 10 11 10c1.717 0 2.687.63 3.24 1.276.593.69.758 1.457.76 1.72l-.008.002a.274.274 0 0 1-.014.002H7.022ZM11 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4Zm3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0ZM6.936 9.28a5.88 5.88 0 0 0-1.23-.247A7.35 7.35 0 0 0 5 9c-4 0-5 3-5 4 0 .667.333 1 1 1h4.216A2.238 2.238 0 0 1 5 13c0-1.01.377-2.042 1.09-2.904.243-.294.526-.569.846-.816ZM4.92 10A5.493 5.493 0 0 0 4 13H1c0-.26.164-1.03.76-1.724.545-.636 1.492-1.256 3.16-1.275ZM1.5 5.5a3 3 0 1 1 6 0 3 3 0 0 1-6 0Zm3-2a2 2 0 1 0 0 4 2 2 0 0 0 0-4Z" />
                                </svg>
                            </div>
                            <span class="proposal-stat-value">@(propuesta.Desafio?.Propuestas?.Count ?? 0)</span>
                            <div class="proposal-stat-label">Competidores</div>
                        </div>
                    </div>

                    <!-- Fechas -->
                    <div class="proposal-dates">
                        <small>
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="#00BCD4" viewBox="0 0 16 16" style="margin-right: 5px;">
                                <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z" />
                            </svg>
                            Propuesta enviada: @propuesta.FechaPropuesta.ToString("dd/MM/yyyy HH:mm")
                        </small>
                        @if (propuesta.FechaRespuesta.HasValue)
                        {
                            <small>
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="#00BCD4" viewBox="0 0 16 16" style="margin-right: 5px;">
                                    <path d="M8.515 1.019A7 7 0 0 0 8 1V0a8 8 0 0 1 .589.022l-.074.997zm2.004.45a7.003 7.003 0 0 0-.985-.299l.219-.976c.383.086.76.2 1.126.342l-.36.933zm1.37.71a7.01 7.01 0 0 0-.439-.27l.493-.87a8.025 8.025 0 0 1 .979.654l-.615.789a6.996 6.996 0 0 0-.418-.302zm1.834 1.79a6.99 6.99 0 0 0-.653-.796l.724-.69c.27.285.52.59.747.91l-.818.576zm.744 1.352a7.08 7.08 0 0 0-.214-.468l.893-.45a7.976 7.976 0 0 1 .45 1.088l-.95.313a7.023 7.023 0 0 0-.179-.483zm.53 2.507a6.991 6.991 0 0 0-.1-1.025l.985-.17c.067.386.106.778.116 1.17l-1 .025zm-.131 1.538c.033-.17.06-.339.081-.51l.993.123a7.957 7.957 0 0 1-.23 1.155l-.964-.267c.046-.165.086-.332.12-.501zm-.952 2.379c.184-.29.346-.594.486-.908l.914.405c-.16.36-.345.706-.555 1.038l-.845-.535zm-.964 1.205c.122-.122.239-.248.35-.378l.758.653a8.073 8.073 0 0 1-.401.432l-.707-.707z" />
                                    <path d="M8 1a7 7 0 1 0 4.95 11.95l.707.707A8.001 8.001 0 1 1 8 0v1z" />
                                    <path d="M7.5 3a.5.5 0 0 1 .5.5v5.21l3.248 1.856a.5.5 0 0 1-.496.868l-3.5-2A.5.5 0 0 1 7 9V3.5a.5.5 0 0 1 .5-.5z" />
                                </svg>
                                Respuesta: @propuesta.FechaRespuesta.Value.ToString("dd/MM/yyyy HH:mm")
                            </small>
                        }
                    </div>

                    <!-- Presupuesto Original -->
                    @if (propuesta.Desafio?.Presupuesto != propuesta.PrecioPropuesto)
                    {
                        <div class="proposal-alert @(propuesta.PrecioPropuesto < propuesta.Desafio?.Presupuesto ? "info" : "warning")">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
                            </svg>
                            <small>
                                Presupuesto original del cliente: $@propuesta.Desafio?.Presupuesto
                                @if (propuesta.PrecioPropuesto < propuesta.Desafio?.Presupuesto)
                                {
                                    <strong> (Ofreciste menos 👍)</strong>
                                }
                                else
                                {
                                    <strong> (Ofreciste más)</strong>
                                }
                            </small>
                        </div>
                    }

                    <!-- Acciones -->
                    <a href="@Url.Action("Detalles", "Desafios", new { id = propuesta.DesafioId })" class="proposal-action-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="white" viewBox="0 0 16 16">
                            <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z" />
                            <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z" />
                        </svg>
                        Ver Desafío Completo
                    </a>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="empty-state">
        <div class="empty-icon">📬</div>
        <h5>No tienes propuestas en esta categoría</h5>
        <p>Explora los desafíos públicos y envía tus propuestas para ganar trabajos.</p>
    </div>
}