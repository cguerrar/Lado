@model Lado.Models.Desafio
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Detalles del Desafío";
    var usuarioActual = await UserManager.GetUserAsync(User);
    var esFan = Model.FanId == usuarioActual?.Id;
    var esCreadorObjetivo = Model.CreadorObjetivoId == usuarioActual?.Id;
    var esCreadorAsignado = Model.CreadorAsignadoId == usuarioActual?.Id;
}

<style>
    .mission-world {
        background: linear-gradient(135deg, #E0F7FA 0%, #ffffff 100%);
        min-height: 100vh;
        padding: 30px 0;
        position: relative;
        overflow: hidden;
    }

    .mission-back {
        background: white;
        border: 2px solid #00BCD4;
        color: #00BCD4;
        padding: 10px 25px;
        border-radius: 20px;
        font-weight: 700;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 25px;
        text-decoration: none;
    }

        .mission-back:hover {
            background: #00BCD4;
            color: white;
            transform: translateX(-5px);
            text-decoration: none;
        }

    .mission-header {
        background: linear-gradient(135deg, #00BCD4 0%, #26C6DA 50%, #4DD0E1 100%);
        border-radius: 30px;
        padding: 40px;
        box-shadow: 0 15px 40px rgba(0, 188, 212, 0.3);
        margin-bottom: 30px;
    }

        .mission-header h1 {
            color: white;
            font-weight: 900;
            font-size: 2.5rem;
            margin-bottom: 20px;
        }

    .mission-badges {
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
    }

    .mission-badge {
        padding: 10px 20px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 0.9rem;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .mission-badge.publico {
            background: linear-gradient(135deg, #4CAF50 0%, #8BC34A 100%);
            color: white;
        }

        .mission-badge.directo {
            background: white;
            color: #00BCD4;
        }

    .mission-card {
        background: white;
        border-radius: 25px;
        padding: 35px;
        box-shadow: 0 8px 25px rgba(0,188,212,0.1);
        margin-bottom: 25px;
        border: 3px solid transparent;
    }

        .mission-card h5 {
            color: #00BCD4;
            font-weight: 800;
            font-size: 1.5rem;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

    .form-game {
        background: white;
        border: 2px solid #B2EBF2;
        border-radius: 15px;
        padding: 15px;
        transition: all 0.3s ease;
        font-size: 1rem;
    }

        .form-game:focus {
            border-color: #00BCD4;
            box-shadow: 0 0 0 3px rgba(0, 188, 212, 0.1);
            outline: none;
        }

    .mission-btn {
        background: linear-gradient(135deg, #00BCD4 0%, #26C6DA 100%);
        border: none;
        color: white;
        padding: 15px 30px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 1.05rem;
        box-shadow: 0 5px 20px rgba(0, 188, 212, 0.3);
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        width: 100%;
        cursor: pointer;
    }

        .mission-btn:hover:not(:disabled) {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0, 188, 212, 0.4);
            color: white;
        }

        .mission-btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

    .upload-area {
        border: 3px dashed #B2EBF2;
        border-radius: 20px;
        padding: 40px;
        text-align: center;
        background: linear-gradient(135deg, #E0F7FA 0%, #B2EBF2 10%, #E0F7FA 100%);
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .upload-area:hover {
            border-color: #00BCD4;
            background: linear-gradient(135deg, #B2EBF2 0%, #E0F7FA 50%, #B2EBF2 100%);
            transform: scale(1.02);
        }

        .upload-area.dragover {
            border-color: #00BCD4;
            background: #B2EBF2;
            transform: scale(1.05);
        }

    .upload-icon {
        font-size: 60px;
        color: #00BCD4;
        margin-bottom: 15px;
    }

    .file-preview {
        background: white;
        border: 2px solid #00BCD4;
        border-radius: 15px;
        padding: 20px;
        margin-top: 20px;
        display: none;
    }

        .file-preview.active {
            display: block;
        }

    .mission-sidebar {
        background: white;
        border-radius: 25px;
        padding: 30px;
        box-shadow: 0 8px 25px rgba(0,188,212,0.1);
        margin-bottom: 25px;
        border-top: 5px solid #00BCD4;
    }

    .mission-info-item {
        margin-bottom: 20px;
        padding-bottom: 20px;
        border-bottom: 2px solid #f5f5f5;
    }

        .mission-info-item:last-child {
            border-bottom: none;
        }

    .mission-info-label {
        color: #999;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
        margin-bottom: 8px;
    }

    .mission-info-value {
        color: #333;
        font-size: 1.1rem;
        font-weight: 700;
    }

    @@media (max-width: 768px) {
        .mission-header h1 {
            font-size: 1.8rem;
        }

        .mission-card {
            padding: 20px;
        }

        .upload-area {
            padding: 30px 15px;
        }
    }
</style>

<div class="mission-world">
    <div class="container" style="max-width: 1200px;">
        @Html.AntiForgeryToken()

        <!-- Back Button -->
        @if (esCreadorAsignado || esCreadorObjetivo)
        {
            <a href="@Url.Action("DesafiosRecibidos", "Desafios")" class="mission-back">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
                </svg>
                Volver
            </a>
        }
        else
        {
            <a href="@Url.Action("MisDesafios", "Desafios")" class="mission-back">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
                </svg>
                Volver
            </a>
        }

        <!-- Header -->
        <div class="mission-header">
            <h1>@Model.Titulo</h1>
            <div class="mission-badges">
                @if (Model.TipoDesafio == TipoDesafio.Publico)
                {
                    <span class="mission-badge publico">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" viewBox="0 0 16 16">
                            <path d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm7.5-6.923c-.67.204-1.335.82-1.887 1.855A7.97 7.97 0 0 0 5.145 4H7.5V1.077zM4.09 4a9.267 9.267 0 0 1 .64-1.539 6.7 6.7 0 0 1 .597-.933A7.025 7.025 0 0 0 2.255 4H4.09zm-.582 3.5c.03-.877.138-1.718.312-2.5H1.674a6.958 6.958 0 0 0-.656 2.5h2.49zM4.847 5a12.5 12.5 0 0 0-.338 2.5H7.5V5H4.847zM8.5 5v2.5h2.99a12.495 12.495 0 0 0-.337-2.5H8.5zM4.51 8.5a12.5 12.5 0 0 0 .337 2.5H7.5V8.5H4.51zm3.99 0V11h2.653c.187-.765.306-1.608.338-2.5H8.5zM5.145 12c.138.386.295.744.468 1.068.552 1.035 1.218 1.65 1.887 1.855V12H5.145zm.182 2.472a6.696 6.696 0 0 1-.597-.933A9.268 9.268 0 0 1 4.09 12H2.255a7.024 7.024 0 0 0 3.072 2.472zM3.82 11a13.652 13.652 0 0 1-.312-2.5h-2.49c.062.89.291 1.733.656 2.5H3.82zm6.853 3.472A7.024 7.024 0 0 0 13.745 12H11.91a9.27 9.27 0 0 1-.64 1.539 6.688 6.688 0 0 1-.597.933zM8.5 12v2.923c.67-.204 1.335-.82 1.887-1.855.173-.324.33-.682.468-1.068H8.5zm3.68-1h2.146c.365-.767.594-1.61.656-2.5h-2.49a13.65 13.65 0 0 1-.312 2.5zm2.802-3.5a6.959 6.959 0 0 0-.656-2.5H12.18c.174.782.282 1.623.312 2.5h2.49zM11.27 2.461c.247.464.462.98.64 1.539h1.835a7.024 7.024 0 0 0-3.072-2.472c.218.284.418.598.597.933zM10.855 4a7.966 7.966 0 0 0-.468-1.068C9.835 1.897 9.17 1.282 8.5 1.077V4h2.355z" />
                        </svg>
                        Público
                    </span>
                }
                else
                {
                    <span class="mission-badge directo">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z" />
                        </svg>
                        Directo
                    </span>
                }
            </div>
        </div>

        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <!-- Description -->
                <div class="mission-card">
                    <h5>
                        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M4 11a1 1 0 1 1 2 0v1a1 1 0 1 1-2 0v-1zm6-4a1 1 0 1 1 2 0v5a1 1 0 1 1-2 0V7zM7 9a1 1 0 0 1 2 0v3a1 1 0 1 1-2 0V9z" />
                            <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z" />
                            <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3z" />
                        </svg>
                        Descripción de la Misión
                    </h5>
                    <p style="color: #666; line-height: 1.8;">@Model.Descripcion</p>
                </div>

                @* ========================================
                   VISTA DEL CONTENIDO ENTREGADO (PARA EL FAN)
                   ======================================== *@
                @if (esFan && Model.Estado == EstadoDesafio.ContenidoSubido && !string.IsNullOrEmpty(Model.ArchivoEntregaUrl))
                {
                    <div class="mission-card" style="border: 3px solid #4CAF50; background: linear-gradient(135deg, #E8F5E9 0%, #FFFFFF 100%);">
                        <h5>
                            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="#4CAF50" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                            </svg>
                            ¡Contenido Entregado! 🎉
                        </h5>

                        <div style="background: white; padding: 20px; border-radius: 15px; margin-bottom: 20px; border: 2px solid #4CAF50;">
                            <div class="d-flex align-items-center gap-3 mb-3 flex-wrap">
                                @if (!string.IsNullOrEmpty(Model.CreadorAsignado?.FotoPerfil))
                                {
                                    <img src="@Model.CreadorAsignado.FotoPerfil" style="width: 50px; height: 50px; border-radius: 50%; border: 3px solid #4CAF50; object-fit: cover;" alt="@Model.CreadorAsignado.NombreCompleto">
                                }
                                else
                                {
                                    <div style="width: 50px; height: 50px; border-radius: 50%; background: linear-gradient(135deg, #00BCD4, #26C6DA); display: flex; align-items: center; justify-content: center; color: white; font-weight: 800; font-size: 1.2rem; border: 3px solid white; box-shadow: 0 4px 15px rgba(0,188,212,0.3);">
                                        <span>@Model.CreadorAsignado?.NombreCompleto?.Substring(0, 1).ToUpper()</span>
                                    </div>
                                }
                                <div class="flex-grow-1">
                                    <small style="color: #666; display: block;">Creador:</small>
                                    <strong style="color: #4CAF50; font-size: 1.1rem;">@Model.CreadorAsignado?.NombreCompleto</strong>
                                </div>
                                <div style="text-align: right;">
                                    <small style="color: #666; display: block;">Entregado:</small>
                                    <strong style="color: #333;">@Model.FechaEntrega?.ToString("dd/MM/yyyy HH:mm")</strong>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.NotasCreador))
                            {
                                <div style="background: linear-gradient(135deg, #E0F7FA 0%, #B2EBF2 100%); border-left: 4px solid #00BCD4; padding: 15px; border-radius: 12px; margin-bottom: 20px;">
                                    <strong style="color: #00BCD4; display: block; margin-bottom: 8px;">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 16 16" style="vertical-align: middle; margin-right: 5px;">
                                            <path d="M5 4a.5.5 0 0 0 0 1h6a.5.5 0 0 0 0-1H5zm-.5 2.5A.5.5 0 0 1 5 6h6a.5.5 0 0 1 0 1H5a.5.5 0 0 1-.5-.5zM5 8a.5.5 0 0 0 0 1h6a.5.5 0 0 0 0-1H5zm0 2a.5.5 0 0 0 0 1h3a.5.5 0 0 0 0-1H5z" />
                                        </svg>
                                        Mensaje del creador:
                                    </strong>
                                    <p style="color: #666; margin: 0; line-height: 1.6; white-space: pre-wrap;">@Model.NotasCreador</p>
                                </div>
                            }

                            <!-- Previsualización del Archivo -->
                            <div style="background: #f9f9f9; border-radius: 15px; padding: 20px; text-align: center; margin-bottom: 20px;">
                                @{
                                    var extension = System.IO.Path.GetExtension(Model.ArchivoEntregaUrl).ToLower();
                                    var isImage = new[] { ".jpg", ".jpeg", ".png", ".gif", ".webp" }.Contains(extension);
                                    var isVideo = new[] { ".mp4", ".webm", ".mov" }.Contains(extension);
                                }

                                @if (isImage)
                                {
                                    <img src="@Model.ArchivoEntregaUrl" style="max-width: 100%; max-height: 500px; border-radius: 12px; box-shadow: 0 4px 15px rgba(0,0,0,0.1);" alt="Contenido entregado">
                                }
                                else if (isVideo)
                                {
                                    <video controls style="max-width: 100%; max-height: 500px; border-radius: 12px; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
                                        <source src="@Model.ArchivoEntregaUrl" type="video/@extension.TrimStart('.')">
                                        Tu navegador no soporta la reproducción de video.
                                    </video>
                                }
                                else
                                {
                                    <div style="padding: 40px;">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="#00BCD4" viewBox="0 0 16 16">
                                            <path d="M5.5 7a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1h-5zM5 9.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5z" />
                                            <path d="M9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.5L9.5 0zm0 1v2A1.5 1.5 0 0 0 11 4.5h2V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h5.5z" />
                                        </svg>
                                        <h5 style="color: #333; margin: 20px 0 10px 0;">Archivo Adjunto</h5>
                                        <p style="color: #666; margin-bottom: 20px;">@System.IO.Path.GetFileName(Model.ArchivoEntregaUrl)</p>
                                    </div>
                                }

                                <a href="@Model.ArchivoEntregaUrl" download class="btn" style="background: linear-gradient(135deg, #00BCD4, #26C6DA); color: white; border: none; padding: 12px 30px; border-radius: 12px; font-weight: 700; text-decoration: none; display: inline-flex; align-items: center; gap: 8px; margin-top: 15px;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="white" viewBox="0 0 16 16">
                                        <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z" />
                                        <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3z" />
                                    </svg>
                                    Descargar Archivo
                                </a>
                            </div>
                        </div>

                        <!-- Botones de Aprobación/Rechazo -->
                        <div class="row g-3">
                            <div class="col-md-6">
                                <button type="button" class="mission-btn" style="background: linear-gradient(135deg, #4CAF50, #8BC34A); width: 100%;" onclick="aprobarContenido(@Model.Id)">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" viewBox="0 0 16 16">
                                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                                    </svg>
                                    ✅ Aprobar y Completar Misión
                                </button>
                            </div>
                            <div class="col-md-6">
                                <button type="button" class="mission-btn" style="background: linear-gradient(135deg, #f44336, #e57373); width: 100%;" onclick="rechazarContenido(@Model.Id)">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" viewBox="0 0 16 16">
                                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z" />
                                    </svg>
                                    ❌ Solicitar Corrección
                                </button>
                            </div>
                        </div>
                    </div>
                }

                @* ========================================
                   FORMULARIO DE ENTREGA (PARA EL CREADOR)
                   ======================================== *@
                @if (esCreadorAsignado && (Model.Estado == EstadoDesafio.Asignado || Model.Estado == EstadoDesafio.EnProgreso))
                {
                    <div class="mission-card" style="border: 3px solid #4CAF50;">
                        <h5>
                            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z" />
                                <path d="M7.646 1.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 2.707V11.5a.5.5 0 0 1-1 0V2.707L5.354 4.854a.5.5 0 1 1-.708-.708l3-3z" />
                            </svg>
                            Entregar Contenido
                        </h5>

                        <form id="formEntrega" enctype="multipart/form-data">
                            <!-- Área de Subida de Archivo -->
                            <div class="upload-area" id="uploadArea" onclick="document.getElementById('archivoInput').click()">
                                <div class="upload-icon">📤</div>
                                <h4 style="color: #00BCD4; font-weight: 800;">Sube tu contenido aquí</h4>
                                <p style="color: #666; margin: 10px 0;">Haz clic o arrastra el archivo</p>
                                <small style="color: #999;">Máximo 50MB - Imágenes, Videos o Documentos</small>
                                <input type="file" id="archivoInput" name="archivo" style="display: none;" accept="image/*,video/*,.pdf,.doc,.docx" required>
                            </div>

                            <!-- Vista Previa del Archivo -->
                            <div class="file-preview" id="filePreview">
                                <div style="display: flex; align-items: center; gap: 15px;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="#4CAF50" viewBox="0 0 16 16">
                                        <path d="M5.5 7a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1h-5zM5 9.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5z" />
                                        <path d="M9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.5L9.5 0zm0 1v2A1.5 1.5 0 0 0 11 4.5h2V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h5.5z" />
                                    </svg>
                                    <div style="flex: 1;">
                                        <strong id="fileName" style="color: #00BCD4;"></strong>
                                        <br>
                                        <small id="fileSize" style="color: #999;"></small>
