                    </h6>

                    <div class="mission-info-item">
                        <div class="mission-info-label">Tipo de Contenido</div>
                        <div class="mission-info-value">@Model.TipoContenido.ToString()</div>
                    </div>

                    <div class="mission-info-item">
                        <div class="mission-info-label">Presupuesto</div>
                        <div class="mission-info-value" style="color: #00BCD4; font-size: 1.5rem;">$@Model.Presupuesto</div>
                    </div>

                    @if (Model.PrecioFinal.HasValue && Model.PrecioFinal != Model.Presupuesto)
                    {
                        <div class="mission-info-item">
                            <div class="mission-info-label">Precio Final</div>
                            <div class="mission-info-value" style="color: #4CAF50; font-size: 1.5rem;">$@Model.PrecioFinal</div>
                        </div>
                    }

                    <div class="mission-info-item">
                        <div class="mission-info-label">Plazo de Entrega</div>
                        <div class="mission-info-value">@Model.DiasPlazoPlazo días</div>
                    </div>

                    @if (Model.FechaExpiracion.HasValue)
                    {
                        <div class="mission-info-item">
                            <div class="mission-info-label">Expira</div>
                            <div class="mission-info-value">@Model.FechaExpiracion.Value.ToString("dd/MM/yyyy")</div>
                        </div>
                    }

                    @if (Model.FechaAsignacion.HasValue)
                    {
                        <div class="mission-info-item">
                            <div class="mission-info-label">Asignado</div>
                            <div class="mission-info-value">@Model.FechaAsignacion.Value.ToString("dd/MM/yyyy")</div>
                        </div>
                    }

                    <div class="mission-info-item">
                        <div class="mission-info-label">Estado</div>
                        <div class="mission-info-value">@Model.Estado.ToString()</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Token CSRF
        const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

        if (!token) {
            console.error('❌ Token CSRF no encontrado');
        }

        // ========================================
        // MANEJO DE SUBIDA DE ARCHIVOS (CREADOR)
        // ========================================
        const uploadArea = document.getElementById('uploadArea');
        const archivoInput = document.getElementById('archivoInput');
        const filePreview = document.getElementById('filePreview');

        if (uploadArea && archivoInput && filePreview) {
            ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                uploadArea.addEventListener(eventName, preventDefaults, false);
            });

            function preventDefaults(e) {
                e.preventDefault();
                e.stopPropagation();
            }

            ['dragenter', 'dragover'].forEach(eventName => {
                uploadArea.addEventListener(eventName, () => uploadArea.classList.add('dragover'), false);
            });

            ['dragleave', 'drop'].forEach(eventName => {
                uploadArea.addEventListener(eventName, () => uploadArea.classList.remove('dragover'), false);
            });

            uploadArea.addEventListener('drop', function(e) {
                const dt = e.dataTransfer;
                const files = dt.files;
                if (files.length > 0) {
                    archivoInput.files = files;
                    showFilePreview(files[0]);
                }
            });

            archivoInput.addEventListener('change', function(e) {
                if (this.files.length > 0) {
                    showFilePreview(this.files[0]);
                }
            });
        }

        function showFilePreview(file) {
            document.getElementById('fileName').textContent = file.name;
            document.getElementById('fileSize').textContent = formatBytes(file.size);
            filePreview.classList.add('active');
            uploadArea.style.display = 'none';
        }

        function removeFile() {
            archivoInput.value = '';
            filePreview.classList.remove('active');
            uploadArea.style.display = 'block';
        }

        function formatBytes(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
        }

        // ========================================
        // ENTREGAR DESAFÍO (CREADOR)
        // ========================================
        async function entregarDesafio(desafioId) {
            const archivo = document.getElementById('archivoInput')?.files[0];
            if (!archivo) {
                alert('⚠️ Por favor selecciona un archivo antes de entregar');
                return;
            }

            if (archivo.size > 52428800) {
                alert('⚠️ El archivo no puede superar los 50MB');
                return;
            }

            if (!confirm('¿Estás seguro de entregar este contenido? Una vez entregado, el cliente lo revisará.')) {
                return;
            }

            const btnEntregar = document.getElementById('btnEntregar');
            btnEntregar.disabled = true;
            btnEntregar.innerHTML = '<span>⏳ Subiendo...</span>';

            const formData = new FormData();
            formData.append('desafioId', desafioId);
            formData.append('archivo', archivo);
            formData.append('notasCreador', document.getElementById('notasCreador')?.value || '');
            formData.append('__RequestVerificationToken', token);

            try {
                const response = await fetch('/Desafios/EntregarContenido', {
                    method: 'POST',
                    body: formData
                });

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const data = await response.json();

                if (data.success) {
                    alert('✅ ' + data.message);
                    window.location.href = '/Desafios/DesafiosRecibidos';
                } else {
                    alert('❌ ' + data.message);
                    btnEntregar.disabled = false;
                    btnEntregar.innerHTML = `
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                        </svg>
                        Entregar Contenido
                    `;
                }
            } catch (error) {
                console.error('Error:', error);
                alert('❌ Error al entregar el contenido. Por favor intenta de nuevo.');
                btnEntregar.disabled = false;
                btnEntregar.innerHTML = `
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" viewBox="0 0 16 16">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                    </svg>
                    Entregar Contenido
                `;
            }
        }

        // ========================================
        // APROBAR CONTENIDO (FAN)
        // ========================================
        async function aprobarContenido(desafioId) {
            if (!confirm('¿Estás satisfecho con el contenido? Esto completará el desafío y procesará el pago al creador.')) {
                return;
            }

            try {
                const response = await fetch('/Desafios/AprobarContenido', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        desafioId: desafioId,
                        __RequestVerificationToken: token
                    })
                });

                const data = await response.json();

                if (data.success) {
                    alert('✅ ' + data.message);
                    window.location.href = '/Desafios/MisDesafios';
                } else {
                    alert('❌ ' + data.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('❌ Error al aprobar el contenido. Por favor intenta de nuevo.');
            }
        }

        // ========================================
        // RECHAZAR CONTENIDO (FAN)
        // ========================================
        async function rechazarContenido(desafioId) {
            const motivo = prompt('¿Qué necesita corregirse en el contenido?');
            if (!motivo || motivo.trim() === '') {
                return;
            }

            try {
                const response = await fetch('/Desafios/RechazarContenido', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        desafioId: desafioId,
                        motivo: motivo,
                        __RequestVerificationToken: token
                    })
                });

                const data = await response.json();

                if (data.success) {
                    alert('📝 ' + data.message);
                    location.reload();
                } else {
                    alert('❌ ' + data.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('❌ Error al solicitar corrección. Por favor intenta de nuevo.');
            }
        }

        // Exponer funciones al scope global
        window.entregarDesafio = entregarDesafio;
        window.aprobarContenido = aprobarContenido;
        window.rechazarContenido = rechazarContenido;
        window.removeFile = removeFile;
    </script>
}