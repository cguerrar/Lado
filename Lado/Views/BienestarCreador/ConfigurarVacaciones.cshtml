@{
    ViewData["Title"] = "Configurar Vacaciones";

    var config = ViewBag.Config as Lado.Models.ConfiguracionVacaciones;
    var usuario = ViewBag.Usuario as Lado.Models.ApplicationUser;
    var vacacionesActivas = config?.EstaActivo == true;
}

<style>
    .vacaciones-container {
        max-width: 600px;
        margin: 0 auto;
    }

    .vacaciones-header {
        background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
        border-radius: var(--radius-lg);
        padding: 32px;
        margin-bottom: 28px;
        color: white;
        text-align: center;
    }

    .vacaciones-header h1 {
        font-size: 1.75rem;
        font-weight: 700;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
    }

    .vacaciones-header p {
        opacity: 0.9;
        font-size: 1rem;
    }

    .vacaciones-card {
        background: var(--surface);
        border: 1px solid var(--line);
        border-radius: var(--radius-lg);
        padding: 28px;
        box-shadow: var(--shadow-sm);
    }

    .vacaciones-form {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 6px;
    }

    .form-group label {
        font-size: 0.9375rem;
        font-weight: 600;
        color: var(--fg);
    }

    .form-group .helper-text {
        font-size: 0.8125rem;
        color: var(--muted);
    }

    .form-control {
        width: 100%;
        padding: 12px 16px;
        border: 1px solid var(--line);
        border-radius: var(--radius-md);
        background: var(--surface);
        color: var(--fg);
        font-size: 0.9375rem;
        transition: border-color 0.2s;
    }

    .form-control:focus {
        outline: none;
        border-color: #06b6d4;
        box-shadow: 0 0 0 3px rgba(6, 182, 212, 0.1);
    }

    textarea.form-control {
        min-height: 100px;
        resize: vertical;
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 16px;
    }

    .checkbox-group {
        display: flex;
        flex-direction: column;
        gap: 12px;
        padding: 16px;
        background: var(--bg-tertiary);
        border-radius: var(--radius-md);
    }

    .checkbox-item {
        display: flex;
        align-items: flex-start;
        gap: 12px;
    }

    .checkbox-item input[type="checkbox"] {
        width: 20px;
        height: 20px;
        margin-top: 2px;
        cursor: pointer;
    }

    .checkbox-item label {
        cursor: pointer;
    }

    .checkbox-item .checkbox-title {
        font-weight: 600;
        color: var(--fg);
        font-size: 0.9375rem;
    }

    .checkbox-item .checkbox-desc {
        font-size: 0.8125rem;
        color: var(--muted);
        margin-top: 2px;
    }

    .btn-group {
        display: flex;
        gap: 12px;
        margin-top: 12px;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        padding: 12px 24px;
        border-radius: var(--radius-md);
        font-weight: 600;
        font-size: 0.9375rem;
        border: none;
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none;
    }

    .btn-primary {
        background: linear-gradient(135deg, #06b6d4, #0891b2);
        color: white;
        flex: 1;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(6, 182, 212, 0.3);
    }

    .btn-secondary {
        background: var(--bg-tertiary);
        color: var(--fg);
        border: 1px solid var(--line);
    }

    .btn-secondary:hover {
        background: var(--line);
    }

    .btn-danger {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
        border: 1px solid rgba(239, 68, 68, 0.3);
        flex: 1;
    }

    .btn-danger:hover {
        background: rgba(239, 68, 68, 0.2);
    }

    .status-banner {
        padding: 16px 20px;
        border-radius: var(--radius-md);
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .status-banner.active {
        background: rgba(6, 182, 212, 0.1);
        border: 1px solid rgba(6, 182, 212, 0.3);
        color: #0891b2;
    }

    .status-banner svg {
        width: 24px;
        height: 24px;
        flex-shrink: 0;
    }

    .status-banner-content h4 {
        font-weight: 600;
        margin-bottom: 2px;
    }

    .status-banner-content p {
        font-size: 0.875rem;
        opacity: 0.8;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        color: var(--muted);
        text-decoration: none;
        font-size: 0.9375rem;
        margin-bottom: 20px;
        transition: color 0.2s;
    }

    .back-link:hover {
        color: var(--primary);
    }

    @@media (max-width: 640px) {
        .form-row {
            grid-template-columns: 1fr;
        }

        .btn-group {
            flex-direction: column;
        }
    }
</style>

<div class="vacaciones-container">
    <a href="/BienestarCreador/Dashboard" class="back-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m15 18-6-6 6-6"/></svg>
        Volver al Dashboard de Bienestar
    </a>

    <div class="vacaciones-header">
        <h1>
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"/>
                <path d="M2 12h20"/>
            </svg>
            Modo Vacaciones
        </h1>
        <p>Toma un descanso merecido sin preocuparte por tus suscriptores</p>
    </div>

    <div class="vacaciones-card">
        @if (vacacionesActivas)
        {
            <div class="status-banner active">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
                <div class="status-banner-content">
                    <h4>Modo Vacaciones Activo</h4>
                    <p>
                        Desde @config?.FechaInicio?.ToString("dd/MM/yyyy") hasta @config?.FechaFin?.ToString("dd/MM/yyyy")
                    </p>
                </div>
            </div>

            <form id="formDesactivar" class="vacaciones-form">
                <p style="color: var(--muted); text-align: center;">
                    Mientras estes de vacaciones, tus suscriptores recibiran un mensaje automatico y no perderas seguidores por inactividad.
                </p>
                <div class="btn-group">
                    <button type="submit" class="btn btn-danger">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><line x1="15" y1="9" x2="9" y2="15"/><line x1="9" y1="9" x2="15" y2="15"/></svg>
                        Desactivar Modo Vacaciones
                    </button>
                </div>
            </form>
        }
        else
        {
            <form id="formVacaciones" class="vacaciones-form">
                <div class="form-row">
                    <div class="form-group">
                        <label for="fechaInicio">Fecha de inicio</label>
                        <input type="date" id="fechaInicio" class="form-control" min="@DateTime.Today.ToString("yyyy-MM-dd")" required>
                    </div>
                    <div class="form-group">
                        <label for="fechaFin">Fecha de fin</label>
                        <input type="date" id="fechaFin" class="form-control" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="mensajeAutorespuesta">Mensaje de auto-respuesta</label>
                    <span class="helper-text">Este mensaje se enviara automaticamente cuando alguien te escriba</span>
                    <textarea id="mensajeAutorespuesta" class="form-control" placeholder="Estoy de vacaciones y respondere pronto. Gracias por tu paciencia.">@(config?.MensajeAutorespuesta ?? "Estoy de vacaciones y respondere pronto. Gracias por tu paciencia.")</textarea>
                </div>

                <div class="form-group">
                    <label for="mensajePerfil">Mensaje en tu perfil (opcional)</label>
                    <span class="helper-text">Aparecera visible en tu perfil publico</span>
                    <input type="text" id="mensajePerfil" class="form-control" placeholder="De vacaciones, vuelvo pronto" value="@(config?.MensajePerfilPublico ?? "")">
                </div>

                <div class="checkbox-group">
                    <div class="checkbox-item">
                        <input type="checkbox" id="autoResponder" checked>
                        <label for="autoResponder">
                            <div class="checkbox-title">Auto-responder mensajes</div>
                            <div class="checkbox-desc">Enviar automaticamente tu mensaje a quienes te escriban</div>
                        </label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="protegerSuscriptores" checked>
                        <label for="protegerSuscriptores">
                            <div class="checkbox-title">Proteger suscriptores</div>
                            <div class="checkbox-desc">Evitar perder suscriptores por inactividad durante las vacaciones</div>
                        </label>
                    </div>
                </div>

                <div class="btn-group">
                    <a href="/BienestarCreador/Dashboard" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z"/><path d="m9 12 2 2 4-4"/></svg>
                        Activar Modo Vacaciones
                    </button>
                </div>
            </form>
        }
    </div>
</div>

<script>
    // Formulario de activar vacaciones
    const formVacaciones = document.getElementById('formVacaciones');
    if (formVacaciones) {
        formVacaciones.addEventListener('submit', async function(e) {
            e.preventDefault();

            const fechaInicio = document.getElementById('fechaInicio').value;
            const fechaFin = document.getElementById('fechaFin').value;
            const mensaje = document.getElementById('mensajeAutorespuesta').value;
            const mensajePerfil = document.getElementById('mensajePerfil').value;
            const autoResponder = document.getElementById('autoResponder').checked;
            const proteger = document.getElementById('protegerSuscriptores').checked;

            if (!fechaInicio || !fechaFin) {
                alert('Por favor selecciona las fechas de inicio y fin');
                return;
            }

            if (new Date(fechaFin) <= new Date(fechaInicio)) {
                alert('La fecha de fin debe ser posterior a la de inicio');
                return;
            }

            try {
                const formData = new FormData();
                formData.append('fechaInicio', fechaInicio);
                formData.append('fechaFin', fechaFin);
                formData.append('mensajeAutorespuesta', mensaje);
                formData.append('mensajePerfilPublico', mensajePerfil);
                formData.append('autoResponder', autoResponder);
                formData.append('protegerSuscriptores', proteger);

                const response = await fetch('/BienestarCreador/ConfigurarVacaciones', {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                });

                const data = await response.json();
                if (data.success) {
                    window.location.href = '/BienestarCreador/Dashboard';
                } else {
                    alert(data.message || 'Error al activar vacaciones');
                }
            } catch (error) {
                console.error(error);
                alert('Error al procesar la solicitud');
            }
        });
    }

    // Formulario de desactivar vacaciones
    const formDesactivar = document.getElementById('formDesactivar');
    if (formDesactivar) {
        formDesactivar.addEventListener('submit', async function(e) {
            e.preventDefault();

            if (!confirm('Deseas desactivar el modo vacaciones?')) return;

            try {
                const response = await fetch('/BienestarCreador/DesactivarVacaciones', {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || '',
                        'Content-Type': 'application/json'
                    }
                });

                const data = await response.json();
                if (data.success) {
                    window.location.href = '/BienestarCreador/Dashboard';
                } else {
                    alert(data.message || 'Error al desactivar vacaciones');
                }
            } catch (error) {
                console.error(error);
                alert('Error al procesar la solicitud');
            }
        });
    }
</script>
