@{
    ViewData["Title"] = "Apelar Story";
    Layout = "_Layout";
    var story = ViewBag.Story as Lado.Models.Story;
}

<style>
    .apelacion-form-container {
        max-width: 700px;
        margin: 0 auto;
        padding: 24px 16px;
    }

    .apelacion-header {
        margin-bottom: 24px;
    }

    .apelacion-header h1 {
        font-size: 24px;
        font-weight: 600;
        color: var(--text-color);
        margin: 0 0 8px 0;
    }

    .apelacion-header p {
        color: var(--text-muted);
        margin: 0;
    }

    .story-preview {
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 16px;
        margin-bottom: 24px;
        display: flex;
        gap: 16px;
        align-items: center;
    }

    .story-preview-media {
        width: 80px;
        height: 120px;
        border-radius: 8px;
        overflow: hidden;
        background: var(--bg-secondary);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .story-preview-media img,
    .story-preview-media video {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .story-info h4 {
        margin: 0 0 8px 0;
        font-size: 16px;
        color: var(--text-color);
    }

    .story-info p {
        margin: 0;
        font-size: 13px;
        color: var(--text-muted);
    }

    .form-card {
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 24px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        font-weight: 600;
        color: var(--text-color);
        margin-bottom: 8px;
        font-size: 14px;
    }

    .form-group label span {
        color: #ef4444;
    }

    .form-group small {
        display: block;
        color: var(--text-muted);
        font-size: 12px;
        margin-top: 4px;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 1px solid var(--border-color);
        border-radius: 8px;
        font-size: 14px;
        color: var(--text-color);
        background: var(--input-bg);
        transition: border-color 0.2s;
    }

    .form-control:focus {
        outline: none;
        border-color: var(--primary-color);
    }

    .form-control::placeholder {
        color: var(--text-muted);
    }

    textarea.form-control {
        min-height: 120px;
        resize: vertical;
    }

    select.form-control {
        appearance: none;
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
        background-position: right 12px center;
        background-repeat: no-repeat;
        background-size: 16px;
        padding-right: 40px;
    }

    .warning-box {
        background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
        border: 1px solid #f59e0b;
        border-radius: 12px;
        padding: 16px;
        margin-bottom: 24px;
        display: flex;
        align-items: flex-start;
        gap: 12px;
    }

    .warning-box i {
        color: #d97706;
        font-size: 20px;
    }

    .warning-box-text strong {
        color: #92400e;
        display: block;
        margin-bottom: 4px;
    }

    .warning-box-text p {
        color: #78350f;
        font-size: 13px;
        margin: 0;
    }

    .form-actions {
        display: flex;
        gap: 12px;
        margin-top: 24px;
    }

    .btn-submit {
        flex: 1;
        padding: 14px 24px;
        background: var(--primary-color);
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .btn-submit:hover {
        background: var(--primary-hover);
    }

    .btn-cancel {
        padding: 14px 24px;
        background: transparent;
        color: var(--text-muted);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        font-size: 15px;
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .btn-cancel:hover {
        background: var(--bg-secondary);
        color: var(--text-color);
    }
</style>

<div class="apelacion-form-container">
    <div class="apelacion-header">
        <h1><i class="fas fa-gavel me-2"></i>Apelar Story</h1>
        <p>Completa el formulario para solicitar una revision de tu story</p>
    </div>

    @if (story != null)
    {
        <div class="story-preview">
            <div class="story-preview-media">
                @if (story.TipoContenido == Lado.Models.TipoContenido.Video)
                {
                    <video src="@story.RutaArchivo" muted></video>
                }
                else if (!string.IsNullOrEmpty(story.RutaArchivo))
                {
                    <img src="@story.RutaArchivo" alt="Preview de la story">
                }
                else
                {
                    <i class="fas fa-circle" style="font-size: 24px; color: var(--text-muted);"></i>
                }
            </div>
            <div class="story-info">
                <h4>Story #@story.Id</h4>
                <p>
                    <i class="fas fa-calendar me-1"></i>
                    Publicada el @story.FechaPublicacion.ToString("dd MMM yyyy, HH:mm")
                </p>
                @if (!string.IsNullOrEmpty(story.Texto))
                {
                    <p style="margin-top: 8px;">
                        <i class="fas fa-quote-left me-1"></i>
                        @(story.Texto.Length > 50 ? story.Texto.Substring(0, 50) + "..." : story.Texto)
                    </p>
                }
            </div>
        </div>
    }

    <div class="warning-box">
        <i class="fas fa-exclamation-triangle"></i>
        <div class="warning-box-text">
            <strong>Antes de apelar</strong>
            <p>
                Asegurate de leer nuestras normas de comunidad. Las apelaciones falsas o abusivas pueden
                resultar en restricciones adicionales a tu cuenta.
            </p>
        </div>
    </div>

    <div class="form-card">
        <form asp-action="CrearStory" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="storyId" value="@story?.Id" />

            <div class="form-group">
                <label for="razonRechazo">Razon del rechazo <span>*</span></label>
                <select name="razonRechazo" id="razonRechazo" class="form-control" required>
                    <option value="">Selecciona la razon indicada...</option>
                    <option value="Contenido inapropiado">Contenido inapropiado</option>
                    <option value="Violacion de derechos de autor">Violacion de derechos de autor</option>
                    <option value="Spam o contenido no deseado">Spam o contenido no deseado</option>
                    <option value="Contenido violento o peligroso">Contenido violento o peligroso</option>
                    <option value="Incumplimiento de normas">Incumplimiento de normas comunitarias</option>
                    <option value="Otro">Otro motivo</option>
                </select>
                <small>Selecciona la razon que te indicaron para el rechazo</small>
            </div>

            <div class="form-group">
                <label for="argumentos">Tu argumento <span>*</span></label>
                <textarea name="argumentos" id="argumentos" class="form-control"
                          placeholder="Explica por que crees que el rechazo fue un error. Incluye cualquier contexto relevante que pueda ayudar a revisar tu caso..."
                          required maxlength="2000"></textarea>
                <small>Maximo 2000 caracteres. Se claro y especifico.</small>
            </div>

            <div class="form-group">
                <label for="evidencia">Evidencia adicional (opcional)</label>
                <textarea name="evidencia" id="evidencia" class="form-control"
                          placeholder="Si tienes enlaces a documentos, imagenes originales u otra evidencia que apoye tu caso, incluyelos aqui..."
                          maxlength="1000" style="min-height: 80px;"></textarea>
                <small>Puedes incluir URLs a imagenes o documentos que apoyen tu apelacion</small>
            </div>

            <div class="form-actions">
                <a href="@Url.Action("Index", "Apelaciones")" class="btn-cancel">
                    <i class="fas fa-arrow-left"></i>
                    Cancelar
                </a>
                <button type="submit" class="btn-submit">
                    <i class="fas fa-paper-plane"></i>
                    Enviar Apelacion
                </button>
            </div>
        </form>
    </div>
</div>
