<style>
    .help-hero {
        background: linear-gradient(135deg, #4682B4 0%, #36648B 100%);
        border-radius: 24px;
        padding: 48px;
        color: white;
        text-align: center;
        margin-bottom: 40px;
        position: relative;
        overflow: hidden;
    }

    .help-hero::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -20%;
        width: 400px;
        height: 400px;
        background: rgba(255,255,255,0.1);
        border-radius: 50%;
    }

    .help-hero h1 {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 12px;
        position: relative;
    }

    .help-hero p {
        font-size: 1.1rem;
        opacity: 0.9;
        max-width: 500px;
        margin: 0 auto 24px;
        position: relative;
    }

    .help-search {
        max-width: 500px;
        margin: 0 auto;
        position: relative;
    }

    .help-search input {
        width: 100%;
        padding: 16px 20px 16px 50px;
        border: none;
        border-radius: 12px;
        font-size: 16px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }

    .help-search input:focus {
        outline: none;
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    }

    .help-search svg {
        position: absolute;
        left: 18px;
        top: 50%;
        transform: translateY(-50%);
        color: #64748b;
    }

    .help-categories {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 24px;
        margin-bottom: 48px;
    }

    .help-category {
        background: white;
        border-radius: 16px;
        padding: 28px;
        border: 1px solid #e5e7eb;
        text-decoration: none;
        transition: all 0.3s ease;
        display: block;
    }

    .help-category:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 40px rgba(70, 130, 180, 0.15);
        border-color: #4682B4;
    }

    .help-category-icon {
        width: 56px;
        height: 56px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 16px;
    }

    .help-category-icon.blue { background: rgba(70, 130, 180, 0.1); color: #4682B4; }
    .help-category-icon.green { background: rgba(16, 185, 129, 0.1); color: #10b981; }
    .help-category-icon.yellow { background: rgba(245, 158, 11, 0.1); color: #f59e0b; }
    .help-category-icon.purple { background: rgba(139, 92, 246, 0.1); color: #8b5cf6; }
    .help-category-icon.red { background: rgba(239, 68, 68, 0.1); color: #ef4444; }
    .help-category-icon.cyan { background: rgba(6, 182, 212, 0.1); color: #06b6d4; }

    .help-category h3 {
        font-size: 18px;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 8px;
    }

    .help-category p {
        font-size: 14px;
        color: #64748b;
        margin: 0;
        line-height: 1.5;
    }

    .quick-help {
        background: #f8fafc;
        border-radius: 20px;
        padding: 40px;
        margin-bottom: 48px;
    }

    .quick-help h2 {
        font-size: 24px;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 24px;
        text-align: center;
    }

    .quick-links {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 16px;
    }

    .quick-link {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 16px;
        background: white;
        border-radius: 12px;
        text-decoration: none;
        color: #1e293b;
        transition: all 0.2s;
        border: 1px solid #e5e7eb;
    }

    .quick-link:hover {
        background: #4682B4;
        color: white;
        border-color: #4682B4;
    }

    .quick-link svg {
        flex-shrink: 0;
    }

    .contact-section {
        text-align: center;
        background: white;
        border-radius: 20px;
        padding: 48px;
        border: 2px solid #e5e7eb;
    }

    .contact-section h2 {
        font-size: 24px;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 12px;
    }

    .contact-section p {
        color: #64748b;
        margin-bottom: 24px;
    }

    .contact-buttons {
        display: flex;
        gap: 16px;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn-contact {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 14px 28px;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s;
    }

    .btn-contact.primary {
        background: linear-gradient(135deg, #4682B4 0%, #36648B 100%);
        color: white;
    }

    .btn-contact.primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(70, 130, 180, 0.3);
    }

    .btn-contact.secondary {
        background: #f1f5f9;
        color: #1e293b;
    }

    .btn-contact.secondary:hover {
        background: #e2e8f0;
    }

    @@media (max-width: 768px) {
        .help-hero {
            padding: 32px 20px;
        }

        .help-hero h1 {
            font-size: 1.75rem;
        }

        .quick-help {
            padding: 24px;
        }

        .contact-section {
            padding: 32px 20px;
        }

        .contact-buttons {
            flex-direction: column;
        }

        .btn-contact {
            justify-content: center;
        }
    }

    /* ========================================
       OPTIMIZACIONES MOVIL AVANZADAS
       ======================================== */
    @@media (max-width: 479px) {
        .help-hero {
            padding: 28px 16px;
            border-radius: 0;
            margin: -12px -12px 24px -12px;
        }

        .help-hero h1 {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        .help-hero p {
            font-size: 0.9rem;
            margin-bottom: 20px;
        }

        .help-search input {
            padding: 14px 16px 14px 44px;
            font-size: 16px; /* Previene zoom iOS */
            border-radius: 10px;
        }

        .help-search svg {
            left: 14px;
            width: 18px;
            height: 18px;
        }

        /* Categories en scroll horizontal */
        .help-categories {
            display: flex;
            overflow-x: auto;
            gap: 12px;
            padding-bottom: 8px;
            margin-bottom: 28px;
            -webkit-overflow-scrolling: touch;
            scroll-snap-type: x mandatory;
            scrollbar-width: none;
        }

        .help-categories::-webkit-scrollbar {
            display: none;
        }

        .help-category {
            flex: 0 0 auto;
            min-width: 200px;
            padding: 20px;
            border-radius: 14px;
            scroll-snap-align: start;
        }

        .help-category:hover {
            transform: none;
        }

        .help-category-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            margin-bottom: 12px;
        }

        .help-category-icon svg {
            width: 24px;
            height: 24px;
        }

        .help-category h3 {
            font-size: 15px;
        }

        .help-category p {
            font-size: 13px;
        }

        /* Quick help */
        .quick-help {
            padding: 20px 16px;
            border-radius: 16px;
            margin-bottom: 24px;
        }

        .quick-help h2 {
            font-size: 18px;
            margin-bottom: 16px;
        }

        .quick-links {
            grid-template-columns: 1fr;
            gap: 10px;
        }

        .quick-link {
            padding: 14px;
            border-radius: 10px;
            font-size: 14px;
        }

        .quick-link svg {
            width: 18px;
            height: 18px;
        }

        /* Contact section */
        .contact-section {
            padding: 28px 16px;
            border-radius: 16px;
            margin-bottom: calc(80px + env(safe-area-inset-bottom));
        }

        .contact-section h2 {
            font-size: 18px;
        }

        .contact-section p {
            font-size: 14px;
            margin-bottom: 20px;
        }

        .contact-buttons {
            gap: 10px;
        }

        .btn-contact {
            padding: 14px 20px;
            border-radius: 10px;
            font-size: 14px;
            width: 100%;
        }
    }

    /* Ultra peque√±o */
    @@media (max-width: 359px) {
        .help-hero h1 {
            font-size: 1.35rem;
        }

        .help-category {
            min-width: 180px;
            padding: 16px;
        }

        .help-category-icon {
            width: 42px;
            height: 42px;
        }

        .help-category h3 {
            font-size: 14px;
        }

        .btn-contact {
            padding: 12px 16px;
            font-size: 13px;
        }
    }

    /* Touch device optimizations */
    @@media (hover: none) and (pointer: coarse) {
        * {
            -webkit-tap-highlight-color: transparent;
        }

        .help-category:hover {
            transform: none;
            box-shadow: none;
            border-color: #e5e7eb;
        }

        .help-category:active {
            transform: scale(0.98);
            background: #f8fafc;
        }

        .quick-link:hover {
            background: white;
            color: #1e293b;
            border-color: #e5e7eb;
        }

        .quick-link:active {
            background: #4682B4;
            color: white;
            border-color: #4682B4;
        }

        .btn-contact:hover {
            transform: none;
            box-shadow: none;
        }

        .btn-contact:active {
            transform: scale(0.98);
            opacity: 0.9;
        }

        /* Scroll suave */
        .help-categories {
            -webkit-overflow-scrolling: touch;
        }
    }
</style>

