@{
    ViewData["Title"] = "Guia de Inicio";
    Layout = "_Layout";
}

<style>
    .guia-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 30px 20px;
    }

    .guia-header {
        text-align: center;
        margin-bottom: 50px;
    }

    .guia-header h1 {
        color: #4682B4;
        font-size: 2.5rem;
        margin-bottom: 15px;
    }

    .guia-header p {
        color: #666;
        font-size: 1.1rem;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: #4682B4;
        text-decoration: none;
        margin-bottom: 20px;
        font-weight: 500;
    }

    .back-link:hover {
        text-decoration: underline;
    }

    .timeline {
        position: relative;
        padding-left: 50px;
    }

    .timeline::before {
        content: '';
        position: absolute;
        left: 20px;
        top: 0;
        bottom: 0;
        width: 3px;
        background: linear-gradient(to bottom, #4682B4, #5a9fd4);
        border-radius: 3px;
    }

    .timeline-step {
        position: relative;
        margin-bottom: 40px;
    }

    .timeline-step:last-child {
        margin-bottom: 0;
    }

    .step-number {
        position: absolute;
        left: -50px;
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #4682B4 0%, #5a9fd4 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 700;
        font-size: 1.1rem;
        box-shadow: 0 2px 10px rgba(70, 130, 180, 0.3);
    }

    .step-card {
        background: white;
        border-radius: 16px;
        padding: 30px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        transition: transform 0.3s ease;
    }

    .step-card:hover {
        transform: translateX(5px);
    }

    .step-title {
        color: #333;
        font-size: 1.4rem;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .step-title i {
        color: #4682B4;
    }

    .step-content {
        color: #666;
        line-height: 1.7;
    }

    .step-content ul {
        margin: 15px 0;
        padding-left: 20px;
    }

    .step-content li {
        margin-bottom: 10px;
    }

    .tip-box {
        background: #e7f3ff;
        border-radius: 10px;
        padding: 15px;
        margin-top: 15px;
        display: flex;
        align-items: flex-start;
        gap: 12px;
    }

    .tip-box i {
        color: #4682B4;
        font-size: 1.2rem;
        margin-top: 2px;
    }

    .tip-box p {
        color: #004085;
        margin: 0;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 50px;
    }

    .feature-card {
        background: white;
        border-radius: 16px;
        padding: 25px;
        text-align: center;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        transition: transform 0.3s ease;
    }

    .feature-card:hover {
        transform: translateY(-5px);
    }

    .feature-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #4682B4 0%, #5a9fd4 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 15px;
    }

    .feature-icon i {
        font-size: 1.5rem;
        color: white;
    }

    .feature-card h4 {
        color: #333;
        margin-bottom: 10px;
    }

    .feature-card p {
        color: #666;
        font-size: 0.9rem;
        margin: 0;
    }

    .cta-section {
        background: linear-gradient(135deg, #4682B4 0%, #5a9fd4 100%);
        color: white;
        padding: 50px;
        border-radius: 20px;
        text-align: center;
        margin-top: 50px;
    }

    .cta-section h2 {
        margin-bottom: 15px;
        font-size: 1.8rem;
    }

    .cta-section p {
        opacity: 0.9;
        margin-bottom: 25px;
        font-size: 1.1rem;
    }

    .cta-buttons {
        display: flex;
        gap: 15px;
        justify-content: center;
        flex-wrap: wrap;
    }

    .cta-btn {
        padding: 14px 30px;
        border-radius: 25px;
        text-decoration: none;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
    }

    .cta-btn-primary {
        background: white;
        color: #4682B4;
    }

    .cta-btn-secondary {
        background: rgba(255,255,255,0.2);
        color: white;
        border: 2px solid white;
    }

    .cta-btn:hover {
        transform: translateY(-2px);
    }

    @@media (max-width: 768px) {
        .guia-header h1 {
            font-size: 2rem;
        }

        .timeline {
            padding-left: 40px;
        }

        .step-number {
            left: -40px;
            width: 35px;
            height: 35px;
            font-size: 1rem;
        }

        .timeline::before {
            left: 17px;
        }

        .step-card {
            padding: 20px;
        }

        .cta-section {
            padding: 30px 20px;
        }
    }
</style>

<div class="guia-container">
    <a href="@Url.Action("Index", "Ayuda")" class="back-link">
        <i class="fas fa-arrow-left"></i> Volver al Centro de Ayuda
    </a>

    <div class="guia-header">
        <h1><i class="fas fa-rocket"></i> Guia de Inicio</h1>
        <p>Aprende a usar LadoA en minutos y comienza a crear contenido increible</p>
    </div>

    <div class="timeline">
        <!-- Paso 1 -->
        <div class="timeline-step">
            <div class="step-number">1</div>
            <div class="step-card">
                <h3 class="step-title">
                    <i class="fas fa-user-plus"></i>
                    Crea tu cuenta
                </h3>
                <div class="step-content">
                    <p>Registrarte en LadoA es rapido y sencillo:</p>
                    <ul>
                        <li>Haz clic en <strong>"Registrarse"</strong> en la pagina principal</li>
                        <li>Elige un nombre de usuario unico que te represente</li>
                        <li>Ingresa tu correo electronico y crea una contrasena segura</li>
                        <li>Verifica tu email haciendo clic en el enlace que te enviamos</li>
                    </ul>
                    <div class="tip-box">
                        <i class="fas fa-lightbulb"></i>
                        <p><strong>Tip:</strong> Elige un nombre de usuario memorable y facil de recordar. Este sera tu identidad en LadoA.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Paso 2 -->
        <div class="timeline-step">
            <div class="step-number">2</div>
            <div class="step-card">
                <h3 class="step-title">
                    <i class="fas fa-id-card"></i>
                    Completa tu perfil
                </h3>
                <div class="step-content">
                    <p>Un perfil completo atrae mas seguidores:</p>
                    <ul>
                        <li>Sube una <strong>foto de perfil</strong> atractiva y profesional</li>
                        <li>Agrega una <strong>imagen de portada</strong> que refleje tu estilo</li>
                        <li>Escribe una <strong>biografia</strong> interesante sobre ti</li>
                        <li>Indica tu ubicacion si lo deseas</li>
                        <li>Conecta tus redes sociales</li>
                    </ul>
                    <div class="tip-box">
                        <i class="fas fa-lightbulb"></i>
                        <p><strong>Tip:</strong> Las fotos de alta calidad y una bio creativa pueden aumentar tus seguidores significativamente.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Paso 3 -->
        <div class="timeline-step">
            <div class="step-number">3</div>
            <div class="step-card">
                <h3 class="step-title">
                    <i class="fas fa-camera"></i>
                    Publica tu primer contenido
                </h3>
                <div class="step-content">
                    <p>Es hora de compartir con el mundo:</p>
                    <ul>
                        <li>Haz clic en el boton <strong>"+"</strong> para crear una publicacion</li>
                        <li>Sube fotos, videos o crea un <strong>Reel</strong></li>
                        <li>Crea <strong>carruseles</strong> con hasta 10 fotos/videos</li>
                        <li>Publica <strong>Stories</strong> que desaparecen en 24 horas</li>
                        <li>Agrega una descripcion atractiva</li>
                        <li>Usa <strong>hashtags relevantes</strong> para mayor visibilidad</li>
                    </ul>
                    <div class="tip-box">
                        <i class="fas fa-lightbulb"></i>
                        <p><strong>Tip:</strong> Usa Stories para contenido casual del dia a dia y Posts/Reels para contenido mas elaborado.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Paso 4 -->
        <div class="timeline-step">
            <div class="step-number">4</div>
            <div class="step-card">
                <h3 class="step-title">
                    <i class="fas fa-users"></i>
                    Conecta con la comunidad
                </h3>
                <div class="step-content">
                    <p>LadoA es una comunidad activa:</p>
                    <ul>
                        <li>Explora el <strong>Feed Publico</strong> para descubrir contenido</li>
                        <li>Sigue a creadores que te inspiren</li>
                        <li>Dale like y comenta en publicaciones que te gusten</li>
                        <li>Responde a los comentarios en tu contenido</li>
                        <li>Envia mensajes directos para conectar</li>
                    </ul>
                    <div class="tip-box">
                        <i class="fas fa-lightbulb"></i>
                        <p><strong>Tip:</strong> La interaccion genuina es la clave. Comenta con aportes valiosos, no solo emojis.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Paso 5 -->
        <div class="timeline-step">
            <div class="step-number">5</div>
            <div class="step-card">
                <h3 class="step-title">
                    <i class="fas fa-coins"></i>
                    Explora la monetizacion
                </h3>
                <div class="step-content">
                    <p>Cuando estes listo, puedes ganar dinero:</p>
                    <ul>
                        <li>Solicita la <strong>verificacion de creador</strong></li>
                        <li>Configura tu <strong>precio de suscripcion</strong></li>
                        <li>Crea <strong>contenido exclusivo</strong> para suscriptores</li>
                        <li>Acepta <strong>propinas</strong> de tu audiencia</li>
                        <li>Participa en <strong>desafios</strong> para ganar mas</li>
                    </ul>
                    <div class="tip-box">
                        <i class="fas fa-lightbulb"></i>
                        <p><strong>Tip:</strong> Construye tu audiencia primero. La monetizacion viene naturalmente cuando tienes seguidores fieles.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="features-grid">
        <div class="feature-card">
            <div class="feature-icon">
                <i class="fas fa-video"></i>
            </div>
            <h4>Creador de Reels</h4>
            <p>Crea videos cortos con musica, efectos y stickers</p>
        </div>
        <div class="feature-card">
            <div class="feature-icon">
                <i class="fas fa-circle-notch"></i>
            </div>
            <h4>Stories</h4>
            <p>Comparte momentos que desaparecen en 24 horas</p>
        </div>
        <div class="feature-card">
            <div class="feature-icon">
                <i class="fas fa-images"></i>
            </div>
            <h4>Carruseles</h4>
            <p>Sube hasta 10 fotos o videos en un solo post</p>
        </div>
        <div class="feature-card">
            <div class="feature-icon">
                <i class="fas fa-bolt"></i>
            </div>
            <h4>Boost</h4>
            <p>Aumenta el alcance de tus publicaciones</p>
        </div>
        <div class="feature-card">
            <div class="feature-icon">
                <i class="fas fa-lock"></i>
            </div>
            <h4>Contenido Exclusivo</h4>
            <p>Ofrece contenido premium a tus suscriptores</p>
        </div>
        <div class="feature-card">
            <div class="feature-icon">
                <i class="fas fa-chart-line"></i>
            </div>
            <h4>Estadisticas</h4>
            <p>Analiza el rendimiento de tu contenido</p>
        </div>
    </div>

    <div class="cta-section">
        <h2>Listo para comenzar?</h2>
        <p>Unete a miles de creadores que ya estan compartiendo su contenido en LadoA</p>
        <div class="cta-buttons">
            @if (User.Identity?.IsAuthenticated != true)
            {
                <a href="@Url.Action("Register", "Account")" class="cta-btn cta-btn-primary">
                    <i class="fas fa-user-plus"></i> Crear cuenta gratis
                </a>
            }
            <a href="@Url.Action("FAQ", "Ayuda")" class="cta-btn cta-btn-secondary">
                <i class="fas fa-question-circle"></i> Ver preguntas frecuentes
            </a>
        </div>
    </div>
</div>
