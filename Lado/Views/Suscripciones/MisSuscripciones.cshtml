@model List<Lado.Models.Suscripcion>

@{
    ViewData["Title"] = "Mis Suscripciones";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold mb-2">Mis Suscripciones</h2>
            <p class="text-muted">Gestiona tus suscripciones activas</p>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-muted mb-3">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
            </svg>
            <h4 class="text-muted">No tienes suscripciones activas</h4>
            <p class="text-muted mb-4">Explora creadores y encuentra contenido que te interese</p>
            <a href="@Url.Action("Index", "Feed")" class="btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: inline-block; vertical-align: middle; margin-right: 8px;">
                    <circle cx="11" cy="11" r="8"></circle>
                    <path d="m21 21-4.35-4.35"></path>
                </svg>
                Explorar Creadores
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var suscripcion in Model)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card shadow-sm h-100">
                        <div class="position-relative" style="height: 200px; overflow: hidden;">
                            @if (!string.IsNullOrEmpty(suscripcion.Creador?.FotoPortada))
                            {
                                <img src="@suscripcion.Creador.FotoPortada" alt="Portada" class="w-100 h-100 object-fit-cover">
                            }
                            else
                            {
                                <div class="w-100 h-100 bg-gradient" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"></div>
                            }

                            @if (suscripcion.EstaActiva)
                            {
                                <span class="badge bg-success position-absolute top-0 end-0 m-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: inline-block; vertical-align: middle; margin-right: 4px;">
                                        <polyline points="20 6 9 17 4 12"></polyline>
                                    </svg>
                                    Activa
                                </span>
                            }
                        </div>

                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                @if (!string.IsNullOrEmpty(suscripcion.Creador?.FotoPerfil))
                                {
                                    <img src="@suscripcion.Creador.FotoPerfil" alt="@suscripcion.Creador.NombreCompleto" class="rounded-circle me-3" style="width: 50px; height: 50px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                            <circle cx="12" cy="7" r="4"></circle>
                                        </svg>
                                    </div>
                                }
                                <div class="flex-grow-1">
                                    <h5 class="mb-0">@(suscripcion.Creador?.NombreCompleto ?? "Usuario")</h5>
                                    <small class="text-muted">@@@(suscripcion.Creador?.UserName ?? "username")</small>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="text-muted">Precio mensual</span>
                                    <strong class="text-primary fs-5">$@suscripcion.PrecioMensual.ToString("N2")</strong>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="text-muted">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: inline-block; vertical-align: middle; margin-right: 4px;">
                                            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                            <line x1="16" y1="2" x2="16" y2="6"></line>
                                            <line x1="8" y1="2" x2="8" y2="6"></line>
                                            <line x1="3" y1="10" x2="21" y2="10"></line>
                                        </svg>
                                        Desde
                                    </span>
                                    <small>@suscripcion.FechaInicio.ToString("dd/MM/yyyy")</small>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-muted">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: inline-block; vertical-align: middle; margin-right: 4px;">
                                            <circle cx="12" cy="12" r="10"></circle>
                                            <polyline points="12 6 12 12 16 14"></polyline>
                                        </svg>
                                        Próxima renovación
                                    </span>
                                    <small>@suscripcion.ProximaRenovacion.ToString("dd/MM/yyyy")</small>
                                </div>
                            </div>

                            <div class="d-flex gap-2">
                                <a href="@Url.Action("Perfil", "Feed", new { id = suscripcion.CreadorId })" class="btn btn-outline-primary btn-sm flex-grow-1">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: inline-block; vertical-align: middle; margin-right: 4px;">
                                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                        <circle cx="12" cy="7" r="4"></circle>
                                    </svg>
                                    Ver Perfil
                                </a>
                                @if (suscripcion.EstaActiva)
                                {
                                    <button type="button" class="btn btn-outline-danger btn-sm" onclick="confirmarCancelacion(@suscripcion.Id, '@suscripcion.Creador?.NombreCompleto')">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: inline-block; vertical-align: middle;">
                                            <line x1="18" y1="6" x2="6" y2="18"></line>
                                            <line x1="6" y1="6" x2="18" y2="18"></line>
                                        </svg>
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-6 col-md-3 mb-3 mb-md-0">
                                <h3 class="text-primary mb-0">@Model.Count</h3>
                                <small class="text-muted">Suscripciones activas</small>
                            </div>
                            <div class="col-6 col-md-3 mb-3 mb-md-0">
                                <h3 class="text-success mb-0">$@Model.Sum(s => s.PrecioMensual).ToString("N2")</h3>
                                <small class="text-muted">Gasto mensual</small>
                            </div>
                            <div class="col-6 col-md-3">
                                <h3 class="text-info mb-0">$@((Model.Sum(s => s.PrecioMensual) * 12).ToString("N2"))</h3>
                                <small class="text-muted">Gasto anual estimado</small>
                            </div>
                            <div class="col-6 col-md-3">
                                <h3 class="text-warning mb-0">@Model.Count(s => s.RenovacionAutomatica)</h3>
                                <small class="text-muted">Renovación automática</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="modal fade" id="modalCancelar" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cancelar Suscripción</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro que deseas cancelar tu suscripción a <strong id="nombreCreador"></strong>?</p>
                <p class="text-muted mb-0">Esta acción no se puede deshacer.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No, mantener</button>
                <form id="formCancelar" method="post" asp-action="Cancelar" asp-controller="Suscripciones" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="suscripcionId" />
                    <button type="submit" class="btn btn-danger">Sí, cancelar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmarCancelacion(id, nombreCreador) {
            document.getElementById('suscripcionId').value = id;
            document.getElementById('nombreCreador').textContent = nombreCreador;
            var modal = new bootstrap.Modal(document.getElementById('modalCancelar'));
            modal.show();
        }
    </script>
}