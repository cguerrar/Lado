@{
    Layout = null; // Sin layout - página standalone
    var nombreDisplay = ViewBag.NombreDisplay as string ?? "Creador";
    var fotoPerfil = ViewBag.FotoPerfil as string;
    var biografia = ViewBag.Biografia as string;
    var username = ViewBag.Username as string;
    var seudonimo = ViewBag.Seudonimo as string;
    var usarLadoB = ViewBag.UsarLadoB as bool? ?? false;

    // Redes sociales
    var instagram = ViewBag.Instagram as string;
    var twitter = ViewBag.Twitter as string;
    var tiktok = ViewBag.TikTok as string;
    var youtube = ViewBag.YouTube as string;
    var facebook = ViewBag.Facebook as string;
    var onlyfans = ViewBag.OnlyFans as string;

    // Estadísticas
    var seguidores = ViewBag.NumeroSeguidores as int? ?? 0;
    var contenidos = ViewBag.ContenidosPublicados as int? ?? 0;
    var precio = ViewBag.PrecioSuscripcion as decimal? ?? 0;

    // Determinar qué username mostrar en el link a Lado
    var perfilUsername = usarLadoB && !string.IsNullOrEmpty(seudonimo) ? seudonimo : username;

    // Contar redes sociales disponibles
    var tieneRedes = !string.IsNullOrEmpty(instagram) ||
                     !string.IsNullOrEmpty(twitter) ||
                     !string.IsNullOrEmpty(tiktok) ||
                     !string.IsNullOrEmpty(youtube) ||
                     !string.IsNullOrEmpty(facebook) ||
                     !string.IsNullOrEmpty(onlyfans);
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>@ViewData["Title"]</title>

    <!-- SEO Meta Tags -->
    <meta name="description" content="@ViewData["MetaDescription"]">
    <meta name="robots" content="index, follow">
    <link rel="canonical" href="https://ladoapp.com/link/@@perfilUsername">

    <!-- Open Graph -->
    <meta property="og:type" content="profile">
    <meta property="og:title" content="@nombreDisplay - Lado">
    <meta property="og:description" content="@ViewData["MetaDescription"]">
    <meta property="og:image" content="@(ViewData["OgImage"] ?? "/images/og-default.jpg")">
    <meta property="og:url" content="https://ladoapp.com/link/@@perfilUsername">
    <meta property="og:site_name" content="Lado">

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:title" content="@nombreDisplay - Lado">
    <meta name="twitter:description" content="@ViewData["MetaDescription"]">
    <meta name="twitter:image" content="@(ViewData["OgImage"] ?? "/images/og-default.jpg")">

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png">
    <meta name="theme-color" content="#4682B4">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary: #4682B4;
            --primary-dark: #36648B;
            --primary-light: #B0C4DE;
            --primary-gradient: linear-gradient(135deg, #4682B4 0%, #36648B 50%, #2C5278 100%);
            --bg-dark: #0a0a0f;
            --bg-card: rgba(255, 255, 255, 0.05);
            --text-primary: #ffffff;
            --text-secondary: rgba(255, 255, 255, 0.7);
            --text-muted: rgba(255, 255, 255, 0.5);
            --border: rgba(255, 255, 255, 0.1);
            --glow: 0 0 30px rgba(70, 130, 180, 0.3);
        }

        html, body {
            min-height: 100vh;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background: var(--bg-dark);
            color: var(--text-primary);
            -webkit-font-smoothing: antialiased;
        }

        body {
            background:
                radial-gradient(ellipse at top, rgba(70, 130, 180, 0.15) 0%, transparent 50%),
                radial-gradient(ellipse at bottom right, rgba(70, 130, 180, 0.1) 0%, transparent 50%),
                var(--bg-dark);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 40px 20px;
        }

        .link-page {
            width: 100%;
            max-width: 420px;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 24px;
        }

        /* Avatar con borde animado */
        .avatar-container {
            position: relative;
            width: 120px;
            height: 120px;
        }

        .avatar-ring {
            position: absolute;
            inset: -4px;
            border-radius: 50%;
            background: var(--primary-gradient);
            animation: rotate 8s linear infinite;
        }

        @@keyframes rotate {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        .avatar {
            position: relative;
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid var(--bg-dark);
            z-index: 1;
            background: linear-gradient(135deg, #1a1a2e, #16213e);
        }

        .avatar-placeholder {
            position: relative;
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background: var(--primary-gradient);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 48px;
            font-weight: 600;
            color: white;
            border: 3px solid var(--bg-dark);
            z-index: 1;
        }

        /* Información del perfil */
        .profile-info {
            text-align: center;
        }

        .profile-name {
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 4px;
            background: linear-gradient(135deg, #fff 0%, var(--primary-light) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .profile-username {
            font-size: 15px;
            color: var(--text-muted);
            margin-bottom: 12px;
        }

        .profile-bio {
            font-size: 15px;
            color: var(--text-secondary);
            line-height: 1.5;
            max-width: 320px;
            margin: 0 auto;
        }

        /* Estadísticas */
        .stats {
            display: flex;
            gap: 32px;
            padding: 16px 0;
        }

        .stat {
            text-align: center;
        }

        .stat-value {
            font-size: 20px;
            font-weight: 700;
            color: var(--text-primary);
        }

        .stat-label {
            font-size: 12px;
            color: var(--text-muted);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        /* Botón principal Lado */
        .main-link {
            width: 100%;
            padding: 18px 24px;
            background: var(--primary-gradient);
            border: none;
            border-radius: 16px;
            color: white;
            font-size: 17px;
            font-weight: 600;
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            transition: all 0.3s ease;
            box-shadow: var(--glow);
            position: relative;
            overflow: hidden;
        }

        .main-link::before {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, rgba(255,255,255,0.2) 0%, transparent 50%);
            opacity: 0;
            transition: opacity 0.3s;
        }

        .main-link:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 40px rgba(70, 130, 180, 0.4);
        }

        .main-link:hover::before {
            opacity: 1;
        }

        .main-link:active {
            transform: translateY(0);
        }

        .main-link .lado-icon {
            width: 28px;
            height: 28px;
            background: rgba(255,255,255,0.2);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 800;
            font-size: 14px;
        }

        /* Precio de suscripción */
        .subscription-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            background: rgba(255,255,255,0.1);
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 13px;
            color: var(--text-secondary);
            margin-top: 8px;
        }

        .subscription-badge i {
            color: var(--primary-light);
        }

        /* Redes sociales */
        .social-section {
            width: 100%;
            margin-top: 8px;
        }

        .social-title {
            font-size: 12px;
            color: var(--text-muted);
            text-transform: uppercase;
            letter-spacing: 1px;
            text-align: center;
            margin-bottom: 16px;
        }

        .social-links {
            display: flex;
            flex-wrap: wrap;
            gap: 12px;
            justify-content: center;
        }

        .social-link {
            width: 52px;
            height: 52px;
            border-radius: 14px;
            background: var(--bg-card);
            border: 1px solid var(--border);
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--text-secondary);
            font-size: 22px;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .social-link:hover {
            background: rgba(255,255,255,0.1);
            border-color: var(--primary);
            color: var(--text-primary);
            transform: translateY(-3px);
        }

        .social-link.instagram:hover {
            background: linear-gradient(45deg, #f09433, #e6683c, #dc2743, #cc2366, #bc1888);
            border-color: transparent;
            color: white;
        }

        .social-link.twitter:hover {
            background: #000;
            border-color: #000;
            color: white;
        }

        .social-link.tiktok:hover {
            background: #000;
            border-color: #000;
            color: white;
        }

        .social-link.youtube:hover {
            background: #FF0000;
            border-color: #FF0000;
            color: white;
        }

        .social-link.facebook:hover {
            background: #1877F2;
            border-color: #1877F2;
            color: white;
        }

        .social-link.onlyfans:hover {
            background: #00AFF0;
            border-color: #00AFF0;
            color: white;
        }

        /* Footer */
        .footer {
            margin-top: auto;
            padding-top: 40px;
            text-align: center;
        }

        .powered-by {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: var(--text-muted);
            font-size: 13px;
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 20px;
            background: var(--bg-card);
            border: 1px solid var(--border);
            transition: all 0.3s;
        }

        .powered-by:hover {
            border-color: var(--primary);
            color: var(--text-secondary);
        }

        .powered-by img {
            height: 18px;
            opacity: 0.8;
        }

        /* Verificado badge */
        .verified-badge {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 22px;
            height: 22px;
            background: var(--primary);
            border-radius: 50%;
            margin-left: 6px;
            vertical-align: middle;
        }

        .verified-badge svg {
            width: 14px;
            height: 14px;
            fill: white;
        }

        /* Animación de entrada */
        .link-page > * {
            animation: fadeInUp 0.6s ease forwards;
            opacity: 0;
        }

        .link-page > *:nth-child(1) { animation-delay: 0.1s; }
        .link-page > *:nth-child(2) { animation-delay: 0.2s; }
        .link-page > *:nth-child(3) { animation-delay: 0.3s; }
        .link-page > *:nth-child(4) { animation-delay: 0.4s; }
        .link-page > *:nth-child(5) { animation-delay: 0.5s; }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive */
        @@media (max-width: 480px) {
            body {
                padding: 30px 16px;
            }

            .profile-name {
                font-size: 24px;
            }

            .stats {
                gap: 24px;
            }

            .main-link {
                padding: 16px 20px;
                font-size: 16px;
            }
        }
    </style>
</head>
<body>
    <div class="link-page">
        <!-- Avatar -->
        <div class="avatar-container">
            <div class="avatar-ring"></div>
            @if (!string.IsNullOrEmpty(fotoPerfil))
            {
                <img src="@fotoPerfil" alt="@nombreDisplay" class="avatar" onerror="this.style.display='none';this.nextElementSibling.style.display='flex';">
                <div class="avatar-placeholder" style="display:none;">@(nombreDisplay?.Substring(0, 1).ToUpper())</div>
            }
            else
            {
                <div class="avatar-placeholder">@(nombreDisplay?.Substring(0, 1).ToUpper())</div>
            }
        </div>

        <!-- Info del perfil -->
        <div class="profile-info">
            <h1 class="profile-name">
                @nombreDisplay
                <span class="verified-badge" title="Creador Verificado">
                    <svg viewBox="0 0 24 24"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>
                </span>
            </h1>
            <p class="profile-username">@@@perfilUsername</p>
            @if (!string.IsNullOrEmpty(biografia))
            {
                <p class="profile-bio">@biografia</p>
            }
        </div>

        <!-- Estadísticas -->
        @if (seguidores > 0 || contenidos > 0)
        {
            <div class="stats">
                @if (seguidores > 0)
                {
                    <div class="stat">
                        <div class="stat-value">@(seguidores >= 1000 ? $"{seguidores/1000.0:0.#}K" : seguidores.ToString())</div>
                        <div class="stat-label">Seguidores</div>
                    </div>
                }
                @if (contenidos > 0)
                {
                    <div class="stat">
                        <div class="stat-value">@contenidos</div>
                        <div class="stat-label">Posts</div>
                    </div>
                }
            </div>
        }

        <!-- Botón principal a Lado -->
        <a href="/@@@perfilUsername" class="main-link">
            <span class="lado-icon">L</span>
            Ver mi contenido en Lado
        </a>

        @if (precio > 0)
        {
            <div class="subscription-badge">
                <i class="fas fa-star"></i>
                Suscripción desde $@precio.ToString("0.##") USD/mes
            </div>
        }

        <!-- Redes Sociales -->
        @if (tieneRedes)
        {
            // Calcular URLs limpias
            var igUser = instagram?.TrimStart('@') ?? "";
            var twUser = twitter?.TrimStart('@') ?? "";
            var tkUser = tiktok?.TrimStart('@') ?? "";
            var ytUser = youtube?.TrimStart('@') ?? "";
            var ofUser = onlyfans?.TrimStart('@') ?? "";

            <div class="social-section">
                <div class="social-title">Mis Redes</div>
                <div class="social-links">
                    @if (!string.IsNullOrEmpty(instagram))
                    {
                        <a href="https://instagram.com/@igUser" target="_blank" rel="noopener" class="social-link instagram" title="Instagram">
                            <i class="fab fa-instagram"></i>
                        </a>
                    }
                    @if (!string.IsNullOrEmpty(twitter))
                    {
                        <a href="https://x.com/@twUser" target="_blank" rel="noopener" class="social-link twitter" title="X (Twitter)">
                            <i class="fab fa-x-twitter"></i>
                        </a>
                    }
                    @if (!string.IsNullOrEmpty(tiktok))
                    {
                        <a href="https://tiktok.com/@@@@tkUser" target="_blank" rel="noopener" class="social-link tiktok" title="TikTok">
                            <i class="fab fa-tiktok"></i>
                        </a>
                    }
                    @if (!string.IsNullOrEmpty(youtube))
                    {
                        var youtubeUrl = youtube.StartsWith("http") ? youtube : $"https://youtube.com/{ytUser}";
                        <a href="@youtubeUrl" target="_blank" rel="noopener" class="social-link youtube" title="YouTube">
                            <i class="fab fa-youtube"></i>
                        </a>
                    }
                    @if (!string.IsNullOrEmpty(facebook))
                    {
                        var facebookUrl = facebook.StartsWith("http") ? facebook : $"https://facebook.com/{facebook}";
                        <a href="@facebookUrl" target="_blank" rel="noopener" class="social-link facebook" title="Facebook">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                    }
                    @if (!string.IsNullOrEmpty(onlyfans))
                    {
                        <a href="https://onlyfans.com/@ofUser" target="_blank" rel="noopener" class="social-link onlyfans" title="OnlyFans">
                            <i class="fas fa-fire"></i>
                        </a>
                    }
                </div>
            </div>
        }
    </div>

    <!-- Footer -->
    <div class="footer">
        <a href="/" class="powered-by">
            <span>Hecho con</span>
            <img src="/images/logo-lado.png" alt="Lado" onerror="this.outerHTML='<strong>LADO</strong>'">
        </a>
    </div>
</body>
</html>
