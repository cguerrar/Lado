@using Lado.Models
@{
    Layout = null; // Sin layout - página standalone
    var nombreDisplay = ViewBag.NombreDisplay as string ?? "Creador";
    var fotoPerfil = ViewBag.FotoPerfil as string;
    var biografia = ViewBag.Biografia as string;
    var username = ViewBag.Username as string;
    var seudonimo = ViewBag.Seudonimo as string;
    var usuarioId = ViewBag.UsuarioId as string;
    var usarLadoB = ViewBag.UsarLadoB as bool? ?? false;

    // Redes sociales
    var instagram = ViewBag.Instagram as string;
    var twitter = ViewBag.Twitter as string;
    var tiktok = ViewBag.TikTok as string;
    var youtube = ViewBag.YouTube as string;
    var facebook = ViewBag.Facebook as string;
    var onlyfans = ViewBag.OnlyFans as string;

    // Estadísticas
    var seguidores = ViewBag.NumeroSeguidores as int? ?? 0;
    var contenidos = ViewBag.ContenidosPublicados as int? ?? 0;
    var precio = ViewBag.PrecioSuscripcion as decimal? ?? 0;
    var totalLikes = ViewBag.TotalLikes as int? ?? 0;
    var totalFotos = ViewBag.TotalFotos as int? ?? 0;
    var totalVideos = ViewBag.TotalVideos as int? ?? 0;

    // Contenido preview (solo LadoB)
    var contenidoPreview = ViewBag.ContenidoPreview as IEnumerable<dynamic> ?? new List<dynamic>();

    // Determinar qué username mostrar en el link a Lado
    var perfilUsername = usarLadoB && !string.IsNullOrEmpty(seudonimo) ? seudonimo : username;

    // Contar redes sociales disponibles
    var tieneRedes = !string.IsNullOrEmpty(instagram) ||
                     !string.IsNullOrEmpty(twitter) ||
                     !string.IsNullOrEmpty(tiktok) ||
                     !string.IsNullOrEmpty(youtube) ||
                     !string.IsNullOrEmpty(facebook) ||
                     !string.IsNullOrEmpty(onlyfans);

    // Función para limpiar rutas
    string LimpiarRuta(string ruta) {
        if (string.IsNullOrEmpty(ruta)) return "";
        return ruta.Trim().Replace("\"", "").Replace("'", "");
    }
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>@ViewData["Title"]</title>

    <!-- SEO Meta Tags -->
    <meta name="description" content="@ViewData["MetaDescription"]">
    <meta name="robots" content="index, follow">
    <link rel="canonical" href="https://ladoapp.com/link/@@perfilUsername">

    <!-- Open Graph -->
    <meta property="og:type" content="profile">
    <meta property="og:title" content="@nombreDisplay - Lado">
    <meta property="og:description" content="@ViewData["MetaDescription"]">
    <meta property="og:image" content="@(ViewData["OgImage"] ?? "/images/og-default.jpg")">
    <meta property="og:url" content="https://ladoapp.com/link/@@perfilUsername">
    <meta property="og:site_name" content="Lado">

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="@nombreDisplay - Lado">
    <meta name="twitter:description" content="@ViewData["MetaDescription"]">
    <meta name="twitter:image" content="@(ViewData["OgImage"] ?? "/images/og-default.jpg")">

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png">
    <meta name="theme-color" content="#4682B4">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary: #4682B4;
            --primary-dark: #36648B;
            --primary-light: #B0C4DE;
            --primary-gradient: linear-gradient(135deg, #4682B4 0%, #36648B 50%, #2C5278 100%);
            --premium-gradient: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
            --bg-dark: #0a0a0f;
            --bg-card: rgba(255, 255, 255, 0.05);
            --text-primary: #ffffff;
            --text-secondary: rgba(255, 255, 255, 0.7);
            --text-muted: rgba(255, 255, 255, 0.5);
            --border: rgba(255, 255, 255, 0.1);
            --glow: 0 0 30px rgba(70, 130, 180, 0.3);
            --glow-premium: 0 0 30px rgba(139, 92, 246, 0.3);
        }

        html, body {
            min-height: 100vh;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background: var(--bg-dark);
            color: var(--text-primary);
            -webkit-font-smoothing: antialiased;
        }

        body {
            background:
                radial-gradient(ellipse at top, rgba(139, 92, 246, 0.15) 0%, transparent 50%),
                radial-gradient(ellipse at bottom right, rgba(70, 130, 180, 0.1) 0%, transparent 50%),
                var(--bg-dark);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 40px 20px;
        }

        .link-page {
            width: 100%;
            max-width: 480px;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 20px;
        }

        /* Avatar con borde animado */
        .avatar-container {
            position: relative;
            width: 110px;
            height: 110px;
        }

        .avatar-ring {
            position: absolute;
            inset: -4px;
            border-radius: 50%;
            background: var(--premium-gradient);
            animation: rotate 8s linear infinite;
        }

        @@keyframes rotate {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        .avatar {
            position: relative;
            width: 110px;
            height: 110px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid var(--bg-dark);
            z-index: 1;
            background: linear-gradient(135deg, #1a1a2e, #16213e);
        }

        .avatar-placeholder {
            position: relative;
            width: 110px;
            height: 110px;
            border-radius: 50%;
            background: var(--premium-gradient);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 44px;
            font-weight: 600;
            color: white;
            border: 3px solid var(--bg-dark);
            z-index: 1;
        }

        /* Información del perfil */
        .profile-info {
            text-align: center;
        }

        .profile-name {
            font-size: 26px;
            font-weight: 700;
            margin-bottom: 4px;
            background: linear-gradient(135deg, #fff 0%, var(--primary-light) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .profile-username {
            font-size: 14px;
            color: var(--text-muted);
            margin-bottom: 10px;
        }

        .profile-bio {
            font-size: 14px;
            color: var(--text-secondary);
            line-height: 1.5;
            max-width: 360px;
            margin: 0 auto;
        }

        /* Badge premium */
        .premium-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            background: var(--premium-gradient);
            padding: 6px 14px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            color: white;
            margin-top: 12px;
        }

        .premium-badge svg {
            width: 14px;
            height: 14px;
            fill: currentColor;
        }

        /* Estadísticas expandidas */
        .stats {
            display: flex;
            gap: 20px;
            padding: 16px 24px;
            background: var(--bg-card);
            border-radius: 16px;
            border: 1px solid var(--border);
        }

        .stat {
            text-align: center;
            min-width: 50px;
        }

        .stat-value {
            font-size: 18px;
            font-weight: 700;
            color: var(--text-primary);
        }

        .stat-label {
            font-size: 11px;
            color: var(--text-muted);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .stat-divider {
            width: 1px;
            background: var(--border);
        }

        /* ========================================
           GRID DE CONTENIDO PREVIEW
           ======================================== */
        .content-preview-section {
            width: 100%;
            margin-top: 8px;
        }

        .content-preview-title {
            font-size: 12px;
            color: var(--text-muted);
            text-transform: uppercase;
            letter-spacing: 1px;
            text-align: center;
            margin-bottom: 12px;
        }

        .content-preview-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 4px;
            border-radius: 12px;
            overflow: hidden;
        }

        .content-preview-item {
            position: relative;
            aspect-ratio: 1;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
            overflow: hidden;
            cursor: pointer;
        }

        .content-preview-item img,
        .content-preview-item video {
            width: 100%;
            height: 100%;
            object-fit: cover;
            filter: blur(20px);
            transform: scale(1.1);
        }

        .content-preview-overlay {
            position: absolute;
            inset: 0;
            background: rgba(0, 0, 0, 0.5);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 4px;
        }

        .content-preview-overlay svg {
            width: 24px;
            height: 24px;
            stroke: white;
            opacity: 0.9;
        }

        .content-preview-price {
            font-size: 11px;
            font-weight: 700;
            color: white;
            background: var(--premium-gradient);
            padding: 3px 8px;
            border-radius: 10px;
        }

        .content-preview-type {
            position: absolute;
            top: 6px;
            right: 6px;
            color: white;
            opacity: 0.8;
        }

        .content-preview-type svg {
            width: 16px;
            height: 16px;
        }

        .content-preview-more {
            position: relative;
            aspect-ratio: 1;
            background: var(--bg-card);
            border: 1px dashed var(--border);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 4px;
            color: var(--text-muted);
            font-size: 12px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .content-preview-more:hover {
            background: rgba(255,255,255,0.05);
            border-color: var(--primary);
            color: var(--text-secondary);
        }

        .content-preview-more svg {
            width: 20px;
            height: 20px;
        }

        /* ========================================
           BOTONES DE ACCIÓN
           ======================================== */
        .action-buttons {
            width: 100%;
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        /* Botón principal - Suscribirse */
        .btn-subscribe {
            width: 100%;
            padding: 16px 24px;
            background: var(--premium-gradient);
            border: none;
            border-radius: 14px;
            color: white;
            font-size: 16px;
            font-weight: 600;
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            transition: all 0.3s ease;
            box-shadow: var(--glow-premium);
            position: relative;
            overflow: hidden;
        }

        .btn-subscribe::before {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, rgba(255,255,255,0.2) 0%, transparent 50%);
            opacity: 0;
            transition: opacity 0.3s;
        }

        .btn-subscribe:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 40px rgba(139, 92, 246, 0.4);
        }

        .btn-subscribe:hover::before {
            opacity: 1;
        }

        .btn-subscribe svg {
            width: 20px;
            height: 20px;
        }

        .btn-subscribe .price-tag {
            background: rgba(255,255,255,0.2);
            padding: 4px 10px;
            border-radius: 8px;
            font-size: 13px;
            margin-left: 8px;
        }

        /* Botones secundarios (fila) */
        .secondary-buttons {
            display: flex;
            gap: 12px;
        }

        .btn-secondary {
            flex: 1;
            padding: 14px 20px;
            background: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: 12px;
            color: var(--text-secondary);
            font-size: 14px;
            font-weight: 600;
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            transition: all 0.3s ease;
        }

        .btn-secondary:hover {
            background: rgba(255,255,255,0.1);
            border-color: var(--primary);
            color: var(--text-primary);
            transform: translateY(-2px);
        }

        .btn-secondary svg {
            width: 18px;
            height: 18px;
        }

        /* Botón propina especial */
        .btn-tip {
            background: linear-gradient(135deg, rgba(255, 215, 0, 0.1) 0%, rgba(255, 165, 0, 0.1) 100%);
            border-color: rgba(255, 215, 0, 0.3);
        }

        .btn-tip:hover {
            background: linear-gradient(135deg, rgba(255, 215, 0, 0.2) 0%, rgba(255, 165, 0, 0.2) 100%);
            border-color: rgba(255, 215, 0, 0.5);
        }

        .btn-tip svg {
            color: #FFD700;
        }

        /* ========================================
           REDES SOCIALES
           ======================================== */
        .social-section {
            width: 100%;
            margin-top: 8px;
        }

        .social-title {
            font-size: 12px;
            color: var(--text-muted);
            text-transform: uppercase;
            letter-spacing: 1px;
            text-align: center;
            margin-bottom: 12px;
        }

        .social-links {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            justify-content: center;
        }

        .social-link {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            background: var(--bg-card);
            border: 1px solid var(--border);
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--text-secondary);
            font-size: 20px;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .social-link:hover {
            background: rgba(255,255,255,0.1);
            border-color: var(--primary);
            color: var(--text-primary);
            transform: translateY(-3px);
        }

        .social-link.instagram:hover {
            background: linear-gradient(45deg, #f09433, #e6683c, #dc2743, #cc2366, #bc1888);
            border-color: transparent;
            color: white;
        }

        .social-link.twitter:hover {
            background: #000;
            border-color: #000;
            color: white;
        }

        .social-link.tiktok:hover {
            background: #000;
            border-color: #000;
            color: white;
        }

        .social-link.youtube:hover {
            background: #FF0000;
            border-color: #FF0000;
            color: white;
        }

        .social-link.facebook:hover {
            background: #1877F2;
            border-color: #1877F2;
            color: white;
        }

        .social-link.onlyfans:hover {
            background: #00AFF0;
            border-color: #00AFF0;
            color: white;
        }

        /* Footer */
        .footer {
            margin-top: auto;
            padding-top: 32px;
            text-align: center;
        }

        .powered-by {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: var(--text-muted);
            font-size: 13px;
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 20px;
            background: var(--bg-card);
            border: 1px solid var(--border);
            transition: all 0.3s;
        }

        .powered-by:hover {
            border-color: var(--primary);
            color: var(--text-secondary);
        }

        .powered-by img {
            height: 18px;
            opacity: 0.8;
        }

        /* Verificado badge */
        .verified-badge {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 20px;
            height: 20px;
            background: var(--primary);
            border-radius: 50%;
            margin-left: 6px;
            vertical-align: middle;
        }

        .verified-badge svg {
            width: 12px;
            height: 12px;
            fill: white;
        }

        /* Animación de entrada */
        .link-page > * {
            animation: fadeInUp 0.6s ease forwards;
            opacity: 0;
        }

        .link-page > *:nth-child(1) { animation-delay: 0.1s; }
        .link-page > *:nth-child(2) { animation-delay: 0.15s; }
        .link-page > *:nth-child(3) { animation-delay: 0.2s; }
        .link-page > *:nth-child(4) { animation-delay: 0.25s; }
        .link-page > *:nth-child(5) { animation-delay: 0.3s; }
        .link-page > *:nth-child(6) { animation-delay: 0.35s; }
        .link-page > *:nth-child(7) { animation-delay: 0.4s; }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive */
        @@media (max-width: 480px) {
            body {
                padding: 24px 16px;
            }

            .profile-name {
                font-size: 22px;
            }

            .stats {
                gap: 12px;
                padding: 14px 16px;
            }

            .stat-value {
                font-size: 16px;
            }

            .btn-subscribe {
                padding: 14px 20px;
                font-size: 15px;
            }

            .content-preview-grid {
                gap: 3px;
            }
        }
    </style>
</head>
<body>
    <div class="link-page">
        <!-- Avatar -->
        <div class="avatar-container">
            <div class="avatar-ring"></div>
            @if (!string.IsNullOrEmpty(fotoPerfil))
            {
                <img src="@fotoPerfil" alt="@nombreDisplay" class="avatar" onerror="this.style.display='none';this.nextElementSibling.style.display='flex';">
                <div class="avatar-placeholder" style="display:none;">@(nombreDisplay?.Substring(0, 1).ToUpper())</div>
            }
            else
            {
                <div class="avatar-placeholder">@(nombreDisplay?.Substring(0, 1).ToUpper())</div>
            }
        </div>

        <!-- Info del perfil -->
        <div class="profile-info">
            <h1 class="profile-name">
                @nombreDisplay
                <span class="verified-badge" title="Creador Verificado">
                    <svg viewBox="0 0 24 24"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>
                </span>
            </h1>
            <p class="profile-username">@@@perfilUsername</p>
            @if (!string.IsNullOrEmpty(biografia))
            {
                <p class="profile-bio">@biografia</p>
            }
            @if (usarLadoB)
            {
                <div class="premium-badge">
                    <svg viewBox="0 0 24 24"><path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/></svg>
                    Creador Premium
                </div>
            }
        </div>

        <!-- Estadísticas expandidas -->
        <div class="stats">
            @if (totalLikes > 0)
            {
                <div class="stat">
                    <div class="stat-value">@(totalLikes >= 1000 ? $"{totalLikes/1000.0:0.#}K" : totalLikes.ToString())</div>
                    <div class="stat-label">Likes</div>
                </div>
                <div class="stat-divider"></div>
            }
            @if (contenidos > 0)
            {
                <div class="stat">
                    <div class="stat-value">@contenidos</div>
                    <div class="stat-label">Posts</div>
                </div>
                <div class="stat-divider"></div>
            }
            @if (totalFotos > 0)
            {
                <div class="stat">
                    <div class="stat-value">@totalFotos</div>
                    <div class="stat-label">Fotos</div>
                </div>
                <div class="stat-divider"></div>
            }
            @if (totalVideos > 0)
            {
                <div class="stat">
                    <div class="stat-value">@totalVideos</div>
                    <div class="stat-label">Videos</div>
                </div>
                <div class="stat-divider"></div>
            }
            <div class="stat">
                <div class="stat-value">@(seguidores >= 1000 ? $"{seguidores/1000.0:0.#}K" : seguidores.ToString())</div>
                <div class="stat-label">Fans</div>
            </div>
        </div>

        <!-- Grid de contenido preview (solo LadoB) -->
        @if (usarLadoB && contenidoPreview.Any())
        {
            <div class="content-preview-section">
                <div class="content-preview-title">Contenido Exclusivo</div>
                <div class="content-preview-grid">
                    @{
                        var items = contenidoPreview.Take(5).ToList();
                        var totalContenidos = contenidoPreview.Count();
                    }
                    @foreach (var item in items)
                    {
                        var rutaArchivo = LimpiarRuta((string)item.RutaArchivo);
                        var thumbnail = LimpiarRuta((string)item.Thumbnail);
                        var esVideo = (TipoContenido)item.TipoContenido == TipoContenido.Video;
                        var precioItem = (decimal)item.Precio;

                        <div class="content-preview-item" onclick="window.location.href='/Account/Register'">
                            @if (!string.IsNullOrEmpty(thumbnail))
                            {
                                <img src="@thumbnail" alt="Preview" onerror="this.style.display='none'">
                            }
                            else if (!string.IsNullOrEmpty(rutaArchivo))
                            {
                                @if (esVideo)
                                {
                                    <video src="@rutaArchivo" muted></video>
                                }
                                else
                                {
                                    <img src="@rutaArchivo" alt="Preview" onerror="this.style.display='none'">
                                }
                            }
                            <div class="content-preview-overlay">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                                    <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                                </svg>
                                @if (precioItem > 0)
                                {
                                    <span class="content-preview-price">$@precioItem.ToString("0.##")</span>
                                }
                            </div>
                            @if (esVideo)
                            {
                                <div class="content-preview-type">
                                    <svg viewBox="0 0 24 24" fill="currentColor">
                                        <polygon points="5,3 19,12 5,21"></polygon>
                                    </svg>
                                </div>
                            }
                        </div>
                    }
                    @if (contenidos > 5)
                    {
                        <div class="content-preview-more" onclick="window.location.href='/Account/Register'">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <line x1="12" y1="5" x2="12" y2="19"></line>
                                <line x1="5" y1="12" x2="19" y2="12"></line>
                            </svg>
                            <span>+@(contenidos - 5) más</span>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Botones de acción -->
        <div class="action-buttons">
            <!-- Botón principal de suscripción -->
            <a href="/Account/Register?returnUrl=/@@@perfilUsername" class="btn-subscribe">
                <svg viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
                </svg>
                Suscribirme
                @if (precio > 0)
                {
                    <span class="price-tag">$@precio.ToString("0.##")/mes</span>
                }
            </a>

            <!-- Botones secundarios -->
            <div class="secondary-buttons">
                <!-- Ver perfil -->
                <a href="/@@@perfilUsername" class="btn-secondary">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                        <circle cx="12" cy="12" r="3"></circle>
                    </svg>
                    Ver perfil
                </a>

                <!-- Propina -->
                <a href="/Account/Register?returnUrl=/Feed/Perfil/@usuarioId&action=tip" class="btn-secondary btn-tip">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1.41 16.09V20h-2.67v-1.93c-1.71-.36-3.16-1.46-3.27-3.4h1.96c.1 1.05.82 1.87 2.65 1.87 1.96 0 2.4-.98 2.4-1.59 0-.83-.44-1.61-2.67-2.14-2.48-.6-4.18-1.62-4.18-3.67 0-1.72 1.39-2.84 3.11-3.21V4h2.67v1.95c1.86.45 2.79 1.86 2.85 3.39H14.3c-.05-1.11-.64-1.87-2.22-1.87-1.5 0-2.4.68-2.4 1.64 0 .84.65 1.39 2.67 1.91s4.18 1.39 4.18 3.91c-.01 1.83-1.38 2.83-3.12 3.16z"/>
                    </svg>
                    Propina
                </a>
            </div>
        </div>

        <!-- Redes Sociales -->
        @if (tieneRedes)
        {
            var igUser = instagram?.TrimStart('@') ?? "";
            var twUser = twitter?.TrimStart('@') ?? "";
            var tkUser = tiktok?.TrimStart('@') ?? "";
            var ytUser = youtube?.TrimStart('@') ?? "";
            var ofUser = onlyfans?.TrimStart('@') ?? "";

            <div class="social-section">
                <div class="social-title">Mis Redes</div>
                <div class="social-links">
                    @if (!string.IsNullOrEmpty(instagram))
                    {
                        <a href="https://instagram.com/@igUser" target="_blank" rel="noopener" class="social-link instagram" title="Instagram">
                            <i class="fab fa-instagram"></i>
                        </a>
                    }
                    @if (!string.IsNullOrEmpty(twitter))
                    {
                        <a href="https://x.com/@twUser" target="_blank" rel="noopener" class="social-link twitter" title="X (Twitter)">
                            <i class="fab fa-x-twitter"></i>
                        </a>
                    }
                    @if (!string.IsNullOrEmpty(tiktok))
                    {
                        <a href="https://tiktok.com/@@@@tkUser" target="_blank" rel="noopener" class="social-link tiktok" title="TikTok">
                            <i class="fab fa-tiktok"></i>
                        </a>
                    }
                    @if (!string.IsNullOrEmpty(youtube))
                    {
                        var youtubeUrl = youtube.StartsWith("http") ? youtube : $"https://youtube.com/{ytUser}";
                        <a href="@youtubeUrl" target="_blank" rel="noopener" class="social-link youtube" title="YouTube">
                            <i class="fab fa-youtube"></i>
                        </a>
                    }
                    @if (!string.IsNullOrEmpty(facebook))
                    {
                        var facebookUrl = facebook.StartsWith("http") ? facebook : $"https://facebook.com/{facebook}";
                        <a href="@facebookUrl" target="_blank" rel="noopener" class="social-link facebook" title="Facebook">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                    }
                    @if (!string.IsNullOrEmpty(onlyfans))
                    {
                        <a href="https://onlyfans.com/@ofUser" target="_blank" rel="noopener" class="social-link onlyfans" title="OnlyFans">
                            <i class="fas fa-fire"></i>
                        </a>
                    }
                </div>
            </div>
        }
    </div>

    <!-- Footer -->
    <div class="footer">
        <a href="/" class="powered-by">
            <span>Hecho con</span>
            <img src="/images/logo-lado.png" alt="Lado" onerror="this.outerHTML='<strong>LADO</strong>'">
        </a>
    </div>
</body>
</html>
