@{
    ViewData["Title"] = "Crear Usuario Administrado";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .admin-page { padding: 20px; max-width: 900px; margin: 0 auto; }

    .page-header { display: flex; align-items: center; gap: 16px; margin-bottom: 24px; }
    .btn-back { display: flex; align-items: center; justify-content: center; width: 40px; height: 40px; border-radius: 8px; background: var(--surface); border: 1px solid var(--line); color: var(--fg); text-decoration: none; transition: all 0.2s; }
    .btn-back:hover { background: var(--bg-tertiary); border-color: var(--primary); color: var(--primary); }
    .page-title { font-size: 24px; font-weight: 700; color: var(--fg); margin: 0; }

    /* Tabs de opciones */
    .option-tabs { display: flex; gap: 12px; margin-bottom: 24px; }
    .option-tab { flex: 1; padding: 20px; background: var(--surface); border: 2px solid var(--line); border-radius: 12px; cursor: pointer; transition: all 0.2s; text-align: center; }
    .option-tab:hover { border-color: var(--primary); }
    .option-tab.active { border-color: var(--primary); background: rgba(0,149,246,0.05); }
    .option-tab-icon { width: 48px; height: 48px; background: var(--bg); border-radius: 12px; display: flex; align-items: center; justify-content: center; margin: 0 auto 12px; }
    .option-tab.active .option-tab-icon { background: var(--primary); }
    .option-tab.active .option-tab-icon svg { color: #fff; }
    .option-tab-title { font-size: 15px; font-weight: 600; color: var(--fg); margin-bottom: 4px; }
    .option-tab-desc { font-size: 12px; color: var(--muted); }

    /* Contenido de tabs */
    .tab-content { display: none; }
    .tab-content.active { display: block; }

    /* Card formulario */
    .form-card { background: var(--surface); border-radius: 12px; padding: 24px; border: 1px solid var(--line); }
    .form-section { margin-bottom: 24px; }
    .form-section:last-child { margin-bottom: 0; }
    .section-title { font-size: 15px; font-weight: 600; color: var(--fg); margin-bottom: 16px; display: flex; align-items: center; gap: 8px; }
    .section-title svg { color: var(--primary); }

    .form-group { margin-bottom: 16px; }
    .form-label { display: block; font-size: 13px; font-weight: 500; color: var(--fg); margin-bottom: 6px; }
    .form-label .required { color: #d32f2f; }
    .form-control { width: 100%; padding: 10px 14px; border: 1px solid var(--line); border-radius: 8px; background: var(--bg); color: var(--fg); font-size: 14px; transition: all 0.2s; }
    .form-control:focus { outline: none; border-color: var(--primary); box-shadow: 0 0 0 3px rgba(0,149,246,0.1); }
    .form-hint { font-size: 11px; color: var(--muted); margin-top: 4px; }
    .form-row { display: grid; grid-template-columns: repeat(2, 1fr); gap: 16px; }

    .form-check { display: flex; align-items: center; gap: 10px; padding: 12px 16px; background: var(--bg); border-radius: 8px; cursor: pointer; border: 1px solid transparent; transition: all 0.2s; }
    .form-check:hover { border-color: var(--line); }
    .form-check input { width: 18px; height: 18px; accent-color: var(--primary); cursor: pointer; }
    .form-check-content { flex: 1; }
    .form-check-label { font-size: 14px; font-weight: 500; color: var(--fg); cursor: pointer; }
    .form-check-desc { font-size: 11px; color: var(--muted); margin-top: 2px; }

    .form-actions { display: flex; justify-content: flex-end; gap: 12px; margin-top: 24px; padding-top: 20px; border-top: 1px solid var(--line); }
    .btn { padding: 10px 24px; border-radius: 8px; font-size: 14px; font-weight: 600; cursor: pointer; transition: all 0.2s; border: none; display: inline-flex; align-items: center; gap: 8px; }
    .btn-secondary { background: var(--bg); color: var(--fg); border: 1px solid var(--line); }
    .btn-secondary:hover { background: var(--bg-tertiary); }
    .btn-primary { background: var(--primary); color: #fff; }
    .btn-primary:hover { background: var(--primary-hover); }

    /* B칰squeda de usuarios */
    .search-section { margin-bottom: 0; }
    .search-input-wrapper { position: relative; }
    .search-input-wrapper svg { position: absolute; left: 14px; top: 50%; transform: translateY(-50%); color: var(--muted); }
    .search-input-wrapper input { padding-left: 42px; }

    .search-results { margin-top: 16px; max-height: 400px; overflow-y: auto; }
    .search-result-item { display: flex; align-items: center; gap: 14px; padding: 14px; border-radius: 10px; background: var(--bg); margin-bottom: 8px; transition: all 0.2s; }
    .search-result-item:hover { background: var(--bg-tertiary); }
    .search-result-avatar { width: 44px; height: 44px; border-radius: 50%; object-fit: cover; background: linear-gradient(135deg, var(--primary), #833ab4); display: flex; align-items: center; justify-content: center; color: #fff; font-weight: 600; font-size: 16px; }
    .search-result-avatar img { width: 100%; height: 100%; border-radius: 50%; object-fit: cover; }
    .search-result-info { flex: 1; min-width: 0; }
    .search-result-name { font-weight: 600; font-size: 14px; color: var(--fg); }
    .search-result-username { font-size: 12px; color: var(--muted); }
    .search-result-badges { display: flex; gap: 6px; margin-top: 4px; }
    .badge-sm { font-size: 10px; padding: 2px 6px; border-radius: 4px; font-weight: 600; }
    .badge-creador { background: rgba(0,149,246,0.15); color: #0095f6; }
    .btn-select { padding: 8px 16px; background: var(--primary); color: #fff; border: none; border-radius: 6px; font-size: 13px; font-weight: 600; cursor: pointer; transition: all 0.2s; }
    .btn-select:hover { background: var(--primary-hover); }

    .search-empty { text-align: center; padding: 40px 20px; color: var(--muted); }
    .search-empty-icon { font-size: 32px; margin-bottom: 12px; opacity: 0.5; }
    .search-hint { text-align: center; padding: 20px; color: var(--muted); font-size: 13px; }

    /* Alertas */
    .alert { padding: 14px 16px; border-radius: 8px; margin-bottom: 20px; display: flex; align-items: flex-start; gap: 12px; }
    .alert-danger { background: rgba(211,47,47,0.1); border: 1px solid rgba(211,47,47,0.2); color: #d32f2f; }
    .alert-success { background: rgba(56,142,60,0.1); border: 1px solid rgba(56,142,60,0.2); color: #388e3c; }

    @@media (max-width: 640px) {
        .option-tabs { flex-direction: column; }
        .form-row { grid-template-columns: 1fr; }
    }
</style>

<div class="admin-page">
    <div class="page-header">
        <a href="/Admin/UsuariosAdministrados" class="btn-back">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="15 18 9 12 15 6"/>
            </svg>
        </a>
        <h1 class="page-title">Crear Usuario Administrado</h1>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/><line x1="15" y1="9" x2="9" y2="15"/><line x1="9" y1="9" x2="15" y2="15"/>
            </svg>
            <span>@TempData["Error"]</span>
        </div>
    }

    <!-- Opciones -->
    <div class="option-tabs">
        <div class="option-tab active" onclick="cambiarOpcion('nuevo')">
            <div class="option-tab-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                    <circle cx="8.5" cy="7" r="4"/>
                    <line x1="20" y1="8" x2="20" y2="14"/>
                    <line x1="23" y1="11" x2="17" y2="11"/>
                </svg>
            </div>
            <div class="option-tab-title">Crear nuevo usuario</div>
            <div class="option-tab-desc">Crea un perfil desde cero</div>
        </div>
        <div class="option-tab" onclick="cambiarOpcion('existente')">
            <div class="option-tab-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="11" cy="11" r="8"/>
                    <line x1="21" y1="21" x2="16.65" y2="16.65"/>
                </svg>
            </div>
            <div class="option-tab-title">Usar existente</div>
            <div class="option-tab-desc">Convierte un usuario en administrado</div>
        </div>
    </div>

    <!-- Tab: Crear nuevo -->
    <div id="tab-nuevo" class="tab-content active">
        <div class="form-card">
            <form method="post" action="/Admin/UsuariosAdministrados/Crear">
                @Html.AntiForgeryToken()

                <div class="form-section">
                    <div class="section-title">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                            <circle cx="12" cy="7" r="4"/>
                        </svg>
                        Informaci칩n del perfil
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">Nombre de usuario <span class="required">*</span></label>
                            <input type="text" name="userName" class="form-control" required placeholder="ej: maria_lado" pattern="[a-zA-Z0-9_]+" title="Solo letras, n칰meros y gui칩n bajo">
                            <div class="form-hint">Sin espacios ni caracteres especiales. Ser치 usado como @@usuario</div>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Nombre completo</label>
                            <input type="text" name="nombreCompleto" class="form-control" placeholder="ej: Mar칤a Garc칤a">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Email (opcional)</label>
                        <input type="email" name="email" class="form-control" placeholder="ej: maria@ejemplo.com">
                        <div class="form-hint">Si no se especifica, se generar치 autom치ticamente</div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Biograf칤a</label>
                        <textarea name="biografia" class="form-control" rows="3" placeholder="Escribe una breve descripci칩n del perfil..."></textarea>
                    </div>
                </div>

                <div class="form-section">
                    <div class="section-title">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M12 20h9"/>
                            <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"/>
                        </svg>
                        Configuraci칩n
                    </div>

                    <label class="form-check">
                        <input type="checkbox" name="esCreador" value="true" checked>
                        <div class="form-check-content">
                            <div class="form-check-label">Es creador de contenido</div>
                            <div class="form-check-desc">Permite publicar contenido, tener suscriptores y recibir propinas</div>
                        </div>
                    </label>
                </div>

                <div class="form-actions">
                    <a href="/Admin/UsuariosAdministrados" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"/>
                        </svg>
                        Crear Usuario
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Tab: Usuario existente -->
    <div id="tab-existente" class="tab-content">
        <div class="form-card">
            <div class="form-section search-section">
                <div class="section-title">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="11" cy="11" r="8"/>
                        <line x1="21" y1="21" x2="16.65" y2="16.65"/>
                    </svg>
                    Buscar usuario existente
                </div>

                <div class="search-input-wrapper">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="11" cy="11" r="8"/>
                        <line x1="21" y1="21" x2="16.65" y2="16.65"/>
                    </svg>
                    <input type="text" class="form-control" id="searchExisting" placeholder="Escribe el nombre o usuario...">
                </div>

                <div id="searchResults">
                    <div class="search-hint">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" style="display:inline-block;vertical-align:middle;margin-right:6px">
                            <circle cx="12" cy="12" r="10"/>
                            <line x1="12" y1="16" x2="12" y2="12"/>
                            <line x1="12" y1="8" x2="12.01" y2="8"/>
                        </svg>
                        Escribe al menos 2 caracteres para buscar
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function cambiarOpcion(opcion) {
    document.querySelectorAll('.option-tab').forEach(t => t.classList.remove('active'));
    document.querySelectorAll('.tab-content').forEach(t => t.classList.remove('active'));

    document.querySelector(`.option-tab[onclick="cambiarOpcion('${opcion}')"]`).classList.add('active');
    document.getElementById(`tab-${opcion}`).classList.add('active');

    if (opcion === 'existente') {
        document.getElementById('searchExisting').focus();
    }
}

let searchTimeout;
document.getElementById('searchExisting').addEventListener('input', function(e) {
    clearTimeout(searchTimeout);
    const q = e.target.value.trim();
    const resultsDiv = document.getElementById('searchResults');

    if (q.length < 2) {
        resultsDiv.innerHTML = `
            <div class="search-hint">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" style="display:inline-block;vertical-align:middle;margin-right:6px">
                    <circle cx="12" cy="12" r="10"/>
                    <line x1="12" y1="16" x2="12" y2="12"/>
                    <line x1="12" y1="8" x2="12.01" y2="8"/>
                </svg>
                Escribe al menos 2 caracteres para buscar
            </div>
        `;
        return;
    }

    resultsDiv.innerHTML = '<div class="search-hint">Buscando...</div>';

    searchTimeout = setTimeout(async () => {
        try {
            const res = await fetch(`/Admin/UsuariosAdministrados/BuscarUsuario?q=${encodeURIComponent(q)}`);
            const data = await res.json();

            if (data.success && data.usuarios.length > 0) {
                resultsDiv.innerHTML = '<div class="search-results">' + data.usuarios.map(u => `
                    <div class="search-result-item">
                        <div class="search-result-avatar">
                            ${u.fotoPerfil
                                ? `<img src="${u.fotoPerfil}" alt="${u.userName}">`
                                : (u.nombreCompleto || u.userName || '?')[0].toUpperCase()
                            }
                        </div>
                        <div class="search-result-info">
                            <div class="search-result-name">${u.nombreCompleto || u.userName}</div>
                            <div class="search-result-username">@@${u.userName}</div>
                            <div class="search-result-badges">
                                ${u.esCreador ? '<span class="badge-sm badge-creador">Creador</span>' : ''}
                            </div>
                        </div>
                        <button type="button" class="btn-select" onclick="marcarComoAdministrado('${u.id}')">
                            Seleccionar
                        </button>
                    </div>
                `).join('') + '</div>';
            } else {
                resultsDiv.innerHTML = `
                    <div class="search-empty">
                        <div class="search-empty-icon">游댌</div>
                        <div>No se encontraron usuarios con "${q}"</div>
                    </div>
                `;
            }
        } catch (err) {
            console.error('Error buscando:', err);
            resultsDiv.innerHTML = '<div class="search-empty">Error al buscar</div>';
        }
    }, 300);
});

async function marcarComoAdministrado(userId) {
    if (!confirm('쮺onvertir este usuario en administrado?\n\nPodr치s subir medios y configurar publicaciones autom치ticas para este perfil.')) return;

    try {
        const formData = new FormData();
        formData.append('id', userId);
        formData.append('administrado', 'true');

        // Obtener token del formulario de crear (siempre est치 en la p치gina)
        const token = document.querySelector('input[name="__RequestVerificationToken"]');
        if (token) {
            formData.append('__RequestVerificationToken', token.value);
        }

        const res = await fetch('/Admin/UsuariosAdministrados/MarcarComoAdministrado', {
            method: 'POST',
            body: formData
        });
        const data = await res.json();

        if (data.success) {
            window.location.href = `/Admin/UsuariosAdministrados/Gestionar/${userId}`;
        } else {
            alert(data.message || 'Error al marcar como administrado');
        }
    } catch (err) {
        console.error('Error:', err);
        alert('Error al procesar la solicitud');
    }
}
</script>
