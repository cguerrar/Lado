    @if (Model.Any())
    {
        <div class="subastas-grid">
            @foreach (var subasta in Model)
            {
                var tiempoRestante = subasta.TiempoRestante();
                var esUrgente = tiempoRestante.HasValue && tiempoRestante.Value.TotalMinutes <= 15;

                <div class="subasta-card @(esUrgente ? "urgente" : "")" data-subasta-id="@subasta.Id" data-fecha-fin="@subasta.FechaFin.ToString("o")">
                    <div class="subasta-preview">
                        @if (!string.IsNullOrEmpty(subasta.ImagenPreview))
                        {
                            <img src="@subasta.ImagenPreview" alt="@subasta.Titulo" loading="lazy" />
                        }
                        else if (subasta.Contenido?.Thumbnail != null)
                        {
                            <img src="@subasta.Contenido.Thumbnail" alt="@subasta.Titulo" loading="lazy" />
                        }
                        else
                        {
                            <div class="subasta-preview-placeholder">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                                    <circle cx="8.5" cy="8.5" r="1.5"/>
                                    <polyline points="21 15 16 10 5 21"/>
                                </svg>
                            </div>
                        }

                        <div class="subasta-badge @(esUrgente ? "urgente" : "")">
                            @if (esUrgente)
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/>
                                </svg>
                                <span>ULTIMOS MINUTOS</span>
                            }
                            else
                            {
                                <span>ACTIVA</span>
                            }
                        </div>

                        <div class="subasta-countdown" data-countdown="@subasta.Id">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="10"/>
                                <polyline points="12 6 12 12 16 14"/>
                            </svg>
                            <span class="countdown-text">--:--:--</span>
                        </div>

                        <button type="button" class="btn-share-card" onclick="compartirSubasta(event, @subasta.Id, '@subasta.Titulo.Replace("'", "\\'")')" title="Compartir">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="18" cy="5" r="3"/>
                                <circle cx="6" cy="12" r="3"/>
                                <circle cx="18" cy="19" r="3"/>
                                <line x1="8.59" y1="13.51" x2="15.42" y2="17.49"/>
                                <line x1="15.41" y1="6.51" x2="8.59" y2="10.49"/>
                            </svg>
                        </button>
                    </div>

                    <div class="subasta-content">
                        <div class="subasta-creator">
                            <a href="@Url.Action("Perfil", "Feed", new { id = subasta.Creador?.UserName })" class="creator-avatar" title="@subasta.Creador?.UserName (ID: @subasta.CreadorId)">
                                @if (!string.IsNullOrEmpty(subasta.Creador?.FotoPerfil))
                                {
                                    <img src="@subasta.Creador.FotoPerfil" alt="@subasta.Creador?.UserName" />
                                }
                                else
                                {
                                    @(subasta.Creador?.UserName?.Substring(0, 1).ToUpper() ?? "?")
                                }
                            </a>
                            <a href="@Url.Action("Perfil", "Feed", new { id = subasta.Creador?.UserName })" class="creator-name">@(subasta.Creador?.Seudonimo ?? subasta.Creador?.UserName)</a>
                        </div>

                        <h3 class="subasta-title">@subasta.Titulo</h3>

                        @if (!string.IsNullOrEmpty(subasta.Descripcion))
                        {
                            <p class="subasta-description">@subasta.Descripcion</p>
                        }

                        <div class="subasta-price-row">
                            <div class="price-current">
                                <span class="price-label">Puja actual</span>
                                <span class="price-value" data-price="@subasta.Id">$@subasta.PrecioActual.ToString("N2")</span>
                            </div>
                            <div class="price-pujas">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                                    <circle cx="9" cy="7" r="4"/>
                                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                                    <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                                </svg>
                                <span data-pujas="@subasta.Id">@subasta.NumeroPujas pujas</span>
                            </div>
                        </div>

                        <a href="@Url.Action("Detalles", new { id = subasta.Id })" class="btn-ver-subasta">
                            Ver Subasta
                        </a>
                    </div>
                </div>
            }
        </div>

        @if (totalPaginas > 1)
        {
            <div class="pagination">
                @if (paginaActual > 1)
                {
                    <a href="@Url.Action("Index", new { pagina = paginaActual - 1 })">Anterior</a>
                }

                @for (int i = 1; i <= totalPaginas; i++)
                {
                    if (i == paginaActual)
                    {
                        <span class="active">@i</span>
                    }
                    else
                    {
                        <a href="@Url.Action("Index", new { pagina = i })">@i</a>
                    }
                }

                @if (paginaActual < totalPaginas)
                {
                    <a href="@Url.Action("Index", new { pagina = paginaActual + 1 })">Siguiente</a>
                }
            </div>
        }
    }
    else
    {
        <div class="empty-state">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                <path d="m14.5 12.5-8.5 8.5-3-3 8.5-8.5"/>
                <path d="m18 3 3 3"/>
                <path d="m18 7-1.5-1.5"/>
                <path d="m21 4-1.5-1.5"/>
            </svg>
            <h3>No hay subastas activas</h3>
            <p>Vuelve pronto para ver nuevas subastas de contenido exclusivo</p>
            @if (esCreador)
            {
                <a href="@Url.Action("Crear")" class="btn-crear" style="margin-top: 20px; display: inline-flex;">
                    Crear la primera subasta
                </a>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        // Toggle ayuda
        function toggleHelp() {
            const content = document.getElementById('helpContent');
            const toggle = document.getElementById('helpToggle');
            const isHidden = content.classList.toggle('hidden');
            toggle.classList.toggle('collapsed', isHidden);
            localStorage.setItem('subastas-help-expanded', !isHidden);
        }

        document.addEventListener('DOMContentLoaded', function() {
            // Restaurar estado de ayuda (colapsado por defecto, mostrar si el usuario lo expandi칩)
            if (localStorage.getItem('subastas-help-expanded') === 'true') {
                document.getElementById('helpContent').classList.remove('hidden');
                document.getElementById('helpToggle').classList.remove('collapsed');
            }
            // Inicializar countdowns
            const cards = document.querySelectorAll('[data-subasta-id]');

            cards.forEach(card => {
                const fechaFin = new Date(card.dataset.fechaFin);
                const countdownEl = card.querySelector('.countdown-text');
                const subastaId = card.dataset.subastaId;

                function updateCountdown() {
                    const now = new Date();
                    const diff = fechaFin - now;

                    if (diff <= 0) {
                        countdownEl.textContent = 'FINALIZADA';
                        card.classList.remove('urgente');
                        return;
                    }

                    const hours = Math.floor(diff / (1000 * 60 * 60));
                    const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                    const seconds = Math.floor((diff % (1000 * 60)) / 1000);

                    if (hours > 0) {
                        countdownEl.textContent = `${hours}h ${minutes}m ${seconds}s`;
                    } else {
                        countdownEl.textContent = `${minutes}:${seconds.toString().padStart(2, '0')}`;
                    }

                    // Marcar como urgente si quedan menos de 15 minutos
                    if (diff <= 15 * 60 * 1000) {
                        card.classList.add('urgente');
                        card.querySelector('.subasta-badge').classList.add('urgente');
                        card.querySelector('.subasta-badge').innerHTML = `
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/>
                            </svg>
                            <span>ULTIMOS MINUTOS</span>
                        `;
                    }
                }

                updateCountdown();
                setInterval(updateCountdown, 1000);
            });

            // Funcion compartir subasta
            window.compartirSubasta = async function(event, subastaId, titulo) {
                event.preventDefault();
                event.stopPropagation();

                const url = `${window.location.origin}/Subastas/Detalles/${subastaId}`;

                if (navigator.share) {
                    try {
                        await navigator.share({
                            title: titulo,
                            text: `Mira esta subasta: ${titulo}`,
                            url: url
                        });
                    } catch (e) {
                        // Usuario cancelo
                    }
                } else {
                    try {
                        await navigator.clipboard.writeText(url);
                        // Mostrar feedback visual
                        const btn = event.currentTarget;
                        const originalHtml = btn.innerHTML;
                        btn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"></polyline></svg>';
                        btn.style.background = '#10b981';
                        setTimeout(() => {
                            btn.innerHTML = originalHtml;
                            btn.style.background = '';
                        }, 1500);
                    } catch (e) {
                        prompt('Copia este link:', url);
                    }
                }
            };

            // Actualizar precios cada 10 segundos
            setInterval(async function() {
                for (const card of cards) {
                    const subastaId = card.dataset.subastaId;
                    try {
                        const response = await fetch(`/Subastas/Estado/${subastaId}`);
                        if (response.ok) {
                            const data = await response.json();
                            const priceEl = card.querySelector(`[data-price="${subastaId}"]`);
                            const pujasEl = card.querySelector(`[data-pujas="${subastaId}"]`);

                            if (priceEl) {
                                priceEl.textContent = '$' + parseFloat(data.precioActual).toFixed(2);
                            }
                            if (pujasEl) {
                                pujasEl.textContent = data.numeroPujas + ' pujas';
                            }
                        }
                    } catch (e) {
                        console.log('Error actualizando estado:', e);
                    }
                }
            }, 10000);
        });
    </script>
}
