<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lado</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #4682B4;
            --primary-dark: #36648B;
            --primary-light: #B0C4DE;
            --accent: #5BA3D9;
            --bg: #f8fafc;
            --surface: #ffffff;
            --fg: #1e293b;
            --muted: #64748b;
            --line: #e2e8f0;
        }

        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: var(--bg);
            color: var(--fg);
            min-height: 100vh;
            position: relative;
            overflow-x: hidden;
        }

        /* ========================================
           MANCHAS OVALADAS AZULES DE FONDO
           Estilo similar al banner de bienvenida
           ======================================== */
        .bg-decoration {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 0;
            overflow: hidden;
        }

        /* Mancha ovalada 1 - Grande arriba derecha */
        .blob-1 {
            position: absolute;
            width: 650px;
            height: 450px;
            top: -100px;
            right: -80px;
            background: radial-gradient(ellipse at center, rgba(70, 130, 180, 0.25) 0%, rgba(70, 130, 180, 0.15) 40%, rgba(54, 100, 139, 0.08) 70%, transparent 100%);
            border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;
            transform: rotate(-15deg);
            filter: blur(20px);
        }

        /* Mancha ovalada 2 - Mediana izquierda centro */
        .blob-2 {
            position: absolute;
            width: 550px;
            height: 380px;
            top: 25%;
            left: -100px;
            background: radial-gradient(ellipse at center, rgba(91, 163, 217, 0.22) 0%, rgba(70, 130, 180, 0.12) 50%, transparent 100%);
            border-radius: 50% 50% 50% 50% / 40% 40% 60% 60%;
            transform: rotate(25deg);
            filter: blur(18px);
        }

        /* Mancha ovalada 3 - Abajo centro-derecha */
        .blob-3 {
            position: absolute;
            width: 600px;
            height: 400px;
            bottom: -80px;
            right: 5%;
            background: radial-gradient(ellipse at center, rgba(70, 130, 180, 0.2) 0%, rgba(54, 100, 139, 0.1) 50%, transparent 100%);
            border-radius: 50% 50% 50% 50% / 55% 55% 45% 45%;
            transform: rotate(-20deg);
            filter: blur(22px);
        }

        /* Mancha ovalada 4 - Pequena arriba izquierda */
        .blob-4 {
            position: absolute;
            width: 400px;
            height: 280px;
            top: 5%;
            left: 8%;
            background: radial-gradient(ellipse at center, rgba(176, 196, 222, 0.28) 0%, rgba(70, 130, 180, 0.15) 50%, transparent 100%);
            border-radius: 50% 50% 50% 50% / 50% 50% 50% 50%;
            transform: rotate(30deg);
            filter: blur(15px);
        }

        /* Mancha ovalada 5 - Centro abajo */
        .blob-5 {
            position: absolute;
            width: 500px;
            height: 320px;
            bottom: 15%;
            left: 20%;
            background: radial-gradient(ellipse at center, rgba(91, 163, 217, 0.18) 0%, rgba(70, 130, 180, 0.08) 50%, transparent 100%);
            border-radius: 50% 50% 50% 50% / 45% 45% 55% 55%;
            transform: rotate(-8deg);
            filter: blur(20px);
        }

        /* Mancha ovalada 6 - Derecha centro */
        .blob-6 {
            position: absolute;
            width: 450px;
            height: 300px;
            top: 50%;
            right: -40px;
            background: radial-gradient(ellipse at center, rgba(70, 130, 180, 0.22) 0%, rgba(91, 163, 217, 0.1) 50%, transparent 100%);
            border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;
            transform: rotate(40deg);
            filter: blur(18px);
        }

        /* ========================================
           HEADER MODERNO Y ELEGANTE
           ======================================== */
        .public-header {
            position: sticky;
            top: 0;
            z-index: 1000;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(70, 130, 180, 0.1);
            box-shadow: 0 4px 20px rgba(70, 130, 180, 0.08);
        }

        .header-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 24px;
            height: 72px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        /* Logo area moderno */
        .logo-area {
            display: flex;
            align-items: center;
            gap: 12px;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .logo-area:hover {
            transform: translateY(-2px);
        }

        .logo-area img {
            height: 56px; /* Ajustado para caber en el header de 72px */
            width: auto;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(70, 130, 180, 0.2);
            transition: all 0.3s ease;
        }

        .logo-area:hover img {
            box-shadow: 0 6px 16px rgba(70, 130, 180, 0.3);
        }

        .logo-text {
            display: flex;
            flex-direction: column;
            gap: 1px;
        }

        .logo-text .brand {
            display: none; /* Ocultar texto LADO */
        }

        .logo-text .tagline {
            font-size: 14px;
            color: var(--muted);
            font-weight: 600;
            letter-spacing: 0.5px;
            margin-top: 8px;
        }

        /* Auth buttons modernos */
        .auth-buttons {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .btn-login {
            padding: 10px 20px;
            font-size: 14px;
            font-weight: 600;
            color: var(--fg);
            background: transparent;
            border: 2px solid var(--line);
            border-radius: 25px;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .btn-login:hover {
            border-color: var(--primary);
            color: var(--primary);
            background: rgba(70, 130, 180, 0.05);
        }

        .btn-register {
            padding: 10px 22px;
            font-size: 14px;
            font-weight: 600;
            color: white;
            background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
            border: none;
            border-radius: 25px;
            text-decoration: none;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(70, 130, 180, 0.3);
            position: relative;
            overflow: hidden;
        }

        .btn-register::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.25), transparent);
            transition: left 0.6s ease;
        }

        .btn-register:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(70, 130, 180, 0.4);
            color: white;
        }

        .btn-register:hover::before {
            left: 100%;
        }

        /* ========================================
           MAIN CONTENT
           ======================================== */
        .public-main {
            position: relative;
            z-index: 1;
            min-height: calc(100vh - 76px);
        }

        /* ========================================
           CARDS Y COMPONENTES
           ======================================== */
        .card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(226, 232, 240, 0.8);
            border-radius: 16px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.04), 0 2px 4px -1px rgba(0, 0, 0, 0.02);
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            border: none;
            color: white;
            font-weight: 600;
            padding: 10px 20px;
            border-radius: 12px;
            transition: all 0.2s ease;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(70, 130, 180, 0.3);
        }

        /* ========================================
           RESPONSIVE
           ======================================== */
        @@media (max-width: 768px) {
            .header-container {
                height: 64px;
                padding: 0 16px;
            }

            .logo-area img {
                height: 48px;
            }

            .logo-text .tagline {
                font-size: 12px;
                display: block;
            }

            .btn-login {
                padding: 8px 16px;
                font-size: 13px;
            }

            .btn-register {
                padding: 8px 18px;
                font-size: 13px;
            }

            /* Manchas adaptadas para tablet */
            .blob-1 { width: 450px; height: 300px; }
            .blob-2 { width: 400px; height: 260px; }
            .blob-3 { width: 420px; height: 280px; }
            .blob-4, .blob-5, .blob-6 { display: none; }
        }

        @@media (max-width: 480px) {
            .header-container {
                height: 56px;
                padding: 0 12px;
            }

            .logo-area img {
                height: 40px;
            }

            .logo-text .tagline {
                font-size: 10px;
            }

            .auth-buttons {
                gap: 8px;
            }

            .btn-login {
                padding: 8px 12px;
                font-size: 12px;
            }

            .btn-register {
                padding: 8px 14px;
                font-size: 12px;
            }

            /* Manchas adaptadas para movil */
            .blob-1 { width: 350px; height: 240px; filter: blur(25px); }
            .blob-2 { width: 300px; height: 200px; filter: blur(22px); }
            .blob-3 { width: 320px; height: 220px; filter: blur(25px); }
        }
    </style>
</head>
<body>
    <!-- MANCHAS OVALADAS AZULES DE FONDO -->
    <div class="bg-decoration">
        <div class="blob-1"></div>
        <div class="blob-2"></div>
        <div class="blob-3"></div>
        <div class="blob-4"></div>
        <div class="blob-5"></div>
        <div class="blob-6"></div>
    </div>

    <!-- HEADER -->
    <header class="public-header">
        <div class="header-container">
            <a href="/FeedPublico" class="logo-area">
                <img src="/images/logo.png" alt="Lado">
                <div class="logo-text">
                    <span class="tagline">Conecta con creadores</span>
                </div>
            </a>

            <div class="auth-buttons">
                <a href="/Account/Login" class="btn-login">Iniciar sesion</a>
                <a href="/Account/Register" class="btn-register">Crear cuenta</a>
            </div>
        </div>
    </header>

    <!-- MAIN CONTENT -->
    <main class="public-main">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
