@{
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();

    // Obtener versi√≥n del ensamblado
    var version = System.Reflection.Assembly.GetExecutingAssembly().GetName().Version;
    var versionString = version != null ? $"v{version.Major}.{version.Minor}.{version.Build}" : "v1.0.0";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lado Ads</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        :root {
            --primary: #2563eb;
            --primary-dark: #1d4ed8;
            --dark: #1e293b;
            --text-muted: #64748b;
            --bg-light: #f1f5f9;
            --white: #ffffff;
            --success: #10b981;
            --warning: #f59e0b;
            --danger: #ef4444;
        }
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
            background: var(--bg-light);
            overflow-x: hidden;
        }
        .agencia-sidebar {
            position: fixed;
            left: 0;
            top: 0;
            width: 260px;
            height: 100vh;
            background: linear-gradient(180deg, var(--dark) 0%, #0f172a 100%);
            padding: 0;
            box-shadow: 4px 0 20px rgba(0,0,0,0.15);
            z-index: 1000;
            display: flex;
            flex-direction: column;
        }
        .sidebar-header {
            padding: 25px 20px;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }
        .logo-container {
            display: flex;
            align-items: center;
            gap: 12px;
        }
        .logo-icon {
            width: 48px;
            height: 48px;
            background: var(--primary);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .logo-icon i { color: white; font-size: 22px; }
        .logo-text h3 {
            color: white;
            font-size: 22px;
            font-weight: 800;
            margin: 0;
        }
        .logo-text p {
            color: rgba(255,255,255,0.6);
            font-size: 12px;
            margin: 2px 0 0;
        }
        .agencia-nav {
            flex: 1;
            padding: 20px 12px;
            overflow-y: auto;
        }
        .nav-section { margin-bottom: 25px; }
        .nav-section-title {
            font-size: 11px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: rgba(255,255,255,0.4);
            padding: 0 15px;
            margin-bottom: 10px;
        }
        .nav-menu { list-style: none; padding: 0; margin: 0; }
        .nav-menu li { margin-bottom: 4px; }
        .nav-link {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            color: rgba(255,255,255,0.7);
            text-decoration: none;
            border-radius: 10px;
            transition: all 0.2s ease;
            font-weight: 500;
            font-size: 14px;
            gap: 12px;
        }
        .nav-link:hover {
            background: rgba(255,255,255,0.1);
            color: white;
        }
        .nav-link.active {
            background: var(--primary);
            color: white;
            box-shadow: 0 4px 12px rgba(37,99,235,0.4);
        }
        .nav-link i { width: 20px; text-align: center; font-size: 16px; }
        .sidebar-footer {
            padding: 15px 12px;
            border-top: 1px solid rgba(255,255,255,0.1);
        }
        .saldo-card {
            background: rgba(255,255,255,0.1);
            border-radius: 12px;
            padding: 15px;
            margin-bottom: 12px;
        }
        .saldo-label {
            font-size: 11px;
            color: rgba(255,255,255,0.6);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        .saldo-amount {
            font-size: 24px;
            font-weight: 700;
            color: white;
        }
        .btn-recargar {
            display: block;
            width: 100%;
            padding: 10px;
            background: var(--primary);
            color: white;
            text-align: center;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.2s;
        }
        .btn-recargar:hover {
            background: var(--primary-dark);
            color: white;
        }
        .agencia-main {
            margin-left: 260px;
            min-height: 100vh;
            background: var(--bg-light);
        }
        .agencia-header {
            background: var(--white);
            padding: 0 30px;
            height: 70px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.04);
            position: sticky;
            top: 0;
            z-index: 999;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .header-left {
            display: flex;
            align-items: center;
            gap: 20px;
        }
        .header-left h1 {
            font-size: 22px;
            font-weight: 700;
            color: var(--dark);
            margin: 0;
        }
        .header-right {
            display: flex;
            align-items: center;
            gap: 15px;
        }
        .header-btn {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            border: none;
            background: var(--bg-light);
            color: var(--text-muted);
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.2s;
        }
        .header-btn:hover {
            background: var(--primary);
            color: white;
        }
        .user-dropdown {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            background: var(--primary);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
        }
        .agencia-content { padding: 25px 30px; }
        .mobile-toggle {
            display: none;
            width: 40px;
            height: 40px;
            border-radius: 10px;
            border: none;
            background: var(--primary);
            color: white;
            cursor: pointer;
        }
        @@media (max-width: 992px) {
            .agencia-sidebar {
                transform: translateX(-100%);
                transition: transform 0.3s ease;
            }
            .agencia-sidebar.show { transform: translateX(0); }
            .agencia-main { margin-left: 0; }
            .mobile-toggle {
                display: flex;
                align-items: center;
                justify-content: center;
            }
            .sidebar-overlay {
                display: none;
                position: fixed;
                top: 0; left: 0; right: 0; bottom: 0;
                background: rgba(0,0,0,0.5);
                z-index: 999;
            }
            .sidebar-overlay.show { display: block; }
        }
        .btn-primary {
            background-color: var(--primary) !important;
            border-color: var(--primary) !important;
        }
        .btn-primary:hover {
            background-color: var(--primary-dark) !important;
            border-color: var(--primary-dark) !important;
        }
        .card {
            border: none;
            border-radius: 16px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.04);
        }
        .stat-card {
            background: white;
            border-radius: 16px;
            padding: 20px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.04);
        }
        .stat-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
        }
        .stat-value {
            font-size: 28px;
            font-weight: 700;
            color: var(--dark);
        }
        .stat-label {
            font-size: 13px;
            color: var(--text-muted);
        }
        .badge-estado {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
        }
        .badge-activo { background: rgba(16,185,129,0.1); color: #10b981; }
        .badge-pausado { background: rgba(245,158,11,0.1); color: #f59e0b; }
        .badge-borrador { background: rgba(100,116,139,0.1); color: #64748b; }
        .badge-revision { background: rgba(37,99,235,0.1); color: #2563eb; }
        .badge-rechazado { background: rgba(239,68,68,0.1); color: #ef4444; }
    </style>
</head>
<body>
    <div class="sidebar-overlay" id="sidebarOverlay" onclick="toggleSidebar()"></div>
    <aside class="agencia-sidebar" id="agenciaSidebar">
        <div class="sidebar-header" style="position: relative;">
            <div class="logo-container">
                <div class="logo-icon">
                    <i class="fas fa-bullhorn"></i>
                </div>
                <div class="logo-text">
                    <h3>LADO</h3>
                    <p>Ads Manager</p>
                </div>
            </div>
            <span style="position: absolute; bottom: 8px; right: 15px; font-size: 10px; color: rgba(255,255,255,0.4); font-weight: 500;">@versionString</span>
        </div>
        <nav class="agencia-nav">
            <div class="nav-section">
                <div class="nav-section-title">Principal</div>
                <ul class="nav-menu">
                    <li><a href="/Agencia" class="nav-link @(currentAction == "Index" ? "active" : "")"><i class="fas fa-chart-line"></i><span>Dashboard</span></a></li>
                    <li><a href="/Agencia/Metricas" class="nav-link @(currentAction == "Metricas" ? "active" : "")"><i class="fas fa-chart-bar"></i><span>Metricas</span></a></li>
                </ul>
            </div>
            <div class="nav-section">
                <div class="nav-section-title">Publicidad</div>
                <ul class="nav-menu">
                    <li><a href="/Agencia/Anuncios" class="nav-link @(currentAction == "Anuncios" || currentAction == "CrearAnuncio" || currentAction == "EditarAnuncio" ? "active" : "")"><i class="fas fa-ad"></i><span>Mis Anuncios</span></a></li>
                    <li><a href="/Agencia/CrearAnuncio" class="nav-link"><i class="fas fa-plus-circle"></i><span>Nuevo Anuncio</span></a></li>
                </ul>
            </div>
            <div class="nav-section">
                <div class="nav-section-title">Cuenta</div>
                <ul class="nav-menu">
                    <li><a href="/Agencia/RecargarSaldo" class="nav-link @(currentAction == "RecargarSaldo" ? "active" : "")"><i class="fas fa-wallet"></i><span>Saldo y Pagos</span></a></li>
                    <li><a href="/Agencia/Perfil" class="nav-link @(currentAction == "Perfil" ? "active" : "")"><i class="fas fa-building"></i><span>Perfil Agencia</span></a></li>
                    <li><a href="/Feed" class="nav-link"><i class="fas fa-arrow-left"></i><span>Volver al Feed</span></a></li>
                    <li><a href="/Account/Logout" class="nav-link" style="color: #ef4444;"><i class="fas fa-sign-out-alt"></i><span>Cerrar Sesion</span></a></li>
                </ul>
            </div>
        </nav>
        @if (ViewBag.Agencia != null)
        {
            <div class="sidebar-footer">
                <div class="saldo-card">
                    <div class="saldo-label">Saldo disponible</div>
                    <div class="saldo-amount">$@(((decimal)ViewBag.Agencia.SaldoPublicitario).ToString("N2"))</div>
                </div>
                <a href="/Agencia/RecargarSaldo" class="btn-recargar">
                    <i class="fas fa-plus me-2"></i>Recargar Saldo
                </a>
            </div>
        }
    </aside>
    <main class="agencia-main">
        <header class="agencia-header">
            <div class="header-left">
                <button class="mobile-toggle" onclick="toggleSidebar()"><i class="fas fa-bars"></i></button>
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="header-right">
                <button class="header-btn" title="Notificaciones"><i class="fas fa-bell"></i></button>
                <button class="header-btn" title="Ayuda"><i class="fas fa-question-circle"></i></button>
                <div class="user-dropdown">
                    @if (ViewBag.Agencia != null)
                    {
                        <div class="user-avatar">@(((string)ViewBag.Agencia.NombreEmpresa).Substring(0, 1).ToUpper())</div>
                    }
                </div>
            </div>
        </header>
        <div class="agencia-content">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @RenderBody()
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleSidebar() {
            document.getElementById('agenciaSidebar').classList.toggle('show');
            document.getElementById('sidebarOverlay').classList.toggle('show');
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
