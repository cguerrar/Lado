	<!-- ========================================
	     SISTEMA DE LOGGING GLOBAL
	     Envía errores y eventos al servidor para /Admin/Logs
	     ======================================== -->
	<script>
	(function() {
		'use strict';

		// Cola de logs pendientes (para evitar pérdida si hay problemas de red)
		const logQueue = [];
		let isProcessing = false;

		// Registra un log en el servidor
		// tipo: 'error', 'warning', 'info', 'event'
		// mensaje: Mensaje principal (max 500 chars)
		// detalle: Detalles adicionales (stack trace, datos, etc.)
		window.ladoLog = function(tipo, mensaje, detalle = null) {
			try {
				const logEntry = {
					tipo: tipo,
					mensaje: String(mensaje).substring(0, 500),
					detalle: detalle ? (typeof detalle === 'object' ? JSON.stringify(detalle, null, 2) : String(detalle)) : null,
					url: window.location.pathname + window.location.search
				};

				logQueue.push(logEntry);
				processQueue();
			} catch (e) {
				// Silently fail
			}
		};

		// Procesar cola de logs
		async function processQueue() {
			if (isProcessing || logQueue.length === 0) return;
			isProcessing = true;

			while (logQueue.length > 0) {
				const entry = logQueue.shift();
				try {
					await fetch('/Admin/RegistrarLogFrontend', {
						method: 'POST',
						headers: { 'Content-Type': 'application/json' },
						body: JSON.stringify(entry)
					});
				} catch (e) {
					// Si falla, no reencolar para evitar loops infinitos
				}
			}

			isProcessing = false;
		}

		// Atajos para tipos comunes
		window.ladoLog.error = (msg, detalle) => window.ladoLog('error', msg, detalle);
		window.ladoLog.warn = (msg, detalle) => window.ladoLog('warning', msg, detalle);
		window.ladoLog.info = (msg, detalle) => window.ladoLog('info', msg, detalle);
		window.ladoLog.event = (msg, detalle) => window.ladoLog('event', msg, detalle);

		// Capturar errores no manejados automáticamente
		window.addEventListener('error', function(event) {
			window.ladoLog('error', event.message || 'Error no manejado', {
				filename: event.filename,
				lineno: event.lineno,
				colno: event.colno,
				stack: event.error?.stack
			});
		});

		// Capturar promesas rechazadas no manejadas
		window.addEventListener('unhandledrejection', function(event) {
			window.ladoLog('error', 'Promise rechazada: ' + (event.reason?.message || event.reason || 'Unknown'), {
				stack: event.reason?.stack
			});
		});
	})();
	</script>

