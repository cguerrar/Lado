					return `
						<div id="lado-popup-${popup.id}" class="lado-popup-banner ${posClass}" style="${customStyle}">
							<div class="lado-popup-content">
								${icon}
								<div class="lado-popup-text">${contenido}</div>
								${buttons}
								${closeBtn}
							</div>
						</div>`;

				case 2: // Toast
					return `
						<div id="lado-popup-${popup.id}" class="lado-popup-toast ${posClass}" style="${customStyle}">
							${closeBtn}
							<div class="lado-popup-content">
								${icon}
								${popup.titulo ? `<h4 class="lado-popup-title">${popup.titulo}</h4>` : ''}
								<div class="lado-popup-text">${contenido}</div>
								${buttons}
							</div>
						</div>`;

				case 4: // Slide
					return `
						<div id="lado-popup-${popup.id}" class="lado-popup-overlay ${animClass}">
							<div class="lado-popup lado-popup-slide ${posClass}" style="${customStyle}">
								${closeBtn}
								${image}
								<div class="lado-popup-content">
									${icon}
									${popup.titulo ? `<h4 class="lado-popup-title">${popup.titulo}</h4>` : ''}
									<div class="lado-popup-text">${contenido}</div>
									${buttons}
								</div>
							</div>
						</div>`;

				case 3: // FullScreen
					return `
						<div id="lado-popup-${popup.id}" class="lado-popup-overlay ${animClass}">
							<div class="lado-popup lado-popup-fullscreen" style="${customStyle}">
								${closeBtn}
								<div class="lado-popup-content">
									${image}
									${icon}
									${popup.titulo ? `<h4 class="lado-popup-title">${popup.titulo}</h4>` : ''}
									<div class="lado-popup-text">${contenido}</div>
									${buttons}
								</div>
							</div>
						</div>`;

				default: // Modal (1)
					// Detectar si es popup de solo imagen (fondo transparente + imagen + sin contenido real)
					const colorBg = popup.colorFondo?.toLowerCase() || '';
					const esTransparenteBg = !colorBg || colorBg === 'transparent' || colorBg === '#00000000';
					const esImagenOnly = popup.imagenUrl &&
						esTransparenteBg &&
						!popup.titulo &&
						(!contenido || contenido.replace(/<[^>]*>/g, '').trim() === '');

					if (esImagenOnly) {
						// Popup de solo imagen: estructura especial con botón X en el borde de la imagen
						// anchoMaximo contiene el porcentaje (20-90) para popups de imagen
						const anchoPct = popup.anchoMaximo <= 100 ? popup.anchoMaximo : 50; // Si es <= 100, es porcentaje
						return `
						<div id="lado-popup-${popup.id}" class="lado-popup-overlay ${animClass}">
							<div class="lado-popup imagen-only" style="width:${anchoPct}vw;max-width:${anchoPct}vw;">
								<div class="lado-popup-image-wrapper">
									<img src="${popup.imagenUrl}" class="lado-popup-image" alt="">
									${popup.mostrarBotonCerrar ? `<button class="lado-popup-close" onclick="window.closePopup(${popup.id})">&times;</button>` : ''}
								</div>
							</div>
						</div>`;
					}

					// Modal normal
					return `
						<div id="lado-popup-${popup.id}" class="lado-popup-overlay ${animClass}">
							<div class="lado-popup" style="max-width:${popup.anchoMaximo || 400}px;${customStyle}">
								${closeBtn}
								${image}
								<div class="lado-popup-content">
									${icon}
									${popup.titulo ? `<h4 class="lado-popup-title">${popup.titulo}</h4>` : ''}
									<div class="lado-popup-text">${contenido}</div>
									${buttons}
								</div>
							</div>
						</div>`;
			}
		}

		function getAnimationClass(animacion) {
			const anims = ['', 'lado-popup-anim-fadein', 'lado-popup-anim-slideup', 'lado-popup-anim-slidedown',
			               'lado-popup-anim-slideleft', 'lado-popup-anim-slideright', 'lado-popup-anim-bounce',
			               'lado-popup-anim-zoom', 'lado-popup-anim-shake'];
			return anims[animacion] || 'lado-popup-anim-fadein';
		}

		function getPositionClass(posicion, tipo) {
			// Para banners
			if (tipo === 0) {
				return posicion >= 4 ? 'position-bottom' : 'position-top';
			}
			// Para toasts
			if (tipo === 2) {
				const positions = ['position-bottom-right', 'position-top-left', 'position-top-center',
				                   'position-top-right', 'position-bottom-left', 'position-bottom-center',
				                   'position-bottom-right', 'position-top-left', 'position-top-right'];
				return positions[posicion] || 'position-bottom-right';
			}
			// Para slides
			if (tipo === 4) {
				return posicion === 7 ? 'position-left' : 'position-right';
			}
			return '';
		}

		function buildCustomStyle(popup) {
			let style = '';
			if (popup.colorFondo) style += `background:${popup.colorFondo};`;
			if (popup.colorTexto) style += `color:${popup.colorTexto};`;
			if (popup.cssPersonalizado) style += popup.cssPersonalizado;
			return style;
		}

		// Cerrar popup
		window.closePopup = function(popupId) {
			const element = document.getElementById('lado-popup-' + popupId);
			if (!element) return;

			element.classList.remove('active');

			// Registrar cierre
			trackClose(popupId);

			setTimeout(() => {
				element.remove();
				// Restaurar scroll si no hay mas popups modales
				if (!document.querySelector('.lado-popup-overlay.active')) {
					document.body.style.overflow = '';
				}
			}, 300);
		};

		// Tracking de metricas
		window.trackPopupClick = function(popupId, buttonIndex) {
			fetch('/Admin/PopupClic', {
				method: 'POST',
				headers: { 'Content-Type': 'application/json' },
				body: JSON.stringify({ popupId, botonIndex: buttonIndex })
			}).catch(() => {});
		};

		function trackImpression(popupId) {
			fetch('/Admin/PopupImpresion', {
				method: 'POST',
				headers: { 'Content-Type': 'application/json' },
				body: JSON.stringify({ popupId })
			}).catch(() => {});
		}

		function trackClose(popupId) {
			fetch('/Admin/PopupCierre', {
				method: 'POST',
				headers: { 'Content-Type': 'application/json' },
				body: JSON.stringify({ popupId })
			}).catch(() => {});
		}

		// Cerrar con Escape
		document.addEventListener('keydown', function(e) {
			if (e.key === 'Escape') {
				const activeOverlays = document.querySelectorAll('.lado-popup-overlay.active');
				activeOverlays.forEach(overlay => {
					const popupId = overlay.id.replace('lado-popup-', '');
					closePopup(popupId);
				});
			}
		});

		// Iniciar carga de popups cuando el DOM este listo
		if (document.readyState === 'loading') {
			document.addEventListener('DOMContentLoaded', loadPopups);
		} else {
			// Pequeño delay para no interferir con carga inicial
			setTimeout(loadPopups, 1000);
		}
	})();

	// ========================================
	// BÚSQUEDA GLOBAL DEL NAVBAR
	// ========================================
	(function() {
		const searchInput = document.getElementById('globalSearchInput');
		const searchDropdown = document.getElementById('searchDropdown');
		const searchLoading = document.getElementById('searchLoading');
		const searchResults = document.getElementById('searchResults');
		const searchNoResults = document.getElementById('searchNoResults');
		const searchViewAll = document.getElementById('searchViewAll');
		const searchUsuarios = document.getElementById('searchUsuarios');
		const searchUsuariosItems = document.getElementById('searchUsuariosItems');
		const searchContenidos = document.getElementById('searchContenidos');
		const searchContenidosItems = document.getElementById('searchContenidosItems');
		const searchHashtags = document.getElementById('searchHashtags');
		const searchHashtagsItems = document.getElementById('searchHashtagsItems');

		if (!searchInput) return;

		let searchTimeout = null;
		let currentQuery = '';

		// Debounce de búsqueda
		searchInput.addEventListener('input', function() {
			const query = this.value.trim();
			currentQuery = query;

			clearTimeout(searchTimeout);

			if (query.length < 2) {
				hideDropdown();
				return;
			}

			// Mostrar loading
			showDropdown();
			searchLoading.classList.add('show');
			searchResults.style.display = 'none';
			searchViewAll.style.display = 'none';

			// Debounce de 300ms
			searchTimeout = setTimeout(() => buscar(query), 300);
		});

		// Buscar al hacer Enter
		searchInput.addEventListener('keydown', function(e) {
			if (e.key === 'Enter' && currentQuery.length >= 2) {
				e.preventDefault();
				window.location.href = '/Feed/Explorar?buscar=' + encodeURIComponent(currentQuery);
			}
			if (e.key === 'Escape') {
				hideDropdown();
				searchInput.blur();
			}
		});

		// Cerrar al hacer clic fuera
		document.addEventListener('click', function(e) {
			if (!e.target.closest('#globalSearchContainer')) {
				hideDropdown();
			}
		});

		// Mostrar dropdown al hacer focus si hay query
		searchInput.addEventListener('focus', function() {
			if (this.value.trim().length >= 2) {
				showDropdown();
			}
		});

		function showDropdown() {
			searchDropdown.classList.add('show');
		}

		function hideDropdown() {
			searchDropdown.classList.remove('show');
			searchLoading.classList.remove('show');
		}

		async function buscar(query) {
			try {
				const response = await fetch('/Feed/BuscarGlobal?q=' + encodeURIComponent(query));
				const data = await response.json();

				// Verificar que la query no haya cambiado
				if (query !== currentQuery) return;

				searchLoading.classList.remove('show');
				searchResults.style.display = 'block';

				const hasUsuarios = data.usuarios && data.usuarios.length > 0;
				const hasContenidos = data.contenidos && data.contenidos.length > 0;
				const hasHashtags = data.hashtags && data.hashtags.length > 0;
				const hasResults = hasUsuarios || hasContenidos || hasHashtags;

				// Usuarios
				if (hasUsuarios) {
					searchUsuarios.style.display = 'block';
					searchUsuariosItems.innerHTML = data.usuarios.map(function(u) {
						return '<a href="/@@' + u.username + '" class="search-item">' +
							'<img src="' + u.foto + '" alt="" class="search-item-avatar" onerror="this.src=\'/images/default-avatar.svg\'">' +
							'<div class="search-item-info">' +
								'<div class="search-item-name">' +
									escapeHtml(u.nombre) +
									(u.verificado ? '<svg class="verified-badge" viewBox="0 0 24 24" fill="currentColor"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>' : '') +
								'</div>' +
								'<div class="search-item-meta">@@' + u.username + ' • ' + formatNumber(u.seguidores) + ' seguidores</div>' +
							'</div>' +
						'</a>';
					}).join('');
				} else {
					searchUsuarios.style.display = 'none';
				}

				// Contenidos
				if (hasContenidos) {
					searchContenidos.style.display = 'block';
					searchContenidosItems.innerHTML = data.contenidos.map(function(c) {
						return '<a href="/Feed/Detalle/' + c.id + '" class="search-item">' +
							(c.thumbnail ? '<img src="' + c.thumbnail + '" alt="" class="search-item-thumb" onerror="this.style.display=\'none\'">' : '') +
							'<div class="search-item-info">' +
								'<div class="search-item-name">' + escapeHtml(c.descripcion || 'Sin descripción') + '</div>' +
								'<div class="search-item-meta">Por ' + escapeHtml(c.usuario) + ' • ' + formatNumber(c.likes) + ' likes</div>' +
							'</div>' +
						'</a>';
					}).join('');
				} else {
					searchContenidos.style.display = 'none';
				}

				// Hashtags
				if (hasHashtags) {
					searchHashtags.style.display = 'block';
					searchHashtagsItems.innerHTML = data.hashtags.map(function(h) {
						return '<a href="/Feed/Explorar?buscar=' + encodeURIComponent('#' + h.nombre) + '" class="search-item">' +
							'<div class="search-item-hashtag">' +
								'#' + escapeHtml(h.nombre) +
								'<span>' + formatNumber(h.cantidad) + ' publicaciones</span>' +
							'</div>' +
						'</a>';
					}).join('');
				} else {
					searchHashtags.style.display = 'none';
				}

				// Sin resultados
				if (!hasResults) {
					searchNoResults.style.display = 'flex';
					searchUsuarios.style.display = 'none';
					searchContenidos.style.display = 'none';
					searchHashtags.style.display = 'none';
				} else {
					searchNoResults.style.display = 'none';
				}

				// Ver todos
				if (hasResults) {
					searchViewAll.href = '/Feed/Explorar?buscar=' + encodeURIComponent(query);
					searchViewAll.style.display = 'flex';
				} else {
					searchViewAll.style.display = 'none';
				}

			} catch (error) {
				console.error('Error en búsqueda:', error);
				searchLoading.classList.remove('show');
				searchNoResults.style.display = 'flex';
				searchResults.style.display = 'block';
			}
		}

		function escapeHtml(text) {
			if (!text) return '';
			const div = document.createElement('div');
			div.textContent = text;
			return div.innerHTML;
		}

		function formatNumber(num) {
			if (num >= 1000000) return (num / 1000000).toFixed(1) + 'M';
			if (num >= 1000) return (num / 1000).toFixed(1) + 'K';
			return num.toString();
		}
	})();
	</script>
