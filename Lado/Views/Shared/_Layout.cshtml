	<!-- Safe Area Detection for Dynamic Island / Notch -->
	<script>
	(function() {
		// Detectar y aplicar safe-area insets para iOS
		function applySafeArea() {
			// Obtener valores de safe-area del CSS computado
			var testEl = document.createElement('div');
			testEl.style.cssText = 'position:fixed;top:env(safe-area-inset-top,0px);visibility:hidden;';
			document.body.appendChild(testEl);
			var safeTop = parseInt(getComputedStyle(testEl).top) || 0;
			document.body.removeChild(testEl);

			// Guardar en CSS custom property para uso en JS
			document.documentElement.style.setProperty('--safe-area-top-value', safeTop + 'px');

			// Si estamos en iOS y safe-area es 0, intentar detectar por modelo
			var isIOS = /iPad|iPhone|iPod/.test(navigator.userAgent);
			var isStandalone = window.navigator.standalone === true || window.matchMedia('(display-mode: standalone)').matches;

			if (isIOS && safeTop === 0 && isStandalone) {
				// iPhone X+ en modo PWA pero safe-area no detectado
				// Aplicar un valor por defecto conservador
				var screenHeight = window.screen.height;
				var screenWidth = window.screen.width;
				// iPhone con notch/Dynamic Island tiene ratio específico
				if (screenHeight >= 812 || screenWidth >= 812) {
					document.documentElement.classList.add('ios-notch-fallback');
				}
			}
		}

		// Ejecutar al cargar
		if (document.readyState === 'loading') {
			document.addEventListener('DOMContentLoaded', applySafeArea);
		} else {
			applySafeArea();
		}

		// Re-calcular en cambios de orientación
		window.addEventListener('orientationchange', function() {
			setTimeout(applySafeArea, 100);
		});
	})();
	</script>

