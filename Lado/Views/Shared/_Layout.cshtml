	<script>
		// Modo de desarrollo para logging
		window.isDevelopment = @(HostEnvironment.IsDevelopment().ToString().ToLower());

		// Wrapper de console que solo loguea en desarrollo
		(function() {
			const noop = function() {};
			if (!window.isDevelopment) {
				window.devLog = noop;
				window.devWarn = noop;
				window.devError = console.error.bind(console); // Mantener errores
			} else {
				window.devLog = console.log.bind(console, '[DEV]');
				window.devWarn = console.warn.bind(console, '[DEV]');
				window.devError = console.error.bind(console, '[DEV]');
			}
		})();

		// Token CSRF global para peticiones AJAX
		window.csrfToken = '@tokens.RequestToken';
		window.csrfHeaderName = '@tokens.HeaderName';

		// Helper para hacer peticiones POST con CSRF
		window.fetchWithCsrf = async function(url, options = {}) {
			const defaultOptions = {
				method: 'POST',
				headers: {
					'Content-Type': 'application/json',
					'@tokens.HeaderName': '@tokens.RequestToken'
				}
			};
			const mergedOptions = {
				...defaultOptions,
				...options,
				headers: {
					...defaultOptions.headers,
					...(options.headers || {})
				}
			};
			return fetch(url, mergedOptions);
		};
