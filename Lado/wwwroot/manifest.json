{
  "name": "Lado - Plataforma de Creadores",
  "short_name": "Lado",
  "description": "Plataforma de contenido para creadores con sistema de doble identidad",
  "start_url": "/Feed",
  "display": "standalone",
  "background_color": "#0f172a",
  "theme_color": "#4682B4",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "es",
  "dir": "ltr",
  "id": "lado-pwa",
  "prefer_related_applications": false,
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "icons": [
    {
      "src": "/images/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/images/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/images/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/images/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/images/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/images/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/images/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/images/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "categories": ["social", "entertainment"],
  "shortcuts": [
    {
      "name": "Mi Feed",
      "short_name": "Feed",
      "description": "Ver mi feed de contenido",
      "url": "/Feed",
      "icons": [{ "src": "/images/icons/feed-icon.png", "sizes": "192x192" }]
    },
    {
      "name": "Mensajes",
      "short_name": "Chat",
      "description": "Ver mis mensajes",
      "url": "/Mensajes",
      "icons": [{ "src": "/images/icons/chat-icon.png", "sizes": "192x192" }]
    },
    {
      "name": "Crear Contenido",
      "short_name": "Crear",
      "description": "Publicar nuevo contenido",
      "url": "/Contenido/Crear",
      "icons": [{ "src": "/images/icons/create-icon.png", "sizes": "192x192" }]
    }
  ],
  "related_applications": [],
  "share_target": {
    "action": "/Contenido/Crear",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "Descripcion",
      "url": "url",
      "files": [
        {
          "name": "archivo",
          "accept": ["image/*", "video/*"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+lado",
      "url": "/Feed/Detalle/%s"
    }
  ],
  "display_override": ["window-controls-overlay", "standalone", "browser"],
  "file_handlers": [
    {
      "action": "/Contenido/Crear",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp"],
        "video/*": [".mp4", ".webm", ".mov"]
      }
    }
  ]
}
